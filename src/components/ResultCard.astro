---
interface Props {
  label: string;
  id: string;
  primary?: boolean;
  color?: string;
}

const { label, id, primary = false, color } = Astro.props;
---

<div class={`rounded-xl p-4 ${primary ? 'bg-primary text-white' : 'bg-surface-alt'}`}>
  <div class={`text-xs font-medium uppercase tracking-wide mb-1 ${primary ? 'text-blue-200' : 'text-text-muted'}`}>
    {label}
  </div>
  <div
    id={id}
    class={`result-number font-extrabold ${primary ? 'text-3xl sm:text-4xl' : 'text-xl sm:text-2xl'}`}
    style={color && !primary ? `color: ${color}` : undefined}
