---
interface Calculator {
  name: string;
  url: string;
  description: string;
}

interface Props {
  calculators: Calculator[];
}

const { calculators } = Astro.props;
---

<section class="mt-12">
  <h2 class="text-2xl font-bold text-text mb-6">Related Calculators</h2>
  <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 gap-4">
    {calculators.map((calc) => (
      <a
        href={calc.url}
        class="block p-4 bg-white border border-border rounded-xl hover:border-primary/30 hover:shadow-md transition-all group no-underline"
      >
        <h3 class="font-semibold text-text group-hover:text-primary transition-colors">{calc.name}</h3>
        <p class="text-sm text-text-secondary mt-1">{calc.description}</p>
      </a>
    ))}
  </div>
</section>
