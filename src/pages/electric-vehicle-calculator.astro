---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Electric Vehicle Calculator - EV vs Gas Cost Comparison";
const description = "Compare the total cost of ownership between electric and gas vehicles including fuel, maintenance, and incentives.";
const relatedCalcs = [
  { name: "Gas Mileage", url: "/gas-mileage-calculator", description: "Fuel economy." },
  { name: "Carbon Footprint", url: "/carbon-footprint-calculator", description: "CO₂." },
  { name: "Car Depreciation", url: "/car-depreciation-calculator", description: "Depreciation." },
  { name: "Auto Loan", url: "/auto-loan-calculator", description: "Auto loan." },
  { name: "Solar Panel", url: "/solar-panel-calculator", description: "Solar." },
  { name: "Electricity Cost", url: "/electricity-cost-calculator", description: "Electricity." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Electric Vehicle Calculator" keywords="ev calculator, electric vehicle cost, ev vs gas, electric car savings, ev charging cost" breadcrumbs={[{ name: "EV Calculator", url: "/electric-vehicle-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Electric Vehicle Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Compare costs between electric and gas-powered vehicles.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Annual Miles Driven</label><input type="number" id="ev-miles" class="ev-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12000" min="0" step="1000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Ownership Period (yrs)</label><input type="number" id="ev-years" class="ev-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="1" max="15" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-3 border-2 border-green-500 rounded-xl space-y-2">
            <h3 class="font-semibold text-green-700 text-sm">Electric Vehicle</h3>
            <div><label class="block text-xs text-text mb-1">Efficiency (mi/kWh)</label><input type="number" id="ev-eff" class="ev-in w-full px-3 py-2 border border-border rounded-lg text-sm font-bold" value="3.5" min="1" step="0.1"></div>
            <div><label class="block text-xs text-text mb-1">Electricity ($/kWh)</label><input type="number" id="ev-rate" class="ev-in w-full px-3 py-2 border border-border rounded-lg text-sm font-bold" value="0.13" min="0.01" step="0.01"></div>
            <div><label class="block text-xs text-text mb-1">Maintenance/yr ($)</label><input type="number" id="ev-maint" class="ev-in w-full px-3 py-2 border border-border rounded-lg text-sm font-bold" value="600" min="0" step="50"></div>
          </div>
          <div class="p-3 border-2 border-red-400 rounded-xl space-y-2">
            <h3 class="font-semibold text-red-600 text-sm">Gas Vehicle</h3>
            <div><label class="block text-xs text-text mb-1">MPG</label><input type="number" id="ev-mpg" class="ev-in w-full px-3 py-2 border border-border rounded-lg text-sm font-bold" value="28" min="5" step="1"></div>
            <div><label class="block text-xs text-text mb-1">Gas Price ($/gal)</label><input type="number" id="ev-gas" class="ev-in w-full px-3 py-2 border border-border rounded-lg text-sm font-bold" value="3.50" min="0.5" step="0.1"></div>
            <div><label class="block text-xs text-text mb-1">Maintenance/yr ($)</label><input type="number" id="ev-gmaint" class="ev-in w-full px-3 py-2 border border-border rounded-lg text-sm font-bold" value="1200" min="0" step="50"></div>
          </div>
        </div>
        <div class="p-6 bg-green-600 rounded-2xl text-white text-center">
          <div class="text-sm uppercase tracking-wide mb-1 opacity-80">EV Savings Over Period</div>
          <div class="text-4xl font-extrabold" id="ev-savings">$0</div>
          <div class="text-sm opacity-80 mt-1" id="ev-savyr">$0/year</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-green-50 rounded-xl text-center border border-green-200"><div class="text-xs text-green-700 uppercase">EV Fuel Cost/yr</div><div class="text-xl font-bold text-green-700" id="ev-fuelev">$0</div></div>
          <div class="p-4 bg-red-50 rounded-xl text-center border border-red-200"><div class="text-xs text-red-600 uppercase">Gas Fuel Cost/yr</div><div class="text-xl font-bold text-red-600" id="ev-fuelgas">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-green-50 rounded-xl text-center border border-green-200"><div class="text-xs text-green-700 uppercase">EV Total Cost</div><div class="text-xl font-bold text-green-700" id="ev-totalev">$0</div></div>
          <div class="p-4 bg-red-50 rounded-xl text-center border border-red-200"><div class="text-xs text-red-600 uppercase">Gas Total Cost</div><div class="text-xl font-bold text-red-600" id="ev-totalgas">$0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">CO₂ Saved (tons)</div><div class="text-xl font-bold" id="ev-co2">0</div></div>
      </div>
      <ShareButton calculatorId="electric-vehicle" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">EV vs Gas Costs</h2>
      <p>EVs typically cost 50-70% less per mile for fuel and 30-50% less for maintenance than gas vehicles. The savings add up significantly over the ownership period.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcEV() {
      const miles = parseFloat((document.getElementById('ev-miles') as HTMLInputElement).value) || 0;
      const years = parseFloat((document.getElementById('ev-years') as HTMLInputElement).value) || 5;
      const eff = parseFloat((document.getElementById('ev-eff') as HTMLInputElement).value) || 3.5;
      const elecRate = parseFloat((document.getElementById('ev-rate') as HTMLInputElement).value) || 0.13;
      const evMaint = parseFloat((document.getElementById('ev-maint') as HTMLInputElement).value) || 0;
      const mpg = parseFloat((document.getElementById('ev-mpg') as HTMLInputElement).value) || 28;
      const gasPrice = parseFloat((document.getElementById('ev-gas') as HTMLInputElement).value) || 3.50;
      const gasMaint = parseFloat((document.getElementById('ev-gmaint') as HTMLInputElement).value) || 0;
      const evFuelYr = (miles / eff) * elecRate;
      const gasFuelYr = (miles / mpg) * gasPrice;
      const evTotalYr = evFuelYr + evMaint;
      const gasTotalYr = gasFuelYr + gasMaint;
      const evTotal = evTotalYr * years;
      const gasTotal = gasTotalYr * years;
      const savings = gasTotal - evTotal;
      const co2Saved = (miles * years / mpg * 8.887 / 1000);
      document.getElementById('ev-savings')!.textContent = '$' + Math.round(savings).toLocaleString();
      document.getElementById('ev-savyr')!.textContent = '$' + Math.round(savings / years).toLocaleString() + '/year';
      document.getElementById('ev-fuelev')!.textContent = '$' + Math.round(evFuelYr).toLocaleString();
      document.getElementById('ev-fuelgas')!.textContent = '$' + Math.round(gasFuelYr).toLocaleString();
      document.getElementById('ev-totalev')!.textContent = '$' + Math.round(evTotal).toLocaleString();
      document.getElementById('ev-totalgas')!.textContent = '$' + Math.round(gasTotal).toLocaleString();
      document.getElementById('ev-co2')!.textContent = co2Saved.toFixed(1);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.ev-in').forEach(el => el.addEventListener('input', calcEV)); calcEV(); }, 50);
  </script>
</CalculatorLayout>
