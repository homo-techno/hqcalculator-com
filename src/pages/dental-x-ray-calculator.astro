---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Dental X-Ray Calculator";
const description = "Calculate dental X-ray radiation dose by type (bitewing, periapical, panoramic, CBCT), annual limits, and compare to daily background exposure.";
const relatedCalcs = [
  { name: "Dental Insurance Calculator", url: "/dental-insurance-calculator", description: "Dental plan benefit analysis." },
  { name: "Dental Crown Calculator", url: "/dental-crown-calculator", description: "Crown cost by material." },
  { name: "Root Canal Calculator", url: "/root-canal-calculator", description: "Root canal treatment cost." },
  { name: "Dental Implant Cost Calculator", url: "/dental-implant-cost-calculator", description: "Implant cost estimates." },
  { name: "Tooth Filling Calculator", url: "/tooth-filling-calculator", description: "Filling cost by material." },
  { name: "Body Surface Area Calculator", url: "/body-surface-area-calculator", description: "BSA calculation." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Dental X-Ray Calculator" keywords="dental x-ray radiation, bitewing radiation dose, panoramic x-ray dose, CBCT dose, dental x-ray safety, microsievert" breadcrumbs={[{ name: "Dental X-Ray", url: "/dental-x-ray-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dental X-Ray Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate radiation dose from dental imaging and compare to daily background exposure.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="p-3 bg-blue-50 rounded-xl text-center text-xs font-semibold text-blue-900 uppercase tracking-wide">Enter Number of Each X-Ray Type</div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Bitewing X-Rays</label><input type="number" id="dx-bite" class="dx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="0" max="20" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Periapical X-Rays</label><input type="number" id="dx-peri" class="dx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" max="20" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Panoramic (OPG)</label><input type="number" id="dx-pano" class="dx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" max="5" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">CBCT (Cone Beam CT)</label><input type="number" id="dx-cbct" class="dx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" max="5" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Full Mouth Series (FMX)</label><input type="number" id="dx-fmx" class="dx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" max="3" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Cephalometric</label><input type="number" id="dx-ceph" class="dx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" max="5" step="1"></div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Equipment Type</label>
          <select id="dx-equip" class="dx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="digital" selected>Digital (lower dose)</option>
            <option value="film">Film-Based (higher dose)</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Effective Dose</div>
          <div class="text-5xl font-extrabold font-mono" id="dx-total">0 uSv</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Days of Background</div><div class="text-xl font-bold font-mono" id="dx-days">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">% of Annual Limit</div><div class="text-xl font-bold font-mono" id="dx-pct">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Risk Level</div><div class="text-xl font-bold font-mono" id="dx-risk">-</div></div>
        </div>
        <div class="p-3 bg-blue-50 rounded-xl text-center text-xs font-semibold text-blue-900 uppercase tracking-wide mb-1">Comparison to Common Exposures</div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Chest X-Ray Equivalent</div><div class="text-xl font-bold font-mono" id="dx-chest">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Flight Hours Equivalent</div><div class="text-xl font-bold font-mono" id="dx-flight">0 hrs</div></div>
        </div>
      </div>
      <ShareButton calculatorId="dental-x-ray" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDX() {
      const bite = parseFloat((document.getElementById('dx-bite') as HTMLInputElement).value) || 0;
      const peri = parseFloat((document.getElementById('dx-peri') as HTMLInputElement).value) || 0;
      const pano = parseFloat((document.getElementById('dx-pano') as HTMLInputElement).value) || 0;
      const cbct = parseFloat((document.getElementById('dx-cbct') as HTMLInputElement).value) || 0;
      const fmx = parseFloat((document.getElementById('dx-fmx') as HTMLInputElement).value) || 0;
      const ceph = parseFloat((document.getElementById('dx-ceph') as HTMLInputElement).value) || 0;
      const equip = (document.getElementById('dx-equip') as HTMLSelectElement).value;

      // Effective doses in microsieverts (uSv) - digital values
      const doses: Record<string, number> = {
        bite: 5,    // per film
        peri: 5,    // per film
        pano: 14,   // per exposure
        cbct: 75,   // small FOV average
        fmx: 85,    // full mouth (18-20 films)
        ceph: 6     // per exposure
      };

      const filmMult = equip === 'film' ? 1.8 : 1.0; // film uses ~80% more radiation

      const totalDose = Math.round((bite * doses.bite + peri * doses.peri + pano * doses.pano +
                         cbct * doses.cbct + fmx * doses.fmx + ceph * doses.ceph) * filmMult);

      // Background radiation ~8.2 uSv/day (US average ~3000 uSv/year)
      const bgPerDay = 8.2;
      const daysEquiv = (totalDose / bgPerDay).toFixed(1);

      // Annual public limit is 1000 uSv (1 mSv) above background
      const pctLimit = ((totalDose / 1000) * 100).toFixed(1);

      // Risk level
      let risk: string;
      if (totalDose < 20) risk = 'Negligible';
      else if (totalDose < 100) risk = 'Very Low';
      else if (totalDose < 500) risk = 'Low';
      else risk = 'Moderate';

      // Comparisons
      const chestXray = 20; // uSv
      const chestEquiv = (totalDose / chestXray).toFixed(1);
      const flightHours = (totalDose / 5).toFixed(1); // ~5 uSv per flight hour

      document.getElementById('dx-total')!.textContent = totalDose + ' \u00B5Sv';
      document.getElementById('dx-days')!.textContent = daysEquiv + ' days';
      document.getElementById('dx-pct')!.textContent = pctLimit + '%';
      document.getElementById('dx-risk')!.textContent = risk;
      document.getElementById('dx-chest')!.textContent = chestEquiv + 'x';
      document.getElementById('dx-flight')!.textContent = flightHours + ' hrs';

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.dx-in').forEach(el => { el.addEventListener('input', calcDX); el.addEventListener('change', calcDX); });
      calcDX();
    }, 50);
  </script>
</CalculatorLayout>
