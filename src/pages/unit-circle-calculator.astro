---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Unit Circle Calculator - Trig Values at Any Angle";
const description = "Find exact trigonometric values on the unit circle. Enter degrees or radians to get sin, cos, tan, and coordinates.";
const relatedCalcs = [
  { name: "Degrees/Radians", url: "/degrees-radians-converter", description: "Angle conversion." },
  { name: "Arc Length", url: "/arc-length-calculator", description: "Arc length." },
  { name: "Slope Calculator", url: "/slope-calculator", description: "Slope." },
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Scientific." },
  { name: "Pythagorean Theorem", url: "/pythagorean-theorem-calculator", description: "Pythagorean." },
  { name: "Triangle Calculator", url: "/triangle-calculator", description: "Triangles." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Unit Circle Calculator" keywords="unit circle, trig values, sine cosine tangent, unit circle chart, radian degree" breadcrumbs={[{ name: "Unit Circle", url: "/unit-circle-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Unit Circle Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Get trig values and coordinates for any angle on the unit circle.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Angle (degrees)</label><input type="number" id="uc-deg" class="uc-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold text-center" value="45" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Angle (radians)</label><input type="number" id="uc-rad" class="uc-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold text-center" value="0.7854" step="0.0001"></div>
        </div>
        <div class="flex gap-1 flex-wrap">
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="0">0°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="30">30°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="45">45°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="60">60°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="90">90°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="120">120°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="135">135°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="150">150°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="180">180°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="270">270°</button>
          <button class="uc-preset px-2 py-1 rounded-lg text-xs border border-border font-bold hover:bg-blue-50" data-deg="360">360°</button>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Coordinates (cos θ, sin θ)</div>
          <div class="text-3xl font-extrabold font-mono" id="uc-coords">(0, 0)</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">sin θ</div><div class="text-xl font-bold font-mono" id="uc-sin">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">cos θ</div><div class="text-xl font-bold font-mono" id="uc-cos">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">tan θ</div><div class="text-xl font-bold font-mono" id="uc-tan">0</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">csc θ</div><div class="text-xl font-bold font-mono" id="uc-csc">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">sec θ</div><div class="text-xl font-bold font-mono" id="uc-sec">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">cot θ</div><div class="text-xl font-bold font-mono" id="uc-cot">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Info</h3>
          <div class="font-mono text-sm space-y-1" id="uc-info"></div>
        </div>
      </div>
      <ShareButton calculatorId="unit-circle" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    let ucSource = 'deg';
    function f(v: number): string { return Math.abs(v) < 1e-10 ? '0' : v.toFixed(8); }
    function calcUC() {
      let deg: number, rad: number;
      if (ucSource === 'deg') {
        deg = parseFloat((document.getElementById('uc-deg') as HTMLInputElement).value) || 0;
        rad = deg * Math.PI / 180;
        (document.getElementById('uc-rad') as HTMLInputElement).value = rad.toFixed(6);
      } else {
        rad = parseFloat((document.getElementById('uc-rad') as HTMLInputElement).value) || 0;
        deg = rad * 180 / Math.PI;
        (document.getElementById('uc-deg') as HTMLInputElement).value = deg.toFixed(4);
      }
      const sinV = Math.sin(rad), cosV = Math.cos(rad);
      const tanV = Math.abs(cosV) < 1e-10 ? NaN : sinV / cosV;
      document.getElementById('uc-coords')!.textContent = `(${f(cosV)}, ${f(sinV)})`;
      document.getElementById('uc-sin')!.textContent = f(sinV);
      document.getElementById('uc-cos')!.textContent = f(cosV);
      document.getElementById('uc-tan')!.textContent = isNaN(tanV) ? 'undefined' : f(tanV);
      document.getElementById('uc-csc')!.textContent = Math.abs(sinV) < 1e-10 ? 'undefined' : f(1 / sinV);
      document.getElementById('uc-sec')!.textContent = Math.abs(cosV) < 1e-10 ? 'undefined' : f(1 / cosV);
      document.getElementById('uc-cot')!.textContent = Math.abs(sinV) < 1e-10 ? 'undefined' : f(cosV / sinV);
      const normDeg = ((deg % 360) + 360) % 360;
      let quadrant = normDeg < 90 ? 'I' : normDeg < 180 ? 'II' : normDeg < 270 ? 'III' : 'IV';
      if (normDeg === 0 || normDeg === 90 || normDeg === 180 || normDeg === 270) quadrant += ' (axis)';
      const refAngle = normDeg <= 90 ? normDeg : normDeg <= 180 ? 180 - normDeg : normDeg <= 270 ? normDeg - 180 : 360 - normDeg;
      document.getElementById('uc-info')!.innerHTML = `
        <div>Quadrant: ${quadrant}</div>
        <div>Reference angle: ${refAngle.toFixed(2)}° = ${(refAngle * Math.PI / 180).toFixed(4)} rad</div>
        <div>π fraction: ${deg}/180 × π = ${(deg / 180).toFixed(4)}π</div>
        <div>sin²θ + cos²θ = ${(sinV * sinV + cosV * cosV).toFixed(10)}</div>`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.getElementById('uc-deg')!.addEventListener('input', () => { ucSource = 'deg'; calcUC(); });
      document.getElementById('uc-rad')!.addEventListener('input', () => { ucSource = 'rad'; calcUC(); });
      document.querySelectorAll('.uc-preset').forEach(btn => btn.addEventListener('click', () => {
        (document.getElementById('uc-deg') as HTMLInputElement).value = (btn as HTMLElement).dataset.deg!;
        ucSource = 'deg'; calcUC();
      }));
      calcUC();
    }, 50);
  </script>
</CalculatorLayout>
