---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Structural Load Calculator - Dead Load, Live Load & Beam Sizing";
const description = "Calculate structural loads for buildings. Enter dead load, live load, area, and safety factor to determine total load, per linear foot, and beam requirements.";

const relatedCalcs = [
  { name: "Column Calculator", url: "/column-calculator", description: "Column sizing tool." },
  { name: "Floor Joist Calculator", url: "/floor-joist-calculator", description: "Joist sizing." },
  { name: "Foundation Calculator", url: "/foundation-calculator", description: "Foundation estimator." },
  { name: "Load Bearing Wall Calculator", url: "/load-bearing-wall-calculator", description: "Wall load analysis." },
  { name: "Truss Calculator", url: "/truss-calculator", description: "Roof truss design." },
  { name: "Rafter Calculator", url: "/rafter-calculator", description: "Rafter length." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Structural Load Calculator"
  keywords="structural load calculator, dead load, live load, beam sizing, load per square foot, safety factor, structural engineering"
  breadcrumbs={[{ name: "Structural Load Calculator", url: "/structural-load-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Structural Load Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Determine total structural loads and beam requirements for building design.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <div class="grid grid-cols-2 gap-3 mb-5">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Dead Load (psf)</label>
              <input type="number" id="sl-dead" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="15" min="0" step="1">
              <div class="text-xs text-text-muted mt-1">Floor, walls, roof weight</div>
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Live Load (psf)</label>
              <input type="number" id="sl-live" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="40" min="0" step="1">
              <div class="text-xs text-text-muted mt-1">Occupancy, furniture</div>
            </div>
          </div>

          <div class="grid grid-cols-2 gap-3 mb-5">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Tributary Area Length (ft)</label>
              <input type="number" id="sl-length" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="20" min="0" step="0.5">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Tributary Area Width (ft)</label>
              <input type="number" id="sl-width" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="12" min="0" step="0.5">
            </div>
          </div>

          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Safety Factor</label>
            <select id="sl-factor" class="w-full px-3 py-3 border border-border rounded-xl text-lg">
              <option value="1.2">1.2 (light duty)</option>
              <option value="1.5" selected>1.5 (standard residential)</option>
              <option value="1.7">1.7 (commercial)</option>
              <option value="2.0">2.0 (high safety)</option>
            </select>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Beam Span (ft)</label>
              <input type="number" id="sl-span" class="w-full px-3 py-2 border border-border rounded-lg" value="12" min="1" step="0.5">
              <div class="text-xs text-text-muted mt-1">For beam sizing recommendation</div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Design Load</div>
            <div class="text-5xl font-extrabold font-mono" id="sl-total">0</div>
            <div class="text-sm text-blue-200 mt-1">pounds (with safety factor)</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Combined PSF</div>
              <div class="text-xl font-bold" id="sl-psf">0 psf</div>
              <div class="text-xs text-text-muted">dead + live</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Tributary Area</div>
              <div class="text-xl font-bold" id="sl-area">0 sq ft</div>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Load Per Linear Ft</div>
              <div class="text-xl font-bold" id="sl-plf">0 plf</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Unfactored Load</div>
              <div class="text-xl font-bold" id="sl-unfactored">0 lbs</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Suggested Beam (LVL)</div>
            <div class="text-xl font-bold" id="sl-beam">--</div>
            <div class="text-xs text-text-muted">consult an engineer for final design</div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="structural-load" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How to Calculate Structural Loads</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>Total Load:</strong> (Dead Load + Live Load) x Area x Safety Factor</p>
        <p><strong>Per Linear Foot:</strong> Total Load / Beam Span</p>
      </div>

      <h3 class="text-xl font-semibold text-text mt-8">Common Load Values (psf)</h3>
      <ul>
        <li><strong>Residential floors:</strong> 40 psf live, 10-15 psf dead</li>
        <li><strong>Residential roof:</strong> 20 psf live (30 psf snow areas)</li>
        <li><strong>Office:</strong> 50 psf live load</li>
        <li><strong>Retail/Assembly:</strong> 100 psf live load</li>
      </ul>
      <p class="text-sm text-red-600"><strong>Disclaimer:</strong> This calculator is for estimation only. Always consult a licensed structural engineer for actual building design.</p>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcStructuralLoad() {
      const dead = parseFloat((document.getElementById('sl-dead') as HTMLInputElement).value) || 0;
      const live = parseFloat((document.getElementById('sl-live') as HTMLInputElement).value) || 0;
      const length = parseFloat((document.getElementById('sl-length') as HTMLInputElement).value) || 0;
      const width = parseFloat((document.getElementById('sl-width') as HTMLInputElement).value) || 0;
      const factor = parseFloat((document.getElementById('sl-factor') as HTMLSelectElement).value) || 1.5;
      const span = parseFloat((document.getElementById('sl-span') as HTMLInputElement).value) || 1;

      const area = length * width;
      const combinedPsf = dead + live;
      const unfactored = combinedPsf * area;
      const totalLoad = unfactored * factor;
      const plf = span > 0 ? Math.round(totalLoad / span) : 0;

      // Simple beam suggestion based on load and span
      let beamSuggestion = '--';
      const moment = (plf * span * span) / 8; // max moment for uniform load
      if (moment > 0) {
        // LVL allowable bending stress ~2600 psi, section modulus S = M / Fb
        const sRequired = (moment * 12) / 2600; // in^3
        if (sRequired <= 21.4) beamSuggestion = '1.75" x 9.25" LVL';
        else if (sRequired <= 35.6) beamSuggestion = '1.75" x 11.25" LVL';
        else if (sRequired <= 56.3) beamSuggestion = '3.5" x 11.25" LVL (dbl)';
        else if (sRequired <= 73.8) beamSuggestion = '3.5" x 14" LVL (dbl)';
        else if (sRequired <= 112) beamSuggestion = '5.25" x 14" LVL (triple)';
        else beamSuggestion = 'Steel beam required';
      }

      document.getElementById('sl-total')!.textContent = Math.round(totalLoad).toLocaleString();
      document.getElementById('sl-psf')!.textContent = combinedPsf + ' psf';
      document.getElementById('sl-area')!.textContent = area.toFixed(0) + ' sq ft';
      document.getElementById('sl-plf')!.textContent = plf.toLocaleString() + ' plf';
      document.getElementById('sl-unfactored')!.textContent = Math.round(unfactored).toLocaleString() + ' lbs';
      document.getElementById('sl-beam')!.textContent = beamSuggestion;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('#sl-dead, #sl-live, #sl-length, #sl-width, #sl-span').forEach(el => {
        el.addEventListener('input', calcStructuralLoad);
        el.addEventListener('change', calcStructuralLoad);
      });
      document.querySelectorAll('#sl-factor').forEach(el => {
        el.addEventListener('input', calcStructuralLoad);
        el.addEventListener('change', calcStructuralLoad);
      });
      calcStructuralLoad();
    }, 50);
  </script>
</CalculatorLayout>
