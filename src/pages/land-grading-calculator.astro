---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Land Grading Calculator - Cut/Fill & Equipment Hours";
const description = "Calculate cut and fill volumes from slope and area. Estimate dirt hauling, equipment hours, and grade percentage for land leveling projects.";
const relatedCalcs = [
  { name: "Asphalt Calculator", url: "/asphalt-calculator", description: "Paving material estimates." },
  { name: "Volume Calculator", url: "/volume-calculator", description: "General volume calculations." },
  { name: "Area Calculator", url: "/area-calculator", description: "Calculate area of shapes." },
  { name: "Density Calculator", url: "/density-calculator", description: "Compute material density." },
  { name: "Fence Post Calculator", url: "/fence-post-calculator", description: "Post spacing and count." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Plan your budget." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Land Grading Calculator" keywords="land grading calculator, cut fill volume, earthwork, equipment hours, slope grading, dirt hauling" breadcrumbs={[{ name: "Land Grading", url: "/land-grading-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Land Grading Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate cut/fill volumes, equipment hours, and costs for land leveling projects.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Area Length (feet)</label>
            <input type="number" id="lg2-len" class="lg2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="200" min="10" max="10000" step="10">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Area Width (feet)</label>
            <input type="number" id="lg2-wid" class="lg2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="100" min="10" max="10000" step="10">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Existing Slope (%)</label>
            <input type="number" id="lg2-exist" class="lg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" max="50" step="0.5">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Desired Slope (%)</label>
            <input type="number" id="lg2-desired" class="lg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" max="50" step="0.5">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Soil Swell Factor (%)</label>
            <input type="number" id="lg2-swell" class="lg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="25" min="0" max="60" step="5">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Equipment Rate ($/hr)</label>
            <input type="number" id="lg2-rate" class="lg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="150" min="0" step="10">
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Hauling Cost ($/cu yd)</label>
          <input type="number" id="lg2-haul" class="lg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="0" step="1">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Cut/Fill Volume</div>
          <div class="text-5xl font-extrabold font-mono" id="lg2-vol">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Elevation Change</div>
            <div class="text-xl font-bold font-mono" id="lg2-elev">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Swelled Volume</div>
            <div class="text-xl font-bold font-mono" id="lg2-swell-v">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Truck Loads (10yd)</div>
            <div class="text-xl font-bold font-mono" id="lg2-trucks">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Equipment Hours</div>
            <div class="text-xl font-bold font-mono" id="lg2-hours">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Estimated Cost</div>
            <div class="text-xl font-bold font-mono" id="lg2-cost">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="land-grading" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcLG2() {
      const length = parseFloat((document.getElementById('lg2-len') as HTMLInputElement).value) || 200;
      const width = parseFloat((document.getElementById('lg2-wid') as HTMLInputElement).value) || 100;
      const existSlope = parseFloat((document.getElementById('lg2-exist') as HTMLInputElement).value) || 8;
      const desiredSlope = parseFloat((document.getElementById('lg2-desired') as HTMLInputElement).value) || 2;
      const swellPct = parseFloat((document.getElementById('lg2-swell') as HTMLInputElement).value) || 25;
      const equipRate = parseFloat((document.getElementById('lg2-rate') as HTMLInputElement).value) || 0;
      const haulRate = parseFloat((document.getElementById('lg2-haul') as HTMLInputElement).value) || 0;
      const existRise = length * (existSlope / 100);
      const desiredRise = length * (desiredSlope / 100);
      const elevDiff = existRise - desiredRise;
      const avgCut = elevDiff / 2;
      const volCuFt = avgCut * length * width / 2;
      const volCuYd = volCuFt / 27;
      const swelledVol = volCuYd * (1 + swellPct / 100);
      const truckLoads = Math.ceil(swelledVol / 10);
      const equipHours = volCuYd / 50;
      const equipCost = equipHours * equipRate;
      const haulCost = swelledVol * haulRate;
      const totalCost = equipCost + haulCost;
      document.getElementById('lg2-vol')!.textContent = Math.round(volCuYd).toLocaleString() + ' cu yd';
      document.getElementById('lg2-elev')!.textContent = elevDiff.toFixed(1) + ' ft';
      document.getElementById('lg2-swell-v')!.textContent = Math.round(swelledVol).toLocaleString() + ' yd';
      document.getElementById('lg2-trucks')!.textContent = truckLoads.toLocaleString();
      document.getElementById('lg2-hours')!.textContent = equipHours.toFixed(1) + ' hrs';
      document.getElementById('lg2-cost')!.textContent = '$' + Math.round(totalCost).toLocaleString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.lg2-in').forEach(el => { el.addEventListener('input', calcLG2); el.addEventListener('change', calcLG2); });
      calcLG2();
    }, 50);
  </script>
</CalculatorLayout>
