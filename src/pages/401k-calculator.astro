---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "401(k) Calculator - Retirement Savings Growth";
const description = "See how your 401(k) will grow over time with contributions, employer match, and investment returns. Plan your retirement savings.";

const relatedCalcs = [
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Retirement planning." },
  { name: "Roth IRA", url: "/roth-ira-calculator", description: "Roth IRA." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Investments." },
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Compound interest." },
  { name: "Salary Calculator", url: "/salary-calculator", description: "Salary." },
  { name: "Income Tax", url: "/income-tax-calculator", description: "Income tax." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="401(k) Calculator" keywords="401k calculator, retirement savings, employer match, 401k growth, retirement planning" breadcrumbs={[{ name: "401(k) Calculator", url: "/401k-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">401(k) Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate your 401(k) balance at retirement with employer matching.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Annual Salary</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="k-salary" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="75000" min="0" step="1000">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Your Contribution (%)</label>
              <input type="number" id="k-contrib" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="10" min="0" max="100" step="1">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Salary Growth (%/yr)</label>
              <input type="number" id="k-raise" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="3" min="0" max="15" step="0.5">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Employer Match (%)</label>
              <input type="number" id="k-match" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="50" min="0" max="100" step="5">
              <p class="text-xs text-text-muted mt-1">% of your contribution matched</p>
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Match Limit (% salary)</label>
              <input type="number" id="k-match-limit" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="6" min="0" max="100" step="1">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Current 401(k) Balance</label>
              <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
                <input type="number" id="k-balance" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="25000" min="0" step="5000">
              </div>
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Years Until Retirement</label>
              <input type="number" id="k-years" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="30" min="1" max="50" step="1">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Expected Return (%/yr)</label>
            <input type="number" id="k-return" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="7" min="0" max="15" step="0.5">
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Projected 401(k) Balance</div>
            <div class="text-4xl sm:text-5xl font-extrabold" id="k-total">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Your Contributions</div>
              <div class="text-xl font-bold" id="k-yours">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Employer Match</div>
              <div class="text-xl font-bold text-secondary" id="k-employer">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Investment Growth</div>
              <div class="text-xl font-bold" id="k-growth">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Free Money (Match)</div>
              <div class="text-xl font-bold text-green-600" id="k-free">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-3">Growth Milestones</h3>
            <div class="space-y-1 text-sm" id="k-table"></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="401k" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How 401(k) Plans Work</h2>
      <p>A 401(k) lets you contribute pre-tax income to a retirement account. Many employers match a portion of your contributions â€” that's essentially free money. The 2024 contribution limit is $23,000 ($30,500 if 50+).</p>
      <h3 class="text-xl font-semibold text-text mt-8">Frequently Asked Questions</h3>
      <p><strong>How much should I contribute?</strong> At minimum, contribute enough to get the full employer match. Ideally, aim for 15% of your salary including the match.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calc401k() {
      let salary = parseFloat((document.getElementById('k-salary') as HTMLInputElement).value) || 0;
      const contribPct = (parseFloat((document.getElementById('k-contrib') as HTMLInputElement).value) || 0) / 100;
      const raisePct = (parseFloat((document.getElementById('k-raise') as HTMLInputElement).value) || 0) / 100;
      const matchPct = (parseFloat((document.getElementById('k-match') as HTMLInputElement).value) || 0) / 100;
      const matchLimit = (parseFloat((document.getElementById('k-match-limit') as HTMLInputElement).value) || 0) / 100;
      const balance = parseFloat((document.getElementById('k-balance') as HTMLInputElement).value) || 0;
      const years = parseInt((document.getElementById('k-years') as HTMLInputElement).value) || 1;
      const returnRate = (parseFloat((document.getElementById('k-return') as HTMLInputElement).value) || 0) / 100;

      let total = balance;
      let totalYours = 0, totalEmployer = 0;
      const rows: string[] = [];
      rows.push('<div class="grid grid-cols-4 gap-1 font-semibold text-xs text-text-muted mb-1"><span>Year</span><span>Contrib</span><span>Match</span><span>Balance</span></div>');

      for (let y = 1; y <= years; y++) {
        const yourContrib = salary * contribPct;
        const matchableContrib = Math.min(salary * contribPct, salary * matchLimit);
        const employerMatch = matchableContrib * matchPct;

        totalYours += yourContrib;
        totalEmployer += employerMatch;

        total = (total + yourContrib + employerMatch) * (1 + returnRate);
        salary *= (1 + raisePct);

        if (y <= 5 || y % 5 === 0 || y === years) {
          rows.push(`<div class="grid grid-cols-4 gap-1 text-xs ${y === years ? 'font-bold' : ''}"><span>${y}</span><span>${fmt(yourContrib)}</span><span>${fmt(employerMatch)}</span><span>${fmt(total)}</span></div>`);
        }
      }

      const growth = total - balance - totalYours - totalEmployer;

      document.getElementById('k-total')!.textContent = fmt(total);
      document.getElementById('k-yours')!.textContent = fmt(totalYours);
      document.getElementById('k-employer')!.textContent = fmt(totalEmployer);
      document.getElementById('k-growth')!.textContent = fmt(growth);
      document.getElementById('k-free')!.textContent = fmt(totalEmployer);
      document.getElementById('k-table')!.innerHTML = rows.join('');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['k-salary', 'k-contrib', 'k-raise', 'k-match', 'k-match-limit', 'k-balance', 'k-years', 'k-return'].forEach(id => {
        document.getElementById(id)!.addEventListener('input', calc401k);
      });
      calc401k();
    }, 50);
  </script>
</CalculatorLayout>
