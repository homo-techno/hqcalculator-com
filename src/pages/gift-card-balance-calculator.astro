---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Gift Card Balance Calculator";
const description = "Track gift card balances, calculate remaining value after purchases, and manage multiple cards.";
const relatedCalcs = [
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget." },
  { name: "Discount Calculator", url: "/discount-calculator", description: "Discount." },
  { name: "Sales Tax", url: "/sales-tax-calculator", description: "Sales tax." },
  { name: "Tip Calculator", url: "/tip-calculator", description: "Tip." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage." },
  { name: "Cash Back", url: "/cash-back-calculator", description: "Cash back." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Gift Card Balance Calculator" keywords="gift card balance, gift card tracker, remaining balance, gift card value, card balance calculator" breadcrumbs={[{ name: "Gift Card Balance", url: "/gift-card-balance-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Gift Card Balance Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Track gift card balances and remaining value.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Original Balance ($)</label><input type="number" id="gc-orig" class="gc-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="100" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Amount Spent ($)</label><input type="number" id="gc-spent" class="gc-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="35.50" min="0" step="0.01"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Additional Purchase ($)</label><input type="number" id="gc-next" class="gc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="0.01"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Remaining Balance</div>
          <div class="text-5xl font-extrabold font-mono" id="gc-result">$0.00</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Used</div><div class="text-xl font-bold font-mono" id="gc-used">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">% Remaining</div><div class="text-xl font-bold font-mono" id="gc-pct">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">After Purchase</div><div class="text-xl font-bold font-mono" id="gc-after">$0</div></div>
        </div>
        <div class="p-4 rounded-xl text-center" id="gc-status-box">
          <div class="font-bold text-sm" id="gc-status">-</div>
        </div>
      </div>
      <ShareButton calculatorId="gift-card-balance" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcGC() {
      const orig = parseFloat((document.getElementById('gc-orig') as HTMLInputElement).value) || 0;
      const spent = parseFloat((document.getElementById('gc-spent') as HTMLInputElement).value) || 0;
      const next = parseFloat((document.getElementById('gc-next') as HTMLInputElement).value) || 0;
      const remaining = Math.max(0, orig - spent);
      const afterPurchase = Math.max(0, remaining - next);
      const pct = orig > 0 ? (remaining / orig) * 100 : 0;
      document.getElementById('gc-result')!.textContent = '$' + remaining.toFixed(2);
      document.getElementById('gc-used')!.textContent = '$' + spent.toFixed(2);
      document.getElementById('gc-pct')!.textContent = pct.toFixed(0) + '%';
      document.getElementById('gc-after')!.textContent = '$' + afterPurchase.toFixed(2);
      let status: string, color: string;
      if (next > remaining) { status = `Not enough! Short by $${(next - remaining).toFixed(2)}`; color = 'bg-red-50 text-red-800'; }
      else if (remaining === 0) { status = 'Card is empty'; color = 'bg-gray-50 text-gray-800'; }
      else if (pct < 10) { status = 'Almost empty â€” use it soon!'; color = 'bg-yellow-50 text-yellow-800'; }
      else { status = `$${remaining.toFixed(2)} available`; color = 'bg-green-50 text-green-800'; }
      document.getElementById('gc-status')!.textContent = status;
      document.getElementById('gc-status-box')!.className = `p-4 rounded-xl text-center ${color}`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.gc-in').forEach(el => { el.addEventListener('input', calcGC); el.addEventListener('change', calcGC); });
      calcGC();
    }, 50);
  </script>
</CalculatorLayout>
