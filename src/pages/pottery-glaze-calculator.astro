---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Pottery Glaze Calculator - Recipe Scaling & Kiln";
const description = "Scale pottery glaze recipes, calculate specific gravity, application thickness, and kiln load for ceramics.";
const relatedCalcs = [
  { name: "Paint Calculator", url: "/paint-calculator", description: "Paint coverage." },
  { name: "Volume Calculator", url: "/volume-calculator", description: "Volume calculations." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight conversion." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentages." },
  { name: "Ratio Calculator", url: "/ratio-calculator", description: "Ratios." },
  { name: "Area Calculator", url: "/area-calculator", description: "Area calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Pottery Glaze Calculator" keywords="pottery glaze calculator, glaze recipe, specific gravity, kiln load, ceramic glaze, glaze thickness" breadcrumbs={[{ name: "Pottery Glaze", url: "/pottery-glaze-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Pottery Glaze Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Scale glaze recipes, calculate specific gravity, and estimate kiln load for pottery projects.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Original Recipe (grams)</label><input type="number" id="pg2-orig" class="pg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1000" min="1" step="10"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Desired Batch (grams)</label><input type="number" id="pg2-batch" class="pg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="1" step="10"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Water (grams)</label><input type="number" id="pg2-water" class="pg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="600" min="1" step="10"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Surface Area to Glaze (sq in)</label><input type="number" id="pg2-area" class="pg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="1" step="10"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Firing Cone</label>
            <select id="pg2-cone" class="pg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="06">Cone 06 (1828째F / Low Fire)</option>
              <option value="6" selected>Cone 6 (2232째F / Mid Fire)</option>
              <option value="10">Cone 10 (2345째F / High Fire)</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Number of Pieces</label><input type="number" id="pg2-pcs" class="pg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="1" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Application Method</label>
            <select id="pg2-method" class="pg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="dip" selected>Dipping</option>
              <option value="brush">Brushing</option>
              <option value="spray">Spraying</option>
              <option value="pour">Pouring</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Coats</label><input type="number" id="pg2-coats" class="pg2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="1" max="5" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Scale Factor</div>
          <div class="text-4xl font-extrabold font-mono" id="pg2-result">0x</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Specific Gravity</div><div class="text-xl font-bold font-mono" id="pg2-sg">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Glaze Thickness</div><div class="text-xl font-bold font-mono" id="pg2-thk">0 mm</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Glaze Needed</div><div class="text-xl font-bold font-mono" id="pg2-need">0 ml</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Firing Temp</div><div class="text-xl font-bold font-mono" id="pg2-temp">0째F</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Firing Time</div><div class="text-xl font-bold font-mono" id="pg2-time">0 hrs</div></div>
        </div>
      </div>
      <ShareButton calculatorId="pottery-glaze" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPG2() {
      const orig = parseFloat((document.getElementById('pg2-orig') as HTMLInputElement).value) || 1000;
      const batch = parseFloat((document.getElementById('pg2-batch') as HTMLInputElement).value) || 500;
      const water = parseFloat((document.getElementById('pg2-water') as HTMLInputElement).value) || 600;
      const area = parseFloat((document.getElementById('pg2-area') as HTMLInputElement).value) || 200;
      const cone = (document.getElementById('pg2-cone') as HTMLSelectElement).value;
      const pcs = parseInt((document.getElementById('pg2-pcs') as HTMLInputElement).value) || 1;
      const method = (document.getElementById('pg2-method') as HTMLSelectElement).value;
      const coats = parseInt((document.getElementById('pg2-coats') as HTMLInputElement).value) || 2;

      const scaleFactor = batch / orig;

      // Specific gravity = (dry materials + water) / water
      // For a batch: total weight = batch + (water * scaleFactor)
      const scaledWater = water * scaleFactor;
      const totalWeight = batch + scaledWater;
      const sg = totalWeight / scaledWater;

      // Application thickness in mm (target ~0.5-1mm per coat)
      const thkPerCoat: Record<string, number> = { dip: 0.5, brush: 0.3, spray: 0.2, pour: 0.6 };
      const totalThk = (thkPerCoat[method] || 0.5) * coats;

      // Glaze needed: area * thickness / coverage factor
      // 1 ml covers about 5 sq cm at 0.5mm thick
      const areaSqCm = area * 6.452; // sq in to sq cm
      const coveragePerMl = 5 / 0.5 * (thkPerCoat[method] || 0.5); // adjusted
      const glazeMlPerPiece = (areaSqCm * totalThk) / 5;
      const totalGlazeMl = glazeMlPerPiece * pcs;

      // Firing temperature
      const firingTemps: Record<string, number> = { '06': 1828, '6': 2232, '10': 2345 };
      const firingTemp = firingTemps[cone] || 2232;

      // Firing time (approximate total cycle)
      const firingTimes: Record<string, number> = { '06': 8, '6': 10, '10': 12 };
      const firingTime = firingTimes[cone] || 10;

      document.getElementById('pg2-result')!.textContent = scaleFactor.toFixed(3) + 'x';
      document.getElementById('pg2-sg')!.textContent = sg.toFixed(2);
      document.getElementById('pg2-thk')!.textContent = totalThk.toFixed(1) + ' mm';
      document.getElementById('pg2-need')!.textContent = Math.round(totalGlazeMl) + ' ml';
      document.getElementById('pg2-temp')!.textContent = firingTemp + '\u00B0F';
      document.getElementById('pg2-time')!.textContent = firingTime + ' hrs';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.pg2-in').forEach(el => { el.addEventListener('input', calcPG2); el.addEventListener('change', calcPG2); });
      calcPG2();
    }, 50);
  </script>
</CalculatorLayout>
