---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "ROI Calculator - Return on Investment Calculator";
const description = "Calculate return on investment (ROI), annualized return, and compare investments. Simple and annualized ROI formulas.";

const relatedCalcs = [
  { name: "Investment Calculator", url: "/investment-calculator", description: "Returns." },
  { name: "Profit Margin", url: "/profit-margin-calculator", description: "Margins." },
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Compound growth." },
  { name: "Break-Even", url: "/break-even-calculator", description: "Break-even point." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentages." },
  { name: "CD Calculator", url: "/cd-calculator", description: "CD earnings." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="ROI Calculator"
  keywords="ROI calculator, return on investment, investment return, annualized ROI, profit calculator"
  breadcrumbs={[{ name: "ROI Calculator", url: "/roi-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">ROI Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate your return on investment and annualized performance.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4 mb-6">
        <div>
          <label class="block text-sm font-medium text-text mb-1">Amount Invested</label>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
            <input type="number" id="roi-invest" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="10000" min="0" step="100">
          </div>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">Amount Returned</label>
          <div class="relative">
            <span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
            <input type="number" id="roi-return" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="15000" min="0" step="100">
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Investment Period (years)</label>
          <input type="number" id="roi-years" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="3" min="0.1" max="100" step="0.5">
        </div>
      </div>

      <div class="p-6 bg-primary rounded-2xl text-white text-center mb-4">
        <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Return on Investment</div>
        <div class="text-5xl font-extrabold" id="roi-pct">50%</div>
      </div>

      <div class="grid grid-cols-2 gap-3 mb-4">
        <div class="p-4 bg-surface-alt rounded-xl text-center">
          <div class="text-xs text-text-muted uppercase">Net Profit</div>
          <div class="text-xl font-bold text-secondary" id="roi-profit">$5,000</div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl text-center">
          <div class="text-xs text-text-muted uppercase">Annualized ROI</div>
          <div class="text-xl font-bold" id="roi-annual">14.5%</div>
        </div>
      </div>

      <div class="p-4 bg-surface-alt rounded-xl mb-6">
        <h3 class="font-semibold text-sm text-text mb-3">Investment Analysis</h3>
        <div class="space-y-1 text-sm" id="roi-analysis"></div>
      </div>

      <ShareButton calculatorId="roi" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">How to Calculate ROI</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>ROI</strong> = (Gain − Cost) ÷ Cost × 100%</p>
        <p><strong>Annualized</strong> = ((1 + ROI)^(1/years) − 1) × 100%</p>
      </div>

      <h3 class="text-xl font-semibold text-text mt-8">Frequently Asked Questions</h3>
      <p><strong>What is a good ROI?</strong> It depends on the investment type. The S&P 500 averages ~10% annually. Real estate averages 8-12%. A good ROI beats inflation (3-4%) at minimum.</p>
      <p><strong>Why use annualized ROI?</strong> Annualized ROI allows fair comparison between investments held for different periods.</p>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcROI() {
      const invested = parseFloat((document.getElementById('roi-invest') as HTMLInputElement).value) || 0;
      const returned = parseFloat((document.getElementById('roi-return') as HTMLInputElement).value) || 0;
      const years = parseFloat((document.getElementById('roi-years') as HTMLInputElement).value) || 1;

      const profit = returned - invested;
      const roi = invested > 0 ? (profit / invested) * 100 : 0;
      const annualized = invested > 0 ? (Math.pow(returned / invested, 1 / years) - 1) * 100 : 0;

      document.getElementById('roi-pct')!.textContent = roi.toFixed(1) + '%';
      document.getElementById('roi-profit')!.textContent = (profit >= 0 ? '$' : '-$') + Math.abs(Math.round(profit)).toLocaleString();
      document.getElementById('roi-annual')!.textContent = annualized.toFixed(2) + '%';

      const doubleTime = annualized > 0 ? 72 / annualized : Infinity;
      const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

      document.getElementById('roi-analysis')!.innerHTML = [
        ['Total Invested', fmt(invested)],
        ['Total Returned', fmt(returned)],
        ['Net Profit/Loss', (profit >= 0 ? '+' : '') + fmt(profit)],
        ['Simple ROI', roi.toFixed(1) + '%'],
        ['Annualized Return', annualized.toFixed(2) + '%/yr'],
        ['Rule of 72 (double time)', doubleTime < Infinity ? doubleTime.toFixed(1) + ' years' : 'N/A'],
      ].map(([label, val]) =>
        `<div class="flex justify-between"><span class="text-text-secondary">${label}</span><span class="font-semibold">${val}</span></div>`
      ).join('');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['roi-invest', 'roi-return', 'roi-years'].forEach(id => {
        document.getElementById(id)!.addEventListener('input', calcROI);
      });
      calcROI();
    }, 50);
  </script>
</CalculatorLayout>
