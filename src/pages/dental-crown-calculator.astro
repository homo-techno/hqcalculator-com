---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Dental Crown Calculator";
const description = "Estimate dental crown cost by material (porcelain, metal, zirconia, e-max), prep work, lab fees, and insurance coverage.";
const relatedCalcs = [
  { name: "Dental Implant Cost Calculator", url: "/dental-implant-cost-calculator", description: "Implant cost estimates." },
  { name: "Dental Bridge Calculator", url: "/dental-bridge-calculator", description: "Bridge cost and alternatives." },
  { name: "Root Canal Calculator", url: "/root-canal-calculator", description: "Root canal treatment cost." },
  { name: "Tooth Filling Calculator", url: "/tooth-filling-calculator", description: "Filling cost by material." },
  { name: "Dental Insurance Calculator", url: "/dental-insurance-calculator", description: "Dental plan analysis." },
  { name: "Braces Cost Calculator", url: "/braces-cost-calculator", description: "Orthodontic cost estimates." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Dental Crown Calculator" keywords="dental crown cost, zirconia crown, porcelain crown, crown calculator, dental crown insurance" breadcrumbs={[{ name: "Dental Crown", url: "/dental-crown-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dental Crown Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate the cost of a dental crown including material, prep work, lab fees, and insurance offset.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Crown Material</label>
            <select id="dc-mat" class="dc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="pfm" selected>Porcelain-Fused-Metal</option>
              <option value="allceramic">All-Ceramic (Porcelain)</option>
              <option value="zirconia">Zirconia</option>
              <option value="emax">E-Max Lithium Disilicate</option>
              <option value="gold">Gold Alloy</option>
              <option value="basemetal">Base Metal Alloy</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Tooth Location</label>
            <select id="dc-loc" class="dc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="anterior">Anterior (Front)</option>
              <option value="premolar" selected>Premolar</option>
              <option value="molar">Molar</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Number of Crowns</label><input type="number" id="dc-count" class="dc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="1" max="28" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Additional Prep</label>
            <select id="dc-prep" class="dc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="none" selected>Standard Prep Only</option>
              <option value="buildup">Core Buildup ($200-$400)</option>
              <option value="post">Post and Core ($350-$600)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Insurance Coverage (%)</label><input type="number" id="dc-ins" class="dc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" max="100" step="5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Annual Max Benefit ($)</label><input type="number" id="dc-max" class="dc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1500" min="0" max="10000" step="100"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Crown Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="dc-total">$0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Crown + Lab</div><div class="text-xl font-bold font-mono" id="dc-crown">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Prep Work</div><div class="text-xl font-bold font-mono" id="dc-prepc">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Insurance Offset</div><div class="text-xl font-bold font-mono" id="dc-insc">-$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Per Crown Cost</div><div class="text-xl font-bold font-mono" id="dc-each">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Out of Pocket</div><div class="text-xl font-bold font-mono" id="dc-oop">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="dental-crown" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDC() {
      const mat = (document.getElementById('dc-mat') as HTMLSelectElement).value;
      const loc = (document.getElementById('dc-loc') as HTMLSelectElement).value;
      const count = parseFloat((document.getElementById('dc-count') as HTMLInputElement).value) || 1;
      const prep = (document.getElementById('dc-prep') as HTMLSelectElement).value;
      const insPct = parseFloat((document.getElementById('dc-ins') as HTMLInputElement).value) || 0;
      const insMax = parseFloat((document.getElementById('dc-max') as HTMLInputElement).value) || 0;

      const matCosts: Record<string, number> = { pfm: 1050, allceramic: 1200, zirconia: 1350, emax: 1300, gold: 1400, basemetal: 850 };
      const locMult: Record<string, number> = { anterior: 1.05, premolar: 1.0, molar: 1.1 };
      const prepCosts: Record<string, number> = { none: 0, buildup: 300, post: 475 };

      const crownEach = Math.round(matCosts[mat] * locMult[loc]);
      const prepEach = prepCosts[prep];
      const perCrown = crownEach + prepEach;
      const crownTotal = crownEach * count;
      const prepTotal = prepEach * count;
      const subtotal = crownTotal + prepTotal;
      const insOffset = Math.min(subtotal * (insPct / 100), insMax);
      const oop = subtotal - insOffset;

      document.getElementById('dc-total')!.textContent = '$' + Math.round(subtotal).toLocaleString();
      document.getElementById('dc-crown')!.textContent = '$' + Math.round(crownTotal).toLocaleString();
      document.getElementById('dc-prepc')!.textContent = '$' + Math.round(prepTotal).toLocaleString();
      document.getElementById('dc-insc')!.textContent = '-$' + Math.round(insOffset).toLocaleString();
      document.getElementById('dc-each')!.textContent = '$' + Math.round(perCrown).toLocaleString();
      document.getElementById('dc-oop')!.textContent = '$' + Math.round(oop).toLocaleString();

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.dc-in').forEach(el => { el.addEventListener('input', calcDC); el.addEventListener('change', calcDC); });
      calcDC();
    }, 50);
  </script>
</CalculatorLayout>
