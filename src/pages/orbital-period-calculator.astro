---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Orbital Period Calculator";
const description = "Calculate orbital period, velocity, and altitude using Kepler's third law for circular orbits.";
const relatedCalcs = [
  { name: "Escape Velocity", url: "/escape-velocity-calculator", description: "Escape vel." },
  { name: "Force Calculator", url: "/force-calculator", description: "Force." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed." },
  { name: "Acceleration", url: "/acceleration-calculator", description: "Acceleration." },
  { name: "Kinetic Energy", url: "/kinetic-energy-calculator", description: "Energy." },
  { name: "Scientific Notation", url: "/scientific-notation-calculator", description: "Notation." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Orbital Period Calculator" keywords="orbital period, Kepler's law, orbit calculator, satellite orbit, orbital velocity" breadcrumbs={[{ name: "Orbital Period", url: "/orbital-period-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Orbital Period Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Kepler's third law — T² = (4π²/GM) × r³</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Central Body</label>
          <select id="op-body" class="op-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="5.972e24,6.371e6" selected>Earth</option>
            <option value="1.989e30,6.957e8">Sun</option>
            <option value="6.417e23,3.390e6">Mars</option>
            <option value="7.342e22,1.737e6">Moon</option>
            <option value="1.898e27,6.991e7">Jupiter</option>
          </select>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Orbital Altitude (km above surface)</label><input type="number" id="op-alt" class="op-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="408" min="0" step="10"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Orbital Period</div>
          <div class="text-5xl font-extrabold font-mono" id="op-result">0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Orbital Velocity</div><div class="text-xl font-bold font-mono" id="op-vel">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Orbital Radius</div><div class="text-xl font-bold font-mono" id="op-radius">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Orbits per Day</div><div class="text-xl font-bold font-mono" id="op-perday">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Period (seconds)</div><div class="text-xl font-bold font-mono" id="op-secs">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="orbital-period" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    const G_OP = 6.674e-11;
    function calcOP() {
      const bodyVal = (document.getElementById('op-body') as HTMLSelectElement).value.split(',');
      const M = parseFloat(bodyVal[0]);
      const R = parseFloat(bodyVal[1]);
      const alt = parseFloat((document.getElementById('op-alt') as HTMLInputElement).value) || 0;
      const r = R + alt * 1000;
      const T = 2 * Math.PI * Math.sqrt(Math.pow(r, 3) / (G_OP * M));
      const v = Math.sqrt(G_OP * M / r);
      const hours = Math.floor(T / 3600);
      const mins = Math.floor((T % 3600) / 60);
      const secs = Math.floor(T % 60);
      document.getElementById('op-result')!.textContent = `${hours}h ${mins}m ${secs}s`;
      document.getElementById('op-vel')!.textContent = (v / 1000).toFixed(2) + ' km/s';
      document.getElementById('op-radius')!.textContent = (r / 1000).toFixed(0) + ' km';
      document.getElementById('op-perday')!.textContent = (86400 / T).toFixed(2);
      document.getElementById('op-secs')!.textContent = T.toFixed(0);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.op-in').forEach(el => { el.addEventListener('input', calcOP); el.addEventListener('change', calcOP); });
      calcOP();
    }, 50);
  </script>
</CalculatorLayout>
