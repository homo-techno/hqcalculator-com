---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Cash Back Calculator - Credit Card Rewards Calculator";
const description = "Calculate credit card cash back rewards, compare cards, and maximize your rewards based on spending categories.";
const relatedCalcs = [
  { name: "Tip Calculator", url: "/tip-calculator", description: "Tips." },
  { name: "Discount Calculator", url: "/discount-calculator", description: "Discounts." },
  { name: "Credit Card Payoff", url: "/debt-payoff-calculator", description: "Debt payoff." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentages." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings." },
  { name: "Unit Price", url: "/unit-price-calculator", description: "Unit price." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Cash Back Calculator" keywords="cash back calculator, credit card rewards, cash back rewards, credit card comparison, rewards calculator" breadcrumbs={[{ name: "Cash Back", url: "/cash-back-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Cash Back Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate your credit card cash back rewards by spending category.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Groceries ($/mo)</label><input type="number" id="cb-groc" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="0" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Gas ($/mo)</label><input type="number" id="cb-gas" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="0" step="25"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Dining ($/mo)</label><input type="number" id="cb-dine" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="300" min="0" step="25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Online Shopping ($/mo)</label><input type="number" id="cb-online" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="250" min="0" step="25"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Other Spending ($/mo)</label><input type="number" id="cb-other" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="0" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Annual Fee ($)</label><input type="number" id="cb-fee" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="25"></div>
        </div>
        <div class="grid grid-cols-5 gap-2">
          <div><label class="block text-[10px] text-text-muted mb-1">Grocery %</label><input type="number" id="cb-rg" class="cb-in w-full px-2 py-2 border border-border rounded-lg text-sm font-bold text-center" value="3" min="0" max="10" step="0.5"></div>
          <div><label class="block text-[10px] text-text-muted mb-1">Gas %</label><input type="number" id="cb-ra" class="cb-in w-full px-2 py-2 border border-border rounded-lg text-sm font-bold text-center" value="3" min="0" max="10" step="0.5"></div>
          <div><label class="block text-[10px] text-text-muted mb-1">Dining %</label><input type="number" id="cb-rd" class="cb-in w-full px-2 py-2 border border-border rounded-lg text-sm font-bold text-center" value="3" min="0" max="10" step="0.5"></div>
          <div><label class="block text-[10px] text-text-muted mb-1">Online %</label><input type="number" id="cb-ro" class="cb-in w-full px-2 py-2 border border-border rounded-lg text-sm font-bold text-center" value="5" min="0" max="10" step="0.5"></div>
          <div><label class="block text-[10px] text-text-muted mb-1">Other %</label><input type="number" id="cb-rx" class="cb-in w-full px-2 py-2 border border-border rounded-lg text-sm font-bold text-center" value="1" min="0" max="10" step="0.5"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Annual Cash Back (net)</div>
          <div class="text-5xl font-extrabold font-mono" id="cb-annual">$0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Rewards</div><div class="text-xl font-bold" id="cb-monthly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Effective Rate</div><div class="text-xl font-bold" id="cb-eff">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Spend</div><div class="text-xl font-bold" id="cb-spend">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="cash-back" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCB() {
      const groc = parseFloat((document.getElementById('cb-groc') as HTMLInputElement).value) || 0;
      const gas = parseFloat((document.getElementById('cb-gas') as HTMLInputElement).value) || 0;
      const dine = parseFloat((document.getElementById('cb-dine') as HTMLInputElement).value) || 0;
      const online = parseFloat((document.getElementById('cb-online') as HTMLInputElement).value) || 0;
      const other = parseFloat((document.getElementById('cb-other') as HTMLInputElement).value) || 0;
      const fee = parseFloat((document.getElementById('cb-fee') as HTMLInputElement).value) || 0;
      const rg = (parseFloat((document.getElementById('cb-rg') as HTMLInputElement).value) || 0) / 100;
      const ra = (parseFloat((document.getElementById('cb-ra') as HTMLInputElement).value) || 0) / 100;
      const rd = (parseFloat((document.getElementById('cb-rd') as HTMLInputElement).value) || 0) / 100;
      const ro = (parseFloat((document.getElementById('cb-ro') as HTMLInputElement).value) || 0) / 100;
      const rx = (parseFloat((document.getElementById('cb-rx') as HTMLInputElement).value) || 0) / 100;
      const monthlyReward = groc * rg + gas * ra + dine * rd + online * ro + other * rx;
      const annualReward = monthlyReward * 12 - fee;
      const totalSpend = groc + gas + dine + online + other;
      const eff = totalSpend > 0 ? (annualReward / (totalSpend * 12)) * 100 : 0;
      document.getElementById('cb-annual')!.textContent = '$' + annualReward.toFixed(2);
      document.getElementById('cb-monthly')!.textContent = '$' + monthlyReward.toFixed(2);
      document.getElementById('cb-eff')!.textContent = eff.toFixed(2) + '%';
      document.getElementById('cb-spend')!.textContent = '$' + totalSpend.toLocaleString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.cb-in').forEach(el => el.addEventListener('input', calcCB)); calcCB(); }, 50);
  </script>
</CalculatorLayout>
