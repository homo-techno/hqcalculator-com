---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Marine Battery Calculator - Battery Bank Sizing & Charging";
const description = "Size your marine battery bank from electrical load list, amp-hours needed, days of autonomy, and charging time requirements.";
const relatedCalcs = [
  { name: "Battery Life", url: "/battery-life-calculator", description: "Battery life estimates." },
  { name: "Solar Battery", url: "/solar-battery-calculator", description: "Solar battery sizing." },
  { name: "Boat Loan", url: "/boat-loan-calculator", description: "Marine financing costs." },
  { name: "Nautical Mile", url: "/nautical-mile-calculator", description: "Nautical distance conversion." },
  { name: "Energy Converter", url: "/energy-converter", description: "Energy unit conversion." },
  { name: "Buoyancy", url: "/buoyancy-calculator", description: "Buoyancy force calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Marine Battery Calculator" keywords="marine battery calculator, battery bank sizing, amp hours, marine electrical, boat battery, charging time, days of autonomy" breadcrumbs={[{ name: "Marine Battery", url: "/marine-battery-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Marine Battery Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Size your marine battery bank based on electrical loads, autonomy requirements, and charging capacity.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Daily Load (amp-hours)</label><input type="number" id="mb-load" class="mb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="10"></div>
          <div><label class="block text-xs font-medium text-text mb-1">System Voltage (V)</label>
            <select id="mb-volt" class="mb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="12">12V</option>
              <option value="24">24V</option>
              <option value="48">48V</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Days of Autonomy</label><input type="number" id="mb-days" class="mb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" max="7" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Battery Type</label>
            <select id="mb-type" class="mb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="50">Flooded Lead Acid (50% DOD)</option>
              <option value="50">AGM (50% DOD)</option>
              <option value="80">LiFePO4 (80% DOD)</option>
              <option value="60">Gel (60% DOD)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Charger Output (amps)</label><input type="number" id="mb-charger" class="mb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Battery Ah Rating (each)</label><input type="number" id="mb-batt" class="mb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="25"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Bank Size Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="mb-bank">--</div>
          <div class="text-sm text-blue-200 mt-1">amp-hours</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Batteries Needed</div><div class="text-xl font-bold" id="mb-count">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Charge Time</div><div class="text-xl font-bold" id="mb-charge">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Daily Wh</div><div class="text-xl font-bold" id="mb-wh">--</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Usable Capacity</div><div class="text-xl font-bold" id="mb-usable">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Reserve Margin</div><div class="text-xl font-bold" id="mb-reserve">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="marine-battery" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcMB() {
      const dailyLoad = parseFloat((document.getElementById('mb-load') as HTMLInputElement).value) || 0;
      const voltage = parseFloat((document.getElementById('mb-volt') as HTMLSelectElement).value) || 12;
      const days = parseInt((document.getElementById('mb-days') as HTMLInputElement).value) || 1;
      const dod = (parseFloat((document.getElementById('mb-type') as HTMLSelectElement).value) || 50) / 100;
      const chargerAmps = parseFloat((document.getElementById('mb-charger') as HTMLInputElement).value) || 0;
      const battAh = parseFloat((document.getElementById('mb-batt') as HTMLInputElement).value) || 0;

      const totalAh = dailyLoad * days;
      const bankSize = dod > 0 ? totalAh / dod : 0;
      const usableAh = bankSize * dod;
      const battCount = battAh > 0 ? Math.ceil(bankSize / battAh) : 0;
      const actualBank = battCount * battAh;
      const chargeTime = chargerAmps > 0 ? totalAh / (chargerAmps * 0.85) : 0; // 85% charging efficiency
      const dailyWh = dailyLoad * voltage;
      const reserveMargin = actualBank > 0 ? ((actualBank * dod - totalAh) / totalAh) * 100 : 0;

      document.getElementById('mb-bank')!.textContent = bankSize > 0 ? Math.ceil(bankSize).toLocaleString() : '--';
      document.getElementById('mb-count')!.textContent = battCount > 0 ? battCount.toString() : '--';
      document.getElementById('mb-charge')!.textContent = chargeTime > 0 ? chargeTime.toFixed(1) + ' hrs' : '--';
      document.getElementById('mb-wh')!.textContent = dailyWh > 0 ? Math.round(dailyWh).toLocaleString() : '--';
      document.getElementById('mb-usable')!.textContent = usableAh > 0 ? Math.round(usableAh) + ' Ah' : '--';
      document.getElementById('mb-reserve')!.textContent = reserveMargin > 0 ? '+' + reserveMargin.toFixed(0) + '%' : '--';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('mb-load') as HTMLInputElement).value = '120';
      (document.getElementById('mb-days') as HTMLInputElement).value = '3';
      (document.getElementById('mb-charger') as HTMLInputElement).value = '40';
      (document.getElementById('mb-batt') as HTMLInputElement).value = '200';
      document.querySelectorAll('.mb-in').forEach(el => { el.addEventListener('input', calcMB); el.addEventListener('change', calcMB); });
      calcMB();
    }, 50);
  </script>
</CalculatorLayout>
