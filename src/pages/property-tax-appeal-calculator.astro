---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Property Tax Appeal Calculator";
const description = "Estimate tax savings from a reduced property assessment, evaluate appeal success probability, and perform cost-benefit analysis.";
const relatedCalcs = [
  { name: "Property Tax", url: "/property-tax-calculator", description: "Property tax estimate." },
  { name: "Home Equity", url: "/home-equity-calculator", description: "Home equity analysis." },
  { name: "Home Affordability", url: "/home-affordability-calculator", description: "Home affordability." },
  { name: "Estate Tax", url: "/estate-tax-calculator", description: "Estate tax planning." },
  { name: "Income Tax", url: "/income-tax-calculator", description: "Income tax estimate." },
  { name: "Mortgage", url: "/mortgage-calculator", description: "Mortgage payments." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Property Tax Appeal Calculator" keywords="property tax appeal, assessment reduction, tax savings, property valuation, appeal cost benefit" breadcrumbs={[{ name: "Property Tax Appeal", url: "/property-tax-appeal-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Property Tax Appeal Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate potential savings from appealing your property tax assessment and weigh the costs.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Current Assessment ($)</label><input type="number" id="pt2-current" class="pt2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="400000" min="0" step="5000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Target Assessment ($)</label><input type="number" id="pt2-target" class="pt2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="350000" min="0" step="5000"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Tax Rate (per $100)</label><input type="number" id="pt2-rate" class="pt2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1.25" min="0" max="10" step="0.01"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Appeal Filing Cost ($)</label><input type="number" id="pt2-filing" class="pt2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" step="25"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Appraisal Cost ($)</label><input type="number" id="pt2-appraisal" class="pt2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="400" min="0" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Attorney Fee ($)</label><input type="number" id="pt2-attorney" class="pt2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="100"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Estimated Success Probability (%)</label><input type="number" id="pt2-prob" class="pt2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="60" min="0" max="100" step="5"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Annual Tax Savings (if successful)</div>
          <div class="text-5xl font-extrabold font-mono" id="pt2-savings">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Current Annual Tax</div><div class="text-xl font-bold font-mono" id="pt2-curtax">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Reduced Annual Tax</div><div class="text-xl font-bold font-mono" id="pt2-newtax">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Appeal Cost</div><div class="text-xl font-bold font-mono" id="pt2-appealcost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Expected Value</div><div class="text-xl font-bold font-mono" id="pt2-ev">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Net Benefit (Year 1)</div><div class="text-xl font-bold font-mono" id="pt2-netbenefit">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">5-Year Savings</div><div class="text-xl font-bold font-mono" id="pt2-fiveyear">$0</div></div>
        </div>
        <div class="p-4 rounded-xl text-center" id="pt2-status-box"><div class="font-bold text-sm" id="pt2-status">-</div></div>
      </div>
      <ShareButton calculatorId="property-tax-appeal" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPT2() {
      const current = parseFloat((document.getElementById('pt2-current') as HTMLInputElement).value) || 0;
      const target = parseFloat((document.getElementById('pt2-target') as HTMLInputElement).value) || 0;
      const rate = parseFloat((document.getElementById('pt2-rate') as HTMLInputElement).value) || 0;
      const filing = parseFloat((document.getElementById('pt2-filing') as HTMLInputElement).value) || 0;
      const appraisal = parseFloat((document.getElementById('pt2-appraisal') as HTMLInputElement).value) || 0;
      const attorney = parseFloat((document.getElementById('pt2-attorney') as HTMLInputElement).value) || 0;
      const prob = parseFloat((document.getElementById('pt2-prob') as HTMLInputElement).value) || 0;

      const currentTax = current * (rate / 100);
      const targetTax = target * (rate / 100);
      const annualSavings = currentTax - targetTax;
      const totalAppealCost = filing + appraisal + attorney;
      const expectedValue = annualSavings * (prob / 100) - totalAppealCost;
      const netBenefitYr1 = annualSavings - totalAppealCost;
      const fiveYearSavings = annualSavings * 5 - totalAppealCost;

      const fmt = (v: number) => (v >= 0 ? '$' : '-$') + Math.abs(v).toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('pt2-savings')!.textContent = '$' + annualSavings.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('pt2-curtax')!.textContent = '$' + currentTax.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('pt2-newtax')!.textContent = '$' + targetTax.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('pt2-appealcost')!.textContent = '$' + totalAppealCost.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('pt2-ev')!.textContent = fmt(expectedValue);
      document.getElementById('pt2-netbenefit')!.textContent = fmt(netBenefitYr1);
      document.getElementById('pt2-fiveyear')!.textContent = fmt(fiveYearSavings);

      let status: string, color: string;
      if (expectedValue > totalAppealCost) { status = 'Strong case — expected value well exceeds costs'; color = 'bg-green-50 text-green-800'; }
      else if (expectedValue > 0) { status = 'Positive expected value — appeal recommended'; color = 'bg-blue-50 text-blue-800'; }
      else if (fiveYearSavings > 0) { status = 'Break-even in year 1 unlikely but beneficial long-term'; color = 'bg-yellow-50 text-yellow-800'; }
      else { status = 'Appeal costs may exceed potential savings'; color = 'bg-red-50 text-red-800'; }

      document.getElementById('pt2-status')!.textContent = status;
      document.getElementById('pt2-status-box')!.className = `p-4 rounded-xl text-center ${color}`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.pt2-in').forEach(el => { el.addEventListener('input', calcPT2); el.addEventListener('change', calcPT2); });
      calcPT2();
    }, 50);
  </script>
</CalculatorLayout>
