---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Charitable Donation Calculator - Tax Savings from Giving";
const description = "Calculate the tax benefit of charitable donations based on your tax bracket, donation amount, and whether you itemize deductions.";

const relatedCalcs = [
  { name: "Income Tax", url: "/income-tax-calculator", description: "Tax estimate." },
  { name: "Tax Bracket", url: "/tax-bracket-calculator", description: "Tax brackets." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Net Worth", url: "/net-worth-calculator", description: "Track net worth." },
  { name: "Estate Planning", url: "/estate-planning-calculator", description: "Estate planning." },
  { name: "Financial Independence", url: "/financial-independence-calculator", description: "FIRE planning." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Charitable Donation Calculator" keywords="charitable donation calculator, tax deduction, donation tax savings, itemized deduction, charitable giving, tax benefit" breadcrumbs={[{ name: "Charitable Donation", url: "/charitable-donation-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Charitable Donation Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">See how much your charitable donations save you in taxes and understand the true after-tax cost of giving.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Total Donation Amount</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="ch-donation" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5000" min="0" step="100">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Federal Tax Bracket</label>
            <select id="ch-bracket" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="10">10%</option>
              <option value="12">12%</option>
              <option value="22" selected>22%</option>
              <option value="24">24%</option>
              <option value="32">32%</option>
              <option value="35">35%</option>
              <option value="37">37%</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">State Tax Rate (%)</label>
            <div class="relative">
              <input type="number" id="ch-state-tax" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="5" min="0" max="15" step="0.5">
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-text-muted">%</span>
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Deduction Method</label>
            <select id="ch-method" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="itemize" selected>Itemize Deductions</option>
              <option value="standard">Standard Deduction</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Filing Status</label>
            <select id="ch-filing" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="single" selected>Single</option>
              <option value="married">Married Filing Jointly</option>
            </select>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Tax Savings</div>
            <div class="text-5xl font-extrabold font-mono" id="ch-savings">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">After-Tax Cost</div>
              <div class="text-xl font-bold text-secondary" id="ch-cost">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Effective Discount</div>
              <div class="text-xl font-bold text-green-600" id="ch-discount">0%</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Federal Savings</div>
              <div class="text-xl font-bold" id="ch-federal">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">State Savings</div>
              <div class="text-xl font-bold" id="ch-state">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Note</div>
            <div class="text-sm font-medium" id="ch-note">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="charitable-donation" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Tax Benefits of Charitable Giving</h2>
      <p>If you itemize deductions, charitable donations reduce your taxable income. The higher your tax bracket, the more you save. However, you must exceed the standard deduction for itemizing to provide a benefit.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Donation Strategies</h3>
      <p>Consider <strong>bunching donations</strong> into one year to exceed the standard deduction, then taking the standard deduction in alternate years. Donating appreciated stocks avoids capital gains tax while providing a full deduction.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcCH() {
      const donation = parseFloat((document.getElementById('ch-donation') as HTMLInputElement).value) || 0;
      const bracket = (parseFloat((document.getElementById('ch-bracket') as HTMLSelectElement).value) || 22) / 100;
      const stateTax = (parseFloat((document.getElementById('ch-state-tax') as HTMLInputElement).value) || 0) / 100;
      const method = (document.getElementById('ch-method') as HTMLSelectElement).value;
      const filing = (document.getElementById('ch-filing') as HTMLSelectElement).value;

      // Standard deduction 2024
      const standardDed = filing === 'married' ? 29200 : 14600;

      let federalSavings = 0;
      let stateSavings = 0;
      let note = '';

      if (method === 'itemize') {
        federalSavings = donation * bracket;
        stateSavings = donation * stateTax;
        note = 'Tax savings apply when your total itemized deductions exceed the standard deduction.';
      } else {
        // Standard deduction - no charitable benefit for most
        // (Above-the-line $300/$600 deduction expired after 2021)
        federalSavings = 0;
        stateSavings = 0;
        note = 'Taking the standard deduction (' + fmt(standardDed) + '). No federal tax benefit from donations unless you itemize.';
      }

      const totalSavings = federalSavings + stateSavings;
      const afterTaxCost = donation - totalSavings;
      const effectiveDiscount = donation > 0 ? (totalSavings / donation) * 100 : 0;

      document.getElementById('ch-savings')!.textContent = fmt(totalSavings);
      document.getElementById('ch-cost')!.textContent = fmt(afterTaxCost);
      document.getElementById('ch-discount')!.textContent = effectiveDiscount.toFixed(1) + '%';
      document.getElementById('ch-federal')!.textContent = fmt(federalSavings);
      document.getElementById('ch-state')!.textContent = fmt(stateSavings);
      document.getElementById('ch-note')!.textContent = note;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['ch-donation', 'ch-state-tax'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcCH); el.addEventListener('change', calcCH); }
      });
      ['ch-bracket', 'ch-method', 'ch-filing'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('change', calcCH); }
      });
      calcCH();
    }, 50);
  </script>
</CalculatorLayout>
