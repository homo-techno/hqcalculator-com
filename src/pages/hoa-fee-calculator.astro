---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "HOA Fee Calculator";
const description = "Calculate HOA budget breakdown, reserve study adequacy, special assessment risk, and per-unit fee allocation.";
const relatedCalcs = [
  { name: "Property Tax", url: "/property-tax-calculator", description: "Property tax estimate." },
  { name: "Home Affordability", url: "/home-affordability-calculator", description: "Home affordability." },
  { name: "Mortgage", url: "/mortgage-calculator", description: "Mortgage payments." },
  { name: "Home Equity", url: "/home-equity-calculator", description: "Home equity analysis." },
  { name: "Closing Cost", url: "/closing-cost-calculator", description: "Closing cost estimate." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="HOA Fee Calculator" keywords="HOA fee, homeowners association, HOA budget, reserve fund, special assessment, per unit cost" breadcrumbs={[{ name: "HOA Fee", url: "/hoa-fee-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">HOA Fee Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Analyze HOA budget allocation, reserve fund health, and assess special assessment risk.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Total Units</label><input type="number" id="hf2-units" class="hf2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="50" min="1" max="1000" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Monthly HOA Fee ($)</label><input type="number" id="hf2-fee" class="hf2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="350" min="0" step="25"></div>
        </div>
        <h3 class="font-semibold text-sm text-text">Annual Budget Allocation</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Insurance ($)</label><input type="number" id="hf2-ins" class="hf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="25000" min="0" step="1000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Landscaping ($)</label><input type="number" id="hf2-landscape" class="hf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="18000" min="0" step="1000"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Utilities / Common ($)</label><input type="number" id="hf2-utilities" class="hf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="30000" min="0" step="1000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Management ($)</label><input type="number" id="hf2-mgmt" class="hf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="24000" min="0" step="1000"></div>
        </div>
        <h3 class="font-semibold text-sm text-text">Reserve Study</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Current Reserve Balance ($)</label><input type="number" id="hf2-reserve" class="hf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="120000" min="0" step="5000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Recommended Reserve ($)</label><input type="number" id="hf2-target" class="hf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200000" min="0" step="5000"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Annual HOA Budget</div>
          <div class="text-5xl font-extrabold font-mono" id="hf2-budget">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Per Unit</div><div class="text-xl font-bold font-mono" id="hf2-perunit">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Per Unit</div><div class="text-xl font-bold font-mono" id="hf2-annualunit">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Reserve Funded %</div><div class="text-xl font-bold font-mono" id="hf2-funded">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Reserve Shortfall</div><div class="text-xl font-bold font-mono" id="hf2-shortfall">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Reserve to Expenses</div><div class="text-xl font-bold font-mono" id="hf2-ratio">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Assessment Risk</div><div class="text-xl font-bold font-mono" id="hf2-risk">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="hoa-fee" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcHF2() {
      const units = parseFloat((document.getElementById('hf2-units') as HTMLInputElement).value) || 1;
      const fee = parseFloat((document.getElementById('hf2-fee') as HTMLInputElement).value) || 0;
      const ins = parseFloat((document.getElementById('hf2-ins') as HTMLInputElement).value) || 0;
      const landscape = parseFloat((document.getElementById('hf2-landscape') as HTMLInputElement).value) || 0;
      const utilities = parseFloat((document.getElementById('hf2-utilities') as HTMLInputElement).value) || 0;
      const mgmt = parseFloat((document.getElementById('hf2-mgmt') as HTMLInputElement).value) || 0;
      const reserve = parseFloat((document.getElementById('hf2-reserve') as HTMLInputElement).value) || 0;
      const target = parseFloat((document.getElementById('hf2-target') as HTMLInputElement).value) || 0;

      const annualBudget = fee * 12 * units;
      const totalExpenses = ins + landscape + utilities + mgmt;
      const annualPerUnit = fee * 12;
      const fundedPct = target > 0 ? (reserve / target) * 100 : 0;
      const shortfall = Math.max(0, target - reserve);
      const reserveToExpenses = totalExpenses > 0 ? (reserve / totalExpenses) * 100 : 0;

      let risk = 'Low';
      if (fundedPct < 30) risk = 'High';
      else if (fundedPct < 50) risk = 'Moderate';
      else if (fundedPct < 70) risk = 'Low-Mod';

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('hf2-budget')!.textContent = fmt(annualBudget);
      document.getElementById('hf2-perunit')!.textContent = '$' + fee.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('hf2-annualunit')!.textContent = fmt(annualPerUnit);
      document.getElementById('hf2-funded')!.textContent = fundedPct.toFixed(1) + '%';
      document.getElementById('hf2-shortfall')!.textContent = fmt(shortfall);
      document.getElementById('hf2-ratio')!.textContent = reserveToExpenses.toFixed(0) + '%';
      document.getElementById('hf2-risk')!.textContent = risk;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.hf2-in').forEach(el => { el.addEventListener('input', calcHF2); el.addEventListener('change', calcHF2); });
      calcHF2();
    }, 50);
  </script>
</CalculatorLayout>
