---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Salon Revenue Calculator - Revenue Projection from Services & Staff";
const description = "Project salon revenue based on number of stylists, services offered, chair utilization rate, and average ticket price.";
const relatedCalcs = [
  { name: "Nail Salon Pricing Calculator", url: "/nail-salon-pricing-calculator", description: "Nail service pricing." },
  { name: "Beauty Budget Calculator", url: "/beauty-budget-calculator", description: "Beauty spending breakdown." },
  { name: "Hair Color Mixing Calculator", url: "/hair-color-mixing-calculator", description: "Hair dye mixing ratios." },
  { name: "Hair Developer Calculator", url: "/hair-developer-calculator", description: "Developer volume selection." },
  { name: "Wax Quantity Calculator", url: "/wax-quantity-calculator", description: "Wax amount by body area." },
  { name: "Eyelash Extension Calculator", url: "/eyelash-extension-calculator", description: "Lash extension selection." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Salon Revenue Calculator" keywords="salon revenue, salon business, chair utilization, salon income, salon profit, beauty business, salon projection" breadcrumbs={[{ name: "Salon Revenue", url: "/salon-revenue-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Salon Revenue Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Project your salon revenue based on staff, services, and utilization rate.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Number of Stylists</label><input type="number" id="slr-stylists" class="slr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="1" max="50" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Working Days / Week</label><input type="number" id="slr-days" class="slr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="1" max="7" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Hours Per Day</label><input type="number" id="slr-hours" class="slr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="9" min="4" max="14" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Avg Service Duration (min)</label><input type="number" id="slr-duration" class="slr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="60" min="15" max="240" step="15"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Avg Ticket Price ($)</label><input type="number" id="slr-ticket" class="slr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="85" min="10" max="500" step="5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Chair Utilization (%)</label><input type="number" id="slr-util" class="slr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="75" min="10" max="100" step="5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Retail Product Sales ($/day)</label><input type="number" id="slr-retail" class="slr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="150" min="0" max="2000" step="25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Overhead / Expenses (%)</label><input type="number" id="slr-overhead" class="slr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="55" min="10" max="90" step="5"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Monthly Gross Revenue</div>
          <div class="text-5xl font-extrabold font-mono" id="slr-monthly">$0</div>
          <div class="text-sm text-blue-200 mt-1">services + retail</div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weekly Revenue</div><div class="text-xl font-bold" id="slr-weekly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Revenue</div><div class="text-xl font-bold" id="slr-annual">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Net Profit</div><div class="text-xl font-bold" id="slr-profit">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Clients / Day</div><div class="text-xl font-bold" id="slr-clients">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Revenue / Stylist / Mo</div><div class="text-xl font-bold" id="slr-perstylist">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Net Profit</div><div class="text-xl font-bold" id="slr-annualprofit">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="salon-revenue" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Salon Revenue Planning</h2>
      <p>Salon revenue depends on several key factors: number of service providers, chair utilization rate, average ticket price, and retail sales. Industry average chair utilization is 70-80%. Overhead typically includes rent (10-15%), product costs (8-12%), staff compensation (35-50%), and utilities/insurance (5-10%). Retail product sales can add 10-20% to total revenue. Increasing utilization rate by even 5% can significantly impact monthly income.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSLR() {
      const stylists = parseInt((document.getElementById('slr-stylists') as HTMLInputElement).value) || 1;
      const days = parseInt((document.getElementById('slr-days') as HTMLInputElement).value) || 5;
      const hours = parseFloat((document.getElementById('slr-hours') as HTMLInputElement).value) || 8;
      const duration = parseFloat((document.getElementById('slr-duration') as HTMLInputElement).value) || 60;
      const ticket = parseFloat((document.getElementById('slr-ticket') as HTMLInputElement).value) || 50;
      const util = parseFloat((document.getElementById('slr-util') as HTMLInputElement).value) / 100 || 0.75;
      const retail = parseFloat((document.getElementById('slr-retail') as HTMLInputElement).value) || 0;
      const overhead = parseFloat((document.getElementById('slr-overhead') as HTMLInputElement).value) / 100 || 0.55;

      const slotsPerDay = (hours * 60) / duration;
      const clientsPerStylistPerDay = slotsPerDay * util;
      const totalClientsPerDay = clientsPerStylistPerDay * stylists;

      const dailyServiceRev = totalClientsPerDay * ticket;
      const dailyTotal = dailyServiceRev + retail;
      const weeklyRev = dailyTotal * days;
      const monthlyRev = weeklyRev * 4.33;
      const annualRev = monthlyRev * 12;
      const monthlyProfit = monthlyRev * (1 - overhead);
      const annualProfit = monthlyProfit * 12;
      const perStylist = monthlyRev / stylists;

      document.getElementById('slr-monthly')!.textContent = '$' + Math.round(monthlyRev).toLocaleString();
      document.getElementById('slr-weekly')!.textContent = '$' + Math.round(weeklyRev).toLocaleString();
      document.getElementById('slr-annual')!.textContent = '$' + Math.round(annualRev).toLocaleString();
      document.getElementById('slr-profit')!.textContent = '$' + Math.round(monthlyProfit).toLocaleString();
      document.getElementById('slr-clients')!.textContent = Math.round(totalClientsPerDay).toString();
      document.getElementById('slr-perstylist')!.textContent = '$' + Math.round(perStylist).toLocaleString();
      document.getElementById('slr-annualprofit')!.textContent = '$' + Math.round(annualProfit).toLocaleString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.slr-in').forEach(el => { el.addEventListener('input', calcSLR); el.addEventListener('change', calcSLR); });
      calcSLR();
    }, 50);
  </script>
</CalculatorLayout>
