---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Wire Size Calculator";
const description = "Calculate proper wire gauge (AWG) based on amperage, distance, and voltage for safe wiring.";
const relatedCalcs = [
  { name: "Ohm's Law", url: "/ohms-law-calculator", description: "Ohm's law." },
  { name: "Electrical Load", url: "/electrical-load-calculator", description: "Load." },
  { name: "Voltage Divider", url: "/voltage-divider-calculator", description: "Voltage." },
  { name: "Resistor Color", url: "/resistor-color-code-calculator", description: "Resistor." },
  { name: "Electricity Cost", url: "/electricity-cost-calculator", description: "Electric." },
  { name: "Solar Panel", url: "/solar-panel-calculator", description: "Solar." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Wire Size Calculator" keywords="wire size calculator, AWG calculator, wire gauge, ampacity, voltage drop, electrical wire" breadcrumbs={[{ name: "Wire Size", url: "/wire-size-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Wire Size Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Find the right wire gauge for your electrical project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Amperage (A)</label><input type="number" id="ws-amps" class="ws-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="20" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Voltage (V)</label>
            <select id="ws-volt" class="ws-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold">
              <option value="120" selected>120V</option>
              <option value="240">240V</option>
              <option value="12">12V DC</option>
              <option value="24">24V DC</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">One-Way Distance (ft)</label><input type="number" id="ws-dist" class="ws-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="1" step="5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Material</label>
            <select id="ws-mat" class="ws-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="copper" selected>Copper</option>
              <option value="aluminum">Aluminum</option>
            </select>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Recommended Wire Size</div>
          <div class="text-5xl font-extrabold font-mono" id="ws-result">0 AWG</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Voltage Drop</div><div class="text-lg font-bold font-mono" id="ws-drop">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Max Amps</div><div class="text-lg font-bold font-mono" id="ws-max">0 A</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Wire Dia.</div><div class="text-lg font-bold font-mono" id="ws-dia">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">AWG Reference (Copper)</h3>
          <div class="text-xs space-y-1">
            <div class="flex justify-between"><span>14 AWG</span><span>15A / 0.0642Ω/ft</span></div>
            <div class="flex justify-between"><span>12 AWG</span><span>20A / 0.0404Ω/ft</span></div>
            <div class="flex justify-between"><span>10 AWG</span><span>30A / 0.0254Ω/ft</span></div>
            <div class="flex justify-between"><span>8 AWG</span><span>40A / 0.0160Ω/ft</span></div>
            <div class="flex justify-between"><span>6 AWG</span><span>55A / 0.0100Ω/ft</span></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="wire-size" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    const awgData = [
      { awg: 14, ampsCu: 15, ampsAl: 12, rCu: 0.00323, rAl: 0.00530, dia: 1.628 },
      { awg: 12, ampsCu: 20, ampsAl: 15, rCu: 0.00203, rAl: 0.00334, dia: 2.053 },
      { awg: 10, ampsCu: 30, ampsAl: 25, rCu: 0.00128, rAl: 0.00210, dia: 2.588 },
      { awg: 8, ampsCu: 40, ampsAl: 35, rCu: 0.000805, rAl: 0.00132, dia: 3.264 },
      { awg: 6, ampsCu: 55, ampsAl: 45, rCu: 0.000507, rAl: 0.000831, dia: 4.115 },
      { awg: 4, ampsCu: 70, ampsAl: 60, rCu: 0.000319, rAl: 0.000523, dia: 5.189 },
      { awg: 2, ampsCu: 95, ampsAl: 80, rCu: 0.000201, rAl: 0.000329, dia: 6.544 },
      { awg: 1, ampsCu: 110, ampsAl: 95, rCu: 0.000159, rAl: 0.000261, dia: 7.348 },
    ];
    function calcWS() {
      const amps = parseFloat((document.getElementById('ws-amps') as HTMLInputElement).value) || 0;
      const volt = parseFloat((document.getElementById('ws-volt') as HTMLSelectElement).value);
      const dist = parseFloat((document.getElementById('ws-dist') as HTMLInputElement).value) || 0;
      const mat = (document.getElementById('ws-mat') as HTMLSelectElement).value;
      const maxDrop = 0.03;
      let selected = awgData[awgData.length - 1];
      for (const wire of awgData) {
        const maxAmps = mat === 'copper' ? wire.ampsCu : wire.ampsAl;
        const r = mat === 'copper' ? wire.rCu : wire.rAl;
        const vDrop = 2 * dist * r * amps;
        const dropPct = volt > 0 ? vDrop / volt : 0;
        if (maxAmps >= amps && dropPct <= maxDrop) { selected = wire; break; }
      }
      const rSel = mat === 'copper' ? selected.rCu : selected.rAl;
      const vDrop = 2 * dist * rSel * amps;
      const dropPct = volt > 0 ? (vDrop / volt) * 100 : 0;
      const maxAmps = mat === 'copper' ? selected.ampsCu : selected.ampsAl;
      document.getElementById('ws-result')!.textContent = selected.awg + ' AWG';
      document.getElementById('ws-drop')!.textContent = dropPct.toFixed(1) + '%';
      document.getElementById('ws-max')!.textContent = maxAmps + ' A';
      document.getElementById('ws-dia')!.textContent = selected.dia.toFixed(1) + ' mm';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ws-in').forEach(el => { el.addEventListener('input', calcWS); el.addEventListener('change', calcWS); });
      calcWS();
    }, 50);
  </script>
</CalculatorLayout>
