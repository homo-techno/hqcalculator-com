---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Mineral Reserves Calculator - Tonnage, Grade & Mine Life";
const description = "Calculate mineral reserves from tonnage, grade, and recovery rate. Classify measured, indicated, and inferred resources with mine life estimation.";
const relatedCalcs = [
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage math." },
  { name: "Density Calculator", url: "/density-calculator", description: "Material density." },
  { name: "Volume Calculator", url: "/volume-calculator", description: "Volume shapes." },
  { name: "Excavation Calculator", url: "/excavation-calculator", description: "Earthwork volumes." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight units." },
  { name: "Gravel Calculator", url: "/gravel-calculator", description: "Material tonnage." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Mineral Reserves Calculator" keywords="mineral reserves, tonnage, grade, recovery, mine life, measured, indicated, inferred, mining resources" breadcrumbs={[{ name: "Mineral Reserves", url: "/mineral-reserves-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Mineral Reserves Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate mineral reserves, recoverable metal, mine life, and resource classification for project evaluation.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <h3 class="text-sm font-semibold text-text">Resource Classification</h3>
        <div class="grid grid-cols-3 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Measured (Mt)</label>
            <input type="number" id="mr2-measured" class="mr2-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="20" min="0" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Indicated (Mt)</label>
            <input type="number" id="mr2-indicated" class="mr2-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="35" min="0" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Inferred (Mt)</label>
            <input type="number" id="mr2-inferred" class="mr2-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="15" min="0" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Average Grade (g/t or %)</label>
            <input type="number" id="mr2-grade" class="mr2-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="1.5" min="0" step="0.01">
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">Grade Unit</label>
            <select id="mr2-unit" class="mr2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="gt">g/t (precious metals)</option>
              <option value="pct">% (base metals)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Recovery Rate (%)</label>
            <input type="number" id="mr2-recovery" class="mr2-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="88" min="0" max="100" step="1">
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">Mining Dilution (%)</label>
            <input type="number" id="mr2-dilution" class="mr2-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="10" min="0" max="100" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Annual Production (Mt/yr)</label>
            <input type="number" id="mr2-annual" class="mr2-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="5" min="0" step="0.5">
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">Metal Price ($/oz or $/t)</label>
            <input type="number" id="mr2-price" class="mr2-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="1900" min="0" step="10">
          </div>
        </div>
      </div>

      <div class="mt-6 space-y-3">
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Mineral Resource</div>
          <div class="text-4xl font-extrabold" id="mr2-total">0 Mt</div>
          <div class="text-sm text-blue-200 mt-1">million tonnes</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Proven + Probable Reserve</div>
            <div class="text-xl font-bold" id="mr2-reserve">0 Mt</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Contained Metal</div>
            <div class="text-xl font-bold" id="mr2-contained">0</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Recoverable Metal</div>
            <div class="text-xl font-bold" id="mr2-recoverable">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Diluted Grade</div>
            <div class="text-xl font-bold" id="mr2-dilgrade">0</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Mine Life</div>
            <div class="text-xl font-bold" id="mr2-life">0 years</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">In-Situ Value</div>
            <div class="text-xl font-bold text-secondary" id="mr2-value">$0</div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="mineral-reserves" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Mineral Reserve Calculation</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>Proven Reserve</strong> = Measured x (1 - Mining Loss Factor)</p>
        <p><strong>Probable Reserve</strong> = Indicated x (1 - Mining Loss Factor)</p>
        <p><strong>Diluted Grade</strong> = Original Grade x (1 - Dilution%)</p>
        <p><strong>Recoverable Metal</strong> = Tonnage x Diluted Grade x Recovery%</p>
        <p><strong>Mine Life</strong> = Total Reserve / Annual Production</p>
      </div>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcMR2() {
      const measured = parseFloat((document.getElementById('mr2-measured') as HTMLInputElement).value) || 0;
      const indicated = parseFloat((document.getElementById('mr2-indicated') as HTMLInputElement).value) || 0;
      const inferred = parseFloat((document.getElementById('mr2-inferred') as HTMLInputElement).value) || 0;
      const grade = parseFloat((document.getElementById('mr2-grade') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('mr2-unit') as HTMLSelectElement).value;
      const recovery = (parseFloat((document.getElementById('mr2-recovery') as HTMLInputElement).value) || 0) / 100;
      const dilution = (parseFloat((document.getElementById('mr2-dilution') as HTMLInputElement).value) || 0) / 100;
      const annual = parseFloat((document.getElementById('mr2-annual') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('mr2-price') as HTMLInputElement).value) || 0;

      const totalResource = measured + indicated + inferred;
      const reserve = measured + indicated;
      const dilutedGrade = grade * (1 - dilution);

      let contained: number;
      let recoverable: number;
      let metalUnit: string;
      let insituValue: number;

      if (unit === 'gt') {
        contained = totalResource * 1e6 * grade / 1e6;
        const recoverableMetal = reserve * 1e6 * dilutedGrade * recovery;
        recoverable = recoverableMetal / 1e6;
        metalUnit = 'kg';
        const ozRecoverable = recoverableMetal / 31.1035;
        insituValue = ozRecoverable * price;
      } else {
        contained = totalResource * 1e6 * (grade / 100) / 1e6;
        recoverable = reserve * 1e6 * (dilutedGrade / 100) * recovery / 1e6;
        metalUnit = 'Mt';
        insituValue = recoverable * 1e6 * price;
      }

      const mineLife = annual > 0 ? reserve / annual : 0;

      const fmt = (n: number) => n.toLocaleString('en-US', { maximumFractionDigits: 2 });
      const fmtLg = (n: number) => n >= 1e9 ? '$' + (n / 1e9).toFixed(2) + 'B' : n >= 1e6 ? '$' + (n / 1e6).toFixed(2) + 'M' : '$' + fmt(n);

      document.getElementById('mr2-total')!.textContent = fmt(totalResource) + ' Mt';
      document.getElementById('mr2-reserve')!.textContent = fmt(reserve) + ' Mt';
      document.getElementById('mr2-contained')!.textContent = fmt(contained) + ' ' + metalUnit;
      document.getElementById('mr2-recoverable')!.textContent = fmt(recoverable) + ' ' + metalUnit;
      document.getElementById('mr2-dilgrade')!.textContent = fmt(dilutedGrade) + (unit === 'gt' ? ' g/t' : '%');
      document.getElementById('mr2-life')!.textContent = fmt(mineLife) + ' years';
      document.getElementById('mr2-value')!.textContent = fmtLg(insituValue);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.mr2-in').forEach(el => { el.addEventListener('input', calcMR2); el.addEventListener('change', calcMR2); });
      calcMR2();
    }, 50);
  </script>
</CalculatorLayout>
