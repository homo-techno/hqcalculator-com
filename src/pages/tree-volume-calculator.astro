---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Tree Volume Calculator - Board Feet & Cubic Meters";
const description = "Calculate standing tree volume from DBH and height using Doyle, Scribner, and International 1/4-inch log rules. Get board feet and cubic meter estimates.";
const relatedCalcs = [
  { name: "Lumber Calculator", url: "/lumber-calculator", description: "Calculate lumber needs for projects." },
  { name: "Volume Calculator", url: "/volume-calculator", description: "General volume calculations." },
  { name: "Carbon Footprint", url: "/carbon-footprint-calculator", description: "Estimate carbon emissions." },
  { name: "Firewood Calculator", url: "/firewood-calculator", description: "Firewood cord and BTU needs." },
  { name: "Area Calculator", url: "/area-calculator", description: "Calculate area of shapes." },
  { name: "Density Calculator", url: "/density-calculator", description: "Compute material density." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Tree Volume Calculator" keywords="tree volume calculator, board feet, DBH, log rule, Doyle, Scribner, cubic meters, standing timber" breadcrumbs={[{ name: "Tree Volume", url: "/tree-volume-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Tree Volume Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate standing tree volume from DBH and merchantable height using standard log rules.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">DBH (inches)</label>
            <input type="number" id="tv2-dbh" class="tv2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="18" min="6" max="120" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Merchantable Height (ft)</label>
            <input type="number" id="tv2-ht" class="tv2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="32" min="8" max="120" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of 16-ft Logs</label>
            <input type="number" id="tv2-logs" class="tv2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="1" max="8" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Form Class (%)</label>
            <input type="number" id="tv2-form" class="tv2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="78" min="60" max="90" step="1">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Doyle Log Rule (Board Feet)</div>
          <div class="text-5xl font-extrabold font-mono" id="tv2-doyle">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Scribner BF</div>
            <div class="text-xl font-bold font-mono" id="tv2-scrib">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">International 1/4"</div>
            <div class="text-xl font-bold font-mono" id="tv2-intl">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Cubic Meters</div>
            <div class="text-xl font-bold font-mono" id="tv2-cbm">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Cubic Feet</div>
            <div class="text-xl font-bold font-mono" id="tv2-cuft">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Basal Area (sq ft)</div>
            <div class="text-xl font-bold font-mono" id="tv2-ba">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="tree-volume" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcTV2() {
      const dbh = parseFloat((document.getElementById('tv2-dbh') as HTMLInputElement).value) || 18;
      const ht = parseFloat((document.getElementById('tv2-ht') as HTMLInputElement).value) || 32;
      const logs = parseInt((document.getElementById('tv2-logs') as HTMLInputElement).value) || 2;
      const form = parseFloat((document.getElementById('tv2-form') as HTMLInputElement).value) || 78;
      const dib = dbh * (form / 100);
      const doyle = logs * ((dib - 4) * (dib - 4)) / 16 * 16;
      const scrib = logs * (0.79 * dib * dib - 2 * dib - 4) / 16 * 16;
      const intl = logs * (0.905 * dib * dib - 1.629 * dib) / 16 * 16;
      const basalArea = Math.PI * (dbh / 2) * (dbh / 2) / 144;
      const cuft = basalArea * ht * 0.65;
      const cbm = cuft * 0.0283168;
      document.getElementById('tv2-doyle')!.textContent = Math.round(doyle).toLocaleString() + ' BF';
      document.getElementById('tv2-scrib')!.textContent = Math.round(scrib).toLocaleString();
      document.getElementById('tv2-intl')!.textContent = Math.round(intl).toLocaleString();
      document.getElementById('tv2-cbm')!.textContent = cbm.toFixed(2);
      document.getElementById('tv2-cuft')!.textContent = cuft.toFixed(1);
      document.getElementById('tv2-ba')!.textContent = basalArea.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.tv2-in').forEach(el => { el.addEventListener('input', calcTV2); el.addEventListener('change', calcTV2); });
      calcTV2();
    }, 50);
  </script>
</CalculatorLayout>
