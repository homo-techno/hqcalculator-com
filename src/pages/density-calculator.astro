---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Density Calculator - Mass, Volume & Density";
const description = "Calculate density, mass, or volume using the density formula. Includes common material densities.";
const relatedCalcs = [
  { name: "Volume Calculator", url: "/volume-calculator", description: "3D volumes." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight units." },
  { name: "Force Calculator", url: "/force-calculator", description: "Force." },
  { name: "Pressure Converter", url: "/pressure-converter", description: "Pressure." },
  { name: "Length Converter", url: "/length-converter", description: "Length units." },
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Scientific." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Density Calculator" keywords="density calculator, mass volume density, density formula, specific gravity, material density" breadcrumbs={[{ name: "Density Calculator", url: "/density-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Density Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate density, mass, or volume — enter any two to find the third.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Solve For</label><select id="de-solve" class="w-full px-4 py-3 border border-border rounded-xl text-lg"><option value="density" selected>Density</option><option value="mass">Mass</option><option value="volume">Volume</option></select></div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Mass (kg)</label><input type="number" id="de-m" class="de-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Volume (m³)</label><input type="number" id="de-v" class="de-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.5" min="0" step="0.01"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1" id="de-label">Density</div>
          <div class="text-4xl font-extrabold font-mono" id="de-result">0</div>
          <div class="text-sm text-blue-200 mt-1" id="de-unit">kg/m³</div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-3">Common Material Densities (kg/m³)</h3>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <div class="flex justify-between"><span>Water</span><span class="font-bold">1,000</span></div>
            <div class="flex justify-between"><span>Steel</span><span class="font-bold">7,850</span></div>
            <div class="flex justify-between"><span>Aluminum</span><span class="font-bold">2,700</span></div>
            <div class="flex justify-between"><span>Gold</span><span class="font-bold">19,300</span></div>
            <div class="flex justify-between"><span>Concrete</span><span class="font-bold">2,400</span></div>
            <div class="flex justify-between"><span>Wood (Oak)</span><span class="font-bold">750</span></div>
            <div class="flex justify-between"><span>Air (sea level)</span><span class="font-bold">1.225</span></div>
            <div class="flex justify-between"><span>Ice</span><span class="font-bold">917</span></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="density" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDensity() {
      const solve = (document.getElementById('de-solve') as HTMLSelectElement).value;
      const m = parseFloat((document.getElementById('de-m') as HTMLInputElement).value) || 0;
      const v = parseFloat((document.getElementById('de-v') as HTMLInputElement).value) || 0;
      let result: number;
      if (solve === 'density') { result = v > 0 ? m / v : 0; document.getElementById('de-label')!.textContent = 'Density'; document.getElementById('de-unit')!.textContent = 'kg/m³'; }
      else if (solve === 'mass') { const d = m; result = d * v; document.getElementById('de-label')!.textContent = 'Mass'; document.getElementById('de-unit')!.textContent = 'kg'; }
      else { const d = m; result = d > 0 ? v / d : 0; document.getElementById('de-label')!.textContent = 'Volume'; document.getElementById('de-unit')!.textContent = 'm³'; }
      document.getElementById('de-result')!.textContent = result.toFixed(4);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.de-in').forEach(el => el.addEventListener('input', calcDensity)); document.getElementById('de-solve')!.addEventListener('change', calcDensity); calcDensity(); }, 50);
  </script>
</CalculatorLayout>
