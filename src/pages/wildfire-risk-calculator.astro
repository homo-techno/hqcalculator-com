---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Wildfire Risk Calculator - Fire Weather Index & Defensible Space";
const description = "Calculate fire weather index from temperature, humidity, wind, and drought conditions. Assess wildfire risk rating and defensible space needs.";
const relatedCalcs = [
  { name: "Air Quality Index", url: "/air-quality-index-calculator", description: "Air quality analysis." },
  { name: "Temperature Converter", url: "/temperature-converter", description: "Convert temperatures." },
  { name: "Carbon Footprint", url: "/carbon-footprint-calculator", description: "Estimate carbon emissions." },
  { name: "Evapotranspiration", url: "/evapotranspiration-calculator", description: "Water loss from plants." },
  { name: "Barometric Pressure", url: "/barometric-pressure-calculator", description: "Pressure calculations." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Plan your budget." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Wildfire Risk Calculator" keywords="wildfire risk, fire weather index, defensible space, fire danger rating, FWI, fire preparedness" breadcrumbs={[{ name: "Wildfire Risk", url: "/wildfire-risk-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Wildfire Risk Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Assess fire danger from weather conditions and plan defensible space around structures.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Temperature (F)</label>
            <input type="number" id="wr-temp" class="wr-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="90" min="0" max="130" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Relative Humidity (%)</label>
            <input type="number" id="wr-rh" class="wr-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="15" min="0" max="100" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Wind Speed (mph)</label>
            <input type="number" id="wr-wind" class="wr-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="15" min="0" max="100" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Days Since Rain</label>
            <input type="number" id="wr-drought" class="wr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="14" min="0" max="365" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Vegetation Type</label>
            <select id="wr-veg" class="wr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="1.5">Chaparral/Brush (high)</option>
              <option value="1.3">Grass (high spread)</option>
              <option value="1.0" selected>Mixed Forest</option>
              <option value="0.8">Hardwood Forest</option>
              <option value="0.5">Irrigated/Green</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Slope (%)</label>
            <input type="number" id="wr-slope" class="wr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="15" min="0" max="100" step="5">
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Structure Distance from Wildland (ft)</label>
          <input type="number" id="wr-dist" class="wr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" max="1000" step="10">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Fire Weather Index</div>
          <div class="text-5xl font-extrabold font-mono" id="wr-fwi">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Risk Rating</div>
            <div class="text-xl font-bold font-mono" id="wr-risk">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Spread Index</div>
            <div class="text-xl font-bold font-mono" id="wr-spread">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Burning Index</div>
            <div class="text-xl font-bold font-mono" id="wr-burn">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Defensible Space</div>
            <div class="text-xl font-bold font-mono" id="wr-space">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Space Adequate?</div>
            <div class="text-xl font-bold font-mono" id="wr-adequate">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="wildfire-risk" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcWR() {
      const temp = parseFloat((document.getElementById('wr-temp') as HTMLInputElement).value) || 90;
      const rh = parseFloat((document.getElementById('wr-rh') as HTMLInputElement).value) || 15;
      const wind = parseFloat((document.getElementById('wr-wind') as HTMLInputElement).value) || 15;
      const drought = parseFloat((document.getElementById('wr-drought') as HTMLInputElement).value) || 14;
      const vegFactor = parseFloat((document.getElementById('wr-veg') as HTMLSelectElement).value) || 1.0;
      const slope = parseFloat((document.getElementById('wr-slope') as HTMLInputElement).value) || 15;
      const structDist = parseFloat((document.getElementById('wr-dist') as HTMLInputElement).value) || 50;
      const tempFactor = Math.max(0, (temp - 50) / 60);
      const rhFactor = Math.max(0, (100 - rh) / 100);
      const windFactor = wind / 30;
      const droughtFactor = Math.min(1, drought / 30);
      const slopeFactor = 1 + (slope / 100) * 0.5;
      const fwi = (tempFactor * 25 + rhFactor * 25 + windFactor * 25 + droughtFactor * 25) * vegFactor * slopeFactor;
      const spreadIndex = wind * (1 - rh / 100) * vegFactor * slopeFactor;
      const burningIndex = fwi * 1.5;
      let risk = 'Low';
      if (fwi > 80) risk = 'Extreme';
      else if (fwi > 60) risk = 'Very High';
      else if (fwi > 40) risk = 'High';
      else if (fwi > 20) risk = 'Moderate';
      const defSpaceBase = 100;
      const defSpace = Math.round(defSpaceBase * slopeFactor * vegFactor);
      const adequate = structDist >= defSpace ? 'Yes' : 'No';
      document.getElementById('wr-fwi')!.textContent = fwi.toFixed(1);
      document.getElementById('wr-risk')!.textContent = risk;
      document.getElementById('wr-spread')!.textContent = spreadIndex.toFixed(1);
      document.getElementById('wr-burn')!.textContent = burningIndex.toFixed(1);
      document.getElementById('wr-space')!.textContent = defSpace + ' ft needed';
      document.getElementById('wr-adequate')!.textContent = adequate;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.wr-in').forEach(el => { el.addEventListener('input', calcWR); el.addEventListener('change', calcWR); });
      calcWR();
    }, 50);
  </script>
</CalculatorLayout>
