---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Takeoff Distance Calculator - Ground Roll & Obstacle Clearance";
const description = "Calculate takeoff ground roll distance from weight, altitude, and temperature. Includes obstacle clearance distance and runway length requirements.";
const relatedCalcs = [
  { name: "Acceleration", url: "/acceleration-calculator", description: "Acceleration calc." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed computations." },
  { name: "Force Calculator", url: "/force-calculator", description: "Force calculations." },
  { name: "Kinetic Energy", url: "/kinetic-energy-calculator", description: "Energy math." },
  { name: "Temperature Converter", url: "/temperature-converter", description: "Convert temps." },
  { name: "Pressure Converter", url: "/pressure-converter", description: "Pressure units." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Takeoff Distance Calculator" keywords="takeoff distance, ground roll, obstacle clearance, runway length, density altitude takeoff, aircraft performance" breadcrumbs={[{ name: "Takeoff Distance", url: "/takeoff-distance-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Takeoff Distance Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate takeoff ground roll and total distance to clear a 50-ft obstacle based on aircraft parameters.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label for="to2-broll" class="block text-sm font-medium text-text mb-1">Base Ground Roll at Sea Level, Std Day (ft)</label>
          <input type="number" id="to2-broll" class="to2-in w-full border border-border rounded-lg px-3 py-2" min="0" step="50" />
        </div>
        <div>
          <label for="to2-b50" class="block text-sm font-medium text-text mb-1">Base 50-ft Obstacle Distance (ft)</label>
          <input type="number" id="to2-b50" class="to2-in w-full border border-border rounded-lg px-3 py-2" min="0" step="50" />
        </div>
        <div>
          <label for="to2-wt" class="block text-sm font-medium text-text mb-1">Takeoff Weight (lbs)</label>
          <input type="number" id="to2-wt" class="to2-in w-full border border-border rounded-lg px-3 py-2" min="0" step="50" />
        </div>
        <div>
          <label for="to2-mgw" class="block text-sm font-medium text-text mb-1">Max Gross Weight (lbs)</label>
          <input type="number" id="to2-mgw" class="to2-in w-full border border-border rounded-lg px-3 py-2" min="0" step="50" />
        </div>
        <div>
          <label for="to2-elev" class="block text-sm font-medium text-text mb-1">Field Elevation (ft)</label>
          <input type="number" id="to2-elev" class="to2-in w-full border border-border rounded-lg px-3 py-2" min="0" max="14000" step="500" />
        </div>
        <div>
          <label for="to2-temp" class="block text-sm font-medium text-text mb-1">Temperature (Â°C)</label>
          <input type="number" id="to2-temp" class="to2-in w-full border border-border rounded-lg px-3 py-2" min="-40" max="50" step="1" />
        </div>
        <div>
          <label for="to2-hw" class="block text-sm font-medium text-text mb-1">Headwind (kts, negative = tailwind)</label>
          <input type="number" id="to2-hw" class="to2-in w-full border border-border rounded-lg px-3 py-2" step="1" />
        </div>
        <div>
          <label for="to2-surf" class="block text-sm font-medium text-text mb-1">Surface</label>
          <select id="to2-surf" class="to2-in w-full border border-border rounded-lg px-3 py-2">
            <option value="1.0" selected>Paved, Dry</option>
            <option value="1.1">Paved, Wet</option>
            <option value="1.2">Firm Turf</option>
            <option value="1.3">Soft Turf / Gravel</option>
            <option value="1.5">Wet Grass</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Ground Roll Required</div>
          <div class="text-5xl font-extrabold font-mono" id="to2-result">--</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">50-ft Obstacle Dist</div>
            <div class="text-xl font-bold font-mono" id="to2-obs">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Density Altitude</div>
            <div class="text-xl font-bold font-mono" id="to2-da">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Weight Factor</div>
            <div class="text-xl font-bold font-mono" id="to2-wf">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Recommended Runway</div>
            <div class="text-xl font-bold font-mono" id="to2-rec">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="takeoff-distance" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcTO2() {
      const bRoll = parseFloat((document.getElementById('to2-broll') as HTMLInputElement).value) || 1000;
      const b50 = parseFloat((document.getElementById('to2-b50') as HTMLInputElement).value) || 1800;
      const wt = parseFloat((document.getElementById('to2-wt') as HTMLInputElement).value) || 2400;
      const mgw = parseFloat((document.getElementById('to2-mgw') as HTMLInputElement).value) || 2550;
      const elev = parseFloat((document.getElementById('to2-elev') as HTMLInputElement).value) || 0;
      const temp = parseFloat((document.getElementById('to2-temp') as HTMLInputElement).value) || 15;
      const hw = parseFloat((document.getElementById('to2-hw') as HTMLInputElement).value) || 0;
      const surfFactor = parseFloat((document.getElementById('to2-surf') as HTMLSelectElement).value) || 1.0;

      // Density altitude approximation
      const isaTemp = 15 - (elev / 1000) * 1.98;
      const da = elev + 118.8 * ((temp + 273.15) - (isaTemp + 273.15));

      // Altitude factor: +12% per 1000 ft DA
      const altFactor = 1 + (da / 1000) * 0.12;

      // Weight factor: distance proportional to (wt/mgw)^2
      const wtFactor = Math.pow(wt / mgw, 2);

      // Headwind factor: 10% reduction per 9 kts headwind; 10% increase per 2 kts tailwind
      let windFactor = 1;
      if (hw > 0) windFactor = 1 - (hw / 9) * 0.10;
      else if (hw < 0) windFactor = 1 + (Math.abs(hw) / 2) * 0.10;
      windFactor = Math.max(windFactor, 0.3);

      const groundRoll = bRoll * altFactor * wtFactor * surfFactor * windFactor;
      const obsDist = b50 * altFactor * wtFactor * surfFactor * windFactor;

      // Recommended runway = 1.5x obstacle distance for safety
      const recommended = obsDist * 1.5;

      document.getElementById('to2-result')!.textContent = Math.round(groundRoll).toLocaleString() + ' ft';
      document.getElementById('to2-obs')!.textContent = Math.round(obsDist).toLocaleString() + ' ft';
      document.getElementById('to2-da')!.textContent = Math.round(da).toLocaleString() + ' ft';
      document.getElementById('to2-wf')!.textContent = wtFactor.toFixed(2) + 'x';
      document.getElementById('to2-rec')!.textContent = Math.round(recommended).toLocaleString() + ' ft';

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('to2-broll') as HTMLInputElement).value = '1000';
      (document.getElementById('to2-b50') as HTMLInputElement).value = '1800';
      (document.getElementById('to2-wt') as HTMLInputElement).value = '2400';
      (document.getElementById('to2-mgw') as HTMLInputElement).value = '2550';
      (document.getElementById('to2-elev') as HTMLInputElement).value = '3000';
      (document.getElementById('to2-temp') as HTMLInputElement).value = '30';
      (document.getElementById('to2-hw') as HTMLInputElement).value = '8';
      document.querySelectorAll('.to2-in').forEach(el => { el.addEventListener('input', calcTO2); el.addEventListener('change', calcTO2); });
      calcTO2();
    }, 50);
  </script>
</CalculatorLayout>
