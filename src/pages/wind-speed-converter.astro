---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Wind Speed Converter - Beaufort Scale & Unit Conversion";
const description = "Convert wind speed between m/s, km/h, mph, knots, and ft/s. See Beaufort scale classification and wind force effects.";
const relatedCalcs = [
  { name: "Wind Chill", url: "/wind-chill-calculator", description: "Wind chill factor." },
  { name: "Wind Power", url: "/wind-power-calculator", description: "Wind energy." },
  { name: "Hurricane Category", url: "/hurricane-category-calculator", description: "Hurricane scale." },
  { name: "Tornado Scale", url: "/tornado-scale-calculator", description: "Tornado EF scale." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed calculations." },
  { name: "Temperature Converter", url: "/temperature-converter", description: "Temperature units." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Wind Speed Converter" keywords="wind speed converter, Beaufort scale, knots to mph, m/s to mph, wind force, wind units" breadcrumbs={[{ name: "Wind Speed Converter", url: "/wind-speed-converter" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Wind Speed Converter</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Convert wind speed between units and see Beaufort scale classification with wind effects description.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Wind Speed</label><input type="number" id="wsc-val" class="wsc-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="25" min="0" step="0.1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Unit</label>
            <select id="wsc-unit" class="wsc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="mph">mph</option>
              <option value="kmh">km/h</option>
              <option value="ms">m/s</option>
              <option value="kn">knots</option>
              <option value="fts">ft/s</option>
            </select>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Beaufort Scale</div>
          <div class="text-4xl font-extrabold font-mono" id="wsc-result">--</div>
          <div class="text-sm text-blue-200 mt-1" id="wsc-name">--</div>
        </div>
        <div class="p-4 rounded-xl text-center" id="wsc-effect-box">
          <div class="font-bold text-sm" id="wsc-effect">--</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">mph</div><div class="text-xl font-bold font-mono" id="wsc-mph">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">km/h</div><div class="text-xl font-bold font-mono" id="wsc-kmh">--</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">m/s</div><div class="text-xl font-bold font-mono" id="wsc-ms">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">knots</div><div class="text-xl font-bold font-mono" id="wsc-kn">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">ft/s</div><div class="text-xl font-bold font-mono" id="wsc-fts">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="wind-speed-converter" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcWSC() {
      const val = parseFloat((document.getElementById('wsc-val') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('wsc-unit') as HTMLSelectElement).value;
      let ms: number;
      if (unit === 'mph') ms = val * 0.44704;
      else if (unit === 'kmh') ms = val / 3.6;
      else if (unit === 'kn') ms = val * 0.51444;
      else if (unit === 'fts') ms = val * 0.3048;
      else ms = val;
      const mph = ms / 0.44704;
      const kmh = ms * 3.6;
      const kn = ms / 0.51444;
      const fts = ms / 0.3048;
      document.getElementById('wsc-mph')!.textContent = mph.toFixed(1);
      document.getElementById('wsc-kmh')!.textContent = kmh.toFixed(1);
      document.getElementById('wsc-ms')!.textContent = ms.toFixed(2);
      document.getElementById('wsc-kn')!.textContent = kn.toFixed(1);
      document.getElementById('wsc-fts')!.textContent = fts.toFixed(1);
      // Beaufort scale
      const beaufort = [
        { max: 0.5, num: 0, name: 'Calm', effect: 'Smoke rises vertically', color: 'bg-green-50 text-green-800' },
        { max: 1.5, num: 1, name: 'Light Air', effect: 'Smoke drifts slowly', color: 'bg-green-50 text-green-800' },
        { max: 3.3, num: 2, name: 'Light Breeze', effect: 'Leaves rustle, wind felt on face', color: 'bg-green-50 text-green-800' },
        { max: 5.5, num: 3, name: 'Gentle Breeze', effect: 'Leaves and small twigs in motion', color: 'bg-green-50 text-green-800' },
        { max: 7.9, num: 4, name: 'Moderate Breeze', effect: 'Small branches move, dust raised', color: 'bg-blue-50 text-blue-800' },
        { max: 10.7, num: 5, name: 'Fresh Breeze', effect: 'Small trees sway', color: 'bg-blue-50 text-blue-800' },
        { max: 13.8, num: 6, name: 'Strong Breeze', effect: 'Large branches move, umbrellas difficult', color: 'bg-yellow-50 text-yellow-800' },
        { max: 17.1, num: 7, name: 'Near Gale', effect: 'Whole trees in motion, effort to walk', color: 'bg-yellow-50 text-yellow-800' },
        { max: 20.7, num: 8, name: 'Gale', effect: 'Twigs break, difficult to walk', color: 'bg-orange-50 text-orange-800' },
        { max: 24.4, num: 9, name: 'Strong Gale', effect: 'Structural damage, shingles blow off', color: 'bg-orange-50 text-orange-800' },
        { max: 28.4, num: 10, name: 'Storm', effect: 'Trees uprooted, considerable damage', color: 'bg-red-50 text-red-800' },
        { max: 32.6, num: 11, name: 'Violent Storm', effect: 'Widespread damage', color: 'bg-red-50 text-red-800' },
        { max: 999, num: 12, name: 'Hurricane Force', effect: 'Catastrophic destruction', color: 'bg-red-100 text-red-900' },
      ];
      const b = beaufort.find(x => ms <= x.max) || beaufort[12];
      document.getElementById('wsc-result')!.textContent = 'Force ' + b.num;
      document.getElementById('wsc-name')!.textContent = b.name;
      document.getElementById('wsc-effect')!.textContent = b.effect;
      document.getElementById('wsc-effect-box')!.className = 'p-4 rounded-xl text-center ' + b.color;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.wsc-in').forEach(el => { el.addEventListener('input', calcWSC); el.addEventListener('change', calcWSC); }); calcWSC(); }, 50);
  </script>
</CalculatorLayout>
