---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Recycling Impact Calculator - Energy, Water & Trees Saved";
const description = "Calculate the environmental impact of recycling paper, plastic, glass, and aluminum including energy saved, water saved, and landfill reduction.";
const relatedCalcs = [
  { name: "Carbon Offset", url: "/carbon-offset-calculator", description: "Carbon offsets." },
  { name: "Carbon Footprint", url: "/carbon-footprint-calculator", description: "Footprint." },
  { name: "Wind Power", url: "/wind-power-calculator", description: "Wind energy." },
  { name: "Rain Harvest", url: "/rain-harvest-calculator", description: "Rainwater." },
  { name: "Solar Panel", url: "/solar-panel-calculator", description: "Solar." },
  { name: "Remote Work Savings", url: "/remote-work-savings-calculator", description: "Remote savings." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Recycling Impact Calculator" keywords="recycling calculator, recycling impact, energy savings, water savings, recycling benefits, landfill reduction" breadcrumbs={[{ name: "Recycling", url: "/recycling-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Recycling Impact Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">See the environmental impact of your recycling habits.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <h3 class="font-semibold text-text">Monthly Recycling (lbs)</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Paper/Cardboard</label><input type="number" id="ry-paper" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Plastic</label><input type="number" id="ry-plastic" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="0" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Glass</label><input type="number" id="ry-glass" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Aluminum/Metal</label><input type="number" id="ry-alum" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="0" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Annual Energy Saved</div>
          <div class="text-5xl font-extrabold font-mono" id="ry-energy">0</div>
          <div class="text-sm text-blue-200 mt-1">kWh per year</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Water Saved/Year</div><div class="text-xl font-bold" id="ry-water">0 gal</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Trees Saved/Year</div><div class="text-xl font-bold" id="ry-trees">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">CO2 Prevented/Year</div><div class="text-xl font-bold" id="ry-co2">0 lbs</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Landfill Reduction/Year</div><div class="text-xl font-bold" id="ry-landfill">0 lbs</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-3">Impact by Material</h3>
          <div class="space-y-2" id="ry-breakdown"></div>
        </div>
      </div>
      <ShareButton calculatorId="recycling" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Recycling Environmental Impact</h2>
      <p>Recycling one ton of paper saves 17 trees, 7,000 gallons of water, and 4,100 kWh of energy. Recycling aluminum saves 95% of the energy needed to make new aluminum from raw materials. Every pound recycled is a pound diverted from landfills.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRecycle() {
      const paper = parseFloat((document.getElementById('ry-paper') as HTMLInputElement).value) || 0;
      const plastic = parseFloat((document.getElementById('ry-plastic') as HTMLInputElement).value) || 0;
      const glass = parseFloat((document.getElementById('ry-glass') as HTMLInputElement).value) || 0;
      const alum = parseFloat((document.getElementById('ry-alum') as HTMLInputElement).value) || 0;
      // Annual totals (multiply monthly by 12)
      const aPaper = paper * 12;
      const aPlastic = plastic * 12;
      const aGlass = glass * 12;
      const aAlum = alum * 12;
      // Energy saved per lb: paper ~2.05 kWh, plastic ~5.87 kWh, glass ~0.42 kWh, aluminum ~7.0 kWh
      const energyPaper = aPaper * 2.05;
      const energyPlastic = aPlastic * 5.87;
      const energyGlass = aGlass * 0.42;
      const energyAlum = aAlum * 7.0;
      const totalEnergy = Math.round(energyPaper + energyPlastic + energyGlass + energyAlum);
      // Water saved per lb: paper ~3.5 gal, plastic ~1.0 gal, glass ~0.5 gal, aluminum ~1.5 gal
      const waterTotal = Math.round(aPaper * 3.5 + aPlastic * 1.0 + aGlass * 0.5 + aAlum * 1.5);
      // Trees: 1 tree per ~100 lbs paper
      const trees = (aPaper / 100).toFixed(1);
      // CO2: paper ~1.5 lb CO2/lb, plastic ~2.0 lb, glass ~0.3 lb, aluminum ~4.0 lb
      const co2Total = Math.round(aPaper * 1.5 + aPlastic * 2.0 + aGlass * 0.3 + aAlum * 4.0);
      const landfill = Math.round(aPaper + aPlastic + aGlass + aAlum);
      document.getElementById('ry-energy')!.textContent = totalEnergy.toLocaleString();
      document.getElementById('ry-water')!.textContent = waterTotal.toLocaleString() + ' gal';
      document.getElementById('ry-trees')!.textContent = trees;
      document.getElementById('ry-co2')!.textContent = co2Total.toLocaleString() + ' lbs';
      document.getElementById('ry-landfill')!.textContent = landfill.toLocaleString() + ' lbs';
      const items = [
        { label: 'Paper/Cardboard', energy: Math.round(energyPaper), lbs: aPaper },
        { label: 'Plastic', energy: Math.round(energyPlastic), lbs: aPlastic },
        { label: 'Glass', energy: Math.round(energyGlass), lbs: aGlass },
        { label: 'Aluminum/Metal', energy: Math.round(energyAlum), lbs: aAlum },
      ];
      const breakdownHTML = items.map(i => `<div class="flex justify-between items-center py-1 border-b border-border last:border-0"><span class="text-sm">${i.label} (${i.lbs} lbs/yr)</span><span class="text-sm font-bold">${i.energy.toLocaleString()} kWh saved</span></div>`).join('');
      document.getElementById('ry-breakdown')!.innerHTML = breakdownHTML;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.ry-in').forEach(el => { el.addEventListener('input', calcRecycle); el.addEventListener('change', calcRecycle); }); calcRecycle(); }, 50);
  </script>
</CalculatorLayout>
