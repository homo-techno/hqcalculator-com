---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Caramel Calculator - Temperature Stages & Recipe Scaling";
const description = "Calculate caramel recipe amounts and learn the exact temperature stages from light caramel to dark amber. Scale caramel sauce and candy recipes.";
const relatedCalcs = [
  { name: "Sugar Syrup Calculator", url: "/sugar-syrup-calculator", description: "Sugar syrup concentrations and stages." },
  { name: "Chocolate Tempering Calculator", url: "/chocolate-tempering-calculator", description: "Chocolate tempering temperatures." },
  { name: "Pastry Cream Calculator", url: "/pastry-cream-calculator", description: "Scale pastry cream recipes." },
  { name: "Frosting Calculator", url: "/frosting-calculator", description: "Calculate frosting quantities." },
  { name: "Baking Conversion Calculator", url: "/baking-conversion-calculator", description: "Convert between baking units." },
  { name: "Water Activity Calculator", url: "/water-activity-calculator", description: "Food preservation water activity." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Caramel Calculator" keywords="caramel temperature, caramel sauce recipe, caramel stages, candy making, salted caramel, caramel scaling" breadcrumbs={[{ name: "Caramel", url: "/caramel-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Caramel Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Scale caramel sauce and candy recipes with precise temperature stages. From light caramel to dark amber for confections.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Caramel Type</label>
          <select id="car-type" class="car-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="sauce">Caramel Sauce (pourable)</option>
            <option value="soft">Soft Caramels (chewy candy)</option>
            <option value="hard">Hard Caramels / Toffee</option>
            <option value="dry">Dry Caramel (sugar only)</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Desired Color / Stage</label>
          <select id="car-stage" class="car-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="light">Light Caramel (320-330&deg;F / 160-166&deg;C)</option>
            <option value="medium" selected>Medium Amber (330-340&deg;F / 166-171&deg;C)</option>
            <option value="dark">Dark Amber (340-350&deg;F / 171-177&deg;C)</option>
            <option value="vdark">Very Dark (350-360&deg;F / 177-182&deg;C)</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Desired Yield (cups)</label>
          <input type="number" id="car-yield" class="car-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="0.25" step="0.25">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Target Temperature</div>
          <div class="text-5xl font-extrabold font-mono" id="car-result">--</div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Sugar</div>
            <div class="text-xl font-bold font-mono" id="car-sugar">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Heavy Cream</div>
            <div class="text-xl font-bold font-mono" id="car-cream">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Butter</div>
            <div class="text-xl font-bold font-mono" id="car-butter">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Salt</div>
            <div class="text-xl font-bold font-mono" id="car-salt">--</div>
          </div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <div class="text-xs text-text-muted uppercase mb-2">Flavor Profile</div>
          <div class="text-sm text-text-secondary" id="car-profile">--</div>
        </div>
      </div>
      <ShareButton calculatorId="caramel" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCAR() {
      const type = (document.getElementById('car-type') as HTMLSelectElement).value;
      const stage = (document.getElementById('car-stage') as HTMLSelectElement).value;
      const yield_ = parseFloat((document.getElementById('car-yield') as HTMLInputElement).value) || 1;

      const temps: Record<string, {f: string, c: string}> = {
        light: { f: '320-330', c: '160-166' },
        medium: { f: '330-340', c: '166-171' },
        dark: { f: '340-350', c: '171-177' },
        vdark: { f: '350-360', c: '177-182' },
      };

      const profiles: Record<string, string> = {
        light: 'Sweet, buttery, mild caramel flavor. Best for caramel sauce drizzles and light applications.',
        medium: 'Balanced sweet and bitter. Classic caramel flavor. Most versatile for sauces and candies.',
        dark: 'Complex, slightly bitter, deep flavor. Excellent for caramel desserts and sophisticated confections.',
        vdark: 'Intensely bittersweet. Use for decoration, caramel cages, and bold flavor contrasts. Seconds from burnt.',
      };

      // Recipes per cup of yield
      let sugarG = 0, creamMl = 0, butterG = 0, saltG = 0;

      if (type === 'sauce') {
        sugarG = 200 * yield_;
        creamMl = 240 * yield_;
        butterG = 60 * yield_;
        saltG = 3 * yield_;
      } else if (type === 'soft') {
        sugarG = 250 * yield_;
        creamMl = 180 * yield_;
        butterG = 85 * yield_;
        saltG = 4 * yield_;
      } else if (type === 'hard') {
        sugarG = 300 * yield_;
        creamMl = 120 * yield_;
        butterG = 115 * yield_;
        saltG = 3 * yield_;
      } else { // dry
        sugarG = 200 * yield_;
        creamMl = 0;
        butterG = 0;
        saltG = 0;
      }

      const t = temps[stage];
      document.getElementById('car-result')!.textContent = t.f + '\u00B0F / ' + t.c + '\u00B0C';
      document.getElementById('car-sugar')!.textContent = sugarG.toFixed(0) + ' g (' + (sugarG / 200).toFixed(1) + ' cups)';
      document.getElementById('car-cream')!.textContent = creamMl > 0 ? creamMl.toFixed(0) + ' mL (' + (creamMl / 237).toFixed(1) + ' cups)' : 'None';
      document.getElementById('car-butter')!.textContent = butterG > 0 ? butterG.toFixed(0) + ' g (' + (butterG / 14).toFixed(0) + ' tbsp)' : 'None';
      document.getElementById('car-salt')!.textContent = saltG > 0 ? saltG.toFixed(1) + ' g (' + (saltG / 6).toFixed(1) + ' tsp)' : 'None';
      document.getElementById('car-profile')!.textContent = profiles[stage];

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.car-in').forEach(el => { el.addEventListener('input', calcCAR); el.addEventListener('change', calcCAR); });
      calcCAR();
    }, 50);
  </script>
</CalculatorLayout>
