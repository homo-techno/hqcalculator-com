---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Currency Exchange Calculator";
const description = "Convert currencies using manual exchange rates. See converted amounts and inverse rates.";
const relatedCalcs = [
  { name: "Wholesale Markup", url: "/wholesale-markup-calculator", description: "Wholesale to retail pricing." },
  { name: "Cost Per Acquisition", url: "/cost-per-acquisition-calculator", description: "CPA calculations." },
  { name: "Price Elasticity", url: "/price-elasticity-calculator", description: "Price elasticity." },
  { name: "Revenue Per Employee", url: "/revenue-per-employee-calculator", description: "Revenue per employee." },
  { name: "Working Capital", url: "/working-capital-calculator", description: "Working capital ratios." },
  { name: "Burn Rate", url: "/burn-rate-calculator", description: "Startup burn rate." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Currency Exchange Calculator" keywords="currency converter, exchange rate, forex calculator, currency conversion, inverse rate" breadcrumbs={[{ name: "Currency Exchange", url: "/currency-exchange-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Currency Exchange Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Convert currencies with a manual exchange rate input.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Amount</label><input type="number" id="cx-amount" class="cx-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="1000" min="0" step="1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">From Currency</label><input type="text" id="cx-from" class="cx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="USD"></div>
        <div><label class="block text-xs font-medium text-text mb-1">To Currency</label><input type="text" id="cx-to" class="cx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="EUR"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Exchange Rate (1 From = ? To)</label><input type="number" id="cx-rate" class="cx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.92" min="0" step="0.0001"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Fee / Spread (%)</label><input type="number" id="cx-fee" class="cx-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" max="10" step="0.1"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Converted Amount</div>
          <div class="text-5xl font-extrabold font-mono" id="cx-result">0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Inverse Rate</div><div class="text-xl font-bold font-mono" id="cx-inverse">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Fee Amount</div><div class="text-xl font-bold font-mono" id="cx-feeamt">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Effective Rate</div><div class="text-xl font-bold font-mono" id="cx-effective">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Amount Before Fee</div><div class="text-xl font-bold font-mono" id="cx-before">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="currency-exchange" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCX() {
      const amount = parseFloat((document.getElementById('cx-amount') as HTMLInputElement).value) || 0;
      const fromCur = (document.getElementById('cx-from') as HTMLInputElement).value || 'FROM';
      const toCur = (document.getElementById('cx-to') as HTMLInputElement).value || 'TO';
      const rate = parseFloat((document.getElementById('cx-rate') as HTMLInputElement).value) || 0;
      const feePct = parseFloat((document.getElementById('cx-fee') as HTMLInputElement).value) || 0;

      const convertedBefore = amount * rate;
      const feeAmount = convertedBefore * (feePct / 100);
      const converted = convertedBefore - feeAmount;
      const effectiveRate = amount > 0 ? converted / amount : 0;
      const inverseRate = rate > 0 ? 1 / rate : 0;

      document.getElementById('cx-result')!.textContent = converted.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) + ' ' + toCur;
      document.getElementById('cx-inverse')!.textContent = '1 ' + toCur + ' = ' + inverseRate.toFixed(4) + ' ' + fromCur;
      document.getElementById('cx-feeamt')!.textContent = feeAmount.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) + ' ' + toCur;
      document.getElementById('cx-effective')!.textContent = effectiveRate.toFixed(4);
      document.getElementById('cx-before')!.textContent = convertedBefore.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 }) + ' ' + toCur;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.cx-in').forEach(el => { el.addEventListener('input', calcCX); el.addEventListener('change', calcCX); });
      calcCX();
    }, 50);
  </script>
</CalculatorLayout>
