---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Paver Calculator";
const description = "Calculate pavers needed for patios, walkways, and driveways. Includes base material, sand, and cost estimates.";
const relatedCalcs = [
  { name: "Brick Calculator", url: "/brick-calculator", description: "Bricks." },
  { name: "Concrete", url: "/concrete-calculator", description: "Concrete." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Gravel", url: "/gravel-calculator", description: "Gravel." },
  { name: "Retaining Wall", url: "/retaining-wall-calculator", description: "Retaining." },
  { name: "Countertop", url: "/countertop-calculator", description: "Countertop." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Paver Calculator" keywords="paver calculator, pavers needed, patio pavers, driveway pavers, paver cost" breadcrumbs={[{ name: "Paver", url: "/paver-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Paver Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate pavers and materials for your project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Area Length (ft)</label><input type="number" id="pv-len" class="pv-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="20" min="0" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Area Width (ft)</label><input type="number" id="pv-wid" class="pv-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="12" min="0" step="0.5"></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Paver Size</h3>
          <div class="grid grid-cols-2 gap-2">
            <div><label class="block text-xs text-text-muted">Length (in)</label><input type="number" id="pv-pl" class="pv-in w-full px-2 py-2 border border-border rounded-xl text-lg font-bold text-center" value="6" step="1"></div>
            <div><label class="block text-xs text-text-muted">Width (in)</label><input type="number" id="pv-pw" class="pv-in w-full px-2 py-2 border border-border rounded-xl text-lg font-bold text-center" value="6" step="1"></div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Waste (%)</label><input type="number" id="pv-waste" class="pv-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0" max="25" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Price per Paver ($)</label><input type="number" id="pv-price" class="pv-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1.50" min="0" step="0.1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Pavers Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="pv-result">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Area</div><div class="text-lg font-bold font-mono" id="pv-area">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Per Sq Ft</div><div class="text-lg font-bold font-mono" id="pv-persf">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Paver Cost</div><div class="text-lg font-bold font-mono" id="pv-cost">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Base Gravel (tons)</div><div class="text-xl font-bold font-mono" id="pv-gravel">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Sand (tons)</div><div class="text-xl font-bold font-mono" id="pv-sand">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="paver" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPV() {
      const len = parseFloat((document.getElementById('pv-len') as HTMLInputElement).value) || 0;
      const wid = parseFloat((document.getElementById('pv-wid') as HTMLInputElement).value) || 0;
      const pl = parseFloat((document.getElementById('pv-pl') as HTMLInputElement).value) || 6;
      const pw = parseFloat((document.getElementById('pv-pw') as HTMLInputElement).value) || 6;
      const waste = parseFloat((document.getElementById('pv-waste') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('pv-price') as HTMLInputElement).value) || 0;
      const areaSqFt = len * wid;
      const paverSqFt = (pl * pw) / 144;
      const paversPerSqFt = paverSqFt > 0 ? 1 / paverSqFt : 0;
      const basePavers = Math.ceil(areaSqFt * paversPerSqFt);
      const totalPavers = Math.ceil(basePavers * (1 + waste / 100));
      const gravelTons = (areaSqFt * 4 / 12 * 110) / 2000;
      const sandTons = (areaSqFt * 1 / 12 * 100) / 2000;
      document.getElementById('pv-result')!.textContent = totalPavers.toLocaleString();
      document.getElementById('pv-area')!.textContent = areaSqFt.toFixed(0) + ' ftÂ²';
      document.getElementById('pv-persf')!.textContent = paversPerSqFt.toFixed(1);
      document.getElementById('pv-cost')!.textContent = '$' + (totalPavers * price).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
      document.getElementById('pv-gravel')!.textContent = gravelTons.toFixed(2);
      document.getElementById('pv-sand')!.textContent = sandTons.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.pv-in').forEach(el => { el.addEventListener('input', calcPV); el.addEventListener('change', calcPV); });
      calcPV();
    }, 50);
  </script>
</CalculatorLayout>
