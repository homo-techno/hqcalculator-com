---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Lot Coverage Calculator - Coverage Ratio & FAR";
const description = "Calculate building lot coverage ratio, floor area ratio (FAR), open space percentage, and maximum buildable area from lot and building dimensions.";
const relatedCalcs = [
  { name: "Land Area Survey", url: "/land-area-survey-calculator", description: "Area from coordinates." },
  { name: "Property Line", url: "/property-line-calculator", description: "Metes & bounds area." },
  { name: "Area Subdivision", url: "/area-subdivision-calculator", description: "Subdivide parcels." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Area calculations." },
  { name: "Stakeout Calculator", url: "/stakeout-calculator", description: "Stakeout coordinates." },
  { name: "Field Area", url: "/field-area-calculator", description: "Field area measurement." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Lot Coverage Calculator" keywords="lot coverage, floor area ratio, FAR, building coverage, open space, zoning, buildable area" breadcrumbs={[{ name: "Lot Coverage Calculator", url: "/lot-coverage-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Lot Coverage Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Compute lot coverage ratio, floor area ratio (FAR), and open space from lot and building data.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Total Lot Area (sq ft)</label>
          <input type="number" id="lc2-lot" class="lc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10000" min="1">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Building Footprint Area (sq ft)</label>
          <input type="number" id="lc2-foot" class="lc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3000" min="0">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Number of Floors</label>
          <input type="number" id="lc2-floors" class="lc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="1" max="200">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Other Impervious Area (sq ft) - driveways, patios</label>
          <input type="number" id="lc2-imperv" class="lc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="0">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Maximum Allowed Coverage (%)</label>
          <input type="number" id="lc2-maxcov" class="lc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="40" min="1" max="100">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Lot Coverage</div>
          <div class="text-5xl font-extrabold font-mono" id="lc2-coverage">--</div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Floor Area Ratio (FAR)</div>
            <div class="text-xl font-bold" id="lc2-far">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Total Floor Area</div>
            <div class="text-xl font-bold" id="lc2-tfa">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Open Space</div>
            <div class="text-xl font-bold" id="lc2-open">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Impervious Coverage</div>
            <div class="text-xl font-bold" id="lc2-imp">--</div>
          </div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl text-center">
          <div class="text-xs text-text-muted uppercase">Max Buildable Footprint (at allowed %)</div>
          <div class="text-xl font-bold" id="lc2-maxbuild">--</div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl text-center">
          <div class="text-xs text-text-muted uppercase">Status</div>
          <div class="text-xl font-bold" id="lc2-status">--</div>
        </div>
      </div>
      <ShareButton calculatorId="lot-coverage" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Lot Coverage & FAR</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p>Lot Coverage = Building Footprint / Lot Area x 100%</p>
        <p>FAR = Total Floor Area / Lot Area</p>
        <p>Open Space = Lot Area - Footprint - Impervious</p>
      </div>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcLC2() {
      const lot = parseFloat((document.getElementById('lc2-lot') as HTMLInputElement).value) || 1;
      const foot = parseFloat((document.getElementById('lc2-foot') as HTMLInputElement).value) || 0;
      const floors = parseInt((document.getElementById('lc2-floors') as HTMLInputElement).value) || 1;
      const imperv = parseFloat((document.getElementById('lc2-imperv') as HTMLInputElement).value) || 0;
      const maxCov = parseFloat((document.getElementById('lc2-maxcov') as HTMLInputElement).value) || 40;
      const coverage = (foot / lot) * 100;
      const totalFloor = foot * floors;
      const far = totalFloor / lot;
      const openSpace = lot - foot - imperv;
      const openPct = (openSpace / lot) * 100;
      const impTotal = foot + imperv;
      const impPct = (impTotal / lot) * 100;
      const maxBuild = lot * maxCov / 100;
      document.getElementById('lc2-coverage')!.textContent = coverage.toFixed(1) + '%';
      document.getElementById('lc2-far')!.textContent = far.toFixed(2);
      document.getElementById('lc2-tfa')!.textContent = totalFloor.toLocaleString() + ' ft\u00B2';
      document.getElementById('lc2-open')!.textContent = openSpace.toLocaleString(undefined,{maximumFractionDigits:0}) + ' ft\u00B2 (' + openPct.toFixed(1) + '%)';
      document.getElementById('lc2-imp')!.textContent = impPct.toFixed(1) + '%';
      document.getElementById('lc2-maxbuild')!.textContent = maxBuild.toLocaleString(undefined,{maximumFractionDigits:0}) + ' ft\u00B2';
      const compliant = coverage <= maxCov;
      document.getElementById('lc2-status')!.textContent = compliant ? 'Within Limit' : 'Exceeds Limit by ' + (coverage - maxCov).toFixed(1) + '%';
      document.getElementById('lc2-status')!.style.color = compliant ? '#16a34a' : '#dc2626';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.lc2-in').forEach(el => { el.addEventListener('input', calcLC2); el.addEventListener('change', calcLC2); });
      calcLC2();
    }, 50);
  </script>
</CalculatorLayout>
