---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Dental Bridge Calculator";
const description = "Estimate dental bridge cost by pontic count, material, abutment prep, and compare with implant and denture alternatives.";
const relatedCalcs = [
  { name: "Dental Implant Cost Calculator", url: "/dental-implant-cost-calculator", description: "Implant cost estimates." },
  { name: "Dental Crown Calculator", url: "/dental-crown-calculator", description: "Crown cost by material." },
  { name: "Root Canal Calculator", url: "/root-canal-calculator", description: "Root canal treatment cost." },
  { name: "Tooth Filling Calculator", url: "/tooth-filling-calculator", description: "Filling cost by material." },
  { name: "Dental Insurance Calculator", url: "/dental-insurance-calculator", description: "Dental plan analysis." },
  { name: "Braces Cost Calculator", url: "/braces-cost-calculator", description: "Orthodontic cost estimates." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Dental Bridge Calculator" keywords="dental bridge cost, pontic bridge, bridge vs implant, dental bridge calculator, bridge material cost" breadcrumbs={[{ name: "Dental Bridge", url: "/dental-bridge-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dental Bridge Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate bridge cost and compare with implant and denture alternatives.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Missing Teeth (Pontics)</label><input type="number" id="db2-pontic" class="db2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="1" max="6" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Bridge Material</label>
            <select id="db2-mat" class="db2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="pfm" selected>Porcelain-Fused-Metal</option>
              <option value="zirconia">Zirconia</option>
              <option value="allceramic">All-Ceramic</option>
              <option value="metal">Full Metal</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Abutment Condition</label>
            <select id="db2-abut" class="db2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="healthy" selected>Healthy Abutment Teeth</option>
              <option value="buildup">Need Core Buildup</option>
              <option value="rct">Need Root Canal First</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Location</label>
            <select id="db2-loc" class="db2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="anterior">Anterior</option>
              <option value="posterior" selected>Posterior</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Insurance Coverage (%)</label><input type="number" id="db2-ins" class="db2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" max="100" step="5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Annual Max Benefit ($)</label><input type="number" id="db2-max" class="db2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1500" min="0" max="10000" step="100"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Bridge Total Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="db2-total">$0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bridge Units</div><div class="text-xl font-bold font-mono" id="db2-units">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Prep Work</div><div class="text-xl font-bold font-mono" id="db2-prep">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Out of Pocket</div><div class="text-xl font-bold font-mono" id="db2-oop">$0</div></div>
        </div>
        <div class="p-3 bg-blue-50 rounded-xl text-center text-xs font-semibold text-blue-900 uppercase tracking-wide mb-1">Alternative Comparison</div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bridge</div><div class="text-xl font-bold font-mono" id="db2-bridge">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Implant(s)</div><div class="text-xl font-bold font-mono" id="db2-implant">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Partial Denture</div><div class="text-xl font-bold font-mono" id="db2-denture">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="dental-bridge" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDB2() {
      const pontics = parseFloat((document.getElementById('db2-pontic') as HTMLInputElement).value) || 1;
      const mat = (document.getElementById('db2-mat') as HTMLSelectElement).value;
      const abut = (document.getElementById('db2-abut') as HTMLSelectElement).value;
      const loc = (document.getElementById('db2-loc') as HTMLSelectElement).value;
      const insPct = parseFloat((document.getElementById('db2-ins') as HTMLInputElement).value) || 0;
      const insMax = parseFloat((document.getElementById('db2-max') as HTMLInputElement).value) || 0;

      const abutments = 2; // standard bridge has 2 abutment crowns
      const totalUnits = pontics + abutments;
      const unitCosts: Record<string, number> = { pfm: 1000, zirconia: 1300, allceramic: 1150, metal: 900 };
      const locMult: Record<string, number> = { anterior: 1.05, posterior: 1.0 };

      const unitCost = unitCosts[mat] * (locMult[loc] || 1.0);
      const bridgeCost = Math.round(unitCost * totalUnits);

      let prepCost = 0;
      if (abut === 'buildup') prepCost = 300 * abutments;
      else if (abut === 'rct') prepCost = 900 * abutments + 300 * abutments;

      const subtotal = bridgeCost + prepCost;
      const insOffset = Math.min(subtotal * (insPct / 100), insMax);
      const oop = subtotal - insOffset;

      // Alternatives
      const implantCost = Math.round(pontics * 3500); // implant + abutment + crown per tooth
      const dentureCost = Math.round(1200 + pontics * 100); // partial denture

      document.getElementById('db2-total')!.textContent = '$' + Math.round(subtotal).toLocaleString();
      document.getElementById('db2-units')!.textContent = totalUnits + ' units';
      document.getElementById('db2-prep')!.textContent = '$' + Math.round(prepCost).toLocaleString();
      document.getElementById('db2-oop')!.textContent = '$' + Math.round(oop).toLocaleString();
      document.getElementById('db2-bridge')!.textContent = '$' + Math.round(subtotal).toLocaleString();
      document.getElementById('db2-implant')!.textContent = '$' + implantCost.toLocaleString();
      document.getElementById('db2-denture')!.textContent = '$' + dentureCost.toLocaleString();

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.db2-in').forEach(el => { el.addEventListener('input', calcDB2); el.addEventListener('change', calcDB2); });
      calcDB2();
    }, 50);
  </script>
</CalculatorLayout>
