---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Cash Flow Calculator";
const description = "Calculate monthly and annual cash flow from income and expenses. Track positive or negative cash flow.";
const relatedCalcs = [
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget." },
  { name: "Net Worth", url: "/net-worth-calculator", description: "Net worth." },
  { name: "Profit Margin", url: "/profit-margin-calculator", description: "Profit." },
  { name: "Break Even", url: "/break-even-calculator", description: "Break even." },
  { name: "Income Tax", url: "/income-tax-calculator", description: "Tax." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Cash Flow Calculator" keywords="cash flow calculator, income expense, monthly cash flow, net cash flow, personal finance" breadcrumbs={[{ name: "Cash Flow Calculator", url: "/cash-flow-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Cash Flow Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Track monthly income vs. expenses to find your net cash flow.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <h3 class="font-semibold text-sm text-text">Monthly Income</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Salary / Wages ($)</label><input type="number" id="cf-salary" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5000" min="0" step="100"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Side Income ($)</label><input type="number" id="cf-side" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="0" step="50"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Rental Income ($)</label><input type="number" id="cf-rental" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="100"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Other Income ($)</label><input type="number" id="cf-other-in" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="50"></div>
        </div>
        <h3 class="font-semibold text-sm text-text">Monthly Expenses</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Housing ($)</label><input type="number" id="cf-housing" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1500" min="0" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Utilities ($)</label><input type="number" id="cf-util" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="0" step="25"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Food / Groceries ($)</label><input type="number" id="cf-food" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="600" min="0" step="25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Transportation ($)</label><input type="number" id="cf-transport" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="400" min="0" step="25"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Insurance ($)</label><input type="number" id="cf-ins" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="300" min="0" step="25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Debt Payments ($)</label><input type="number" id="cf-debt" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="0" step="25"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Entertainment ($)</label><input type="number" id="cf-ent" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="0" step="25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Other Expenses ($)</label><input type="number" id="cf-other-ex" class="cf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="300" min="0" step="25"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Monthly Cash Flow</div>
          <div class="text-5xl font-extrabold font-mono" id="cf-result">$0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Income</div><div class="text-xl font-bold font-mono" id="cf-inc">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Expenses</div><div class="text-xl font-bold font-mono" id="cf-exp">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Cash Flow</div><div class="text-xl font-bold font-mono" id="cf-annual">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Savings Rate</div><div class="text-xl font-bold font-mono" id="cf-rate">0%</div></div>
          <div class="p-4 rounded-xl text-center" id="cf-status-box"><div class="font-bold text-sm" id="cf-status">-</div></div>
        </div>
      </div>
      <ShareButton calculatorId="cash-flow" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCF() {
      const salary = parseFloat((document.getElementById('cf-salary') as HTMLInputElement).value) || 0;
      const side = parseFloat((document.getElementById('cf-side') as HTMLInputElement).value) || 0;
      const rental = parseFloat((document.getElementById('cf-rental') as HTMLInputElement).value) || 0;
      const otherIn = parseFloat((document.getElementById('cf-other-in') as HTMLInputElement).value) || 0;
      const housing = parseFloat((document.getElementById('cf-housing') as HTMLInputElement).value) || 0;
      const util = parseFloat((document.getElementById('cf-util') as HTMLInputElement).value) || 0;
      const food = parseFloat((document.getElementById('cf-food') as HTMLInputElement).value) || 0;
      const transport = parseFloat((document.getElementById('cf-transport') as HTMLInputElement).value) || 0;
      const ins = parseFloat((document.getElementById('cf-ins') as HTMLInputElement).value) || 0;
      const debt = parseFloat((document.getElementById('cf-debt') as HTMLInputElement).value) || 0;
      const ent = parseFloat((document.getElementById('cf-ent') as HTMLInputElement).value) || 0;
      const otherEx = parseFloat((document.getElementById('cf-other-ex') as HTMLInputElement).value) || 0;
      const totalIncome = salary + side + rental + otherIn;
      const totalExpenses = housing + util + food + transport + ins + debt + ent + otherEx;
      const cashFlow = totalIncome - totalExpenses;
      const savingsRate = totalIncome > 0 ? (cashFlow / totalIncome) * 100 : 0;
      document.getElementById('cf-result')!.textContent = (cashFlow >= 0 ? '+$' : '-$') + Math.abs(cashFlow).toFixed(0);
      document.getElementById('cf-inc')!.textContent = '$' + totalIncome.toFixed(0);
      document.getElementById('cf-exp')!.textContent = '$' + totalExpenses.toFixed(0);
      document.getElementById('cf-annual')!.textContent = (cashFlow >= 0 ? '+$' : '-$') + Math.abs(cashFlow * 12).toFixed(0);
      document.getElementById('cf-rate')!.textContent = savingsRate.toFixed(1) + '%';
      let status: string, color: string;
      if (cashFlow > 0 && savingsRate >= 20) { status = 'Excellent cash flow!'; color = 'bg-green-50 text-green-800'; }
      else if (cashFlow > 0) { status = 'Positive — aim for 20%+ savings'; color = 'bg-blue-50 text-blue-800'; }
      else if (cashFlow === 0) { status = 'Breaking even'; color = 'bg-yellow-50 text-yellow-800'; }
      else { status = 'Negative cash flow — review expenses'; color = 'bg-red-50 text-red-800'; }
      document.getElementById('cf-status')!.textContent = status;
      document.getElementById('cf-status-box')!.className = `p-4 rounded-xl text-center ${color}`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.cf-in').forEach(el => { el.addEventListener('input', calcCF); el.addEventListener('change', calcCF); });
      calcCF();
    }, 50);
  </script>
</CalculatorLayout>
