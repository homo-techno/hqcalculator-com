---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Sensor Range Calculator - Proximity & Photoelectric Detection Range";
const description = "Calculate proximity and photoelectric sensor detection range, response time, and switching frequency. Select the right sensor for your automation application.";
const relatedCalcs = [
  { name: "Safety Distance Calculator", url: "/safety-distance-calculator", description: "Calculate ISO 13855 safety distances." },
  { name: "Vision System Calculator", url: "/vision-system-calculator", description: "Calculate machine vision FOV and resolution." },
  { name: "PLC I/O Calculator", url: "/plc-io-calculator", description: "Plan PLC I/O points for sensor inputs." },
  { name: "Encoder Resolution Calculator", url: "/encoder-resolution-calculator", description: "Calculate encoder resolution for positioning." },
  { name: "Conveyor Speed Calculator", url: "/conveyor-speed-calculator", description: "Match conveyor speed to sensor response." },
  { name: "Robot Speed Calculator", url: "/robot-speed-calculator", description: "Optimize robot speed with sensor feedback." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Sensor Range Calculator" keywords="sensor range calculator, proximity sensor, photoelectric sensor, detection range, switching frequency, sensor response time, inductive sensor" breadcrumbs={[{ name: "Sensor Range Calculator", url: "/sensor-range-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Sensor Range Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate sensor detection range, response time, and switching frequency for proximity and photoelectric sensors in automation systems.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-6">
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Sensor Type</label>
          <select id="sr2-type" class="sr2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="inductive">Inductive Proximity</option>
            <option value="capacitive">Capacitive Proximity</option>
            <option value="photoelectric-diffuse">Photoelectric (Diffuse)</option>
            <option value="photoelectric-retro">Photoelectric (Retro-Reflective)</option>
            <option value="photoelectric-through">Photoelectric (Through-Beam)</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Rated Sensing Distance (mm)</label>
          <input type="number" id="sr2-rated" class="sr2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0.5" step="0.5">
        </div>
        <div id="sr2-material-wrap">
          <label class="block text-sm font-semibold text-text mb-2">Target Material</label>
          <select id="sr2-material" class="sr2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="1.0">Mild Steel (factor 1.0)</option>
            <option value="0.9">Stainless Steel (factor 0.9)</option>
            <option value="0.5">Brass (factor 0.5)</option>
            <option value="0.4">Aluminum (factor 0.4)</option>
            <option value="0.35">Copper (factor 0.35)</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Target Speed (m/s)</label>
          <input type="number" id="sr2-speed" class="sr2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="0.01" step="0.1">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Target Size (mm)</label>
          <input type="number" id="sr2-target-size" class="sr2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="1" step="1">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Sensor Response Time (ms)</label>
          <input type="number" id="sr2-response" class="sr2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="0.1" step="0.1">
        </div>

        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm font-medium opacity-80 mb-1">Effective Sensing Distance</div>
          <div id="sr2-result-dist" class="text-3xl sm:text-4xl font-extrabold">--</div>
          <div class="text-sm opacity-80 mt-1">mm</div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Max Switching Freq</div>
            <div id="sr2-switch-freq" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">Hz</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Min Detectable Width</div>
            <div id="sr2-min-width" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">mm (at speed)</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Dwell Time on Target</div>
            <div id="sr2-dwell" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">ms</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Detection Reliable</div>
            <div id="sr2-reliable" class="text-lg font-bold text-text">--</div>
          </div>
        </div>

        <ShareButton />
        <FeedbackWidget />
      </div>
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcSR2() {
      const sType = (document.getElementById('sr2-type') as HTMLSelectElement).value;
      const rated = parseFloat((document.getElementById('sr2-rated') as HTMLInputElement).value) || 10;
      const materialFactor = parseFloat((document.getElementById('sr2-material') as HTMLSelectElement).value) || 1.0;
      const speed = parseFloat((document.getElementById('sr2-speed') as HTMLInputElement).value) || 1;
      const targetSize = parseFloat((document.getElementById('sr2-target-size') as HTMLInputElement).value) || 20;
      const responseTime = parseFloat((document.getElementById('sr2-response') as HTMLInputElement).value) || 1;

      const isInductive = sType === 'inductive';
      document.getElementById('sr2-material-wrap')!.classList.toggle('hidden', !isInductive);

      let effectiveDist: number;
      if (isInductive) {
        effectiveDist = rated * materialFactor;
      } else if (sType === 'capacitive') {
        effectiveDist = rated * 0.9;
      } else {
        effectiveDist = rated;
      }

      const switchFreq = 1000 / (2 * responseTime);
      const speedMMs = speed * 1000;
      const minDetectableWidth = speedMMs * responseTime * 2 / 1000;
      const dwellTime = targetSize / speedMMs * 1000;
      const reliable = dwellTime >= (responseTime * 2) ? 'YES' : 'NO - Too Fast';

      document.getElementById('sr2-result-dist')!.textContent = effectiveDist.toFixed(1);
      document.getElementById('sr2-switch-freq')!.textContent = switchFreq.toFixed(0);
      document.getElementById('sr2-min-width')!.textContent = minDetectableWidth.toFixed(2);
      document.getElementById('sr2-dwell')!.textContent = dwellTime.toFixed(2);
      document.getElementById('sr2-reliable')!.textContent = reliable;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.sr2-in').forEach(el => { el.addEventListener('input', calcSR2); el.addEventListener('change', calcSR2); });
      calcSR2();
    }, 50);
  </script>
</CalculatorLayout>
