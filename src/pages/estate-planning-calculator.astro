---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Estate Planning Calculator - Tax Exposure & Trust Savings";
const description = "Estimate estate tax exposure, probate costs, and potential trust savings to plan your legacy efficiently.";

const relatedCalcs = [
  { name: "Net Worth", url: "/net-worth-calculator", description: "Track net worth." },
  { name: "Life Insurance", url: "/life-insurance-calculator", description: "Life coverage." },
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Retirement planning." },
  { name: "Charitable Donation", url: "/charitable-donation-calculator", description: "Donation tax savings." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Investment returns." },
  { name: "Umbrella Insurance", url: "/umbrella-insurance-calculator", description: "Umbrella coverage." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Estate Planning Calculator" keywords="estate planning calculator, estate tax, probate costs, trust savings, inheritance, beneficiaries, estate plan" breadcrumbs={[{ name: "Estate Planning", url: "/estate-planning-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Estate Planning Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate estate taxes, probate costs, and savings from establishing a trust.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Total Estate Value</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="ep2-estate" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="2500000" min="0" step="50000">
            </div>
            <p class="text-xs text-text-muted mt-1">Real estate, investments, retirement accounts, insurance, business interests</p>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Beneficiaries</label>
            <input type="number" id="ep2-beneficiaries" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="3" min="1" max="20" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Filing Status</label>
            <select id="ep2-filing" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="single" selected>Single / Individual</option>
              <option value="married">Married (using portability)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Estate Plan Type</label>
            <select id="ep2-plan" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="none">No Trust (will only / probate)</option>
              <option value="revocable" selected>Revocable Living Trust</option>
              <option value="irrevocable">Irrevocable Trust</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">State</label>
            <select id="ep2-state" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="no-estate-tax" selected>No state estate tax</option>
              <option value="low">Low estate tax state ($5M+ exemption)</option>
              <option value="medium">Medium estate tax state ($2-5M exemption)</option>
              <option value="high">High estate tax state (under $2M exemption)</option>
            </select>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Estate Tax</div>
            <div class="text-5xl font-extrabold font-mono" id="ep2-tax">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Probate Cost Est.</div>
              <div class="text-xl font-bold text-red-600" id="ep2-probate">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Trust Savings</div>
              <div class="text-xl font-bold text-green-600" id="ep2-trust-savings">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Per Beneficiary</div>
              <div class="text-xl font-bold" id="ep2-per-bene">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Net to Heirs</div>
              <div class="text-xl font-bold text-secondary" id="ep2-net">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Federal Exemption Used</div>
            <div class="text-sm font-bold" id="ep2-exemption">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="estate-planning" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Estate Tax and Planning Basics</h2>
      <p>The federal estate tax exemption is $13.61 million per person (2024). Married couples can effectively double this through portability. Estates below the exemption pay no federal estate tax, but some states have lower thresholds.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Trust vs. Will</h3>
      <p>A <strong>revocable living trust</strong> avoids probate (saving 2-7% of estate value) and provides privacy. An <strong>irrevocable trust</strong> can also reduce estate tax exposure by removing assets from your taxable estate, but you give up control.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcEP2() {
      const estate = parseFloat((document.getElementById('ep2-estate') as HTMLInputElement).value) || 0;
      const beneficiaries = parseInt((document.getElementById('ep2-beneficiaries') as HTMLInputElement).value) || 1;
      const filing = (document.getElementById('ep2-filing') as HTMLSelectElement).value;
      const plan = (document.getElementById('ep2-plan') as HTMLSelectElement).value;
      const stateLevel = (document.getElementById('ep2-state') as HTMLSelectElement).value;

      // Federal exemption 2024
      const federalExemption = filing === 'married' ? 27220000 : 13610000;

      // Federal estate tax (40% on amount over exemption)
      let taxableEstate = plan === 'irrevocable' ? estate * 0.6 : estate; // irrevocable trust removes ~40% from taxable estate
      let federalTax = Math.max(0, taxableEstate - federalExemption) * 0.40;

      // State estate tax
      let stateTax = 0;
      const stateExemptions: Record<string, number> = {
        'no-estate-tax': Infinity,
        'low': 5000000,
        'medium': 3000000,
        'high': 1000000
      };
      const stateExempt = stateExemptions[stateLevel] || Infinity;
      if (taxableEstate > stateExempt) {
        stateTax = (taxableEstate - stateExempt) * 0.12; // avg state estate tax ~12%
      }

      const totalTax = federalTax + stateTax;

      // Probate costs (2-7% of estate for no-trust, 0 for trust)
      let probateCost = 0;
      if (plan === 'none') {
        if (estate < 500000) probateCost = estate * 0.05;
        else if (estate < 1000000) probateCost = estate * 0.04;
        else if (estate < 5000000) probateCost = estate * 0.03;
        else probateCost = estate * 0.02;
      }

      // Trust savings = probate cost that would have been incurred
      const trustSavings = plan !== 'none' ? (
        estate < 500000 ? estate * 0.05 :
        estate < 1000000 ? estate * 0.04 :
        estate < 5000000 ? estate * 0.03 :
        estate * 0.02
      ) : 0;

      const netToHeirs = estate - totalTax - probateCost;
      const perBeneficiary = netToHeirs / beneficiaries;

      const exemptionText = taxableEstate <= federalExemption
        ? fmt(federalExemption) + ' (estate is under exemption)'
        : fmt(federalExemption) + ' (' + fmt(Math.max(0, taxableEstate - federalExemption)) + ' taxable)';

      document.getElementById('ep2-tax')!.textContent = fmt(totalTax);
      document.getElementById('ep2-probate')!.textContent = fmt(probateCost);
      document.getElementById('ep2-trust-savings')!.textContent = fmt(trustSavings);
      document.getElementById('ep2-per-bene')!.textContent = fmt(perBeneficiary);
      document.getElementById('ep2-net')!.textContent = fmt(netToHeirs);
      document.getElementById('ep2-exemption')!.textContent = exemptionText;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['ep2-estate', 'ep2-beneficiaries'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcEP2); el.addEventListener('change', calcEP2); }
      });
      ['ep2-filing', 'ep2-plan', 'ep2-state'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('change', calcEP2); }
      });
      calcEP2();
    }, 50);
  </script>
</CalculatorLayout>
