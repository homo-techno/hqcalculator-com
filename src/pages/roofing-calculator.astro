---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Roofing Calculator - Shingles, Squares & Cost";
const description = "Calculate roofing materials needed including shingles, squares, underlayment, and estimated costs.";
const relatedCalcs = [
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq footage." },
  { name: "Paint Calculator", url: "/paint-calculator", description: "Paint." },
  { name: "Concrete Calculator", url: "/concrete-calculator", description: "Concrete." },
  { name: "Solar Panel", url: "/solar-panel-calculator", description: "Solar." },
  { name: "Flooring Calculator", url: "/flooring-calculator", description: "Flooring." },
  { name: "BTU Calculator", url: "/btu-calculator", description: "BTU." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Roofing Calculator" keywords="roofing calculator, shingles calculator, roof squares, roofing cost, roof area, roofing materials" breadcrumbs={[{ name: "Roofing", url: "/roofing-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Roofing Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate roofing materials and cost for your project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Roof Length (ft)</label><input type="number" id="rf-l" class="rf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="40" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Roof Width (ft)</label><input type="number" id="rf-w" class="rf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="30" min="0" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Roof Pitch (rise/12)</label><input type="number" id="rf-pitch" class="rf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="0" max="24" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Waste Factor (%)</label><input type="number" id="rf-waste" class="rf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0" max="30" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Material Type</label><select id="rf-type" class="rf-in w-full px-4 py-3 border border-border rounded-xl text-lg"><option value="asphalt">Asphalt Shingles</option><option value="metal">Metal Roofing</option><option value="tile">Clay/Concrete Tile</option><option value="slate">Slate</option></select></div>
          <div><label class="block text-xs font-medium text-text mb-1">Cost per Square ($)</label><input type="number" id="rf-cost" class="rf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="350" min="0" step="10"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Roof Area</div>
          <div class="text-4xl font-extrabold font-mono" id="rf-area">0</div>
          <div class="text-sm text-blue-200 mt-1">sq ft</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Squares</div><div class="text-xl font-bold font-mono" id="rf-sq">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bundles</div><div class="text-xl font-bold font-mono" id="rf-bundles">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Cost</div><div class="text-xl font-bold" id="rf-total">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Underlayment Rolls</div><div class="text-xl font-bold" id="rf-under">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Pitch Factor</div><div class="text-xl font-bold" id="rf-factor">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="roofing" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    const matCosts: Record<string, number> = { asphalt: 350, metal: 700, tile: 900, slate: 1500 };
    function calcRoof() {
      const l = parseFloat((document.getElementById('rf-l') as HTMLInputElement).value) || 0;
      const w = parseFloat((document.getElementById('rf-w') as HTMLInputElement).value) || 0;
      const pitch = parseFloat((document.getElementById('rf-pitch') as HTMLInputElement).value) || 0;
      const waste = (parseFloat((document.getElementById('rf-waste') as HTMLInputElement).value) || 0) / 100;
      const type = (document.getElementById('rf-type') as HTMLSelectElement).value;
      const costPerSq = parseFloat((document.getElementById('rf-cost') as HTMLInputElement).value) || matCosts[type];
      const pitchFactor = Math.sqrt(1 + Math.pow(pitch / 12, 2));
      const flatArea = l * w;
      const roofArea = flatArea * pitchFactor * (1 + waste);
      const squares = roofArea / 100;
      const bundles = Math.ceil(squares * 3);
      const underRolls = Math.ceil(roofArea / 400);
      document.getElementById('rf-area')!.textContent = Math.round(roofArea).toLocaleString();
      document.getElementById('rf-sq')!.textContent = squares.toFixed(1);
      document.getElementById('rf-bundles')!.textContent = String(bundles);
      document.getElementById('rf-total')!.textContent = '$' + Math.round(squares * costPerSq).toLocaleString();
      document.getElementById('rf-under')!.textContent = String(underRolls);
      document.getElementById('rf-factor')!.textContent = pitchFactor.toFixed(3);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.rf-in').forEach(el => { el.addEventListener('input', calcRoof); el.addEventListener('change', calcRoof); }); calcRoof(); }, 50);
  </script>
</CalculatorLayout>
