---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Firewood Calculator - Cords & BTU";
const description = "Calculate firewood needs by cords, BTU output, and cost for heating season.";
const relatedCalcs = [
  { name: "BTU Calculator", url: "/btu-calculator", description: "BTU." },
  { name: "Temperature Converter", url: "/temperature-converter", description: "Temperature." },
  { name: "Energy Converter", url: "/energy-converter", description: "Energy." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget." },
  { name: "Carbon Footprint", url: "/carbon-footprint-calculator", description: "Carbon." },
  { name: "Volume Calculator", url: "/volume-calculator", description: "Volume." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Firewood Calculator" keywords="firewood calculator, cord of wood, BTU firewood, heating firewood, firewood cost" breadcrumbs={[{ name: "Firewood", url: "/firewood-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Firewood Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate firewood needs for heating season.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Wood Type</label>
            <select id="fw-type" class="fw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="24" selected>Oak (24M BTU/cord)</option>
              <option value="20">Maple (20M BTU/cord)</option>
              <option value="17">Pine (17M BTU/cord)</option>
              <option value="21">Ash (21M BTU/cord)</option>
              <option value="26">Hickory (26M BTU/cord)</option>
              <option value="18">Birch (18M BTU/cord)</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Heating Months</label><input type="number" id="fw-months" class="fw-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5" min="1" max="12" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Home Size (sq ft)</label><input type="number" id="fw-sqft" class="fw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1500" min="0" step="100"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Price per Cord ($)</label><input type="number" id="fw-price" class="fw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="250" min="0" step="10"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Firewood Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="fw-result">0 cords</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total BTU</div><div class="text-xl font-bold font-mono" id="fw-btu">0M</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Cost</div><div class="text-xl font-bold font-mono" id="fw-cost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost/Month</div><div class="text-xl font-bold font-mono" id="fw-cpm">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="firewood" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcFW() {
      const btuPerCord = parseInt((document.getElementById('fw-type') as HTMLSelectElement).value) * 1e6;
      const months = parseInt((document.getElementById('fw-months') as HTMLInputElement).value) || 5;
      const sqft = parseFloat((document.getElementById('fw-sqft') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('fw-price') as HTMLInputElement).value) || 0;
      const btuNeeded = sqft * 30 * 30 * months;
      const cords = btuPerCord > 0 ? btuNeeded / btuPerCord : 0;
      const cost = cords * price;
      document.getElementById('fw-result')!.textContent = cords.toFixed(1) + ' cords';
      document.getElementById('fw-btu')!.textContent = (btuNeeded / 1e6).toFixed(1) + 'M';
      document.getElementById('fw-cost')!.textContent = '$' + cost.toFixed(0);
      document.getElementById('fw-cpm')!.textContent = '$' + (cost / months).toFixed(0);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.fw-in').forEach(el => { el.addEventListener('input', calcFW); el.addEventListener('change', calcFW); });
      calcFW();
    }, 50);
  </script>
</CalculatorLayout>
