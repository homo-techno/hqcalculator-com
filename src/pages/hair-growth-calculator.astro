---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Hair Growth Calculator - Growth Rate & Length Projection";
const description = "Estimate hair growth rate and project how long it will take to reach your desired hair length based on genetics, age, and health factors.";
const relatedCalcs = [
  { name: "Hair Color Mixing Calculator", url: "/hair-color-mixing-calculator", description: "Hair dye mixing ratios." },
  { name: "Hair Porosity Calculator", url: "/hair-porosity-calculator", description: "Hair porosity assessment." },
  { name: "Hair Extension Calculator", url: "/hair-extension-calculator", description: "Extension bundle count." },
  { name: "Hair Developer Calculator", url: "/hair-developer-calculator", description: "Developer volume selection." },
  { name: "Hair Lightening Calculator", url: "/hair-lightening-calculator", description: "Bleach mixing and processing." },
  { name: "Beauty Budget Calculator", url: "/beauty-budget-calculator", description: "Beauty spending breakdown." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Hair Growth Calculator" keywords="hair growth, hair length, growth rate, hair growth time, hair growth projection, hair growth speed" breadcrumbs={[{ name: "Hair Growth", url: "/hair-growth-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Hair Growth Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate your hair growth rate and project time to reach your goal length.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Current Length (inches)</label><input type="number" id="hgr-current" class="hgr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" max="60" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Goal Length (inches)</label><input type="number" id="hgr-goal" class="hgr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="18" min="0" max="60" step="0.5"></div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Age Range</label>
          <select id="hgr-age" class="hgr-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="1.0">Under 20</option>
            <option value="1.0" selected>20-35</option>
            <option value="0.9">36-50</option>
            <option value="0.8">51-65</option>
            <option value="0.7">Over 65</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Hair Type</label>
          <select id="hgr-type" class="hgr-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="1.1">Asian (fastest avg growth)</option>
            <option value="1.0" selected>Caucasian (average growth)</option>
            <option value="0.85">African (slower length gain)</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Overall Health & Diet</label>
          <select id="hgr-health" class="hgr-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="1.1">Excellent (balanced diet, supplements)</option>
            <option value="1.0" selected>Good (average diet)</option>
            <option value="0.9">Fair (some deficiencies)</option>
            <option value="0.8">Poor (significant stress or deficiency)</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Trim Frequency</label>
          <select id="hgr-trim" class="hgr-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="0">No trims</option>
            <option value="0.25" selected>Every 3 months (0.25 in/trim)</option>
            <option value="0.5">Every 6 weeks (0.5 in/trim)</option>
            <option value="0.75">Monthly (0.75 in/trim)</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Time to Goal</div>
          <div class="text-5xl font-extrabold font-mono" id="hgr-time">0</div>
          <div class="text-sm text-blue-200 mt-1">months</div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Growth Rate</div><div class="text-xl font-bold" id="hgr-rate">0 in</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Inches Needed</div><div class="text-xl font-bold" id="hgr-needed">0 in</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Growth in 6 Months</div><div class="text-xl font-bold" id="hgr-six">0 in</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Growth in 1 Year</div><div class="text-xl font-bold" id="hgr-year">0 in</div></div>
        </div>
      </div>
      <ShareButton calculatorId="hair-growth" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Hair Growth Rates</h2>
      <p>Hair grows on average about 0.5 inches (1.25 cm) per month, or roughly 6 inches per year. Growth rate varies by genetics, age, nutrition, and hair type. Asian hair tends to grow fastest at about 6.3 inches/year, while African hair averages about 4 inches/year. A balanced diet rich in biotin, iron, and protein supports healthy growth. Regular trims prevent split ends from traveling up the shaft, protecting overall length retention.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcHGR() {
      const current = parseFloat((document.getElementById('hgr-current') as HTMLInputElement).value) || 0;
      const goal = parseFloat((document.getElementById('hgr-goal') as HTMLInputElement).value) || 0;
      const ageFactor = parseFloat((document.getElementById('hgr-age') as HTMLSelectElement).value);
      const typeFactor = parseFloat((document.getElementById('hgr-type') as HTMLSelectElement).value);
      const healthFactor = parseFloat((document.getElementById('hgr-health') as HTMLSelectElement).value);
      const trimPerVisit = parseFloat((document.getElementById('hgr-trim') as HTMLSelectElement).value);

      const baseRate = 0.5;
      const monthlyGrowth = baseRate * ageFactor * typeFactor * healthFactor;

      let trimPerMonth = 0;
      if (trimPerVisit === 0.25) trimPerMonth = 0.25 / 3;
      else if (trimPerVisit === 0.5) trimPerMonth = 0.5 / 1.5;
      else if (trimPerVisit === 0.75) trimPerMonth = 0.75;

      const netGrowth = Math.max(0.05, monthlyGrowth - trimPerMonth);
      const inchesNeeded = Math.max(0, goal - current);
      const months = inchesNeeded > 0 ? Math.ceil(inchesNeeded / netGrowth) : 0;

      const sixMonthGrowth = netGrowth * 6;
      const yearGrowth = netGrowth * 12;

      document.getElementById('hgr-time')!.textContent = months.toString();
      document.getElementById('hgr-rate')!.textContent = monthlyGrowth.toFixed(2) + ' in';
      document.getElementById('hgr-needed')!.textContent = inchesNeeded.toFixed(1) + ' in';
      document.getElementById('hgr-six')!.textContent = sixMonthGrowth.toFixed(1) + ' in';
      document.getElementById('hgr-year')!.textContent = yearGrowth.toFixed(1) + ' in';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.hgr-in').forEach(el => { el.addEventListener('input', calcHGR); el.addEventListener('change', calcHGR); });
      calcHGR();
    }, 50);
  </script>
</CalculatorLayout>
