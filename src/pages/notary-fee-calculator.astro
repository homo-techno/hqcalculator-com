---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Notary Fee Calculator - Estimate Notarization Costs";
const description = "Calculate notary fees based on state, document type, number of signatures, and whether you need a mobile notary.";

const relatedCalcs = [
  { name: "Power of Attorney", url: "/power-of-attorney-calculator", description: "POA costs." },
  { name: "Estate Planning", url: "/estate-planning-calculator", description: "Estate planning." },
  { name: "Mortgage Calculator", url: "/mortgage-calculator", description: "Mortgage payments." },
  { name: "Divorce Cost", url: "/divorce-cost-calculator", description: "Divorce expenses." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Property Tax", url: "/property-tax-calculator", description: "Property taxes." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Notary Fee Calculator" keywords="notary fee calculator, notarization cost, mobile notary, notary public, per signature fee, document notarization" breadcrumbs={[{ name: "Notary Fee", url: "/notary-fee-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Notary Fee Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate notarization fees for your documents based on state rates and service type.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">State</label>
            <select id="nf-state" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="low">Low-fee state ($2-$5/signature)</option>
              <option value="medium" selected>Medium-fee state ($5-$10/signature)</option>
              <option value="high">High-fee state ($10-$15/signature)</option>
              <option value="california">California (max $15/signature)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Document Type</label>
            <select id="nf-doctype" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="general" selected>General Document</option>
              <option value="real-estate">Real Estate (deed, mortgage)</option>
              <option value="legal">Legal (affidavit, POA)</option>
              <option value="loan">Loan Signing Package</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Signatures</label>
            <input type="number" id="nf-signatures" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="3" min="1" max="50" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Documents</label>
            <input type="number" id="nf-docs" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="1" min="1" max="20" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Service Type</label>
            <select id="nf-service" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="office" selected>In-Office Notary</option>
              <option value="mobile">Mobile Notary (travel to you)</option>
              <option value="remote">Remote Online Notarization (RON)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Travel Distance for Mobile (miles)</label>
            <input type="number" id="nf-travel" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="10" min="0" max="100" step="5">
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Total Fee</div>
            <div class="text-5xl font-extrabold font-mono" id="nf-total">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Per Signature Fee</div>
              <div class="text-xl font-bold text-secondary" id="nf-per-sig">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Notarization Fees</div>
              <div class="text-xl font-bold" id="nf-notary-fees">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Travel / Surcharge</div>
              <div class="text-xl font-bold text-orange-600" id="nf-surcharge">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Loan Signing Fee</div>
              <div class="text-xl font-bold" id="nf-loan-fee">$0</div>
            </div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="notary-fee" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Understanding Notary Fees</h2>
      <p>Notary fees are regulated by state law and vary from $2 to $15 per signature. Mobile notaries can charge additional travel fees, and loan signing agents typically earn $75-$200 per signing appointment. Some banks and UPS stores offer notary services for lower fees.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Remote Online Notarization (RON)</h3>
      <p>Many states now allow remote online notarization via video call. RON typically costs $25-$50 per session and offers convenience for those who cannot visit a notary in person.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcNF() {
      const stateLevel = (document.getElementById('nf-state') as HTMLSelectElement).value;
      const docType = (document.getElementById('nf-doctype') as HTMLSelectElement).value;
      const signatures = parseInt((document.getElementById('nf-signatures') as HTMLInputElement).value) || 1;
      const docs = parseInt((document.getElementById('nf-docs') as HTMLInputElement).value) || 1;
      const serviceType = (document.getElementById('nf-service') as HTMLSelectElement).value;
      const travelMiles = parseFloat((document.getElementById('nf-travel') as HTMLInputElement).value) || 0;

      // Per-signature fee by state
      const perSigFees: Record<string, number> = {
        low: 3,
        medium: 7,
        high: 12,
        california: 15
      };
      const perSig = perSigFees[stateLevel] || 7;

      // Base notarization fees
      const notaryFees = perSig * signatures * docs;

      // Loan signing flat fee
      let loanFee = 0;
      if (docType === 'loan') {
        loanFee = 125; // typical loan signing fee
      }

      // Mobile notary surcharge
      let surcharge = 0;
      if (serviceType === 'mobile') {
        surcharge = 25 + travelMiles * 1.5; // base $25 + mileage
      } else if (serviceType === 'remote') {
        surcharge = 25; // RON platform fee
      }

      const total = notaryFees + loanFee + surcharge;

      document.getElementById('nf-total')!.textContent = fmt(total);
      document.getElementById('nf-per-sig')!.textContent = '$' + perSig.toFixed(2);
      document.getElementById('nf-notary-fees')!.textContent = fmt(notaryFees);
      document.getElementById('nf-surcharge')!.textContent = fmt(surcharge);
      document.getElementById('nf-loan-fee')!.textContent = fmt(loanFee);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['nf-signatures', 'nf-docs', 'nf-travel'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcNF); el.addEventListener('change', calcNF); }
      });
      ['nf-state', 'nf-doctype', 'nf-service'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('change', calcNF); }
      });
      calcNF();
    }, 50);
  </script>
</CalculatorLayout>
