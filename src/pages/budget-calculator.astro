---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Budget Calculator - 50/30/20 Budget Planner";
const description = "Create a personal budget using the 50/30/20 rule. Allocate your income to needs, wants, and savings for better financial health.";

const relatedCalcs = [
  { name: "Salary Calculator", url: "/salary-calculator", description: "Salary." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings." },
  { name: "Debt Payoff", url: "/debt-payoff-calculator", description: "Debt payoff." },
  { name: "Net Worth", url: "/net-worth-calculator", description: "Net worth." },
  { name: "Emergency Fund", url: "/emergency-fund-calculator", description: "Emergency fund." },
  { name: "DTI Calculator", url: "/debt-to-income-calculator", description: "Debt ratio." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Budget Calculator" keywords="budget calculator, 50 30 20 rule, budget planner, personal budget, monthly budget, expense tracker" breadcrumbs={[{ name: "Budget Calculator", url: "/budget-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Budget Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Plan your monthly budget using the 50/30/20 rule.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Monthly After-Tax Income</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="bg-income" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5000" min="0" step="100">
            </div>
          </div>

          <div class="bg-blue-50 rounded-xl p-4 space-y-2">
            <h4 class="text-xs font-semibold text-blue-700 uppercase">Needs (50%) — Essential expenses</h4>
            <div class="grid grid-cols-2 gap-2">
              <div><label class="block text-xs text-text-muted mb-1">Housing</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-need w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="1500" min="0" step="50"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Utilities</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-need w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="200" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Groceries</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-need w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="400" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Transport</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-need w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="300" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Insurance</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-need w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="200" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Min. Debt Payments</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-need w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="0" min="0" step="25"></div></div>
            </div>
          </div>

          <div class="bg-yellow-50 rounded-xl p-4 space-y-2">
            <h4 class="text-xs font-semibold text-yellow-700 uppercase">Wants (30%) — Lifestyle</h4>
            <div class="grid grid-cols-2 gap-2">
              <div><label class="block text-xs text-text-muted mb-1">Dining Out</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-want w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="300" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Entertainment</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-want w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="200" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Shopping</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-want w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="150" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Subscriptions</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-want w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="80" min="0" step="10"></div></div>
            </div>
          </div>

          <div class="bg-green-50 rounded-xl p-4 space-y-2">
            <h4 class="text-xs font-semibold text-green-700 uppercase">Savings & Debt (20%)</h4>
            <div class="grid grid-cols-2 gap-2">
              <div><label class="block text-xs text-text-muted mb-1">Emergency Fund</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-save w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="300" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Retirement</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-save w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="500" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Extra Debt Payoff</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-save w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="200" min="0" step="25"></div></div>
              <div><label class="block text-xs text-text-muted mb-1">Other Savings</label><div class="relative"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span><input type="number" class="bg-save w-full pl-5 pr-2 py-2 border border-border rounded-lg text-sm" value="0" min="0" step="25"></div></div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Unallocated</div>
            <div class="text-5xl font-extrabold" id="bg-unalloc">$0</div>
          </div>
          <div class="grid grid-cols-3 gap-3">
            <div class="p-4 bg-blue-50 rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Needs</div>
              <div class="text-lg font-bold" id="bg-needs-total">$0</div>
              <div class="text-xs" id="bg-needs-pct">0%</div>
            </div>
            <div class="p-4 bg-yellow-50 rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Wants</div>
              <div class="text-lg font-bold" id="bg-wants-total">$0</div>
              <div class="text-xs" id="bg-wants-pct">0%</div>
            </div>
            <div class="p-4 bg-green-50 rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Savings</div>
              <div class="text-lg font-bold" id="bg-save-total">$0</div>
              <div class="text-xs" id="bg-save-pct">0%</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-2">50/30/20 Comparison</h3>
            <div class="space-y-2" id="bg-bars"></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="budget" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">The 50/30/20 Budget Rule</h2>
      <p>Allocate your after-tax income: <strong>50%</strong> to needs (rent, food, bills), <strong>30%</strong> to wants (entertainment, dining), and <strong>20%</strong> to savings & debt repayment.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function sumClass(cls: string): number {
      let total = 0;
      document.querySelectorAll('.' + cls).forEach(el => { total += parseFloat((el as HTMLInputElement).value) || 0; });
      return total;
    }

    function calcBudget() {
      const income = parseFloat((document.getElementById('bg-income') as HTMLInputElement).value) || 0;
      const needs = sumClass('bg-need');
      const wants = sumClass('bg-want');
      const saves = sumClass('bg-save');
      const total = needs + wants + saves;
      const unalloc = income - total;

      const np = income > 0 ? (needs / income * 100) : 0;
      const wp = income > 0 ? (wants / income * 100) : 0;
      const sp = income > 0 ? (saves / income * 100) : 0;

      document.getElementById('bg-unalloc')!.textContent = fmt(unalloc);
      document.getElementById('bg-unalloc')!.parentElement!.style.backgroundColor = unalloc >= 0 ? '#3b82f6' : '#ef4444';
      document.getElementById('bg-needs-total')!.textContent = fmt(needs);
      document.getElementById('bg-needs-pct')!.textContent = np.toFixed(0) + '% of income';
      document.getElementById('bg-wants-total')!.textContent = fmt(wants);
      document.getElementById('bg-wants-pct')!.textContent = wp.toFixed(0) + '% of income';
      document.getElementById('bg-save-total')!.textContent = fmt(saves);
      document.getElementById('bg-save-pct')!.textContent = sp.toFixed(0) + '% of income';

      const bar = (label: string, actual: number, target: number, color: string) => {
        const over = actual > target;
        return `<div class="text-xs"><div class="flex justify-between mb-0.5"><span>${label}</span><span class="font-semibold ${over ? 'text-red-600' : ''}">${actual.toFixed(0)}% / ${target}%</span></div><div class="w-full h-3 bg-gray-200 rounded-full overflow-hidden"><div class="h-full rounded-full ${color}" style="width:${Math.min(100, actual / target * 100)}%"></div></div></div>`;
      };

      document.getElementById('bg-bars')!.innerHTML =
        bar('Needs (target 50%)', np, 50, 'bg-blue-500') +
        bar('Wants (target 30%)', wp, 30, 'bg-yellow-500') +
        bar('Savings (target 20%)', sp, 20, 'bg-green-500');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.getElementById('bg-income')!.addEventListener('input', calcBudget);
      document.querySelectorAll('.bg-need, .bg-want, .bg-save').forEach(el => el.addEventListener('input', calcBudget));
      calcBudget();
    }, 50);
  </script>
</CalculatorLayout>
