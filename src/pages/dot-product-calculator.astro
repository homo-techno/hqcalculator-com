---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Dot Product Calculator - Vector Dot Product (2D & 3D)";
const description = "Calculate the dot product of two vectors in 2D or 3D. Find the angle between vectors and scalar projection.";

const relatedCalcs = [
  { name: "Cross Product Calculator", url: "/cross-product-calculator", description: "3D vector cross product." },
  { name: "Polar Coordinates", url: "/polar-coordinates-calculator", description: "Rectangular to polar conversion." },
  { name: "Matrix Determinant", url: "/determinant-calculator", description: "Matrix determinant calculator." },
  { name: "Average Calculator", url: "/average-calculator", description: "Mean, median, mode." },
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Advanced math operations." },
  { name: "Interpolation Calculator", url: "/interpolation-calculator", description: "Linear interpolation." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Dot Product Calculator"
  keywords="dot product calculator, vector dot product, scalar product, angle between vectors, vector projection"
  breadcrumbs={[{ name: "Dot Product Calculator", url: "/dot-product-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dot Product Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Compute the dot product of two vectors with angle and projection results.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-text mb-1">Dimension</label>
          <select id="dp2-mode" class="dp2-in w-full px-4 py-2 border border-border rounded-xl text-lg">
            <option value="2">2D Vectors</option>
            <option value="3" selected>3D Vectors</option>
          </select>
        </div>

        <h3 class="font-semibold text-text">Vector A</h3>
        <div class="grid grid-cols-3 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">A<sub>x</sub></label>
            <input type="number" id="dp2-ax" class="dp2-in w-full px-4 py-2 border border-border rounded-xl text-lg" value="1" />
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">A<sub>y</sub></label>
            <input type="number" id="dp2-ay" class="dp2-in w-full px-4 py-2 border border-border rounded-xl text-lg" value="2" />
          </div>
          <div id="dp2-az-wrap">
            <label class="block text-sm font-medium text-text mb-1">A<sub>z</sub></label>
            <input type="number" id="dp2-az" class="dp2-in w-full px-4 py-2 border border-border rounded-xl text-lg" value="3" />
          </div>
        </div>

        <h3 class="font-semibold text-text">Vector B</h3>
        <div class="grid grid-cols-3 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">B<sub>x</sub></label>
            <input type="number" id="dp2-bx" class="dp2-in w-full px-4 py-2 border border-border rounded-xl text-lg" value="4" />
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">B<sub>y</sub></label>
            <input type="number" id="dp2-by" class="dp2-in w-full px-4 py-2 border border-border rounded-xl text-lg" value="5" />
          </div>
          <div id="dp2-bz-wrap">
            <label class="block text-sm font-medium text-text mb-1">B<sub>z</sub></label>
            <input type="number" id="dp2-bz" class="dp2-in w-full px-4 py-2 border border-border rounded-xl text-lg" value="6" />
          </div>
        </div>

        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Dot Product A &middot; B</div>
          <div class="text-5xl font-extrabold font-mono" id="dp2-result">0</div>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Angle Between Vectors</div>
            <div class="text-xl font-bold" id="dp2-angle">0&deg;</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Projection of A onto B</div>
            <div class="text-xl font-bold" id="dp2-proj">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">|A|</div>
            <div class="text-xl font-bold" id="dp2-maga">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">|B|</div>
            <div class="text-xl font-bold" id="dp2-magb">0</div>
          </div>
        </div>

        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Relationship</h3>
          <div class="text-sm text-text-secondary" id="dp2-interpret"></div>
        </div>
      </div>

      <ShareButton calculatorId="dot-product" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">What Is the Dot Product?</h2>
      <p>The dot product (scalar product) of two vectors gives a single number. For vectors A and B:</p>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm">
        <p><strong>A &middot; B</strong> = A<sub>x</sub>B<sub>x</sub> + A<sub>y</sub>B<sub>y</sub> + A<sub>z</sub>B<sub>z</sub></p>
        <p><strong>A &middot; B</strong> = |A| |B| cos(&theta;)</p>
      </div>
      <h3 class="text-xl font-semibold text-text mt-8">Interpretation</h3>
      <ul>
        <li>Positive dot product: vectors point in similar directions (angle &lt; 90&deg;)</li>
        <li>Zero dot product: vectors are perpendicular (angle = 90&deg;)</li>
        <li>Negative dot product: vectors point in opposite directions (angle &gt; 90&deg;)</li>
      </ul>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcDP2() {
      const mode = (document.getElementById('dp2-mode') as HTMLSelectElement).value;
      const is3D = mode === '3';

      document.getElementById('dp2-az-wrap')!.style.display = is3D ? '' : 'none';
      document.getElementById('dp2-bz-wrap')!.style.display = is3D ? '' : 'none';

      const ax = parseFloat((document.getElementById('dp2-ax') as HTMLInputElement).value) || 0;
      const ay = parseFloat((document.getElementById('dp2-ay') as HTMLInputElement).value) || 0;
      const az = is3D ? (parseFloat((document.getElementById('dp2-az') as HTMLInputElement).value) || 0) : 0;
      const bx = parseFloat((document.getElementById('dp2-bx') as HTMLInputElement).value) || 0;
      const by = parseFloat((document.getElementById('dp2-by') as HTMLInputElement).value) || 0;
      const bz = is3D ? (parseFloat((document.getElementById('dp2-bz') as HTMLInputElement).value) || 0) : 0;

      const dot = ax * bx + ay * by + az * bz;
      const magA = Math.sqrt(ax * ax + ay * ay + az * az);
      const magB = Math.sqrt(bx * bx + by * by + bz * bz);

      let angle = 0;
      if (magA > 0 && magB > 0) {
        angle = Math.acos(Math.min(1, Math.max(-1, dot / (magA * magB)))) * (180 / Math.PI);
      }

      const projection = magB > 0 ? dot / magB : 0;

      const fmt = (n: number) => Number.isInteger(n) ? String(n) : n.toFixed(4);

      document.getElementById('dp2-result')!.textContent = fmt(dot);
      document.getElementById('dp2-angle')!.innerHTML = fmt(angle) + '&deg;';
      document.getElementById('dp2-proj')!.textContent = fmt(projection);
      document.getElementById('dp2-maga')!.textContent = fmt(magA);
      document.getElementById('dp2-magb')!.textContent = fmt(magB);

      let interpret = '';
      if (magA === 0 || magB === 0) {
        interpret = 'One or both vectors are zero vectors.';
      } else if (Math.abs(dot) < 1e-10) {
        interpret = 'The vectors are perpendicular (orthogonal).';
      } else if (dot > 0) {
        interpret = `The vectors point in a similar direction (acute angle of ${fmt(angle)}&deg;).`;
      } else {
        interpret = `The vectors point in opposite directions (obtuse angle of ${fmt(angle)}&deg;).`;
      }
      document.getElementById('dp2-interpret')!.innerHTML = interpret;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('.dp2-in').forEach(el => {
        el.addEventListener('input', calcDP2);
        el.addEventListener('change', calcDP2);
      });
      calcDP2();
    }, 50);
  </script>
</CalculatorLayout>
