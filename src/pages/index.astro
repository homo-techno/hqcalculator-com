      { name: 'Paint Calculator', url: '/paint-calculator', desc: 'Gallons of paint needed' },
    ]
  },
  {
    id: 'tax',
    title: 'Tax & Salary',
    icon: '\u{1F4B0}',
    color: '#0891b2',
    calcs: [
      { name: 'Income Tax Calculator', url: '/income-tax-calculator', desc: 'Federal & state taxes' },
      { name: 'Paycheck Calculator', url: '/paycheck-calculator', desc: 'Take-home pay estimator' },
      { name: 'Sales Tax Calculator', url: '/sales-tax-calculator', desc: 'Tax on purchases' },
      { name: 'Hourly to Salary', url: '/hourly-to-salary-calculator', desc: 'Convert hourly to annual' },
      { name: 'Tax Bracket Calculator', url: '/tax-bracket-calculator', desc: 'Find your tax bracket' },
      { name: 'Tip Calculator', url: '/tip-calculator', desc: 'Restaurant tip & bill split' },
    ]
  },
  {
    id: 'other',
    title: 'Conversion & Other',
    icon: '\u21C4',
    color: '#64748b',
    calcs: [
      { name: 'Temperature Converter', url: '/temperature-converter', desc: 'C, F, K conversion' },
      { name: 'Length Converter', url: '/length-converter', desc: 'Cm, in, ft, m, km, miles' },
      { name: 'Weight Converter', url: '/weight-converter', desc: 'Kg, lbs, oz, stones' },
      { name: 'Bra Size Calculator', url: '/bra-size-calculator', desc: 'Find your correct size' },
      { name: 'Shoe Size Converter', url: '/shoe-size-converter', desc: 'US, UK, EU sizes' },
      { name: 'Electricity Cost Calculator', url: '/electricity-cost-calculator', desc: 'Monthly electric bill' },
      { name: 'Love Calculator', url: '/love-calculator', desc: 'Name compatibility test' },
    ]
  },
];
---

<CalculatorLayout
  title={title}
  description={description}
  keywords="online calculator, free calculator, percentage calculator, BMI calculator, mortgage calculator, age calculator, loan calculator"
>
  <!-- Hero Section -->
  <section class="bg-gradient-to-b from-primary/5 to-surface pt-12 pb-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
      <h1 class="text-4xl sm:text-5xl lg:text-6xl font-extrabold text-text mb-4">
        Free Online <span class="text-primary">Calculators</span>
      </h1>
      <p class="text-lg sm:text-xl text-text-secondary max-w-2xl mx-auto mb-8">
        500+ calculators for finance, health, math, fitness, construction, and more. Instant results, no sign-up required.
      </p>

      <!-- Quick search / popular calcs -->
      <div class="flex flex-wrap justify-center gap-3 max-w-3xl mx-auto">
        {[
          { name: 'Percentage', url: '/percentage-calculator' },
          { name: 'Age', url: '/age-calculator' },
          { name: 'BMI', url: '/bmi-calculator' },
          { name: 'Mortgage', url: '/mortgage-calculator' },
          { name: 'Calorie', url: '/calorie-calculator' },
          { name: 'GPA', url: '/gpa-calculator' },
          { name: 'Loan', url: '/loan-calculator' },
          { name: 'Tip', url: '/tip-calculator' },
        ].map(calc => (
          <a href={calc.url}
            class="px-4 py-2 bg-white border border-border rounded-full text-sm font-medium text-text-secondary hover:text-primary hover:border-primary/30 hover:shadow-sm transition-all no-underline">
            {calc.name} Calculator
          </a>
        ))}
      </div>
    </div>
  </section>

  <!-- Calculator Categories -->
  <section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-12">
    {categories.map((cat) => (
      <div id={cat.id} class="mb-12">
        <div class="flex items-center gap-3 mb-6">
          <div class="w-10 h-10 rounded-xl flex items-center justify-center text-white font-bold text-lg" style={`background: ${cat.color}`}>
            {cat.icon}
          </div>
          <h2 class="text-2xl font-bold text-text">{cat.title}</h2>
        </div>

        <div class="grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-4">
          {cat.calcs.map((calc) => (
            <a href={calc.url}
              class="block p-4 bg-white border border-border rounded-xl hover:border-primary/30 hover:shadow-md transition-all group no-underline relative">
              {calc.hot && (
                <span class="absolute top-3 right-3 px-2 py-0.5 bg-danger/10 text-danger text-[10px] font-bold uppercase rounded-full">Popular</span>
              )}
              <h3 class="font-semibold text-text group-hover:text-primary transition-colors pr-16">{calc.name}</h3>
              <p class="text-sm text-text-secondary mt-1">{calc.desc}</p>
            </a>
          ))}
        </div>
      </div>
    ))}
  </section>

  <!-- Trust / Features section -->
  <section class="bg-surface-alt py-16">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="text-center mb-12">
        <h2 class="text-3xl font-bold text-text">Why HQ Calculator?</h2>
        <p class="text-text-secondary mt-2">Built for speed, accuracy, and simplicity.</p>
      </div>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="text-center">
          <div class="w-14 h-14 bg-primary/10 text-primary rounded-2xl flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            &lt;1s
          </div>
          <h3 class="font-semibold text-text text-lg">Instant Results</h3>
          <p class="text-sm text-text-secondary mt-2">No loading, no submit button. Results update as you type. Every calculator loads in under 1 second.</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-secondary/10 text-secondary rounded-2xl flex items-center justify-center mx-auto mb-4 text-2xl font-bold">
            0
          </div>
          <h3 class="font-semibold text-text text-lg">No Sign-Up Ever</h3>
          <p class="text-sm text-text-secondary mt-2">100% free, no registration, no email walls. Just open and calculate. Share results with a simple link.</p>
        </div>
        <div class="text-center">
          <div class="w-14 h-14 bg-accent/10 text-accent rounded-2xl flex items-center justify-center mx-auto mb-4 text-2xl">
            &#10003;
          </div>
          <h3 class="font-semibold text-text text-lg">Verified Accuracy</h3>
          <p class="text-sm text-text-secondary mt-2">Every formula is verified against official sources. Financial calculators reviewed by professionals.</p>
        </div>
      </div>
    </div>
  </section>
</CalculatorLayout>
