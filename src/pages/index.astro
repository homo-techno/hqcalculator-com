---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';

const title = "HQ Calculator - Free Online Calculators for Finance, Health, Math & More";
const description = "500+ free online calculators. Mortgage, BMI, percentage, age, loan, calorie, GPA calculators and more. Instant results, no sign-up. The best calculator site on the web.";

interface CalcLink {
  name: string;
  url: string;
  desc: string;
  hot?: boolean;
}

interface Category {
  id: string;
  title: string;
  icon: string;
  color: string;
  calcs: CalcLink[];
}

const categories: Category[] = [
  {
    id: 'math',
    title: 'Math Calculators',
    icon: 'f(x)',
    color: '#2563eb',
    calcs: [
      { name: 'Percentage Calculator', url: '/percentage-calculator', desc: '% of a number, increase, decrease', hot: true },
      { name: 'Fraction Calculator', url: '/fraction-calculator', desc: 'Add, subtract, multiply, divide fractions' },
      { name: 'Scientific Calculator', url: '/scientific-calculator', desc: 'Advanced math operations' },
      { name: 'Square Root Calculator', url: '/square-root-calculator', desc: 'Find square roots instantly' },
      { name: 'Random Number Generator', url: '/random-number-generator', desc: 'Generate random numbers' },
      { name: 'GPA Calculator', url: '/gpa-calculator', desc: 'Calculate your grade point average' },
      { name: 'Exponent Calculator', url: '/exponent-calculator', desc: 'Powers and exponents' },
      { name: 'Logarithm Calculator', url: '/logarithm-calculator', desc: 'Log and natural log' },
      { name: 'LCM Calculator', url: '/lcm-calculator', desc: 'Least common multiple' },
      { name: 'GCF Calculator', url: '/gcf-calculator', desc: 'Greatest common factor' },
    ]
  },
  {
    id: 'financial',
    title: 'Financial Calculators',
    icon: '$',
    color: '#059669',
    calcs: [
      { name: 'Mortgage Calculator', url: '/mortgage-calculator', desc: 'Monthly payment, amortization schedule', hot: true },
      { name: 'Loan Calculator', url: '/loan-calculator', desc: 'Loan payments, interest, payoff date' },
      { name: 'Compound Interest Calculator', url: '/compound-interest-calculator', desc: 'Grow your savings' },
      { name: 'Auto Loan Calculator', url: '/auto-loan-calculator', desc: 'Car payment estimator' },
      { name: 'Salary Calculator', url: '/salary-calculator', desc: 'Hourly, weekly, monthly, annual' },
      { name: 'Investment Calculator', url: '/investment-calculator', desc: 'Future value of investments' },
      { name: 'Savings Calculator', url: '/savings-calculator', desc: 'Savings growth over time' },
      { name: 'Retirement Calculator', url: '/retirement-calculator', desc: 'Plan for retirement' },
      { name: 'Inflation Calculator', url: '/inflation-calculator', desc: 'Purchasing power over time' },
      { name: 'Currency Converter', url: '/currency-converter', desc: 'Exchange rates calculator' },
    ]
  },
  {
    id: 'health',
    title: 'Health Calculators',
    icon: '+',
    color: '#dc2626',
    calcs: [
      { name: 'BMI Calculator', url: '/bmi-calculator', desc: 'Body Mass Index', hot: true },
      { name: 'Calorie Calculator', url: '/calorie-calculator', desc: 'Daily calorie needs' },
      { name: 'Body Fat Calculator', url: '/body-fat-calculator', desc: 'Estimate body fat %' },
      { name: 'BMR Calculator', url: '/bmr-calculator', desc: 'Basal metabolic rate' },
      { name: 'TDEE Calculator', url: '/tdee-calculator', desc: 'Total daily energy expenditure' },
      { name: 'Pregnancy Calculator', url: '/pregnancy-calculator', desc: 'Due date & milestones' },
      { name: 'Ovulation Calculator', url: '/ovulation-calculator', desc: 'Fertility window' },
      { name: 'Ideal Weight Calculator', url: '/ideal-weight-calculator', desc: 'Healthy weight range' },
      { name: 'Macro Calculator', url: '/macro-calculator', desc: 'Protein, carbs, fat' },
      { name: 'Water Intake Calculator', url: '/water-intake-calculator', desc: 'Daily water needs' },
    ]
  },
  {
    id: 'datetime',
    title: 'Date & Time Calculators',
    icon: '\u23F0',
    color: '#7c3aed',
    calcs: [
      { name: 'Age Calculator', url: '/age-calculator', desc: 'How old am I? Exact age in years, days', hot: true },
      { name: 'Date Calculator', url: '/date-calculator', desc: 'Days between two dates' },
      { name: 'Time Calculator', url: '/time-calculator', desc: 'Add & subtract time' },
      { name: 'Hours Calculator', url: '/hours-calculator', desc: 'Hours between times' },
      { name: 'Time Zone Converter', url: '/time-zone-converter', desc: 'Convert between time zones' },
      { name: 'Day Counter', url: '/day-counter', desc: 'Count days from a date' },
    ]
  },
  {
    id: 'fitness',
    title: 'Fitness & Sports',
    icon: '\u{1F3CB}',
    color: '#ea580c',
    calcs: [
      { name: 'Calories Burned Calculator', url: '/calories-burned-calculator', desc: 'By activity type' },
