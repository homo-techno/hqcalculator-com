---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Cash-on-Cash Return Calculator";
const description = "Calculate cash-on-cash return from net income and total cash invested, with comparison to alternative investments.";
const relatedCalcs = [
  { name: "Cap Rate", url: "/cap-rate-calculator", description: "Capitalization rate." },
  { name: "Rental Yield", url: "/rental-yield-calculator", description: "Rental yield analysis." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
  { name: "Rental Property", url: "/rental-property-calculator", description: "Rental property ROI." },
  { name: "Investment", url: "/investment-calculator", description: "Investment growth." },
  { name: "Cash Flow", url: "/cash-flow-calculator", description: "Cash flow analysis." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Cash-on-Cash Return Calculator" keywords="cash on cash return, CoC, real estate return, cash invested, net operating income, rental return" breadcrumbs={[{ name: "Cash-on-Cash Return", url: "/cash-on-cash-return-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Cash-on-Cash Return Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Measure your real estate investment performance by comparing annual cash flow to total cash invested.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <h3 class="font-semibold text-sm text-text">Cash Invested</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Down Payment ($)</label><input type="number" id="cc3-down" class="cc3-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="60000" min="0" step="1000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Closing Costs ($)</label><input type="number" id="cc3-closing" class="cc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8000" min="0" step="500"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Rehab / Renovation Costs ($)</label><input type="number" id="cc3-rehab" class="cc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5000" min="0" step="500"></div>
        <h3 class="font-semibold text-sm text-text">Annual Income &amp; Expenses</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Annual Gross Rent ($)</label><input type="number" id="cc3-rent" class="cc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="24000" min="0" step="500"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Annual Operating Expenses ($)</label><input type="number" id="cc3-expenses" class="cc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6000" min="0" step="500"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Annual Debt Service ($)</label><input type="number" id="cc3-debt" class="cc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10800" min="0" step="100"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Cash-on-Cash Return</div>
          <div class="text-5xl font-extrabold font-mono" id="cc3-coc">0%</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Cash Invested</div><div class="text-xl font-bold font-mono" id="cc3-totalcash">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Cash Flow</div><div class="text-xl font-bold font-mono" id="cc3-cashflow">$0</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">NOI</div><div class="text-xl font-bold font-mono" id="cc3-noi">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Cash Flow</div><div class="text-xl font-bold font-mono" id="cc3-monthly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">vs S&amp;P 500 (10%)</div><div class="text-xl font-bold font-mono" id="cc3-vs500">--</div></div>
        </div>
        <div class="p-4 rounded-xl text-center" id="cc3-status-box"><div class="font-bold text-sm" id="cc3-status">-</div></div>
      </div>
      <ShareButton calculatorId="cash-on-cash-return" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCC3() {
      const down = parseFloat((document.getElementById('cc3-down') as HTMLInputElement).value) || 0;
      const closing = parseFloat((document.getElementById('cc3-closing') as HTMLInputElement).value) || 0;
      const rehab = parseFloat((document.getElementById('cc3-rehab') as HTMLInputElement).value) || 0;
      const rent = parseFloat((document.getElementById('cc3-rent') as HTMLInputElement).value) || 0;
      const expenses = parseFloat((document.getElementById('cc3-expenses') as HTMLInputElement).value) || 0;
      const debt = parseFloat((document.getElementById('cc3-debt') as HTMLInputElement).value) || 0;

      const totalCash = down + closing + rehab;
      const noi = rent - expenses;
      const annualCashFlow = noi - debt;
      const monthlyCF = annualCashFlow / 12;
      const coc = totalCash > 0 ? (annualCashFlow / totalCash) * 100 : 0;

      const sp500Equiv = totalCash * 0.10;
      let vsLabel = 'Even';
      if (annualCashFlow > sp500Equiv * 1.1) vsLabel = 'Outperforms';
      else if (annualCashFlow < sp500Equiv * 0.9) vsLabel = 'Underperforms';

      const fmt = (v: number) => (v >= 0 ? '$' : '-$') + Math.abs(v).toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('cc3-coc')!.textContent = coc.toFixed(2) + '%';
      document.getElementById('cc3-totalcash')!.textContent = fmt(totalCash);
      document.getElementById('cc3-cashflow')!.textContent = fmt(annualCashFlow);
      document.getElementById('cc3-noi')!.textContent = fmt(noi);
      document.getElementById('cc3-monthly')!.textContent = fmt(monthlyCF);
      document.getElementById('cc3-vs500')!.textContent = vsLabel;

      let status: string, color: string;
      if (coc >= 12) { status = 'Excellent cash-on-cash return'; color = 'bg-green-50 text-green-800'; }
      else if (coc >= 8) { status = 'Strong return — above average for real estate'; color = 'bg-blue-50 text-blue-800'; }
      else if (coc >= 4) { status = 'Moderate return — typical for stable markets'; color = 'bg-yellow-50 text-yellow-800'; }
      else { status = 'Low return — consider other opportunities'; color = 'bg-red-50 text-red-800'; }

      document.getElementById('cc3-status')!.textContent = status;
      document.getElementById('cc3-status-box')!.className = `p-4 rounded-xl text-center ${color}`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.cc3-in').forEach(el => { el.addEventListener('input', calcCC3); el.addEventListener('change', calcCC3); });
      calcCC3();
    }, 50);
  </script>
</CalculatorLayout>
