---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Life Insurance Calculator - How Much Coverage Do You Need?";
const description = "Calculate your life insurance needs based on income replacement, debts, and dependents to find the right coverage amount.";

const relatedCalcs = [
  { name: "Health Insurance", url: "/health-insurance-calculator", description: "Compare health plans." },
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Plan retirement." },
  { name: "Net Worth", url: "/net-worth-calculator", description: "Track net worth." },
  { name: "Emergency Fund", url: "/emergency-fund-calculator", description: "Emergency savings." },
  { name: "Estate Planning", url: "/estate-planning-calculator", description: "Estate planning." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Life Insurance Calculator" keywords="life insurance calculator, coverage needs, term life, whole life, insurance estimate, death benefit" breadcrumbs={[{ name: "Life Insurance", url: "/life-insurance-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Life Insurance Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Determine how much life insurance coverage you need to protect your family.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Annual Income</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="li-income" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="75000" min="0" step="1000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Years of Income to Replace</label>
            <input type="number" id="li-years" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="10" min="1" max="40" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Total Outstanding Debts</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="li-debts" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="200000" min="0" step="5000">
            </div>
            <p class="text-xs text-text-muted mt-1">Mortgage, car loans, student loans, credit cards</p>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Current Savings &amp; Investments</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="li-savings" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="50000" min="0" step="5000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Dependents</label>
            <input type="number" id="li-dependents" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="2" min="0" max="10" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Funeral &amp; Final Expenses</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="li-funeral" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="15000" min="0" step="1000">
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Recommended Coverage</div>
            <div class="text-5xl font-extrabold font-mono" id="li-coverage">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Income Replacement</div>
              <div class="text-xl font-bold text-secondary" id="li-income-need">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Debt Coverage</div>
              <div class="text-xl font-bold" id="li-debt-need">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Est. Term (20yr) Monthly</div>
              <div class="text-xl font-bold text-green-600" id="li-term-cost">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Est. Whole Life Monthly</div>
              <div class="text-xl font-bold text-orange-600" id="li-whole-cost">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Dependent Allowance Included</div>
            <div class="text-xl font-bold" id="li-dep-allow">$0</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="life-insurance" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How Much Life Insurance Do You Need?</h2>
      <p>A common approach is the DIME method: Debt + Income replacement + Mortgage + Education costs minus existing assets. This calculator uses income replacement multiplied by years needed, plus debts and final expenses, minus savings.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Term vs Whole Life Insurance</h3>
      <p><strong>Term life</strong> is affordable and covers a specific period (10-30 years). <strong>Whole life</strong> covers your entire life and builds cash value but costs 5-15x more. Most families benefit from term life insurance.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcLI() {
      const income = parseFloat((document.getElementById('li-income') as HTMLInputElement).value) || 0;
      const years = parseInt((document.getElementById('li-years') as HTMLInputElement).value) || 10;
      const debts = parseFloat((document.getElementById('li-debts') as HTMLInputElement).value) || 0;
      const savings = parseFloat((document.getElementById('li-savings') as HTMLInputElement).value) || 0;
      const dependents = parseInt((document.getElementById('li-dependents') as HTMLInputElement).value) || 0;
      const funeral = parseFloat((document.getElementById('li-funeral') as HTMLInputElement).value) || 0;

      const incomeNeed = income * years;
      const depAllowance = dependents * 50000;
      const totalNeed = incomeNeed + debts + funeral + depAllowance;
      const coverage = Math.max(0, totalNeed - savings);

      // Rough premium estimates per $1000/month of coverage
      const termMonthly = (coverage / 1000) * 0.5; // ~$0.50 per $1000 for 20yr term
      const wholeMonthly = (coverage / 1000) * 5.0; // ~$5 per $1000 for whole life

      document.getElementById('li-coverage')!.textContent = fmt(coverage);
      document.getElementById('li-income-need')!.textContent = fmt(incomeNeed);
      document.getElementById('li-debt-need')!.textContent = fmt(debts);
      document.getElementById('li-term-cost')!.textContent = fmt(termMonthly) + '/mo';
      document.getElementById('li-whole-cost')!.textContent = fmt(wholeMonthly) + '/mo';
      document.getElementById('li-dep-allow')!.textContent = fmt(depAllowance);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['li-income', 'li-years', 'li-debts', 'li-savings', 'li-dependents', 'li-funeral'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcLI); el.addEventListener('change', calcLI); }
      });
      calcLI();
    }, 50);
  </script>
</CalculatorLayout>
