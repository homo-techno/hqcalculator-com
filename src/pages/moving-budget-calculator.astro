---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Moving Budget Calculator - Estimate Your Moving Costs";
const description = "Calculate total moving costs including movers, packing materials, insurance, tips, and travel expenses.";

const relatedCalcs = [
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Rent vs Buy", url: "/rent-vs-buy-calculator", description: "Rent or buy?" },
  { name: "Emergency Fund", url: "/emergency-fund-calculator", description: "Emergency savings." },
  { name: "Down Payment", url: "/down-payment-calculator", description: "Home down payment." },
  { name: "Mortgage Calculator", url: "/mortgage-calculator", description: "Mortgage payments." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Moving Budget Calculator" keywords="moving cost calculator, moving budget, moving expenses, movers cost, packing supplies, relocation cost" breadcrumbs={[{ name: "Moving Budget", url: "/moving-budget-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Moving Budget Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate the total cost of your move including all commonly overlooked expenses.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Distance (miles)</label>
            <input type="number" id="mb-distance" class="w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="500" min="0" step="50">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Home Size</label>
            <select id="mb-size" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="studio">Studio / 1 Bedroom</option>
              <option value="2bed" selected>2-3 Bedrooms</option>
              <option value="4bed">4+ Bedrooms</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Moving Method</label>
            <select id="mb-method" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="diy">DIY (truck rental)</option>
              <option value="movers" selected>Professional Movers</option>
              <option value="pod">Moving Container / Pod</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Packing Materials Budget</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="mb-packing" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="200" min="0" step="25">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Movers</label>
            <input type="number" id="mb-movers-count" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="3" min="2" max="6" step="1">
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Total Moving Cost</div>
            <div class="text-5xl font-extrabold font-mono" id="mb-total">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Moving Service</div>
              <div class="text-xl font-bold text-secondary" id="mb-service">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Tip Estimate</div>
              <div class="text-xl font-bold" id="mb-tip">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Insurance</div>
              <div class="text-xl font-bold" id="mb-insurance">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Packing + Supplies</div>
              <div class="text-xl font-bold" id="mb-supplies">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Estimated Timeline</div>
            <div class="text-xl font-bold" id="mb-timeline">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="moving-budget" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Planning Your Moving Budget</h2>
      <p>Moving costs vary widely based on distance, home size, and method. Local moves typically cost $300-$1,500, while long-distance moves range from $2,000-$8,000+. Get at least 3 quotes from movers and read reviews carefully.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Don't Forget Hidden Costs</h3>
      <p>Budget for deposits, utility connection fees, cleaning costs, temporary storage, meals during the move, and pet boarding. These extras can add $500-$2,000 to your total.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcMB() {
      const distance = parseFloat((document.getElementById('mb-distance') as HTMLInputElement).value) || 0;
      const size = (document.getElementById('mb-size') as HTMLSelectElement).value;
      const method = (document.getElementById('mb-method') as HTMLSelectElement).value;
      const packing = parseFloat((document.getElementById('mb-packing') as HTMLInputElement).value) || 0;
      const moversCount = parseInt((document.getElementById('mb-movers-count') as HTMLInputElement).value) || 3;

      // Base cost by home size
      const baseCost: Record<string, number> = { studio: 800, '2bed': 1600, '4bed': 3000 };
      const base = baseCost[size] || 1600;

      // Distance factor
      let distanceCost = 0;
      if (distance <= 50) {
        distanceCost = distance * 2;
      } else if (distance <= 500) {
        distanceCost = 100 + distance * 1.5;
      } else {
        distanceCost = 100 + 500 * 1.5 + (distance - 500) * 0.8;
      }

      // Method multiplier
      let methodMultiplier = 1.0;
      if (method === 'diy') methodMultiplier = 0.4;
      else if (method === 'pod') methodMultiplier = 0.7;
      else methodMultiplier = 1.0;

      const serviceCost = (base + distanceCost) * methodMultiplier;

      // Tip: $20-$40 per mover for local, $50-$100 for long distance
      let tipPerMover = distance > 100 ? 75 : 30;
      const tip = method === 'movers' ? moversCount * tipPerMover : 0;

      // Insurance: ~1-2% of estimated home contents value
      const contentsEstimate: Record<string, number> = { studio: 10000, '2bed': 30000, '4bed': 60000 };
      const insurance = (contentsEstimate[size] || 30000) * 0.015;

      const total = serviceCost + tip + insurance + packing;

      // Timeline estimate
      let timeline = '';
      if (distance <= 50) timeline = '1 day (local move)';
      else if (distance <= 500) timeline = '1-2 days';
      else if (distance <= 1500) timeline = '3-5 days';
      else timeline = '1-2 weeks';

      document.getElementById('mb-total')!.textContent = fmt(total);
      document.getElementById('mb-service')!.textContent = fmt(serviceCost);
      document.getElementById('mb-tip')!.textContent = fmt(tip);
      document.getElementById('mb-insurance')!.textContent = fmt(insurance);
      document.getElementById('mb-supplies')!.textContent = fmt(packing);
      document.getElementById('mb-timeline')!.textContent = timeline;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['mb-distance', 'mb-packing', 'mb-movers-count'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcMB); el.addEventListener('change', calcMB); }
      });
      ['mb-size', 'mb-method'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('change', calcMB); }
      });
      calcMB();
    }, 50);
  </script>
</CalculatorLayout>
