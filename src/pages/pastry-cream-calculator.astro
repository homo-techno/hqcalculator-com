---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Pastry Cream Calculator - Scale Recipe by Volume Needed";
const description = "Scale pastry cream (cr\u00E8me p\u00E2tissi\u00E8re) recipes to any volume. Get exact ingredient quantities for eclairs, tarts, cream puffs, and more.";
const relatedCalcs = [
  { name: "Frosting Calculator", url: "/frosting-calculator", description: "Calculate frosting quantities for cakes." },
  { name: "Cake Pan Converter", url: "/cake-pan-converter-calculator", description: "Convert recipes between pan sizes." },
  { name: "Chocolate Tempering Calculator", url: "/chocolate-tempering-calculator", description: "Chocolate tempering temperatures." },
  { name: "Sugar Syrup Calculator", url: "/sugar-syrup-calculator", description: "Sugar syrup concentrations." },
  { name: "Macaron Calculator", url: "/macaron-calculator", description: "Macaron recipe ratios by count." },
  { name: "Baking Conversion Calculator", url: "/baking-conversion-calculator", description: "Convert between baking units." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Pastry Cream Calculator" keywords="pastry cream, creme patissiere, custard recipe, cream puff filling, eclair cream, pastry cream scaling" breadcrumbs={[{ name: "Pastry Cream", url: "/pastry-cream-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Pastry Cream Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Scale your pastry cream recipe to any volume needed. Perfect for eclairs, tarts, cream puffs, and filled pastries.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Desired Volume</label>
            <input type="number" id="pcr-volume" class="pcr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0.25" step="0.25">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Unit</label>
            <select id="pcr-unit" class="pcr-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="cups" selected>Cups</option>
              <option value="ml">Milliliters</option>
              <option value="liters">Liters</option>
            </select>
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Variation</label>
          <select id="pcr-variation" class="pcr-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="classic">Classic Pastry Cream</option>
            <option value="chocolate">Chocolate Pastry Cream</option>
            <option value="light">Diplomat Cream (with whipped cream)</option>
            <option value="mousseline">Mousseline (with butter)</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Use Case (for portion guidance)</label>
          <select id="pcr-use" class="pcr-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="eclair">Eclairs</option>
            <option value="creampuff">Cream Puffs</option>
            <option value="tart">Tart Filling</option>
            <option value="layer">Cake Layer Filling</option>
            <option value="custom">Custom Amount</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Pastry Cream</div>
          <div class="text-5xl font-extrabold font-mono" id="pcr-result">--</div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Whole Milk</div>
            <div class="text-xl font-bold font-mono" id="pcr-milk">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Egg Yolks</div>
            <div class="text-xl font-bold font-mono" id="pcr-yolks">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Sugar</div>
            <div class="text-xl font-bold font-mono" id="pcr-sugar">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Cornstarch</div>
            <div class="text-xl font-bold font-mono" id="pcr-starch">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Butter</div>
            <div class="text-xl font-bold font-mono" id="pcr-butter">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Fills Approx.</div>
            <div class="text-xl font-bold font-mono" id="pcr-fills">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="pastry-cream" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPCR() {
      const volume = parseFloat((document.getElementById('pcr-volume') as HTMLInputElement).value) || 2;
      const unit = (document.getElementById('pcr-unit') as HTMLSelectElement).value;
      const variation = (document.getElementById('pcr-variation') as HTMLSelectElement).value;
      const use = (document.getElementById('pcr-use') as HTMLSelectElement).value;

      // Convert to mL
      let ml = volume;
      if (unit === 'cups') ml = volume * 236.6;
      else if (unit === 'liters') ml = volume * 1000;

      // Base recipe per 500mL (about 2 cups):
      // 500mL milk, 4 yolks, 100g sugar, 40g cornstarch, 30g butter, 1 tsp vanilla
      const scale = ml / 500;

      let milkMl = 500 * scale;
      let yolks = 4 * scale;
      let sugarG = 100 * scale;
      let starchG = 40 * scale;
      let butterG = 30 * scale;
      let extra = '';

      if (variation === 'chocolate') {
        extra = ' + ' + (80 * scale).toFixed(0) + 'g dark chocolate';
      } else if (variation === 'light') {
        extra = ' + ' + (ml * 0.5).toFixed(0) + 'mL whipped cream (fold in)';
      } else if (variation === 'mousseline') {
        butterG = 100 * scale; // More butter for mousseline
      }

      // Portion estimates
      let fills = '';
      const totalMl = ml;
      if (use === 'eclair') fills = Math.floor(totalMl / 35) + ' eclairs';
      else if (use === 'creampuff') fills = Math.floor(totalMl / 45) + ' cream puffs';
      else if (use === 'tart') fills = Math.floor(totalMl / 300) + ' 9" tarts';
      else if (use === 'layer') fills = Math.floor(totalMl / 250) + ' cake layers';
      else fills = (totalMl / 236.6).toFixed(1) + ' cups';

      document.getElementById('pcr-result')!.textContent = (ml / 236.6).toFixed(1) + ' cups / ' + ml.toFixed(0) + ' mL';
      document.getElementById('pcr-milk')!.textContent = milkMl.toFixed(0) + ' mL';
      document.getElementById('pcr-yolks')!.textContent = Math.round(yolks) + ' yolks';
      document.getElementById('pcr-sugar')!.textContent = sugarG.toFixed(0) + ' g';
      document.getElementById('pcr-starch')!.textContent = starchG.toFixed(0) + ' g';
      document.getElementById('pcr-butter')!.textContent = butterG.toFixed(0) + ' g' + extra;
      document.getElementById('pcr-fills')!.textContent = fills;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.pcr-in').forEach(el => { el.addEventListener('input', calcPCR); el.addEventListener('change', calcPCR); });
      calcPCR();
    }, 50);
  </script>
</CalculatorLayout>
