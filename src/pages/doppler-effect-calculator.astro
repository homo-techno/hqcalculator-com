---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Doppler Effect Calculator";
const description = "Calculate observed frequency due to the Doppler effect for sound or light sources in relative motion.";
const relatedCalcs = [
  { name: "Wavelength", url: "/wavelength-calculator", description: "Wavelength." },
  { name: "Frequency", url: "/frequency-calculator", description: "Frequency." },
  { name: "Sound Speed", url: "/sound-speed-calculator", description: "Sound." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed." },
  { name: "Decibel", url: "/decibel-calculator", description: "Decibels." },
  { name: "Scientific Notation", url: "/scientific-notation-calculator", description: "Notation." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Doppler Effect Calculator" keywords="Doppler effect, frequency shift, Doppler shift, sound Doppler, observed frequency" breadcrumbs={[{ name: "Doppler Effect", url: "/doppler-effect-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Doppler Effect Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate how motion changes observed frequency.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Source Frequency (Hz)</label><input type="number" id="dp-fs" class="dp-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="440" min="1" step="1"></div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Source Speed (m/s)</label><input type="number" id="dp-vs" class="dp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="30" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Observer Speed (m/s)</label><input type="number" id="dp-vo" class="dp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Source Direction</label>
            <select id="dp-sd" class="dp-in w-full px-4 py-3 border border-border rounded-xl text-sm font-bold">
              <option value="toward">Approaching</option>
              <option value="away">Moving Away</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Speed of Sound (m/s)</label><input type="number" id="dp-c" class="dp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="343" min="1" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Observed Frequency</div>
          <div class="text-5xl font-extrabold font-mono" id="dp-result">0 Hz</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Shift</div><div class="text-xl font-bold font-mono" id="dp-shift">0 Hz</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">% Change</div><div class="text-xl font-bold font-mono" id="dp-pct">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Wavelength</div><div class="text-xl font-bold font-mono" id="dp-wl">0 m</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formula</h3>
          <div class="text-xs font-mono" id="dp-formula">f' = f × (v ± vₒ) / (v ∓ vₛ)</div>
        </div>
      </div>
      <ShareButton calculatorId="doppler-effect" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDP() {
      const fs = parseFloat((document.getElementById('dp-fs') as HTMLInputElement).value) || 440;
      const vs = parseFloat((document.getElementById('dp-vs') as HTMLInputElement).value) || 0;
      const vo = parseFloat((document.getElementById('dp-vo') as HTMLInputElement).value) || 0;
      const c = parseFloat((document.getElementById('dp-c') as HTMLInputElement).value) || 343;
      const dir = (document.getElementById('dp-sd') as HTMLSelectElement).value;
      let fo: number;
      if (dir === 'toward') {
        fo = fs * (c + vo) / (c - vs);
      } else {
        fo = fs * (c - vo) / (c + vs);
      }
      if (!isFinite(fo) || fo < 0) fo = 0;
      const shift = fo - fs;
      const pct = fs > 0 ? (shift / fs) * 100 : 0;
      const wl = fo > 0 ? c / fo : 0;
      document.getElementById('dp-result')!.textContent = fo.toFixed(1) + ' Hz';
      document.getElementById('dp-shift')!.textContent = (shift >= 0 ? '+' : '') + shift.toFixed(1) + ' Hz';
      document.getElementById('dp-pct')!.textContent = (pct >= 0 ? '+' : '') + pct.toFixed(1) + '%';
      document.getElementById('dp-wl')!.textContent = wl.toFixed(3) + ' m';
      document.getElementById('dp-formula')!.textContent = `f' = ${fs} × (${c} ${dir === 'toward' ? '+' : '−'} ${vo}) / (${c} ${dir === 'toward' ? '−' : '+'} ${vs}) = ${fo.toFixed(1)} Hz`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.dp-in').forEach(el => { el.addEventListener('input', calcDP); el.addEventListener('change', calcDP); });
      calcDP();
    }, 50);
  </script>
</CalculatorLayout>
