---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Cone Calculator - Volume, Surface Area & Slant Height";
const description = "Calculate cone volume, surface area, slant height, and base area from radius and height.";
const relatedCalcs = [
  { name: "Volume Calculator", url: "/volume-calculator", description: "3D volumes." },
  { name: "Sphere Calculator", url: "/sphere-calculator", description: "Spheres." },
  { name: "Cylinder Calculator", url: "/cylinder-calculator", description: "Cylinders." },
  { name: "Circle Calculator", url: "/circle-calculator", description: "Circles." },
  { name: "Pythagorean Theorem", url: "/pythagorean-theorem-calculator", description: "Pythagorean." },
  { name: "Area Calculator", url: "/area-calculator", description: "2D areas." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Cone Calculator" keywords="cone calculator, cone volume, cone surface area, slant height, cone formula" breadcrumbs={[{ name: "Cone Calculator", url: "/cone-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Cone Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate all properties of a cone from radius and height.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Radius</label><input type="number" id="cn-r" class="cn-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5" min="0" step="0.1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Height</label><input type="number" id="cn-h" class="cn-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="12" min="0" step="0.1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-5 bg-primary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Volume</div><div class="text-2xl font-extrabold font-mono" id="cn-vol">0</div></div>
          <div class="p-5 bg-secondary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Total Surface Area</div><div class="text-2xl font-extrabold font-mono" id="cn-tsa">0</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Slant Height</div><div class="text-xl font-bold" id="cn-sl">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Lateral Area</div><div class="text-xl font-bold" id="cn-la">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Base Area</div><div class="text-xl font-bold" id="cn-ba">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formulas</h3>
          <div class="font-mono text-sm space-y-1">
            <div>V = (1/3)πr²h</div>
            <div>Slant = √(r² + h²)</div>
            <div>Lateral SA = πr × slant</div>
            <div>Total SA = πr(r + slant)</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="cone" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCone() {
      const r = parseFloat((document.getElementById('cn-r') as HTMLInputElement).value) || 0;
      const h = parseFloat((document.getElementById('cn-h') as HTMLInputElement).value) || 0;
      const slant = Math.sqrt(r*r + h*h);
      const vol = (1/3) * Math.PI * r*r * h;
      const baseArea = Math.PI * r*r;
      const lateralArea = Math.PI * r * slant;
      const totalSA = baseArea + lateralArea;
      document.getElementById('cn-vol')!.textContent = vol.toFixed(4);
      document.getElementById('cn-tsa')!.textContent = totalSA.toFixed(4);
      document.getElementById('cn-sl')!.textContent = slant.toFixed(4);
      document.getElementById('cn-la')!.textContent = lateralArea.toFixed(4);
      document.getElementById('cn-ba')!.textContent = baseArea.toFixed(4);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.cn-in').forEach(el => el.addEventListener('input', calcCone)); calcCone(); }, 50);
  </script>
</CalculatorLayout>
