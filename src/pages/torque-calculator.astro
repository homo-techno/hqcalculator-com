---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Torque Calculator - τ = F × r";
const description = "Calculate torque from force and distance, or convert between torque units (N·m, lb·ft, kg·cm).";
const relatedCalcs = [
  { name: "Force Calculator", url: "/force-calculator", description: "F = ma." },
  { name: "Momentum", url: "/momentum-calculator", description: "Momentum." },
  { name: "Acceleration", url: "/acceleration-calculator", description: "Acceleration." },
  { name: "Ohm's Law", url: "/ohms-law-calculator", description: "Electrical." },
  { name: "Pressure Converter", url: "/pressure-converter", description: "Pressure." },
  { name: "Length Converter", url: "/length-converter", description: "Length." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Torque Calculator" keywords="torque calculator, nm to ft-lbs, torque conversion, rotational force, torque formula" breadcrumbs={[{ name: "Torque Calculator", url: "/torque-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Torque Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate torque and convert between torque units.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-3 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Force (N)</label><input type="number" id="tq-f" class="tq-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="100" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Distance (m)</label><input type="number" id="tq-d" class="tq-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.5" min="0" step="0.01"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Angle (°)</label><input type="number" id="tq-a" class="tq-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="90" min="0" max="180" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Torque</div>
          <div class="text-5xl font-extrabold font-mono" id="tq-result">0</div>
          <div class="text-sm text-blue-200 mt-1">N·m</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">lb·ft</div><div class="text-xl font-bold font-mono" id="tq-lbft">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">kg·cm</div><div class="text-xl font-bold font-mono" id="tq-kgcm">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">lb·in</div><div class="text-xl font-bold font-mono" id="tq-lbin">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formula</h3>
          <div class="font-mono text-sm">τ = F × r × sin(θ)</div>
        </div>
      </div>
      <ShareButton calculatorId="torque" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcTorque() {
      const f = parseFloat((document.getElementById('tq-f') as HTMLInputElement).value) || 0;
      const d = parseFloat((document.getElementById('tq-d') as HTMLInputElement).value) || 0;
      const a = parseFloat((document.getElementById('tq-a') as HTMLInputElement).value) || 90;
      const rad = a * Math.PI / 180;
      const nm = f * d * Math.sin(rad);
      document.getElementById('tq-result')!.textContent = nm.toFixed(4);
      document.getElementById('tq-lbft')!.textContent = (nm * 0.737562).toFixed(4);
      document.getElementById('tq-kgcm')!.textContent = (nm * 10.1972).toFixed(4);
      document.getElementById('tq-lbin')!.textContent = (nm * 8.85075).toFixed(4);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.tq-in').forEach(el => el.addEventListener('input', calcTorque)); calcTorque(); }, 50);
  </script>
</CalculatorLayout>
