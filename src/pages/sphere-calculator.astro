---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Sphere Calculator - Volume, Surface Area & Diameter";
const description = "Calculate sphere volume, surface area, diameter, and circumference from any known measurement.";
const relatedCalcs = [
  { name: "Volume Calculator", url: "/volume-calculator", description: "3D volumes." },
  { name: "Circle Calculator", url: "/circle-calculator", description: "Circles." },
  { name: "Cone Calculator", url: "/cone-calculator", description: "Cones." },
  { name: "Cylinder Calculator", url: "/cylinder-calculator", description: "Cylinders." },
  { name: "Area Calculator", url: "/area-calculator", description: "2D areas." },
  { name: "Length Converter", url: "/length-converter", description: "Length units." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Sphere Calculator" keywords="sphere calculator, sphere volume, sphere surface area, sphere diameter, ball calculator" breadcrumbs={[{ name: "Sphere Calculator", url: "/sphere-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Sphere Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Enter any one value to calculate all sphere properties.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Known Value</label><select id="sp-mode" class="w-full px-4 py-3 border border-border rounded-xl text-lg"><option value="radius" selected>Radius</option><option value="diameter">Diameter</option><option value="volume">Volume</option><option value="surfaceArea">Surface Area</option></select></div>
          <div><label class="block text-xs font-medium text-text mb-1">Value</label><input type="number" id="sp-val" class="w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5" min="0" step="0.1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-5 bg-primary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Volume</div><div class="text-2xl font-extrabold font-mono" id="sp-vol">0</div></div>
          <div class="p-5 bg-secondary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Surface Area</div><div class="text-2xl font-extrabold font-mono" id="sp-sa">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Radius</div><div class="text-xl font-bold" id="sp-r">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Diameter</div><div class="text-xl font-bold" id="sp-d">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Great Circle Circumference</div><div class="text-xl font-bold" id="sp-circ">0</div></div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formulas</h3>
          <div class="font-mono text-sm space-y-1">
            <div>V = (4/3)πr³</div>
            <div>SA = 4πr²</div>
            <div>C = 2πr</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="sphere" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSphere() {
      const mode = (document.getElementById('sp-mode') as HTMLSelectElement).value;
      const val = parseFloat((document.getElementById('sp-val') as HTMLInputElement).value) || 0;
      let r: number;
      if (mode === 'radius') r = val;
      else if (mode === 'diameter') r = val / 2;
      else if (mode === 'volume') r = Math.cbrt(val * 3 / (4 * Math.PI));
      else r = Math.sqrt(val / (4 * Math.PI));
      const vol = (4/3) * Math.PI * r*r*r;
      const sa = 4 * Math.PI * r*r;
      document.getElementById('sp-vol')!.textContent = vol.toFixed(4);
      document.getElementById('sp-sa')!.textContent = sa.toFixed(4);
      document.getElementById('sp-r')!.textContent = r.toFixed(4);
      document.getElementById('sp-d')!.textContent = (r*2).toFixed(4);
      document.getElementById('sp-circ')!.textContent = (2*Math.PI*r).toFixed(4);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.getElementById('sp-val')!.addEventListener('input', calcSphere); document.getElementById('sp-mode')!.addEventListener('change', calcSphere); calcSphere(); }, 50);
  </script>
</CalculatorLayout>
