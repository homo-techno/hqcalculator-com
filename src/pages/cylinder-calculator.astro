---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Cylinder Calculator - Volume & Surface Area";
const description = "Calculate cylinder volume, surface area, lateral area, and base area from radius and height.";
const relatedCalcs = [
  { name: "Volume Calculator", url: "/volume-calculator", description: "3D volumes." },
  { name: "Cone Calculator", url: "/cone-calculator", description: "Cones." },
  { name: "Sphere Calculator", url: "/sphere-calculator", description: "Spheres." },
  { name: "Circle Calculator", url: "/circle-calculator", description: "Circles." },
  { name: "Area Calculator", url: "/area-calculator", description: "2D areas." },
  { name: "Pool Volume", url: "/pool-volume-calculator", description: "Pool volume." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Cylinder Calculator" keywords="cylinder calculator, cylinder volume, cylinder surface area, pipe volume, tank volume" breadcrumbs={[{ name: "Cylinder Calculator", url: "/cylinder-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Cylinder Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate cylinder volume and surface area.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Radius</label><input type="number" id="cy-r" class="cy-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5" min="0" step="0.1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Height</label><input type="number" id="cy-h" class="cy-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="10" min="0" step="0.1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-5 bg-primary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Volume</div><div class="text-2xl font-extrabold font-mono" id="cy-vol">0</div></div>
          <div class="p-5 bg-secondary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Total Surface Area</div><div class="text-2xl font-extrabold font-mono" id="cy-tsa">0</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Lateral Area</div><div class="text-xl font-bold" id="cy-la">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Base Area</div><div class="text-xl font-bold" id="cy-ba">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Diameter</div><div class="text-xl font-bold" id="cy-dia">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formulas</h3>
          <div class="font-mono text-sm space-y-1">
            <div>V = πr²h</div>
            <div>Lateral SA = 2πrh</div>
            <div>Total SA = 2πr(r + h)</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="cylinder" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCyl() {
      const r = parseFloat((document.getElementById('cy-r') as HTMLInputElement).value) || 0;
      const h = parseFloat((document.getElementById('cy-h') as HTMLInputElement).value) || 0;
      const vol = Math.PI * r*r * h;
      const baseArea = Math.PI * r*r;
      const lateralArea = 2 * Math.PI * r * h;
      const totalSA = 2 * Math.PI * r * (r + h);
      document.getElementById('cy-vol')!.textContent = vol.toFixed(4);
      document.getElementById('cy-tsa')!.textContent = totalSA.toFixed(4);
      document.getElementById('cy-la')!.textContent = lateralArea.toFixed(4);
      document.getElementById('cy-ba')!.textContent = baseArea.toFixed(4);
      document.getElementById('cy-dia')!.textContent = (r*2).toFixed(4);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.cy-in').forEach(el => el.addEventListener('input', calcCyl)); calcCyl(); }, 50);
  </script>
</CalculatorLayout>
