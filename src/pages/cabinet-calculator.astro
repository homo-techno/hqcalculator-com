---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Cabinet Calculator";
const description = "Calculate kitchen cabinets needed, linear footage, and cost estimates for your kitchen remodel.";
const relatedCalcs = [
  { name: "Countertop", url: "/countertop-calculator", description: "Countertop." },
  { name: "Backsplash", url: "/backsplash-calculator", description: "Backsplash." },
  { name: "Crown Molding", url: "/crown-molding-calculator", description: "Molding." },
  { name: "Lighting", url: "/lighting-calculator", description: "Lighting." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Door Calculator", url: "/door-calculator", description: "Doors." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Cabinet Calculator" keywords="cabinet calculator, kitchen cabinets, cabinet cost, linear foot cabinets, cabinet count" breadcrumbs={[{ name: "Cabinet", url: "/cabinet-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Cabinet Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate cabinets for your kitchen project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Kitchen Wall Length (total linear ft)</label><input type="number" id="cb-lin" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="20" min="0" step="1"></div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Cabinet Grade</label>
            <select id="cb-grade" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="100">Stock ($100/lf)</option>
              <option value="250" selected>Semi-Custom ($250/lf)</option>
              <option value="500">Custom ($500/lf)</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Upper Cabinet %</label><input type="number" id="cb-upper" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="60" min="0" max="100" step="5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Openings to Deduct (ft)</label><input type="number" id="cb-open" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Island Length (ft)</label><input type="number" id="cb-island" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="0" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Cabinets</div>
          <div class="text-5xl font-extrabold font-mono" id="cb-result">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Base Cabs</div><div class="text-xl font-bold font-mono" id="cb-base">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Upper Cabs</div><div class="text-xl font-bold font-mono" id="cb-up">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Net Linear Ft</div><div class="text-xl font-bold font-mono" id="cb-net">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cabinet Cost</div><div class="text-xl font-bold font-mono" id="cb-cost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Install (~$75/lf)</div><div class="text-xl font-bold font-mono" id="cb-inst">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="cabinet" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCB() {
      const lin = parseFloat((document.getElementById('cb-lin') as HTMLInputElement).value) || 0;
      const grade = parseFloat((document.getElementById('cb-grade') as HTMLSelectElement).value);
      const upperPct = parseFloat((document.getElementById('cb-upper') as HTMLInputElement).value) / 100;
      const openings = parseFloat((document.getElementById('cb-open') as HTMLInputElement).value) || 0;
      const island = parseFloat((document.getElementById('cb-island') as HTMLInputElement).value) || 0;
      const netBase = Math.max(0, lin - openings) + island;
      const netUpper = Math.max(0, lin - openings) * upperPct;
      const baseCabs = Math.ceil(netBase / 2);
      const upperCabs = Math.ceil(netUpper / 2.5);
      const totalCabs = baseCabs + upperCabs;
      const totalLF = netBase + netUpper;
      const cabCost = totalLF * grade;
      const installCost = totalLF * 75;
      document.getElementById('cb-result')!.textContent = totalCabs.toString();
      document.getElementById('cb-base')!.textContent = baseCabs.toString();
      document.getElementById('cb-up')!.textContent = upperCabs.toString();
      document.getElementById('cb-net')!.textContent = totalLF.toFixed(0) + ' lf';
      document.getElementById('cb-cost')!.textContent = '$' + cabCost.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('cb-inst')!.textContent = '$' + installCost.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.cb-in').forEach(el => { el.addEventListener('input', calcCB); el.addEventListener('change', calcCB); });
      calcCB();
    }, 50);
  </script>
</CalculatorLayout>
