---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Property Management Fee Calculator";
const description = "Calculate property management fees as a percentage of rent, leasing fees, maintenance markup, and net income to owner.";
const relatedCalcs = [
  { name: "Rental Property", url: "/rental-property-calculator", description: "Rental property ROI." },
  { name: "Rental Yield", url: "/rental-yield-calculator", description: "Rental yield analysis." },
  { name: "Cap Rate", url: "/cap-rate-calculator", description: "Capitalization rate." },
  { name: "Cash Flow", url: "/cash-flow-calculator", description: "Cash flow analysis." },
  { name: "Commission", url: "/commission-calculator", description: "Commission calculations." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Property Management Fee Calculator" keywords="property management fee, management percentage, leasing fee, maintenance markup, net to owner, landlord cost" breadcrumbs={[{ name: "Property Management Fee", url: "/property-management-fee-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Property Management Fee Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate all property management costs and see your net income after management fees.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Monthly Rent ($)</label><input type="number" id="pf2-rent" class="pf2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="2000" min="0" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Number of Units</label><input type="number" id="pf2-units" class="pf2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="4" min="1" max="500" step="1"></div>
        </div>
        <h3 class="font-semibold text-sm text-text">Management Fees</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Management Fee (% of rent)</label><input type="number" id="pf2-mgmtpct" class="pf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" max="20" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Leasing Fee (% of 1st month)</label><input type="number" id="pf2-leasepct" class="pf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" max="100" step="5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Avg Turnovers Per Year</label><input type="number" id="pf2-turnovers" class="pf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="0" max="12" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Maintenance Markup (%)</label><input type="number" id="pf2-markup" class="pf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0" max="50" step="1"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Avg Annual Maintenance Cost ($)</label><input type="number" id="pf2-maint" class="pf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3000" min="0" step="500"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Annual Net to Owner</div>
          <div class="text-5xl font-extrabold font-mono" id="pf2-net">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Mgmt Fee</div><div class="text-xl font-bold font-mono" id="pf2-mgmtfee">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Leasing Fees</div><div class="text-xl font-bold font-mono" id="pf2-leasefee">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Maintenance Markup</div><div class="text-xl font-bold font-mono" id="pf2-markupcost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Annual Fees</div><div class="text-xl font-bold font-mono" id="pf2-totalfees">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Fees as % of Rent</div><div class="text-xl font-bold font-mono" id="pf2-feepct">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Net / Unit</div><div class="text-xl font-bold font-mono" id="pf2-monthlynet">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="property-management-fee" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPF2() {
      const rent = parseFloat((document.getElementById('pf2-rent') as HTMLInputElement).value) || 0;
      const units = parseFloat((document.getElementById('pf2-units') as HTMLInputElement).value) || 1;
      const mgmtPct = parseFloat((document.getElementById('pf2-mgmtpct') as HTMLInputElement).value) || 0;
      const leasePct = parseFloat((document.getElementById('pf2-leasepct') as HTMLInputElement).value) || 0;
      const turnovers = parseFloat((document.getElementById('pf2-turnovers') as HTMLInputElement).value) || 0;
      const markup = parseFloat((document.getElementById('pf2-markup') as HTMLInputElement).value) || 0;
      const maint = parseFloat((document.getElementById('pf2-maint') as HTMLInputElement).value) || 0;

      const totalMonthlyRent = rent * units;
      const annualRent = totalMonthlyRent * 12;
      const annualMgmtFee = annualRent * (mgmtPct / 100);
      const annualLeaseFee = turnovers * rent * (leasePct / 100);
      const maintenanceMarkup = maint * (markup / 100);
      const totalFees = annualMgmtFee + annualLeaseFee + maintenanceMarkup;
      const netToOwner = annualRent - totalFees;
      const feePctOfRent = annualRent > 0 ? (totalFees / annualRent) * 100 : 0;
      const monthlyNetPerUnit = units > 0 ? netToOwner / 12 / units : 0;

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('pf2-net')!.textContent = fmt(netToOwner);
      document.getElementById('pf2-mgmtfee')!.textContent = fmt(annualMgmtFee);
      document.getElementById('pf2-leasefee')!.textContent = fmt(annualLeaseFee);
      document.getElementById('pf2-markupcost')!.textContent = fmt(maintenanceMarkup);
      document.getElementById('pf2-totalfees')!.textContent = fmt(totalFees);
      document.getElementById('pf2-feepct')!.textContent = feePctOfRent.toFixed(1) + '%';
      document.getElementById('pf2-monthlynet')!.textContent = fmt(monthlyNetPerUnit);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.pf2-in').forEach(el => { el.addEventListener('input', calcPF2); el.addEventListener('change', calcPF2); });
      calcPF2();
    }, 50);
  </script>
</CalculatorLayout>
