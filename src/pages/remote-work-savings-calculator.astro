---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Remote Work Savings Calculator - Monthly & Annual";
const description = "Calculate how much you save working remotely, including commute, lunch, wardrobe, and time savings plus carbon reduction.";
const relatedCalcs = [
  { name: "Commute Cost", url: "/commute-cost-calculator", description: "Commute costs." },
  { name: "Carbon Footprint", url: "/carbon-footprint-calculator", description: "Carbon." },
  { name: "Salary Calculator", url: "/salary-calculator", description: "Salary." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budgeting." },
  { name: "Productivity", url: "/productivity-calculator", description: "Productivity." },
  { name: "Meeting Cost", url: "/meeting-cost-calculator", description: "Meeting costs." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Remote Work Savings Calculator" keywords="remote work savings, work from home savings, WFH calculator, remote work benefits, telecommute savings" breadcrumbs={[{ name: "Remote Work Savings", url: "/remote-work-savings-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Remote Work Savings Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">See how much money and time you save by working from home.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Daily Commute Cost ($)</label><input type="number" id="rw2-commute" class="rw2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="15" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Daily Lunch Savings ($)</label><input type="number" id="rw2-lunch" class="rw2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="0" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Monthly Wardrobe Savings ($)</label><input type="number" id="rw2-ward" class="rw2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" step="10"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Monthly Office Share/Costs ($)</label><input type="number" id="rw2-office" class="rw2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="10"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Commute Days Saved/Week</label><input type="number" id="rw2-days" class="rw2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="1" max="7" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Round-Trip Commute (min)</label><input type="number" id="rw2-time" class="rw2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="10" step="5"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Round-Trip Distance (miles)</label><input type="number" id="rw2-miles" class="rw2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="30" min="0" step="5"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Annual Savings</div>
          <div class="text-5xl font-extrabold font-mono" id="rw2-annual">$0</div>
          <div class="text-sm text-blue-200 mt-1">total financial savings</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Savings</div><div class="text-xl font-bold" id="rw2-monthly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Time Saved/Year</div><div class="text-xl font-bold" id="rw2-timesaved">0 hrs</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">CO2 Reduced/Year</div><div class="text-xl font-bold" id="rw2-co2">0 lbs</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Gas Gallons Saved/Year</div><div class="text-xl font-bold" id="rw2-gas">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="remote-work-savings" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Remote Work Financial Impact</h2>
      <p>Studies show remote workers save $4,000-$12,000 per year on commuting, food, clothing, and other expenses. Beyond finances, the average remote worker saves 40 minutes per day in commute time and reduces their carbon footprint by 1.5-3 tons of CO2 annually.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRemote() {
      const commute = parseFloat((document.getElementById('rw2-commute') as HTMLInputElement).value) || 0;
      const lunch = parseFloat((document.getElementById('rw2-lunch') as HTMLInputElement).value) || 0;
      const wardrobe = parseFloat((document.getElementById('rw2-ward') as HTMLInputElement).value) || 0;
      const office = parseFloat((document.getElementById('rw2-office') as HTMLInputElement).value) || 0;
      const days = parseFloat((document.getElementById('rw2-days') as HTMLInputElement).value) || 5;
      const timeMin = parseFloat((document.getElementById('rw2-time') as HTMLInputElement).value) || 50;
      const miles = parseFloat((document.getElementById('rw2-miles') as HTMLInputElement).value) || 0;
      const weeksPerYear = 50;
      const dailySavings = commute + lunch;
      const monthlyDailySavings = dailySavings * days * 4.33;
      const monthlySavings = monthlyDailySavings + wardrobe - office;
      const annualSavings = Math.round(monthlySavings * 12);
      const annualTimeMins = timeMin * days * weeksPerYear;
      const annualTimeHrs = Math.round(annualTimeMins / 60);
      // CO2: avg car = 404g CO2/mile
      const annualMiles = miles * days * weeksPerYear;
      const co2Lbs = Math.round(annualMiles * 404 / 453.6); // grams to lbs
      const gallonsSaved = Math.round(annualMiles / 28); // avg 28 mpg
      document.getElementById('rw2-annual')!.textContent = '$' + annualSavings.toLocaleString();
      document.getElementById('rw2-monthly')!.textContent = '$' + Math.round(monthlySavings).toLocaleString();
      document.getElementById('rw2-timesaved')!.textContent = annualTimeHrs.toLocaleString() + ' hrs';
      document.getElementById('rw2-co2')!.textContent = co2Lbs.toLocaleString() + ' lbs';
      document.getElementById('rw2-gas')!.textContent = gallonsSaved.toLocaleString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.rw2-in').forEach(el => { el.addEventListener('input', calcRemote); el.addEventListener('change', calcRemote); }); calcRemote(); }, 50);
  </script>
</CalculatorLayout>
