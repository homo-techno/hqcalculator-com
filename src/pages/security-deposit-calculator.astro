---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Security Deposit Calculator";
const description = "Calculate maximum security deposit by state law, interest accrual, deduction itemization, and refund amount.";
const relatedCalcs = [
  { name: "Rental Property", url: "/rental-property-calculator", description: "Rental property ROI." },
  { name: "Rental Yield", url: "/rental-yield-calculator", description: "Rental yield analysis." },
  { name: "Rent vs Buy", url: "/rent-vs-buy-calculator", description: "Rent vs buy comparison." },
  { name: "Mortgage", url: "/mortgage-calculator", description: "Mortgage payments." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Security Deposit Calculator" keywords="security deposit, deposit refund, tenant deposit, deposit interest, deposit deductions, state deposit law" breadcrumbs={[{ name: "Security Deposit", url: "/security-deposit-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Security Deposit Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate maximum deposit amounts, interest accrual, deductions, and expected refund.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Monthly Rent ($)</label><input type="number" id="sd2-rent" class="sd2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="1800" min="0" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Deposit Multiplier (months)</label>
            <select id="sd2-mult" class="sd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="1">1 month (e.g., CA, NY)</option>
              <option value="1.5">1.5 months (e.g., MA)</option>
              <option value="2" selected>2 months (e.g., TX, FL)</option>
              <option value="3">3 months (e.g., no limit states)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Deposit Held ($)</label><input type="number" id="sd2-held" class="sd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3600" min="0" step="100"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Holding Period (months)</label><input type="number" id="sd2-months" class="sd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="1" max="120" step="1"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Annual Interest Rate on Deposit (%)</label><input type="number" id="sd2-rate" class="sd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1.5" min="0" max="10" step="0.1"></div>
        <h3 class="font-semibold text-sm text-text">Deductions</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Cleaning ($)</label><input type="number" id="sd2-clean" class="sd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="0" step="25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Repairs ($)</label><input type="number" id="sd2-repair" class="sd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="350" min="0" step="25"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Unpaid Rent ($)</label><input type="number" id="sd2-unpaid" class="sd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Other Deductions ($)</label><input type="number" id="sd2-other" class="sd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="25"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Refund Amount</div>
          <div class="text-5xl font-extrabold font-mono" id="sd2-refund">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Max Legal Deposit</div><div class="text-xl font-bold font-mono" id="sd2-max">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Interest Earned</div><div class="text-xl font-bold font-mono" id="sd2-interest">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Deductions</div><div class="text-xl font-bold font-mono" id="sd2-deductions">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Deposit + Interest</div><div class="text-xl font-bold font-mono" id="sd2-total">$0</div></div>
        </div>
        <div class="p-4 rounded-xl text-center" id="sd2-status-box"><div class="font-bold text-sm" id="sd2-status">-</div></div>
      </div>
      <ShareButton calculatorId="security-deposit" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSD2() {
      const rent = parseFloat((document.getElementById('sd2-rent') as HTMLInputElement).value) || 0;
      const mult = parseFloat((document.getElementById('sd2-mult') as HTMLSelectElement).value) || 2;
      const held = parseFloat((document.getElementById('sd2-held') as HTMLInputElement).value) || 0;
      const months = parseFloat((document.getElementById('sd2-months') as HTMLInputElement).value) || 12;
      const rate = parseFloat((document.getElementById('sd2-rate') as HTMLInputElement).value) || 0;
      const clean = parseFloat((document.getElementById('sd2-clean') as HTMLInputElement).value) || 0;
      const repair = parseFloat((document.getElementById('sd2-repair') as HTMLInputElement).value) || 0;
      const unpaid = parseFloat((document.getElementById('sd2-unpaid') as HTMLInputElement).value) || 0;
      const other = parseFloat((document.getElementById('sd2-other') as HTMLInputElement).value) || 0;

      const maxDeposit = rent * mult;
      const interest = held * (rate / 100) * (months / 12);
      const totalDeductions = clean + repair + unpaid + other;
      const depositPlusInterest = held + interest;
      const refund = depositPlusInterest - totalDeductions;

      const fmt = (v: number) => (v >= 0 ? '$' : '-$') + Math.abs(v).toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('sd2-refund')!.textContent = fmt(refund);
      document.getElementById('sd2-max')!.textContent = '$' + maxDeposit.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('sd2-interest')!.textContent = '$' + interest.toFixed(2);
      document.getElementById('sd2-deductions')!.textContent = '$' + totalDeductions.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('sd2-total')!.textContent = '$' + depositPlusInterest.toFixed(2);

      let status: string, color: string;
      if (held > maxDeposit) { status = 'Deposit exceeds legal maximum for this state'; color = 'bg-red-50 text-red-800'; }
      else if (refund >= held * 0.8) { status = 'Minimal deductions — most deposit returned'; color = 'bg-green-50 text-green-800'; }
      else if (refund >= 0) { status = 'Partial refund after deductions'; color = 'bg-blue-50 text-blue-800'; }
      else { status = 'Deductions exceed deposit — tenant may owe additional'; color = 'bg-yellow-50 text-yellow-800'; }

      document.getElementById('sd2-status')!.textContent = status;
      document.getElementById('sd2-status-box')!.className = `p-4 rounded-xl text-center ${color}`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.sd2-in').forEach(el => { el.addEventListener('input', calcSD2); el.addEventListener('change', calcSD2); });
      calcSD2();
    }, 50);
  </script>
</CalculatorLayout>
