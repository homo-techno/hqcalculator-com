---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Braces Cost Calculator";
const description = "Estimate orthodontic braces cost by type (metal, ceramic, lingual, Invisalign), treatment duration, monthly payments, and insurance coverage.";
const relatedCalcs = [
  { name: "Dental Implant Cost Calculator", url: "/dental-implant-cost-calculator", description: "Implant cost estimates." },
  { name: "Dental Crown Calculator", url: "/dental-crown-calculator", description: "Crown cost by material." },
  { name: "Orthodontic Retainer Calculator", url: "/orthodontic-retainer-calculator", description: "Retainer type and cost." },
  { name: "Dental Insurance Calculator", url: "/dental-insurance-calculator", description: "Dental plan benefit analysis." },
  { name: "Health Insurance Calculator", url: "/health-insurance-calculator", description: "Compare health plan costs." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Plan your monthly budget." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Braces Cost Calculator" keywords="braces cost, orthodontic calculator, Invisalign cost, ceramic braces, lingual braces, monthly payment braces" breadcrumbs={[{ name: "Braces Cost", url: "/braces-cost-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Braces Cost Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Compare orthodontic treatment costs including type, duration, and payment plans.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Braces Type</label>
          <select id="bc2-type" class="bc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="metal" selected>Metal Braces</option>
            <option value="ceramic">Ceramic Braces</option>
            <option value="lingual">Lingual Braces</option>
            <option value="invisalign">Invisalign / Clear Aligners</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Case Complexity</label>
            <select id="bc2-complex" class="bc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="mild">Mild</option>
              <option value="moderate" selected>Moderate</option>
              <option value="severe">Severe</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Patient Age Group</label>
            <select id="bc2-age" class="bc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="child">Child (7-12)</option>
              <option value="teen" selected>Teen (13-17)</option>
              <option value="adult">Adult (18+)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Insurance Ortho Coverage ($)</label><input type="number" id="bc2-ins" class="bc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1500" min="0" max="5000" step="100"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Down Payment ($)</label><input type="number" id="bc2-down" class="bc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="0" max="10000" step="100"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Total Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="bc2-total">$0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Treatment Duration</div><div class="text-xl font-bold font-mono" id="bc2-dur">0 mo</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Payment</div><div class="text-xl font-bold font-mono" id="bc2-monthly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Out of Pocket</div><div class="text-xl font-bold font-mono" id="bc2-oop">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Retainer Cost (est.)</div><div class="text-xl font-bold font-mono" id="bc2-ret">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total + Retainer</div><div class="text-xl font-bold font-mono" id="bc2-grand">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="braces-cost" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcBC2() {
      const type = (document.getElementById('bc2-type') as HTMLSelectElement).value;
      const complexity = (document.getElementById('bc2-complex') as HTMLSelectElement).value;
      const age = (document.getElementById('bc2-age') as HTMLSelectElement).value;
      const ins = parseFloat((document.getElementById('bc2-ins') as HTMLInputElement).value) || 0;
      const down = parseFloat((document.getElementById('bc2-down') as HTMLInputElement).value) || 0;

      const baseCosts: Record<string, number> = { metal: 5000, ceramic: 6000, lingual: 8500, invisalign: 5500 };
      const complexMult: Record<string, number> = { mild: 0.8, moderate: 1.0, severe: 1.3 };
      const ageMult: Record<string, number> = { child: 0.9, teen: 1.0, adult: 1.1 };
      const baseDuration: Record<string, number> = { mild: 12, moderate: 18, severe: 28 };
      const typeDurMult: Record<string, number> = { metal: 1.0, ceramic: 1.0, lingual: 1.1, invisalign: 0.9 };

      const total = Math.round(baseCosts[type] * complexMult[complexity] * ageMult[age]);
      const duration = Math.round(baseDuration[complexity] * typeDurMult[type]);
      const oop = Math.max(0, total - ins);
      const financed = Math.max(0, oop - down);
      const monthly = duration > 0 ? Math.round(financed / duration) : 0;
      const retainer = type === 'invisalign' ? 400 : 300;

      document.getElementById('bc2-total')!.textContent = '$' + total.toLocaleString();
      document.getElementById('bc2-dur')!.textContent = duration + ' mo';
      document.getElementById('bc2-monthly')!.textContent = '$' + monthly.toLocaleString();
      document.getElementById('bc2-oop')!.textContent = '$' + oop.toLocaleString();
      document.getElementById('bc2-ret')!.textContent = '$' + retainer.toLocaleString();
      document.getElementById('bc2-grand')!.textContent = '$' + (oop + retainer).toLocaleString();

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.bc2-in').forEach(el => { el.addEventListener('input', calcBC2); el.addEventListener('change', calcBC2); });
      calcBC2();
    }, 50);
  </script>
</CalculatorLayout>
