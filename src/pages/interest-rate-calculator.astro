---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Interest Rate Calculator";
const description = "Find the interest rate needed to grow your investment from a starting amount to a target amount.";
const relatedCalcs = [
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Interest." },
  { name: "Simple Interest", url: "/simple-interest-calculator", description: "Simple." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings." },
  { name: "Investment", url: "/investment-calculator", description: "Investment." },
  { name: "APR Calculator", url: "/apr-calculator", description: "APR." },
  { name: "Rule of 72", url: "/rule-of-72-calculator", description: "Rule of 72." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Interest Rate Calculator" keywords="interest rate calculator, find interest rate, required rate of return, investment rate, growth rate" breadcrumbs={[{ name: "Interest Rate", url: "/interest-rate-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Interest Rate Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Find the interest rate needed to reach your financial goal.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Starting Amount ($)</label><input type="number" id="ir-start" class="ir-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="10000" min="0" step="1000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Target Amount ($)</label><input type="number" id="ir-target" class="ir-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="50000" min="0" step="1000"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Time Period (years)</label><input type="number" id="ir-years" class="ir-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="1" max="100" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Compounding</label>
            <select id="ir-comp" class="ir-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="1">Annually</option>
              <option value="2">Semi-Annually</option>
              <option value="4">Quarterly</option>
              <option value="12" selected>Monthly</option>
              <option value="365">Daily</option>
            </select>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Required Annual Rate</div>
          <div class="text-5xl font-extrabold font-mono" id="ir-result">0%</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Growth Needed</div><div class="text-xl font-bold font-mono" id="ir-growth">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Growth Multiple</div><div class="text-xl font-bold font-mono" id="ir-mult">0x</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Doubling Time</div><div class="text-xl font-bold font-mono" id="ir-double">0 yrs</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Growth at Different Rates</h3>
          <div class="text-xs space-y-1" id="ir-table"></div>
        </div>
      </div>
      <ShareButton calculatorId="interest-rate" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcIR() {
      const start = parseFloat((document.getElementById('ir-start') as HTMLInputElement).value) || 0;
      const target = parseFloat((document.getElementById('ir-target') as HTMLInputElement).value) || 0;
      const years = parseFloat((document.getElementById('ir-years') as HTMLInputElement).value) || 0;
      const comp = parseInt((document.getElementById('ir-comp') as HTMLSelectElement).value) || 1;
      const growth = target - start;
      const mult = start > 0 ? target / start : 0;
      let rate = 0;
      if (start > 0 && target > start && years > 0) {
        const n = comp * years;
        rate = comp * (Math.pow(target / start, 1 / n) - 1);
      }
      const doubleTime = rate > 0 ? Math.log(2) / Math.log(1 + rate) : 0;
      document.getElementById('ir-result')!.textContent = (rate * 100).toFixed(2) + '%';
      document.getElementById('ir-growth')!.textContent = '$' + growth.toLocaleString();
      document.getElementById('ir-mult')!.textContent = mult.toFixed(2) + 'x';
      document.getElementById('ir-double')!.textContent = doubleTime.toFixed(1) + ' yrs';
      const rates = [3, 5, 7, 8, 10, 12, 15];
      document.getElementById('ir-table')!.innerHTML = rates.map(r => {
        const fv = start * Math.pow(1 + r / 100 / comp, comp * years);
        const hit = fv >= target;
        return `<div class="flex justify-between ${hit ? 'text-green-700 font-bold' : ''}"><span>${r}% annual</span><span>$${fv.toFixed(0)} in ${years} yrs${hit ? ' âœ“' : ''}</span></div>`;
      }).join('');
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ir-in').forEach(el => { el.addEventListener('input', calcIR); el.addEventListener('change', calcIR); });
      calcIR();
    }, 50);
  </script>
</CalculatorLayout>
