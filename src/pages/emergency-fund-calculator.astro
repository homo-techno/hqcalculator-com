---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Emergency Fund Calculator - How Much Do You Need?";
const description = "Calculate how much you should save in your emergency fund based on monthly expenses and personal situation.";

const relatedCalcs = [
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Net Worth", url: "/net-worth-calculator", description: "Net worth." },
  { name: "Debt Payoff", url: "/debt-payoff-calculator", description: "Debt payoff." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Investments." },
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Retirement." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Emergency Fund Calculator" keywords="emergency fund calculator, emergency savings, how much to save, rainy day fund, financial safety net" breadcrumbs={[{ name: "Emergency Fund", url: "/emergency-fund-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Emergency Fund Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Find out how much you need in your emergency fund and how long it will take to build it.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Monthly Essential Expenses</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="ef-expenses" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="3500" min="0" step="100">
            </div>
            <p class="text-xs text-text-muted mt-1">Housing, food, utilities, insurance, transport, minimum debt payments</p>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Months of Coverage</label>
            <select id="ef-months" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="3">3 months (minimum)</option>
              <option value="6" selected>6 months (recommended)</option>
              <option value="9">9 months (conservative)</option>
              <option value="12">12 months (self-employed / single income)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Current Emergency Savings</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="ef-current" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="5000" min="0" step="500">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Monthly Savings Contribution</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="ef-contrib" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="500" min="0" step="50">
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Target Emergency Fund</div>
            <div class="text-5xl font-extrabold" id="ef-target">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Still Need</div>
              <div class="text-xl font-bold text-secondary" id="ef-need">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Months to Goal</div>
              <div class="text-xl font-bold" id="ef-time">0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Progress</div>
              <div class="text-xl font-bold" id="ef-progress">0%</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Coverage Now</div>
              <div class="text-xl font-bold" id="ef-coverage">0 mo</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-2">Progress Bar</h3>
            <div class="w-full h-4 bg-gray-200 rounded-full overflow-hidden">
              <div class="h-full bg-green-500 rounded-full transition-all" id="ef-bar" style="width:0%"></div>
            </div>
            <div class="text-xs text-text-muted mt-1 text-center" id="ef-bar-text">0% funded</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="emergency-fund" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How Much Emergency Fund Do You Need?</h2>
      <p>Most financial experts recommend saving 3-6 months of essential expenses. If you're self-employed, a freelancer, or have a single household income, aim for 9-12 months.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Frequently Asked Questions</h3>
      <p><strong>Where should I keep my emergency fund?</strong> A high-yield savings account — easily accessible but earning interest. Avoid investing it in stocks since you may need it on short notice.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcEF() {
      const expenses = parseFloat((document.getElementById('ef-expenses') as HTMLInputElement).value) || 0;
      const months = parseInt((document.getElementById('ef-months') as HTMLSelectElement).value) || 6;
      const current = parseFloat((document.getElementById('ef-current') as HTMLInputElement).value) || 0;
      const contrib = parseFloat((document.getElementById('ef-contrib') as HTMLInputElement).value) || 0;

      const target = expenses * months;
      const need = Math.max(0, target - current);
      const monthsToGoal = contrib > 0 ? Math.ceil(need / contrib) : need > 0 ? Infinity : 0;
      const progress = target > 0 ? Math.min(100, (current / target) * 100) : 0;
      const coverageNow = expenses > 0 ? (current / expenses) : 0;

      document.getElementById('ef-target')!.textContent = fmt(target);
      document.getElementById('ef-need')!.textContent = fmt(need);
      document.getElementById('ef-time')!.textContent = monthsToGoal === Infinity ? 'N/A' : monthsToGoal.toString();
      document.getElementById('ef-progress')!.textContent = progress.toFixed(0) + '%';
      document.getElementById('ef-coverage')!.textContent = coverageNow.toFixed(1) + ' mo';
      (document.getElementById('ef-bar') as HTMLElement).style.width = progress + '%';
      document.getElementById('ef-bar-text')!.textContent = progress.toFixed(0) + '% funded' + (need <= 0 ? ' — Goal reached!' : '');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['ef-expenses', 'ef-current', 'ef-contrib'].forEach(id => document.getElementById(id)!.addEventListener('input', calcEF));
      document.getElementById('ef-months')!.addEventListener('change', calcEF);
      calcEF();
    }, 50);
  </script>
</CalculatorLayout>
