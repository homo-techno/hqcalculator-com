---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Rainwater Tank Calculator - Size from Roof Area & Rainfall";
const description = "Calculate the ideal rainwater tank size from roof catchment area, average rainfall, household demand, overflow frequency, and payback period.";
const relatedCalcs = [
  { name: "Rain Harvest", url: "/rain-harvest-calculator", description: "Rainwater harvesting." },
  { name: "Irrigation", url: "/irrigation-calculator", description: "Irrigation water needs." },
  { name: "Pool Volume", url: "/pool-volume-calculator", description: "Water volume calculation." },
  { name: "Water Usage", url: "/water-usage-calculator", description: "Daily water consumption." },
  { name: "Drainage", url: "/drainage-calculator", description: "Drainage system design." },
  { name: "Sprinkler", url: "/sprinkler-calculator", description: "Sprinkler system sizing." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Rainwater Tank Calculator" keywords="rainwater tank size, roof area, rainfall collection, water storage, payback calculator" breadcrumbs={[{ name: "Rainwater Tank", url: "/rainwater-tank-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Rainwater Tank Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Determine the optimal rainwater storage tank size based on your roof area, local rainfall, and water demand.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Roof Catchment Area (sq ft)</label>
          <input type="number" id="rt3-roof" class="rt3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1500" min="100" step="50">
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Average Annual Rainfall (inches)</label>
          <input type="number" id="rt3-rain" class="rt3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="40" min="1" max="200" step="1">
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Roof Material Efficiency</label>
          <select id="rt3-eff" class="rt3-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="0.95">Metal Roof (95%)</option>
            <option value="0.90" selected>Asphalt Shingle (90%)</option>
            <option value="0.85">Tile/Concrete (85%)</option>
            <option value="0.75">Wood Shake (75%)</option>
            <option value="0.50">Green Roof (50%)</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Daily Water Demand for Reuse (gallons)</label>
          <input type="number" id="rt3-demand" class="rt3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="5" step="5">
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Longest Dry Spell (days)</label>
            <input type="number" id="rt3-dry" class="rt3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="21" min="1" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Water Rate ($/1000 gal)</label>
            <input type="number" id="rt3-rate" class="rt3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="1" step="0.5">
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Tank Install Cost ($)</label>
          <input type="number" id="rt3-cost" class="rt3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2000" min="100" step="100">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Recommended Tank Size</div>
          <div class="text-4xl font-extrabold" id="rt3-tank">0 gallons</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Harvest</div><div class="text-xl font-bold" id="rt3-harvest">0 gal</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Demand</div><div class="text-xl font-bold" id="rt3-anndem">0 gal</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Demand Met</div><div class="text-xl font-bold" id="rt3-met">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Payback Period</div><div class="text-xl font-bold" id="rt3-payback">0 yrs</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-3">Additional Details</h3>
          <div class="space-y-2 text-sm">
            <div class="flex justify-between"><span>Monthly Avg. Harvest</span><span class="font-bold" id="rt3-mavg">0 gal</span></div>
            <div class="flex justify-between"><span>Dry Spell Reserve</span><span class="font-bold" id="rt3-reserve">0 gal</span></div>
            <div class="flex justify-between"><span>Annual Water Savings</span><span class="font-bold" id="rt3-savings">$0</span></div>
            <div class="flex justify-between"><span>Overflow Estimate</span><span class="font-bold" id="rt3-overflow">0 gal/yr</span></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="rainwater-tank" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRT3() {
      const roof = parseFloat((document.getElementById('rt3-roof') as HTMLInputElement).value) || 1500;
      const rain = parseFloat((document.getElementById('rt3-rain') as HTMLInputElement).value) || 40;
      const eff = parseFloat((document.getElementById('rt3-eff') as HTMLSelectElement).value) || 0.90;
      const demand = parseFloat((document.getElementById('rt3-demand') as HTMLInputElement).value) || 50;
      const dryDays = parseInt((document.getElementById('rt3-dry') as HTMLInputElement).value) || 21;
      const rate = parseFloat((document.getElementById('rt3-rate') as HTMLInputElement).value) || 10;
      const installCost = parseFloat((document.getElementById('rt3-cost') as HTMLInputElement).value) || 2000;

      // Annual harvest: roof area (sqft) * rainfall (inches) * 0.623 gal/sqft/inch * efficiency
      const annualHarvest = roof * rain * 0.623 * eff;
      const monthlyAvg = annualHarvest / 12;
      const annualDemand = demand * 365;

      // Dry spell reserve
      const dryReserve = demand * dryDays;

      // Tank size: enough for dry spell + some buffer, but not more than monthly average harvest
      const minTank = dryReserve;
      const maxTank = Math.max(minTank, monthlyAvg);
      // Round up to standard sizes
      const standardSizes = [100, 200, 300, 500, 750, 1000, 1500, 2000, 2500, 3000, 5000, 10000];
      let recTank = standardSizes[standardSizes.length - 1];
      for (const s of standardSizes) {
        if (s >= minTank) { recTank = s; break; }
      }

      // Demand met percentage
      const demandMet = Math.min(100, (annualHarvest / annualDemand) * 100);

      // Overflow: if harvest > demand + tank capacity
      const usableHarvest = Math.min(annualHarvest, annualDemand);
      const overflow = Math.max(0, annualHarvest - annualDemand);

      // Savings
      const annualSavings = usableHarvest * rate / 1000;
      const payback = annualSavings > 0 ? installCost / annualSavings : 99;

      document.getElementById('rt3-tank')!.textContent = recTank.toLocaleString() + ' gallons';
      document.getElementById('rt3-harvest')!.textContent = Math.round(annualHarvest).toLocaleString() + ' gal';
      document.getElementById('rt3-anndem')!.textContent = Math.round(annualDemand).toLocaleString() + ' gal';
      document.getElementById('rt3-met')!.textContent = demandMet.toFixed(1) + '%';
      document.getElementById('rt3-payback')!.textContent = payback < 50 ? payback.toFixed(1) + ' yrs' : 'N/A';
      document.getElementById('rt3-mavg')!.textContent = Math.round(monthlyAvg).toLocaleString() + ' gal';
      document.getElementById('rt3-reserve')!.textContent = Math.round(dryReserve).toLocaleString() + ' gal';
      document.getElementById('rt3-savings')!.textContent = '$' + Math.round(annualSavings);
      document.getElementById('rt3-overflow')!.textContent = Math.round(overflow).toLocaleString() + ' gal/yr';

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.rt3-in').forEach(el => { el.addEventListener('input', calcRT3); el.addEventListener('change', calcRT3); });
      calcRT3();
    }, 50);
  </script>
</CalculatorLayout>
