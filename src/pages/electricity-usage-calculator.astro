---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Electricity Usage Calculator - Appliance Energy Cost 2026";
const description = "Calculate the electricity cost of running any appliance. Enter wattage, hours of daily use, and your electricity rate to see daily, monthly, and annual costs.";

const relatedCalcs = [
  { name: "Electricity Bill Calculator", url: "/electricity-bill-calculator", description: "Estimate total electricity bill." },
  { name: "Water Usage Calculator", url: "/water-usage-calculator", description: "Track water usage costs." },
  { name: "Paper Calculator", url: "/paper-calculator", description: "Paper usage and savings." },
  { name: "Noise Reduction Calculator", url: "/noise-reduction-calculator", description: "Noise level reduction." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Monthly budget planner." },
  { name: "Screen Time Calculator", url: "/screen-time-calculator", description: "Track screen time." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Electricity Usage Calculator"
  keywords="electricity usage calculator, appliance energy cost, watt to cost, kWh calculator, energy consumption, electric bill"
  breadcrumbs={[{ name: "Electricity Usage Calculator", url: "/electricity-usage-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Electricity Usage Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate the cost of running any appliance based on wattage, usage hours, and your electricity rate.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label for="eu-preset" class="block text-sm font-medium text-text mb-1">Common Appliances (or enter custom below)</label>
          <select id="eu-preset" class="eu-in w-full border border-border rounded-lg px-3 py-2">
            <option value="">Custom</option>
            <option value="60">LED Light Bulb (10W equivalent 60W)</option>
            <option value="1500">Space Heater (1,500W)</option>
            <option value="1200">Hair Dryer (1,200W)</option>
            <option value="150">Refrigerator (150W avg)</option>
            <option value="2000">Oven (2,000W)</option>
            <option value="500">Washing Machine (500W)</option>
            <option value="3000">Dryer (3,000W)</option>
            <option value="100">Desktop Computer (100W)</option>
            <option value="50">Laptop (50W)</option>
            <option value="200">TV - 55 inch (200W)</option>
            <option value="1000">Dishwasher (1,000W)</option>
            <option value="3500">Central AC (3,500W)</option>
            <option value="1400">Window AC (1,400W)</option>
          </select>
        </div>
        <div>
          <label for="eu-watts" class="block text-sm font-medium text-text mb-1">Wattage (W)</label>
          <input type="number" id="eu-watts" class="eu-in w-full border border-border rounded-lg px-3 py-2" value="1500" min="0" step="10" />
        </div>
        <div>
          <label for="eu-hours" class="block text-sm font-medium text-text mb-1">Hours Used Per Day</label>
          <input type="number" id="eu-hours" class="eu-in w-full border border-border rounded-lg px-3 py-2" value="4" min="0" max="24" step="0.5" />
        </div>
        <div>
          <label for="eu-rate" class="block text-sm font-medium text-text mb-1">Electricity Rate ($/kWh)</label>
          <input type="number" id="eu-rate" class="eu-in w-full border border-border rounded-lg px-3 py-2" value="0.13" min="0" step="0.01" />
          <p class="text-xs text-text-muted mt-1">US average: $0.13/kWh. Check your electricity bill for your rate.</p>
        </div>

        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Monthly Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="eu-result">$0.00</div>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Daily Cost</div>
            <div class="text-xl font-bold" id="eu-daily">$0.00</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Annual Cost</div>
            <div class="text-xl font-bold" id="eu-annual">$0.00</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Daily kWh</div>
            <div class="text-xl font-bold" id="eu-kwh-daily">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Monthly kWh</div>
            <div class="text-xl font-bold" id="eu-kwh-monthly">0</div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="electricity-usage" />
      <FeedbackWidget />
    </div>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcEU() {
      const watts = parseFloat((document.getElementById('eu-watts') as HTMLInputElement).value) || 0;
      const hours = parseFloat((document.getElementById('eu-hours') as HTMLInputElement).value) || 0;
      const rate = parseFloat((document.getElementById('eu-rate') as HTMLInputElement).value) || 0;

      const dailyKwh = (watts * hours) / 1000;
      const monthlyKwh = dailyKwh * 30.44;
      const annualKwh = dailyKwh * 365;

      const dailyCost = dailyKwh * rate;
      const monthlyCost = monthlyKwh * rate;
      const annualCost = annualKwh * rate;

      const fmt = (n: number) => '$' + n.toFixed(2);

      (document.getElementById('eu-result') as HTMLElement).textContent = fmt(monthlyCost);
      (document.getElementById('eu-daily') as HTMLElement).textContent = fmt(dailyCost);
      (document.getElementById('eu-annual') as HTMLElement).textContent = fmt(annualCost);
      (document.getElementById('eu-kwh-daily') as HTMLElement).textContent = dailyKwh.toFixed(2);
      (document.getElementById('eu-kwh-monthly') as HTMLElement).textContent = monthlyKwh.toFixed(1);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      // Preset selector
      (document.getElementById('eu-preset') as HTMLSelectElement).addEventListener('change', function() {
        const val = this.value;
        if (val) {
          (document.getElementById('eu-watts') as HTMLInputElement).value = val;
          calcEU();
        }
      });

      document.querySelectorAll('.eu-in').forEach(el => {
        el.addEventListener('input', calcEU);
        el.addEventListener('change', calcEU);
      });
      calcEU();
    }, 50);
  </script>
</CalculatorLayout>
