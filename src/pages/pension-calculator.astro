---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Pension Calculator - Estimate Your Pension Benefit";
const description = "Calculate your pension benefit based on years of service, final average salary, and multiplier percentage. Includes lump sum equivalent.";

const relatedCalcs = [
  { name: "Social Security", url: "/social-security-estimator", description: "SS benefit estimate." },
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Retirement planning." },
  { name: "401k Calculator", url: "/401k-calculator", description: "401k growth." },
  { name: "Annuity Calculator", url: "/annuity-calculator", description: "Annuity payments." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Investment returns." },
  { name: "Financial Independence", url: "/financial-independence-calculator", description: "FIRE planning." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Pension Calculator" keywords="pension calculator, defined benefit, pension estimate, years of service, final average salary, pension multiplier, lump sum" breadcrumbs={[{ name: "Pension", url: "/pension-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Pension Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate your defined benefit pension based on service years, salary, and your plan's multiplier.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Final Average Salary</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="pn-salary" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="85000" min="0" step="1000">
            </div>
            <p class="text-xs text-text-muted mt-1">Typically average of highest 3-5 years</p>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Years of Service</label>
            <input type="number" id="pn-years" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="25" min="0" max="50" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Pension Multiplier (%)</label>
            <div class="relative">
              <input type="number" id="pn-multiplier" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="2" min="0.5" max="4" step="0.1">
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-text-muted">%</span>
            </div>
            <p class="text-xs text-text-muted mt-1">Common: 1.5%-2.5% per year of service</p>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">COLA (Annual Increase %)</label>
            <div class="relative">
              <input type="number" id="pn-cola" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="2" min="0" max="5" step="0.5">
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-text-muted">%</span>
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Expected Years in Retirement</label>
            <input type="number" id="pn-retirement-years" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="25" min="1" max="40" step="1">
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Monthly Pension Benefit</div>
            <div class="text-5xl font-extrabold font-mono" id="pn-monthly">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Annual Pension</div>
              <div class="text-xl font-bold text-secondary" id="pn-annual">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Replacement Ratio</div>
              <div class="text-xl font-bold" id="pn-ratio">0%</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Lump Sum Equivalent</div>
              <div class="text-xl font-bold text-green-600" id="pn-lumpsum">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Pension at Year 10 (COLA)</div>
              <div class="text-xl font-bold" id="pn-year10">$0/mo</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Lifetime Pension Value</div>
            <div class="text-xl font-bold text-blue-600" id="pn-lifetime">$0</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="pension" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Understanding Pension Benefits</h2>
      <p>Defined benefit pensions use a formula: <strong>Years of Service x Multiplier x Final Average Salary</strong>. A multiplier of 2% with 30 years of service replaces 60% of your salary.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Lump Sum vs. Annuity</h3>
      <p>Some plans offer a lump sum option. The lump sum equivalent is the present value of all future pension payments. Consider your health, investment ability, and whether your spouse needs survivor benefits before choosing.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcPN() {
      const salary = parseFloat((document.getElementById('pn-salary') as HTMLInputElement).value) || 0;
      const years = parseFloat((document.getElementById('pn-years') as HTMLInputElement).value) || 0;
      const multiplier = (parseFloat((document.getElementById('pn-multiplier') as HTMLInputElement).value) || 0) / 100;
      const cola = (parseFloat((document.getElementById('pn-cola') as HTMLInputElement).value) || 0) / 100;
      const retirementYears = parseInt((document.getElementById('pn-retirement-years') as HTMLInputElement).value) || 25;

      const annualPension = salary * years * multiplier;
      const monthlyPension = annualPension / 12;
      const replacementRatio = salary > 0 ? (annualPension / salary) * 100 : 0;

      // Pension after 10 years of COLA
      const year10Monthly = monthlyPension * Math.pow(1 + cola, 10);

      // Lump sum equivalent (PV of annuity with COLA, discount rate ~5%)
      const discountRate = 0.05;
      let lumpSum = 0;
      let lifetimeValue = 0;
      for (let y = 0; y < retirementYears; y++) {
        const yearPayment = annualPension * Math.pow(1 + cola, y);
        lumpSum += yearPayment / Math.pow(1 + discountRate, y + 1);
        lifetimeValue += yearPayment;
      }

      document.getElementById('pn-monthly')!.textContent = fmt(monthlyPension);
      document.getElementById('pn-annual')!.textContent = fmt(annualPension);
      document.getElementById('pn-ratio')!.textContent = replacementRatio.toFixed(1) + '%';
      document.getElementById('pn-lumpsum')!.textContent = fmt(lumpSum);
      document.getElementById('pn-year10')!.textContent = fmt(year10Monthly) + '/mo';
      document.getElementById('pn-lifetime')!.textContent = fmt(lifetimeValue);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['pn-salary', 'pn-years', 'pn-multiplier', 'pn-cola', 'pn-retirement-years'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcPN); el.addEventListener('change', calcPN); }
      });
      calcPN();
    }, 50);
  </script>
</CalculatorLayout>
