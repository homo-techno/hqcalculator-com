---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Child Support Calculator - Estimate Monthly Payments";
const description = "Estimate child support payments using the income shares model based on both parents' income, number of children, and custody arrangement.";

const relatedCalcs = [
  { name: "Alimony", url: "/alimony-calculator", description: "Alimony estimate." },
  { name: "Divorce Cost", url: "/divorce-cost-calculator", description: "Divorce expenses." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Baby Cost", url: "/baby-cost-calculator", description: "First year baby costs." },
  { name: "Paycheck Calculator", url: "/paycheck-calculator", description: "Take-home pay." },
  { name: "Income Tax", url: "/income-tax-calculator", description: "Tax estimate." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Child Support Calculator" keywords="child support calculator, child support estimate, income shares model, custody, monthly payment, support obligation" breadcrumbs={[{ name: "Child Support", url: "/child-support-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Child Support Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate monthly child support using the income shares model. Actual amounts vary by state and court discretion.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Non-Custodial Parent Gross Monthly Income</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="cs3-ncp-income" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5000" min="0" step="100">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Custodial Parent Gross Monthly Income</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="cs3-cp-income" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="3500" min="0" step="100">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Children</label>
            <select id="cs3-children" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="1" selected>1 child</option>
              <option value="2">2 children</option>
              <option value="3">3 children</option>
              <option value="4">4 children</option>
              <option value="5">5 children</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Non-Custodial Parent Overnight %</label>
            <div class="relative">
              <input type="number" id="cs3-custody" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="20" min="0" max="50" step="5">
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-text-muted">%</span>
            </div>
            <p class="text-xs text-text-muted mt-1">Percentage of overnights with non-custodial parent</p>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Health Insurance Cost for Children (monthly)</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="cs3-insurance" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="200" min="0" step="25">
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Monthly Support</div>
            <div class="text-5xl font-extrabold font-mono" id="cs3-payment">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Annual Support</div>
              <div class="text-xl font-bold text-secondary" id="cs3-annual">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Combined Income</div>
              <div class="text-xl font-bold" id="cs3-combined">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">NCP Income Share</div>
              <div class="text-xl font-bold" id="cs3-ncp-share">0%</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">% of NCP Income</div>
              <div class="text-xl font-bold" id="cs3-pct-income">0%</div>
            </div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="child-support" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How Is Child Support Calculated?</h2>
      <p>Most states use the <strong>income shares model</strong>, which estimates total child costs based on combined parental income, then divides the obligation proportionally. The non-custodial parent typically pays their share to the custodial parent.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Disclaimer</h3>
      <p>This calculator provides estimates only. Actual child support is determined by state guidelines and court orders. Factors like extraordinary expenses, special needs, and existing support orders are considered.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcCS3() {
      const ncpIncome = parseFloat((document.getElementById('cs3-ncp-income') as HTMLInputElement).value) || 0;
      const cpIncome = parseFloat((document.getElementById('cs3-cp-income') as HTMLInputElement).value) || 0;
      const children = parseInt((document.getElementById('cs3-children') as HTMLSelectElement).value) || 1;
      const custodyPct = (parseFloat((document.getElementById('cs3-custody') as HTMLInputElement).value) || 0) / 100;
      const insurance = parseFloat((document.getElementById('cs3-insurance') as HTMLInputElement).value) || 0;

      const combinedIncome = ncpIncome + cpIncome;
      const ncpShare = combinedIncome > 0 ? ncpIncome / combinedIncome : 0.5;

      // Income shares: % of combined income allocated to children
      const childPctMap: Record<number, number> = { 1: 0.20, 2: 0.28, 3: 0.33, 4: 0.37, 5: 0.40 };
      const childPct = childPctMap[children] || 0.20;

      const totalChildCost = combinedIncome * childPct + insurance;
      let ncpObligation = totalChildCost * ncpShare;

      // Parenting time adjustment: reduce obligation if NCP has significant overnights
      if (custodyPct > 0.1) {
        const adjustment = 1 - (custodyPct * 0.8);
        ncpObligation *= adjustment;
      }

      ncpObligation = Math.max(0, ncpObligation);
      const annualSupport = ncpObligation * 12;
      const pctOfIncome = ncpIncome > 0 ? (ncpObligation / ncpIncome) * 100 : 0;

      document.getElementById('cs3-payment')!.textContent = fmt(ncpObligation);
      document.getElementById('cs3-annual')!.textContent = fmt(annualSupport);
      document.getElementById('cs3-combined')!.textContent = fmt(combinedIncome) + '/mo';
      document.getElementById('cs3-ncp-share')!.textContent = (ncpShare * 100).toFixed(1) + '%';
      document.getElementById('cs3-pct-income')!.textContent = pctOfIncome.toFixed(1) + '%';

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['cs3-ncp-income', 'cs3-cp-income', 'cs3-custody', 'cs3-insurance'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcCS3); el.addEventListener('change', calcCS3); }
      });
      document.getElementById('cs3-children')!.addEventListener('change', calcCS3);
      calcCS3();
    }, 50);
  </script>
</CalculatorLayout>
