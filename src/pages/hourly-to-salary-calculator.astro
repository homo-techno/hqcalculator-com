---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Hourly to Salary Calculator - Convert Hourly Wage to Annual";
const description = "Convert hourly wage to annual salary and vice versa. Factor in overtime, vacation, and work hours to see your true earnings.";

const relatedCalcs = [
  { name: "Salary Calculator", url: "/salary-calculator", description: "Full salary converter." },
  { name: "Paycheck Calculator", url: "/paycheck-calculator", description: "Take-home pay." },
  { name: "Income Tax Calculator", url: "/income-tax-calculator", description: "Federal & state taxes." },
  { name: "Tip Calculator", url: "/tip-calculator", description: "Restaurant tips." },
  { name: "Loan Calculator", url: "/loan-calculator", description: "Loan payments." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Hourly to Salary Calculator" keywords="hourly to salary, hourly wage to annual, salary to hourly, wage calculator, annual salary" breadcrumbs={[{ name: "Hourly to Salary", url: "/hourly-to-salary-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Hourly to Salary Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Quickly convert between hourly wages and annual salary.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="mb-5"><label class="block text-sm font-medium text-text mb-1">Hourly Rate</label><div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span><input type="number" id="h2s-hourly" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="25" min="0" step="0.25"></div></div>
      <div class="grid grid-cols-2 gap-3 mb-5">
        <div><label class="block text-xs font-medium text-text mb-1">Hours/Week</label><input type="number" id="h2s-hours" class="w-full px-3 py-2.5 border border-border rounded-xl text-lg" value="40" min="1" max="168"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Weeks/Year</label><input type="number" id="h2s-weeks" class="w-full px-3 py-2.5 border border-border rounded-xl text-lg" value="52" min="1" max="52"></div>
      </div>
      <div class="space-y-3 mb-6">
        <div class="p-5 bg-primary rounded-2xl text-white text-center"><div class="text-sm text-blue-200 uppercase mb-1">Annual Salary</div><div class="text-4xl font-extrabold" id="h2s-annual">$52,000</div></div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly</div><div class="text-xl font-bold" id="h2s-monthly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bi-Weekly</div><div class="text-xl font-bold" id="h2s-biweekly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weekly</div><div class="text-xl font-bold" id="h2s-weekly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Daily</div><div class="text-xl font-bold" id="h2s-daily">$0</div></div>
        </div>
      </div>
      <!-- Quick reference table -->
      <div class="bg-surface-alt rounded-xl p-4 mb-6">
        <h3 class="font-semibold text-text text-sm mb-3">Hourly to Annual Quick Reference</h3>
        <div class="grid grid-cols-2 gap-x-6 gap-y-1 text-sm" id="h2s-table"></div>
      </div>
      <ShareButton calculatorId="hourly-to-salary" /><FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">How to Convert Hourly to Annual Salary</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 text-center font-mono">Annual Salary = Hourly Rate × Hours/Week × Weeks/Year</div>
      <p>For a standard full-time position: $25/hour × 40 hours × 52 weeks = $52,000/year.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Frequently Asked Questions</h3>
      <p><strong>What is $15/hour annually?</strong> $15 × 40 × 52 = $31,200 per year before taxes.</p>
      <p><strong>What hourly rate equals $100k?</strong> $100,000 / 52 / 40 = $48.08 per hour.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString('en-US');
    function calcH2S() {
      const hourly = parseFloat((document.getElementById('h2s-hourly') as HTMLInputElement).value) || 0;
      const hours = parseFloat((document.getElementById('h2s-hours') as HTMLInputElement).value) || 40;
      const weeks = parseFloat((document.getElementById('h2s-weeks') as HTMLInputElement).value) || 52;
      const annual = hourly * hours * weeks;
      document.getElementById('h2s-annual')!.textContent = fmt(annual);
      document.getElementById('h2s-monthly')!.textContent = fmt(annual / 12);
      document.getElementById('h2s-biweekly')!.textContent = fmt(annual / 26);
      document.getElementById('h2s-weekly')!.textContent = fmt(hourly * hours);
      document.getElementById('h2s-daily')!.textContent = fmt(hourly * hours / 5);
      const table = document.getElementById('h2s-table')!;
      const rates = [10, 15, 20, 25, 30, 35, 40, 45, 50, 60, 75, 100];
      table.innerHTML = rates.map(r => `<div class="flex justify-between py-0.5 ${r === Math.round(hourly) ? 'font-bold text-primary' : 'text-text-secondary'}"><span>$${r}/hr</span><span>${fmt(r * 40 * 52)}/yr</span></div>`).join('');
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      ['h2s-hourly', 'h2s-hours', 'h2s-weeks'].forEach(id => document.getElementById(id)!.addEventListener('input', calcH2S));
      calcH2S();
    }, 50);
  </script>
</CalculatorLayout>
