---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Curtain Calculator";
const description = "Calculate curtain fabric yardage, panel widths, and rod size for your windows.";
const relatedCalcs = [
  { name: "Window Calculator", url: "/window-calculator", description: "Windows." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Crown Molding", url: "/crown-molding-calculator", description: "Molding." },
  { name: "Lighting", url: "/lighting-calculator", description: "Lighting." },
  { name: "Wallpaper", url: "/wallpaper-calculator", description: "Wallpaper." },
  { name: "Cabinet", url: "/cabinet-calculator", description: "Cabinets." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Curtain Calculator" keywords="curtain calculator, curtain fabric, curtain panel, window treatment, curtain rod, drapery" breadcrumbs={[{ name: "Curtain", url: "/curtain-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Curtain Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate curtain fabric and panels for your windows.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Window Width (in)</label><input type="number" id="ct-ww" class="ct-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="60" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Window Height (in)</label><input type="number" id="ct-wh" class="ct-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="48" min="1" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Fullness Ratio</label>
            <select id="ct-full" class="ct-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="1.5">1.5x (standard)</option>
              <option value="2" selected>2x (recommended)</option>
              <option value="2.5">2.5x (full/luxe)</option>
              <option value="3">3x (very full)</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Curtain Length</label>
            <select id="ct-hang" class="ct-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="sill">Sill length</option>
              <option value="below">Below sill (+4")</option>
              <option value="floor" selected>Floor length</option>
              <option value="puddle">Puddle (+3")</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Rod Above Window (in)</label><input type="number" id="ct-above" class="ct-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Floor from Window Bottom (in)</label><input type="number" id="ct-floor" class="ct-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="36" min="0" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Fabric Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="ct-result">0 yd</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Width</div><div class="text-lg font-bold font-mono" id="ct-tw">0"</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cut Length</div><div class="text-lg font-bold font-mono" id="ct-cl">0"</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Panels</div><div class="text-lg font-bold font-mono" id="ct-panels">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Rod Width</div><div class="text-xl font-bold font-mono" id="ct-rod">0"</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Panel Width</div><div class="text-xl font-bold font-mono" id="ct-pwidth">0"</div></div>
        </div>
      </div>
      <ShareButton calculatorId="curtain" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCT() {
      const ww = parseFloat((document.getElementById('ct-ww') as HTMLInputElement).value) || 60;
      const wh = parseFloat((document.getElementById('ct-wh') as HTMLInputElement).value) || 48;
      const fullness = parseFloat((document.getElementById('ct-full') as HTMLSelectElement).value);
      const hang = (document.getElementById('ct-hang') as HTMLSelectElement).value;
      const above = parseFloat((document.getElementById('ct-above') as HTMLInputElement).value) || 0;
      const floorDist = parseFloat((document.getElementById('ct-floor') as HTMLInputElement).value) || 0;
      const rodWidth = ww + 12;
      const totalFabricWidth = rodWidth * fullness;
      const fabricWidthPerPanel = 54;
      const panels = Math.ceil(totalFabricWidth / fabricWidthPerPanel);
      let curtainLength = wh + above;
      if (hang === 'sill') curtainLength = wh + above;
      else if (hang === 'below') curtainLength = wh + above + 4;
      else if (hang === 'floor') curtainLength = wh + above + floorDist - 0.5;
      else if (hang === 'puddle') curtainLength = wh + above + floorDist + 3;
      const cutLength = curtainLength + 8;
      const fabricYards = (panels * cutLength) / 36;
      document.getElementById('ct-result')!.textContent = fabricYards.toFixed(1) + ' yd';
      document.getElementById('ct-tw')!.textContent = totalFabricWidth.toFixed(0) + '"';
      document.getElementById('ct-cl')!.textContent = cutLength.toFixed(0) + '"';
      document.getElementById('ct-panels')!.textContent = panels.toString();
      document.getElementById('ct-rod')!.textContent = rodWidth.toFixed(0) + '"';
      document.getElementById('ct-pwidth')!.textContent = (totalFabricWidth / panels).toFixed(0) + '"';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ct-in').forEach(el => { el.addEventListener('input', calcCT); el.addEventListener('change', calcCT); });
      calcCT();
    }, 50);
  </script>
</CalculatorLayout>
