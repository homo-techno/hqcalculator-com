---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Fence Line Calculator - Materials, Posts & Cost";
const description = "Calculate fence materials from perimeter length. Get post count, spacing, wire strands, gate openings, and total installation cost.";
const relatedCalcs = [
  { name: "Fence Post Calculator", url: "/fence-post-calculator", description: "Post spacing and count." },
  { name: "Area Calculator", url: "/area-calculator", description: "Calculate area of shapes." },
  { name: "Lumber Calculator", url: "/lumber-calculator", description: "Lumber needs for projects." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Plan your budget." },
  { name: "Livestock Water", url: "/livestock-water-calculator", description: "Daily water needs for livestock." },
  { name: "Volume Calculator", url: "/volume-calculator", description: "General volume calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Fence Line Calculator" keywords="fence line calculator, fence materials, post count, wire fencing, fence cost, gate openings, farm fence" breadcrumbs={[{ name: "Fence Line", url: "/fence-line-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Fence Line Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate all materials and costs for fence line installation.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Total Fence Length (feet)</label>
            <input type="number" id="fl2-len" class="fl2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="2640" min="10" max="100000" step="10">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Fence Type</label>
            <select id="fl2-type" class="fl2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="5|2.50|8.00">Barbed Wire 5-strand</option>
              <option value="4|2.50|8.00" selected>Barbed Wire 4-strand</option>
              <option value="3|2.50|8.00">Barbed Wire 3-strand</option>
              <option value="1|0|15.00">Woven Wire / Field Fence</option>
              <option value="3|4.00|12.00">High-Tensile 3-strand</option>
              <option value="5|4.00|12.00">High-Tensile 5-strand</option>
              <option value="3|6.00|18.00">Electric 3-strand</option>
              <option value="1|0|25.00">Board Fence (3-rail)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Post Spacing (feet)</label>
            <input type="number" id="fl2-spacing" class="fl2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="4" max="30" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Post Cost Each ($)</label>
            <input type="number" id="fl2-postcost" class="fl2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="7" min="0" step="0.50">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Corner/Brace Posts</label>
            <input type="number" id="fl2-corners" class="fl2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="0" max="50" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Corner Post Cost ($)</label>
            <input type="number" id="fl2-cornercost" class="fl2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="25" min="0" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Gate Openings</label>
            <input type="number" id="fl2-gates" class="fl2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" max="20" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Gate Cost Each ($)</label>
            <input type="number" id="fl2-gatecost" class="fl2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="85" min="0" step="5">
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Labor Cost ($/foot)</label>
          <input type="number" id="fl2-labor" class="fl2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3.00" min="0" step="0.25">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Fence Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="fl2-total">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Line Posts</div>
            <div class="text-xl font-bold font-mono" id="fl2-posts">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Wire/Material (ft)</div>
            <div class="text-xl font-bold font-mono" id="fl2-wire">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Cost Per Foot</div>
            <div class="text-xl font-bold font-mono" id="fl2-perft">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Materials Cost</div>
            <div class="text-xl font-bold font-mono" id="fl2-matcost">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Labor Cost</div>
            <div class="text-xl font-bold font-mono" id="fl2-labcost">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="fence-line" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcFL2() {
      const totalLen = parseFloat((document.getElementById('fl2-len') as HTMLInputElement).value) || 2640;
      const fenceData = (document.getElementById('fl2-type') as HTMLSelectElement).value.split('|');
      const strands = parseInt(fenceData[0]);
      const wirePerFt = parseFloat(fenceData[1]);
      const matPerFt = parseFloat(fenceData[2]);
      const postSpacing = parseFloat((document.getElementById('fl2-spacing') as HTMLInputElement).value) || 8;
      const postCost = parseFloat((document.getElementById('fl2-postcost') as HTMLInputElement).value) || 0;
      const corners = parseInt((document.getElementById('fl2-corners') as HTMLInputElement).value) || 0;
      const cornerCost = parseFloat((document.getElementById('fl2-cornercost') as HTMLInputElement).value) || 0;
      const gates = parseInt((document.getElementById('fl2-gates') as HTMLInputElement).value) || 0;
      const gateCost = parseFloat((document.getElementById('fl2-gatecost') as HTMLInputElement).value) || 0;
      const laborRate = parseFloat((document.getElementById('fl2-labor') as HTMLInputElement).value) || 0;
      const gateWidth = gates * 12;
      const fenceLen = Math.max(0, totalLen - gateWidth);
      const linePosts = Math.ceil(fenceLen / postSpacing) + 1;
      const wireLength = fenceLen * strands;
      const postTotal = linePosts * postCost;
      const cornerTotal = corners * cornerCost;
      const gateTotal = gates * gateCost;
      const wireMaterialCost = fenceLen * matPerFt / 100;
      const materialsCost = postTotal + cornerTotal + gateTotal + (fenceLen * matPerFt / 10);
      const laborCost = totalLen * laborRate;
      const totalCost = materialsCost + laborCost;
      const costPerFt = totalLen > 0 ? totalCost / totalLen : 0;
      document.getElementById('fl2-total')!.textContent = '$' + Math.round(totalCost).toLocaleString();
      document.getElementById('fl2-posts')!.textContent = linePosts.toLocaleString();
      document.getElementById('fl2-wire')!.textContent = Math.round(wireLength).toLocaleString();
      document.getElementById('fl2-perft')!.textContent = '$' + costPerFt.toFixed(2);
      document.getElementById('fl2-matcost')!.textContent = '$' + Math.round(materialsCost).toLocaleString();
      document.getElementById('fl2-labcost')!.textContent = '$' + Math.round(laborCost).toLocaleString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.fl2-in').forEach(el => { el.addEventListener('input', calcFL2); el.addEventListener('change', calcFL2); });
      calcFL2();
    }, 50);
  </script>
</CalculatorLayout>
