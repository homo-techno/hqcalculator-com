---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Anxiety Score Calculator - GAD-7 Screening Tool";
const description = "Calculate your anxiety level using the GAD-7 (Generalized Anxiety Disorder 7-item scale). Get severity classification and guidance on when to seek help.";
const relatedCalcs = [
  { name: "Sleep Calculator", url: "/sleep-calculator", description: "Optimize sleep cycles." },
  { name: "Heart Rate Calculator", url: "/heart-rate-calculator", description: "Heart rate zones." },
  { name: "Blood Pressure", url: "/blood-pressure-calculator", description: "BP classification." },
  { name: "BMI Calculator", url: "/bmi-calculator", description: "Body mass index." },
  { name: "Calorie Calculator", url: "/calorie-calculator", description: "Daily calorie needs." },
  { name: "Caffeine Calculator", url: "/caffeine-calculator", description: "Caffeine intake." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Anxiety Score Calculator" keywords="anxiety score, GAD-7, generalized anxiety disorder, anxiety screening, anxiety severity, mental health" breadcrumbs={[{ name: "Anxiety Score", url: "/anxiety-score-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Anxiety Score Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Rate how often the following problems have bothered you over the last 2 weeks using the GAD-7 scale.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <p class="text-xs text-text-secondary mb-1 italic">This is a screening tool, not a diagnosis. Always consult a healthcare professional.</p>
      <p class="text-sm text-text-secondary mb-4">0 = Not at all, 1 = Several days, 2 = More than half the days, 3 = Nearly every day</p>

      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-text mb-1">1. Feeling nervous, anxious, or on edge</label>
          <input type="range" id="ax-q1" class="ax-in w-full" min="0" max="3" step="1">
          <div class="flex justify-between text-xs text-text-secondary"><span>Not at all (0)</span><span>Nearly every day (3)</span></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">2. Not being able to stop or control worrying</label>
          <input type="range" id="ax-q2" class="ax-in w-full" min="0" max="3" step="1">
          <div class="flex justify-between text-xs text-text-secondary"><span>Not at all (0)</span><span>Nearly every day (3)</span></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">3. Worrying too much about different things</label>
          <input type="range" id="ax-q3" class="ax-in w-full" min="0" max="3" step="1">
          <div class="flex justify-between text-xs text-text-secondary"><span>Not at all (0)</span><span>Nearly every day (3)</span></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">4. Trouble relaxing</label>
          <input type="range" id="ax-q4" class="ax-in w-full" min="0" max="3" step="1">
          <div class="flex justify-between text-xs text-text-secondary"><span>Not at all (0)</span><span>Nearly every day (3)</span></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">5. Being so restless that it's hard to sit still</label>
          <input type="range" id="ax-q5" class="ax-in w-full" min="0" max="3" step="1">
          <div class="flex justify-between text-xs text-text-secondary"><span>Not at all (0)</span><span>Nearly every day (3)</span></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">6. Becoming easily annoyed or irritable</label>
          <input type="range" id="ax-q6" class="ax-in w-full" min="0" max="3" step="1">
          <div class="flex justify-between text-xs text-text-secondary"><span>Not at all (0)</span><span>Nearly every day (3)</span></div>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">7. Feeling afraid, as if something awful might happen</label>
          <input type="range" id="ax-q7" class="ax-in w-full" min="0" max="3" step="1">
          <div class="flex justify-between text-xs text-text-secondary"><span>Not at all (0)</span><span>Nearly every day (3)</span></div>
        </div>
      </div>

      <div class="mt-6 space-y-3">
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm opacity-80">Anxiety Severity</div>
          <div class="text-2xl font-extrabold mt-1" id="ax-sev">--</div>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary">GAD-7 Score</div>
            <div class="text-xl font-bold text-text mt-1" id="ax-score">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary">Seek Professional Help?</div>
            <div class="text-xl font-bold text-text mt-1" id="ax-seek">--</div>
          </div>
        </div>

        <div class="p-4 bg-surface-alt rounded-xl">
          <div class="text-xs text-text-secondary mb-2">Symptom Tracking Note</div>
          <div class="text-sm text-text" id="ax-track">--</div>
        </div>

        <div class="p-4 bg-surface-alt rounded-xl">
          <div class="text-xs text-text-secondary mb-2">GAD-7 Severity Thresholds</div>
          <div class="space-y-1 text-sm">
            <div class="flex justify-between"><span>0 - 4</span><span>Minimal Anxiety</span></div>
            <div class="flex justify-between"><span>5 - 9</span><span>Mild Anxiety</span></div>
            <div class="flex justify-between"><span>10 - 14</span><span>Moderate Anxiety</span></div>
            <div class="flex justify-between"><span>15 - 21</span><span>Severe Anxiety</span></div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="anxiety-score" />
      <FeedbackWidget />
    </div>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcAX() {
      let total = 0;
      for (let i = 1; i <= 7; i++) {
        total += parseInt((document.getElementById('ax-q' + i) as HTMLInputElement).value) || 0;
      }

      let severity = 'Minimal Anxiety';
      let seek = 'Not indicated';
      let track = '';

      if (total <= 4) {
        severity = 'Minimal Anxiety';
        seek = 'Not indicated';
        track = 'Your score suggests minimal anxiety. Re-assess in 2-4 weeks if you notice changes. Maintain healthy routines including exercise, sleep hygiene, and social connection.';
      } else if (total <= 9) {
        severity = 'Mild Anxiety';
        seek = 'Monitor closely';
        track = 'Mild anxiety detected. Track your score weekly. Consider self-help strategies: regular exercise, mindfulness meditation, limiting caffeine and alcohol. If symptoms persist for 4+ weeks, consult a professional.';
      } else if (total <= 14) {
        severity = 'Moderate Anxiety';
        seek = 'Recommended';
        track = 'Moderate anxiety level. Professional consultation is recommended. Evidence-based treatments include CBT (Cognitive Behavioral Therapy) and, if appropriate, medication. Continue monitoring weekly.';
      } else {
        severity = 'Severe Anxiety';
        seek = 'Strongly recommended';
        track = 'Severe anxiety indicated. Please seek professional help promptly. Effective treatments are available. If you are in crisis, contact the 988 Suicide and Crisis Lifeline (call/text 988) or go to your nearest emergency room.';
      }

      document.getElementById('ax-score')!.textContent = total + ' / 21';
      document.getElementById('ax-sev')!.textContent = severity;
      document.getElementById('ax-seek')!.textContent = seek;
      document.getElementById('ax-track')!.textContent = track;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      for (let i = 1; i <= 7; i++) {
        (document.getElementById('ax-q' + i) as HTMLInputElement).value = '1';
      }
      document.querySelectorAll('.ax-in').forEach(el => {
        el.addEventListener('input', calcAX);
        el.addEventListener('change', calcAX);
      });
      calcAX();
    }, 50);
  </script>
</CalculatorLayout>
