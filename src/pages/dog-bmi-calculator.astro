---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Dog BMI Calculator - Body Condition Score & Ideal Weight";
const description = "Calculate your dog's body condition score, ideal weight range by breed size, and overweight percentage. Get weight management recommendations.";
const relatedCalcs = [
  { name: "Dog Food Calculator", url: "/dog-food-calculator", description: "Daily food portions for dogs." },
  { name: "Dog Age Calculator", url: "/dog-age-calculator", description: "Convert dog years to human years." },
  { name: "Dog Exercise Calculator", url: "/dog-exercise-calculator", description: "Daily exercise needs for dogs." },
  { name: "Pet Food Calculator", url: "/pet-food-calculator", description: "General pet food portions." },
  { name: "Animal Calorie Calculator", url: "/animal-calorie-calculator", description: "Energy requirements for animals." },
  { name: "BMI Calculator", url: "/bmi-calculator", description: "Calculate human BMI." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Dog BMI Calculator" keywords="dog BMI, dog body condition score, dog ideal weight, overweight dog, dog weight management" breadcrumbs={[{ name: "Dog BMI", url: "/dog-bmi-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dog BMI Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Assess your dog's body condition, ideal weight range, and get weight management guidance.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Current Weight (lbs)</label>
            <input type="number" id="db-weight" class="db-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="1" max="300" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Breed Size</label>
            <select id="db-size" class="db-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="toy">Toy (under 10 lbs)</option>
              <option value="small">Small (10-25 lbs)</option>
              <option value="medium" selected>Medium (25-50 lbs)</option>
              <option value="large">Large (50-100 lbs)</option>
              <option value="giant">Giant (100+ lbs)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Body Condition Score (1-9)</label>
            <input type="number" id="db-bcs" class="db-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="1" max="9" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Age</label>
            <select id="db-age" class="db-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="puppy">Puppy (&lt;1 yr)</option>
              <option value="adult" selected>Adult (1-7 yrs)</option>
              <option value="senior">Senior (7+ yrs)</option>
            </select>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Body Condition</div>
          <div class="text-5xl font-extrabold font-mono" id="db-result">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Ideal Weight</div><div class="text-xl font-bold font-mono" id="db-ideal">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weight Diff</div><div class="text-xl font-bold font-mono" id="db-diff">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Over/Under %</div><div class="text-xl font-bold font-mono" id="db-pct">--</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Ideal Range</div><div class="text-xl font-bold font-mono" id="db-range">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Body Fat Est.</div><div class="text-xl font-bold font-mono" id="db-fat">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Recommendation</div><div class="text-xl font-bold font-mono" id="db-rec">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="dog-bmi" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDB() {
      const weight = parseFloat((document.getElementById('db-weight') as HTMLInputElement).value) || 0;
      const size = (document.getElementById('db-size') as HTMLSelectElement).value;
      const bcs = parseInt((document.getElementById('db-bcs') as HTMLInputElement).value) || 5;
      const age = (document.getElementById('db-age') as HTMLSelectElement).value;

      // Ideal weight ranges by breed size
      const idealRanges: Record<string, [number, number]> = {
        toy: [4, 10], small: [10, 25], medium: [25, 50], large: [50, 100], giant: [100, 200]
      };
      const range = idealRanges[size] || [25, 50];

      // BCS 5 = ideal. Each point above/below = ~10% deviation
      // Ideal weight = current / (1 + (bcs-5)*0.10)
      const idealWeight = weight / (1 + (bcs - 5) * 0.10);
      const diff = weight - idealWeight;
      const pctOver = ((diff / idealWeight) * 100);

      // Body fat estimate: BCS 5 = ~20%, each point = ~5%
      const bodyFat = 20 + (bcs - 5) * 5;

      // BCS labels
      const bcsLabels: Record<number, string> = {
        1: 'Emaciated', 2: 'Very Thin', 3: 'Underweight',
        4: 'Slightly Under', 5: 'Ideal', 6: 'Slightly Over',
        7: 'Overweight', 8: 'Obese', 9: 'Severely Obese'
      };

      let rec = 'Maintain';
      if (bcs < 4) rec = 'Gain weight';
      else if (bcs === 4) rec = 'Slight gain';
      else if (bcs === 5) rec = 'Maintain';
      else if (bcs === 6) rec = 'Slight loss';
      else rec = 'Lose weight';

      document.getElementById('db-result')!.textContent = bcsLabels[bcs] || 'Ideal';
      document.getElementById('db-ideal')!.textContent = Math.round(idealWeight) + ' lbs';
      document.getElementById('db-diff')!.textContent = (diff >= 0 ? '+' : '') + diff.toFixed(1) + ' lbs';
      document.getElementById('db-pct')!.textContent = (pctOver >= 0 ? '+' : '') + pctOver.toFixed(1) + '%';
      document.getElementById('db-range')!.textContent = range[0] + '-' + range[1] + ' lbs';
      document.getElementById('db-fat')!.textContent = Math.max(5, Math.min(50, bodyFat)) + '%';
      document.getElementById('db-rec')!.textContent = rec;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.db-in').forEach(el => { el.addEventListener('input', calcDB); el.addEventListener('change', calcDB); });
      calcDB();
    }, 50);
  </script>
</CalculatorLayout>
