---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Radiant Floor Calculator - Tube Spacing, Loop Length & BTU Output";
const description = "Calculate radiant floor heating tube spacing, loop lengths, BTU output, and flow rates. Design hydronic radiant floor systems accurately.";

const relatedCalcs = [
  { name: "Heat Loss Calculator", url: "/heat-loss-calculator", description: "Building heat loss." },
  { name: "Thermal Resistance Calculator", url: "/thermal-resistance-calculator", description: "R/U values." },
  { name: "Chiller Sizing Calculator", url: "/chiller-sizing-calculator", description: "Chiller tonnage." },
  { name: "Heat Exchanger Calculator", url: "/heat-exchanger-calculator", description: "Heat transfer." },
  { name: "Cooling Load Calculator", url: "/cooling-load-calculator", description: "Cooling loads." },
  { name: "Coil Sizing Calculator", url: "/coil-sizing-calculator", description: "Coil selection." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Radiant Floor Calculator"
  keywords="radiant floor heating, tube spacing, loop length, PEX tubing, hydronic heating, BTU output, radiant slab"
  breadcrumbs={[{ name: "Radiant Floor Calculator", url: "/radiant-floor-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Radiant Floor Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Design radiant floor heating systems with tube spacing, loop length, and output calculations.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-5">
        <h3 class="text-lg font-bold text-text">Room / Zone</h3>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Floor Area (sq ft)</label>
            <input type="number" id="rf2-area" class="rf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="50" step="25">
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">Heat Loss (BTU/hr/sq ft)</label>
            <input type="number" id="rf2-loss" class="rf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="25" min="5" max="60" step="1">
          </div>
        </div>

        <h3 class="text-lg font-bold text-text">Tubing</h3>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Tube Spacing (inches)</label>
            <select id="rf2-spacing" class="rf2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="6">6" (high output)</option>
              <option value="8">8"</option>
              <option value="9" selected>9" (standard)</option>
              <option value="12">12" (low output)</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">Tube Size</label>
            <select id="rf2-tube" class="rf2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="0.375">3/8" PEX</option>
              <option value="0.5" selected>1/2" PEX</option>
              <option value="0.625">5/8" PEX</option>
              <option value="0.75">3/4" PEX</option>
            </select>
          </div>
        </div>

        <div>
          <label class="block text-sm font-medium text-text mb-1">Max Loop Length (ft)</label>
          <input type="number" id="rf2-maxloop" class="rf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="300" min="100" max="500" step="25">
        </div>

        <h3 class="text-lg font-bold text-text">Water Temperatures</h3>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Supply Temp (°F)</label>
            <input type="number" id="rf2-supply" class="rf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="120" step="5">
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">Return Temp (°F)</label>
            <input type="number" id="rf2-return" class="rf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="100" step="5">
          </div>
        </div>

        <!-- Results -->
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Heat Output</div>
          <div class="text-4xl font-extrabold" id="rf2-output">--</div>
          <div class="text-sm text-blue-200 mt-1">BTU/hr</div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Total Tube Length</div>
            <div class="text-xl font-bold" id="rf2-length">--</div>
            <div class="text-xs text-text-muted">ft</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Number of Loops</div>
            <div class="text-xl font-bold" id="rf2-loops">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Length Per Loop</div>
            <div class="text-xl font-bold" id="rf2-perloop">--</div>
            <div class="text-xs text-text-muted">ft</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Flow Rate Needed</div>
            <div class="text-xl font-bold" id="rf2-gpm">--</div>
            <div class="text-xs text-text-muted">GPM (total)</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">GPM per Loop</div>
            <div class="text-xl font-bold" id="rf2-gpmloop">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Floor Surface Temp</div>
            <div class="text-xl font-bold" id="rf2-surftemp">--</div>
            <div class="text-xs text-text-muted">°F (approx)</div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="radiant-floor" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl mx-auto prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Radiant Floor Heating Design</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p>Tube Length = Floor Area x 12 / Tube Spacing (inches)</p>
        <p>Loops = Total Length / Max Loop Length (round up)</p>
        <p>GPM = BTU/hr / (500 x Delta-T)</p>
      </div>
      <ul>
        <li><strong>Typical supply temp:</strong> 100-140°F (much lower than baseboard heating)</li>
        <li><strong>Max floor surface temp:</strong> 85°F for occupied areas (ASHRAE)</li>
        <li><strong>Max loop length for 1/2" PEX:</strong> 300 ft to limit pressure drop</li>
        <li><strong>Output:</strong> 15-40 BTU/hr/sq ft depending on spacing and water temp</li>
      </ul>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcRF2() {
      const area = parseFloat((document.getElementById('rf2-area') as HTMLInputElement).value) || 0;
      const heatLoss = parseFloat((document.getElementById('rf2-loss') as HTMLInputElement).value) || 0;
      const spacing = parseFloat((document.getElementById('rf2-spacing') as HTMLSelectElement).value) || 9;
      const tubeSize = parseFloat((document.getElementById('rf2-tube') as HTMLSelectElement).value) || 0.5;
      const maxLoop = parseFloat((document.getElementById('rf2-maxloop') as HTMLInputElement).value) || 300;
      const supplyT = parseFloat((document.getElementById('rf2-supply') as HTMLInputElement).value) || 120;
      const returnT = parseFloat((document.getElementById('rf2-return') as HTMLInputElement).value) || 100;

      // Total heat needed
      const totalBTU = area * heatLoss;

      // Total tube length
      const tubeLength = area * 12 / spacing;

      // Number of loops
      const numLoops = Math.ceil(tubeLength / maxLoop);
      const lengthPerLoop = numLoops > 0 ? tubeLength / numLoops : 0;

      // Flow rate: GPM = BTU / (500 x deltaT)
      const deltaT = supplyT - returnT;
      const totalGPM = deltaT > 0 ? totalBTU / (500 * deltaT) : 0;
      const gpmPerLoop = numLoops > 0 ? totalGPM / numLoops : 0;

      // Approximate floor surface temperature
      // Average water temp minus the floor covering resistance
      const avgWaterTemp = (supplyT + returnT) / 2;
      // Floor surface is roughly 10-15°F below average water temp (through slab)
      const surfaceTemp = avgWaterTemp - 12;

      document.getElementById('rf2-output')!.textContent = Math.round(totalBTU).toLocaleString();
      document.getElementById('rf2-length')!.textContent = Math.round(tubeLength).toLocaleString();
      document.getElementById('rf2-loops')!.textContent = numLoops.toString();
      document.getElementById('rf2-perloop')!.textContent = Math.round(lengthPerLoop).toString();
      document.getElementById('rf2-gpm')!.textContent = totalGPM.toFixed(2);
      document.getElementById('rf2-gpmloop')!.textContent = gpmPerLoop.toFixed(2);
      document.getElementById('rf2-surftemp')!.textContent = surfaceTemp.toFixed(0);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('.rf2-in').forEach(el => {
        el.addEventListener('input', calcRF2);
        el.addEventListener('change', calcRF2);
      });
      calcRF2();
    }, 50);
  </script>
</CalculatorLayout>
