---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "HVAC Calculator";
const description = "Calculate BTU requirements, AC tonnage, and heating/cooling capacity for your home or room.";
const relatedCalcs = [
  { name: "Electricity Cost", url: "/electricity-cost-calculator", description: "Electric." },
  { name: "Insulation", url: "/insulation-calculator", description: "Insulation." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Electrical Load", url: "/electrical-load-calculator", description: "Load." },
  { name: "Solar Panel", url: "/solar-panel-calculator", description: "Solar." },
  { name: "Window", url: "/window-calculator", description: "Windows." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="HVAC Calculator" keywords="HVAC calculator, BTU calculator, AC size, tonnage calculator, heating cooling capacity" breadcrumbs={[{ name: "HVAC", url: "/hvac-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">HVAC Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate BTU and AC tonnage for your space.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Room Length (ft)</label><input type="number" id="hv-len" class="hv-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="20" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Room Width (ft)</label><input type="number" id="hv-wid" class="hv-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="15" min="0" step="1"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Ceiling Height (ft)</label><input type="number" id="hv-ceil" class="hv-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="6" max="20" step="0.5"></div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Sun Exposure</label>
            <select id="hv-sun" class="hv-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="0.9">Heavily Shaded</option>
              <option value="1" selected>Average</option>
              <option value="1.1">Sunny</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Occupants</label><input type="number" id="hv-occ" class="hv-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="1" max="20" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Insulation</label>
            <select id="hv-ins" class="hv-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="1.2">Poor</option>
              <option value="1" selected>Average</option>
              <option value="0.85">Good</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Kitchen?</label>
            <select id="hv-kitchen" class="hv-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="0" selected>No</option>
              <option value="4000">Yes (+4,000 BTU)</option>
            </select>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">BTU Required</div>
          <div class="text-5xl font-extrabold font-mono" id="hv-result">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">AC Tonnage</div><div class="text-xl font-bold font-mono" id="hv-tons">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Room Area</div><div class="text-xl font-bold font-mono" id="hv-area">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Volume</div><div class="text-xl font-bold font-mono" id="hv-vol">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">AC Size Guide</h3>
          <div class="text-xs space-y-1">
            <div class="flex justify-between"><span>150-300 sf</span><span>5,000-7,000 BTU</span></div>
            <div class="flex justify-between"><span>300-550 sf</span><span>8,000-12,000 BTU</span></div>
            <div class="flex justify-between"><span>550-1000 sf</span><span>14,000-18,000 BTU</span></div>
            <div class="flex justify-between"><span>1000-1500 sf</span><span>21,000-24,000 BTU</span></div>
            <div class="flex justify-between"><span>1500+ sf</span><span>Central AC recommended</span></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="hvac" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcHV() {
      const len = parseFloat((document.getElementById('hv-len') as HTMLInputElement).value) || 0;
      const wid = parseFloat((document.getElementById('hv-wid') as HTMLInputElement).value) || 0;
      const ceil = parseFloat((document.getElementById('hv-ceil') as HTMLInputElement).value) || 8;
      const sun = parseFloat((document.getElementById('hv-sun') as HTMLSelectElement).value);
      const occ = parseInt((document.getElementById('hv-occ') as HTMLInputElement).value) || 1;
      const ins = parseFloat((document.getElementById('hv-ins') as HTMLSelectElement).value);
      const kitchen = parseInt((document.getElementById('hv-kitchen') as HTMLSelectElement).value);
      const area = len * wid;
      const volume = area * ceil;
      let btu = area * 20;
      if (ceil > 8) btu *= ceil / 8;
      btu *= sun;
      btu *= ins;
      if (occ > 2) btu += (occ - 2) * 600;
      btu += kitchen;
      btu = Math.ceil(btu / 500) * 500;
      const tons = btu / 12000;
      document.getElementById('hv-result')!.textContent = btu.toLocaleString();
      document.getElementById('hv-tons')!.textContent = tons.toFixed(1) + ' ton';
      document.getElementById('hv-area')!.textContent = area.toFixed(0) + ' sf';
      document.getElementById('hv-vol')!.textContent = volume.toFixed(0) + ' cf';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.hv-in').forEach(el => { el.addEventListener('input', calcHV); el.addEventListener('change', calcHV); });
      calcHV();
    }, 50);
  </script>
</CalculatorLayout>
