---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "EV Charging Calculator - Charge Time, Cost & Range";
const description = "Calculate EV charge time from battery size and charger level, cost per charge at your electricity rate, and miles of range added per hour of charging.";
const relatedCalcs = [
  { name: "Electricity Cost", url: "/electricity-cost-calculator", description: "Energy costs." },
  { name: "Electricity Bill", url: "/electricity-bill-calculator", description: "Bill estimates." },
  { name: "Battery Life", url: "/battery-life-calculator", description: "Battery runtime." },
  { name: "Solar Panel", url: "/solar-panel-calculator", description: "Solar sizing." },
  { name: "Electrical Load", url: "/electrical-load-calculator", description: "Panel loads." },
  { name: "Ohm's Law", url: "/ohms-law-calculator", description: "Voltage, current, resistance." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="EV Charging Calculator" keywords="EV charging calculator, electric vehicle charge time, cost per charge, Level 1 Level 2, range per hour, kWh" breadcrumbs={[{ name: "EV Charging", url: "/ev-charging-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">EV Charging Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate charge time, cost, and range per hour for your electric vehicle.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Battery Capacity (kWh)</label>
            <input type="number" id="ec2-batt" class="ec2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="75" min="10" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Current Charge Level (%)</label>
            <input type="number" id="ec2-soc" class="ec2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="0" max="100" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Target Charge Level (%)</label>
            <input type="number" id="ec2-target" class="ec2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="80" min="0" max="100" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Vehicle Efficiency (mi/kWh)</label>
            <input type="number" id="ec2-eff" class="ec2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3.5" min="1" step="0.1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Charger Level</label>
            <select id="ec2-level" class="ec2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="1.4">Level 1 (120V / 12A)</option>
              <option value="1.9">Level 1 (120V / 16A)</option>
              <option value="7.2" selected>Level 2 (240V / 30A)</option>
              <option value="9.6">Level 2 (240V / 40A)</option>
              <option value="11.5">Level 2 (240V / 48A)</option>
              <option value="19.2">Level 2 (240V / 80A)</option>
              <option value="50">DC Fast (50 kW)</option>
              <option value="150">DC Fast (150 kW)</option>
              <option value="250">DC Fast (250 kW)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Electricity Rate ($/kWh)</label>
            <input type="number" id="ec2-rate" class="ec2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.14" min="0.01" step="0.01">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Charge Time</div>
          <div class="text-5xl font-extrabold font-mono" id="ec2-result">0 hr</div>
          <div class="text-sm text-blue-200 mt-1" id="ec2-note">-</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Energy Needed</div>
            <div class="text-xl font-bold font-mono" id="ec2-kwh">0 kWh</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Cost Per Charge</div>
            <div class="text-xl font-bold font-mono" id="ec2-cost">$0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Range Added</div>
            <div class="text-xl font-bold font-mono" id="ec2-range">0 mi</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Range Per Hour</div>
            <div class="text-xl font-bold font-mono" id="ec2-rph">0 mi/hr</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Monthly Cost (daily charge)</div>
            <div class="text-xl font-bold font-mono" id="ec2-monthly">$0</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="ev-charging" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcEC2() {
      const batt = parseFloat((document.getElementById('ec2-batt') as HTMLInputElement).value) || 75;
      const soc = parseFloat((document.getElementById('ec2-soc') as HTMLInputElement).value) || 0;
      const target = parseFloat((document.getElementById('ec2-target') as HTMLInputElement).value) || 80;
      const eff = parseFloat((document.getElementById('ec2-eff') as HTMLInputElement).value) || 3.5;
      const chargerKW = parseFloat((document.getElementById('ec2-level') as HTMLSelectElement).value) || 7.2;
      const rate = parseFloat((document.getElementById('ec2-rate') as HTMLInputElement).value) || 0.14;

      const energyNeeded = batt * Math.max(0, target - soc) / 100;
      // DC fast charging has ~90% efficiency, AC has ~85-90%
      const chargingEff = chargerKW >= 50 ? 0.92 : 0.88;
      const actualEnergy = energyNeeded / chargingEff;
      const chargeTimeHrs = chargerKW > 0 ? actualEnergy / chargerKW : 0;
      const costPerCharge = actualEnergy * rate;
      const rangeAdded = energyNeeded * eff;
      const rangePerHour = chargerKW * chargingEff * eff;
      const monthlyCost = costPerCharge * 30;

      // Format time
      const hrs = Math.floor(chargeTimeHrs);
      const mins = Math.round((chargeTimeHrs - hrs) * 60);
      let timeStr: string;
      if (chargeTimeHrs < 1) {
        timeStr = mins + ' min';
      } else {
        timeStr = hrs + 'h ' + mins + 'm';
      }

      document.getElementById('ec2-result')!.textContent = timeStr;
      document.getElementById('ec2-note')!.textContent = soc + '% to ' + target + '% at ' + chargerKW + ' kW';
      document.getElementById('ec2-kwh')!.textContent = energyNeeded.toFixed(1) + ' kWh';
      document.getElementById('ec2-cost')!.textContent = '$' + costPerCharge.toFixed(2);
      document.getElementById('ec2-range')!.textContent = rangeAdded.toFixed(0) + ' mi';
      document.getElementById('ec2-rph')!.textContent = rangePerHour.toFixed(0) + ' mi/hr';
      document.getElementById('ec2-monthly')!.textContent = '$' + monthlyCost.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('.ec2-in').forEach(el => {
        el.addEventListener('input', calcEC2);
        el.addEventListener('change', calcEC2);
      });
      calcEC2();
    }, 50);
  </script>
</CalculatorLayout>
