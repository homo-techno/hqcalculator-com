---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Boat Fuel Calculator - Marine Fuel Consumption & Cost";
const description = "Calculate boat fuel consumption from engine horsepower, speed, and efficiency. Estimate gallons per hour, range, and fuel cost per trip.";
const relatedCalcs = [
  { name: "Boat Loan", url: "/boat-loan-calculator", description: "Marine financing costs." },
  { name: "Nautical Mile", url: "/nautical-mile-calculator", description: "Nautical distance conversion." },
  { name: "Fuel Efficiency", url: "/fuel-efficiency-converter", description: "Fuel efficiency units." },
  { name: "Fuel Surcharge", url: "/fuel-surcharge-calculator", description: "Fuel surcharge rates." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed and distance." },
  { name: "Buoyancy", url: "/buoyancy-calculator", description: "Buoyancy force calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Boat Fuel Calculator" keywords="boat fuel calculator, marine fuel consumption, gallons per hour, boat fuel cost, marine fuel efficiency, boat range calculator" breadcrumbs={[{ name: "Boat Fuel", url: "/boat-fuel-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Boat Fuel Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate fuel consumption, range, and trip costs based on engine specs and cruising conditions.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Engine Horsepower</label><input type="number" id="bf2-hp" class="bf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="10"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Number of Engines</label><input type="number" id="bf2-eng" class="bf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" max="4" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Cruising Speed (knots)</label><input type="number" id="bf2-speed" class="bf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Throttle (%)</label><input type="number" id="bf2-throttle" class="bf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="10" max="100" step="5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Fuel Tank (gallons)</label><input type="number" id="bf2-tank" class="bf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="10"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Fuel Price ($/gal)</label><input type="number" id="bf2-price" class="bf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0.01" step="0.10"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Trip Distance (nautical miles)</label><input type="number" id="bf2-dist" class="bf2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0" step="5"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Gallons Per Hour</div>
          <div class="text-5xl font-extrabold font-mono" id="bf2-gph">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Range (nm)</div><div class="text-xl font-bold" id="bf2-range">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Trip Fuel (gal)</div><div class="text-xl font-bold" id="bf2-trip">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Trip Cost</div><div class="text-xl font-bold" id="bf2-cost">--</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">NM Per Gallon</div><div class="text-xl font-bold" id="bf2-nmpg">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Tank Duration (hrs)</div><div class="text-xl font-bold" id="bf2-dur">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost Per NM</div><div class="text-xl font-bold" id="bf2-cpnm">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="boat-fuel" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcBF2() {
      const hp = parseFloat((document.getElementById('bf2-hp') as HTMLInputElement).value) || 0;
      const eng = parseInt((document.getElementById('bf2-eng') as HTMLInputElement).value) || 1;
      const speed = parseFloat((document.getElementById('bf2-speed') as HTMLInputElement).value) || 0;
      const throttle = (parseFloat((document.getElementById('bf2-throttle') as HTMLInputElement).value) || 75) / 100;
      const tank = parseFloat((document.getElementById('bf2-tank') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('bf2-price') as HTMLInputElement).value) || 0;
      const dist = parseFloat((document.getElementById('bf2-dist') as HTMLInputElement).value) || 0;

      // Gas engine: ~0.1 gal/hr per HP at full throttle; scale by throttle squared for partial load
      const gphPerEngine = hp * 0.1 * throttle * throttle;
      const gph = gphPerEngine * eng;
      const nmpg = speed > 0 && gph > 0 ? speed / gph : 0;
      const range = gph > 0 ? (tank / gph) * speed * 0.9 : 0; // 90% usable fuel safety
      const tripFuel = speed > 0 ? (dist / speed) * gph : 0;
      const tripCost = tripFuel * price;
      const tankDur = gph > 0 ? tank / gph : 0;
      const cpnm = nmpg > 0 ? price / nmpg : 0;

      document.getElementById('bf2-gph')!.textContent = gph > 0 ? gph.toFixed(1) : '--';
      document.getElementById('bf2-range')!.textContent = range > 0 ? Math.round(range).toLocaleString() : '--';
      document.getElementById('bf2-trip')!.textContent = tripFuel > 0 ? tripFuel.toFixed(1) : '--';
      document.getElementById('bf2-cost')!.textContent = tripCost > 0 ? '$' + tripCost.toFixed(2) : '--';
      document.getElementById('bf2-nmpg')!.textContent = nmpg > 0 ? nmpg.toFixed(2) : '--';
      document.getElementById('bf2-dur')!.textContent = tankDur > 0 ? tankDur.toFixed(1) : '--';
      document.getElementById('bf2-cpnm')!.textContent = cpnm > 0 ? '$' + cpnm.toFixed(2) : '--';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('bf2-hp') as HTMLInputElement).value = '250';
      (document.getElementById('bf2-eng') as HTMLInputElement).value = '1';
      (document.getElementById('bf2-speed') as HTMLInputElement).value = '25';
      (document.getElementById('bf2-throttle') as HTMLInputElement).value = '75';
      (document.getElementById('bf2-tank') as HTMLInputElement).value = '150';
      (document.getElementById('bf2-price') as HTMLInputElement).value = '5.50';
      (document.getElementById('bf2-dist') as HTMLInputElement).value = '50';
      document.querySelectorAll('.bf2-in').forEach(el => { el.addEventListener('input', calcBF2); el.addEventListener('change', calcBF2); });
      calcBF2();
    }, 50);
  </script>
</CalculatorLayout>
