---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Waist-to-Hip Ratio Calculator - WHR Health Risk";
const description = "Calculate your waist-to-hip ratio (WHR) and assess health risk for cardiovascular disease and metabolic conditions.";
const relatedCalcs = [
  { name: "BMI Calculator", url: "/bmi-calculator", description: "BMI." },
  { name: "Body Fat", url: "/body-fat-calculator", description: "Body fat." },
  { name: "Ideal Weight", url: "/ideal-weight-calculator", description: "Ideal weight." },
  { name: "Calorie Calculator", url: "/calorie-calculator", description: "Calories." },
  { name: "TDEE Calculator", url: "/tdee-calculator", description: "TDEE." },
  { name: "BMR Calculator", url: "/bmr-calculator", description: "BMR." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Waist-to-Hip Ratio Calculator" keywords="waist to hip ratio, WHR calculator, waist hip ratio, health risk, body shape, abdominal fat" breadcrumbs={[{ name: "Waist-to-Hip", url: "/waist-to-hip-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Waist-to-Hip Ratio Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate your WHR and assess your health risk level.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-3 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Waist (in)</label><input type="number" id="wh-waist" class="wh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="32" min="20" max="60" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Hip (in)</label><input type="number" id="wh-hip" class="wh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="38" min="25" max="65" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Gender</label><select id="wh-gen" class="wh-in w-full px-4 py-3 border border-border rounded-xl text-lg"><option value="male">Male</option><option value="female">Female</option></select></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Waist-to-Hip Ratio</div>
          <div class="text-5xl font-extrabold font-mono" id="wh-ratio">0.00</div>
        </div>
        <div class="p-4 rounded-xl text-center" id="wh-risk-box">
          <div class="text-sm font-bold" id="wh-risk">-</div>
          <div class="text-xs mt-1" id="wh-risk-desc">-</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Body Shape</div><div class="text-xl font-bold" id="wh-shape">-</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Waist-to-Height</div><div class="text-xl font-bold" id="wh-wth">-</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">WHO Risk Thresholds</h3>
          <div class="text-sm space-y-1">
            <div><span class="font-bold">Men:</span> Low risk &lt; 0.90, Moderate 0.90-0.99, High &ge; 1.00</div>
            <div><span class="font-bold">Women:</span> Low risk &lt; 0.80, Moderate 0.80-0.84, High &ge; 0.85</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="waist-to-hip" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcWHR() {
      const waist = parseFloat((document.getElementById('wh-waist') as HTMLInputElement).value) || 0;
      const hip = parseFloat((document.getElementById('wh-hip') as HTMLInputElement).value) || 1;
      const gen = (document.getElementById('wh-gen') as HTMLSelectElement).value;
      const ratio = waist / hip;
      document.getElementById('wh-ratio')!.textContent = ratio.toFixed(3);
      let risk: string, desc: string, color: string;
      if (gen === 'male') {
        if (ratio < 0.90) { risk = 'Low Risk'; desc = 'Below WHO threshold for increased risk'; color = 'bg-green-50 text-green-800'; }
        else if (ratio < 1.00) { risk = 'Moderate Risk'; desc = 'Moderate cardiovascular risk'; color = 'bg-yellow-50 text-yellow-800'; }
        else { risk = 'High Risk'; desc = 'Increased risk of heart disease and diabetes'; color = 'bg-red-50 text-red-800'; }
      } else {
        if (ratio < 0.80) { risk = 'Low Risk'; desc = 'Below WHO threshold for increased risk'; color = 'bg-green-50 text-green-800'; }
        else if (ratio < 0.85) { risk = 'Moderate Risk'; desc = 'Moderate cardiovascular risk'; color = 'bg-yellow-50 text-yellow-800'; }
        else { risk = 'High Risk'; desc = 'Increased risk of heart disease and diabetes'; color = 'bg-red-50 text-red-800'; }
      }
      document.getElementById('wh-risk')!.textContent = risk;
      document.getElementById('wh-risk-desc')!.textContent = desc;
      document.getElementById('wh-risk-box')!.className = `p-4 rounded-xl text-center ${color}`;
      const shape = ratio > (gen === 'male' ? 0.95 : 0.85) ? 'Apple (android)' : 'Pear (gynoid)';
      document.getElementById('wh-shape')!.textContent = shape;
      document.getElementById('wh-wth')!.textContent = 'N/A (need height)';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.wh-in').forEach(el => { el.addEventListener('input', calcWHR); el.addEventListener('change', calcWHR); }); calcWHR(); }, 50);
  </script>
</CalculatorLayout>
