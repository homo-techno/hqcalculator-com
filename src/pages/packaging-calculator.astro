---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Packaging Calculator";
const description = "Optimize box size, calculate void fill needed, packaging material cost, and cushioning thickness for safe and cost-effective product packaging.";
const relatedCalcs = [
  { name: "3D Printer Cost", url: "/3d-printer-cost-calculator", description: "3D printing costs." },
  { name: "Moving Cost", url: "/moving-cost-calculator", description: "Estimate moving expenses." },
  { name: "Break Even", url: "/break-even-calculator", description: "Find break-even point." },
  { name: "Profit Margin", url: "/profit-margin-calculator", description: "Calculate profit margins." },
  { name: "Area", url: "/area-calculator", description: "Calculate area." },
  { name: "Inventory Turnover", url: "/inventory-turnover-calculator", description: "Inventory efficiency." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Packaging Calculator" keywords="packaging calculator, box size, void fill, cushioning thickness, packaging cost, material calculator" breadcrumbs={[{ name: "Packaging", url: "/packaging-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Packaging Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate optimal box size, void fill volume, cushioning needs, and packaging material costs.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="text-sm font-semibold text-text uppercase tracking-wide">Product Dimensions</div>
        <div class="grid grid-cols-3 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Product L (in)</label><input type="number" id="pk-pl" class="pk-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0.5" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Product W (in)</label><input type="number" id="pk-pw" class="pk-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0.5" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Product H (in)</label><input type="number" id="pk-ph" class="pk-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0.5" step="0.5"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Product Weight (lbs)</label><input type="number" id="pk-wt" class="pk-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0.1" step="0.1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Fragility Level</label><select id="pk-fragile" class="pk-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold"><option value="1">Low - Durable goods</option><option value="2" selected>Medium - Standard products</option><option value="3">High - Fragile items</option><option value="4">Very High - Electronics/Glass</option></select></div>
        <div><label class="block text-xs font-medium text-text mb-1">Packaging Material Cost ($/cu in)</label><input type="number" id="pk-matcost" class="pk-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0.001" step="0.001"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Recommended Box Size</div>
          <div class="text-4xl font-extrabold font-mono" id="pk-result">--</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cushion Thickness</div><div class="text-xl font-bold font-mono" id="pk-cushion">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Void Fill Volume</div><div class="text-xl font-bold font-mono" id="pk-void">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Material Cost</div><div class="text-xl font-bold font-mono" id="pk-cost">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Fill Ratio</div><div class="text-xl font-bold font-mono" id="pk-ratio">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="packaging" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPK() {
      const pl = parseFloat((document.getElementById('pk-pl') as HTMLInputElement).value) || 0;
      const pw = parseFloat((document.getElementById('pk-pw') as HTMLInputElement).value) || 0;
      const ph = parseFloat((document.getElementById('pk-ph') as HTMLInputElement).value) || 0;
      const wt = parseFloat((document.getElementById('pk-wt') as HTMLInputElement).value) || 0;
      const fragile = parseInt((document.getElementById('pk-fragile') as HTMLSelectElement).value) || 2;
      const matCost = parseFloat((document.getElementById('pk-matcost') as HTMLInputElement).value) || 0;

      const cushionMap: Record<number, number> = { 1: 1, 2: 2, 3: 3, 4: 4 };
      const cushion = cushionMap[fragile] || 2;
      const weightBonus = wt > 20 ? 1 : 0;
      const totalCushion = cushion + weightBonus;

      const boxL = pl + (totalCushion * 2);
      const boxW = pw + (totalCushion * 2);
      const boxH = ph + (totalCushion * 2);

      const boxVolume = boxL * boxW * boxH;
      const productVolume = pl * pw * ph;
      const voidFill = boxVolume - productVolume;
      const fillRatio = boxVolume > 0 ? (productVolume / boxVolume) * 100 : 0;
      const materialCost = voidFill * matCost;

      document.getElementById('pk-result')!.textContent = boxL.toFixed(1) + ' x ' + boxW.toFixed(1) + ' x ' + boxH.toFixed(1) + '"';
      document.getElementById('pk-cushion')!.textContent = totalCushion.toFixed(1) + ' in';
      document.getElementById('pk-void')!.textContent = voidFill.toLocaleString(undefined, {maximumFractionDigits: 0}) + ' in\u00B3';
      document.getElementById('pk-cost')!.textContent = '$' + materialCost.toFixed(2);
      document.getElementById('pk-ratio')!.textContent = fillRatio.toFixed(1) + '%';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('pk-pl') as HTMLInputElement).value = '10';
      (document.getElementById('pk-pw') as HTMLInputElement).value = '8';
      (document.getElementById('pk-ph') as HTMLInputElement).value = '6';
      (document.getElementById('pk-wt') as HTMLInputElement).value = '5';
      (document.getElementById('pk-matcost') as HTMLInputElement).value = '0.005';
      document.querySelectorAll('.pk-in').forEach(el => { el.addEventListener('input', calcPK); el.addEventListener('change', calcPK); });
      calcPK();
    }, 50);
  </script>
</CalculatorLayout>
