---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Rental Property Calculator";
const description = "Analyze rental property ROI including cash flow, cap rate, cash-on-cash return, and gross rent multiplier.";
const relatedCalcs = [
  { name: "Cap Rate", url: "/cap-rate-calculator", description: "Calculate capitalization rate." },
  { name: "House Flipping", url: "/house-flipping-calculator", description: "Estimate flip profits." },
  { name: "Commercial Rent", url: "/commercial-rent-calculator", description: "Commercial lease costs." },
  { name: "Airbnb", url: "/airbnb-calculator", description: "Short-term rental revenue." },
  { name: "Debt Service Coverage", url: "/debt-service-coverage-calculator", description: "DSCR ratio." },
  { name: "Amortization", url: "/amortization-calculator", description: "Loan amortization." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Rental Property Calculator" keywords="rental property ROI, cash flow, cap rate, cash-on-cash return, gross rent multiplier" breadcrumbs={[{ name: "Rental Property", url: "/rental-property-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Rental Property Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Analyze rental property investment returns including cash flow, cap rate, and cash-on-cash return.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Purchase Price ($)</label><input type="number" id="rp-price" class="rp-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="250000" min="0" step="1000"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Down Payment (%)</label><input type="number" id="rp-down" class="rp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="0" max="100" step="1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Monthly Rent ($)</label><input type="number" id="rp-rent" class="rp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2000" min="0" step="50"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Monthly Expenses ($) (taxes, insurance, maintenance)</label><input type="number" id="rp-expenses" class="rp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="600" min="0" step="50"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Vacancy Rate (%)</label><input type="number" id="rp-vacancy" class="rp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="0" max="100" step="1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Mortgage Rate (%)</label><input type="number" id="rp-rate" class="rp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="7" min="0" max="30" step="0.1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Loan Term (years)</label><input type="number" id="rp-term" class="rp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="30" min="1" max="40" step="1"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Monthly Cash Flow</div>
          <div class="text-5xl font-extrabold font-mono" id="rp-result">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cap Rate</div><div class="text-xl font-bold font-mono" id="rp-cap">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cash-on-Cash Return</div><div class="text-xl font-bold font-mono" id="rp-coc">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Gross Rent Multiplier</div><div class="text-xl font-bold font-mono" id="rp-grm">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Cash Flow</div><div class="text-xl font-bold font-mono" id="rp-annual">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Mortgage</div><div class="text-xl font-bold font-mono" id="rp-mortgage">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">NOI (Annual)</div><div class="text-xl font-bold font-mono" id="rp-noi">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="rental-property" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRP() {
      const price = parseFloat((document.getElementById('rp-price') as HTMLInputElement).value) || 0;
      const downPct = parseFloat((document.getElementById('rp-down') as HTMLInputElement).value) || 0;
      const rent = parseFloat((document.getElementById('rp-rent') as HTMLInputElement).value) || 0;
      const expenses = parseFloat((document.getElementById('rp-expenses') as HTMLInputElement).value) || 0;
      const vacancy = parseFloat((document.getElementById('rp-vacancy') as HTMLInputElement).value) || 0;
      const rate = parseFloat((document.getElementById('rp-rate') as HTMLInputElement).value) || 0;
      const term = parseFloat((document.getElementById('rp-term') as HTMLInputElement).value) || 30;

      const downPayment = price * (downPct / 100);
      const loanAmount = price - downPayment;
      const monthlyRate = rate / 100 / 12;
      let monthlyMortgage = 0;
      if (monthlyRate > 0 && loanAmount > 0) {
        monthlyMortgage = loanAmount * (monthlyRate * Math.pow(1 + monthlyRate, term * 12)) / (Math.pow(1 + monthlyRate, term * 12) - 1);
      } else if (loanAmount > 0) {
        monthlyMortgage = loanAmount / (term * 12);
      }

      const effectiveRent = rent * (1 - vacancy / 100);
      const monthlyCashFlow = effectiveRent - expenses - monthlyMortgage;
      const annualCashFlow = monthlyCashFlow * 12;
      const annualNOI = (effectiveRent - expenses) * 12;
      const capRate = price > 0 ? (annualNOI / price) * 100 : 0;
      const cocReturn = downPayment > 0 ? (annualCashFlow / downPayment) * 100 : 0;
      const grm = rent > 0 ? price / (rent * 12) : 0;

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('rp-result')!.textContent = fmt(monthlyCashFlow);
      document.getElementById('rp-cap')!.textContent = capRate.toFixed(2) + '%';
      document.getElementById('rp-coc')!.textContent = cocReturn.toFixed(2) + '%';
      document.getElementById('rp-grm')!.textContent = grm.toFixed(2);
      document.getElementById('rp-annual')!.textContent = fmt(annualCashFlow);
      document.getElementById('rp-mortgage')!.textContent = fmt(monthlyMortgage);
      document.getElementById('rp-noi')!.textContent = fmt(annualNOI);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.rp-in').forEach(el => { el.addEventListener('input', calcRP); el.addEventListener('change', calcRP); });
      calcRP();
    }, 50);
  </script>
</CalculatorLayout>
