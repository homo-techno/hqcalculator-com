---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Pulley Calculator - Mechanical Advantage";
const description = "Calculate mechanical advantage, effort force, and speed ratio for pulley systems.";
const relatedCalcs = [
  { name: "Gear Ratio", url: "/gear-ratio-calculator", description: "Gear ratio." },
  { name: "Force Calculator", url: "/force-calculator", description: "Force." },
  { name: "Torque Calculator", url: "/torque-calculator", description: "Torque." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed." },
  { name: "Kinetic Energy", url: "/kinetic-energy-calculator", description: "Kinetic energy." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Pulley Calculator" keywords="pulley calculator, mechanical advantage, effort force, compound pulley, block and tackle" breadcrumbs={[{ name: "Pulley", url: "/pulley-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Pulley Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate mechanical advantage and effort for pulley systems.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Number of Pulleys</label><input type="number" id="pu-n" class="pu-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="4" min="1" max="20" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Load Weight (N)</label><input type="number" id="pu-load" class="pu-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="1000" min="0" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Efficiency (%)</label><input type="number" id="pu-eff" class="pu-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="90" min="1" max="100" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Lift Distance (m)</label><input type="number" id="pu-dist" class="pu-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" step="0.1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Effort Force Required</div>
          <div class="text-5xl font-extrabold font-mono" id="pu-result">0 N</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Mech. Advantage</div><div class="text-xl font-bold font-mono" id="pu-ma">0×</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Rope to Pull</div><div class="text-xl font-bold font-mono" id="pu-rope">0 m</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Work Done</div><div class="text-xl font-bold font-mono" id="pu-work">0 J</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Ideal Effort</div><div class="text-xl font-bold font-mono" id="pu-ideal">0 N</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Effort in kg</div><div class="text-xl font-bold font-mono" id="pu-kg">0 kg</div></div>
        </div>
      </div>
      <ShareButton calculatorId="pulley" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPU() {
      const n = parseInt((document.getElementById('pu-n') as HTMLInputElement).value) || 1;
      const load = parseFloat((document.getElementById('pu-load') as HTMLInputElement).value) || 0;
      const eff = parseFloat((document.getElementById('pu-eff') as HTMLInputElement).value) || 90;
      const dist = parseFloat((document.getElementById('pu-dist') as HTMLInputElement).value) || 0;
      const ma = n;
      const idealEffort = load / ma;
      const actualEffort = idealEffort / (eff / 100);
      const ropeLength = dist * ma;
      const work = load * dist;
      document.getElementById('pu-result')!.textContent = actualEffort.toFixed(1) + ' N';
      document.getElementById('pu-ma')!.textContent = ma + '×';
      document.getElementById('pu-rope')!.textContent = ropeLength.toFixed(1) + ' m';
      document.getElementById('pu-work')!.textContent = work.toFixed(1) + ' J';
      document.getElementById('pu-ideal')!.textContent = idealEffort.toFixed(1) + ' N';
      document.getElementById('pu-kg')!.textContent = (actualEffort / 9.81).toFixed(1) + ' kg';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.pu-in').forEach(el => { el.addEventListener('input', calcPU); el.addEventListener('change', calcPU); });
      calcPU();
    }, 50);
  </script>
</CalculatorLayout>
