---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Force Calculator - F = ma (Newton's Second Law)";
const description = "Calculate force, mass, or acceleration using Newton's second law F = ma.";
const relatedCalcs = [
  { name: "Acceleration", url: "/acceleration-calculator", description: "Acceleration." },
  { name: "Momentum", url: "/momentum-calculator", description: "Momentum." },
  { name: "Torque Calculator", url: "/torque-calculator", description: "Torque." },
  { name: "Pressure Converter", url: "/pressure-converter", description: "Pressure." },
  { name: "Density Calculator", url: "/density-calculator", description: "Density." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Force Calculator" keywords="force calculator, f=ma, newton's second law, force mass acceleration, newton calculator" breadcrumbs={[{ name: "Force Calculator", url: "/force-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Force Calculator (F = ma)</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate force, mass, or acceleration using Newton's second law.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Solve For</label><select id="fo-solve" class="w-full px-4 py-3 border border-border rounded-xl text-lg"><option value="force" selected>Force (F)</option><option value="mass">Mass (m)</option><option value="accel">Acceleration (a)</option></select></div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Mass (kg)</label><input type="number" id="fo-m" class="fo-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0" step="0.1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Acceleration (m/s²)</label><input type="number" id="fo-a" class="fo-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="9.81" step="0.01"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1" id="fo-label">Force</div>
          <div class="text-5xl font-extrabold font-mono" id="fo-result">0</div>
          <div class="text-sm text-blue-200 mt-1" id="fo-unit">Newtons (N)</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Force (N)</div><div class="text-xl font-bold" id="fo-fn">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Force (lbf)</div><div class="text-xl font-bold" id="fo-flb">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Force (kN)</div><div class="text-xl font-bold" id="fo-fkn">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formula</h3>
          <div class="font-mono text-sm" id="fo-formula">F = m × a</div>
        </div>
      </div>
      <ShareButton calculatorId="force" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcForce() {
      const solve = (document.getElementById('fo-solve') as HTMLSelectElement).value;
      const m = parseFloat((document.getElementById('fo-m') as HTMLInputElement).value) || 0;
      const a = parseFloat((document.getElementById('fo-a') as HTMLInputElement).value) || 0;
      let result: number, label: string, unit: string;
      if (solve === 'force') { result = m * a; label = 'Force'; unit = 'Newtons (N)'; }
      else if (solve === 'mass') { result = a !== 0 ? m / a : 0; label = 'Mass'; unit = 'kg'; }
      else { result = m !== 0 ? a / m : 0; label = 'Acceleration'; unit = 'm/s²'; }
      const forceN = solve === 'force' ? result : m * a;
      document.getElementById('fo-result')!.textContent = result.toFixed(4);
      document.getElementById('fo-label')!.textContent = label;
      document.getElementById('fo-unit')!.textContent = unit;
      document.getElementById('fo-fn')!.textContent = forceN.toFixed(4);
      document.getElementById('fo-flb')!.textContent = (forceN * 0.224809).toFixed(4);
      document.getElementById('fo-fkn')!.textContent = (forceN / 1000).toFixed(4);
      document.getElementById('fo-formula')!.textContent = `F = ${m} × ${a} = ${forceN.toFixed(4)} N`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.fo-in').forEach(el => el.addEventListener('input', calcForce)); document.getElementById('fo-solve')!.addEventListener('change', calcForce); calcForce(); }, 50);
  </script>
</CalculatorLayout>
