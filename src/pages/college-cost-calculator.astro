---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "College Cost Calculator - Plan for Education Expenses";
const description = "Estimate the total cost of college including tuition, room & board, and inflation. See how much to save monthly to reach your goal.";

const relatedCalcs = [
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Compound interest." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Investments." },
  { name: "Inflation Calculator", url: "/inflation-calculator", description: "Inflation." },
  { name: "Loan Calculator", url: "/loan-calculator", description: "Loan payments." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="College Cost Calculator" keywords="college cost calculator, tuition calculator, college savings, 529 plan, education cost" breadcrumbs={[{ name: "College Cost", url: "/college-cost-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">College Cost Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate total college costs and find out how much to save each month.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Annual Tuition & Fees</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="cc-tuition" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="25000" min="0" step="1000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Annual Room & Board</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="cc-room" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="12000" min="0" step="500">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Annual Books & Supplies</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="cc-books" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="1200" min="0" step="100">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Years of College</label>
              <select id="cc-years" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
                <option value="2">2 years</option>
                <option value="4" selected>4 years</option>
                <option value="5">5 years</option>
                <option value="6">6 years</option>
              </select>
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Years Until College</label>
              <input type="number" id="cc-until" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="10" min="0" max="25" step="1">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Tuition Inflation (%/yr)</label>
              <input type="number" id="cc-inflation" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="5" min="0" max="15" step="0.5">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Investment Return (%/yr)</label>
              <input type="number" id="cc-return" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="7" min="0" max="15" step="0.5">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Current Savings (529, etc.)</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="cc-savings" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="10000" min="0" step="1000">
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Future College Cost</div>
            <div class="text-4xl sm:text-5xl font-extrabold" id="cc-total">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Cost in Today's $</div>
              <div class="text-xl font-bold" id="cc-today">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Savings Will Grow To</div>
              <div class="text-xl font-bold" id="cc-grown">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Gap to Fill</div>
              <div class="text-xl font-bold text-secondary" id="cc-gap">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Save per Month</div>
              <div class="text-xl font-bold" id="cc-monthly">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-3">Year-by-Year Cost</h3>
            <div class="space-y-1 text-sm" id="cc-breakdown"></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="college-cost" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Planning for College Costs</h2>
      <p>College tuition has historically increased at about 5-8% per year. Starting to save early with a 529 plan or investment account can significantly reduce the future burden.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcCollege() {
      const tuition = parseFloat((document.getElementById('cc-tuition') as HTMLInputElement).value) || 0;
      const room = parseFloat((document.getElementById('cc-room') as HTMLInputElement).value) || 0;
      const books = parseFloat((document.getElementById('cc-books') as HTMLInputElement).value) || 0;
      const years = parseInt((document.getElementById('cc-years') as HTMLSelectElement).value) || 4;
      const until = parseInt((document.getElementById('cc-until') as HTMLInputElement).value) || 0;
      const inflation = (parseFloat((document.getElementById('cc-inflation') as HTMLInputElement).value) || 0) / 100;
      const returnRate = (parseFloat((document.getElementById('cc-return') as HTMLInputElement).value) || 0) / 100;
      const savings = parseFloat((document.getElementById('cc-savings') as HTMLInputElement).value) || 0;

      const annualCostToday = tuition + room + books;
      const totalToday = annualCostToday * years;

      let totalFuture = 0;
      const rows: string[] = [];
      rows.push('<div class="grid grid-cols-3 gap-1 font-semibold text-xs text-text-muted mb-1"><span>Year</span><span>Annual Cost</span><span>Cumulative</span></div>');

      for (let y = 0; y < years; y++) {
        const yearNum = until + y + 1;
        const cost = annualCostToday * Math.pow(1 + inflation, until + y);
        totalFuture += cost;
        rows.push(`<div class="grid grid-cols-3 gap-1 text-xs"><span>Year ${y + 1} (in ${yearNum} yrs)</span><span>${fmt(cost)}</span><span>${fmt(totalFuture)}</span></div>`);
      }

      const savingsGrown = savings * Math.pow(1 + returnRate, until);
      const gap = Math.max(0, totalFuture - savingsGrown);

      // Monthly savings needed (future value of annuity)
      const monthlyRate = returnRate / 12;
      const totalMonths = until * 12;
      let monthlySave = 0;
      if (totalMonths > 0 && monthlyRate > 0) {
        const fvFactor = (Math.pow(1 + monthlyRate, totalMonths) - 1) / monthlyRate;
        monthlySave = gap / fvFactor;
      } else if (totalMonths > 0) {
        monthlySave = gap / totalMonths;
      }

      document.getElementById('cc-total')!.textContent = fmt(totalFuture);
      document.getElementById('cc-today')!.textContent = fmt(totalToday);
      document.getElementById('cc-grown')!.textContent = fmt(savingsGrown);
      document.getElementById('cc-gap')!.textContent = fmt(gap);
      document.getElementById('cc-monthly')!.textContent = fmt(monthlySave);
      document.getElementById('cc-breakdown')!.innerHTML = rows.join('');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['cc-tuition', 'cc-room', 'cc-books', 'cc-until', 'cc-inflation', 'cc-return', 'cc-savings'].forEach(id => {
        document.getElementById(id)!.addEventListener('input', calcCollege);
      });
      document.getElementById('cc-years')!.addEventListener('change', calcCollege);
      calcCollege();
    }, 50);
  </script>
</CalculatorLayout>
