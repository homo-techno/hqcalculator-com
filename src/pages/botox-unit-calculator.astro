---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Botox Unit Calculator - Units Needed by Treatment Area";
const description = "Calculate the estimated Botox units needed for each treatment area including forehead, crow's feet, glabellar lines, and more.";
const relatedCalcs = [
  { name: "Dermal Filler Calculator", url: "/dermal-filler-calculator", description: "Filler volume by treatment area." },
  { name: "Permanent Makeup Calculator", url: "/permanent-makeup-calculator", description: "PMU session cost and timeline." },
  { name: "Facial Proportion Calculator", url: "/facial-proportion-calculator", description: "Golden ratio measurements." },
  { name: "Chemical Peel Calculator", url: "/chemical-peel-calculator", description: "Peel depth and recovery." },
  { name: "Beauty Budget Calculator", url: "/beauty-budget-calculator", description: "Beauty spending breakdown." },
  { name: "Skin Type Calculator", url: "/skin-type-calculator", description: "Determine your skin type." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Botox Unit Calculator" keywords="botox units, botox calculator, forehead botox, crow's feet units, botox cost, botox treatment areas" breadcrumbs={[{ name: "Botox Unit", url: "/botox-unit-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Botox Unit Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate Botox units needed by treatment area and calculate your total cost.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Cost Per Unit ($)</label>
          <input type="number" id="btu2-cost" class="btu2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="14" min="5" max="30" step="1">
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Muscle Strength</label>
          <select id="btu2-strength" class="btu2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="0.8">Mild (fine lines, weak muscles)</option>
            <option value="1.0" selected>Average</option>
            <option value="1.2">Strong (deep lines, strong muscles)</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-2">Select Treatment Areas</label>
          <div class="space-y-2">
            <label class="flex items-center gap-2"><input type="checkbox" id="btu2-forehead" class="btu2-in" checked><span class="text-sm">Forehead Lines (10-30 units)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="btu2-glabellar" class="btu2-in" checked><span class="text-sm">Glabellar / Frown Lines (20-25 units)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="btu2-crows" class="btu2-in" checked><span class="text-sm">Crow's Feet (12-24 units, both sides)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="btu2-bunny" class="btu2-in"><span class="text-sm">Bunny Lines / Nose (5-10 units)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="btu2-lip" class="btu2-in"><span class="text-sm">Lip Flip (4-8 units)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="btu2-chin" class="btu2-in"><span class="text-sm">Chin Dimpling (6-10 units)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="btu2-masseter" class="btu2-in"><span class="text-sm">Masseter / Jaw Slimming (25-50 units/side)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="btu2-neck" class="btu2-in"><span class="text-sm">Neck Bands / Platysma (20-40 units)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="btu2-brow" class="btu2-in"><span class="text-sm">Brow Lift (4-8 units)</span></label>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Estimated Units</div>
          <div class="text-5xl font-extrabold font-mono" id="btu2-units">0</div>
          <div class="text-sm text-blue-200 mt-1">units of Botox</div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Estimated Cost</div><div class="text-xl font-bold" id="btu2-total">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Areas Treated</div><div class="text-xl font-bold" id="btu2-areas">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Lasts Approx.</div><div class="text-xl font-bold" id="btu2-duration">3-4 mo</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Cost (3x/yr)</div><div class="text-xl font-bold" id="btu2-annual">$0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-3">Unit Breakdown</h3>
          <div class="text-sm space-y-1" id="btu2-breakdown"></div>
        </div>
      </div>
      <ShareButton calculatorId="botox-unit" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Botox Unit Guide</h2>
      <p>Botox (botulinum toxin) dosing varies by treatment area, muscle strength, and desired result. The forehead typically requires 10-30 units, while the glabellar (frown) lines need 20-25 units. Results last 3-4 months on average. First-time patients often start conservatively, with touch-ups at 2 weeks. Costs vary by region and provider, typically $10-20 per unit. Always consult a licensed medical professional for personalized treatment plans.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcBTU2() {
      const costPerUnit = parseFloat((document.getElementById('btu2-cost') as HTMLInputElement).value) || 14;
      const strength = parseFloat((document.getElementById('btu2-strength') as HTMLSelectElement).value);

      const areas: {id:string, name:string, min:number, max:number}[] = [
        {id:'btu2-forehead', name:'Forehead Lines', min:10, max:30},
        {id:'btu2-glabellar', name:'Glabellar Lines', min:20, max:25},
        {id:'btu2-crows', name:"Crow's Feet (both)", min:12, max:24},
        {id:'btu2-bunny', name:'Bunny Lines', min:5, max:10},
        {id:'btu2-lip', name:'Lip Flip', min:4, max:8},
        {id:'btu2-chin', name:'Chin Dimpling', min:6, max:10},
        {id:'btu2-masseter', name:'Masseter (both)', min:50, max:100},
        {id:'btu2-neck', name:'Neck Bands', min:20, max:40},
        {id:'btu2-brow', name:'Brow Lift', min:4, max:8},
      ];

      let totalUnits = 0;
      let areaCount = 0;
      const breakdown: string[] = [];

      areas.forEach(a => {
        if ((document.getElementById(a.id) as HTMLInputElement).checked) {
          const avg = Math.round(((a.min + a.max) / 2) * strength);
          totalUnits += avg;
          areaCount++;
          breakdown.push('<div class="flex justify-between"><span>' + a.name + '</span><span class="font-bold">' + avg + ' units ($' + (avg * costPerUnit).toFixed(0) + ')</span></div>');
        }
      });

      const totalCost = totalUnits * costPerUnit;
      const annualCost = totalCost * 3;

      document.getElementById('btu2-units')!.textContent = totalUnits.toString();
      document.getElementById('btu2-total')!.textContent = '$' + totalCost.toFixed(0);
      document.getElementById('btu2-areas')!.textContent = areaCount.toString();
      document.getElementById('btu2-duration')!.textContent = '3-4 mo';
      document.getElementById('btu2-annual')!.textContent = '$' + annualCost.toFixed(0);
      document.getElementById('btu2-breakdown')!.innerHTML = breakdown.length > 0 ? breakdown.join('') : '<p class="text-text-muted">Select treatment areas above.</p>';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.btu2-in').forEach(el => { el.addEventListener('input', calcBTU2); el.addEventListener('change', calcBTU2); });
      calcBTU2();
    }, 50);
  </script>
</CalculatorLayout>
