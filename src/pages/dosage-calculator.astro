---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Dosage Calculator";
const description = "Calculate medication dosage based on weight. Find doses in mg, mL, and tablets for adults and children.";
const relatedCalcs = [
  { name: "BMI Calculator", url: "/bmi-calculator", description: "BMI." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight." },
  { name: "Calorie Calculator", url: "/calorie-calculator", description: "Calories." },
  { name: "Blood Sugar", url: "/blood-sugar-converter", description: "Blood sugar." },
  { name: "Water Intake", url: "/water-intake-calculator", description: "Water." },
  { name: "Body Fat", url: "/body-fat-calculator", description: "Body fat." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Dosage Calculator" keywords="dosage calculator, medication dose, mg per kg, pediatric dosing, weight based dose" breadcrumbs={[{ name: "Dosage Calculator", url: "/dosage-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dosage Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate weight-based medication dosing. <strong class="text-red-600">For educational use only â€” always consult a healthcare provider.</strong></p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Patient Weight</label><input type="number" id="dos-wt" class="dos-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="70" min="1" max="300" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Unit</label>
            <select id="dos-unit" class="dos-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="kg" selected>kg</option>
              <option value="lbs">lbs</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Dose (mg/kg)</label><input type="number" id="dos-dose" class="dos-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Doses per Day</label><input type="number" id="dos-freq" class="dos-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="1" max="6" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Concentration (mg/mL)</label><input type="number" id="dos-conc" class="dos-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0.1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Tablet Strength (mg)</label><input type="number" id="dos-tab" class="dos-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="1" step="25"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Single Dose</div>
          <div class="text-5xl font-extrabold font-mono" id="dos-result">0 mg</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Volume (mL)</div><div class="text-xl font-bold font-mono" id="dos-ml">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Tablets</div><div class="text-xl font-bold font-mono" id="dos-tabs">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Daily Total</div><div class="text-xl font-bold font-mono" id="dos-daily">0 mg</div></div>
        </div>
        <div class="p-3 bg-red-50 rounded-xl text-center text-xs text-red-800 font-bold">
          This calculator is for educational purposes only. Always consult your doctor or pharmacist for actual dosing.
        </div>
      </div>
      <ShareButton calculatorId="dosage" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDOS() {
      let wt = parseFloat((document.getElementById('dos-wt') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('dos-unit') as HTMLSelectElement).value;
      const dose = parseFloat((document.getElementById('dos-dose') as HTMLInputElement).value) || 0;
      const freq = parseFloat((document.getElementById('dos-freq') as HTMLInputElement).value) || 1;
      const conc = parseFloat((document.getElementById('dos-conc') as HTMLInputElement).value) || 1;
      const tabStr = parseFloat((document.getElementById('dos-tab') as HTMLInputElement).value) || 1;
      if (unit === 'lbs') wt = wt * 0.453592;
      const singleDose = wt * dose;
      const ml = singleDose / conc;
      const tabs = singleDose / tabStr;
      const daily = singleDose * freq;
      document.getElementById('dos-result')!.textContent = singleDose.toFixed(1) + ' mg';
      document.getElementById('dos-ml')!.textContent = ml.toFixed(1) + ' mL';
      document.getElementById('dos-tabs')!.textContent = tabs.toFixed(1);
      document.getElementById('dos-daily')!.textContent = daily.toFixed(0) + ' mg';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.dos-in').forEach(el => { el.addEventListener('input', calcDOS); el.addEventListener('change', calcDOS); });
      calcDOS();
    }, 50);
  </script>
</CalculatorLayout>
