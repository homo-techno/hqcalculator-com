---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Carpet Calculator - Area, Cost & Padding";
const description = "Calculate carpet area, cost, padding, and waste for your flooring project.";
const relatedCalcs = [
  { name: "Flooring Calculator", url: "/flooring-calculator", description: "Flooring." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Tile Calculator", url: "/tile-calculator", description: "Tile." },
  { name: "Area Calculator", url: "/area-calculator", description: "Area." },
  { name: "Paint Calculator", url: "/paint-calculator", description: "Paint." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Carpet Calculator" keywords="carpet calculator, carpet cost, carpet area, padding calculator, carpet square yards" breadcrumbs={[{ name: "Carpet Calculator", url: "/carpet-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Carpet Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate carpet area, cost, and materials needed.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Room Length (ft)</label><input type="number" id="cp2-l" class="cp2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="15" min="0" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Room Width (ft)</label><input type="number" id="cp2-w" class="cp2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="12" min="0" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Carpet Price ($/sq yd)</label><input type="number" id="cp2-price" class="cp2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="25" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Padding ($/sq yd)</label><input type="number" id="cp2-pad" class="cp2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="0" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Installation ($/sq yd)</label><input type="number" id="cp2-inst" class="cp2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Waste Factor (%)</label><input type="number" id="cp2-waste" class="cp2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0" max="30" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="cp2-result">$0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Area (sq ft)</div><div class="text-xl font-bold font-mono" id="cp2-sqft">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Area (sq yd)</div><div class="text-xl font-bold font-mono" id="cp2-sqyd">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">With Waste</div><div class="text-xl font-bold font-mono" id="cp2-with-waste">0 sq yd</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Carpet</div><div class="text-xl font-bold font-mono" id="cp2-cc">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Padding</div><div class="text-xl font-bold font-mono" id="cp2-pc">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Installation</div><div class="text-xl font-bold font-mono" id="cp2-ic">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="carpet" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCP2() {
      const l = parseFloat((document.getElementById('cp2-l') as HTMLInputElement).value) || 0;
      const w = parseFloat((document.getElementById('cp2-w') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('cp2-price') as HTMLInputElement).value) || 0;
      const pad = parseFloat((document.getElementById('cp2-pad') as HTMLInputElement).value) || 0;
      const inst = parseFloat((document.getElementById('cp2-inst') as HTMLInputElement).value) || 0;
      const waste = parseFloat((document.getElementById('cp2-waste') as HTMLInputElement).value) || 0;
      const sqft = l * w;
      const sqyd = sqft / 9;
      const sqydWaste = sqyd * (1 + waste / 100);
      const carpetCost = sqydWaste * price;
      const padCost = sqydWaste * pad;
      const instCost = sqydWaste * inst;
      const total = carpetCost + padCost + instCost;
      document.getElementById('cp2-result')!.textContent = '$' + total.toFixed(0);
      document.getElementById('cp2-sqft')!.textContent = sqft.toFixed(0);
      document.getElementById('cp2-sqyd')!.textContent = sqyd.toFixed(1);
      document.getElementById('cp2-with-waste')!.textContent = sqydWaste.toFixed(1) + ' sq yd';
      document.getElementById('cp2-cc')!.textContent = '$' + carpetCost.toFixed(0);
      document.getElementById('cp2-pc')!.textContent = '$' + padCost.toFixed(0);
      document.getElementById('cp2-ic')!.textContent = '$' + instCost.toFixed(0);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.cp2-in').forEach(el => { el.addEventListener('input', calcCP2); el.addEventListener('change', calcCP2); });
      calcCP2();
    }, 50);
  </script>
</CalculatorLayout>
