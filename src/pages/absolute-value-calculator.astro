---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Absolute Value Calculator - |x| Solver";
const description = "Calculate absolute value, solve absolute value equations and inequalities, and graph |x| expressions.";
const relatedCalcs = [
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Scientific." },
  { name: "Percentage Change", url: "/percentage-change-calculator", description: "% Change." },
  { name: "Sig Figs", url: "/significant-figures-calculator", description: "Sig figs." },
  { name: "Modulo Calculator", url: "/modulo-calculator", description: "Modulo." },
  { name: "Number Base Converter", url: "/number-base-converter", description: "Base conversion." },
  { name: "Fraction Calculator", url: "/fraction-calculator", description: "Fractions." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Absolute Value Calculator" keywords="absolute value calculator, absolute value equation, |x|, distance from zero, magnitude" breadcrumbs={[{ name: "Absolute Value", url: "/absolute-value-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Absolute Value Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate absolute values and solve |ax + b| = c equations.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="flex gap-2 mb-2">
          <button id="av-m1" class="av-mode flex-1 py-2 rounded-xl border-2 border-primary bg-blue-50 text-primary font-bold text-sm" data-mode="value">|x| Value</button>
          <button id="av-m2" class="av-mode flex-1 py-2 rounded-xl border-2 border-border text-text-muted font-bold text-sm" data-mode="equation">Equation</button>
        </div>
        <div id="av-panel-value">
          <div><label class="block text-xs font-medium text-text mb-1">Enter a number</label><input type="number" id="av-x" class="av-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold text-center" value="-7.5" step="any"></div>
        </div>
        <div id="av-panel-equation" class="hidden">
          <p class="text-xs text-text-muted mb-2">Solve |ax + b| = c</p>
          <div class="grid grid-cols-3 gap-3">
            <div><label class="block text-xs font-medium text-text mb-1">a</label><input type="number" id="av-a" class="av-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold text-center" value="2" step="any"></div>
            <div><label class="block text-xs font-medium text-text mb-1">b</label><input type="number" id="av-b" class="av-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold text-center" value="-3" step="any"></div>
            <div><label class="block text-xs font-medium text-text mb-1">c</label><input type="number" id="av-c" class="av-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold text-center" value="5" min="0" step="any"></div>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1" id="av-label">|x|</div>
          <div class="text-5xl font-extrabold font-mono" id="av-result">0</div>
        </div>
        <div class="grid grid-cols-2 gap-3" id="av-extra"></div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Explanation</h3>
          <div class="text-sm font-mono" id="av-explain">-</div>
        </div>
      </div>
      <ShareButton calculatorId="absolute-value" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    let avMode = 'value';
    function setAvMode(m: string) {
      avMode = m;
      document.getElementById('av-panel-value')!.classList.toggle('hidden', m !== 'value');
      document.getElementById('av-panel-equation')!.classList.toggle('hidden', m !== 'equation');
      document.querySelectorAll('.av-mode').forEach(b => {
        const btn = b as HTMLButtonElement;
        const active = btn.dataset.mode === m;
        btn.className = `av-mode flex-1 py-2 rounded-xl border-2 font-bold text-sm ${active ? 'border-primary bg-blue-50 text-primary' : 'border-border text-text-muted'}`;
      });
      calcAV();
    }
    function calcAV() {
      const extra = document.getElementById('av-extra')!;
      if (avMode === 'value') {
        const x = parseFloat((document.getElementById('av-x') as HTMLInputElement).value) || 0;
        const abs = Math.abs(x);
        document.getElementById('av-label')!.textContent = `|${x}|`;
        document.getElementById('av-result')!.textContent = abs.toFixed(6);
        document.getElementById('av-explain')!.textContent = x >= 0
          ? `${x} is non-negative, so |${x}| = ${x}`
          : `${x} is negative, so |${x}| = −(${x}) = ${abs}`;
        extra.innerHTML = `
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Distance from 0</div><div class="text-xl font-bold font-mono">${abs}</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Square Root of x²</div><div class="text-xl font-bold font-mono">${Math.sqrt(x * x).toFixed(6)}</div></div>`;
      } else {
        const a = parseFloat((document.getElementById('av-a') as HTMLInputElement).value) || 0;
        const b = parseFloat((document.getElementById('av-b') as HTMLInputElement).value) || 0;
        const c = parseFloat((document.getElementById('av-c') as HTMLInputElement).value) || 0;
        document.getElementById('av-label')!.textContent = `|${a}x + ${b}| = ${c}`;
        if (c < 0) {
          document.getElementById('av-result')!.textContent = 'No solution';
          document.getElementById('av-explain')!.textContent = 'Absolute value cannot equal a negative number.';
          extra.innerHTML = '';
        } else if (a === 0) {
          const works = Math.abs(b) === c;
          document.getElementById('av-result')!.textContent = works ? 'All x' : 'No solution';
          document.getElementById('av-explain')!.textContent = `|${b}| = ${Math.abs(b)} ${works ? '=' : '≠'} ${c}`;
          extra.innerHTML = '';
        } else {
          const x1 = (c - b) / a;
          const x2 = (-c - b) / a;
          document.getElementById('av-result')!.textContent = `x = ${x1.toFixed(4)} or ${x2.toFixed(4)}`;
          document.getElementById('av-explain')!.innerHTML = `Case 1: ${a}x + ${b} = ${c} → x = ${x1.toFixed(4)}<br>Case 2: ${a}x + ${b} = ${-c} → x = ${x2.toFixed(4)}`;
          extra.innerHTML = `
            <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Solution 1</div><div class="text-xl font-bold font-mono">x = ${x1.toFixed(6)}</div></div>
            <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Solution 2</div><div class="text-xl font-bold font-mono">x = ${x2.toFixed(6)}</div></div>`;
        }
      }
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.av-mode').forEach(b => b.addEventListener('click', () => setAvMode((b as HTMLButtonElement).dataset.mode!)));
      document.querySelectorAll('.av-in').forEach(el => { el.addEventListener('input', calcAV); el.addEventListener('change', calcAV); });
      calcAV();
    }, 50);
  </script>
</CalculatorLayout>
