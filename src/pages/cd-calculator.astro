---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "CD Calculator - Certificate of Deposit Interest Calculator";
const description = "Calculate CD earnings, compare rates and terms. See how much your certificate of deposit will be worth at maturity.";

const relatedCalcs = [
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Compound growth." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Returns." },
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Retirement." },
  { name: "Inflation Calculator", url: "/inflation-calculator", description: "Purchasing power." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="CD Calculator"
  keywords="CD calculator, certificate of deposit, CD interest, CD rates, CD maturity, CD earnings"
  breadcrumbs={[{ name: "CD Calculator", url: "/cd-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">CD Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate how much your CD will earn by maturity.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <div class="space-y-4">
            <div>
              <label class="block text-sm font-medium text-text mb-1">Initial Deposit</label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
                <input type="number" id="cd-deposit" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="10000" min="0" step="500">
              </div>
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">APY (Annual Percentage Yield)</label>
              <div class="flex gap-2">
                <input type="number" id="cd-apy" class="flex-1 px-4 py-3 border border-border rounded-xl text-lg" value="4.5" min="0" max="20" step="0.05">
                <span class="self-center font-semibold text-text-muted">%</span>
              </div>
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">CD Term</label>
              <select id="cd-term" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
                <option value="3">3 months</option>
                <option value="6">6 months</option>
                <option value="9">9 months</option>
                <option value="12" selected>12 months (1 year)</option>
                <option value="18">18 months</option>
                <option value="24">24 months (2 years)</option>
                <option value="36">36 months (3 years)</option>
                <option value="48">48 months (4 years)</option>
                <option value="60">60 months (5 years)</option>
              </select>
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Compounding</label>
              <select id="cd-compound" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
                <option value="365">Daily</option>
                <option value="12" selected>Monthly</option>
                <option value="4">Quarterly</option>
                <option value="2">Semi-Annually</option>
                <option value="1">Annually</option>
              </select>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total at Maturity</div>
            <div class="text-4xl sm:text-5xl font-extrabold" id="cd-total">$0</div>
          </div>

          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Interest Earned</div>
              <div class="text-xl font-bold text-secondary" id="cd-interest">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">APY Effective</div>
              <div class="text-xl font-bold" id="cd-effective">0%</div>
            </div>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Monthly Interest (avg)</div>
            <div class="text-xl font-bold" id="cd-monthly-int">$0</div>
          </div>

          <!-- Comparison table -->
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-3">Term Comparison</h3>
            <div class="space-y-1 text-sm" id="cd-comparison"></div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="cd" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How CDs Work</h2>
      <p>A Certificate of Deposit (CD) is a savings product that earns a fixed interest rate for a set term. You agree not to withdraw funds until the maturity date, in exchange for a higher interest rate than a regular savings account.</p>

      <h3 class="text-xl font-semibold text-text mt-8">Frequently Asked Questions</h3>
      <p><strong>What is APY?</strong> Annual Percentage Yield includes compound interest. A 4.5% APY with monthly compounding earns more than simple 4.5% interest.</p>
      <p><strong>What happens if I withdraw early?</strong> Most CDs charge an early withdrawal penalty, typically 3-6 months of interest depending on the term.</p>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + n.toLocaleString('en-US', { maximumFractionDigits: 2 });

    function calcCD() {
      const deposit = parseFloat((document.getElementById('cd-deposit') as HTMLInputElement).value) || 0;
      const apy = (parseFloat((document.getElementById('cd-apy') as HTMLInputElement).value) || 0) / 100;
      const termMonths = parseInt((document.getElementById('cd-term') as HTMLSelectElement).value) || 12;
      const compPerYear = parseInt((document.getElementById('cd-compound') as HTMLSelectElement).value) || 12;

      const years = termMonths / 12;
      const rate = apy; // APY already accounts for compounding
      const total = deposit * Math.pow(1 + rate / compPerYear, compPerYear * years);
      const interest = total - deposit;

      document.getElementById('cd-total')!.textContent = fmt(total);
      document.getElementById('cd-interest')!.textContent = fmt(interest);
      document.getElementById('cd-effective')!.textContent = (apy * 100).toFixed(2) + '%';
      document.getElementById('cd-monthly-int')!.textContent = fmt(interest / termMonths);

      // Comparison
      const terms = [3, 6, 12, 24, 36, 60];
      document.getElementById('cd-comparison')!.innerHTML =
        '<div class="grid grid-cols-3 gap-2 font-semibold text-xs text-text-muted mb-1"><span>Term</span><span>Interest</span><span>Total</span></div>' +
        terms.map(t => {
          const y = t / 12;
          const tot = deposit * Math.pow(1 + rate / compPerYear, compPerYear * y);
          const int = tot - deposit;
          const isCurrent = t === termMonths;
          return `<div class="grid grid-cols-3 gap-2 text-xs ${isCurrent ? 'font-bold text-primary' : ''}">
            <span>${t} mo</span><span>${fmt(int)}</span><span>${fmt(tot)}</span>
          </div>`;
        }).join('');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['cd-deposit', 'cd-apy'].forEach(id => document.getElementById(id)!.addEventListener('input', calcCD));
      ['cd-term', 'cd-compound'].forEach(id => document.getElementById(id)!.addEventListener('change', calcCD));
      calcCD();
    }, 50);
  </script>
</CalculatorLayout>
