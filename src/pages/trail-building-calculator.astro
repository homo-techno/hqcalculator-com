---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Trail Building Calculator - Materials, Grade & Drainage";
const description = "Calculate trail materials from length, width, and gravel depth. Estimate drainage needs, switchback spacing, grade percentage, and costs.";
const relatedCalcs = [
  { name: "Asphalt Calculator", url: "/asphalt-calculator", description: "Paving material estimates." },
  { name: "Trail Distance", url: "/trail-distance-calculator", description: "Trail distance and elevation." },
  { name: "Lumber Calculator", url: "/lumber-calculator", description: "Lumber needs for projects." },
  { name: "Volume Calculator", url: "/volume-calculator", description: "General volume calculations." },
  { name: "Area Calculator", url: "/area-calculator", description: "Calculate area of shapes." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Plan your budget." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Trail Building Calculator" keywords="trail building calculator, trail materials, gravel trail, switchback spacing, trail grade, trail drainage" breadcrumbs={[{ name: "Trail Building", url: "/trail-building-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Trail Building Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate materials, grading, and costs for trail construction projects.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Trail Length (feet)</label>
            <input type="number" id="tb2-len" class="tb2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="2640" min="50" max="100000" step="10">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Trail Width (feet)</label>
            <input type="number" id="tb2-wid" class="tb2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="4" min="2" max="20" step="0.5">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Surface Type</label>
            <select id="tb2-surface" class="tb2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="4|8">Crushed Gravel (4" depth, $8/ton)</option>
              <option value="3|12" selected>Compacted Aggregate (3", $12/ton)</option>
              <option value="2|0">Native Soil/Dirt (2", $0)</option>
              <option value="6|15">Road Base (6", $15/ton)</option>
              <option value="3|20">Decomposed Granite (3", $20/ton)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Elevation Gain (feet)</label>
            <input type="number" id="tb2-elev" class="tb2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="0" max="5000" step="10">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Max Grade (%)</label>
            <input type="number" id="tb2-maxgrade" class="tb2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="2" max="25" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Drain Spacing (feet)</label>
            <input type="number" id="tb2-drain" class="tb2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="15" max="200" step="5">
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Labor Cost ($/linear foot)</label>
          <input type="number" id="tb2-labor" class="tb2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5.00" min="0" step="0.50">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Project Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="tb2-cost">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Material (tons)</div>
            <div class="text-xl font-bold font-mono" id="tb2-tons">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Avg Grade</div>
            <div class="text-xl font-bold font-mono" id="tb2-grade">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Switchbacks</div>
            <div class="text-xl font-bold font-mono" id="tb2-switch">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Drainage Points</div>
            <div class="text-xl font-bold font-mono" id="tb2-drains">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Surface Area (sq ft)</div>
            <div class="text-xl font-bold font-mono" id="tb2-sqft">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="trail-building" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcTB2() {
      const length = parseFloat((document.getElementById('tb2-len') as HTMLInputElement).value) || 2640;
      const width = parseFloat((document.getElementById('tb2-wid') as HTMLInputElement).value) || 4;
      const surfData = (document.getElementById('tb2-surface') as HTMLSelectElement).value.split('|');
      const depthIn = parseFloat(surfData[0]);
      const costPerTon = parseFloat(surfData[1]);
      const elevation = parseFloat((document.getElementById('tb2-elev') as HTMLInputElement).value) || 0;
      const maxGrade = parseFloat((document.getElementById('tb2-maxgrade') as HTMLInputElement).value) || 10;
      const drainSpacing = parseFloat((document.getElementById('tb2-drain') as HTMLInputElement).value) || 50;
      const laborRate = parseFloat((document.getElementById('tb2-labor') as HTMLInputElement).value) || 0;
      const surfaceArea = length * width;
      const depthFt = depthIn / 12;
      const volumeCuFt = surfaceArea * depthFt;
      const volumeCuYd = volumeCuFt / 27;
      const tons = volumeCuYd * 1.4;
      const materialCost = tons * costPerTon;
      const laborCost = length * laborRate;
      const totalCost = materialCost + laborCost;
      const avgGrade = length > 0 ? (elevation / length) * 100 : 0;
      let switchbacks = 0;
      if (avgGrade > maxGrade && elevation > 0) {
        const minLength = elevation / (maxGrade / 100);
        switchbacks = Math.ceil((minLength - length) / (2 * width * 10));
        if (switchbacks < 0) switchbacks = 0;
      }
      const drainagePoints = Math.floor(length / drainSpacing);
      document.getElementById('tb2-cost')!.textContent = '$' + Math.round(totalCost).toLocaleString();
      document.getElementById('tb2-tons')!.textContent = tons.toFixed(1);
      document.getElementById('tb2-grade')!.textContent = avgGrade.toFixed(1) + '%';
      document.getElementById('tb2-switch')!.textContent = switchbacks.toString();
      document.getElementById('tb2-drains')!.textContent = drainagePoints.toString();
      document.getElementById('tb2-sqft')!.textContent = Math.round(surfaceArea).toLocaleString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.tb2-in').forEach(el => { el.addEventListener('input', calcTB2); el.addEventListener('change', calcTB2); });
      calcTB2();
    }, 50);
  </script>
</CalculatorLayout>
