---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Momentum Calculator - p = mv";
const description = "Calculate linear momentum, mass, or velocity. Includes impulse and kinetic energy calculations.";
const relatedCalcs = [
  { name: "Force Calculator", url: "/force-calculator", description: "F = ma." },
  { name: "Acceleration", url: "/acceleration-calculator", description: "Acceleration." },
  { name: "Torque Calculator", url: "/torque-calculator", description: "Torque." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed." },
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Scientific." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Momentum Calculator" keywords="momentum calculator, p=mv, linear momentum, impulse, kinetic energy" breadcrumbs={[{ name: "Momentum", url: "/momentum-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Momentum Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate momentum (p = mv), impulse, and kinetic energy.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Mass (kg)</label><input type="number" id="mm-m" class="mm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="0" step="0.1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Velocity (m/s)</label><input type="number" id="mm-v" class="mm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" step="0.1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Momentum (p)</div>
          <div class="text-5xl font-extrabold font-mono" id="mm-p">0</div>
          <div class="text-sm text-blue-200 mt-1">kg·m/s</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Kinetic Energy</div><div class="text-xl font-bold" id="mm-ke">0 J</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Force (if t=1s)</div><div class="text-xl font-bold" id="mm-f">0 N</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formulas</h3>
          <div class="font-mono text-sm space-y-1">
            <div>p = m × v</div>
            <div>KE = ½mv²</div>
            <div>Impulse J = F × Δt = Δp</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="momentum" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcMom() {
      const m = parseFloat((document.getElementById('mm-m') as HTMLInputElement).value) || 0;
      const v = parseFloat((document.getElementById('mm-v') as HTMLInputElement).value) || 0;
      const p = m * v;
      const ke = 0.5 * m * v * v;
      document.getElementById('mm-p')!.textContent = p.toFixed(4);
      document.getElementById('mm-ke')!.textContent = ke.toFixed(4) + ' J';
      document.getElementById('mm-f')!.textContent = p.toFixed(4) + ' N';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.mm-in').forEach(el => el.addEventListener('input', calcMom)); calcMom(); }, 50);
  </script>
</CalculatorLayout>
