---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Egg Production Calculator - Daily, Weekly & Annual Yield";
const description = "Estimate egg production from your flock based on number of hens and breed laying rate. See daily, weekly, monthly, and annual egg counts plus revenue.";
const relatedCalcs = [
  { name: "Chicken Feed Calculator", url: "/chicken-feed-calculator", description: "Chicken feed and egg costs." },
  { name: "Hay Calculator", url: "/hay-calculator", description: "Hay needs for livestock." },
  { name: "Protein Per Dollar", url: "/protein-per-dollar-calculator", description: "Compare protein value of foods." },
  { name: "Food Cost Calculator", url: "/food-cost-calculator", description: "Restaurant food cost analysis." },
  { name: "Meal Prep Calculator", url: "/meal-prep-calculator", description: "Plan weekly meal prep." },
  { name: "Compost Calculator", url: "/compost-calculator", description: "Get compost ratio right." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Egg Production Calculator" keywords="egg production calculator, chicken eggs per day, laying hens, eggs per year, egg revenue, flock production" breadcrumbs={[{ name: "Egg Production", url: "/egg-production-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Egg Production Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate egg production and revenue from your laying flock.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Hens</label>
            <input type="number" id="ep-hens" class="ep-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="1" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Breed / Laying Rate</label>
            <select id="ep-breed" class="ep-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="90">Rhode Island Red (90%)</option>
              <option value="85" selected>Leghorn (85%)</option>
              <option value="80">Plymouth Rock (80%)</option>
              <option value="75">Australorp (75%)</option>
              <option value="70">Wyandotte (70%)</option>
              <option value="60">Orpington (60%)</option>
              <option value="50">Silkie (50%)</option>
              <option value="40">Bantam (40%)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Price Per Dozen ($)</label>
            <input type="number" id="ep-price" class="ep-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5.00" min="0" step="0.25">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Laying Months / Year</label>
            <input type="number" id="ep-months" class="ep-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="1" max="12" step="1">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Eggs Per Day</div>
          <div class="text-5xl font-extrabold font-mono" id="ep-result">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Eggs / Week</div><div class="text-xl font-bold font-mono" id="ep-weekly">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Eggs / Month</div><div class="text-xl font-bold font-mono" id="ep-monthly">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Eggs / Year</div><div class="text-xl font-bold font-mono" id="ep-yearly">0</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Dozens / Year</div><div class="text-xl font-bold font-mono" id="ep-dozens">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Revenue</div><div class="text-xl font-bold font-mono" id="ep-mrev">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Revenue</div><div class="text-xl font-bold font-mono" id="ep-arev">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="egg-production" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcEP() {
      const hens = parseFloat((document.getElementById('ep-hens') as HTMLInputElement).value) || 0;
      const layRate = parseFloat((document.getElementById('ep-breed') as HTMLSelectElement).value) || 0;
      const pricePerDozen = parseFloat((document.getElementById('ep-price') as HTMLInputElement).value) || 0;
      const layingMonths = parseFloat((document.getElementById('ep-months') as HTMLInputElement).value) || 10;
      const eggsPerDay = hens * (layRate / 100);
      const eggsPerWeek = eggsPerDay * 7;
      const eggsPerMonth = eggsPerDay * 30;
      const layingDays = layingMonths * 30;
      const eggsPerYear = eggsPerDay * layingDays;
      const dozensPerYear = eggsPerYear / 12;
      const monthlyRevenue = (eggsPerMonth / 12) * pricePerDozen;
      const annualRevenue = dozensPerYear * pricePerDozen;
      document.getElementById('ep-result')!.textContent = eggsPerDay.toFixed(1);
      document.getElementById('ep-weekly')!.textContent = Math.round(eggsPerWeek).toString();
      document.getElementById('ep-monthly')!.textContent = Math.round(eggsPerMonth).toString();
      document.getElementById('ep-yearly')!.textContent = Math.round(eggsPerYear).toString();
      document.getElementById('ep-dozens')!.textContent = dozensPerYear.toFixed(0);
      document.getElementById('ep-mrev')!.textContent = '$' + monthlyRevenue.toFixed(2);
      document.getElementById('ep-arev')!.textContent = '$' + annualRevenue.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ep-in').forEach(el => { el.addEventListener('input', calcEP); el.addEventListener('change', calcEP); });
      calcEP();
    }, 50);
  </script>
</CalculatorLayout>
