---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Maintenance Reserve Calculator";
const description = "Calculate property maintenance reserve fund based on property age, value, the 1% rule, per-unit allocation, and monthly contribution.";
const relatedCalcs = [
  { name: "Rental Property", url: "/rental-property-calculator", description: "Rental property ROI." },
  { name: "Home Equity", url: "/home-equity-calculator", description: "Home equity analysis." },
  { name: "Property Tax", url: "/property-tax-calculator", description: "Property tax estimate." },
  { name: "Rental Yield", url: "/rental-yield-calculator", description: "Rental yield analysis." },
  { name: "Cap Rate", url: "/cap-rate-calculator", description: "Capitalization rate." },
  { name: "Savings Goal", url: "/savings-goal-calculator", description: "Savings goal planning." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Maintenance Reserve Calculator" keywords="maintenance reserve, property maintenance, reserve fund, 1% rule, repair budget, landlord reserve" breadcrumbs={[{ name: "Maintenance Reserve", url: "/maintenance-reserve-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Maintenance Reserve Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Plan your property maintenance reserve using the 1% rule, property age adjustments, and per-unit allocations.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Property Value ($)</label><input type="number" id="mr-value" class="mr-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="300000" min="0" step="5000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Number of Units</label><input type="number" id="mr-units" class="mr-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="4" min="1" max="500" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Property Age (years)</label><input type="number" id="mr-age" class="mr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="0" max="150" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Monthly Rent ($)</label><input type="number" id="mr-rent" class="mr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4800" min="0" step="100"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Current Reserve Balance ($)</label><input type="number" id="mr-balance" class="mr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2000" min="0" step="500"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Recommended Annual Reserve</div>
          <div class="text-5xl font-extrabold font-mono" id="mr-annual">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Contribution</div><div class="text-xl font-bold font-mono" id="mr-monthly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">1% Rule Amount</div><div class="text-xl font-bold font-mono" id="mr-onerule">$0/yr</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Per Unit / Year</div><div class="text-xl font-bold font-mono" id="mr-perunit">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">% of Rent</div><div class="text-xl font-bold font-mono" id="mr-pctrent">0%</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Age Adjustment</div><div class="text-xl font-bold font-mono" id="mr-ageadj">1.0x</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Reserve Gap</div><div class="text-xl font-bold font-mono" id="mr-gap">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="maintenance-reserve" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcMR() {
      const value = parseFloat((document.getElementById('mr-value') as HTMLInputElement).value) || 0;
      const units = parseFloat((document.getElementById('mr-units') as HTMLInputElement).value) || 1;
      const age = parseFloat((document.getElementById('mr-age') as HTMLInputElement).value) || 0;
      const rent = parseFloat((document.getElementById('mr-rent') as HTMLInputElement).value) || 0;
      const balance = parseFloat((document.getElementById('mr-balance') as HTMLInputElement).value) || 0;

      const onePercent = value * 0.01;
      let ageMultiplier = 1.0;
      if (age > 40) ageMultiplier = 1.5;
      else if (age > 25) ageMultiplier = 1.3;
      else if (age > 15) ageMultiplier = 1.15;
      else if (age > 5) ageMultiplier = 1.0;
      else ageMultiplier = 0.8;

      const annualReserve = onePercent * ageMultiplier;
      const monthlyContribution = annualReserve / 12;
      const perUnit = annualReserve / units;
      const annualRent = rent * 12;
      const pctOfRent = annualRent > 0 ? (annualReserve / annualRent) * 100 : 0;
      const targetBalance = annualReserve;
      const gap = Math.max(0, targetBalance - balance);

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('mr-annual')!.textContent = fmt(annualReserve);
      document.getElementById('mr-monthly')!.textContent = fmt(monthlyContribution);
      document.getElementById('mr-onerule')!.textContent = fmt(onePercent) + '/yr';
      document.getElementById('mr-perunit')!.textContent = fmt(perUnit);
      document.getElementById('mr-pctrent')!.textContent = pctOfRent.toFixed(1) + '%';
      document.getElementById('mr-ageadj')!.textContent = ageMultiplier.toFixed(2) + 'x';
      document.getElementById('mr-gap')!.textContent = fmt(gap);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.mr-in').forEach(el => { el.addEventListener('input', calcMR); el.addEventListener('change', calcMR); });
      calcMR();
    }, 50);
  </script>
</CalculatorLayout>
