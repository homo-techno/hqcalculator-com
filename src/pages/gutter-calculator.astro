---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Gutter Calculator";
const description = "Calculate gutter length, downspouts needed, and material cost for your roof.";
const relatedCalcs = [
  { name: "Roofing", url: "/roofing-calculator", description: "Roofing." },
  { name: "Shed Material", url: "/shed-material-calculator", description: "Shed." },
  { name: "Sprinkler", url: "/sprinkler-calculator", description: "Sprinkler." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Plumbing Pipe", url: "/plumbing-pipe-calculator", description: "Pipe." },
  { name: "Fence Post", url: "/fence-post-calculator", description: "Fence." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Gutter Calculator" keywords="gutter calculator, gutter length, downspouts needed, gutter cost, rain gutter" breadcrumbs={[{ name: "Gutter", url: "/gutter-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Gutter Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate gutters and downspouts for your roof.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">House Length (ft)</label><input type="number" id="gu-len" class="gu-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="50" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">House Width (ft)</label><input type="number" id="gu-wid" class="gu-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="30" min="0" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Gutter Style</label>
            <select id="gu-style" class="gu-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="5" selected>5" K-Style (standard)</option>
              <option value="6">6" K-Style (large)</option>
              <option value="5.5">5" Half-Round</option>
              <option value="6.5">6" Half-Round</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Material</label>
            <select id="gu-mat" class="gu-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="4">Aluminum ($4/ft)</option>
              <option value="6" selected>Seamless Alum ($6/ft)</option>
              <option value="10">Copper ($10/ft)</option>
              <option value="3">Vinyl ($3/ft)</option>
            </select>
          </div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Roof Height to Ground (ft)</label><input type="number" id="gu-ht" class="gu-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="6" max="40" step="1"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Gutter Length</div>
          <div class="text-5xl font-extrabold font-mono" id="gu-result">0 ft</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Downspouts</div><div class="text-xl font-bold font-mono" id="gu-down">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Corners</div><div class="text-xl font-bold font-mono" id="gu-corn">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Est. Cost</div><div class="text-xl font-bold font-mono" id="gu-cost">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Downspout Length</div><div class="text-xl font-bold font-mono" id="gu-dslen">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Hangers</div><div class="text-xl font-bold font-mono" id="gu-hang">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="gutter" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcGU() {
      const len = parseFloat((document.getElementById('gu-len') as HTMLInputElement).value) || 0;
      const wid = parseFloat((document.getElementById('gu-wid') as HTMLInputElement).value) || 0;
      const matCost = parseFloat((document.getElementById('gu-mat') as HTMLSelectElement).value);
      const roofHt = parseFloat((document.getElementById('gu-ht') as HTMLInputElement).value) || 12;
      const gutterLength = 2 * len + 2 * wid;
      const downspouts = Math.max(4, Math.ceil(gutterLength / 35));
      const corners = 4;
      const hangers = Math.ceil(gutterLength / 3);
      const dsLength = downspouts * (roofHt + 4);
      const gutterCost = gutterLength * matCost;
      const dsCost = dsLength * (matCost * 0.6);
      const hardwareCost = hangers * 2 + corners * 8 + downspouts * 15;
      document.getElementById('gu-result')!.textContent = gutterLength.toFixed(0) + ' ft';
      document.getElementById('gu-down')!.textContent = downspouts.toString();
      document.getElementById('gu-corn')!.textContent = corners.toString();
      document.getElementById('gu-cost')!.textContent = '$' + (gutterCost + dsCost + hardwareCost).toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('gu-dslen')!.textContent = dsLength.toFixed(0) + ' ft';
      document.getElementById('gu-hang')!.textContent = hangers.toString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.gu-in').forEach(el => { el.addEventListener('input', calcGU); el.addEventListener('change', calcGU); });
      calcGU();
    }, 50);
  </script>
</CalculatorLayout>
