---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Base64 Calculator - Encode & Decode Base64";
const description = "Encode text to Base64 or decode Base64 to text. Toggle between modes with character count and validation.";

const relatedCalcs = [
  { name: "Binary to Text", url: "/binary-to-text-calculator", description: "Binary/text converter." },
  { name: "Hash Generator", url: "/hash-generator-calculator", description: "Text hash generator." },
  { name: "JSON Formatter", url: "/json-formatter-calculator", description: "JSON format/validate." },
  { name: "Hex to RGB", url: "/hex-to-rgb-calculator", description: "Hex color converter." },
  { name: "Boolean Algebra", url: "/boolean-algebra-calculator", description: "Boolean logic operations." },
  { name: "ASCII Table", url: "/ascii-table-calculator", description: "ASCII character table." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Base64 Calculator"
  keywords="base64 encode, base64 decode, base64 calculator, text to base64, base64 to text, base64 converter"
  breadcrumbs={[{ name: "Base64 Calculator", url: "/base64-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Base64 Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Encode text to Base64 or decode Base64 back to text.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-text mb-1">Mode</label>
          <select id="b6-mode" class="b6-in w-full px-4 py-2 border border-border rounded-xl text-lg">
            <option value="encode" selected>Encode (Text &rarr; Base64)</option>
            <option value="decode">Decode (Base64 &rarr; Text)</option>
          </select>
        </div>

        <div>
          <label class="block text-sm font-medium text-text mb-1" id="b6-input-label">Text Input</label>
          <textarea id="b6-input" class="b6-in w-full px-4 py-3 border border-border rounded-xl text-lg font-mono" rows="4" placeholder="Enter text to encode...">Hello, World! This is a Base64 encoding test.</textarea>
        </div>

        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1" id="b6-result-label">Base64 Output</div>
          <div class="text-lg font-extrabold font-mono break-all" id="b6-result">—</div>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Input Characters</div>
            <div class="text-xl font-bold" id="b6-in-chars">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Output Characters</div>
            <div class="text-xl font-bold" id="b6-out-chars">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Input Bytes</div>
            <div class="text-xl font-bold" id="b6-in-bytes">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Size Ratio</div>
            <div class="text-xl font-bold" id="b6-ratio">—</div>
          </div>
        </div>

        <div class="p-4 bg-surface-alt rounded-xl" id="b6-valid-wrap">
          <h3 class="font-semibold text-sm text-text mb-2">Validation</h3>
          <div class="text-sm text-text-secondary" id="b6-valid"></div>
        </div>

        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">How Base64 Works</h3>
          <div class="text-sm text-text-secondary" id="b6-explain"></div>
        </div>
      </div>

      <ShareButton calculatorId="base64" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Base64 Encoding</h2>
      <p>Base64 encodes binary data into an ASCII string using 64 characters (A-Z, a-z, 0-9, +, /). It increases size by about 33% but ensures safe transmission over text-based protocols.</p>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm">
        <p>Every 3 bytes of input become 4 Base64 characters</p>
        <p>Padding character '=' is used when input length isn't a multiple of 3</p>
      </div>
      <h3 class="text-xl font-semibold text-text mt-8">Common Uses</h3>
      <ul>
        <li>Email attachments (MIME encoding)</li>
        <li>Embedding images in HTML/CSS (data URIs)</li>
        <li>API authentication tokens</li>
        <li>Encoding binary data in JSON</li>
      </ul>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcB6() {
      const mode = (document.getElementById('b6-mode') as HTMLSelectElement).value;
      const input = (document.getElementById('b6-input') as HTMLTextAreaElement).value;

      if (mode === 'encode') {
        document.getElementById('b6-input-label')!.textContent = 'Text Input';
        document.getElementById('b6-result-label')!.textContent = 'Base64 Output';

        if (!input) {
          document.getElementById('b6-result')!.textContent = '—';
          document.getElementById('b6-in-chars')!.textContent = '0';
          document.getElementById('b6-out-chars')!.textContent = '0';
          document.getElementById('b6-in-bytes')!.textContent = '0';
          document.getElementById('b6-ratio')!.textContent = '—';
          document.getElementById('b6-valid')!.textContent = '';
          document.getElementById('b6-explain')!.textContent = '';
          document.dispatchEvent(new CustomEvent('calc-update'));
          return;
        }

        try {
          // Handle Unicode by encoding to UTF-8 first
          const encoded = btoa(unescape(encodeURIComponent(input)));

          document.getElementById('b6-result')!.textContent = encoded;
          document.getElementById('b6-in-chars')!.textContent = String(input.length);
          document.getElementById('b6-out-chars')!.textContent = String(encoded.length);

          const byteSize = new Blob([input]).size;
          document.getElementById('b6-in-bytes')!.textContent = String(byteSize);

          const ratio = byteSize > 0 ? (encoded.length / byteSize * 100).toFixed(1) : '0';
          document.getElementById('b6-ratio')!.textContent = ratio + '% of original';

          document.getElementById('b6-valid')!.textContent = 'Valid input - successfully encoded to Base64.';

          const padding = encoded.endsWith('==') ? 2 : encoded.endsWith('=') ? 1 : 0;
          document.getElementById('b6-explain')!.textContent =
            `${byteSize} input bytes → ${Math.ceil(byteSize / 3)} groups of 3 bytes → ${encoded.length} Base64 characters (${padding} padding character${padding !== 1 ? 's' : ''}).`;

        } catch (e: any) {
          document.getElementById('b6-result')!.textContent = 'Encoding error';
          document.getElementById('b6-valid')!.textContent = 'Error: ' + (e.message || 'Unknown error');
        }

      } else {
        document.getElementById('b6-input-label')!.textContent = 'Base64 Input';
        document.getElementById('b6-result-label')!.textContent = 'Decoded Text';

        if (!input) {
          document.getElementById('b6-result')!.textContent = '—';
          document.getElementById('b6-in-chars')!.textContent = '0';
          document.getElementById('b6-out-chars')!.textContent = '0';
          document.getElementById('b6-in-bytes')!.textContent = '0';
          document.getElementById('b6-ratio')!.textContent = '—';
          document.getElementById('b6-valid')!.textContent = '';
          document.getElementById('b6-explain')!.textContent = '';
          document.dispatchEvent(new CustomEvent('calc-update'));
          return;
        }

        const trimmed = input.trim();
        const isValidB64 = /^[A-Za-z0-9+/]*={0,2}$/.test(trimmed) && trimmed.length % 4 === 0;

        if (!isValidB64) {
          document.getElementById('b6-result')!.textContent = 'Invalid Base64';
          document.getElementById('b6-in-chars')!.textContent = String(trimmed.length);
          document.getElementById('b6-out-chars')!.textContent = '—';
          document.getElementById('b6-in-bytes')!.textContent = String(trimmed.length);
          document.getElementById('b6-ratio')!.textContent = '—';

          let issues = [];
          if (trimmed.length % 4 !== 0) issues.push(`Length (${trimmed.length}) is not a multiple of 4.`);
          if (/[^A-Za-z0-9+/=]/.test(trimmed)) issues.push('Contains invalid characters.');
          document.getElementById('b6-valid')!.textContent = 'Invalid Base64: ' + issues.join(' ');
          document.getElementById('b6-explain')!.textContent = '';
          document.dispatchEvent(new CustomEvent('calc-update'));
          return;
        }

        try {
          const decoded = decodeURIComponent(escape(atob(trimmed)));

          document.getElementById('b6-result')!.textContent = decoded;
          document.getElementById('b6-in-chars')!.textContent = String(trimmed.length);
          document.getElementById('b6-out-chars')!.textContent = String(decoded.length);
          document.getElementById('b6-in-bytes')!.textContent = String(trimmed.length);

          const outBytes = new Blob([decoded]).size;
          const ratio = trimmed.length > 0 ? (outBytes / trimmed.length * 100).toFixed(1) : '0';
          document.getElementById('b6-ratio')!.textContent = `${outBytes} bytes decoded`;

          document.getElementById('b6-valid')!.textContent = 'Valid Base64 - successfully decoded.';
          document.getElementById('b6-explain')!.textContent =
            `${trimmed.length} Base64 characters → ${outBytes} bytes of decoded data.`;

        } catch (e: any) {
          document.getElementById('b6-result')!.textContent = 'Decoding error';
          document.getElementById('b6-valid')!.textContent = 'Error: ' + (e.message || 'Unknown error');
        }
      }

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('.b6-in').forEach(el => {
        el.addEventListener('input', calcB6);
        el.addEventListener('change', calcB6);
      });
      calcB6();
    }, 50);
  </script>
</CalculatorLayout>
