---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Speed of Sound Calculator - Temperature & Medium";
const description = "Calculate the speed of sound in air at any temperature, plus speeds in water, steel, and other media.";
const relatedCalcs = [
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed." },
  { name: "Temperature Converter", url: "/temperature-converter", description: "Temperature." },
  { name: "Frequency Calculator", url: "/frequency-calculator", description: "Frequency." },
  { name: "Unit Circle", url: "/unit-circle-calculator", description: "Unit circle." },
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Scientific." },
  { name: "Density Calculator", url: "/density-calculator", description: "Density." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Speed of Sound Calculator" keywords="speed of sound calculator, sound speed, mach number, sound in air, sound in water, acoustic speed" breadcrumbs={[{ name: "Speed of Sound", url: "/sound-speed-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Speed of Sound Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate the speed of sound in air and other media.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Air Temperature (°C)</label><input type="number" id="ss-temp" class="ss-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="20" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Medium</label>
            <select id="ss-med" class="ss-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="air" selected>Air</option>
              <option value="water">Fresh Water (25°C)</option>
              <option value="seawater">Seawater (25°C)</option>
              <option value="steel">Steel</option>
              <option value="aluminum">Aluminum</option>
              <option value="glass">Glass</option>
              <option value="concrete">Concrete</option>
              <option value="wood">Wood (Oak)</option>
              <option value="helium">Helium (0°C)</option>
              <option value="hydrogen">Hydrogen (0°C)</option>
            </select>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Speed of Sound</div>
          <div class="text-5xl font-extrabold font-mono" id="ss-result">0 m/s</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">km/h</div><div class="text-xl font-bold font-mono" id="ss-kmh">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">mph</div><div class="text-xl font-bold font-mono" id="ss-mph">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">ft/s</div><div class="text-xl font-bold font-mono" id="ss-fts">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">knots</div><div class="text-xl font-bold font-mono" id="ss-knots">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Mach at sea level</div><div class="text-xl font-bold font-mono" id="ss-mach">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Speed of Sound in Various Media</h3>
          <div class="text-xs space-y-1">
            <div>Air (20°C): ~343 m/s</div>
            <div>Fresh Water: ~1,497 m/s</div>
            <div>Seawater: ~1,531 m/s</div>
            <div>Steel: ~5,960 m/s</div>
            <div>Aluminum: ~6,420 m/s</div>
            <div>Glass: ~5,640 m/s</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="sound-speed" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    const MEDIA_SPEEDS: Record<string, number> = {
      water: 1497, seawater: 1531, steel: 5960, aluminum: 6420,
      glass: 5640, concrete: 3100, wood: 3850, helium: 970, hydrogen: 1270
    };
    function calcSS() {
      const tempC = parseFloat((document.getElementById('ss-temp') as HTMLInputElement).value) || 20;
      const med = (document.getElementById('ss-med') as HTMLSelectElement).value;
      let speed: number;
      if (med === 'air') {
        speed = 331.3 + 0.606 * tempC;
      } else {
        speed = MEDIA_SPEEDS[med] || 343;
      }
      const machRef = 331.3 + 0.606 * 15;
      document.getElementById('ss-result')!.textContent = speed.toFixed(1) + ' m/s';
      document.getElementById('ss-kmh')!.textContent = (speed * 3.6).toFixed(1);
      document.getElementById('ss-mph')!.textContent = (speed * 2.23694).toFixed(1);
      document.getElementById('ss-fts')!.textContent = (speed * 3.28084).toFixed(1);
      document.getElementById('ss-knots')!.textContent = (speed * 1.94384).toFixed(1);
      document.getElementById('ss-mach')!.textContent = (speed / machRef).toFixed(3);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ss-in').forEach(el => { el.addEventListener('input', calcSS); el.addEventListener('change', calcSS); });
      calcSS();
    }, 50);
  </script>
</CalculatorLayout>
