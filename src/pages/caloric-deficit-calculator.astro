---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Caloric Deficit Calculator - Weight Loss Planner";
const description = "Calculate daily calorie target for weight loss. Set TDEE, deficit amount, and goal weight to see timeline and weekly loss rate.";
const relatedCalcs = [
  { name: "Calorie Calculator", url: "/calorie-calculator", description: "Daily calorie needs." },
  { name: "BMI Calculator", url: "/bmi-calculator", description: "Body mass index." },
  { name: "Macro Calculator", url: "/macro-calculator", description: "Macronutrients." },
  { name: "Fasting Calculator", url: "/fasting-calculator", description: "Intermittent fasting." },
  { name: "Metabolic Age Calculator", url: "/metabolic-age-calculator", description: "Metabolic age." },
  { name: "Workout Volume Calculator", url: "/workout-volume-calculator", description: "Training volume." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Caloric Deficit Calculator" keywords="caloric deficit, weight loss, calorie target, TDEE, fat loss, diet calculator" breadcrumbs={[{ name: "Caloric Deficit", url: "/caloric-deficit-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Caloric Deficit Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Plan your weight loss with a sustainable caloric deficit.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">TDEE (cal/day)</label><input type="number" id="cd2-tdee" class="cd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2200" min="800" max="6000" step="50"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Daily Deficit (cal)</label>
            <select id="cd2-def" class="cd2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="250">250 cal (slow/easy)</option>
              <option value="500" selected>500 cal (standard)</option>
              <option value="750">750 cal (aggressive)</option>
              <option value="1000">1000 cal (max safe)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Current Weight (lbs)</label><input type="number" id="cd2-cur" class="cd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="80" max="600" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Goal Weight (lbs)</label><input type="number" id="cd2-goal" class="cd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="170" min="80" max="500" step="0.5"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Daily Calorie Target</div>
          <div class="text-5xl font-extrabold font-mono" id="cd2-target">0</div>
          <div class="text-sm text-blue-200 mt-1">calories/day</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weekly Loss</div><div class="text-xl font-bold" id="cd2-wkloss">0 lbs</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weeks to Goal</div><div class="text-xl font-bold" id="cd2-weeks">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Target Date</div><div class="text-xl font-bold" id="cd2-date">--</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weekly Deficit</div><div class="text-xl font-bold" id="cd2-wkdef">0 cal</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Lbs of Fat to Lose</div><div class="text-xl font-bold" id="cd2-fat">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-3">Safe Deficit Guidelines</h3>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <div class="flex justify-between"><span>250 cal deficit</span><span class="font-bold">~0.5 lb/week</span></div>
            <div class="flex justify-between"><span>500 cal deficit</span><span class="font-bold">~1 lb/week</span></div>
            <div class="flex justify-between"><span>750 cal deficit</span><span class="font-bold">~1.5 lbs/week</span></div>
            <div class="flex justify-between"><span>1000 cal deficit</span><span class="font-bold">~2 lbs/week</span></div>
            <div class="flex justify-between"><span>Min for women</span><span class="font-bold">1200 cal/day</span></div>
            <div class="flex justify-between"><span>Min for men</span><span class="font-bold">1500 cal/day</span></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="caloric-deficit" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Caloric Deficit for Weight Loss</h2>
      <p>One pound of body fat contains approximately 3,500 calories. A daily deficit of 500 calories should produce roughly 1 pound of weight loss per week. Your TDEE (Total Daily Energy Expenditure) includes your BMR plus calories burned through activity. Never drop below 1,200 calories/day for women or 1,500 for men without medical supervision.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDeficit() {
      const tdee = parseInt((document.getElementById('cd2-tdee') as HTMLInputElement).value) || 2200;
      const deficit = parseInt((document.getElementById('cd2-def') as HTMLSelectElement).value) || 500;
      const curWt = parseFloat((document.getElementById('cd2-cur') as HTMLInputElement).value) || 200;
      const goalWt = parseFloat((document.getElementById('cd2-goal') as HTMLInputElement).value) || 170;
      const target = Math.max(1200, tdee - deficit);
      const actualDeficit = tdee - target;
      const weeklyLoss = (actualDeficit * 7) / 3500;
      const lbsToLose = Math.max(0, curWt - goalWt);
      const weeks = weeklyLoss > 0 ? Math.ceil(lbsToLose / weeklyLoss) : 0;
      const targetDate = new Date();
      targetDate.setDate(targetDate.getDate() + weeks * 7);
      const months = ['Jan','Feb','Mar','Apr','May','Jun','Jul','Aug','Sep','Oct','Nov','Dec'];
      document.getElementById('cd2-target')!.textContent = target.toLocaleString();
      document.getElementById('cd2-wkloss')!.textContent = weeklyLoss.toFixed(1) + ' lbs';
      document.getElementById('cd2-weeks')!.textContent = weeks.toString();
      document.getElementById('cd2-date')!.textContent = months[targetDate.getMonth()] + ' ' + targetDate.getFullYear();
      document.getElementById('cd2-wkdef')!.textContent = (actualDeficit * 7).toLocaleString() + ' cal';
      document.getElementById('cd2-fat')!.textContent = lbsToLose.toFixed(1);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.cd2-in').forEach(el => { el.addEventListener('input', calcDeficit); el.addEventListener('change', calcDeficit); });
      calcDeficit();
    }, 50);
  </script>
</CalculatorLayout>
