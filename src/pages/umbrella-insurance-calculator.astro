---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Umbrella Insurance Calculator - Coverage Recommendation";
const description = "Calculate how much umbrella insurance you need based on your net worth, assets, and existing liability coverage.";

const relatedCalcs = [
  { name: "Life Insurance", url: "/life-insurance-calculator", description: "Life coverage needs." },
  { name: "Car Insurance", url: "/car-insurance-calculator", description: "Auto insurance." },
  { name: "Net Worth", url: "/net-worth-calculator", description: "Track net worth." },
  { name: "Estate Planning", url: "/estate-planning-calculator", description: "Estate planning." },
  { name: "Property Tax", url: "/property-tax-calculator", description: "Property taxes." },
  { name: "Health Insurance", url: "/health-insurance-calculator", description: "Health plan costs." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Umbrella Insurance Calculator" keywords="umbrella insurance calculator, liability coverage, excess liability, umbrella policy, coverage gap, asset protection" breadcrumbs={[{ name: "Umbrella Insurance", url: "/umbrella-insurance-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Umbrella Insurance Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Determine if you need umbrella insurance and how much coverage to get based on your assets and risk exposure.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Total Net Worth</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="ui-networth" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="750000" min="0" step="10000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Total Assets at Risk</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="ui-assets" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="500000" min="0" step="10000">
            </div>
            <p class="text-xs text-text-muted mt-1">Home equity, vehicles, investments, savings</p>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Existing Auto Liability Coverage</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="ui-auto-liability" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="300000" min="0" step="50000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Existing Home Liability Coverage</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="ui-home-liability" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="300000" min="0" step="50000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Future Earnings to Protect (years)</label>
            <input type="number" id="ui-future-years" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="20" min="0" max="40" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Annual Income</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="ui-income" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="100000" min="0" step="5000">
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Recommended Umbrella Coverage</div>
            <div class="text-5xl font-extrabold font-mono" id="ui-recommended">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Coverage Gap</div>
              <div class="text-xl font-bold text-red-600" id="ui-gap">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Total Exposure</div>
              <div class="text-xl font-bold" id="ui-exposure">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Est. Annual Premium</div>
              <div class="text-xl font-bold text-green-600" id="ui-premium">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Existing Coverage</div>
              <div class="text-xl font-bold" id="ui-existing">$0</div>
            </div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="umbrella-insurance" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">What Is Umbrella Insurance?</h2>
      <p>Umbrella insurance provides additional liability coverage beyond your home and auto policies. It kicks in when your underlying policy limits are exhausted, protecting your assets and future earnings from lawsuits.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Who Needs Umbrella Insurance?</h3>
      <p>If your net worth exceeds your liability coverage limits, or you have a pool, trampoline, teen driver, or dog, umbrella insurance is strongly recommended. Policies typically start at $1 million for $150-$300/year.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcUI() {
      const netWorth = parseFloat((document.getElementById('ui-networth') as HTMLInputElement).value) || 0;
      const assets = parseFloat((document.getElementById('ui-assets') as HTMLInputElement).value) || 0;
      const autoLiab = parseFloat((document.getElementById('ui-auto-liability') as HTMLInputElement).value) || 0;
      const homeLiab = parseFloat((document.getElementById('ui-home-liability') as HTMLInputElement).value) || 0;
      const futureYears = parseInt((document.getElementById('ui-future-years') as HTMLInputElement).value) || 0;
      const income = parseFloat((document.getElementById('ui-income') as HTMLInputElement).value) || 0;

      const existingCoverage = Math.max(autoLiab, homeLiab); // umbrella sits on top of highest
      const futureEarnings = income * futureYears;
      const totalExposure = netWorth + futureEarnings;
      const gap = Math.max(0, totalExposure - existingCoverage);

      // Round up to nearest $1M for umbrella policy
      const recommended = gap > 0 ? Math.ceil(gap / 1000000) * 1000000 : 0;

      // Premium estimate: ~$150 for first $1M, ~$75 per additional $1M
      const millions = recommended / 1000000;
      const premium = millions > 0 ? 150 + Math.max(0, millions - 1) * 75 : 0;

      document.getElementById('ui-recommended')!.textContent = fmt(recommended);
      document.getElementById('ui-gap')!.textContent = fmt(gap);
      document.getElementById('ui-exposure')!.textContent = fmt(totalExposure);
      document.getElementById('ui-premium')!.textContent = fmt(premium) + '/yr';
      document.getElementById('ui-existing')!.textContent = fmt(existingCoverage);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['ui-networth', 'ui-assets', 'ui-auto-liability', 'ui-home-liability', 'ui-future-years', 'ui-income'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcUI); el.addEventListener('change', calcUI); }
      });
      calcUI();
    }, 50);
  </script>
</CalculatorLayout>
