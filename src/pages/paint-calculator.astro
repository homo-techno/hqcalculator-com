---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Paint Calculator - How Much Paint Do I Need?";
const description = "Calculate how much paint you need for walls, ceilings, and trim. Accounts for doors, windows, and number of coats. Get cost estimates.";

const relatedCalcs = [
  { name: "Square Footage", url: "/square-footage-calculator", description: "Area calculator." },
  { name: "Concrete Calculator", url: "/concrete-calculator", description: "Concrete volume." },
  { name: "Gravel Calculator", url: "/gravel-calculator", description: "Gravel needed." },
  { name: "Length Converter", url: "/length-converter", description: "Length units." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentages." },
  { name: "Discount Calculator", url: "/discount-calculator", description: "Discounts." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Paint Calculator"
  keywords="paint calculator, how much paint, wall paint, paint coverage, gallons of paint, paint cost estimator"
  breadcrumbs={[{ name: "Paint Calculator", url: "/paint-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Paint Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate how much paint you need and estimate costs.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <h3 class="font-semibold text-text mb-3">Room Dimensions</h3>
          <div class="space-y-3 mb-5">
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label class="block text-xs font-medium text-text mb-1">Room Length (ft)</label>
                <input type="number" id="pt-length" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="14" min="0" step="0.5">
              </div>
              <div>
                <label class="block text-xs font-medium text-text mb-1">Room Width (ft)</label>
                <input type="number" id="pt-width" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="12" min="0" step="0.5">
              </div>
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Wall Height (ft)</label>
              <input type="number" id="pt-height" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="8" min="0" step="0.5">
            </div>
          </div>

          <h3 class="font-semibold text-text mb-3">Openings (to subtract)</h3>
          <div class="grid grid-cols-2 gap-3 mb-5">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Number of Doors</label>
              <input type="number" id="pt-doors" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="1" min="0" step="1">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Number of Windows</label>
              <input type="number" id="pt-windows" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="2" min="0" step="1">
            </div>
          </div>

          <h3 class="font-semibold text-text mb-3">Paint Options</h3>
          <div class="space-y-3 mb-5">
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label class="block text-xs font-medium text-text mb-1">Number of Coats</label>
                <select id="pt-coats" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
                  <option value="1">1 coat</option>
                  <option value="2" selected>2 coats</option>
                  <option value="3">3 coats</option>
                </select>
              </div>
              <div>
                <label class="block text-xs font-medium text-text mb-1">Paint Coverage</label>
                <select id="pt-coverage" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
                  <option value="350" selected>350 sq ft/gal (standard)</option>
                  <option value="400">400 sq ft/gal (premium)</option>
                  <option value="300">300 sq ft/gal (textured)</option>
                  <option value="250">250 sq ft/gal (rough surface)</option>
                </select>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label class="block text-xs font-medium text-text mb-1">Price per Gallon</label>
                <div class="relative">
                  <span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
                  <input type="number" id="pt-price" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="35" min="0" step="1">
                </div>
              </div>
              <div>
                <label class="block text-xs font-medium text-text mb-1">Paint Ceiling?</label>
                <select id="pt-ceiling" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
                  <option value="no">No</option>
                  <option value="yes">Yes</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Paint Needed</div>
            <div class="text-4xl sm:text-5xl font-extrabold" id="pt-gallons">0</div>
            <div class="text-sm text-blue-200 mt-1">gallons</div>
          </div>

          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Total Wall Area</div>
              <div class="text-xl font-bold" id="pt-wall-area">0 sq ft</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Paintable Area</div>
              <div class="text-xl font-bold" id="pt-paint-area">0 sq ft</div>
            </div>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Estimated Cost</div>
            <div class="text-3xl font-bold text-secondary" id="pt-cost">$0</div>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-3">Breakdown</h3>
            <div class="space-y-1 text-sm" id="pt-breakdown"></div>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-2">Buy</h3>
            <div class="grid grid-cols-2 gap-3 text-center">
              <div>
                <div class="text-xs text-text-muted">Gallon Cans</div>
                <div class="text-2xl font-bold" id="pt-cans-gal">0</div>
              </div>
              <div>
                <div class="text-xs text-text-muted">OR Quart Cans</div>
                <div class="text-2xl font-bold" id="pt-cans-qt">0</div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="paint" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How to Calculate Paint Needed</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>Wall Area</strong> = 2 × (Length + Width) × Height</p>
        <p><strong>Subtract</strong>: Doors (~21 sq ft each), Windows (~15 sq ft each)</p>
        <p><strong>Gallons</strong> = Paintable Area × Coats ÷ Coverage per Gallon</p>
      </div>

      <h3 class="text-xl font-semibold text-text mt-8">Paint Coverage Tips</h3>
      <ul>
        <li>One gallon covers about 350-400 sq ft on smooth walls</li>
        <li>Textured or rough surfaces need more paint (250-300 sq ft/gal)</li>
        <li>Dark colors over light typically need 2 coats; light over dark needs 2-3</li>
        <li>Always buy a little extra for touch-ups (10-15%)</li>
      </ul>

      <h3 class="text-xl font-semibold text-text mt-8">Frequently Asked Questions</h3>
      <p><strong>How much does a gallon of paint cover?</strong> A standard gallon covers about 350-400 square feet per coat on smooth, primed walls.</p>
      <p><strong>How many coats do I need?</strong> Most jobs need 2 coats. Use 1 coat for same-color touch-ups, 3 for drastic color changes.</p>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const DOOR_SQFT = 21;
    const WINDOW_SQFT = 15;

    function calcPaint() {
      const length = parseFloat((document.getElementById('pt-length') as HTMLInputElement).value) || 0;
      const width = parseFloat((document.getElementById('pt-width') as HTMLInputElement).value) || 0;
      const height = parseFloat((document.getElementById('pt-height') as HTMLInputElement).value) || 0;
      const doors = parseInt((document.getElementById('pt-doors') as HTMLInputElement).value) || 0;
      const windows = parseInt((document.getElementById('pt-windows') as HTMLInputElement).value) || 0;
      const coats = parseInt((document.getElementById('pt-coats') as HTMLSelectElement).value) || 2;
      const coverage = parseInt((document.getElementById('pt-coverage') as HTMLSelectElement).value) || 350;
      const price = parseFloat((document.getElementById('pt-price') as HTMLInputElement).value) || 0;
      const doCeiling = (document.getElementById('pt-ceiling') as HTMLSelectElement).value === 'yes';

      const wallArea = 2 * (length + width) * height;
      const ceilingArea = doCeiling ? length * width : 0;
      const openings = doors * DOOR_SQFT + windows * WINDOW_SQFT;
      const paintableArea = Math.max(0, wallArea - openings + ceilingArea);
      const totalArea = paintableArea * coats;
      const gallons = totalArea / coverage;
      const gallonsRounded = Math.ceil(gallons * 4) / 4; // Round up to nearest quarter gallon
      const cost = Math.ceil(gallons) * price;

      document.getElementById('pt-gallons')!.textContent = gallonsRounded.toFixed(gallonsRounded % 1 === 0 ? 0 : 2);
      document.getElementById('pt-wall-area')!.textContent = Math.round(wallArea + ceilingArea) + ' sq ft';
      document.getElementById('pt-paint-area')!.textContent = Math.round(paintableArea) + ' sq ft';
      document.getElementById('pt-cost')!.textContent = '$' + Math.round(cost).toLocaleString();

      document.getElementById('pt-cans-gal')!.textContent = String(Math.ceil(gallons));
      document.getElementById('pt-cans-qt')!.textContent = String(Math.ceil(gallons * 4));

      const items = [
        ['Wall area', `${Math.round(wallArea)} sq ft`],
      ];
      if (doCeiling) items.push(['Ceiling area', `${Math.round(ceilingArea)} sq ft`]);
      items.push(
        ['Doors subtracted', `-${Math.round(doors * DOOR_SQFT)} sq ft`],
        ['Windows subtracted', `-${Math.round(windows * WINDOW_SQFT)} sq ft`],
        ['Paintable area', `${Math.round(paintableArea)} sq ft`],
        ['× ' + coats + ' coats', `${Math.round(totalArea)} sq ft total`],
        ['÷ ' + coverage + ' sq ft/gal', gallonsRounded.toFixed(2) + ' gallons'],
      );

      document.getElementById('pt-breakdown')!.innerHTML = items.map(([label, val]) =>
        `<div class="flex justify-between"><span class="text-text-secondary">${label}</span><span class="font-semibold">${val}</span></div>`
      ).join('');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['pt-length', 'pt-width', 'pt-height', 'pt-doors', 'pt-windows', 'pt-price'].forEach(id => {
        document.getElementById(id)?.addEventListener('input', calcPaint);
      });
      ['pt-coats', 'pt-coverage', 'pt-ceiling'].forEach(id => {
        document.getElementById(id)?.addEventListener('change', calcPaint);
      });
      calcPaint();
    }, 50);
  </script>
</CalculatorLayout>
