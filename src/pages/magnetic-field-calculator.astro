---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Magnetic Field Calculator";
const description = "Calculate magnetic field strength from a straight wire or solenoid using Biot-Savart and Ampère's law.";
const relatedCalcs = [
  { name: "Electric Field", url: "/electric-field-calculator", description: "E field." },
  { name: "Coulomb's Law", url: "/coulombs-law-calculator", description: "Coulomb." },
  { name: "Ohm's Law", url: "/ohms-law-calculator", description: "Ohm's." },
  { name: "Inductor", url: "/inductor-calculator", description: "Inductors." },
  { name: "Force Calculator", url: "/force-calculator", description: "Force." },
  { name: "Scientific Notation", url: "/scientific-notation-calculator", description: "Notation." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Magnetic Field Calculator" keywords="magnetic field, B field, solenoid, straight wire, Ampere law, Biot-Savart, magnetic flux" breadcrumbs={[{ name: "Magnetic Field", url: "/magnetic-field-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Magnetic Field Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate B field from wires and solenoids.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="flex gap-2">
          <button class="mf-mode flex-1 py-2 rounded-xl font-bold text-sm border-2 border-primary bg-blue-50 text-primary" data-mode="wire">Straight Wire</button>
          <button class="mf-mode flex-1 py-2 rounded-xl font-bold text-sm border-2 border-border text-text-muted" data-mode="solenoid">Solenoid</button>
        </div>
        <div id="mf-wire-fields">
          <div class="grid grid-cols-2 gap-3">
            <div><label class="block text-xs font-medium text-text mb-1">Current I (A)</label><input type="number" id="mf-i" class="mf-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="10" min="0" step="0.1"></div>
            <div><label class="block text-xs font-medium text-text mb-1">Distance r (m)</label><input type="number" id="mf-r" class="mf-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="0.05" min="0.001" step="0.01"></div>
          </div>
        </div>
        <div id="mf-sol-fields" class="hidden">
          <div class="grid grid-cols-3 gap-3">
            <div><label class="block text-xs font-medium text-text mb-1">Current I (A)</label><input type="number" id="mf-si" class="mf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" step="0.1"></div>
            <div><label class="block text-xs font-medium text-text mb-1">Turns (N)</label><input type="number" id="mf-n" class="mf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="500" min="1" step="1"></div>
            <div><label class="block text-xs font-medium text-text mb-1">Length (m)</label><input type="number" id="mf-l" class="mf-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.2" min="0.001" step="0.01"></div>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Magnetic Field (B)</div>
          <div class="text-5xl font-extrabold font-mono" id="mf-result">0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Tesla</div><div class="text-xl font-bold font-mono" id="mf-tesla">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Gauss</div><div class="text-xl font-bold font-mono" id="mf-gauss">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formula</h3>
          <div class="text-xs font-mono" id="mf-formula">B = μ₀I / (2πr)</div>
        </div>
      </div>
      <ShareButton calculatorId="magnetic-field" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    let mfMode = 'wire';
    const MU0 = 4 * Math.PI * 1e-7;
    function calcMF() {
      let B = 0;
      if (mfMode === 'wire') {
        const I = parseFloat((document.getElementById('mf-i') as HTMLInputElement).value) || 0;
        const r = parseFloat((document.getElementById('mf-r') as HTMLInputElement).value) || 0.001;
        B = MU0 * I / (2 * Math.PI * r);
        document.getElementById('mf-formula')!.textContent = `B = μ₀I/(2πr) = ${B.toExponential(3)} T`;
      } else {
        const I = parseFloat((document.getElementById('mf-si') as HTMLInputElement).value) || 0;
        const N = parseFloat((document.getElementById('mf-n') as HTMLInputElement).value) || 1;
        const L = parseFloat((document.getElementById('mf-l') as HTMLInputElement).value) || 0.001;
        B = MU0 * N * I / L;
        document.getElementById('mf-formula')!.textContent = `B = μ₀nI = μ₀×(${N}/${L})×${I} = ${B.toExponential(3)} T`;
      }
      const gauss = B * 1e4;
      let bLabel: string;
      if (B >= 1) bLabel = B.toFixed(4) + ' T';
      else if (B >= 1e-3) bLabel = (B * 1e3).toFixed(3) + ' mT';
      else if (B >= 1e-6) bLabel = (B * 1e6).toFixed(3) + ' μT';
      else bLabel = B.toExponential(3) + ' T';
      document.getElementById('mf-result')!.textContent = bLabel;
      document.getElementById('mf-tesla')!.textContent = B.toExponential(3);
      document.getElementById('mf-gauss')!.textContent = gauss.toFixed(3);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.mf-mode').forEach(b => b.addEventListener('click', () => {
        mfMode = (b as HTMLButtonElement).dataset.mode!;
        document.querySelectorAll('.mf-mode').forEach(btn => {
          const active = (btn as HTMLButtonElement).dataset.mode === mfMode;
          (btn as HTMLButtonElement).className = `mf-mode flex-1 py-2 rounded-xl font-bold text-sm border-2 ${active ? 'border-primary bg-blue-50 text-primary' : 'border-border text-text-muted'}`;
        });
        document.getElementById('mf-wire-fields')!.classList.toggle('hidden', mfMode !== 'wire');
        document.getElementById('mf-sol-fields')!.classList.toggle('hidden', mfMode !== 'solenoid');
        calcMF();
      }));
      document.querySelectorAll('.mf-in').forEach(el => { el.addEventListener('input', calcMF); el.addEventListener('change', calcMF); });
      calcMF();
    }, 50);
  </script>
</CalculatorLayout>
