---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Stepper Motor Calculator - Step Angle, Pulse Rate & Linear Speed";
const description = "Calculate stepper motor step angle, pulses per second, and linear speed with lead screw pitch from steps/rev, microstepping, and RPM.";
const relatedCalcs = [
  { name: "Gear Calculator", url: "/gear-calculator", description: "Gear ratio." },
  { name: "Belt Length Calculator", url: "/belt-length-calculator", description: "Belt/pulley." },
  { name: "3D Printer Cost Calculator", url: "/3d-printer-cost-calculator", description: "3D print cost." },
  { name: "Moment of Inertia Calculator", url: "/moment-of-inertia-calculator", description: "Rotational inertia." },
  { name: "Acceleration Calculator", url: "/acceleration-calculator", description: "Kinematics." },
  { name: "RPM Calculator", url: "/rpm-calculator", description: "Rotational speed." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Stepper Motor Calculator" keywords="stepper motor, step angle, microstepping, pulses per second, lead screw, linear speed, CNC" breadcrumbs={[{ name: "Stepper Motor Calculator", url: "/stepper-motor-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Stepper Motor Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Enter steps per revolution, microstepping divisor, and RPM to find step angle, pulse rate, and linear speed with a lead screw.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Steps per Revolution</label><input type="number" id="sm-steps" class="sm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" step="1" min="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Microstepping</label>
            <select id="sm-micro" class="sm-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="1">Full Step (1)</option>
              <option value="2">Half Step (1/2)</option>
              <option value="4">1/4 Step</option>
              <option value="8">1/8 Step</option>
              <option value="16" selected>1/16 Step</option>
              <option value="32">1/32 Step</option>
              <option value="64">1/64 Step</option>
              <option value="128">1/128 Step</option>
              <option value="256">1/256 Step</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Target RPM</label><input type="number" id="sm-rpm" class="sm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" step="1" min="0"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Lead Screw Pitch (mm/rev) — optional</label><input type="number" id="sm-pitch" class="sm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" step="0.5" min="0"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Step Angle</div>
          <div class="text-5xl font-extrabold font-mono" id="sm-result">0</div>
          <div class="text-sm text-blue-200 mt-1">degrees</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Steps/Rev</div><div class="text-xl font-bold" id="sm-total">—</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Pulses/Second</div><div class="text-xl font-bold" id="sm-pps">—</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Linear Speed</div><div class="text-xl font-bold" id="sm-linear">—</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Linear Resolution</div><div class="text-xl font-bold" id="sm-res">—</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Step-by-Step</h3>
          <div class="font-mono text-sm space-y-1" id="sm-steps-out"></div>
        </div>
      </div>
      <ShareButton calculatorId="stepper-motor" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Stepper Motor Formulas</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p>Step Angle = 360° / (Steps/Rev × Microstep)</p>
        <p>Total Steps/Rev = Steps/Rev × Microstep</p>
        <p>Pulses/sec = Total Steps/Rev × RPM / 60</p>
        <p>Linear Speed = Pitch × RPM (mm/min)</p>
        <p>Linear Resolution = Pitch / Total Steps/Rev</p>
      </div>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSm() {
      const stepsPerRev = parseFloat((document.getElementById('sm-steps') as HTMLInputElement).value) || 0;
      const micro = parseFloat((document.getElementById('sm-micro') as HTMLSelectElement).value) || 1;
      const rpm = parseFloat((document.getElementById('sm-rpm') as HTMLInputElement).value) || 0;
      const pitch = parseFloat((document.getElementById('sm-pitch') as HTMLInputElement).value) || 0;
      const steps: string[] = [];
      const totalSteps = stepsPerRev * micro;
      const stepAngle = totalSteps > 0 ? 360 / totalSteps : 0;
      steps.push(`Total Steps/Rev = ${stepsPerRev} × ${micro} = ${totalSteps}`);
      steps.push(`Step Angle = 360° / ${totalSteps} = ${stepAngle.toFixed(6)}°`);
      const pps = (totalSteps * rpm) / 60;
      steps.push(`Pulses/sec = ${totalSteps} × ${rpm} / 60 = ${pps.toFixed(2)} Hz`);
      let linearSpeed = 0, linearRes = 0;
      if (pitch > 0) {
        linearSpeed = pitch * rpm;
        linearRes = totalSteps > 0 ? pitch / totalSteps : 0;
        steps.push(`Linear Speed = ${pitch} × ${rpm} = ${linearSpeed.toFixed(2)} mm/min`);
        steps.push(`Linear Resolution = ${pitch} / ${totalSteps} = ${linearRes.toFixed(6)} mm/step`);
      }
      document.getElementById('sm-result')!.textContent = stepAngle.toFixed(6);
      document.getElementById('sm-total')!.textContent = totalSteps.toLocaleString();
      document.getElementById('sm-pps')!.textContent = pps.toFixed(2) + ' Hz';
      document.getElementById('sm-linear')!.textContent = pitch > 0 ? linearSpeed.toFixed(2) + ' mm/min' : '—';
      document.getElementById('sm-res')!.textContent = linearRes > 0 ? linearRes.toFixed(6) + ' mm' : '—';
      document.getElementById('sm-steps-out')!.innerHTML = steps.map(s => `<div>${s}</div>`).join('');
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('sm-steps') as HTMLInputElement).value = '200';
      (document.getElementById('sm-rpm') as HTMLInputElement).value = '300';
      (document.getElementById('sm-pitch') as HTMLInputElement).value = '8';
      document.querySelectorAll('.sm-in').forEach(el => { el.addEventListener('input', calcSm); el.addEventListener('change', calcSm); });
      calcSm();
    }, 50);
  </script>
</CalculatorLayout>
