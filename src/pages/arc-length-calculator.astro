---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Arc Length Calculator - Sector Area & Arc Length";
const description = "Calculate arc length, sector area, and chord length given radius and central angle.";
const relatedCalcs = [
  { name: "Circle Calculator", url: "/circle-calculator", description: "Circles." },
  { name: "Degrees/Radians", url: "/degrees-radians-converter", description: "Angle units." },
  { name: "Triangle Calculator", url: "/triangle-calculator", description: "Triangles." },
  { name: "Area Calculator", url: "/area-calculator", description: "2D areas." },
  { name: "Circumference", url: "/circle-calculator", description: "Circumference." },
  { name: "Length Converter", url: "/length-converter", description: "Length units." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Arc Length Calculator" keywords="arc length, sector area, central angle, chord length, arc calculator" breadcrumbs={[{ name: "Arc Length", url: "/arc-length-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Arc Length Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate arc length, sector area, and chord length.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-3 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Radius</label><input type="number" id="al-r" class="al-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0.01" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Angle</label><input type="number" id="al-a" class="al-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="90" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Unit</label><select id="al-u" class="al-in w-full px-4 py-3 border border-border rounded-xl text-lg"><option value="deg" selected>Degrees</option><option value="rad">Radians</option></select></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-5 bg-primary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Arc Length</div><div class="text-2xl font-extrabold font-mono" id="al-arc">0</div></div>
          <div class="p-5 bg-secondary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Sector Area</div><div class="text-2xl font-extrabold font-mono" id="al-area">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Chord Length</div><div class="text-xl font-bold font-mono" id="al-chord">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Segment Area</div><div class="text-xl font-bold font-mono" id="al-seg">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formulas</h3>
          <div class="font-mono text-sm space-y-1">
            <div>Arc Length = r × θ (radians)</div>
            <div>Sector Area = ½r²θ</div>
            <div>Chord = 2r × sin(θ/2)</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="arc-length" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcAL() {
      const r = parseFloat((document.getElementById('al-r') as HTMLInputElement).value) || 0;
      const angle = parseFloat((document.getElementById('al-a') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('al-u') as HTMLSelectElement).value;
      const theta = unit === 'deg' ? angle * Math.PI / 180 : angle;
      const arcLen = r * theta;
      const sectorArea = 0.5 * r * r * theta;
      const chord = 2 * r * Math.sin(theta / 2);
      const triangleArea = 0.5 * r * r * Math.sin(theta);
      const segmentArea = sectorArea - triangleArea;
      document.getElementById('al-arc')!.textContent = arcLen.toFixed(4);
      document.getElementById('al-area')!.textContent = sectorArea.toFixed(4);
      document.getElementById('al-chord')!.textContent = chord.toFixed(4);
      document.getElementById('al-seg')!.textContent = segmentArea.toFixed(4);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.al-in').forEach(el => { el.addEventListener('input', calcAL); el.addEventListener('change', calcAL); }); calcAL(); }, 50);
  </script>
</CalculatorLayout>
