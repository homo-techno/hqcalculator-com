---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Baseboard Calculator";
const description = "Calculate baseboard trim needed for any room. Account for doors, openings, and material waste.";
const relatedCalcs = [
  { name: "Crown Molding", url: "/crown-molding-calculator", description: "Molding." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Countertop", url: "/countertop-calculator", description: "Countertop." },
  { name: "Flooring", url: "/flooring-calculator", description: "Flooring." },
  { name: "Door Calculator", url: "/door-calculator", description: "Doors." },
  { name: "Lighting", url: "/lighting-calculator", description: "Lighting." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Baseboard Calculator" keywords="baseboard calculator, baseboard trim, trim length, baseboard cost, room trim" breadcrumbs={[{ name: "Baseboard", url: "/baseboard-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Baseboard Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate baseboard trim for your room.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Room Length (ft)</label><input type="number" id="bb-len" class="bb-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="14" min="0" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Room Width (ft)</label><input type="number" id="bb-wid" class="bb-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="12" min="0" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Doors (3 ft each)</label><input type="number" id="bb-doors" class="bb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Other Openings (ft)</label><input type="number" id="bb-open" class="bb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Piece Length (ft)</label>
            <select id="bb-piece" class="bb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="8" selected>8 ft</option>
              <option value="10">10 ft</option>
              <option value="12">12 ft</option>
              <option value="16">16 ft</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Price per Piece ($)</label><input type="number" id="bb-price" class="bb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Baseboard Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="bb-result">0 ft</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Perimeter</div><div class="text-lg font-bold font-mono" id="bb-perim">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Pieces</div><div class="text-lg font-bold font-mono" id="bb-pieces">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost</div><div class="text-lg font-bold font-mono" id="bb-cost">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Deductions</div><div class="text-xl font-bold font-mono" id="bb-deduct">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Corners</div><div class="text-xl font-bold font-mono" id="bb-corners">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="baseboard" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcBB() {
      const len = parseFloat((document.getElementById('bb-len') as HTMLInputElement).value) || 0;
      const wid = parseFloat((document.getElementById('bb-wid') as HTMLInputElement).value) || 0;
      const doors = parseInt((document.getElementById('bb-doors') as HTMLInputElement).value) || 0;
      const openings = parseFloat((document.getElementById('bb-open') as HTMLInputElement).value) || 0;
      const pieceLen = parseFloat((document.getElementById('bb-piece') as HTMLSelectElement).value);
      const price = parseFloat((document.getElementById('bb-price') as HTMLInputElement).value) || 0;
      const perimeter = 2 * (len + wid);
      const deductions = doors * 3 + openings;
      const netLength = Math.max(0, perimeter - deductions);
      const withWaste = netLength * 1.1;
      const pieces = Math.ceil(withWaste / pieceLen);
      document.getElementById('bb-result')!.textContent = netLength.toFixed(1) + ' ft';
      document.getElementById('bb-perim')!.textContent = perimeter.toFixed(1) + ' ft';
      document.getElementById('bb-pieces')!.textContent = pieces.toString();
      document.getElementById('bb-cost')!.textContent = '$' + (pieces * price).toFixed(0);
      document.getElementById('bb-deduct')!.textContent = deductions.toFixed(1) + ' ft';
      document.getElementById('bb-corners')!.textContent = '4 inside';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.bb-in').forEach(el => { el.addEventListener('input', calcBB); el.addEventListener('change', calcBB); });
      calcBB();
    }, 50);
  </script>
</CalculatorLayout>
