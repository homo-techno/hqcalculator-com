---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Revenue Per Employee Calculator";
const description = "Calculate revenue per employee, profit per employee, and compare to industry benchmarks.";
const relatedCalcs = [
  { name: "Cost Per Acquisition", url: "/cost-per-acquisition-calculator", description: "CPA calculations." },
  { name: "Customer Lifetime Value", url: "/customer-lifetime-value-calculator", description: "CLV analysis." },
  { name: "Burn Rate", url: "/burn-rate-calculator", description: "Startup burn rate." },
  { name: "Working Capital", url: "/working-capital-calculator", description: "Working capital." },
  { name: "Inventory Turnover", url: "/inventory-turnover-calculator", description: "Inventory efficiency." },
  { name: "Debt Service Coverage", url: "/debt-service-coverage-calculator", description: "DSCR ratio." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Revenue Per Employee Calculator" keywords="revenue per employee, RPE, profit per employee, workforce productivity, industry benchmark" breadcrumbs={[{ name: "Revenue Per Employee", url: "/revenue-per-employee-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Revenue Per Employee Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Measure workforce productivity with revenue and profit per employee metrics.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Total Annual Revenue ($)</label><input type="number" id="re-revenue" class="re-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5000000" min="0" step="10000"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Net Profit ($)</label><input type="number" id="re-profit" class="re-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="750000" min="0" step="10000"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Number of Employees</label><input type="number" id="re-employees" class="re-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="25" min="1" step="1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Industry</label>
          <select id="re-industry" class="re-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="200000" selected>Technology ($200K avg)</option>
            <option value="150000">Professional Services ($150K avg)</option>
            <option value="300000">Finance ($300K avg)</option>
            <option value="120000">Retail ($120K avg)</option>
            <option value="180000">Healthcare ($180K avg)</option>
            <option value="250000">Manufacturing ($250K avg)</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Revenue Per Employee</div>
          <div class="text-5xl font-extrabold font-mono" id="re-result">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Profit Per Employee</div><div class="text-xl font-bold font-mono" id="re-ppe">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Industry Benchmark</div><div class="text-xl font-bold font-mono" id="re-bench">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">vs. Benchmark</div><div class="text-xl font-bold font-mono" id="re-vs">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Profit Margin</div><div class="text-xl font-bold font-mono" id="re-margin">0%</div></div>
        </div>
      </div>
      <ShareButton calculatorId="revenue-per-employee" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRE() {
      const revenue = parseFloat((document.getElementById('re-revenue') as HTMLInputElement).value) || 0;
      const profit = parseFloat((document.getElementById('re-profit') as HTMLInputElement).value) || 0;
      const employees = parseFloat((document.getElementById('re-employees') as HTMLInputElement).value) || 1;
      const benchmark = parseFloat((document.getElementById('re-industry') as HTMLSelectElement).value) || 0;

      const rpe = revenue / employees;
      const ppe = profit / employees;
      const vsBenchmark = benchmark > 0 ? ((rpe - benchmark) / benchmark) * 100 : 0;
      const profitMargin = revenue > 0 ? (profit / revenue) * 100 : 0;

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('re-result')!.textContent = fmt(rpe);
      document.getElementById('re-ppe')!.textContent = fmt(ppe);
      document.getElementById('re-bench')!.textContent = fmt(benchmark);
      document.getElementById('re-vs')!.textContent = (vsBenchmark >= 0 ? '+' : '') + vsBenchmark.toFixed(1) + '%';
      document.getElementById('re-margin')!.textContent = profitMargin.toFixed(1) + '%';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.re-in').forEach(el => { el.addEventListener('input', calcRE); el.addEventListener('change', calcRE); });
      calcRE();
    }, 50);
  </script>
</CalculatorLayout>
