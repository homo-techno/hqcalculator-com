---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Dental Implant Cost Calculator";
const description = "Estimate dental implant costs by tooth count, implant type (single, bridge, all-on-4), bone graft, abutment, crown material, and insurance coverage.";
const relatedCalcs = [
  { name: "Braces Cost Calculator", url: "/braces-cost-calculator", description: "Estimate orthodontic treatment costs." },
  { name: "Dental Crown Calculator", url: "/dental-crown-calculator", description: "Crown cost by material type." },
  { name: "Dental Bridge Calculator", url: "/dental-bridge-calculator", description: "Bridge cost and alternatives." },
  { name: "Root Canal Calculator", url: "/root-canal-calculator", description: "Root canal treatment cost." },
  { name: "Dental Insurance Calculator", url: "/dental-insurance-calculator", description: "Analyze dental plan benefits." },
  { name: "Health Insurance Calculator", url: "/health-insurance-calculator", description: "Compare health plan costs." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Dental Implant Cost Calculator" keywords="dental implant cost, implant calculator, all-on-4 cost, bone graft cost, dental implant insurance" breadcrumbs={[{ name: "Dental Implant Cost", url: "/dental-implant-cost-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dental Implant Cost Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate your total dental implant cost including implant post, abutment, crown, bone graft, and insurance offset.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Implant Type</label>
          <select id="di3-type" class="di3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="single" selected>Single Implant</option>
            <option value="bridge">Implant-Supported Bridge (2 implants)</option>
            <option value="allon4">All-on-4 (Full Arch)</option>
            <option value="allon6">All-on-6 (Full Arch)</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Number of Teeth to Replace</label><input type="number" id="di3-teeth" class="di3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="1" max="28" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Crown Material</label>
            <select id="di3-crown" class="di3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="pfm">Porcelain-Fused-Metal</option>
              <option value="zirconia" selected>Zirconia</option>
              <option value="emax">E-Max Ceramic</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Bone Graft Needed?</label>
            <select id="di3-graft" class="di3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="none" selected>No Graft</option>
              <option value="minor">Minor Graft ($300-$600)</option>
              <option value="major">Major / Sinus Lift ($1,500-$3,000)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Location / Cost Level</label>
            <select id="di3-loc" class="di3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="low">Low Cost Area</option>
              <option value="avg" selected>Average</option>
              <option value="high">High Cost Metro</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Insurance Coverage (%)</label><input type="number" id="di3-ins" class="di3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" max="100" step="5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Annual Max Benefit ($)</label><input type="number" id="di3-max" class="di3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1500" min="0" max="10000" step="100"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Total Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="di3-total">$0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Implant Posts</div><div class="text-xl font-bold font-mono" id="di3-post">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Abutments</div><div class="text-xl font-bold font-mono" id="di3-abut">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Crowns</div><div class="text-xl font-bold font-mono" id="di3-crn">$0</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bone Graft</div><div class="text-xl font-bold font-mono" id="di3-graftc">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Insurance Offset</div><div class="text-xl font-bold font-mono" id="di3-insc">-$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Out of Pocket</div><div class="text-xl font-bold font-mono" id="di3-oop">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="dental-implant-cost" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDI3() {
      const type = (document.getElementById('di3-type') as HTMLSelectElement).value;
      const teeth = parseFloat((document.getElementById('di3-teeth') as HTMLInputElement).value) || 1;
      const crownMat = (document.getElementById('di3-crown') as HTMLSelectElement).value;
      const graft = (document.getElementById('di3-graft') as HTMLSelectElement).value;
      const loc = (document.getElementById('di3-loc') as HTMLSelectElement).value;
      const insPct = parseFloat((document.getElementById('di3-ins') as HTMLInputElement).value) || 0;
      const insMax = parseFloat((document.getElementById('di3-max') as HTMLInputElement).value) || 0;

      const locMult: Record<string, number> = { low: 0.75, avg: 1.0, high: 1.35 };
      const mult = locMult[loc] || 1.0;

      let implantCount = teeth;
      let postCostEach = 1800;
      let abutCostEach = 500;
      let crownCosts: Record<string, number> = { pfm: 900, zirconia: 1200, emax: 1100 };
      let crownCostEach = crownCosts[crownMat] || 1100;
      let crownCount = teeth;

      if (type === 'bridge') {
        implantCount = 2;
        crownCount = teeth;
      } else if (type === 'allon4') {
        implantCount = 4;
        postCostEach = 2000;
        crownCostEach = 0;
        abutCostEach = 0;
        crownCount = 0;
        // All-on-4 uses a fixed prosthesis cost
        var archCost = 18000 * mult;
      } else if (type === 'allon6') {
        implantCount = 6;
        postCostEach = 2000;
        crownCostEach = 0;
        abutCostEach = 0;
        crownCount = 0;
        var archCost = 24000 * mult;
      }

      let graftCost = 0;
      if (graft === 'minor') graftCost = 450 * mult;
      else if (graft === 'major') graftCost = 2250 * mult;

      let postTotal = 0;
      let abutTotal = 0;
      let crownTotal = 0;

      if (type === 'allon4' || type === 'allon6') {
        postTotal = implantCount * postCostEach * mult;
        abutTotal = 0;
        crownTotal = archCost!;
      } else {
        postTotal = implantCount * postCostEach * mult;
        abutTotal = implantCount * abutCostEach * mult;
        crownTotal = crownCount * crownCostEach * mult;
      }

      const subtotal = postTotal + abutTotal + crownTotal + graftCost;
      const insOffset = Math.min(subtotal * (insPct / 100), insMax);
      const oop = subtotal - insOffset;

      document.getElementById('di3-total')!.textContent = '$' + Math.round(subtotal).toLocaleString();
      document.getElementById('di3-post')!.textContent = '$' + Math.round(postTotal).toLocaleString();
      document.getElementById('di3-abut')!.textContent = '$' + Math.round(abutTotal).toLocaleString();
      document.getElementById('di3-crn')!.textContent = (type === 'allon4' || type === 'allon6') ? '$' + Math.round(crownTotal).toLocaleString() + ' (arch)' : '$' + Math.round(crownTotal).toLocaleString();
      document.getElementById('di3-graftc')!.textContent = '$' + Math.round(graftCost).toLocaleString();
      document.getElementById('di3-insc')!.textContent = '-$' + Math.round(insOffset).toLocaleString();
      document.getElementById('di3-oop')!.textContent = '$' + Math.round(oop).toLocaleString();

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.di3-in').forEach(el => { el.addEventListener('input', calcDI3); el.addEventListener('change', calcDI3); });
      calcDI3();
    }, 50);
  </script>
</CalculatorLayout>
