---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Nail Salon Pricing Calculator - Manicure, Pedicure & Extensions";
const description = "Calculate nail service pricing for manicure, pedicure, gel, acrylic, and extension services with add-ons and tip estimation.";
const relatedCalcs = [
  { name: "Salon Revenue Calculator", url: "/salon-revenue-calculator", description: "Salon revenue projection." },
  { name: "Beauty Budget Calculator", url: "/beauty-budget-calculator", description: "Beauty spending breakdown." },
  { name: "Eyelash Extension Calculator", url: "/eyelash-extension-calculator", description: "Lash extension selection." },
  { name: "Permanent Makeup Calculator", url: "/permanent-makeup-calculator", description: "PMU cost and timeline." },
  { name: "Wax Quantity Calculator", url: "/wax-quantity-calculator", description: "Wax amount by body area." },
  { name: "Skincare Routine Calculator", url: "/skincare-routine-calculator", description: "Skincare product layering." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Nail Salon Pricing Calculator" keywords="nail salon pricing, manicure cost, pedicure cost, gel nails, acrylic nails, nail extensions, nail salon" breadcrumbs={[{ name: "Nail Salon Pricing", url: "/nail-salon-pricing-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Nail Salon Pricing Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate nail service costs including base service, add-ons, and gratuity.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Base Service</label>
          <select id="nsp-service" class="nsp-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="25">Basic Manicure ($25)</option>
            <option value="35">Gel Manicure ($35)</option>
            <option value="50">Acrylic Full Set ($50)</option>
            <option value="60">Dip Powder Manicure ($60)</option>
            <option value="30">Basic Pedicure ($30)</option>
            <option value="45">Gel Pedicure ($45)</option>
            <option value="55">Spa Pedicure ($55)</option>
            <option value="40" selected>Mani + Pedi Combo ($40)</option>
            <option value="70">Gel Mani + Pedi Combo ($70)</option>
            <option value="80">Acrylic Extensions ($80)</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-2">Add-On Services</label>
          <div class="space-y-2">
            <label class="flex items-center gap-2"><input type="checkbox" id="nsp-art" class="nsp-in"><span class="text-sm">Nail Art (per nail: $5-15)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="nsp-chrome" class="nsp-in"><span class="text-sm">Chrome / Mirror Finish (+$15)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="nsp-repair" class="nsp-in"><span class="text-sm">Nail Repair (+$5/nail)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="nsp-paraffin" class="nsp-in"><span class="text-sm">Paraffin Wax Treatment (+$15)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="nsp-removal" class="nsp-in"><span class="text-sm">Gel / Acrylic Removal (+$15)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="nsp-lengthext" class="nsp-in"><span class="text-sm">Length Extensions (+$20)</span></label>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Nail Art Nails Count</label><input type="number" id="nsp-artcount" class="nsp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" max="10" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Repair Nails Count</label><input type="number" id="nsp-repaircount" class="nsp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="0" max="10" step="1"></div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Tip Percentage</label>
          <select id="nsp-tip" class="nsp-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="0">No tip</option>
            <option value="15">15%</option>
            <option value="20" selected>20% (standard)</option>
            <option value="25">25% (generous)</option>
            <option value="30">30%</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Estimated Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="nsp-total">$0</div>
          <div class="text-sm text-blue-200 mt-1">including tip</div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Service Subtotal</div><div class="text-xl font-bold" id="nsp-subtotal">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Tip Amount</div><div class="text-xl font-bold" id="nsp-tipamt">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly (every 2 wks)</div><div class="text-xl font-bold" id="nsp-monthly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Cost</div><div class="text-xl font-bold" id="nsp-annual">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="nail-salon-pricing" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Nail Service Pricing Guide</h2>
      <p>Nail salon prices vary by location, salon tier, and services selected. A basic manicure averages $20-30, while gel manicures run $30-50. Acrylic full sets typically cost $40-80, and dip powder $50-70. Add-ons like nail art, chrome finishes, and spa treatments increase the total. Standard tipping is 15-20% of the pre-tax total. Regular visits every 2-3 weeks keep nails maintained.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcNSP() {
      const baseService = parseFloat((document.getElementById('nsp-service') as HTMLSelectElement).value);
      const tipPct = parseFloat((document.getElementById('nsp-tip') as HTMLSelectElement).value) / 100;
      const artCount = parseInt((document.getElementById('nsp-artcount') as HTMLInputElement).value) || 0;
      const repairCount = parseInt((document.getElementById('nsp-repaircount') as HTMLInputElement).value) || 0;

      let addOns = 0;
      if ((document.getElementById('nsp-art') as HTMLInputElement).checked) addOns += artCount * 10;
      if ((document.getElementById('nsp-chrome') as HTMLInputElement).checked) addOns += 15;
      if ((document.getElementById('nsp-repair') as HTMLInputElement).checked) addOns += repairCount * 5;
      if ((document.getElementById('nsp-paraffin') as HTMLInputElement).checked) addOns += 15;
      if ((document.getElementById('nsp-removal') as HTMLInputElement).checked) addOns += 15;
      if ((document.getElementById('nsp-lengthext') as HTMLInputElement).checked) addOns += 20;

      const subtotal = baseService + addOns;
      const tip = subtotal * tipPct;
      const total = subtotal + tip;
      const monthly = total * 2;
      const annual = total * 26;

      document.getElementById('nsp-total')!.textContent = '$' + total.toFixed(0);
      document.getElementById('nsp-subtotal')!.textContent = '$' + subtotal.toFixed(0);
      document.getElementById('nsp-tipamt')!.textContent = '$' + tip.toFixed(0);
      document.getElementById('nsp-monthly')!.textContent = '$' + monthly.toFixed(0);
      document.getElementById('nsp-annual')!.textContent = '$' + annual.toFixed(0);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.nsp-in').forEach(el => { el.addEventListener('input', calcNSP); el.addEventListener('change', calcNSP); });
      calcNSP();
    }, 50);
  </script>
</CalculatorLayout>
