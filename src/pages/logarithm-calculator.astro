---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Logarithm Calculator - Calculate log, ln, log₂";
const description = "Calculate logarithms with any base. Supports natural log (ln), common log (log₁₀), binary log (log₂), and custom bases.";
const relatedCalcs = [
  { name: "Exponent Calculator", url: "/exponent-calculator", description: "Exponents." },
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Scientific math." },
  { name: "Square Root", url: "/square-root-calculator", description: "Square roots." },
  { name: "Quadratic Equation", url: "/quadratic-equation-calculator", description: "Quadratics." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentages." },
  { name: "Fraction Calculator", url: "/fraction-calculator", description: "Fractions." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Logarithm Calculator" keywords="logarithm calculator, log calculator, natural log, ln, log base 2, log base 10" breadcrumbs={[{ name: "Logarithm", url: "/logarithm-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Logarithm Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate logarithms with any base — log, ln, log₂, and more.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Number (x)</label>
            <input type="number" id="lg-x" class="w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="100" min="0" step="1">
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">Base (b)</label>
            <input type="number" id="lg-base" class="w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="10" min="0" step="1">
          </div>
        </div>
        <div class="grid grid-cols-4 gap-2">
          <button class="lg-preset px-2 py-2 rounded-xl text-sm font-semibold border border-primary bg-blue-50 text-primary text-center" data-base="10">log₁₀</button>
          <button class="lg-preset px-2 py-2 rounded-xl text-sm font-semibold border border-border text-center" data-base="e">ln (base e)</button>
          <button class="lg-preset px-2 py-2 rounded-xl text-sm font-semibold border border-border text-center" data-base="2">log₂</button>
          <button class="lg-preset px-2 py-2 rounded-xl text-sm font-semibold border border-border text-center" data-base="custom">Custom</button>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1" id="lg-label">log₁₀(100)</div>
          <div class="text-5xl font-extrabold font-mono" id="lg-result">0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">log₁₀</div>
            <div class="text-xl font-bold font-mono" id="lg-log10">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">ln (natural)</div>
            <div class="text-xl font-bold font-mono" id="lg-ln">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">log₂</div>
            <div class="text-xl font-bold font-mono" id="lg-log2">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Inverse (b^result)</div>
            <div class="text-xl font-bold font-mono" id="lg-inverse">0</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="logarithm" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Logarithm Formulas</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>log_b(x)</strong> = ln(x) / ln(b)</p>
        <p><strong>log(xy)</strong> = log(x) + log(y)</p>
        <p><strong>log(x/y)</strong> = log(x) − log(y)</p>
        <p><strong>log(x^n)</strong> = n × log(x)</p>
      </div>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    let useBase = 'log10';
    function calcLog() {
      const x = parseFloat((document.getElementById('lg-x') as HTMLInputElement).value) || 0;
      const customBase = parseFloat((document.getElementById('lg-base') as HTMLInputElement).value) || 10;
      if (x <= 0) { document.getElementById('lg-result')!.textContent = 'undefined'; return; }
      const log10 = Math.log10(x);
      const ln = Math.log(x);
      const log2 = Math.log2(x);
      let result: number, label: string, base: number;
      if (useBase === 'e') { result = ln; label = `ln(${x})`; base = Math.E; }
      else if (useBase === '2') { result = log2; label = `log₂(${x})`; base = 2; }
      else if (useBase === 'custom') { base = customBase; result = base > 0 && base !== 1 ? Math.log(x)/Math.log(base) : 0; label = `log_${base}(${x})`; }
      else { result = log10; label = `log₁₀(${x})`; base = 10; }
      document.getElementById('lg-result')!.textContent = result.toFixed(8).replace(/\.?0+$/, '');
      document.getElementById('lg-label')!.textContent = label;
      document.getElementById('lg-log10')!.textContent = log10.toFixed(6);
      document.getElementById('lg-ln')!.textContent = ln.toFixed(6);
      document.getElementById('lg-log2')!.textContent = log2.toFixed(6);
      document.getElementById('lg-inverse')!.textContent = x.toString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      ['lg-x','lg-base'].forEach(id => document.getElementById(id)!.addEventListener('input', calcLog));
      document.querySelectorAll('.lg-preset').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.lg-preset').forEach(b => { b.classList.remove('border-primary','bg-blue-50','text-primary'); b.classList.add('border-border'); });
          btn.classList.remove('border-border'); btn.classList.add('border-primary','bg-blue-50','text-primary');
          const v = (btn as HTMLElement).dataset.base!;
          useBase = v === 'e' ? 'e' : v === '2' ? '2' : v === 'custom' ? 'custom' : 'log10';
          if (v === 'e') (document.getElementById('lg-base') as HTMLInputElement).value = '2.71828';
          else if (v !== 'custom') (document.getElementById('lg-base') as HTMLInputElement).value = v;
          calcLog();
        });
      });
      calcLog();
    }, 50);
  </script>
</CalculatorLayout>
