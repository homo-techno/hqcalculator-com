---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Dog Food Calculator - Daily Portions, Calories & Feeding Schedule";
const description = "Calculate your dog's daily food requirements based on weight, age, and activity level. Get calorie needs, portion sizes, and feeding schedule recommendations.";
const relatedCalcs = [
  { name: "Cat Food Calculator", url: "/cat-food-calculator", description: "Daily calorie and food portions for cats." },
  { name: "Dog Age Calculator", url: "/dog-age-calculator", description: "Convert dog years to human years." },
  { name: "Pet Food Calculator", url: "/pet-food-calculator", description: "General pet food portion calculator." },
  { name: "Dog BMI Calculator", url: "/dog-bmi-calculator", description: "Body condition score for dogs." },
  { name: "Pet Cost Calculator", url: "/pet-cost-calculator", description: "Annual pet ownership costs." },
  { name: "Animal Calorie Calculator", url: "/animal-calorie-calculator", description: "RER and MER for animals." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Dog Food Calculator" keywords="dog food calculator, dog calories, dog portion size, feeding schedule, dog diet" breadcrumbs={[{ name: "Dog Food", url: "/dog-food-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dog Food Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate daily food amount, calories needed, portion sizes, and feeding schedule for your dog.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Dog Weight (lbs)</label>
            <input type="number" id="df-weight" class="df-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="40" min="1" max="300" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Age Stage</label>
            <select id="df-age" class="df-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="puppy">Puppy (0-12 months)</option>
              <option value="adult" selected>Adult (1-7 years)</option>
              <option value="senior">Senior (7+ years)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Activity Level</label>
            <select id="df-activity" class="df-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="low">Low (couch potato)</option>
              <option value="moderate" selected>Moderate (daily walks)</option>
              <option value="high">High (working/sporting)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Food Calories (kcal/cup)</label>
            <input type="number" id="df-kcalcup" class="df-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="350" min="100" max="600" step="10">
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Meals Per Day</label>
          <select id="df-meals" class="df-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="1">1 meal</option>
            <option value="2" selected>2 meals</option>
            <option value="3">3 meals</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Daily Calories Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="df-result">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cups / Day</div><div class="text-xl font-bold font-mono" id="df-cups">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Per Meal</div><div class="text-xl font-bold font-mono" id="df-permeal">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Food / Day (oz)</div><div class="text-xl font-bold font-mono" id="df-oz">--</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">RER (kcal)</div><div class="text-xl font-bold font-mono" id="df-rer">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weekly Food</div><div class="text-xl font-bold font-mono" id="df-weekly">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Cost Est.</div><div class="text-xl font-bold font-mono" id="df-cost">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="dog-food" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDF() {
      const weight = parseFloat((document.getElementById('df-weight') as HTMLInputElement).value) || 0;
      const age = (document.getElementById('df-age') as HTMLSelectElement).value;
      const activity = (document.getElementById('df-activity') as HTMLSelectElement).value;
      const kcalCup = parseFloat((document.getElementById('df-kcalcup') as HTMLInputElement).value) || 350;
      const meals = parseInt((document.getElementById('df-meals') as HTMLSelectElement).value) || 2;

      const weightKg = weight * 0.4536;
      const rer = 70 * Math.pow(weightKg, 0.75);

      const ageFactors: Record<string, number> = { puppy: 2.5, adult: 1.6, senior: 1.2 };
      const activityFactors: Record<string, number> = { low: 0.8, moderate: 1.0, high: 1.4 };
      const ageFactor = ageFactors[age] || 1.6;
      const actFactor = activityFactors[activity] || 1.0;

      const dailyCal = rer * ageFactor * actFactor;
      const cupsPerDay = dailyCal / kcalCup;
      const perMeal = cupsPerDay / meals;
      const ozPerDay = cupsPerDay * 4;
      const weeklyFood = cupsPerDay * 7;
      const monthlyCost = (cupsPerDay * 30 / 15) * 25;

      document.getElementById('df-result')!.textContent = Math.round(dailyCal) + ' kcal';
      document.getElementById('df-cups')!.textContent = cupsPerDay.toFixed(1);
      document.getElementById('df-permeal')!.textContent = perMeal.toFixed(1) + ' cups';
      document.getElementById('df-oz')!.textContent = ozPerDay.toFixed(1);
      document.getElementById('df-rer')!.textContent = Math.round(rer).toString();
      document.getElementById('df-weekly')!.textContent = weeklyFood.toFixed(1) + ' cups';
      document.getElementById('df-cost')!.textContent = '$' + monthlyCost.toFixed(0);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.df-in').forEach(el => { el.addEventListener('input', calcDF); el.addEventListener('change', calcDF); });
      calcDF();
    }, 50);
  </script>
</CalculatorLayout>
