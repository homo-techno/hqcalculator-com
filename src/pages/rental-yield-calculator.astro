---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Rental Yield Calculator";
const description = "Calculate gross and net rental yield, cash flow, and cap rate for investment properties.";
const relatedCalcs = [
  { name: "Rent vs Buy", url: "/rent-vs-buy-calculator", description: "Rent vs buy." },
  { name: "Mortgage", url: "/mortgage-calculator", description: "Mortgage." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "ROI." },
  { name: "Property Tax", url: "/property-tax-calculator", description: "Tax." },
  { name: "Home Equity", url: "/home-equity-calculator", description: "Equity." },
  { name: "Cash Flow", url: "/cash-flow-calculator", description: "Cash flow." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Rental Yield Calculator" keywords="rental yield, cap rate, rental property ROI, gross yield, net yield, investment property" breadcrumbs={[{ name: "Rental Yield", url: "/rental-yield-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Rental Yield Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Analyze rental property returns with gross/net yield and cap rate.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Property Value ($)</label><input type="number" id="ry-value" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="300000" min="0" step="5000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Monthly Rent ($)</label><input type="number" id="ry-rent" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="2000" min="0" step="50"></div>
        </div>
        <h3 class="font-semibold text-sm text-text">Annual Expenses</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Mortgage Payment ($/yr)</label><input type="number" id="ry-mortgage" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="14400" min="0" step="100"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Property Tax ($/yr)</label><input type="number" id="ry-tax" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3600" min="0" step="100"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Insurance ($/yr)</label><input type="number" id="ry-ins" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1500" min="0" step="100"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Maintenance ($/yr)</label><input type="number" id="ry-maint" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2000" min="0" step="100"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Vacancy Rate (%)</label><input type="number" id="ry-vacancy" class="ry-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="0" max="50" step="1"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Net Rental Yield</div>
          <div class="text-5xl font-extrabold font-mono" id="ry-result">0%</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Gross Yield</div><div class="text-xl font-bold font-mono" id="ry-gross">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cap Rate</div><div class="text-xl font-bold font-mono" id="ry-cap">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cash Flow/mo</div><div class="text-xl font-bold font-mono" id="ry-cf">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Income</div><div class="text-xl font-bold font-mono" id="ry-income">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Expenses</div><div class="text-xl font-bold font-mono" id="ry-expenses">$0</div></div>
        </div>
        <div class="p-4 rounded-xl text-center" id="ry-status-box"><div class="font-bold text-sm" id="ry-status">-</div></div>
      </div>
      <ShareButton calculatorId="rental-yield" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRY() {
      const value = parseFloat((document.getElementById('ry-value') as HTMLInputElement).value) || 0;
      const rent = parseFloat((document.getElementById('ry-rent') as HTMLInputElement).value) || 0;
      const mortgage = parseFloat((document.getElementById('ry-mortgage') as HTMLInputElement).value) || 0;
      const tax = parseFloat((document.getElementById('ry-tax') as HTMLInputElement).value) || 0;
      const ins = parseFloat((document.getElementById('ry-ins') as HTMLInputElement).value) || 0;
      const maint = parseFloat((document.getElementById('ry-maint') as HTMLInputElement).value) || 0;
      const vacancy = parseFloat((document.getElementById('ry-vacancy') as HTMLInputElement).value) / 100 || 0;
      const annualRent = rent * 12 * (1 - vacancy);
      const operatingExpenses = tax + ins + maint;
      const totalExpenses = operatingExpenses + mortgage;
      const noi = annualRent - operatingExpenses;
      const netIncome = annualRent - totalExpenses;
      const grossYield = value > 0 ? (rent * 12 / value) * 100 : 0;
      const netYield = value > 0 ? (netIncome / value) * 100 : 0;
      const capRate = value > 0 ? (noi / value) * 100 : 0;
      const monthlyCF = netIncome / 12;
      document.getElementById('ry-result')!.textContent = netYield.toFixed(2) + '%';
      document.getElementById('ry-gross')!.textContent = grossYield.toFixed(2) + '%';
      document.getElementById('ry-cap')!.textContent = capRate.toFixed(2) + '%';
      document.getElementById('ry-cf')!.textContent = (monthlyCF >= 0 ? '+$' : '-$') + Math.abs(monthlyCF).toFixed(0);
      document.getElementById('ry-income')!.textContent = '$' + annualRent.toFixed(0);
      document.getElementById('ry-expenses')!.textContent = '$' + totalExpenses.toFixed(0);
      let status: string, color: string;
      if (capRate >= 8) { status = 'Excellent cap rate — strong investment'; color = 'bg-green-50 text-green-800'; }
      else if (capRate >= 5) { status = 'Good cap rate — solid returns'; color = 'bg-blue-50 text-blue-800'; }
      else if (capRate >= 3) { status = 'Average cap rate'; color = 'bg-yellow-50 text-yellow-800'; }
      else { status = 'Low cap rate — consider alternatives'; color = 'bg-red-50 text-red-800'; }
      document.getElementById('ry-status')!.textContent = status;
      document.getElementById('ry-status-box')!.className = `p-4 rounded-xl text-center ${color}`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ry-in').forEach(el => { el.addEventListener('input', calcRY); el.addEventListener('change', calcRY); });
      calcRY();
    }, 50);
  </script>
</CalculatorLayout>
