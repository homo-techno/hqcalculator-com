---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Audio File Size Calculator - Sample Rate, Bit Depth & Duration";
const description = "Calculate audio file size from sample rate, bit depth, channels, and duration. Compare uncompressed vs compressed formats and bitrates.";
const relatedCalcs = [
  { name: "Data Storage Converter", url: "/data-storage-converter", description: "Convert data sizes." },
  { name: "Internet Speed Calculator", url: "/internet-speed-calculator", description: "Internet speed." },
  { name: "Frequency Calculator", url: "/frequency-calculator", description: "Convert frequency units." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage math." },
  { name: "Ratio Calculator", url: "/ratio-calculator", description: "Solve ratios." },
  { name: "Reading Time Calculator", url: "/reading-time-calculator", description: "Reading time." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Audio File Size Calculator" keywords="audio file size, sample rate, bit depth, wav size, mp3 size, bitrate, audio compression, file size calculator" breadcrumbs={[{ name: "Audio File Size", url: "/audio-file-size-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Audio File Size Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate audio file sizes for different formats, sample rates, and bit depths.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Sample Rate</label>
            <select id="af-sr" class="af-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="22050">22,050 Hz</option>
              <option value="44100" selected>44,100 Hz (CD)</option>
              <option value="48000">48,000 Hz (Video)</option>
              <option value="88200">88,200 Hz</option>
              <option value="96000">96,000 Hz (Hi-Res)</option>
              <option value="176400">176,400 Hz</option>
              <option value="192000">192,000 Hz (Studio)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Bit Depth</label>
            <select id="af-bd" class="af-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="8">8-bit</option>
              <option value="16" selected>16-bit (CD)</option>
              <option value="24">24-bit (Studio)</option>
              <option value="32">32-bit Float</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Channels</label>
            <select id="af-ch" class="af-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="1">Mono (1)</option>
              <option value="2" selected>Stereo (2)</option>
              <option value="6">5.1 Surround (6)</option>
              <option value="8">7.1 Surround (8)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Duration (minutes)</label>
            <input type="number" id="af-dur" class="af-in w-full px-4 py-3 border border-border rounded-xl text-lg" min="0.1" max="999" step="0.1">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Uncompressed (WAV/AIFF) Size</div>
          <div class="text-4xl font-extrabold font-mono" id="af-wav">0 MB</div>
          <div class="text-sm text-blue-200 mt-1" id="af-bitrate">0 kbps</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">FLAC (lossless ~60%)</div><div class="text-xl font-bold font-mono" id="af-flac">0 MB</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">ALAC (lossless ~65%)</div><div class="text-xl font-bold font-mono" id="af-alac">0 MB</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">MP3 128 kbps</div><div class="text-xl font-bold font-mono" id="af-mp3-128">0 MB</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">MP3 320 kbps</div><div class="text-xl font-bold font-mono" id="af-mp3-320">0 MB</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">AAC 256 kbps</div><div class="text-xl font-bold font-mono" id="af-aac">0 MB</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">OGG Vorbis 192 kbps</div><div class="text-xl font-bold font-mono" id="af-ogg">0 MB</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Dynamic Range</div><div class="text-xl font-bold font-mono" id="af-dr">0 dB</div></div>
        </div>
      </div>
      <ShareButton calculatorId="audio-file-size" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function fmtSize(bytes: number): string {
      if (bytes >= 1073741824) return (bytes / 1073741824).toFixed(2) + ' GB';
      if (bytes >= 1048576) return (bytes / 1048576).toFixed(2) + ' MB';
      if (bytes >= 1024) return (bytes / 1024).toFixed(1) + ' KB';
      return bytes.toFixed(0) + ' B';
    }

    function calcAF() {
      const sr = parseInt((document.getElementById('af-sr') as HTMLSelectElement).value);
      const bd = parseInt((document.getElementById('af-bd') as HTMLSelectElement).value);
      const ch = parseInt((document.getElementById('af-ch') as HTMLSelectElement).value);
      const dur = parseFloat((document.getElementById('af-dur') as HTMLInputElement).value) || 0;

      if (dur <= 0) return;

      const durSec = dur * 60;
      const bytesPerSample = bd / 8;
      const rawBytes = sr * bytesPerSample * ch * durSec;
      const bitrateKbps = sr * bd * ch / 1000;

      document.getElementById('af-wav')!.textContent = fmtSize(rawBytes);
      document.getElementById('af-bitrate')!.textContent = bitrateKbps.toFixed(0) + ' kbps';

      document.getElementById('af-flac')!.textContent = fmtSize(rawBytes * 0.60);
      document.getElementById('af-alac')!.textContent = fmtSize(rawBytes * 0.65);

      const mp3_128 = 128 * 1000 / 8 * durSec;
      const mp3_320 = 320 * 1000 / 8 * durSec;
      const aac_256 = 256 * 1000 / 8 * durSec;
      const ogg_192 = 192 * 1000 / 8 * durSec;

      document.getElementById('af-mp3-128')!.textContent = fmtSize(mp3_128);
      document.getElementById('af-mp3-320')!.textContent = fmtSize(mp3_320);
      document.getElementById('af-aac')!.textContent = fmtSize(aac_256);
      document.getElementById('af-ogg')!.textContent = fmtSize(ogg_192);

      const dynamicRange = bd * 6.02 + 1.76;
      document.getElementById('af-dr')!.textContent = dynamicRange.toFixed(1) + ' dB';

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      (document.getElementById('af-dur') as HTMLInputElement).value = '5';
      document.querySelectorAll('.af-in').forEach(el => { el.addEventListener('input', calcAF); el.addEventListener('change', calcAF); });
      calcAF();
    }, 50);
  </script>
</CalculatorLayout>
