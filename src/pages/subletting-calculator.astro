---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Subletting Calculator";
const description = "Calculate sublet profit or loss, master lease arbitrage margins, legal compliance considerations, and monthly cash flow from subletting.";
const relatedCalcs = [
  { name: "Rental Yield", url: "/rental-yield-calculator", description: "Rental yield analysis." },
  { name: "Rental Property", url: "/rental-property-calculator", description: "Rental property ROI." },
  { name: "Rent vs Buy", url: "/rent-vs-buy-calculator", description: "Rent vs buy comparison." },
  { name: "Cash Flow", url: "/cash-flow-calculator", description: "Cash flow analysis." },
  { name: "Commercial Rent", url: "/commercial-rent-calculator", description: "Commercial lease costs." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Subletting Calculator" keywords="subletting, sublet profit, master lease, rental arbitrage, sublet cash flow, sublease" breadcrumbs={[{ name: "Subletting", url: "/subletting-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Subletting Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Analyze sublet profitability, master lease arbitrage potential, and monthly cash flow.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <h3 class="font-semibold text-sm text-text">Master Lease / Your Lease</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Your Monthly Rent ($)</label><input type="number" id="su2-rent" class="su2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="2000" min="0" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Lease Term (months)</label><input type="number" id="su2-term" class="su2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="12" min="1" max="60" step="1"></div>
        </div>
        <h3 class="font-semibold text-sm text-text">Sublet Details</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Sublet Monthly Rent ($)</label><input type="number" id="su2-subrent" class="su2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2500" min="0" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Expected Occupancy (%)</label><input type="number" id="su2-occupancy" class="su2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="85" min="0" max="100" step="5"></div>
        </div>
        <h3 class="font-semibold text-sm text-text">Expenses</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Furnishing Cost ($, one-time)</label><input type="number" id="su2-furnish" class="su2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3000" min="0" step="500"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Monthly Utilities ($)</label><input type="number" id="su2-util" class="su2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="150" min="0" step="25"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Monthly Cleaning ($)</label><input type="number" id="su2-clean" class="su2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="0" step="25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Platform Fees (%)</label><input type="number" id="su2-platform" class="su2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="0" max="20" step="0.5"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Monthly Cash Flow</div>
          <div class="text-5xl font-extrabold font-mono" id="su2-cashflow">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Effective Sublet Income</div><div class="text-xl font-bold font-mono" id="su2-effective">$0/mo</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Monthly Costs</div><div class="text-xl font-bold font-mono" id="su2-totalcost">$0/mo</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Profit</div><div class="text-xl font-bold font-mono" id="su2-annualprofit">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Lease-Term Profit</div><div class="text-xl font-bold font-mono" id="su2-termprofit">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Furnishing Payback</div><div class="text-xl font-bold font-mono" id="su2-payback">-- months</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Arbitrage Margin</div><div class="text-xl font-bold font-mono" id="su2-margin">0%</div></div>
        </div>
        <div class="p-4 rounded-xl text-center" id="su2-status-box"><div class="font-bold text-sm" id="su2-status">-</div></div>
      </div>
      <ShareButton calculatorId="subletting" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSU2() {
      const rent = parseFloat((document.getElementById('su2-rent') as HTMLInputElement).value) || 0;
      const term = parseFloat((document.getElementById('su2-term') as HTMLInputElement).value) || 12;
      const subRent = parseFloat((document.getElementById('su2-subrent') as HTMLInputElement).value) || 0;
      const occupancy = parseFloat((document.getElementById('su2-occupancy') as HTMLInputElement).value) / 100 || 0;
      const furnish = parseFloat((document.getElementById('su2-furnish') as HTMLInputElement).value) || 0;
      const util = parseFloat((document.getElementById('su2-util') as HTMLInputElement).value) || 0;
      const clean = parseFloat((document.getElementById('su2-clean') as HTMLInputElement).value) || 0;
      const platformPct = parseFloat((document.getElementById('su2-platform') as HTMLInputElement).value) || 0;

      const effectiveIncome = subRent * occupancy;
      const platformFee = effectiveIncome * (platformPct / 100);
      const monthlyExpenses = rent + util + clean + platformFee;
      const monthlyCashFlow = effectiveIncome - monthlyExpenses;
      const amortizedFurnish = furnish / term;
      const netMonthlyCF = monthlyCashFlow - amortizedFurnish;
      const annualProfit = netMonthlyCF * 12;
      const termProfit = monthlyCashFlow * term - furnish;
      const paybackMonths = monthlyCashFlow > 0 ? Math.ceil(furnish / monthlyCashFlow) : 0;
      const margin = rent > 0 ? ((effectiveIncome - rent) / rent) * 100 : 0;

      const fmt = (v: number) => (v >= 0 ? '$' : '-$') + Math.abs(v).toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('su2-cashflow')!.textContent = fmt(netMonthlyCF);
      document.getElementById('su2-effective')!.textContent = '$' + effectiveIncome.toFixed(0) + '/mo';
      document.getElementById('su2-totalcost')!.textContent = '$' + monthlyExpenses.toFixed(0) + '/mo';
      document.getElementById('su2-annualprofit')!.textContent = fmt(annualProfit);
      document.getElementById('su2-termprofit')!.textContent = fmt(termProfit);
      document.getElementById('su2-payback')!.textContent = paybackMonths > 0 ? paybackMonths + ' months' : 'N/A';
      document.getElementById('su2-margin')!.textContent = margin.toFixed(1) + '%';

      let status: string, color: string;
      if (termProfit > furnish) { status = 'Profitable sublet with strong margins'; color = 'bg-green-50 text-green-800'; }
      else if (termProfit > 0) { status = 'Marginally profitable — monitor expenses closely'; color = 'bg-blue-50 text-blue-800'; }
      else if (monthlyCashFlow > 0) { status = 'Positive cash flow but furnishing costs reduce profit'; color = 'bg-yellow-50 text-yellow-800'; }
      else { status = 'Not profitable — sublet income below costs'; color = 'bg-red-50 text-red-800'; }

      document.getElementById('su2-status')!.textContent = status;
      document.getElementById('su2-status-box')!.className = `p-4 rounded-xl text-center ${color}`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.su2-in').forEach(el => { el.addEventListener('input', calcSU2); el.addEventListener('change', calcSU2); });
      calcSU2();
    }, 50);
  </script>
</CalculatorLayout>
