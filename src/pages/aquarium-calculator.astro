---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Aquarium Calculator - Volume, Weight & Fish";
const description = "Calculate aquarium volume, water weight, heater size, and fish stocking capacity.";
const relatedCalcs = [
  { name: "Pool Volume", url: "/pool-volume-calculator", description: "Pool." },
  { name: "Volume Calculator", url: "/volume-calculator", description: "Volume." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight." },
  { name: "Density Calculator", url: "/density-calculator", description: "Density." },
  { name: "Temperature Converter", url: "/temperature-converter", description: "Temperature." },
  { name: "Pet Food", url: "/pet-food-calculator", description: "Pet food." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Aquarium Calculator" keywords="aquarium calculator, fish tank volume, aquarium gallons, fish stocking, aquarium heater size" breadcrumbs={[{ name: "Aquarium", url: "/aquarium-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Aquarium Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate tank volume, weight, and stocking capacity.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-3 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Length (inches)</label><input type="number" id="aq-l" class="aq2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="48" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Width (inches)</label><input type="number" id="aq-w" class="aq2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Height (inches)</label><input type="number" id="aq-h" class="aq2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="18" min="0" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Tank Volume</div>
          <div class="text-5xl font-extrabold font-mono" id="aq-result">0 gal</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Liters</div><div class="text-xl font-bold font-mono" id="aq-liters">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Water Weight</div><div class="text-xl font-bold font-mono" id="aq-weight">0 lbs</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Heater Watts</div><div class="text-xl font-bold font-mono" id="aq-heater">0 W</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Fish Capacity (1"/gal)</div><div class="text-xl font-bold font-mono" id="aq-fish">0 inches</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Gravel (lbs, 1")</div><div class="text-xl font-bold font-mono" id="aq-gravel">0 lbs</div></div>
        </div>
      </div>
      <ShareButton calculatorId="aquarium" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcAQ2() {
      const l = parseFloat((document.getElementById('aq-l') as HTMLInputElement).value) || 0;
      const w = parseFloat((document.getElementById('aq-w') as HTMLInputElement).value) || 0;
      const h = parseFloat((document.getElementById('aq-h') as HTMLInputElement).value) || 0;
      const cubicIn = l * w * h;
      const gallons = cubicIn / 231;
      const liters = gallons * 3.785;
      const weight = gallons * 8.34;
      const heater = Math.ceil(gallons * 5);
      const fish = Math.floor(gallons);
      const gravel = Math.round(l * w / 144 * 10);
      document.getElementById('aq-result')!.textContent = gallons.toFixed(1) + ' gal';
      document.getElementById('aq-liters')!.textContent = liters.toFixed(1);
      document.getElementById('aq-weight')!.textContent = weight.toFixed(0) + ' lbs';
      document.getElementById('aq-heater')!.textContent = heater + ' W';
      document.getElementById('aq-fish')!.textContent = fish + ' inches';
      document.getElementById('aq-gravel')!.textContent = gravel + ' lbs';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.aq2-in').forEach(el => { el.addEventListener('input', calcAQ2); el.addEventListener('change', calcAQ2); });
      calcAQ2();
    }, 50);
  </script>
</CalculatorLayout>
