---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Greenhouse Calculator - Heating BTU & Cost Estimator";
const description = "Calculate greenhouse heating requirements including BTU needed, heater size, and estimated heating costs based on dimensions and insulation.";
const relatedCalcs = [
  { name: "Garden Spacing", url: "/garden-spacing-calculator", description: "Plan garden bed layouts." },
  { name: "Seed Calculator", url: "/seed-calculator", description: "Seeds needed for planting." },
  { name: "Fertilizer Calculator", url: "/fertilizer-calculator", description: "Calculate fertilizer needs." },
  { name: "Irrigation Calculator", url: "/irrigation-calculator", description: "Plan irrigation schedules." },
  { name: "Harvest Date Calculator", url: "/harvest-date-calculator", description: "Predict harvest dates." },
  { name: "Compost Calculator", url: "/compost-calculator", description: "Get compost ratio right." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Greenhouse Calculator" keywords="greenhouse calculator, greenhouse heating, BTU calculator, greenhouse heater size, greenhouse cost, R-value" breadcrumbs={[{ name: "Greenhouse", url: "/greenhouse-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Greenhouse Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate heating requirements, heater size, and estimated costs for your greenhouse.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-3 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Length (ft)</label>
            <input type="number" id="gh-length" class="gh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="0" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Width (ft)</label>
            <input type="number" id="gh-width" class="gh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Height (ft)</label>
            <input type="number" id="gh-height" class="gh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="1">
          </div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">R-Value</label>
            <select id="gh-rval" class="gh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="0.83">Single Glass (0.83)</option>
              <option value="1.43" selected>Double Glass (1.43)</option>
              <option value="1.67">Polycarbonate (1.67)</option>
              <option value="2.0">Double Polycarb (2.0)</option>
              <option value="0.87">Polyethylene Film (0.87)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Outdoor Temp (&deg;F)</label>
            <input type="number" id="gh-outdoor" class="gh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Desired Temp (&deg;F)</label>
            <input type="number" id="gh-desired" class="gh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="65" step="1">
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Energy Cost ($/therm or $/kWh)</label>
          <input type="number" id="gh-ecost" class="gh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1.20" min="0" step="0.01">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">BTU/hr Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="gh-result">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Heater Size</div><div class="text-xl font-bold font-mono" id="gh-heater">0 BTU</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Surface Area</div><div class="text-xl font-bold font-mono" id="gh-surface">0 ft&sup2;</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Temp Diff</div><div class="text-xl font-bold font-mono" id="gh-diff">0&deg;F</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Est. Cost / Night (12hr)</div><div class="text-xl font-bold font-mono" id="gh-nightcost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Est. Monthly Cost</div><div class="text-xl font-bold font-mono" id="gh-monthcost">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="greenhouse" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcGH() {
      const length = parseFloat((document.getElementById('gh-length') as HTMLInputElement).value) || 0;
      const width = parseFloat((document.getElementById('gh-width') as HTMLInputElement).value) || 0;
      const height = parseFloat((document.getElementById('gh-height') as HTMLInputElement).value) || 0;
      const rVal = parseFloat((document.getElementById('gh-rval') as HTMLSelectElement).value) || 1;
      const outdoor = parseFloat((document.getElementById('gh-outdoor') as HTMLInputElement).value) || 0;
      const desired = parseFloat((document.getElementById('gh-desired') as HTMLInputElement).value) || 0;
      const eCost = parseFloat((document.getElementById('gh-ecost') as HTMLInputElement).value) || 0;
      // Surface area: 2 walls + 2 end walls + roof
      const wallArea = 2 * (length * height) + 2 * (width * height);
      const roofArea = length * width;
      const totalSurface = wallArea + roofArea;
      const tempDiff = desired - outdoor;
      // BTU/hr = Surface Area * Temp Diff / R-Value * 1.1 (safety factor)
      const btuHr = (totalSurface * tempDiff / rVal) * 1.1;
      // Recommend next standard heater size
      const heaterSizes = [10000, 15000, 20000, 25000, 30000, 40000, 50000, 60000, 75000, 100000];
      let heater = heaterSizes[heaterSizes.length - 1];
      for (const s of heaterSizes) {
        if (s >= btuHr) { heater = s; break; }
      }
      // Cost: BTU per therm = 100,000. Cost per night (12hrs)
      const thermsPerHour = btuHr / 100000;
      const nightCost = thermsPerHour * 12 * eCost;
      const monthCost = nightCost * 30;
      document.getElementById('gh-result')!.textContent = Math.round(btuHr).toLocaleString();
      document.getElementById('gh-heater')!.textContent = heater.toLocaleString() + ' BTU';
      document.getElementById('gh-surface')!.textContent = Math.round(totalSurface) + ' ft\u00B2';
      document.getElementById('gh-diff')!.textContent = tempDiff + '\u00B0F';
      document.getElementById('gh-nightcost')!.textContent = '$' + nightCost.toFixed(2);
      document.getElementById('gh-monthcost')!.textContent = '$' + monthCost.toFixed(0);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.gh-in').forEach(el => { el.addEventListener('input', calcGH); el.addEventListener('change', calcGH); });
      calcGH();
    }, 50);
  </script>
</CalculatorLayout>
