---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Insulation Calculator";
const description = "Calculate insulation needed by area, R-value requirements, and material coverage for walls, attics, and floors.";
const relatedCalcs = [
  { name: "HVAC", url: "/hvac-calculator", description: "HVAC." },
  { name: "Electricity Cost", url: "/electricity-cost-calculator", description: "Electric." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Drywall", url: "/drywall-calculator", description: "Drywall." },
  { name: "Window", url: "/window-calculator", description: "Windows." },
  { name: "Brick", url: "/brick-calculator", description: "Bricks." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Insulation Calculator" keywords="insulation calculator, R-value, insulation coverage, fiberglass insulation, blown insulation, attic insulation" breadcrumbs={[{ name: "Insulation", url: "/insulation-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Insulation Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate insulation material for your project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="flex gap-2">
          <button class="ins-type flex-1 py-2 rounded-xl font-bold text-sm border-2 border-primary bg-blue-50 text-primary" data-type="batt">Batt/Roll</button>
          <button class="ins-type flex-1 py-2 rounded-xl font-bold text-sm border-2 border-border text-text-muted" data-type="blown">Blown-In</button>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Area Length (ft)</label><input type="number" id="ins-len" class="ins-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="40" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Area Width (ft)</label><input type="number" id="ins-wid" class="ins-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="30" min="0" step="1"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Target R-Value</label>
          <select id="ins-rval" class="ins-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="13">R-13 (2x4 wall)</option>
            <option value="19">R-19 (2x6 wall / floor)</option>
            <option value="30" selected>R-30 (attic, warm climate)</option>
            <option value="38">R-38 (attic, moderate)</option>
            <option value="49">R-49 (attic, cold climate)</option>
            <option value="60">R-60 (attic, very cold)</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1" id="ins-result-label">Rolls Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="ins-result">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Area</div><div class="text-lg font-bold font-mono" id="ins-area">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Thickness</div><div class="text-lg font-bold font-mono" id="ins-thick">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Est. Cost</div><div class="text-lg font-bold font-mono" id="ins-cost">$0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">R-Value Guide</h3>
          <div class="text-xs space-y-1" id="ins-guide">
            <div class="flex justify-between"><span>R-13</span><span>2×4 walls (3.5")</span></div>
            <div class="flex justify-between"><span>R-19</span><span>2×6 walls / floors (6.25")</span></div>
            <div class="flex justify-between"><span>R-30</span><span>Attic - warm zones (10")</span></div>
            <div class="flex justify-between"><span>R-38</span><span>Attic - moderate (12")</span></div>
            <div class="flex justify-between"><span>R-49</span><span>Attic - cold zones (16")</span></div>
            <div class="flex justify-between"><span>R-60</span><span>Attic - very cold (20")</span></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="insulation" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    let insType = 'batt';
    function calcINS() {
      const len = parseFloat((document.getElementById('ins-len') as HTMLInputElement).value) || 0;
      const wid = parseFloat((document.getElementById('ins-wid') as HTMLInputElement).value) || 0;
      const rVal = parseInt((document.getElementById('ins-rval') as HTMLSelectElement).value);
      const area = len * wid;
      const thicknessMap: Record<number, number> = { 13: 3.5, 19: 6.25, 30: 10, 38: 12, 49: 16, 60: 20 };
      const thickness = thicknessMap[rVal] || 10;
      if (insType === 'batt') {
        const rollCoverage = rVal <= 19 ? 40 : 32;
        const rolls = Math.ceil(area / rollCoverage);
        const costPerRoll = rVal <= 19 ? 35 : 55;
        document.getElementById('ins-result-label')!.textContent = 'Rolls Needed';
        document.getElementById('ins-result')!.textContent = rolls.toLocaleString();
        document.getElementById('ins-cost')!.textContent = '$' + (rolls * costPerRoll).toLocaleString();
      } else {
        const bagsPerSqFt = thickness / 12 * 0.6;
        const bags = Math.ceil(area * bagsPerSqFt / 2.5);
        const costPerBag = 15;
        document.getElementById('ins-result-label')!.textContent = 'Bags Needed';
        document.getElementById('ins-result')!.textContent = bags.toLocaleString();
        document.getElementById('ins-cost')!.textContent = '$' + (bags * costPerBag).toLocaleString();
      }
      document.getElementById('ins-area')!.textContent = area.toFixed(0) + ' ft²';
      document.getElementById('ins-thick')!.textContent = thickness + '"';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ins-type').forEach(b => b.addEventListener('click', () => {
        insType = (b as HTMLButtonElement).dataset.type!;
        document.querySelectorAll('.ins-type').forEach(btn => {
          const active = (btn as HTMLButtonElement).dataset.type === insType;
          (btn as HTMLButtonElement).className = `ins-type flex-1 py-2 rounded-xl font-bold text-sm border-2 ${active ? 'border-primary bg-blue-50 text-primary' : 'border-border text-text-muted'}`;
        });
        calcINS();
      }));
      document.querySelectorAll('.ins-in').forEach(el => { el.addEventListener('input', calcINS); el.addEventListener('change', calcINS); });
      calcINS();
    }, 50);
  </script>
</CalculatorLayout>
