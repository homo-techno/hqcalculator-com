---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Lumber Calculator - Board Feet & Cost Estimator";
const description = "Calculate board feet, linear feet, and cost for lumber. Convert between dimensional lumber sizes.";
const relatedCalcs = [
  { name: "Deck Calculator", url: "/deck-calculator", description: "Deck." },
  { name: "Concrete Calculator", url: "/concrete-calculator", description: "Concrete." },
  { name: "Fencing Calculator", url: "/fencing-calculator", description: "Fencing." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq footage." },
  { name: "Gravel Calculator", url: "/gravel-calculator", description: "Gravel." },
  { name: "Stair Calculator", url: "/stair-calculator", description: "Stairs." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Lumber Calculator" keywords="lumber calculator, board feet, linear feet, lumber cost, dimensional lumber, board foot calculator" breadcrumbs={[{ name: "Lumber", url: "/lumber-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Lumber Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate board feet and cost for your lumber needs.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Thickness (in)</label><input type="number" id="lb-t" class="lb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0.25" step="0.25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Width (in)</label><input type="number" id="lb-w" class="lb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="0.5" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Length (ft)</label><input type="number" id="lb-l" class="lb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Quantity</label><input type="number" id="lb-qty" class="lb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="1" step="1"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Price per Board Foot ($)</label><input type="number" id="lb-price" class="lb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5.50" min="0" step="0.25"></div>
        <div class="flex gap-2 flex-wrap">
          <button class="lb-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-t="2" data-w="4">2x4</button>
          <button class="lb-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-t="2" data-w="6">2x6</button>
          <button class="lb-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-t="2" data-w="8">2x8</button>
          <button class="lb-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-t="2" data-w="10">2x10</button>
          <button class="lb-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-t="2" data-w="12">2x12</button>
          <button class="lb-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-t="4" data-w="4">4x4</button>
          <button class="lb-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-t="1" data-w="6">1x6</button>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Board Feet</div>
          <div class="text-5xl font-extrabold font-mono" id="lb-bf">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Per Piece (BF)</div><div class="text-xl font-bold font-mono" id="lb-each">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Linear Feet</div><div class="text-xl font-bold font-mono" id="lb-lf">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Cost</div><div class="text-xl font-bold" id="lb-cost">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost per Piece</div><div class="text-xl font-bold" id="lb-cpp">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost per Lin Ft</div><div class="text-xl font-bold" id="lb-cplf">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="lumber" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcLumber() {
      const t = parseFloat((document.getElementById('lb-t') as HTMLInputElement).value) || 0;
      const w = parseFloat((document.getElementById('lb-w') as HTMLInputElement).value) || 0;
      const l = parseFloat((document.getElementById('lb-l') as HTMLInputElement).value) || 0;
      const qty = parseInt((document.getElementById('lb-qty') as HTMLInputElement).value) || 1;
      const price = parseFloat((document.getElementById('lb-price') as HTMLInputElement).value) || 0;
      const bfEach = (t * w * l) / 12;
      const totalBF = bfEach * qty;
      const totalLF = l * qty;
      const totalCost = totalBF * price;
      document.getElementById('lb-bf')!.textContent = totalBF.toFixed(2);
      document.getElementById('lb-each')!.textContent = bfEach.toFixed(2);
      document.getElementById('lb-lf')!.textContent = totalLF.toFixed(1);
      document.getElementById('lb-cost')!.textContent = '$' + totalCost.toFixed(2);
      document.getElementById('lb-cpp')!.textContent = '$' + (bfEach * price).toFixed(2);
      document.getElementById('lb-cplf')!.textContent = '$' + (l > 0 ? (bfEach * price / l).toFixed(2) : '0');
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.lb-in').forEach(el => el.addEventListener('input', calcLumber));
      document.querySelectorAll('.lb-preset').forEach(btn => btn.addEventListener('click', () => {
        (document.getElementById('lb-t') as HTMLInputElement).value = (btn as HTMLElement).dataset.t!;
        (document.getElementById('lb-w') as HTMLInputElement).value = (btn as HTMLElement).dataset.w!;
        calcLumber();
      }));
      calcLumber();
    }, 50);
  </script>
</CalculatorLayout>
