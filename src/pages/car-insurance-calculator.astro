---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Car Insurance Calculator - Estimate Your Premium";
const description = "Estimate your car insurance premium based on vehicle value, age, coverage type, and deductible amount.";

const relatedCalcs = [
  { name: "Auto Loan", url: "/auto-loan-calculator", description: "Auto loan payments." },
  { name: "Gas Mileage", url: "/gas-mileage-calculator", description: "Fuel costs." },
  { name: "Life Insurance", url: "/life-insurance-calculator", description: "Life coverage." },
  { name: "Umbrella Insurance", url: "/umbrella-insurance-calculator", description: "Umbrella coverage." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Lease Calculator", url: "/lease-calculator", description: "Lease payments." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Car Insurance Calculator" keywords="car insurance calculator, auto insurance estimate, premium, liability, collision, comprehensive, deductible" breadcrumbs={[{ name: "Car Insurance", url: "/car-insurance-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Car Insurance Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate your annual car insurance premium based on your vehicle and coverage preferences.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Vehicle Value</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="ci-value" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="30000" min="0" step="1000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Vehicle Age (years)</label>
            <input type="number" id="ci-age" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="3" min="0" max="30" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Coverage Type</label>
            <select id="ci-coverage" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="liability">Liability Only</option>
              <option value="collision" selected>Liability + Collision</option>
              <option value="comprehensive">Full Coverage (Comprehensive)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Deductible</label>
            <select id="ci-deductible" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="250">$250</option>
              <option value="500" selected>$500</option>
              <option value="1000">$1,000</option>
              <option value="2000">$2,000</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Driver Age</label>
            <input type="number" id="ci-driver-age" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="35" min="16" max="90" step="1">
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Annual Premium</div>
            <div class="text-5xl font-extrabold font-mono" id="ci-annual">$0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Monthly Cost</div>
              <div class="text-xl font-bold text-secondary" id="ci-monthly">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">6-Month Premium</div>
              <div class="text-xl font-bold" id="ci-semi">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Liability Portion</div>
              <div class="text-xl font-bold text-green-600" id="ci-liability">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Collision/Comp Portion</div>
              <div class="text-xl font-bold text-orange-600" id="ci-extra">$0</div>
            </div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="car-insurance" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Understanding Car Insurance Coverage</h2>
      <p><strong>Liability only</strong> covers damage you cause to others. <strong>Collision</strong> adds coverage for your vehicle in accidents. <strong>Comprehensive</strong> adds protection against theft, weather, and non-collision damage.</p>
      <h3 class="text-xl font-semibold text-text mt-8">How Deductibles Affect Premiums</h3>
      <p>Higher deductibles mean lower premiums but more out-of-pocket cost when filing a claim. Choose a deductible you can comfortably afford in an emergency.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcCI() {
      const value = parseFloat((document.getElementById('ci-value') as HTMLInputElement).value) || 0;
      const vehicleAge = parseInt((document.getElementById('ci-age') as HTMLInputElement).value) || 0;
      const coverage = (document.getElementById('ci-coverage') as HTMLSelectElement).value;
      const deductible = parseFloat((document.getElementById('ci-deductible') as HTMLSelectElement).value) || 500;
      const driverAge = parseInt((document.getElementById('ci-driver-age') as HTMLInputElement).value) || 35;

      // Base liability cost
      let liabilityCost = 600;

      // Driver age factor
      let ageFactor = 1.0;
      if (driverAge < 20) ageFactor = 2.0;
      else if (driverAge < 25) ageFactor = 1.5;
      else if (driverAge < 30) ageFactor = 1.15;
      else if (driverAge > 65) ageFactor = 1.2;

      liabilityCost *= ageFactor;

      // Collision/comprehensive based on vehicle value
      let extraCost = 0;
      if (coverage === 'collision' || coverage === 'comprehensive') {
        const collisionRate = 0.035; // 3.5% of vehicle value
        extraCost = value * collisionRate;
        // Adjust for vehicle age (older = cheaper)
        extraCost *= Math.max(0.4, 1 - vehicleAge * 0.06);
        // Adjust for deductible (higher deductible = lower premium)
        const dedFactor = deductible <= 250 ? 1.2 : deductible <= 500 ? 1.0 : deductible <= 1000 ? 0.85 : 0.7;
        extraCost *= dedFactor;
      }
      if (coverage === 'comprehensive') {
        extraCost *= 1.25; // comprehensive adds ~25%
      }

      const annual = liabilityCost + extraCost;
      const monthly = annual / 12;
      const semi = annual / 2;

      document.getElementById('ci-annual')!.textContent = fmt(annual);
      document.getElementById('ci-monthly')!.textContent = fmt(monthly);
      document.getElementById('ci-semi')!.textContent = fmt(semi);
      document.getElementById('ci-liability')!.textContent = fmt(liabilityCost);
      document.getElementById('ci-extra')!.textContent = fmt(extraCost);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['ci-value', 'ci-age', 'ci-driver-age'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcCI); el.addEventListener('change', calcCI); }
      });
      ['ci-coverage', 'ci-deductible'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('change', calcCI); }
      });
      calcCI();
    }, 50);
  </script>
</CalculatorLayout>
