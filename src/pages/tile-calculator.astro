---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Tile Calculator - How Many Tiles Do You Need?";
const description = "Calculate the number of tiles needed for your floor or wall project, including grout spacing and waste.";
const relatedCalcs = [
  { name: "Flooring Calculator", url: "/flooring-calculator", description: "Flooring." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Square footage." },
  { name: "Paint Calculator", url: "/paint-calculator", description: "Paint." },
  { name: "Area Calculator", url: "/area-calculator", description: "2D areas." },
  { name: "Fencing Calculator", url: "/fencing-calculator", description: "Fencing." },
  { name: "Wallpaper Calculator", url: "/wallpaper-calculator", description: "Wallpaper." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Tile Calculator" keywords="tile calculator, how many tiles, tile area, grout spacing, tile estimator" breadcrumbs={[{ name: "Tile Calculator", url: "/tile-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Tile Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate how many tiles you need for your project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Area Length (ft)</label><input type="number" id="ti-al" class="ti-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="0.1" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Area Width (ft)</label><input type="number" id="ti-aw" class="ti-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0.1" step="0.5"></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Tile Length (in)</label><input type="number" id="ti-tl" class="ti-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Tile Width (in)</label><input type="number" id="ti-tw" class="ti-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Grout (in)</label><input type="number" id="ti-grout" class="ti-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.125" min="0" max="1" step="0.0625"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Waste (%)</label><input type="number" id="ti-waste" class="ti-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0" max="30" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Price per Tile ($)</label><input type="number" id="ti-price" class="ti-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3.50" min="0" step="0.25"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Tiles Needed</div>
          <div class="text-5xl font-extrabold" id="ti-tiles">0</div>
          <div class="text-sm text-blue-200 mt-1" id="ti-with-waste">includes waste</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-5 bg-secondary rounded-2xl text-white text-center">
            <div class="text-xs uppercase tracking-wide mb-1 opacity-80">Estimated Cost</div>
            <div class="text-2xl font-extrabold" id="ti-cost">$0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Area</div><div class="text-xl font-bold" id="ti-area">0 sq ft</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Tile Area (each)</div><div class="text-xl font-bold" id="ti-tilearea">0 sq in</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Without Waste</div><div class="text-xl font-bold" id="ti-nowaste">0 tiles</div></div>
        </div>
      </div>
      <ShareButton calculatorId="tile" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Tile Calculation</h2>
      <p>Tile count = Area / (tile area + grout). Always add 10-15% for waste from cuts, breakage, and future repairs.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcTile() {
      const aL = parseFloat((document.getElementById('ti-al') as HTMLInputElement).value) || 0;
      const aW = parseFloat((document.getElementById('ti-aw') as HTMLInputElement).value) || 0;
      const tL = parseFloat((document.getElementById('ti-tl') as HTMLInputElement).value) || 1;
      const tW = parseFloat((document.getElementById('ti-tw') as HTMLInputElement).value) || 1;
      const grout = parseFloat((document.getElementById('ti-grout') as HTMLInputElement).value) || 0;
      const waste = parseFloat((document.getElementById('ti-waste') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('ti-price') as HTMLInputElement).value) || 0;
      const areaSqFt = aL * aW;
      const areaSqIn = areaSqFt * 144;
      const tileWithGrout = (tL + grout) * (tW + grout);
      const tilesExact = areaSqIn / tileWithGrout;
      const tilesNoWaste = Math.ceil(tilesExact);
      const tilesWithWaste = Math.ceil(tilesExact * (1 + waste / 100));
      const cost = tilesWithWaste * price;
      document.getElementById('ti-tiles')!.textContent = String(tilesWithWaste);
      document.getElementById('ti-with-waste')!.textContent = `${tilesNoWaste} tiles + ${waste}% waste`;
      document.getElementById('ti-cost')!.textContent = '$' + cost.toFixed(2);
      document.getElementById('ti-area')!.textContent = areaSqFt.toFixed(1) + ' sq ft';
      document.getElementById('ti-tilearea')!.textContent = (tL * tW).toFixed(1) + ' sq in';
      document.getElementById('ti-nowaste')!.textContent = tilesNoWaste + ' tiles';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.ti-in').forEach(el => el.addEventListener('input', calcTile)); calcTile(); }, 50);
  </script>
</CalculatorLayout>
