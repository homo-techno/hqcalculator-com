---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Boxing Reach Calculator";
const description = "Calculate reach advantage, ape index, weight class, and ideal stance width for boxing and MMA fighters.";
const relatedCalcs = [
  { name: "BMI Calculator", url: "/bmi-calculator", description: "Body mass index." },
  { name: "Body Fat", url: "/body-fat-calculator", description: "Body fat %." },
  { name: "Ideal Weight", url: "/ideal-weight-calculator", description: "Ideal weight." },
  { name: "Calories Burned", url: "/calories-burned-calculator", description: "Activity calories." },
  { name: "Heart Rate", url: "/heart-rate-calculator", description: "Heart rate zones." },
  { name: "One Rep Max", url: "/one-rep-max-calculator", description: "Strength estimate." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Boxing Reach Calculator" keywords="boxing reach calculator, ape index, reach advantage, weight class, stance width, fight reach" breadcrumbs={[{ name: "Boxing Reach", url: "/boxing-reach-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Boxing Reach Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate your ape index, reach advantage, weight class, and ideal stance width for combat sports.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Height (inches)</label><input type="number" id="br-height" class="br-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="48" max="90" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Arm Span (inches)</label><input type="number" id="br-span" class="br-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="48" max="100" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Weight (lbs)</label><input type="number" id="br-weight" class="br-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="90" max="400" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Opponent Reach (inches)</label><input type="number" id="br-opp" class="br-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0" max="100" step="0.5"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Ape Index</div>
          <div class="text-5xl font-extrabold font-mono" id="br-ape">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Reach Advantage</div><div class="text-xl font-bold font-mono" id="br-adv">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weight Class</div><div class="text-xl font-bold" id="br-class">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Stance Width</div><div class="text-xl font-bold font-mono" id="br-stance">--</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Reach (cm)</div><div class="text-xl font-bold font-mono" id="br-reachcm">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Height (cm)</div><div class="text-xl font-bold font-mono" id="br-heightcm">--</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Assessment</h3>
          <div class="text-sm space-y-1" id="br-assessment"></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Boxing Weight Classes</h3>
          <div class="text-xs space-y-1" id="br-classes"></div>
        </div>
      </div>
      <ShareButton calculatorId="boxing-reach" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcBR() {
      const height = parseFloat((document.getElementById('br-height') as HTMLInputElement).value) || 0;
      const span = parseFloat((document.getElementById('br-span') as HTMLInputElement).value) || 0;
      const weight = parseFloat((document.getElementById('br-weight') as HTMLInputElement).value) || 0;
      const oppReach = parseFloat((document.getElementById('br-opp') as HTMLInputElement).value) || 0;
      if (height <= 0 || span <= 0) return;
      const apeIndex = span - height;
      const apeRatio = span / height;
      const reachAdv = oppReach > 0 ? span - oppReach : 0;
      const stanceWidth = height * 0.35;
      const heightCm = height * 2.54;
      const reachCm = span * 2.54;
      const weightClasses = [
        { name: 'Minimumweight', max: 105 },
        { name: 'Light Flyweight', max: 108 },
        { name: 'Flyweight', max: 112 },
        { name: 'Super Flyweight', max: 115 },
        { name: 'Bantamweight', max: 118 },
        { name: 'Super Bantamweight', max: 122 },
        { name: 'Featherweight', max: 126 },
        { name: 'Super Featherweight', max: 130 },
        { name: 'Lightweight', max: 135 },
        { name: 'Super Lightweight', max: 140 },
        { name: 'Welterweight', max: 147 },
        { name: 'Super Welterweight', max: 154 },
        { name: 'Middleweight', max: 160 },
        { name: 'Super Middleweight', max: 168 },
        { name: 'Light Heavyweight', max: 175 },
        { name: 'Cruiserweight', max: 200 },
        { name: 'Heavyweight', max: 999 },
      ];
      let weightClass = 'Heavyweight';
      for (const wc of weightClasses) {
        if (weight <= wc.max) { weightClass = wc.name; break; }
      }
      document.getElementById('br-ape')!.textContent = (apeIndex >= 0 ? '+' : '') + apeIndex.toFixed(1) + '" (' + apeRatio.toFixed(3) + ')';
      document.getElementById('br-adv')!.textContent = oppReach > 0 ? ((reachAdv >= 0 ? '+' : '') + reachAdv.toFixed(1) + '"') : 'N/A';
      document.getElementById('br-class')!.textContent = weightClass;
      document.getElementById('br-stance')!.textContent = stanceWidth.toFixed(1) + '"';
      document.getElementById('br-reachcm')!.textContent = reachCm.toFixed(1);
      document.getElementById('br-heightcm')!.textContent = heightCm.toFixed(1);
      const assessments: string[] = [];
      if (apeIndex > 4) assessments.push('Exceptional reach advantage. Your wingspan significantly exceeds your height, giving you a natural advantage at range.');
      else if (apeIndex > 2) assessments.push('Good reach advantage. Longer-than-average arms for your height. Use jabs and straight punches at range.');
      else if (apeIndex > 0) assessments.push('Slightly positive ape index. Average proportions, giving balanced reach.');
      else if (apeIndex > -2) assessments.push('Slightly negative ape index. Focus on closing distance and fighting inside.');
      else assessments.push('Shorter reach relative to height. Work on cutting angles and infighting technique.');
      if (oppReach > 0) {
        if (reachAdv > 3) assessments.push('Significant reach advantage over opponent. Keep distance, use jabs.');
        else if (reachAdv > 0) assessments.push('Slight reach advantage. You can fight at range or inside.');
        else if (reachAdv > -3) assessments.push('Slight reach disadvantage. Consider working inside more.');
        else assessments.push('Significant reach disadvantage. Close distance quickly, work the body.');
      }
      document.getElementById('br-assessment')!.innerHTML = assessments.map(a => `<p class="text-text-secondary">${a}</p>`).join('');
      document.getElementById('br-classes')!.innerHTML = weightClasses.map(wc => {
        const isActive = wc.name === weightClass;
        return `<div class="flex justify-between ${isActive ? 'font-bold text-primary' : ''}"><span>${wc.name}</span><span class="font-mono">${wc.max < 999 ? wc.max + ' lbs' : '200+ lbs'}</span></div>`;
      }).join('');
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('br-height') as HTMLInputElement).value = '71';
      (document.getElementById('br-span') as HTMLInputElement).value = '74';
      (document.getElementById('br-weight') as HTMLInputElement).value = '160';
      (document.getElementById('br-opp') as HTMLInputElement).value = '72';
      document.querySelectorAll('.br-in').forEach(el => { el.addEventListener('input', calcBR); el.addEventListener('change', calcBR); });
      calcBR();
    }, 50);
  </script>
</CalculatorLayout>
