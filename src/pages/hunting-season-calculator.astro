---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Hunting Season Calculator - Dates, Limits & License Cost";
const description = "Look up hunting season dates, bag limits, license costs, and harvest success rates by species and state for planning your hunt.";
const relatedCalcs = [
  { name: "Cattle Weight", url: "/cattle-weight-calculator", description: "Estimate cattle weight." },
  { name: "Food Cost", url: "/food-cost-calculator", description: "Food expense calculations." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Plan your budget." },
  { name: "Gas Cost", url: "/gas-cost-calculator", description: "Fuel cost estimates." },
  { name: "Carbon Footprint", url: "/carbon-footprint-calculator", description: "Estimate carbon emissions." },
  { name: "Temperature Converter", url: "/temperature-converter", description: "Convert temperatures." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Hunting Season Calculator" keywords="hunting season calculator, bag limits, hunting license cost, harvest success rate, deer season, hunting dates" breadcrumbs={[{ name: "Hunting Season", url: "/hunting-season-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Hunting Season Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate hunting costs, success rates, and meat yield by species for trip planning.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Game Species</label>
          <select id="hn-species" class="hn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="55|20|2|150">White-tailed Deer (55 lbs meat, 20% success)</option>
            <option value="70|15|1|200">Mule Deer (70 lbs meat, 15% success)</option>
            <option value="200|12|1|350">Elk (200 lbs meat, 12% success)</option>
            <option value="15|40|5|50">Wild Turkey (15 lbs meat, 40% success)</option>
            <option value="3|60|15|30">Pheasant (3 lbs meat, 60% success)</option>
            <option value="5|50|10|35">Duck (5 lbs meat, 50% success)</option>
            <option value="120|10|1|500">Moose (120 lbs meat, 10% success)</option>
            <option value="2|70|25|25">Rabbit (2 lbs meat, 70% success)</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Hunters</label>
            <input type="number" id="hn-hunters" class="hn-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="2" min="1" max="20" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Hunt Days</label>
            <input type="number" id="hn-days" class="hn-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5" min="1" max="90" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">License/Tag Cost ($)</label>
            <input type="number" id="hn-license" class="hn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" step="5">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Travel Cost ($)</label>
            <input type="number" id="hn-travel" class="hn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="0" step="25">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Lodging/Day ($)</label>
            <input type="number" id="hn-lodge" class="hn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" step="10">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Meat Market Value ($/lb)</label>
            <input type="number" id="hn-meatval" class="hn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="0.50">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Trip Cost</div>
          <div class="text-5xl font-extrabold font-mono" id="hn-total">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Success Rate</div>
            <div class="text-xl font-bold font-mono" id="hn-success">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Expected Meat (lbs)</div>
            <div class="text-xl font-bold font-mono" id="hn-meat">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Meat Value</div>
            <div class="text-xl font-bold font-mono" id="hn-value">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Cost Per Hunter</div>
            <div class="text-xl font-bold font-mono" id="hn-perh">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Cost Per Lb Meat</div>
            <div class="text-xl font-bold font-mono" id="hn-perlb">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="hunting-season" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcHN() {
      const speciesData = (document.getElementById('hn-species') as HTMLSelectElement).value.split('|');
      const meatPerAnimal = parseFloat(speciesData[0]);
      const successPct = parseFloat(speciesData[1]);
      const bagLimit = parseInt(speciesData[2]);
      const tagBase = parseFloat(speciesData[3]);
      const hunters = parseInt((document.getElementById('hn-hunters') as HTMLInputElement).value) || 2;
      const days = parseInt((document.getElementById('hn-days') as HTMLInputElement).value) || 5;
      const license = parseFloat((document.getElementById('hn-license') as HTMLInputElement).value) || 0;
      const travel = parseFloat((document.getElementById('hn-travel') as HTMLInputElement).value) || 0;
      const lodge = parseFloat((document.getElementById('hn-lodge') as HTMLInputElement).value) || 0;
      const meatVal = parseFloat((document.getElementById('hn-meatval') as HTMLInputElement).value) || 0;
      const licenseCost = license * hunters;
      const travelCost = travel;
      const lodgeCost = lodge * days * hunters;
      const totalCost = licenseCost + travelCost + lodgeCost;
      const costPerHunter = totalCost / hunters;
      const expectedHarvest = hunters * bagLimit * (successPct / 100);
      const expectedMeat = expectedHarvest * meatPerAnimal;
      const meatValue = expectedMeat * meatVal;
      const costPerLb = expectedMeat > 0 ? totalCost / expectedMeat : 0;
      document.getElementById('hn-total')!.textContent = '$' + Math.round(totalCost).toLocaleString();
      document.getElementById('hn-success')!.textContent = successPct + '%';
      document.getElementById('hn-meat')!.textContent = Math.round(expectedMeat).toLocaleString();
      document.getElementById('hn-value')!.textContent = '$' + Math.round(meatValue).toLocaleString();
      document.getElementById('hn-perh')!.textContent = '$' + Math.round(costPerHunter).toLocaleString();
      document.getElementById('hn-perlb')!.textContent = '$' + costPerLb.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.hn-in').forEach(el => { el.addEventListener('input', calcHN); el.addEventListener('change', calcHN); });
      calcHN();
    }, 50);
  </script>
</CalculatorLayout>
