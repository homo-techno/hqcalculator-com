---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Rehab Cost Calculator";
const description = "Estimate renovation budget by room and scope (cosmetic, moderate, gut), calculate cost per square foot, and include contingency reserves.";
const relatedCalcs = [
  { name: "House Flipping", url: "/house-flipping-calculator", description: "Flip profit analysis." },
  { name: "Home Equity", url: "/home-equity-calculator", description: "Home equity analysis." },
  { name: "Mortgage", url: "/mortgage-calculator", description: "Mortgage payments." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
  { name: "Rental Property", url: "/rental-property-calculator", description: "Rental property ROI." },
  { name: "Closing Cost", url: "/closing-cost-calculator", description: "Closing cost estimate." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Rehab Cost Calculator" keywords="rehab cost, renovation budget, remodel cost, cost per square foot, flip renovation, home improvement budget" breadcrumbs={[{ name: "Rehab Cost", url: "/rehab-cost-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Rehab Cost Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate renovation costs by room and scope with contingency for your rehab project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Total Square Footage</label><input type="number" id="rh2-sqft" class="rh2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="1500" min="100" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Rehab Scope</label>
            <select id="rh2-scope" class="rh2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="cosmetic">Cosmetic ($15-30/sqft)</option>
              <option value="moderate" selected>Moderate ($30-60/sqft)</option>
              <option value="gut">Gut Rehab ($60-120/sqft)</option>
            </select>
          </div>
        </div>
        <h3 class="font-semibold text-sm text-text">Room Budgets (enter 0 to skip)</h3>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Kitchen ($)</label><input type="number" id="rh2-kitchen" class="rh2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="15000" min="0" step="500"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Bathrooms ($)</label><input type="number" id="rh2-bath" class="rh2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8000" min="0" step="500"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Flooring ($)</label><input type="number" id="rh2-floor" class="rh2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5000" min="0" step="500"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Paint / Walls ($)</label><input type="number" id="rh2-paint" class="rh2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3000" min="0" step="250"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">HVAC / Electrical ($)</label><input type="number" id="rh2-hvac" class="rh2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5000" min="0" step="500"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Roof / Exterior ($)</label><input type="number" id="rh2-roof" class="rh2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4000" min="0" step="500"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Contingency (%)</label><input type="number" id="rh2-contingency" class="rh2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="15" min="0" max="50" step="1"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Rehab Budget</div>
          <div class="text-5xl font-extrabold font-mono" id="rh2-total">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Base Cost</div><div class="text-xl font-bold font-mono" id="rh2-base">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Contingency Reserve</div><div class="text-xl font-bold font-mono" id="rh2-reserve">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost Per Sqft</div><div class="text-xl font-bold font-mono" id="rh2-persqft">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Scope Range</div><div class="text-xl font-bold font-mono" id="rh2-range">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="rehab-cost" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRH2() {
      const sqft = parseFloat((document.getElementById('rh2-sqft') as HTMLInputElement).value) || 1;
      const scope = (document.getElementById('rh2-scope') as HTMLSelectElement).value;
      const kitchen = parseFloat((document.getElementById('rh2-kitchen') as HTMLInputElement).value) || 0;
      const bath = parseFloat((document.getElementById('rh2-bath') as HTMLInputElement).value) || 0;
      const floor = parseFloat((document.getElementById('rh2-floor') as HTMLInputElement).value) || 0;
      const paint = parseFloat((document.getElementById('rh2-paint') as HTMLInputElement).value) || 0;
      const hvac = parseFloat((document.getElementById('rh2-hvac') as HTMLInputElement).value) || 0;
      const roof = parseFloat((document.getElementById('rh2-roof') as HTMLInputElement).value) || 0;
      const contingency = parseFloat((document.getElementById('rh2-contingency') as HTMLInputElement).value) || 0;

      const baseCost = kitchen + bath + floor + paint + hvac + roof;
      const reserveAmt = baseCost * (contingency / 100);
      const totalBudget = baseCost + reserveAmt;
      const costPerSqft = sqft > 0 ? totalBudget / sqft : 0;

      let rangeText = '$15-$30/sqft';
      if (scope === 'moderate') rangeText = '$30-$60/sqft';
      else if (scope === 'gut') rangeText = '$60-$120/sqft';

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('rh2-total')!.textContent = fmt(totalBudget);
      document.getElementById('rh2-base')!.textContent = fmt(baseCost);
      document.getElementById('rh2-reserve')!.textContent = fmt(reserveAmt);
      document.getElementById('rh2-persqft')!.textContent = '$' + costPerSqft.toFixed(2);
      document.getElementById('rh2-range')!.textContent = rangeText;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.rh2-in').forEach(el => { el.addEventListener('input', calcRH2); el.addEventListener('change', calcRH2); });
      calcRH2();
    }, 50);
  </script>
</CalculatorLayout>
