---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Roth IRA Calculator - Tax-Free Retirement Growth";
const description = "Calculate how much your Roth IRA will grow over time. See tax-free retirement income projections with annual contributions.";

const relatedCalcs = [
  { name: "401(k) Calculator", url: "/401k-calculator", description: "401k growth." },
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Retirement planning." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Investments." },
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Compound interest." },
  { name: "Tax Bracket", url: "/tax-bracket-calculator", description: "Tax brackets." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Roth IRA Calculator" keywords="roth ira calculator, roth ira growth, tax free retirement, roth ira contribution, retirement savings" breadcrumbs={[{ name: "Roth IRA", url: "/roth-ira-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Roth IRA Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">See how your Roth IRA can grow tax-free over time.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Current Roth IRA Balance</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="ri-balance" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="15000" min="0" step="1000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Annual Contribution</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="ri-contrib" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="7000" min="0" step="500">
            </div>
            <p class="text-xs text-text-muted mt-1">2024 limit: $7,000 ($8,000 if 50+)</p>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Years to Grow</label>
              <input type="number" id="ri-years" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="30" min="1" max="50" step="1">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Expected Return (%/yr)</label>
              <input type="number" id="ri-return" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="7" min="0" max="15" step="0.5">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Current Marginal Tax Rate (%)</label>
            <input type="number" id="ri-tax" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="22" min="0" max="50" step="1">
            <p class="text-xs text-text-muted mt-1">Used to show tax savings at withdrawal</p>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Future Roth IRA Value</div>
            <div class="text-4xl sm:text-5xl font-extrabold" id="ri-total">$0</div>
            <div class="text-sm text-blue-200 mt-1">100% tax-free at withdrawal</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Total Contributed</div>
              <div class="text-xl font-bold" id="ri-contributed">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Investment Growth</div>
              <div class="text-xl font-bold text-secondary" id="ri-growth">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Tax Savings</div>
              <div class="text-xl font-bold text-green-600" id="ri-tax-saved">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Monthly at 4% Rule</div>
              <div class="text-xl font-bold" id="ri-monthly">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-3">Growth Over Time</h3>
            <div class="space-y-1 text-sm" id="ri-table"></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="roth-ira" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Roth IRA Benefits</h2>
      <p>Roth IRA contributions are made with after-tax money, but all growth and withdrawals in retirement are tax-free. There are no required minimum distributions during the owner's lifetime.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Frequently Asked Questions</h3>
      <p><strong>Roth IRA vs Traditional IRA?</strong> Roth: pay taxes now, withdraw tax-free. Traditional: deduct now, pay taxes on withdrawal. Roth is often better if you expect a higher tax rate in retirement.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcRothIRA() {
      const balance = parseFloat((document.getElementById('ri-balance') as HTMLInputElement).value) || 0;
      const contrib = parseFloat((document.getElementById('ri-contrib') as HTMLInputElement).value) || 0;
      const years = parseInt((document.getElementById('ri-years') as HTMLInputElement).value) || 1;
      const returnRate = (parseFloat((document.getElementById('ri-return') as HTMLInputElement).value) || 0) / 100;
      const taxRate = (parseFloat((document.getElementById('ri-tax') as HTMLInputElement).value) || 0) / 100;

      let total = balance;
      const totalContributed = balance + contrib * years;
      const rows: string[] = [];
      rows.push('<div class="grid grid-cols-3 gap-1 font-semibold text-xs text-text-muted mb-1"><span>Year</span><span>Contributed</span><span>Balance</span></div>');

      for (let y = 1; y <= years; y++) {
        total = (total + contrib) * (1 + returnRate);
        if (y <= 5 || y % 5 === 0 || y === years) {
          rows.push(`<div class="grid grid-cols-3 gap-1 text-xs ${y === years ? 'font-bold' : ''}"><span>${y}</span><span>${fmt(balance + contrib * y)}</span><span>${fmt(total)}</span></div>`);
        }
      }

      const growth = total - totalContributed;
      const taxSaved = growth * taxRate;
      const monthlyRetirement = (total * 0.04) / 12;

      document.getElementById('ri-total')!.textContent = fmt(total);
      document.getElementById('ri-contributed')!.textContent = fmt(totalContributed);
      document.getElementById('ri-growth')!.textContent = fmt(growth);
      document.getElementById('ri-tax-saved')!.textContent = fmt(taxSaved);
      document.getElementById('ri-monthly')!.textContent = fmt(monthlyRetirement);
      document.getElementById('ri-table')!.innerHTML = rows.join('');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['ri-balance', 'ri-contrib', 'ri-years', 'ri-return', 'ri-tax'].forEach(id => {
        document.getElementById(id)!.addEventListener('input', calcRothIRA);
      });
      calcRothIRA();
    }, 50);
  </script>
</CalculatorLayout>
