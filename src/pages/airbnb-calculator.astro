---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Airbnb Calculator";
const description = "Estimate Airbnb rental revenue, expenses, and profit margin based on nightly rate and occupancy.";
const relatedCalcs = [
  { name: "Rental Property", url: "/rental-property-calculator", description: "Rental property ROI." },
  { name: "House Flipping", url: "/house-flipping-calculator", description: "Flip profit analysis." },
  { name: "Cap Rate", url: "/cap-rate-calculator", description: "Capitalization rate." },
  { name: "Commercial Rent", url: "/commercial-rent-calculator", description: "Commercial lease." },
  { name: "Debt Service Coverage", url: "/debt-service-coverage-calculator", description: "DSCR ratio." },
  { name: "Amortization", url: "/amortization-calculator", description: "Loan amortization." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Airbnb Calculator" keywords="Airbnb calculator, short-term rental, vacation rental income, Airbnb revenue, occupancy rate, rental profit" breadcrumbs={[{ name: "Airbnb", url: "/airbnb-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Airbnb Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate your short-term rental revenue, expenses, and profit.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Nightly Rate ($)</label><input type="number" id="ab-rate" class="ab-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="150" min="0" step="5"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Occupancy Rate (%)</label><input type="number" id="ab-occupancy" class="ab-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="70" min="0" max="100" step="1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Cleaning Fee Per Stay ($)</label><input type="number" id="ab-cleaning" class="ab-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="75" min="0" step="5"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Average Stay Length (nights)</label><input type="number" id="ab-stay" class="ab-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="1" max="30" step="1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Monthly Fixed Expenses ($) (mortgage, taxes, insurance, HOA)</label><input type="number" id="ab-fixed" class="ab-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1800" min="0" step="50"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Monthly Variable Expenses ($) (supplies, utilities, maintenance)</label><input type="number" id="ab-variable" class="ab-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="400" min="0" step="50"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Platform Fee (%)</label><input type="number" id="ab-platform" class="ab-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="0" max="20" step="0.5"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Monthly Net Profit</div>
          <div class="text-5xl font-extrabold font-mono" id="ab-result">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Revenue</div><div class="text-xl font-bold font-mono" id="ab-monthly">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Revenue</div><div class="text-xl font-bold font-mono" id="ab-annual">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Profit</div><div class="text-xl font-bold font-mono" id="ab-annualprofit">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Profit Margin</div><div class="text-xl font-bold font-mono" id="ab-margin">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Booked Nights/Month</div><div class="text-xl font-bold font-mono" id="ab-nights">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bookings/Month</div><div class="text-xl font-bold font-mono" id="ab-bookings">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="airbnb" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcAB() {
      const nightlyRate = parseFloat((document.getElementById('ab-rate') as HTMLInputElement).value) || 0;
      const occupancy = parseFloat((document.getElementById('ab-occupancy') as HTMLInputElement).value) || 0;
      const cleaningFee = parseFloat((document.getElementById('ab-cleaning') as HTMLInputElement).value) || 0;
      const avgStay = parseFloat((document.getElementById('ab-stay') as HTMLInputElement).value) || 1;
      const fixedExpenses = parseFloat((document.getElementById('ab-fixed') as HTMLInputElement).value) || 0;
      const variableExpenses = parseFloat((document.getElementById('ab-variable') as HTMLInputElement).value) || 0;
      const platformFee = parseFloat((document.getElementById('ab-platform') as HTMLInputElement).value) || 0;

      const daysPerMonth = 30.44;
      const bookedNights = daysPerMonth * (occupancy / 100);
      const bookingsPerMonth = bookedNights / avgStay;
      const grossRoomRevenue = bookedNights * nightlyRate;
      const cleaningRevenue = bookingsPerMonth * cleaningFee;
      const grossRevenue = grossRoomRevenue + cleaningRevenue;
      const platformCost = grossRevenue * (platformFee / 100);
      const netRevenue = grossRevenue - platformCost;
      const totalExpenses = fixedExpenses + variableExpenses;
      const monthlyProfit = netRevenue - totalExpenses;
      const annualRevenue = grossRevenue * 12;
      const annualProfit = monthlyProfit * 12;
      const profitMargin = netRevenue > 0 ? (monthlyProfit / netRevenue) * 100 : 0;

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('ab-result')!.textContent = fmt(monthlyProfit);
      document.getElementById('ab-monthly')!.textContent = fmt(netRevenue);
      document.getElementById('ab-annual')!.textContent = fmt(annualRevenue);
      document.getElementById('ab-annualprofit')!.textContent = fmt(annualProfit);
      document.getElementById('ab-margin')!.textContent = profitMargin.toFixed(1) + '%';
      document.getElementById('ab-nights')!.textContent = bookedNights.toFixed(1);
      document.getElementById('ab-bookings')!.textContent = bookingsPerMonth.toFixed(1);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ab-in').forEach(el => { el.addEventListener('input', calcAB); el.addEventListener('change', calcAB); });
      calcAB();
    }, 50);
  </script>
</CalculatorLayout>
