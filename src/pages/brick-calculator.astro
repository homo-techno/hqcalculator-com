---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Brick Calculator";
const description = "Calculate how many bricks you need for a wall or project. Includes mortar joints, waste factor, and cost estimate.";
const relatedCalcs = [
  { name: "Concrete", url: "/concrete-calculator", description: "Concrete." },
  { name: "Gravel", url: "/gravel-calculator", description: "Gravel." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Paver", url: "/paver-calculator", description: "Pavers." },
  { name: "Retaining Wall", url: "/retaining-wall-calculator", description: "Retaining." },
  { name: "Fence Post", url: "/fence-post-calculator", description: "Fence." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Brick Calculator" keywords="brick calculator, bricks needed, wall bricks, mortar joint, brick cost" breadcrumbs={[{ name: "Brick", url: "/brick-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Brick Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate bricks needed for your wall or project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Wall Length (ft)</label><input type="number" id="bk-len" class="bk-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="20" min="0" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Wall Height (ft)</label><input type="number" id="bk-ht" class="bk-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="8" min="0" step="0.5"></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Brick Size</h3>
          <div class="grid grid-cols-3 gap-2">
            <div><label class="block text-xs text-text-muted">Length (in)</label><input type="number" id="bk-bl" class="bk-in w-full px-2 py-2 border border-border rounded-xl text-lg font-bold text-center" value="8" step="0.25"></div>
            <div><label class="block text-xs text-text-muted">Height (in)</label><input type="number" id="bk-bh" class="bk-in w-full px-2 py-2 border border-border rounded-xl text-lg font-bold text-center" value="2.25" step="0.25"></div>
            <div><label class="block text-xs text-text-muted">Mortar (in)</label><input type="number" id="bk-mj" class="bk-in w-full px-2 py-2 border border-border rounded-xl text-lg font-bold text-center" value="0.375" step="0.125"></div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Waste Factor (%)</label><input type="number" id="bk-waste" class="bk-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="0" max="20" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Price per Brick ($)</label><input type="number" id="bk-price" class="bk-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.75" min="0" step="0.05"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Bricks Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="bk-result">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Wall Area</div><div class="text-lg font-bold font-mono" id="bk-area">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Per Sq Ft</div><div class="text-lg font-bold font-mono" id="bk-persf">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Est. Cost</div><div class="text-lg font-bold font-mono" id="bk-cost">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Mortar Bags (80lb)</div><div class="text-xl font-bold font-mono" id="bk-mortar">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Waste Bricks</div><div class="text-xl font-bold font-mono" id="bk-wcount">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="brick" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcBK() {
      const len = parseFloat((document.getElementById('bk-len') as HTMLInputElement).value) || 0;
      const ht = parseFloat((document.getElementById('bk-ht') as HTMLInputElement).value) || 0;
      const bl = parseFloat((document.getElementById('bk-bl') as HTMLInputElement).value) || 8;
      const bh = parseFloat((document.getElementById('bk-bh') as HTMLInputElement).value) || 2.25;
      const mj = parseFloat((document.getElementById('bk-mj') as HTMLInputElement).value) || 0.375;
      const waste = parseFloat((document.getElementById('bk-waste') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('bk-price') as HTMLInputElement).value) || 0;
      const areaSqFt = len * ht;
      const brickWithMortarL = (bl + mj) / 12;
      const brickWithMortarH = (bh + mj) / 12;
      const bricksPerSqFt = brickWithMortarL > 0 && brickWithMortarH > 0 ? 1 / (brickWithMortarL * brickWithMortarH) : 0;
      const baseBricks = Math.ceil(areaSqFt * bricksPerSqFt);
      const wasteBricks = Math.ceil(baseBricks * waste / 100);
      const totalBricks = baseBricks + wasteBricks;
      const mortarBags = Math.ceil(areaSqFt / 35);
      document.getElementById('bk-result')!.textContent = totalBricks.toLocaleString();
      document.getElementById('bk-area')!.textContent = areaSqFt.toFixed(0) + ' ftÂ²';
      document.getElementById('bk-persf')!.textContent = bricksPerSqFt.toFixed(1);
      document.getElementById('bk-cost')!.textContent = '$' + (totalBricks * price).toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });
      document.getElementById('bk-mortar')!.textContent = mortarBags.toString();
      document.getElementById('bk-wcount')!.textContent = wasteBricks.toLocaleString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.bk-in').forEach(el => { el.addEventListener('input', calcBK); el.addEventListener('change', calcBK); });
      calcBK();
    }, 50);
  </script>
</CalculatorLayout>
