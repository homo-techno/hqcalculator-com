---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Rental Property Depreciation Calculator";
const description = "Calculate MACRS 27.5-year straight-line depreciation, annual tax deduction, tax savings, and cost segregation bonus depreciation.";
const relatedCalcs = [
  { name: "Depreciation", url: "/depreciation-calculator", description: "Asset depreciation." },
  { name: "Rental Property", url: "/rental-property-calculator", description: "Rental property ROI." },
  { name: "Income Tax", url: "/income-tax-calculator", description: "Income tax estimate." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
  { name: "Property Tax", url: "/property-tax-calculator", description: "Property tax estimate." },
  { name: "Estate Tax", url: "/estate-tax-calculator", description: "Estate tax planning." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Rental Property Depreciation Calculator" keywords="rental depreciation, MACRS, 27.5 year, cost segregation, tax deduction, straight line depreciation" breadcrumbs={[{ name: "Rental Depreciation", url: "/rental-property-depreciation-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Rental Property Depreciation Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate MACRS 27.5-year depreciation deductions and estimate cost segregation benefits.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Purchase Price ($)</label><input type="number" id="rd2-price" class="rd2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="300000" min="0" step="5000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Land Value ($)</label><input type="number" id="rd2-land" class="rd2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="60000" min="0" step="5000"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Improvements / Rehab ($)</label><input type="number" id="rd2-improve" class="rd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20000" min="0" step="1000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Cost Seg Eligible (%)</label><input type="number" id="rd2-costseg" class="rd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="0" max="60" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Marginal Tax Rate (%)</label><input type="number" id="rd2-taxrate" class="rd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="24" min="0" max="50" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Years Owned</label><input type="number" id="rd2-years" class="rd2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="1" max="28" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Annual Depreciation Deduction</div>
          <div class="text-5xl font-extrabold font-mono" id="rd2-annual">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Depreciable Basis</div><div class="text-xl font-bold font-mono" id="rd2-basis">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Annual Tax Savings</div><div class="text-xl font-bold font-mono" id="rd2-taxsave">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost Seg Year-1 Bonus</div><div class="text-xl font-bold font-mono" id="rd2-bonus">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Year-1 Total Deduction</div><div class="text-xl font-bold font-mono" id="rd2-yr1total">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cumulative Depreciation</div><div class="text-xl font-bold font-mono" id="rd2-cumulative">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Remaining Basis</div><div class="text-xl font-bold font-mono" id="rd2-remaining">$0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Tax Savings Over Period</div><div class="text-xl font-bold font-mono" id="rd2-totaltaxsave">$0</div></div>
      </div>
      <ShareButton calculatorId="rental-property-depreciation" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRD2() {
      const price = parseFloat((document.getElementById('rd2-price') as HTMLInputElement).value) || 0;
      const land = parseFloat((document.getElementById('rd2-land') as HTMLInputElement).value) || 0;
      const improve = parseFloat((document.getElementById('rd2-improve') as HTMLInputElement).value) || 0;
      const costSegPct = parseFloat((document.getElementById('rd2-costseg') as HTMLInputElement).value) || 0;
      const taxRate = parseFloat((document.getElementById('rd2-taxrate') as HTMLInputElement).value) || 0;
      const years = parseFloat((document.getElementById('rd2-years') as HTMLInputElement).value) || 1;

      const depreciableBasis = price - land + improve;
      const annualStraightLine = depreciableBasis / 27.5;
      const costSegAmount = depreciableBasis * (costSegPct / 100);
      const remainingAfterCostSeg = depreciableBasis - costSegAmount;
      const annualRegular = remainingAfterCostSeg / 27.5;

      const bonusYear1 = costSegAmount;
      const year1Total = bonusYear1 + annualRegular;
      const annualTaxSavings = annualStraightLine * (taxRate / 100);

      const cumulativeDepr = Math.min(annualStraightLine * years, depreciableBasis);
      const remainingBasis = depreciableBasis - cumulativeDepr;
      const totalTaxSavings = cumulativeDepr * (taxRate / 100);

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('rd2-annual')!.textContent = fmt(annualStraightLine);
      document.getElementById('rd2-basis')!.textContent = fmt(depreciableBasis);
      document.getElementById('rd2-taxsave')!.textContent = fmt(annualTaxSavings);
      document.getElementById('rd2-bonus')!.textContent = fmt(bonusYear1);
      document.getElementById('rd2-yr1total')!.textContent = fmt(year1Total);
      document.getElementById('rd2-cumulative')!.textContent = fmt(cumulativeDepr);
      document.getElementById('rd2-remaining')!.textContent = fmt(remainingBasis);
      document.getElementById('rd2-totaltaxsave')!.textContent = fmt(totalTaxSavings);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.rd2-in').forEach(el => { el.addEventListener('input', calcRD2); el.addEventListener('change', calcRD2); });
      calcRD2();
    }, 50);
  </script>
</CalculatorLayout>
