---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Boolean Algebra Calculator - Logic Gate Truth Table";
const description = "Evaluate Boolean logic operations on two inputs. Shows AND, OR, XOR, NOT, NAND, NOR results in a complete truth table.";

const relatedCalcs = [
  { name: "Binary to Text", url: "/binary-to-text-calculator", description: "Binary/text converter." },
  { name: "Hex to RGB", url: "/hex-to-rgb-calculator", description: "Hex color converter." },
  { name: "Base64 Calculator", url: "/base64-calculator", description: "Base64 encode/decode." },
  { name: "Set Theory Calculator", url: "/set-theory-calculator", description: "Set operations." },
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Advanced math." },
  { name: "Number Sequence", url: "/number-sequence-calculator", description: "Sequence detection." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Boolean Algebra Calculator"
  keywords="boolean algebra calculator, logic gates, truth table, AND OR XOR NOT NAND NOR, boolean logic"
  breadcrumbs={[{ name: "Boolean Algebra Calculator", url: "/boolean-algebra-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Boolean Algebra Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Evaluate Boolean logic operations (AND, OR, XOR, NOT, NAND, NOR) with interactive truth table.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Input A</label>
            <select id="ba-a" class="ba-in w-full px-4 py-2 border border-border rounded-xl text-lg">
              <option value="1" selected>True (1)</option>
              <option value="0">False (0)</option>
            </select>
          </div>
          <div>
            <label class="block text-sm font-medium text-text mb-1">Input B</label>
            <select id="ba-b" class="ba-in w-full px-4 py-2 border border-border rounded-xl text-lg">
              <option value="1">True (1)</option>
              <option value="0" selected>False (0)</option>
            </select>
          </div>
        </div>

        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">A AND B</div>
          <div class="text-5xl font-extrabold font-mono" id="ba-result">0</div>
        </div>

        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">A AND B</div>
            <div class="text-xl font-bold" id="ba-and">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">A OR B</div>
            <div class="text-xl font-bold" id="ba-or">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">A XOR B</div>
            <div class="text-xl font-bold" id="ba-xor">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">NOT A</div>
            <div class="text-xl font-bold" id="ba-nota">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">NOT B</div>
            <div class="text-xl font-bold" id="ba-notb">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">A NAND B</div>
            <div class="text-xl font-bold" id="ba-nand">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">A NOR B</div>
            <div class="text-xl font-bold" id="ba-nor">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">A XNOR B</div>
            <div class="text-xl font-bold" id="ba-xnor">0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">A &rarr; B (Implication)</div>
            <div class="text-xl font-bold" id="ba-impl">0</div>
          </div>
        </div>

        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Complete Truth Table</h3>
          <div class="text-sm text-text-secondary font-mono whitespace-pre-wrap" id="ba-table"></div>
        </div>
      </div>

      <ShareButton calculatorId="boolean-algebra" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Boolean Logic Operations</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>AND:</strong> True only when both inputs are true</p>
        <p><strong>OR:</strong> True when at least one input is true</p>
        <p><strong>XOR:</strong> True when exactly one input is true</p>
        <p><strong>NAND:</strong> NOT AND &mdash; false only when both inputs are true</p>
        <p><strong>NOR:</strong> NOT OR &mdash; true only when both inputs are false</p>
      </div>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcBA() {
      const a = parseInt((document.getElementById('ba-a') as HTMLSelectElement).value);
      const b = parseInt((document.getElementById('ba-b') as HTMLSelectElement).value);

      const andR = a & b;
      const orR = a | b;
      const xorR = a ^ b;
      const notA = a ? 0 : 1;
      const notB = b ? 0 : 1;
      const nandR = andR ? 0 : 1;
      const norR = orR ? 0 : 1;
      const xnorR = xorR ? 0 : 1;
      const implR = (!a || b) ? 1 : 0;

      const tf = (v: number) => v ? 'True (1)' : 'False (0)';

      document.getElementById('ba-result')!.textContent = tf(andR);
      document.getElementById('ba-and')!.textContent = tf(andR);
      document.getElementById('ba-or')!.textContent = tf(orR);
      document.getElementById('ba-xor')!.textContent = tf(xorR);
      document.getElementById('ba-nota')!.textContent = tf(notA);
      document.getElementById('ba-notb')!.textContent = tf(notB);
      document.getElementById('ba-nand')!.textContent = tf(nandR);
      document.getElementById('ba-nor')!.textContent = tf(norR);
      document.getElementById('ba-xnor')!.textContent = tf(xnorR);
      document.getElementById('ba-impl')!.textContent = tf(implR);

      // Full truth table
      let table = ' A | B | AND | OR | XOR | NAND | NOR | XNOR\n';
      table += '-'.repeat(50) + '\n';
      for (let i = 0; i <= 1; i++) {
        for (let j = 0; j <= 1; j++) {
          const marker = (i === a && j === b) ? ' â—„' : '';
          table += ` ${i} | ${j} |  ${i & j}  |  ${i | j} |  ${i ^ j}  |   ${(i & j) ? 0 : 1}  |  ${(i | j) ? 0 : 1}  |   ${(i ^ j) ? 0 : 1}${marker}\n`;
        }
      }
      document.getElementById('ba-table')!.textContent = table;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('.ba-in').forEach(el => {
        el.addEventListener('input', calcBA);
        el.addEventListener('change', calcBA);
      });
      calcBA();
    }, 50);
  </script>
</CalculatorLayout>
