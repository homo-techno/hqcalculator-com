---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Rabbit Hutch Calculator - Minimum Size, Exercise Area & Bedding";
const description = "Calculate minimum hutch size by rabbit count and breed, exercise area requirements, and bedding volume needed for your rabbits.";
const relatedCalcs = [
  { name: "Bird Cage Calculator", url: "/bird-cage-calculator", description: "Minimum cage size for birds." },
  { name: "Pet Food Calculator", url: "/pet-food-calculator", description: "General pet food portions." },
  { name: "Pet Cost Calculator", url: "/pet-cost-calculator", description: "Annual pet ownership costs." },
  { name: "Aquarium Calculator", url: "/aquarium-calculator", description: "Aquarium sizing and stocking." },
  { name: "Reptile Terrarium Calculator", url: "/reptile-terrarium-calculator", description: "Tank size for reptiles." },
  { name: "Pet Insurance Calculator", url: "/pet-insurance-calculator", description: "Pet insurance estimates." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Rabbit Hutch Calculator" keywords="rabbit hutch size, rabbit cage calculator, rabbit exercise area, rabbit bedding, hutch dimensions" breadcrumbs={[{ name: "Rabbit Hutch", url: "/rabbit-hutch-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Rabbit Hutch Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate minimum hutch size, exercise area, and bedding needs for your rabbits.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Rabbits</label>
            <input type="number" id="rh-count" class="rh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="1" max="20" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Breed Size</label>
            <select id="rh-breed" class="rh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="dwarf">Dwarf (under 4 lbs)</option>
              <option value="small">Small (4-6 lbs)</option>
              <option value="medium" selected>Medium (6-10 lbs)</option>
              <option value="large">Large (10-14 lbs)</option>
              <option value="giant">Giant (14+ lbs)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Bedding Depth (inches)</label>
            <input type="number" id="rh-depth" class="rh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="1" max="8" step="0.5">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Hutch Style</label>
            <select id="rh-style" class="rh-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="indoor">Indoor Enclosure</option>
              <option value="outdoor" selected>Outdoor Hutch</option>
              <option value="colony">Colony Setup</option>
            </select>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Minimum Hutch Size</div>
          <div class="text-5xl font-extrabold font-mono" id="rh-result">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Length (ft)</div><div class="text-xl font-bold font-mono" id="rh-length">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Width (ft)</div><div class="text-xl font-bold font-mono" id="rh-width">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Height (ft)</div><div class="text-xl font-bold font-mono" id="rh-height">--</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Exercise Area</div><div class="text-xl font-bold font-mono" id="rh-exercise">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bedding Vol.</div><div class="text-xl font-bold font-mono" id="rh-bedding">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bedding / Week</div><div class="text-xl font-bold font-mono" id="rh-weekly">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="rabbit-hutch" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRH() {
      const count = parseInt((document.getElementById('rh-count') as HTMLInputElement).value) || 1;
      const breed = (document.getElementById('rh-breed') as HTMLSelectElement).value;
      const depth = parseFloat((document.getElementById('rh-depth') as HTMLInputElement).value) || 3;
      const style = (document.getElementById('rh-style') as HTMLSelectElement).value;

      // Minimum sq ft per rabbit by breed size
      const sqftPerRabbit: Record<string, number> = {
        dwarf: 8, small: 10, medium: 12, large: 16, giant: 24
      };
      const heightMin: Record<string, number> = {
        dwarf: 1.5, small: 2, medium: 2, large: 2.5, giant: 3
      };

      const baseSqFt = sqftPerRabbit[breed] || 12;
      let totalSqFt = baseSqFt * count;

      // Style multiplier
      if (style === 'colony') totalSqFt *= 1.5;
      if (style === 'indoor') totalSqFt *= 1.2;

      // Dimensions: aim for ~2:1 length to width ratio
      const widthFt = Math.sqrt(totalSqFt / 2);
      const lengthFt = widthFt * 2;
      const heightFt = heightMin[breed] || 2;

      // Exercise area: 3x hutch area minimum, 3+ hrs/day
      const exerciseArea = totalSqFt * 3;

      // Bedding volume (cubic ft)
      const beddingVolCuFt = totalSqFt * (depth / 12);
      // Weekly bedding replacement (~40% changed per spot clean)
      const weeklyBedding = beddingVolCuFt * 0.4;

      document.getElementById('rh-result')!.textContent = totalSqFt.toFixed(0) + ' sq ft';
      document.getElementById('rh-length')!.textContent = lengthFt.toFixed(1);
      document.getElementById('rh-width')!.textContent = widthFt.toFixed(1);
      document.getElementById('rh-height')!.textContent = heightFt.toFixed(1);
      document.getElementById('rh-exercise')!.textContent = exerciseArea.toFixed(0) + ' sq ft';
      document.getElementById('rh-bedding')!.textContent = beddingVolCuFt.toFixed(1) + ' cu ft';
      document.getElementById('rh-weekly')!.textContent = weeklyBedding.toFixed(1) + ' cu ft';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.rh-in').forEach(el => { el.addEventListener('input', calcRH); el.addEventListener('change', calcRH); });
      calcRH();
    }, 50);
  </script>
</CalculatorLayout>
