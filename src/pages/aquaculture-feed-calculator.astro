---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Aquaculture Feed Calculator - FCR, Daily Feed & Harvest Timeline";
const description = "Calculate feed conversion ratio, daily feed amount, growth rate, and harvest timeline for aquaculture fish farming operations.";
const relatedCalcs = [
  { name: "Aquaponics", url: "/aquaponics-calculator", description: "Aquaponics system design." },
  { name: "Fish Tank Stocking", url: "/fish-tank-stocking-calculator", description: "Fish stocking levels." },
  { name: "Pond Stocking", url: "/pond-stocking-calculator", description: "Pond fish stocking." },
  { name: "Aquarium", url: "/aquarium-calculator", description: "Aquarium calculations." },
  { name: "Water Quality", url: "/water-quality-calculator", description: "Water quality analysis." },
  { name: "Fishing Line", url: "/fishing-line-calculator", description: "Fishing line selection." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Aquaculture Feed Calculator" keywords="aquaculture feed calculator, FCR, feed conversion ratio, fish feed, fish growth rate, harvest timeline, fish farming" breadcrumbs={[{ name: "Aquaculture Feed", url: "/aquaculture-feed-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Aquaculture Feed Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate optimal feeding rates, feed conversion ratios, and harvest timelines for fish farming operations.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Species</label>
            <select id="af2-species" class="af2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="1.6">Tilapia (FCR 1.6)</option>
              <option value="1.2">Salmon (FCR 1.2)</option>
              <option value="1.3">Trout (FCR 1.3)</option>
              <option value="1.8">Catfish (FCR 1.8)</option>
              <option value="1.5">Barramundi (FCR 1.5)</option>
              <option value="2.0">Shrimp (FCR 2.0)</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Number of Fish</label><input type="number" id="af2-count" class="af2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="100"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Current Avg Weight (g)</label><input type="number" id="af2-curr" class="af2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="10"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Target Harvest Weight (g)</label><input type="number" id="af2-target" class="af2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="50"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Water Temp (C)</label><input type="number" id="af2-temp" class="af2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="10" max="35" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Feed Cost ($/kg)</label><input type="number" id="af2-cost" class="af2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0.01" step="0.10"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Daily Feed Amount</div>
          <div class="text-5xl font-extrabold font-mono" id="af2-daily">--</div>
          <div class="text-sm text-blue-200 mt-1">kg/day</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Feed Rate</div><div class="text-xl font-bold" id="af2-rate">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Feed</div><div class="text-xl font-bold" id="af2-total">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Feed Cost</div><div class="text-xl font-bold" id="af2-fcost">--</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Days to Harvest</div><div class="text-xl font-bold" id="af2-days">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Growth Rate</div><div class="text-xl font-bold" id="af2-growth">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Harvest Yield</div><div class="text-xl font-bold" id="af2-yield">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="aquaculture-feed" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcAF2() {
      const fcr = parseFloat((document.getElementById('af2-species') as HTMLSelectElement).value) || 1.6;
      const count = parseInt((document.getElementById('af2-count') as HTMLInputElement).value) || 0;
      const currWt = parseFloat((document.getElementById('af2-curr') as HTMLInputElement).value) || 0;
      const targetWt = parseFloat((document.getElementById('af2-target') as HTMLInputElement).value) || 0;
      const temp = parseFloat((document.getElementById('af2-temp') as HTMLInputElement).value) || 25;
      const feedCostPerKg = parseFloat((document.getElementById('af2-cost') as HTMLInputElement).value) || 0;

      // Feed rate as % body weight per day (varies with temp and fish size)
      // Optimal temp range ~25-28C; lower temps reduce feed rate
      const tempFactor = temp >= 25 ? 1.0 : temp >= 20 ? 0.8 : temp >= 15 ? 0.5 : 0.3;
      // Smaller fish eat higher % body weight
      const sizeFactor = currWt < 50 ? 5 : currWt < 200 ? 3 : currWt < 500 ? 2 : 1.5;
      const feedRatePct = sizeFactor * tempFactor;

      // Daily feed per fish = current weight * feed rate %
      const dailyPerFishG = currWt * (feedRatePct / 100);
      const dailyTotalKg = (dailyPerFishG * count) / 1000;

      // Growth rate: daily gain = daily feed / FCR
      const dailyGainG = dailyPerFishG / fcr;

      // Days to harvest
      const weightGain = targetWt - currWt;
      const daysToHarvest = dailyGainG > 0 ? weightGain / dailyGainG : 0;

      // Total feed needed
      const totalFeedKg = (weightGain * count * fcr) / 1000;
      const totalFeedCost = totalFeedKg * feedCostPerKg;

      // Harvest yield
      const harvestKg = (targetWt * count) / 1000;

      document.getElementById('af2-daily')!.textContent = dailyTotalKg > 0 ? dailyTotalKg.toFixed(1) : '--';
      document.getElementById('af2-rate')!.textContent = feedRatePct > 0 ? feedRatePct.toFixed(1) + '% BW' : '--';
      document.getElementById('af2-total')!.textContent = totalFeedKg > 0 ? Math.round(totalFeedKg).toLocaleString() + ' kg' : '--';
      document.getElementById('af2-fcost')!.textContent = totalFeedCost > 0 ? '$' + Math.round(totalFeedCost).toLocaleString() : '--';
      document.getElementById('af2-days')!.textContent = daysToHarvest > 0 ? Math.round(daysToHarvest).toString() : '--';
      document.getElementById('af2-growth')!.textContent = dailyGainG > 0 ? dailyGainG.toFixed(1) + ' g/day' : '--';
      document.getElementById('af2-yield')!.textContent = harvestKg > 0 ? Math.round(harvestKg).toLocaleString() + ' kg' : '--';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('af2-count') as HTMLInputElement).value = '5000';
      (document.getElementById('af2-curr') as HTMLInputElement).value = '100';
      (document.getElementById('af2-target') as HTMLInputElement).value = '500';
      (document.getElementById('af2-temp') as HTMLInputElement).value = '26';
      (document.getElementById('af2-cost') as HTMLInputElement).value = '1.20';
      document.querySelectorAll('.af2-in').forEach(el => { el.addEventListener('input', calcAF2); el.addEventListener('change', calcAF2); });
      calcAF2();
    }, 50);
  </script>
</CalculatorLayout>
