---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Heat Transfer Calculator - Q = mcΔT";
const description = "Calculate heat energy transfer using Q = mcΔT. Find energy, mass, specific heat, or temperature change.";
const relatedCalcs = [
  { name: "BTU Calculator", url: "/btu-calculator", description: "BTU." },
  { name: "Temperature Converter", url: "/temperature-converter", description: "Temperature." },
  { name: "Energy Converter", url: "/energy-converter", description: "Energy." },
  { name: "Kinetic Energy", url: "/kinetic-energy-calculator", description: "Kinetic energy." },
  { name: "Density Calculator", url: "/density-calculator", description: "Density." },
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Scientific." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Heat Transfer Calculator" keywords="heat transfer calculator, Q=mcΔT, specific heat, calorimetry, thermal energy" breadcrumbs={[{ name: "Heat Transfer", url: "/heat-transfer-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Heat Transfer Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate heat energy using Q = mcΔT.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Mass (kg)</label><input type="number" id="ht-m" class="ht-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="0" step="0.1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Material</label>
            <select id="ht-mat" class="ht-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="4186" selected>Water (4186)</option>
              <option value="900">Aluminum (900)</option>
              <option value="385">Copper (385)</option>
              <option value="449">Iron (449)</option>
              <option value="129">Gold (129)</option>
              <option value="235">Silver (235)</option>
              <option value="502">Steel (502)</option>
              <option value="710">Glass (710)</option>
              <option value="1005">Air (1005)</option>
              <option value="0">Custom</option>
            </select>
          </div>
        </div>
        <div id="ht-custom-c" class="hidden"><label class="block text-xs font-medium text-text mb-1">Specific Heat c (J/kg·°C)</label><input type="number" id="ht-c" class="ht-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4186" min="0" step="1"></div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Initial Temp (°C)</label><input type="number" id="ht-t1" class="ht-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Final Temp (°C)</label><input type="number" id="ht-t2" class="ht-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="100" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Heat Energy (Q)</div>
          <div class="text-5xl font-extrabold font-mono" id="ht-result">0</div>
          <div class="text-sm text-blue-200 mt-1" id="ht-unit">J</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">kJ</div><div class="text-xl font-bold font-mono" id="ht-kj">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">BTU</div><div class="text-xl font-bold font-mono" id="ht-btu">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">kcal</div><div class="text-xl font-bold font-mono" id="ht-kcal">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">ΔT</div><div class="text-xl font-bold font-mono" id="ht-dt">0°C</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Specific Heat</div><div class="text-xl font-bold font-mono" id="ht-sh">0 J/kg·°C</div></div>
        </div>
      </div>
      <ShareButton calculatorId="heat-transfer" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcHT() {
      const m = parseFloat((document.getElementById('ht-m') as HTMLInputElement).value) || 0;
      const matVal = (document.getElementById('ht-mat') as HTMLSelectElement).value;
      let c: number;
      if (matVal === '0') {
        document.getElementById('ht-custom-c')!.classList.remove('hidden');
        c = parseFloat((document.getElementById('ht-c') as HTMLInputElement).value) || 0;
      } else {
        document.getElementById('ht-custom-c')!.classList.add('hidden');
        c = parseFloat(matVal);
      }
      const t1 = parseFloat((document.getElementById('ht-t1') as HTMLInputElement).value) || 0;
      const t2 = parseFloat((document.getElementById('ht-t2') as HTMLInputElement).value) || 0;
      const dt = t2 - t1;
      const q = m * c * dt;
      const absQ = Math.abs(q);
      let display: string;
      if (absQ >= 1e6) display = (q/1e6).toFixed(2) + ' MJ';
      else if (absQ >= 1e3) display = (q/1e3).toFixed(2) + ' kJ';
      else display = q.toFixed(2) + ' J';
      document.getElementById('ht-result')!.textContent = display;
      document.getElementById('ht-unit')!.textContent = q < 0 ? '(heat released)' : '(heat absorbed)';
      document.getElementById('ht-kj')!.textContent = (q/1000).toFixed(3);
      document.getElementById('ht-btu')!.textContent = (q/1055.06).toFixed(3);
      document.getElementById('ht-kcal')!.textContent = (q/4184).toFixed(3);
      document.getElementById('ht-dt')!.textContent = dt.toFixed(1) + '°C';
      document.getElementById('ht-sh')!.textContent = c + ' J/kg·°C';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ht-in').forEach(el => { el.addEventListener('input', calcHT); el.addEventListener('change', calcHT); });
      calcHT();
    }, 50);
  </script>
</CalculatorLayout>
