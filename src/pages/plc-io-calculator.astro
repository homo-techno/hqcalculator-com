---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "PLC I/O Calculator - I/O Point Count Planning for Automation";
const description = "Plan PLC I/O point counts for automation projects. Calculate digital inputs, digital outputs, analog inputs, analog outputs, and select the right PLC modules.";
const relatedCalcs = [
  { name: "Safety Distance Calculator", url: "/safety-distance-calculator", description: "Calculate ISO 13855 safety sensor distances." },
  { name: "Sensor Range Calculator", url: "/sensor-range-calculator", description: "Calculate proximity sensor detection range." },
  { name: "Pneumatic Cylinder Calculator", url: "/pneumatic-cylinder-calculator", description: "Size pneumatic cylinders for automation." },
  { name: "Conveyor Speed Calculator", url: "/conveyor-speed-calculator", description: "Calculate conveyor belt speed and motor power." },
  { name: "Industrial Robot ROI Calculator", url: "/industrial-robot-roi-calculator", description: "Calculate robot investment payback period." },
  { name: "Cable Carrier Calculator", url: "/cable-carrier-calculator", description: "Size cable carriers for robotic applications." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="PLC I/O Calculator" keywords="PLC I/O calculator, PLC planning, I/O point count, PLC module selection, automation planning, digital input output, analog I/O" breadcrumbs={[{ name: "PLC I/O Calculator", url: "/plc-io-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">PLC I/O Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Plan your PLC I/O point requirements. Enter your field device counts to get total I/O needs with spare capacity recommendations.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-6">
        <h3 class="text-lg font-bold text-text">Digital Inputs</h3>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Proximity Sensors</label>
            <input type="number" id="plc2-prox" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="0" step="1">
          </div>
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Limit Switches</label>
            <input type="number" id="plc2-limit" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="1">
          </div>
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Push Buttons</label>
            <input type="number" id="plc2-buttons" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="0" step="1">
          </div>
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Safety Devices (DI)</label>
            <input type="number" id="plc2-safety-di" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="0" step="1">
          </div>
        </div>

        <h3 class="text-lg font-bold text-text">Digital Outputs</h3>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Solenoid Valves</label>
            <input type="number" id="plc2-solenoids" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="1">
          </div>
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Indicator Lights</label>
            <input type="number" id="plc2-lights" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="0" step="1">
          </div>
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Motor Contactors</label>
            <input type="number" id="plc2-contactors" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="0" step="1">
          </div>
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Other DO</label>
            <input type="number" id="plc2-other-do" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" step="1">
          </div>
        </div>

        <h3 class="text-lg font-bold text-text">Analog I/O</h3>
        <div class="grid grid-cols-2 gap-4">
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Analog Inputs (4-20mA/0-10V)</label>
            <input type="number" id="plc2-ai" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="0" step="1">
          </div>
          <div>
            <label class="block text-sm font-semibold text-text mb-2">Analog Outputs</label>
            <input type="number" id="plc2-ao" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" step="1">
          </div>
        </div>

        <div>
          <label class="block text-sm font-semibold text-text mb-2">Spare Capacity (%)</label>
          <input type="number" id="plc2-spare" class="plc2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="0" max="100" step="5">
        </div>

        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm font-medium opacity-80 mb-1">Total I/O Points (with spare)</div>
          <div id="plc2-result-total" class="text-3xl sm:text-4xl font-extrabold">--</div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Digital Inputs</div>
            <div id="plc2-total-di" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">points (with spare)</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Digital Outputs</div>
            <div id="plc2-total-do" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">points (with spare)</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Analog Inputs</div>
            <div id="plc2-total-ai" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">channels (with spare)</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Analog Outputs</div>
            <div id="plc2-total-ao" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">channels (with spare)</div>
          </div>
        </div>

        <ShareButton />
        <FeedbackWidget />
      </div>
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcPLC2() {
      const prox = parseInt((document.getElementById('plc2-prox') as HTMLInputElement).value) || 0;
      const limit = parseInt((document.getElementById('plc2-limit') as HTMLInputElement).value) || 0;
      const buttons = parseInt((document.getElementById('plc2-buttons') as HTMLInputElement).value) || 0;
      const safetyDI = parseInt((document.getElementById('plc2-safety-di') as HTMLInputElement).value) || 0;
      const solenoids = parseInt((document.getElementById('plc2-solenoids') as HTMLInputElement).value) || 0;
      const lights = parseInt((document.getElementById('plc2-lights') as HTMLInputElement).value) || 0;
      const contactors = parseInt((document.getElementById('plc2-contactors') as HTMLInputElement).value) || 0;
      const otherDO = parseInt((document.getElementById('plc2-other-do') as HTMLInputElement).value) || 0;
      const ai = parseInt((document.getElementById('plc2-ai') as HTMLInputElement).value) || 0;
      const ao = parseInt((document.getElementById('plc2-ao') as HTMLInputElement).value) || 0;
      const spare = parseFloat((document.getElementById('plc2-spare') as HTMLInputElement).value) || 20;

      const rawDI = prox + limit + buttons + safetyDI;
      const rawDO = solenoids + lights + contactors + otherDO;
      const mult = 1 + spare / 100;

      const totalDI = Math.ceil(rawDI * mult);
      const totalDO = Math.ceil(rawDO * mult);
      const totalAI = Math.ceil(ai * mult);
      const totalAO = Math.ceil(ao * mult);
      const total = totalDI + totalDO + totalAI + totalAO;

      document.getElementById('plc2-result-total')!.textContent = total.toString();
      document.getElementById('plc2-total-di')!.textContent = totalDI + ' (' + rawDI + ' used)';
      document.getElementById('plc2-total-do')!.textContent = totalDO + ' (' + rawDO + ' used)';
      document.getElementById('plc2-total-ai')!.textContent = totalAI + ' (' + ai + ' used)';
      document.getElementById('plc2-total-ao')!.textContent = totalAO + ' (' + ao + ' used)';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.plc2-in').forEach(el => { el.addEventListener('input', calcPLC2); el.addEventListener('change', calcPLC2); });
      calcPLC2();
    }, 50);
  </script>
</CalculatorLayout>
