---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Rowing Split Calculator";
const description = "Calculate 500m rowing splits from total time and distance, watts, calories per hour, and projected 2K time.";
const relatedCalcs = [
  { name: "Swim Pace", url: "/swim-pace-calculator", description: "Swimming pace." },
  { name: "Pace Calculator", url: "/pace-calculator", description: "General pace." },
  { name: "Calories Burned", url: "/calories-burned-calculator", description: "Activity calories." },
  { name: "Heart Rate", url: "/heart-rate-calculator", description: "Heart rate zones." },
  { name: "Running Split", url: "/running-split-calculator", description: "Running splits." },
  { name: "VO2 Max", url: "/vo2-max-calculator", description: "Aerobic fitness." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Rowing Split Calculator" keywords="rowing split calculator, 500m split, rowing watts, erg calculator, 2K rowing, rowing calories" breadcrumbs={[{ name: "Rowing Split", url: "/rowing-split-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Rowing Split Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate 500m splits, power output in watts, calories burned, and race time projections for rowing.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="flex gap-2">
          <button class="rw-mode flex-1 py-2 rounded-xl font-bold text-sm border-2 border-primary bg-blue-50 text-primary" data-mode="split">Find Split</button>
          <button class="rw-mode flex-1 py-2 rounded-xl font-bold text-sm border-2 border-border text-text-muted" data-mode="time">Find Time</button>
          <button class="rw-mode flex-1 py-2 rounded-xl font-bold text-sm border-2 border-border text-text-muted" data-mode="watts">Find Watts</button>
        </div>
        <div id="rw-split-inputs">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Total Distance (meters)</label>
            <select id="rw-dist" class="rw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="500">500m</option>
              <option value="1000">1000m</option>
              <option value="2000" selected>2000m</option>
              <option value="5000">5000m</option>
              <option value="6000">6000m</option>
              <option value="10000">10000m</option>
            </select>
          </div>
          <div class="mt-3">
            <label class="block text-xs font-medium text-text mb-1">Total Time</label>
            <div class="grid grid-cols-3 gap-2">
              <div><input type="number" id="rw-min" class="rw-in w-full px-3 py-3 border border-border rounded-xl text-lg font-bold text-center" min="0" max="120" placeholder="min"></div>
              <div><input type="number" id="rw-sec" class="rw-in w-full px-3 py-3 border border-border rounded-xl text-lg font-bold text-center" min="0" max="59" placeholder="sec"></div>
              <div><input type="number" id="rw-tenth" class="rw-in w-full px-3 py-3 border border-border rounded-xl text-lg font-bold text-center" min="0" max="9" placeholder="tenth"></div>
            </div>
            <div class="text-xs text-text-muted mt-1">Minutes : Seconds : Tenths</div>
          </div>
        </div>
        <div id="rw-watts-input" class="hidden">
          <label class="block text-xs font-medium text-text mb-1">Power (watts)</label>
          <input type="number" id="rw-watts-val" class="rw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="10" max="600" step="1">
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Body Weight (kg)</label>
          <input type="number" id="rw-weight" class="rw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="30" max="200" step="1">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1" id="rw-result-label">500m Split</div>
          <div class="text-5xl font-extrabold font-mono" id="rw-result">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Watts</div><div class="text-xl font-bold font-mono" id="rw-watts">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cal/hr</div><div class="text-xl font-bold font-mono" id="rw-cal">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">W/kg</div><div class="text-xl font-bold font-mono" id="rw-wkg">--</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Race Projections</h3>
          <div class="text-sm space-y-1" id="rw-projections"></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Performance Level</h3>
          <p class="text-sm" id="rw-level">--</p>
        </div>
      </div>
      <ShareButton calculatorId="rowing-split" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    let rwMode = 'split';
    function fmtSplit(sec: number): string {
      const m = Math.floor(sec / 60);
      const s = sec % 60;
      return `${m}:${s.toFixed(1).padStart(4, '0')}`;
    }
    function fmtFull(sec: number): string {
      const m = Math.floor(sec / 60);
      const s = sec % 60;
      return `${m}:${s.toFixed(1).padStart(4, '0')}`;
    }
    function splitToWatts(splitSec: number): number {
      return 2.80 / Math.pow(splitSec / 500, 3);
    }
    function wattsToSplit(watts: number): number {
      return 500 * Math.pow(2.80 / watts, 1 / 3);
    }
    function calcRW() {
      const dist = parseFloat((document.getElementById('rw-dist') as HTMLSelectElement).value) || 2000;
      const weight = parseFloat((document.getElementById('rw-weight') as HTMLInputElement).value) || 80;
      let splitSec = 0;
      let totalSec = 0;
      let watts = 0;
      if (rwMode === 'split' || rwMode === 'time') {
        const min = parseFloat((document.getElementById('rw-min') as HTMLInputElement).value) || 0;
        const sec = parseFloat((document.getElementById('rw-sec') as HTMLInputElement).value) || 0;
        const tenth = parseFloat((document.getElementById('rw-tenth') as HTMLInputElement).value) || 0;
        totalSec = min * 60 + sec + tenth / 10;
        if (totalSec <= 0) return;
        splitSec = totalSec / (dist / 500);
        watts = splitToWatts(splitSec);
        if (rwMode === 'split') {
          document.getElementById('rw-result-label')!.textContent = '500m Split';
          document.getElementById('rw-result')!.textContent = fmtSplit(splitSec);
        } else {
          document.getElementById('rw-result-label')!.textContent = 'Total Time';
          document.getElementById('rw-result')!.textContent = fmtFull(totalSec);
        }
      } else {
        watts = parseFloat((document.getElementById('rw-watts-val') as HTMLInputElement).value) || 0;
        if (watts <= 0) return;
        splitSec = wattsToSplit(watts);
        totalSec = splitSec * (dist / 500);
        document.getElementById('rw-result-label')!.textContent = '500m Split from Watts';
        document.getElementById('rw-result')!.textContent = fmtSplit(splitSec);
      }
      const calPerHr = watts * 4 + 300;
      const wkg = weight > 0 ? watts / weight : 0;
      document.getElementById('rw-watts')!.textContent = Math.round(watts) + ' W';
      document.getElementById('rw-cal')!.textContent = Math.round(calPerHr).toString();
      document.getElementById('rw-wkg')!.textContent = wkg.toFixed(2);
      const projections = [500, 1000, 2000, 5000, 6000, 10000];
      const projHTML: string[] = [];
      projections.forEach(d => {
        const factor = d <= 2000 ? 1.0 : (d <= 5000 ? 1.03 : 1.05);
        const projSplit = splitSec * factor;
        const projTime = projSplit * (d / 500);
        const highlight = d === dist ? 'font-bold text-primary' : '';
        projHTML.push(`<div class="flex justify-between ${highlight}"><span>${d}m</span><span class="font-mono">${fmtSplit(projSplit)} /500m</span><span class="font-mono font-bold">${fmtFull(projTime)}</span></div>`);
      });
      document.getElementById('rw-projections')!.innerHTML = projHTML.join('');
      let level = '';
      const split2k = splitSec * (rwMode === 'split' ? 1 : 1);
      if (split2k < 90) level = 'Elite / Olympic level (sub 1:30 /500m)';
      else if (split2k < 100) level = 'Highly competitive rower (sub 1:40 /500m)';
      else if (split2k < 110) level = 'Strong club rower (sub 1:50 /500m)';
      else if (split2k < 120) level = 'Good recreational rower (sub 2:00 /500m)';
      else if (split2k < 135) level = 'Average fitness rower (sub 2:15 /500m)';
      else level = 'Beginner rower (2:15+ /500m)';
      document.getElementById('rw-level')!.textContent = level;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('rw-min') as HTMLInputElement).value = '7';
      (document.getElementById('rw-sec') as HTMLInputElement).value = '30';
      (document.getElementById('rw-tenth') as HTMLInputElement).value = '0';
      (document.getElementById('rw-watts-val') as HTMLInputElement).value = '200';
      (document.getElementById('rw-weight') as HTMLInputElement).value = '80';
      document.querySelectorAll('.rw-mode').forEach(b => b.addEventListener('click', () => {
        rwMode = (b as HTMLButtonElement).dataset.mode!;
        document.querySelectorAll('.rw-mode').forEach(btn => {
          const active = (btn as HTMLButtonElement).dataset.mode === rwMode;
          (btn as HTMLButtonElement).className = `rw-mode flex-1 py-2 rounded-xl font-bold text-sm border-2 ${active ? 'border-primary bg-blue-50 text-primary' : 'border-border text-text-muted'}`;
        });
        document.getElementById('rw-split-inputs')!.classList.toggle('hidden', rwMode === 'watts');
        document.getElementById('rw-watts-input')!.classList.toggle('hidden', rwMode !== 'watts');
        calcRW();
      }));
      document.querySelectorAll('.rw-in').forEach(el => { el.addEventListener('input', calcRW); el.addEventListener('change', calcRW); });
      calcRW();
    }, 50);
  </script>
</CalculatorLayout>
