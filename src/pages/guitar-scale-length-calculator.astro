---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Guitar Scale Length Calculator - Fret Positions & Spacing";
const description = "Calculate fret positions from scale length, fret spacing, saddle compensation, and nut-to-fret distances for guitar building.";
const relatedCalcs = [
  { name: "Length Converter", url: "/length-converter", description: "Convert lengths." },
  { name: "Frequency Calculator", url: "/frequency-calculator", description: "Convert frequency units." },
  { name: "Ratio Calculator", url: "/ratio-calculator", description: "Solve ratios." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage math." },
  { name: "Resonance Calculator", url: "/resonance-calculator", description: "Resonant frequency." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Guitar Scale Length Calculator" keywords="guitar scale length, fret position, fret spacing, fret calculator, guitar building, luthier, compensation" breadcrumbs={[{ name: "Guitar Scale Length", url: "/guitar-scale-length-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Guitar Scale Length Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate precise fret positions and spacing for any guitar scale length.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Scale Length (inches)</label>
            <input type="number" id="gs-scale" class="gs-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" min="10" max="40" step="0.01">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Frets</label>
            <input type="number" id="gs-frets" class="gs-in w-full px-4 py-3 border border-border rounded-xl text-lg" min="12" max="36" step="1">
          </div>
        </div>
        <div class="flex gap-2 flex-wrap">
          <button class="gs-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-v="25.5">Fender 25.5"</button>
          <button class="gs-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-v="24.75">Gibson 24.75"</button>
          <button class="gs-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-v="24">PRS 24"</button>
          <button class="gs-preset px-3 py-1 rounded-full text-xs border border-border font-bold hover:bg-blue-50" data-v="34">Bass 34"</button>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Saddle Compensation (inches)</label>
          <input type="number" id="gs-comp" class="gs-in w-full px-4 py-3 border border-border rounded-xl text-lg" min="0" max="0.5" step="0.01">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Scale Length</div>
          <div class="text-4xl font-extrabold font-mono" id="gs-result">0"</div>
          <div class="text-sm text-blue-200 mt-1" id="gs-mm">0 mm</div>
        </div>
        <div class="overflow-x-auto max-h-96">
          <table class="w-full text-sm">
            <thead class="sticky top-0 bg-white">
              <tr class="bg-surface-alt">
                <th class="p-2 text-left rounded-tl-xl">Fret</th>
                <th class="p-2 text-right">From Nut (in)</th>
                <th class="p-2 text-right">From Nut (mm)</th>
                <th class="p-2 text-right">Fret Spacing (in)</th>
                <th class="p-2 text-right rounded-tr-xl">To Bridge (in)</th>
              </tr>
            </thead>
            <tbody id="gs-table"></tbody>
          </table>
        </div>
      </div>
      <ShareButton calculatorId="guitar-scale-length" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcGS() {
      const scale = parseFloat((document.getElementById('gs-scale') as HTMLInputElement).value) || 0;
      const numFrets = parseInt((document.getElementById('gs-frets') as HTMLInputElement).value) || 22;
      const comp = parseFloat((document.getElementById('gs-comp') as HTMLInputElement).value) || 0;

      if (scale <= 0) return;

      const effectiveScale = scale + comp;
      document.getElementById('gs-result')!.textContent = scale.toFixed(2) + '"';
      document.getElementById('gs-mm')!.textContent = (scale * 25.4).toFixed(1) + ' mm';

      const table = document.getElementById('gs-table')!;
      let html = '';
      let prevDist = 0;

      for (let i = 1; i <= numFrets; i++) {
        const distFromNut = effectiveScale - effectiveScale / Math.pow(2, i / 12);
        const spacing = distFromNut - prevDist;
        const toBridge = effectiveScale - distFromNut;

        const highlight = (i === 12) ? ' class="bg-blue-50 font-bold"' : '';
        html += '<tr' + highlight + ' class="border-t border-border">' +
          '<td class="p-2 font-medium">' + i + '</td>' +
          '<td class="p-2 text-right font-mono">' + distFromNut.toFixed(4) + '</td>' +
          '<td class="p-2 text-right font-mono">' + (distFromNut * 25.4).toFixed(2) + '</td>' +
          '<td class="p-2 text-right font-mono">' + spacing.toFixed(4) + '</td>' +
          '<td class="p-2 text-right font-mono">' + toBridge.toFixed(4) + '</td>' +
          '</tr>';
        prevDist = distFromNut;
      }
      table.innerHTML = html;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      (document.getElementById('gs-scale') as HTMLInputElement).value = '25.5';
      (document.getElementById('gs-frets') as HTMLInputElement).value = '22';
      (document.getElementById('gs-comp') as HTMLInputElement).value = '0.08';
      document.querySelectorAll('.gs-in').forEach(el => { el.addEventListener('input', calcGS); el.addEventListener('change', calcGS); });
      document.querySelectorAll('.gs-preset').forEach(btn => btn.addEventListener('click', () => {
        (document.getElementById('gs-scale') as HTMLInputElement).value = (btn as HTMLElement).dataset.v!;
        calcGS();
      }));
      calcGS();
    }, 50);
  </script>
</CalculatorLayout>
