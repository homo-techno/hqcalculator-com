---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Respawn Timer Calculator";
const description = "Calculate respawn and cooldown timing, uptime percentage, optimal rotation schedules, and DPS windows for competitive games.";
const relatedCalcs = [
  { name: "Countdown Calculator", url: "/countdown-calculator", description: "Time countdowns." },
  { name: "Hours Calculator", url: "/hours-calculator", description: "Time calculations." },
  { name: "Reaction Time Test", url: "/reaction-time-test", description: "Test reaction time." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Rate calculations." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage math." },
  { name: "Average Calculator", url: "/average-calculator", description: "Calculate averages." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Respawn Timer Calculator" keywords="respawn timer, cooldown calculator, uptime percentage, dps window, ability rotation, game timer" breadcrumbs={[{ name: "Respawn Timer", url: "/respawn-timer-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Respawn Timer Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Optimize cooldown rotations, calculate uptime, and plan DPS windows.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Mode</label>
          <select class="rt2-in w-full px-4 py-2 border border-border rounded-lg" id="rt2-mode">
            <option value="cooldown" selected>Ability Cooldown</option>
            <option value="respawn">Respawn Timer</option>
            <option value="boss">Boss Spawn Timer</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Cooldown/Respawn Duration (seconds)</label>
          <input type="number" class="rt2-in w-full px-4 py-2 border border-border rounded-lg" id="rt2-cd" min="0.1" step="0.1" value="12">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Active/Effect Duration (seconds)</label>
          <input type="number" class="rt2-in w-full px-4 py-2 border border-border rounded-lg" id="rt2-dur" min="0" step="0.1" value="3">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Cooldown Reduction (%)</label>
          <input type="number" class="rt2-in w-full px-4 py-2 border border-border rounded-lg" id="rt2-cdr" min="0" max="80" step="1" value="0">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Encounter Duration (seconds)</label>
          <input type="number" class="rt2-in w-full px-4 py-2 border border-border rounded-lg" id="rt2-fight" min="1" value="180">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Damage per Use</label>
          <input type="number" class="rt2-in w-full px-4 py-2 border border-border rounded-lg" id="rt2-dmg" min="0" value="5000">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Uptime Percentage</div>
          <div class="text-5xl font-extrabold font-mono" id="rt2-result">--</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Effective Cooldown</div>
            <div class="text-xl font-bold font-mono" id="rt2-effcd">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Uses per Fight</div>
            <div class="text-xl font-bold font-mono" id="rt2-uses">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Total Damage</div>
            <div class="text-xl font-bold font-mono" id="rt2-totaldmg">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">DPS Contribution</div>
            <div class="text-xl font-bold font-mono" id="rt2-dps">--</div>
          </div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">CDR Comparison</h3>
          <div class="text-xs font-mono space-y-1" id="rt2-compare"></div>
        </div>
      </div>
      <ShareButton calculatorId="respawn-timer" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRT2() {
      const mode = (document.getElementById('rt2-mode') as HTMLSelectElement).value;
      const baseCd = parseFloat((document.getElementById('rt2-cd') as HTMLInputElement).value) || 12;
      const dur = parseFloat((document.getElementById('rt2-dur') as HTMLInputElement).value) || 3;
      const cdr = parseFloat((document.getElementById('rt2-cdr') as HTMLInputElement).value) || 0;
      const fight = parseFloat((document.getElementById('rt2-fight') as HTMLInputElement).value) || 180;
      const dmg = parseFloat((document.getElementById('rt2-dmg') as HTMLInputElement).value) || 5000;

      const effCd = baseCd * (1 - cdr / 100);
      const fullCycle = effCd + dur;
      const uptime = dur / fullCycle * 100;
      const uses = Math.floor(fight / fullCycle) + 1; // +1 for initial use
      const totalDmg = uses * dmg;
      const dps = totalDmg / fight;

      document.getElementById('rt2-result')!.textContent = uptime.toFixed(1) + '%';
      document.getElementById('rt2-effcd')!.textContent = effCd.toFixed(1) + 's';
      document.getElementById('rt2-uses')!.textContent = uses.toString();
      document.getElementById('rt2-totaldmg')!.textContent = totalDmg.toLocaleString();
      document.getElementById('rt2-dps')!.textContent = dps.toFixed(0) + ' DPS';

      // CDR comparison table
      const cdrLevels = [0, 10, 20, 30, 40, 50, 60];
      let html = '';
      for (const c of cdrLevels) {
        const cd = baseCd * (1 - c / 100);
        const cycle = cd + dur;
        const up = dur / cycle * 100;
        const u = Math.floor(fight / cycle) + 1;
        const marker = c === cdr ? ' <-' : '';
        html += '<div class="flex justify-between py-0.5 border-b border-border"><span>' + c + '% CDR (' + cd.toFixed(1) + 's)</span><span>' + up.toFixed(1) + '% uptime, ' + u + ' uses' + marker + '</span></div>';
      }
      document.getElementById('rt2-compare')!.innerHTML = html;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.rt2-in').forEach(el => { el.addEventListener('input', calcRT2); el.addEventListener('change', calcRT2); });
      calcRT2();
    }, 50);
  </script>
</CalculatorLayout>
