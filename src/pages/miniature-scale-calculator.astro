---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Miniature Scale Calculator";
const description = "Convert real-world measurements to miniature scale sizes for wargaming, model building, and tabletop games. Supports common scales like 1:72, 1:48, and 1:35.";
const relatedCalcs = [
  { name: "Aspect Ratio", url: "/aspect-ratio-calculator", description: "Ratio calculations." },
  { name: "Screen Size", url: "/screen-size-calculator", description: "Size calculations." },
  { name: "Photo Resolution", url: "/photo-resolution-calculator", description: "Resolution math." },
  { name: "3D Printer Cost", url: "/3d-printer-cost-calculator", description: "3D printing costs." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage math." },
  { name: "Average Calculator", url: "/average-calculator", description: "Calculate averages." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Miniature Scale Calculator" keywords="miniature scale, wargaming scale, model scale converter, 1:72, 1:48, 28mm scale, tabletop miniature" breadcrumbs={[{ name: "Miniature Scale", url: "/miniature-scale-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Miniature Scale Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Convert real-world dimensions to miniature scale for wargaming and model building.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Scale Ratio</label>
          <select class="mn-in w-full px-4 py-2 border border-border rounded-lg" id="mn-scale">
            <option value="220">1:220 (Z Scale trains)</option>
            <option value="160">1:160 (N Scale trains)</option>
            <option value="87">1:87 (HO Scale trains)</option>
            <option value="72">1:72 (Wargaming/Aircraft)</option>
            <option value="64">1:64 (S Scale/Hot Wheels)</option>
            <option value="56" selected>1:56 (28mm Wargaming)</option>
            <option value="48">1:48 (O Scale/Aircraft)</option>
            <option value="35">1:35 (Military Models)</option>
            <option value="24">1:24 (Cars/Large Scale)</option>
            <option value="12">1:12 (Dollhouse)</option>
            <option value="0">Custom...</option>
          </select>
        </div>
        <div id="mn-custom-wrap" style="display:none">
          <label class="block text-sm font-semibold text-text mb-1">Custom Scale (1:X)</label>
          <input type="number" class="mn-in w-full px-4 py-2 border border-border rounded-lg" id="mn-custom" min="1" value="56">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Conversion Direction</label>
          <select class="mn-in w-full px-4 py-2 border border-border rounded-lg" id="mn-dir">
            <option value="real-to-mini" selected>Real World to Miniature</option>
            <option value="mini-to-real">Miniature to Real World</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Input Value</label>
          <input type="number" class="mn-in w-full px-4 py-2 border border-border rounded-lg" id="mn-val" step="0.1" value="180">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Input Unit</label>
          <select class="mn-in w-full px-4 py-2 border border-border rounded-lg" id="mn-unit">
            <option value="cm" selected>Centimeters (cm)</option>
            <option value="mm">Millimeters (mm)</option>
            <option value="m">Meters (m)</option>
            <option value="in">Inches (in)</option>
            <option value="ft">Feet (ft)</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Converted Size</div>
          <div class="text-5xl font-extrabold font-mono" id="mn-result">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">In mm</div>
            <div class="text-xl font-bold font-mono" id="mn-mm">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">In cm</div>
            <div class="text-xl font-bold font-mono" id="mn-cm">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">In inches</div>
            <div class="text-xl font-bold font-mono" id="mn-inches">--</div>
          </div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Common Object References</h3>
          <div class="text-xs font-mono space-y-1" id="mn-refs"></div>
        </div>
      </div>
      <ShareButton calculatorId="miniature-scale" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcMN() {
      const scaleSelect = parseInt((document.getElementById('mn-scale') as HTMLSelectElement).value);
      const customScale = parseInt((document.getElementById('mn-custom') as HTMLInputElement).value) || 56;
      const dir = (document.getElementById('mn-dir') as HTMLSelectElement).value;
      const val = parseFloat((document.getElementById('mn-val') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('mn-unit') as HTMLSelectElement).value;

      document.getElementById('mn-custom-wrap')!.style.display = scaleSelect === 0 ? '' : 'none';
      const scale = scaleSelect === 0 ? customScale : scaleSelect;

      // Convert input to cm
      const toCm: Record<string, number> = { cm: 1, mm: 0.1, m: 100, in: 2.54, ft: 30.48 };
      const valCm = val * (toCm[unit] || 1);

      let resultCm: number;
      if (dir === 'real-to-mini') {
        resultCm = valCm / scale;
      } else {
        resultCm = valCm * scale;
      }

      const resultMm = resultCm * 10;
      const resultIn = resultCm / 2.54;

      document.getElementById('mn-result')!.textContent = resultMm.toFixed(1) + ' mm';
      document.getElementById('mn-mm')!.textContent = resultMm.toFixed(1);
      document.getElementById('mn-cm')!.textContent = resultCm.toFixed(2);
      document.getElementById('mn-inches')!.textContent = resultIn.toFixed(2);

      // Common references at this scale
      const refs = [
        { name: 'Human (180cm)', realCm: 180 },
        { name: 'Door (200cm)', realCm: 200 },
        { name: 'Car (450cm)', realCm: 450 },
        { name: 'Tank (600cm)', realCm: 600 },
        { name: 'Horse (160cm)', realCm: 160 },
        { name: 'Tree (800cm)', realCm: 800 },
        { name: 'Building floor (300cm)', realCm: 300 },
        { name: 'Dragon wingspan (1200cm)', realCm: 1200 }
      ];
      let html = '';
      for (const r of refs) {
        const miniCm = r.realCm / scale;
        const miniMm = miniCm * 10;
        html += '<div class="flex justify-between py-0.5 border-b border-border"><span>' + r.name + '</span><span>' + miniMm.toFixed(1) + ' mm (' + (miniCm / 2.54).toFixed(2) + '")</span></div>';
      }
      document.getElementById('mn-refs')!.innerHTML = html;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.mn-in').forEach(el => { el.addEventListener('input', calcMN); el.addEventListener('change', calcMN); });
      calcMN();
    }, 50);
  </script>
</CalculatorLayout>
