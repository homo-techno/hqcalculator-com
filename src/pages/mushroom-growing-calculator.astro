---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Mushroom Growing Calculator - Substrate, Yield & Revenue";
const description = "Calculate substrate needed, spawn rate, yield per flush, growing cycle time, and revenue per square foot for mushroom cultivation.";
const relatedCalcs = [
  { name: "Greenhouse Calculator", url: "/greenhouse-calculator", description: "Greenhouse sizing and costs." },
  { name: "Compost Calculator", url: "/compost-calculator", description: "Composting needs and ratios." },
  { name: "Garden Spacing", url: "/garden-spacing-calculator", description: "Plant spacing for gardens." },
  { name: "Food Cost", url: "/food-cost-calculator", description: "Food expense calculations." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Plan your budget." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage computations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Mushroom Growing Calculator" keywords="mushroom growing calculator, substrate calculator, mushroom yield, spawn rate, mushroom farming, cultivation revenue" breadcrumbs={[{ name: "Mushroom Growing", url: "/mushroom-growing-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Mushroom Growing Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Plan your mushroom cultivation with substrate, yield, and profitability estimates.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Mushroom Species</label>
          <select id="mg-species" class="mg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="1.0|3|28|12" selected>Oyster (1 lb/lb sub, 3 flushes, 28 day cycle, $12/lb)</option>
            <option value="0.75|3|35|16">Shiitake (0.75 lb/lb, 3 flushes, 35 days, $16/lb)</option>
            <option value="0.5|2|42|20">Lion's Mane (0.5 lb/lb, 2 flushes, 42 days, $20/lb)</option>
            <option value="0.4|2|56|30">Maitake (0.4 lb/lb, 2 flushes, 56 days, $30/lb)</option>
            <option value="0.6|3|30|14">King Oyster (0.6 lb/lb, 3 flushes, 30 days, $14/lb)</option>
            <option value="0.3|1|45|10">Button/Cremini (0.3 lb/lb, 1 flush, 45 days, $10/lb)</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Growing Area (sq ft)</label>
            <input type="number" id="mg-area" class="mg-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="100" min="4" max="50000" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Substrate Depth (inches)</label>
            <input type="number" id="mg-depth" class="mg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="2" max="18" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Spawn Rate (%)</label>
            <input type="number" id="mg-spawn" class="mg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="3" max="25" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Substrate Cost ($/lb)</label>
            <input type="number" id="mg-subcost" class="mg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.10" min="0" step="0.01">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Spawn Cost ($/lb)</label>
            <input type="number" id="mg-spawncost" class="mg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3.00" min="0" step="0.25">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Cycles Per Year</label>
            <input type="number" id="mg-cycles" class="mg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="1" max="20" step="1">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Annual Yield</div>
          <div class="text-5xl font-extrabold font-mono" id="mg-yield">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Substrate (lbs)</div>
            <div class="text-xl font-bold font-mono" id="mg-sub">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Spawn Needed (lbs)</div>
            <div class="text-xl font-bold font-mono" id="mg-spawnlbs">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Yield/Cycle (lbs)</div>
            <div class="text-xl font-bold font-mono" id="mg-percycle">--</div>
          </div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Annual Revenue</div>
            <div class="text-xl font-bold font-mono" id="mg-rev">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Annual Costs</div>
            <div class="text-xl font-bold font-mono" id="mg-costs">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Revenue/Sq Ft</div>
            <div class="text-xl font-bold font-mono" id="mg-persqft">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="mushroom-growing" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcMG() {
      const speciesData = (document.getElementById('mg-species') as HTMLSelectElement).value.split('|');
      const bioEfficiency = parseFloat(speciesData[0]);
      const flushes = parseInt(speciesData[1]);
      const cycleTime = parseInt(speciesData[2]);
      const pricePerLb = parseFloat(speciesData[3]);
      const area = parseFloat((document.getElementById('mg-area') as HTMLInputElement).value) || 100;
      const depthIn = parseFloat((document.getElementById('mg-depth') as HTMLInputElement).value) || 6;
      const spawnRate = parseFloat((document.getElementById('mg-spawn') as HTMLInputElement).value) || 10;
      const subCost = parseFloat((document.getElementById('mg-subcost') as HTMLInputElement).value) || 0;
      const spawnCost = parseFloat((document.getElementById('mg-spawncost') as HTMLInputElement).value) || 0;
      const cycles = parseInt((document.getElementById('mg-cycles') as HTMLInputElement).value) || 8;
      const depthFt = depthIn / 12;
      const volumeCuFt = area * depthFt;
      const substrateLbs = volumeCuFt * 15;
      const spawnLbs = substrateLbs * (spawnRate / 100);
      const yieldPerFlush = substrateLbs * bioEfficiency / flushes;
      const yieldPerCycle = yieldPerFlush * flushes;
      const annualYield = yieldPerCycle * cycles;
      const annualRevenue = annualYield * pricePerLb;
      const subCostPerCycle = substrateLbs * subCost;
      const spawnCostPerCycle = spawnLbs * spawnCost;
      const annualCosts = (subCostPerCycle + spawnCostPerCycle) * cycles;
      const revenuePerSqFt = annualRevenue / area;
      document.getElementById('mg-yield')!.textContent = Math.round(annualYield).toLocaleString() + ' lbs';
      document.getElementById('mg-sub')!.textContent = Math.round(substrateLbs).toLocaleString();
      document.getElementById('mg-spawnlbs')!.textContent = Math.round(spawnLbs).toLocaleString();
      document.getElementById('mg-percycle')!.textContent = Math.round(yieldPerCycle).toLocaleString();
      document.getElementById('mg-rev')!.textContent = '$' + Math.round(annualRevenue).toLocaleString();
      document.getElementById('mg-costs')!.textContent = '$' + Math.round(annualCosts).toLocaleString();
      document.getElementById('mg-persqft')!.textContent = '$' + revenuePerSqFt.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.mg-in').forEach(el => { el.addEventListener('input', calcMG); el.addEventListener('change', calcMG); });
      calcMG();
    }, 50);
  </script>
</CalculatorLayout>
