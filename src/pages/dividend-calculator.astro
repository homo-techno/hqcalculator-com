---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Dividend Calculator - Estimate Dividend Income";
const description = "Calculate annual dividend income from your stock portfolio. See yield, monthly income, and growth projections with reinvestment.";

const relatedCalcs = [
  { name: "Stock Profit", url: "/stock-profit-calculator", description: "Stock returns." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Investment growth." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Compound interest." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Retirement planning." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Dividend Calculator" keywords="dividend calculator, dividend income, dividend yield, DRIP calculator, dividend reinvestment" breadcrumbs={[{ name: "Dividend Calculator", url: "/dividend-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dividend Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate your dividend income and see the power of reinvestment over time.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Investment Amount</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="dv-amount" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="50000" min="0" step="1000">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Dividend Yield (%)</label>
              <input type="number" id="dv-yield" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="3.5" min="0" max="30" step="0.1">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Dividend Growth (%/yr)</label>
              <input type="number" id="dv-growth" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="5" min="0" max="30" step="0.5">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Years to Hold</label>
              <input type="number" id="dv-years" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="10" min="1" max="50" step="1">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Tax Rate on Dividends (%)</label>
              <input type="number" id="dv-tax" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="15" min="0" max="50" step="1">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Reinvest Dividends (DRIP)?</label>
            <select id="dv-drip" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="yes" selected>Yes — Reinvest all dividends</option>
              <option value="no">No — Take dividends as cash</option>
            </select>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Annual Dividend Income (Year 1)</div>
            <div class="text-5xl font-extrabold" id="dv-annual">$0</div>
            <div class="text-sm text-blue-200 mt-1" id="dv-monthly-sub">$0 / month (after tax)</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Monthly Income</div>
              <div class="text-xl font-bold text-secondary" id="dv-monthly">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">After-Tax Annual</div>
              <div class="text-xl font-bold" id="dv-after-tax">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Total Dividends (all years)</div>
              <div class="text-xl font-bold" id="dv-total">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Portfolio Value (end)</div>
              <div class="text-xl font-bold" id="dv-portfolio">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-3">Year-by-Year Projection</h3>
            <div class="space-y-1 text-sm" id="dv-table"></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="dividend" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How Dividend Income Works</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>Annual Dividend</strong> = Investment × Dividend Yield</p>
        <p><strong>After-Tax</strong> = Annual Dividend × (1 − Tax Rate)</p>
        <p><strong>DRIP:</strong> Reinvested dividends buy more shares, increasing future income</p>
      </div>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcDiv() {
      const amount = parseFloat((document.getElementById('dv-amount') as HTMLInputElement).value) || 0;
      const yieldPct = (parseFloat((document.getElementById('dv-yield') as HTMLInputElement).value) || 0) / 100;
      const growthPct = (parseFloat((document.getElementById('dv-growth') as HTMLInputElement).value) || 0) / 100;
      const years = parseInt((document.getElementById('dv-years') as HTMLInputElement).value) || 1;
      const taxRate = (parseFloat((document.getElementById('dv-tax') as HTMLInputElement).value) || 0) / 100;
      const drip = (document.getElementById('dv-drip') as HTMLSelectElement).value === 'yes';

      const annualDiv = amount * yieldPct;
      const afterTax = annualDiv * (1 - taxRate);

      document.getElementById('dv-annual')!.textContent = fmt(annualDiv);
      document.getElementById('dv-monthly')!.textContent = fmt(afterTax / 12);
      document.getElementById('dv-after-tax')!.textContent = fmt(afterTax);
      document.getElementById('dv-monthly-sub')!.textContent = fmt(afterTax / 12) + ' / month (after tax)';

      let portfolio = amount;
      let totalDividends = 0;
      let currentYield = yieldPct;
      const rows: string[] = [];

      rows.push('<div class="grid grid-cols-4 gap-1 font-semibold text-xs text-text-muted mb-1"><span>Year</span><span>Dividend</span><span>Yield</span><span>Portfolio</span></div>');

      for (let y = 1; y <= years; y++) {
        const div = portfolio * currentYield;
        totalDividends += div;
        if (drip) portfolio += div * (1 - taxRate);
        currentYield *= (1 + growthPct);

        if (y <= 10 || y === years || y % 5 === 0) {
          rows.push(`<div class="grid grid-cols-4 gap-1 text-xs"><span>${y}</span><span>${fmt(div)}</span><span>${(currentYield / (1 + growthPct) * 100).toFixed(1)}%</span><span>${fmt(portfolio)}</span></div>`);
        }
      }

      document.getElementById('dv-total')!.textContent = fmt(totalDividends);
      document.getElementById('dv-portfolio')!.textContent = fmt(portfolio);
      document.getElementById('dv-table')!.innerHTML = rows.join('');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['dv-amount', 'dv-yield', 'dv-growth', 'dv-years', 'dv-tax'].forEach(id => {
        document.getElementById(id)!.addEventListener('input', calcDiv);
      });
      document.getElementById('dv-drip')!.addEventListener('change', calcDiv);
      calcDiv();
    }, 50);
  </script>
</CalculatorLayout>
