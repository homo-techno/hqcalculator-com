---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Food Cost Calculator - Restaurant Profit & Markup";
const description = "Calculate food cost percentage, markup, profit per plate, and daily/monthly profit for restaurant menu items.";
const relatedCalcs = [
  { name: "Protein Per Dollar", url: "/protein-per-dollar-calculator", description: "Compare protein value of foods." },
  { name: "Meal Prep Calculator", url: "/meal-prep-calculator", description: "Plan weekly meal prep." },
  { name: "Meat Cooking Calculator", url: "/meat-cooking-calculator", description: "Cooking times and temps." },
  { name: "Baking Conversion", url: "/baking-conversion-calculator", description: "Convert baking measurements." },
  { name: "Beer Brewing Calculator", url: "/beer-brewing-calculator", description: "Homebrew ABV and stats." },
  { name: "Coffee Ratio Calculator", url: "/coffee-ratio-calculator", description: "Perfect coffee ratios." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Food Cost Calculator" keywords="food cost calculator, restaurant food cost, food cost percentage, menu pricing, restaurant profit, markup calculator" breadcrumbs={[{ name: "Food Cost", url: "/food-cost-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Food Cost Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate food cost percentage, markup, and profit for restaurant menu pricing.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Ingredient Cost ($)</label>
            <input type="number" id="fc-cost" class="fc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4.50" min="0" step="0.01">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Selling Price ($)</label>
            <input type="number" id="fc-price" class="fc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="14.99" min="0" step="0.01">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Portions Per Day</label>
            <input type="number" id="fc-portions" class="fc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="30" min="0" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Operating Days / Month</label>
            <input type="number" id="fc-days" class="fc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="26" min="1" step="1">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Food Cost %</div>
          <div class="text-5xl font-extrabold font-mono" id="fc-result">0%</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Markup</div><div class="text-xl font-bold font-mono" id="fc-markup">0x</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Profit / Plate</div><div class="text-xl font-bold font-mono" id="fc-profit">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Gross Margin</div><div class="text-xl font-bold font-mono" id="fc-margin">0%</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Daily Profit</div><div class="text-xl font-bold font-mono" id="fc-daily">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly Profit</div><div class="text-xl font-bold font-mono" id="fc-monthly">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="food-cost" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcFC() {
      const cost = parseFloat((document.getElementById('fc-cost') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('fc-price') as HTMLInputElement).value) || 0;
      const portions = parseFloat((document.getElementById('fc-portions') as HTMLInputElement).value) || 0;
      const days = parseFloat((document.getElementById('fc-days') as HTMLInputElement).value) || 0;
      const foodCostPct = price > 0 ? (cost / price) * 100 : 0;
      const markup = cost > 0 ? price / cost : 0;
      const profitPerPlate = price - cost;
      const grossMargin = price > 0 ? ((price - cost) / price) * 100 : 0;
      const dailyProfit = profitPerPlate * portions;
      const monthlyProfit = dailyProfit * days;
      document.getElementById('fc-result')!.textContent = foodCostPct.toFixed(1) + '%';
      document.getElementById('fc-markup')!.textContent = markup.toFixed(2) + 'x';
      document.getElementById('fc-profit')!.textContent = '$' + profitPerPlate.toFixed(2);
      document.getElementById('fc-margin')!.textContent = grossMargin.toFixed(1) + '%';
      document.getElementById('fc-daily')!.textContent = '$' + dailyProfit.toFixed(2);
      document.getElementById('fc-monthly')!.textContent = '$' + monthlyProfit.toFixed(0);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.fc-in').forEach(el => { el.addEventListener('input', calcFC); el.addEventListener('change', calcFC); });
      calcFC();
    }, 50);
  </script>
</CalculatorLayout>
