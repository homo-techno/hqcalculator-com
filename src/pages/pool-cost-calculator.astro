---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Pool Cost Calculator - Installation, Decking & Maintenance";
const description = "Estimate swimming pool costs by type, size, and depth. Get installation cost, decking, fencing, and annual maintenance estimates.";

const relatedCalcs = [
  { name: "Patio Calculator", url: "/patio-calculator", description: "Patio material." },
  { name: "Excavation Calculator", url: "/excavation-calculator", description: "Dig volume." },
  { name: "Concrete Calculator", url: "/concrete-calculator", description: "Concrete volume." },
  { name: "Fence Calculator", url: "/fence-calculator", description: "Fence material." },
  { name: "Fire Pit Calculator", url: "/fire-pit-calculator", description: "Fire pit materials." },
  { name: "Pergola Calculator", url: "/pergola-calculator", description: "Pergola lumber." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Pool Cost Calculator"
  keywords="pool cost calculator, swimming pool cost, in-ground pool, above-ground pool, fiberglass pool, pool maintenance cost"
  breadcrumbs={[{ name: "Pool Cost Calculator", url: "/pool-cost-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Pool Cost Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate the total cost of a swimming pool including installation, decking, fencing, and annual upkeep.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Pool Type</label>
            <select id="pl-type" class="w-full px-3 py-3 border border-border rounded-xl text-lg">
              <option value="above">Above-Ground (vinyl)</option>
              <option value="fiberglass">Fiberglass (in-ground)</option>
              <option value="vinyl-inground">Vinyl Liner (in-ground)</option>
              <option value="concrete-inground" selected>Concrete / Gunite (in-ground)</option>
            </select>
          </div>

          <div class="grid grid-cols-2 gap-3 mb-5">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Length (ft)</label>
              <input type="number" id="pl-length" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="30" min="8" step="1">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Width (ft)</label>
              <input type="number" id="pl-width" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="15" min="6" step="1">
            </div>
          </div>

          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Average Depth (ft)</label>
            <select id="pl-depth" class="w-full px-3 py-3 border border-border rounded-xl text-lg">
              <option value="3.5">3.5 ft (shallow)</option>
              <option value="4">4 ft</option>
              <option value="5" selected>5 ft (standard)</option>
              <option value="6">6 ft</option>
              <option value="8">8 ft (deep end)</option>
            </select>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl">
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label class="block text-xs font-medium text-text mb-1">Decking Width (ft)</label>
                <input type="number" id="pl-deck" class="w-full px-3 py-2 border border-border rounded-lg" value="4" min="0" max="12" step="1">
              </div>
              <div>
                <label class="block text-xs font-medium text-text mb-1">Fencing (linear ft)</label>
                <input type="number" id="pl-fence" class="w-full px-3 py-2 border border-border rounded-lg" value="100" min="0" step="5">
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Estimated Pool Cost</div>
            <div class="text-5xl font-extrabold font-mono" id="pl-cost">$0</div>
            <div class="text-sm text-blue-200 mt-1">pool installation only</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Decking Cost</div>
              <div class="text-xl font-bold" id="pl-deckcost">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Fencing Cost</div>
              <div class="text-xl font-bold" id="pl-fencecost">$0</div>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Pool Surface Area</div>
              <div class="text-xl font-bold" id="pl-surfarea">0 sq ft</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Water Volume</div>
              <div class="text-xl font-bold" id="pl-gallons">0 gal</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Annual Maintenance</div>
            <div class="text-2xl font-bold text-secondary" id="pl-annual">$0</div>
            <div class="text-xs text-text-muted">chemicals, cleaning, utilities</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Total Project Cost</div>
            <div class="text-2xl font-bold" id="pl-totalcost">$0</div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="pool-cost" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Pool Cost Estimates by Type</h2>
      <ul>
        <li><strong>Above-ground:</strong> $3,000-$15,000 installed</li>
        <li><strong>Fiberglass:</strong> $25,000-$65,000 installed</li>
        <li><strong>Vinyl liner (in-ground):</strong> $25,000-$50,000 installed</li>
        <li><strong>Concrete/Gunite:</strong> $50,000-$100,000+ installed</li>
      </ul>

      <h3 class="text-xl font-semibold text-text mt-8">Annual Maintenance Costs</h3>
      <ul>
        <li><strong>Chemicals:</strong> $500-$1,000/year</li>
        <li><strong>Electricity:</strong> $500-$1,200/year (pump, heater)</li>
        <li><strong>Cleaning/Service:</strong> $1,200-$2,400/year</li>
        <li><strong>Insurance increase:</strong> $50-$150/year</li>
      </ul>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const plCostPerSqFt: Record<string, number> = {
      'above': 20,
      'fiberglass': 100,
      'vinyl-inground': 75,
      'concrete-inground': 150,
    };

    function calcPool() {
      const poolType = (document.getElementById('pl-type') as HTMLSelectElement).value;
      const length = parseFloat((document.getElementById('pl-length') as HTMLInputElement).value) || 0;
      const width = parseFloat((document.getElementById('pl-width') as HTMLInputElement).value) || 0;
      const depth = parseFloat((document.getElementById('pl-depth') as HTMLSelectElement).value) || 5;
      const deckWidth = parseFloat((document.getElementById('pl-deck') as HTMLInputElement).value) || 0;
      const fenceLft = parseFloat((document.getElementById('pl-fence') as HTMLInputElement).value) || 0;

      const surfArea = length * width;
      const volumeCuFt = surfArea * depth;
      const gallons = volumeCuFt * 7.48;

      // Pool cost
      const costPerSf = plCostPerSqFt[poolType] || 100;
      const poolCost = surfArea * costPerSf;

      // Decking: perimeter of pool + deck width on all sides
      const deckPerim = 2 * (length + width);
      const deckArea = deckPerim * deckWidth + 4 * deckWidth * deckWidth; // include corners
      const deckCost = deckArea * 15; // ~$15/sf for concrete decking

      // Fencing at ~$30/lf installed
      const fenceCost = fenceLft * 30;

      // Annual maintenance
      const annualBase = poolType === 'above' ? 1500 : 3000;
      const annualPerGallon = gallons * 0.0005;
      const annualCost = Math.round(annualBase + annualPerGallon);

      const totalProject = poolCost + deckCost + fenceCost;

      document.getElementById('pl-cost')!.textContent = '$' + Math.round(poolCost).toLocaleString();
      document.getElementById('pl-deckcost')!.textContent = '$' + Math.round(deckCost).toLocaleString();
      document.getElementById('pl-fencecost')!.textContent = '$' + Math.round(fenceCost).toLocaleString();
      document.getElementById('pl-surfarea')!.textContent = surfArea.toLocaleString() + ' sq ft';
      document.getElementById('pl-gallons')!.textContent = Math.round(gallons).toLocaleString() + ' gal';
      document.getElementById('pl-annual')!.textContent = '$' + annualCost.toLocaleString() + '/yr';
      document.getElementById('pl-totalcost')!.textContent = '$' + Math.round(totalProject).toLocaleString();

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('#pl-length, #pl-width, #pl-deck, #pl-fence').forEach(el => {
        el.addEventListener('input', calcPool);
        el.addEventListener('change', calcPool);
      });
      document.querySelectorAll('#pl-type, #pl-depth').forEach(el => {
        el.addEventListener('input', calcPool);
        el.addEventListener('change', calcPool);
      });
      calcPool();
    }, 50);
  </script>
</CalculatorLayout>
