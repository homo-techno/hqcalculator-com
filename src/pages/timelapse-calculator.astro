---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Timelapse Calculator - Interval, Frames, Duration & Storage";
const description = "Calculate timelapse shooting interval, total frames needed, shooting duration, output video length, and storage requirements per frame.";
const relatedCalcs = [
  { name: "Video Frame Rate", url: "/video-frame-rate-calculator", description: "Frame rate conversions." },
  { name: "Video Storage", url: "/video-storage-calculator", description: "Storage for video." },
  { name: "Exposure Calculator", url: "/exposure-calculator", description: "Exposure settings." },
  { name: "Video Bitrate", url: "/video-bitrate-calculator", description: "File size from bitrate." },
  { name: "Photo Resolution", url: "/photo-resolution-calculator", description: "Image file sizes." },
  { name: "Data Storage", url: "/data-storage-converter", description: "Storage conversions." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Timelapse Calculator" keywords="timelapse calculator, time lapse interval, timelapse frames, shooting duration, timelapse storage, intervalometer" breadcrumbs={[{ name: "Timelapse", url: "/timelapse-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Timelapse Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Plan your timelapse: calculate interval, total frames, shooting time, and storage needs.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-text mb-1">Desired Output Duration (seconds)</label>
          <input type="number" id="tl-output" class="tl-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="30" min="1" step="1">
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">Output Frame Rate (fps)</label>
          <select id="tl-fps" class="tl-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="24">24 fps (Cinema)</option>
            <option value="25">25 fps (PAL)</option>
            <option value="30" selected>30 fps</option>
            <option value="60">60 fps</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">Shooting Interval (seconds between shots)</label>
          <input type="number" id="tl-interval" class="tl-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="5" min="0.5" step="0.5">
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">Suggested Subject</label>
          <select id="tl-subject" class="tl-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="1">Clouds (1-3s)</option>
            <option value="5" selected>Sunset/Sunrise (3-5s)</option>
            <option value="10">City Traffic (5-10s)</option>
            <option value="30">Crowd Movement (15-30s)</option>
            <option value="60">Shadows/Sun (30-60s)</option>
            <option value="300">Plants Growing (1-10 min)</option>
            <option value="600">Construction (5-15 min)</option>
            <option value="1800">Stars (15-30s exposure)</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">File Size per Photo (MB)</label>
          <input type="number" id="tl-filesize" class="tl-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="25" min="1" step="1">
        </div>

        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Frames Needed</div>
          <div class="text-4xl font-extrabold" id="tl-frames"></div>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Shooting Duration</div>
            <div class="text-xl font-bold text-text" id="tl-shoot-time"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Output Duration</div>
            <div class="text-xl font-bold text-text" id="tl-out-dur"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Total Storage</div>
            <div class="text-xl font-bold text-text" id="tl-storage"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Speed-up Factor</div>
            <div class="text-xl font-bold text-text" id="tl-speedup"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Max Shutter Speed</div>
            <div class="text-xl font-bold text-text" id="tl-maxshutter"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Real-time Captured</div>
            <div class="text-xl font-bold text-text" id="tl-realtime"></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="timelapse" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Timelapse Planning Guide</h2>
      <p>The key to a smooth timelapse is choosing the right interval. Shorter intervals (1-3s) are best for fast-moving subjects like clouds, while longer intervals work for slow changes.</p>
      <p><strong>Storage tip:</strong> Shooting RAW gives more editing flexibility but requires significantly more storage. A 30-second timelapse at 30fps needs 900 frames.</p>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcTL() {
      const outputDur = parseFloat((document.getElementById('tl-output') as HTMLInputElement).value) || 30;
      const fps = parseInt((document.getElementById('tl-fps') as HTMLSelectElement).value);
      const interval = parseFloat((document.getElementById('tl-interval') as HTMLInputElement).value) || 5;
      const fileMB = parseFloat((document.getElementById('tl-filesize') as HTMLInputElement).value) || 25;

      const totalFrames = Math.ceil(outputDur * fps);
      const shootTimeSec = totalFrames * interval;
      const totalStorageMB = totalFrames * fileMB;
      const speedup = interval * fps;

      document.getElementById('tl-frames')!.textContent = totalFrames.toLocaleString() + ' frames';

      function fmtTime(s: number): string {
        if (s < 60) return s.toFixed(0) + 's';
        if (s < 3600) return Math.floor(s / 60) + 'm ' + Math.round(s % 60) + 's';
        const h = Math.floor(s / 3600);
        const m = Math.floor((s % 3600) / 60);
        return h + 'h ' + m + 'm';
      }

      document.getElementById('tl-shoot-time')!.textContent = fmtTime(shootTimeSec);
      document.getElementById('tl-out-dur')!.textContent = outputDur + 's (' + fps + 'fps)';

      if (totalStorageMB >= 1024) {
        document.getElementById('tl-storage')!.textContent = (totalStorageMB / 1024).toFixed(1) + ' GB';
      } else {
        document.getElementById('tl-storage')!.textContent = totalStorageMB.toFixed(0) + ' MB';
      }

      document.getElementById('tl-speedup')!.textContent = speedup + 'x';
      document.getElementById('tl-maxshutter')!.textContent = interval.toFixed(1) + 's';
      document.getElementById('tl-realtime')!.textContent = fmtTime(shootTimeSec);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('.tl-in').forEach(el => {
        el.addEventListener('input', calcTL);
        el.addEventListener('change', calcTL);
      });

      document.getElementById('tl-subject')!.addEventListener('change', () => {
        const val = (document.getElementById('tl-subject') as HTMLSelectElement).value;
        (document.getElementById('tl-interval') as HTMLInputElement).value = val;
        calcTL();
      });

      calcTL();
    }, 50);
  </script>
</CalculatorLayout>
