---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Debt-to-Income Calculator - Check Your DTI Ratio";
const description = "Calculate your debt-to-income ratio to see if you qualify for a mortgage or loan. Lenders use DTI to evaluate creditworthiness.";

const relatedCalcs = [
  { name: "Mortgage Calculator", url: "/mortgage-calculator", description: "Home loans." },
  { name: "Loan Calculator", url: "/loan-calculator", description: "Loan payments." },
  { name: "Debt Payoff", url: "/debt-payoff-calculator", description: "Debt payoff." },
  { name: "Net Worth", url: "/net-worth-calculator", description: "Net worth." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Salary Calculator", url: "/salary-calculator", description: "Salary." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Debt-to-Income Calculator" keywords="debt to income ratio, DTI calculator, mortgage qualification, loan qualification, debt ratio" breadcrumbs={[{ name: "DTI Calculator", url: "/debt-to-income-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Debt-to-Income Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Find your DTI ratio — a key factor lenders use to approve loans.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Gross Monthly Income</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="dti-income" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="6000" min="0" step="100">
            </div>
          </div>
          <h3 class="font-semibold text-text">Monthly Debt Payments</h3>
          <div class="space-y-3">
            <div class="flex items-center gap-2">
              <label class="text-xs text-text-secondary w-36">Mortgage / Rent</label>
              <div class="relative flex-1"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span>
                <input type="number" class="dti-debt w-full pl-6 pr-2 py-2 border border-border rounded-lg text-sm" value="1500" min="0" step="50">
              </div>
            </div>
            <div class="flex items-center gap-2">
              <label class="text-xs text-text-secondary w-36">Car Payment</label>
              <div class="relative flex-1"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span>
                <input type="number" class="dti-debt w-full pl-6 pr-2 py-2 border border-border rounded-lg text-sm" value="400" min="0" step="25">
              </div>
            </div>
            <div class="flex items-center gap-2">
              <label class="text-xs text-text-secondary w-36">Student Loans</label>
              <div class="relative flex-1"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span>
                <input type="number" class="dti-debt w-full pl-6 pr-2 py-2 border border-border rounded-lg text-sm" value="300" min="0" step="25">
              </div>
            </div>
            <div class="flex items-center gap-2">
              <label class="text-xs text-text-secondary w-36">Credit Card Min.</label>
              <div class="relative flex-1"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span>
                <input type="number" class="dti-debt w-full pl-6 pr-2 py-2 border border-border rounded-lg text-sm" value="100" min="0" step="25">
              </div>
            </div>
            <div class="flex items-center gap-2">
              <label class="text-xs text-text-secondary w-36">Personal Loans</label>
              <div class="relative flex-1"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span>
                <input type="number" class="dti-debt w-full pl-6 pr-2 py-2 border border-border rounded-lg text-sm" value="0" min="0" step="25">
              </div>
            </div>
            <div class="flex items-center gap-2">
              <label class="text-xs text-text-secondary w-36">Other Debts</label>
              <div class="relative flex-1"><span class="absolute left-2 top-1/2 -translate-y-1/2 text-text-muted text-xs">$</span>
                <input type="number" class="dti-debt w-full pl-6 pr-2 py-2 border border-border rounded-lg text-sm" value="0" min="0" step="25">
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 rounded-2xl text-white text-center" id="dti-box" style="background:#22c55e;">
            <div class="text-sm uppercase tracking-wide mb-1 opacity-80">Debt-to-Income Ratio</div>
            <div class="text-6xl font-extrabold" id="dti-ratio">0%</div>
            <div class="text-lg mt-1 font-semibold" id="dti-verdict">Excellent</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Total Debt/mo</div>
              <div class="text-xl font-bold text-secondary" id="dti-total-debt">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Remaining Income</div>
              <div class="text-xl font-bold" id="dti-remaining">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-3">DTI Guidelines</h3>
            <div class="space-y-2 text-sm">
              <div class="flex justify-between"><span class="text-green-600 font-semibold">Under 36%</span><span class="text-text-secondary">Excellent — easily approved</span></div>
              <div class="flex justify-between"><span class="text-yellow-600 font-semibold">36% - 43%</span><span class="text-text-secondary">Acceptable for most loans</span></div>
              <div class="flex justify-between"><span class="text-orange-600 font-semibold">43% - 50%</span><span class="text-text-secondary">May have difficulty</span></div>
              <div class="flex justify-between"><span class="text-red-600 font-semibold">Over 50%</span><span class="text-text-secondary">Unlikely to qualify</span></div>
            </div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="dti" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Understanding Debt-to-Income Ratio</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm">
        <p><strong>DTI</strong> = (Total Monthly Debt Payments ÷ Gross Monthly Income) × 100</p>
      </div>
      <p>Most mortgage lenders prefer a DTI of 43% or less. FHA loans may allow up to 50% in some cases. A lower DTI means you have more financial flexibility.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcDTI() {
      const income = parseFloat((document.getElementById('dti-income') as HTMLInputElement).value) || 0;
      let totalDebt = 0;
      document.querySelectorAll('.dti-debt').forEach(el => {
        totalDebt += parseFloat((el as HTMLInputElement).value) || 0;
      });

      const ratio = income > 0 ? (totalDebt / income) * 100 : 0;
      const remaining = income - totalDebt;

      document.getElementById('dti-ratio')!.textContent = ratio.toFixed(1) + '%';
      document.getElementById('dti-total-debt')!.textContent = fmt(totalDebt);
      document.getElementById('dti-remaining')!.textContent = fmt(remaining);

      let color: string, verdict: string;
      if (ratio < 36) { color = '#22c55e'; verdict = 'Excellent — Strong position'; }
      else if (ratio < 43) { color = '#eab308'; verdict = 'Acceptable — Qualifies for most loans'; }
      else if (ratio < 50) { color = '#f97316'; verdict = 'High — May have difficulty'; }
      else { color = '#ef4444'; verdict = 'Very High — Unlikely to qualify'; }

      document.getElementById('dti-box')!.style.backgroundColor = color;
      document.getElementById('dti-verdict')!.textContent = verdict;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.getElementById('dti-income')!.addEventListener('input', calcDTI);
      document.querySelectorAll('.dti-debt').forEach(el => el.addEventListener('input', calcDTI));
      calcDTI();
    }, 50);
  </script>
</CalculatorLayout>
