---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Candle Burn Time Calculator";
const description = "Calculate how long a candle will burn based on weight, wax type, and wick size.";
const relatedCalcs = [
  { name: "Countdown", url: "/countdown-calculator", description: "Countdown." },
  { name: "Time Calculator", url: "/time-calculator", description: "Time." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight." },
  { name: "Unit Price", url: "/unit-price-calculator", description: "Unit price." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Candle Burn Time Calculator" keywords="candle burn time, candle calculator, wax burn rate, soy candle, paraffin candle, candle making" breadcrumbs={[{ name: "Candle Burn Time", url: "/candle-burn-time-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Candle Burn Time Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate how long your candle will burn.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Candle Weight (oz)</label><input type="number" id="cb-wt" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="8" min="0" step="0.5"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Wax Type</label>
            <select id="cb-wax" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="7" selected>Soy Wax (~7 hrs/oz)</option>
              <option value="5">Paraffin (~5 hrs/oz)</option>
              <option value="6">Beeswax (~6 hrs/oz)</option>
              <option value="8">Coconut Wax (~8 hrs/oz)</option>
              <option value="6.5">Palm Wax (~6.5 hrs/oz)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Candle Price ($)</label><input type="number" id="cb-price" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="18" min="0" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Usage (hrs/day)</label><input type="number" id="cb-use" class="cb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="0" max="24" step="0.5"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Burn Time</div>
          <div class="text-5xl font-extrabold font-mono" id="cb-result">0 hrs</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Days of Use</div><div class="text-xl font-bold font-mono" id="cb-days">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost/Hour</div><div class="text-xl font-bold font-mono" id="cb-cph">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost/Day</div><div class="text-xl font-bold font-mono" id="cb-cpd">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="candle-burn-time" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCB() {
      const wt = parseFloat((document.getElementById('cb-wt') as HTMLInputElement).value) || 0;
      const rate = parseFloat((document.getElementById('cb-wax') as HTMLSelectElement).value) || 7;
      const price = parseFloat((document.getElementById('cb-price') as HTMLInputElement).value) || 0;
      const use = parseFloat((document.getElementById('cb-use') as HTMLInputElement).value) || 1;
      const totalHrs = wt * rate;
      const days = use > 0 ? totalHrs / use : 0;
      const costHr = totalHrs > 0 ? price / totalHrs : 0;
      const costDay = use > 0 ? costHr * use : 0;
      document.getElementById('cb-result')!.textContent = totalHrs.toFixed(0) + ' hrs';
      document.getElementById('cb-days')!.textContent = Math.floor(days).toString();
      document.getElementById('cb-cph')!.textContent = '$' + costHr.toFixed(2);
      document.getElementById('cb-cpd')!.textContent = '$' + costDay.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.cb-in').forEach(el => { el.addEventListener('input', calcCB); el.addEventListener('change', calcCB); });
      calcCB();
    }, 50);
  </script>
</CalculatorLayout>
