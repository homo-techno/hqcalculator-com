---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Down Payment Calculator - How Much Do You Need to Save?";
const description = "Calculate your down payment amount, monthly savings goal, and see how different down payment percentages affect your mortgage.";

const relatedCalcs = [
  { name: "Mortgage Calculator", url: "/mortgage-calculator", description: "Home loans." },
  { name: "Rent vs Buy", url: "/rent-vs-buy-calculator", description: "Rent vs buy." },
  { name: "Loan Calculator", url: "/loan-calculator", description: "Loan payments." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Returns." },
  { name: "Paycheck Calculator", url: "/paycheck-calculator", description: "Take-home pay." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Down Payment Calculator"
  keywords="down payment calculator, how much down payment, home down payment, savings goal, mortgage down payment, PMI"
  breadcrumbs={[{ name: "Down Payment", url: "/down-payment-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Down Payment Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Plan your home down payment and see the impact on your monthly mortgage.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <div class="space-y-4 mb-6">
            <div>
              <label class="block text-sm font-medium text-text mb-1">Home Price</label>
              <div class="relative">
                <span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
                <input type="number" id="dp-price" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="350000" min="0" step="10000">
              </div>
            </div>
            <div>
              <label class="block text-sm font-medium text-text mb-1">Down Payment (%)</label>
              <input type="range" id="dp-pct-slider" class="w-full" min="0" max="50" step="1" value="20">
              <div class="flex justify-between text-xs text-text-muted mt-1">
                <span>0%</span>
                <span class="font-bold text-primary" id="dp-pct-display">20%</span>
                <span>50%</span>
              </div>
            </div>
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label class="block text-xs font-medium text-text mb-1">Mortgage Rate (%)</label>
                <input type="number" id="dp-rate" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="6.5" min="0" max="20" step="0.125">
              </div>
              <div>
                <label class="block text-xs font-medium text-text mb-1">Loan Term (years)</label>
                <input type="number" id="dp-term" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="30" min="1" max="50">
              </div>
            </div>
          </div>

          <h3 class="font-semibold text-text mb-3">Savings Plan</h3>
          <div class="p-4 bg-surface-alt rounded-xl space-y-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Current Savings</label>
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
                <input type="number" id="dp-saved" class="w-full pl-7 pr-3 py-2 border border-border rounded-lg" value="15000" min="0" step="500">
              </div>
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Monthly Savings</label>
              <div class="relative">
                <span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
                <input type="number" id="dp-monthly" class="w-full pl-7 pr-3 py-2 border border-border rounded-lg" value="1500" min="0" step="100">
              </div>
            </div>
          </div>

          <!-- Quick % buttons -->
          <div class="flex gap-2 mt-4 flex-wrap">
            <button class="dp-quick px-3 py-1.5 text-xs rounded-lg border border-border hover:bg-surface-alt font-semibold" data-pct="3">3%</button>
            <button class="dp-quick px-3 py-1.5 text-xs rounded-lg border border-border hover:bg-surface-alt font-semibold" data-pct="5">5%</button>
            <button class="dp-quick px-3 py-1.5 text-xs rounded-lg border border-border hover:bg-surface-alt font-semibold" data-pct="10">10%</button>
            <button class="dp-quick px-3 py-1.5 text-xs rounded-lg border border-border hover:bg-surface-alt font-semibold" data-pct="15">15%</button>
            <button class="dp-quick px-3 py-1.5 text-xs rounded-lg border border-border hover:bg-surface-alt font-semibold" data-pct="20">20%</button>
            <button class="dp-quick px-3 py-1.5 text-xs rounded-lg border border-border hover:bg-surface-alt font-semibold" data-pct="25">25%</button>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Down Payment</div>
            <div class="text-4xl font-extrabold" id="dp-amount">$70,000</div>
            <div class="text-sm text-blue-200 mt-1" id="dp-pct-text">20% of $350,000</div>
          </div>

          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Loan Amount</div>
              <div class="text-xl font-bold" id="dp-loan">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Monthly Payment</div>
              <div class="text-xl font-bold text-secondary" id="dp-payment">$0</div>
            </div>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">PMI (if &lt; 20%)</div>
            <div class="text-xl font-bold" id="dp-pmi">$0/mo</div>
            <div class="text-xs text-text-muted mt-1" id="dp-pmi-note"></div>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Time to Save Remaining</div>
            <div class="text-2xl font-bold" id="dp-time">0 months</div>
            <div class="text-xs text-text-muted mt-1" id="dp-remaining">$0 remaining</div>
          </div>

          <!-- Comparison table -->
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-3">Down Payment Comparison</h3>
            <div class="space-y-1 text-sm" id="dp-comparison"></div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="down-payment" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Down Payment Guide</h2>
      <p>A down payment is the upfront cash you pay when purchasing a home. The standard recommendation is 20%, which avoids private mortgage insurance (PMI), but many programs allow as little as 3%.</p>

      <h3 class="text-xl font-semibold text-text mt-8">Frequently Asked Questions</h3>
      <p><strong>What is PMI?</strong> Private Mortgage Insurance costs 0.5-1% of the loan annually and is required if your down payment is less than 20%. It protects the lender, not you.</p>
      <p><strong>What's the minimum down payment?</strong> Conventional loans require 3-5%, FHA loans 3.5%, VA and USDA loans can be 0% down for qualified buyers.</p>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcDP() {
      const price = parseFloat((document.getElementById('dp-price') as HTMLInputElement).value) || 0;
      const pct = parseFloat((document.getElementById('dp-pct-slider') as HTMLInputElement).value) || 0;
      const rate = (parseFloat((document.getElementById('dp-rate') as HTMLInputElement).value) || 0) / 100;
      const term = parseInt((document.getElementById('dp-term') as HTMLInputElement).value) || 30;
      const saved = parseFloat((document.getElementById('dp-saved') as HTMLInputElement).value) || 0;
      const monthly = parseFloat((document.getElementById('dp-monthly') as HTMLInputElement).value) || 0;

      const downPayment = price * pct / 100;
      const loan = price - downPayment;
      const monthlyRate = rate / 12;
      const totalPayments = term * 12;
      const payment = monthlyRate > 0
        ? loan * monthlyRate * Math.pow(1 + monthlyRate, totalPayments) / (Math.pow(1 + monthlyRate, totalPayments) - 1)
        : loan / totalPayments;

      // PMI
      const pmiRate = pct < 20 ? 0.007 : 0;
      const pmiMonthly = loan * pmiRate / 12;

      // Time to save
      const remaining = Math.max(0, downPayment - saved);
      const monthsToSave = monthly > 0 ? Math.ceil(remaining / monthly) : remaining > 0 ? Infinity : 0;

      document.getElementById('dp-pct-display')!.textContent = pct + '%';
      document.getElementById('dp-amount')!.textContent = fmt(downPayment);
      document.getElementById('dp-pct-text')!.textContent = `${pct}% of ${fmt(price)}`;
      document.getElementById('dp-loan')!.textContent = fmt(loan);
      document.getElementById('dp-payment')!.textContent = fmt(payment);

      document.getElementById('dp-pmi')!.textContent = pmiMonthly > 0 ? fmt(pmiMonthly) + '/mo' : 'Not required';
      document.getElementById('dp-pmi-note')!.textContent = pmiMonthly > 0 ? `${fmt(pmiMonthly * 12)}/yr until 20% equity reached` : 'Down payment ≥ 20%';

      document.getElementById('dp-remaining')!.textContent = `${fmt(remaining)} remaining to save`;
      if (monthsToSave === Infinity) {
        document.getElementById('dp-time')!.textContent = 'Set monthly savings';
      } else if (monthsToSave === 0) {
        document.getElementById('dp-time')!.textContent = 'Already saved!';
      } else {
        const yrs = Math.floor(monthsToSave / 12);
        const mos = monthsToSave % 12;
        document.getElementById('dp-time')!.textContent = yrs > 0 ? `${yrs}y ${mos}m` : `${mos} months`;
      }

      // Comparison table
      const comparisons = [3, 5, 10, 15, 20, 25];
      document.getElementById('dp-comparison')!.innerHTML =
        '<div class="grid grid-cols-4 gap-2 font-semibold text-xs text-text-muted mb-2"><span>Down %</span><span>Amount</span><span>Monthly</span><span>PMI</span></div>' +
        comparisons.map(p => {
          const dp = price * p / 100;
          const ln = price - dp;
          const mp = monthlyRate > 0 ? ln * monthlyRate * Math.pow(1 + monthlyRate, totalPayments) / (Math.pow(1 + monthlyRate, totalPayments) - 1) : ln / totalPayments;
          const pmi = p < 20 ? ln * 0.007 / 12 : 0;
          const isCurrent = p === pct;
          return `<div class="grid grid-cols-4 gap-2 text-xs ${isCurrent ? 'font-bold text-primary' : ''}">
            <span>${p}%</span><span>${fmt(dp)}</span><span>${fmt(mp)}</span><span>${pmi > 0 ? fmt(pmi) : '—'}</span>
          </div>`;
        }).join('');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['dp-price', 'dp-rate', 'dp-term', 'dp-saved', 'dp-monthly'].forEach(id => {
        document.getElementById(id)?.addEventListener('input', calcDP);
      });
      document.getElementById('dp-pct-slider')!.addEventListener('input', calcDP);

      document.querySelectorAll('.dp-quick').forEach(btn => {
        btn.addEventListener('click', () => {
          (document.getElementById('dp-pct-slider') as HTMLInputElement).value = (btn as HTMLElement).dataset.pct || '20';
          calcDP();
        });
      });

      calcDP();
    }, 50);
  </script>
</CalculatorLayout>
