---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Leather Calculator - Hide Yield & Thickness";
const description = "Calculate leather hide yield from project patterns, convert thickness between oz and mm, and estimate cost per square foot.";
const relatedCalcs = [
  { name: "Fabric Calculator", url: "/fabric-calculator", description: "Fabric yardage." },
  { name: "Area Calculator", url: "/area-calculator", description: "Area calculations." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight conversion." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Unit Price", url: "/unit-price-calculator", description: "Unit pricing." },
  { name: "Length Converter", url: "/length-converter", description: "Length conversion." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Leather Calculator" keywords="leather calculator, hide yield, leather thickness, oz to mm, leather cost, leather crafting" breadcrumbs={[{ name: "Leather", url: "/leather-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Leather Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate hide yield, convert leather thickness (oz to mm), and estimate material costs.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Project Type</label>
          <select id="lc-proj" class="lc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="wallet" selected>Wallet / Card Holder</option>
            <option value="belt">Belt</option>
            <option value="bag">Bag / Tote</option>
            <option value="journal">Journal Cover</option>
            <option value="holster">Holster / Sheath</option>
            <option value="custom">Custom Dimensions</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Piece Width (inches)</label><input type="number" id="lc-w" class="lc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="1" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Piece Height (inches)</label><input type="number" id="lc-h" class="lc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="1" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Number of Pieces</label><input type="number" id="lc-qty" class="lc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Leather Thickness (oz)</label><input type="number" id="lc-oz" class="lc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="1" max="16" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Hide Size (sq ft)</label><input type="number" id="lc-hide" class="lc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Hide Cost ($)</label><input type="number" id="lc-cost" class="lc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="80" min="0" step="5"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Waste Factor (%)</label><input type="number" id="lc-waste" class="lc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="25" min="0" max="50" step="5"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Leather Needed</div>
          <div class="text-4xl font-extrabold font-mono" id="lc-result">0 sq ft</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Thickness (mm)</div><div class="text-xl font-bold font-mono" id="lc-mm">0 mm</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Projects/Hide</div><div class="text-xl font-bold font-mono" id="lc-yield">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost/Sq Ft</div><div class="text-xl font-bold font-mono" id="lc-pcsf">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Project Cost</div><div class="text-xl font-bold font-mono" id="lc-pcost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Rec. Weight</div><div class="text-xl font-bold font-mono" id="lc-weight">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="leather" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcLC() {
      const proj = (document.getElementById('lc-proj') as HTMLSelectElement).value;
      let w = parseFloat((document.getElementById('lc-w') as HTMLInputElement).value) || 8;
      let h = parseFloat((document.getElementById('lc-h') as HTMLInputElement).value) || 4;
      const qty = parseInt((document.getElementById('lc-qty') as HTMLInputElement).value) || 1;
      const oz = parseFloat((document.getElementById('lc-oz') as HTMLInputElement).value) || 5;
      const hideSize = parseFloat((document.getElementById('lc-hide') as HTMLInputElement).value) || 20;
      const hideCost = parseFloat((document.getElementById('lc-cost') as HTMLInputElement).value) || 0;
      const waste = parseFloat((document.getElementById('lc-waste') as HTMLInputElement).value) || 25;

      // Project presets
      const presets: Record<string, [number, number, number]> = {
        wallet: [8, 4, 3], belt: [48, 1.5, 1], bag: [18, 14, 4],
        journal: [12, 8, 2], holster: [10, 6, 2]
      };
      if (proj !== 'custom' && presets[proj]) {
        w = presets[proj][0];
        h = presets[proj][1];
        (document.getElementById('lc-w') as HTMLInputElement).value = w.toString();
        (document.getElementById('lc-h') as HTMLInputElement).value = h.toString();
        if (qty === 1) {
          (document.getElementById('lc-qty') as HTMLInputElement).value = presets[proj][2].toString();
        }
      }

      const pieceSqIn = w * h;
      const totalSqIn = pieceSqIn * qty;
      const totalSqFt = totalSqIn / 144;
      const withWaste = totalSqFt * (1 + waste / 100);

      // Thickness conversion: 1 oz = 0.4mm (standard leather measurement)
      const thicknessMm = oz * 0.4;

      // Projects per hide
      const usableHide = hideSize * (1 - waste / 100);
      const projectsPerHide = Math.floor(usableHide / totalSqFt);

      // Cost
      const costPerSqFt = hideSize > 0 ? hideCost / hideSize : 0;
      const projectCost = withWaste * costPerSqFt;

      // Weight recommendation
      let weightRec = 'Medium (4-5 oz)';
      if (proj === 'wallet') weightRec = 'Light (2-3 oz)';
      else if (proj === 'belt') weightRec = 'Heavy (8-10 oz)';
      else if (proj === 'bag') weightRec = 'Medium (4-6 oz)';
      else if (proj === 'holster') weightRec = 'Heavy (7-9 oz)';
      else if (proj === 'journal') weightRec = 'Medium (3-4 oz)';

      document.getElementById('lc-result')!.textContent = withWaste.toFixed(2) + ' sq ft';
      document.getElementById('lc-mm')!.textContent = thicknessMm.toFixed(1) + ' mm';
      document.getElementById('lc-yield')!.textContent = projectsPerHide > 0 ? projectsPerHide.toString() : '< 1';
      document.getElementById('lc-pcsf')!.textContent = '$' + costPerSqFt.toFixed(2);
      document.getElementById('lc-pcost')!.textContent = '$' + projectCost.toFixed(2);
      document.getElementById('lc-weight')!.textContent = weightRec;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.lc-in').forEach(el => { el.addEventListener('input', calcLC); el.addEventListener('change', calcLC); });
      calcLC();
    }, 50);
  </script>
</CalculatorLayout>
