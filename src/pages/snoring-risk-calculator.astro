---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Snoring Risk Calculator";
const description = "Assess snoring and obstructive sleep apnea risk from BMI, neck circumference, age, gender, and Epworth sleepiness scale score.";
const relatedCalcs = [
  { name: "BMI Calculator", url: "/bmi-calculator", description: "Body mass index calculator." },
  { name: "Sleep Calculator", url: "/sleep-calculator", description: "Optimal sleep time calculator." },
  { name: "Hearing Loss Calculator", url: "/hearing-loss-calculator", description: "Classify hearing loss level." },
  { name: "Blood Pressure Calculator", url: "/blood-pressure-calculator", description: "Blood pressure classification." },
  { name: "Body Fat Calculator", url: "/body-fat-calculator", description: "Body fat percentage." },
  { name: "Heart Rate Calculator", url: "/heart-rate-calculator", description: "Heart rate zones." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Snoring Risk Calculator" keywords="snoring risk, sleep apnea risk, OSA screening, STOP-BANG, Epworth sleepiness, neck circumference snoring" breadcrumbs={[{ name: "Snoring Risk", url: "/snoring-risk-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Snoring Risk Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Evaluate your snoring and obstructive sleep apnea risk using STOP-BANG criteria and Epworth sleepiness.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Age</label><input type="number" id="sn3-age" class="sn3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="45" min="18" max="100" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Gender</label>
            <select id="sn3-gender" class="sn3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="male" selected>Male</option>
              <option value="female">Female</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">BMI (kg/m2)</label><input type="number" id="sn3-bmi" class="sn3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="28" min="15" max="60" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Neck Circumference (inches)</label><input type="number" id="sn3-neck" class="sn3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="16" min="10" max="25" step="0.5"></div>
        </div>
        <div class="p-3 bg-blue-50 rounded-xl text-center text-xs font-semibold text-blue-900 uppercase tracking-wide">STOP-BANG Questions</div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Do you Snore loudly?</label>
            <select id="sn3-snore" class="sn3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="0">No</option>
              <option value="1" selected>Yes</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Feel Tired/sleepy daytime?</label>
            <select id="sn3-tired" class="sn3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="0">No</option>
              <option value="1" selected>Yes</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Observed stop breathing?</label>
            <select id="sn3-obs" class="sn3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="0" selected>No</option>
              <option value="1">Yes</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Treated for high BP?</label>
            <select id="sn3-bp" class="sn3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="0" selected>No</option>
              <option value="1">Yes</option>
            </select>
          </div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Epworth Sleepiness Score (0-24)</label><input type="number" id="sn3-epworth" class="sn3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" max="24" step="1"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">OSA Risk Level</div>
          <div class="text-4xl font-extrabold font-mono" id="sn3-risk">Low Risk</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">STOP-BANG Score</div><div class="text-xl font-bold font-mono" id="sn3-sb">0 / 8</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Epworth Level</div><div class="text-xl font-bold font-mono" id="sn3-ep">Normal</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Neck Risk</div><div class="text-xl font-bold font-mono" id="sn3-nr">-</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl text-center">
          <div class="text-xs text-text-muted uppercase mb-1">Recommendation</div>
          <div class="text-lg font-bold font-mono" id="sn3-rec">-</div>
        </div>
        <div class="p-3 bg-amber-50 rounded-xl text-center text-xs text-amber-800 font-semibold">
          This is a screening tool only. A sleep study is needed for diagnosis of sleep apnea.
        </div>
      </div>
      <ShareButton calculatorId="snoring-risk" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSN3() {
      const age = parseFloat((document.getElementById('sn3-age') as HTMLInputElement).value) || 45;
      const gender = (document.getElementById('sn3-gender') as HTMLSelectElement).value;
      const bmi = parseFloat((document.getElementById('sn3-bmi') as HTMLInputElement).value) || 25;
      const neck = parseFloat((document.getElementById('sn3-neck') as HTMLInputElement).value) || 15;
      const snore = parseInt((document.getElementById('sn3-snore') as HTMLSelectElement).value) || 0;
      const tired = parseInt((document.getElementById('sn3-tired') as HTMLSelectElement).value) || 0;
      const obs = parseInt((document.getElementById('sn3-obs') as HTMLSelectElement).value) || 0;
      const bp = parseInt((document.getElementById('sn3-bp') as HTMLSelectElement).value) || 0;
      const epworth = parseFloat((document.getElementById('sn3-epworth') as HTMLInputElement).value) || 0;

      // STOP-BANG scoring
      let sbScore = snore + tired + obs + bp;
      if (bmi > 35) sbScore++;
      if (age > 50) sbScore++;
      if (neck > 16) sbScore++; // >16 inches male, >15 female
      if (gender === 'male') sbScore++;

      // Risk classification
      let riskLevel: string;
      if (sbScore <= 2) riskLevel = 'Low Risk';
      else if (sbScore <= 4) riskLevel = 'Intermediate Risk';
      else riskLevel = 'High Risk';

      // Epworth interpretation
      let epLevel: string;
      if (epworth <= 7) epLevel = 'Normal';
      else if (epworth <= 10) epLevel = 'Mild Sleepiness';
      else if (epworth <= 15) epLevel = 'Moderate Sleepiness';
      else epLevel = 'Severe Sleepiness';

      // Neck risk
      const neckThreshold = gender === 'male' ? 17 : 16;
      const neckRisk = neck >= neckThreshold ? 'Elevated' : 'Normal';

      // Recommendation
      let rec: string;
      if (sbScore >= 5 || (sbScore >= 3 && epworth > 10)) {
        rec = 'High risk - sleep study (polysomnography) strongly recommended';
      } else if (sbScore >= 3) {
        rec = 'Moderate risk - discuss with doctor, consider home sleep test';
      } else if (epworth > 10) {
        rec = 'Daytime sleepiness present - evaluate for sleep disorders';
      } else {
        rec = 'Low risk - maintain healthy weight, sleep on your side';
      }

      document.getElementById('sn3-risk')!.textContent = riskLevel;
      document.getElementById('sn3-sb')!.textContent = sbScore + ' / 8';
      document.getElementById('sn3-ep')!.textContent = epLevel;
      document.getElementById('sn3-nr')!.textContent = neckRisk;
      document.getElementById('sn3-rec')!.textContent = rec;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.sn3-in').forEach(el => { el.addEventListener('input', calcSN3); el.addEventListener('change', calcSN3); });
      calcSN3();
    }, 50);
  </script>
</CalculatorLayout>
