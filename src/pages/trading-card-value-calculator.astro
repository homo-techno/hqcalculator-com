---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Trading Card Value Calculator";
const description = "Calculate collection value from card count and rarity tiers, grading premiums, and track your trading card portfolio value.";
const relatedCalcs = [
  { name: "Crypto Profit", url: "/crypto-profit-calculator", description: "Profit tracking." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage math." },
  { name: "Average Calculator", url: "/average-calculator", description: "Calculate averages." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Percentage Change", url: "/percentage-change-calculator", description: "Track changes." },
  { name: "Customer Lifetime Value", url: "/customer-lifetime-value-calculator", description: "Value analysis." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Trading Card Value Calculator" keywords="trading card value, card collection value, tcg portfolio, card grading premium, psa grading, card rarity value" breadcrumbs={[{ name: "Trading Card Value", url: "/trading-card-value-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Trading Card Value Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate your card collection's value based on rarity, condition, and grading.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Cards by Rarity Tier</h3>
          <div class="space-y-2">
            <div class="grid grid-cols-3 gap-2 text-xs text-text-muted font-semibold">
              <span>Rarity</span><span>Count</span><span>Avg Value ($)</span>
            </div>
            <div class="grid grid-cols-3 gap-2">
              <label class="text-sm">Common</label>
              <input type="number" class="tv-in tv-count px-2 py-1 border border-border rounded text-sm" id="tv-common-ct" min="0" value="500">
              <input type="number" class="tv-in tv-val px-2 py-1 border border-border rounded text-sm" id="tv-common-val" min="0" step="0.01" value="0.10">
            </div>
            <div class="grid grid-cols-3 gap-2">
              <label class="text-sm">Uncommon</label>
              <input type="number" class="tv-in tv-count px-2 py-1 border border-border rounded text-sm" id="tv-uncommon-ct" min="0" value="200">
              <input type="number" class="tv-in tv-val px-2 py-1 border border-border rounded text-sm" id="tv-uncommon-val" min="0" step="0.01" value="0.50">
            </div>
            <div class="grid grid-cols-3 gap-2">
              <label class="text-sm">Rare</label>
              <input type="number" class="tv-in tv-count px-2 py-1 border border-border rounded text-sm" id="tv-rare-ct" min="0" value="80">
              <input type="number" class="tv-in tv-val px-2 py-1 border border-border rounded text-sm" id="tv-rare-val" min="0" step="0.01" value="2.00">
            </div>
            <div class="grid grid-cols-3 gap-2">
              <label class="text-sm">Ultra Rare</label>
              <input type="number" class="tv-in tv-count px-2 py-1 border border-border rounded text-sm" id="tv-ultra-ct" min="0" value="20">
              <input type="number" class="tv-in tv-val px-2 py-1 border border-border rounded text-sm" id="tv-ultra-val" min="0" step="0.01" value="15.00">
            </div>
            <div class="grid grid-cols-3 gap-2">
              <label class="text-sm">Secret/Chase</label>
              <input type="number" class="tv-in tv-count px-2 py-1 border border-border rounded text-sm" id="tv-secret-ct" min="0" value="5">
              <input type="number" class="tv-in tv-val px-2 py-1 border border-border rounded text-sm" id="tv-secret-val" min="0" step="0.01" value="50.00">
            </div>
          </div>
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Grading Status</label>
          <select class="tv-in w-full px-4 py-2 border border-border rounded-lg" id="tv-grade">
            <option value="1" selected>Ungraded (Raw)</option>
            <option value="1.15">PSA/BGS 7 (Near Mint)</option>
            <option value="1.4">PSA/BGS 8 (NM-MT)</option>
            <option value="2.0">PSA/BGS 9 (Mint)</option>
            <option value="3.0">PSA 9.5 (Gem Mint)</option>
            <option value="5.0">PSA 10 (Gem Mint Perfect)</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Graded Cards Count</label>
          <input type="number" class="tv-in w-full px-4 py-2 border border-border rounded-lg" id="tv-graded" min="0" value="0">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-1">Grading Cost per Card ($)</label>
          <input type="number" class="tv-in w-full px-4 py-2 border border-border rounded-lg" id="tv-gradecost" min="0" step="1" value="20">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Collection Value</div>
          <div class="text-5xl font-extrabold font-mono" id="tv-result">--</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Total Cards</div>
            <div class="text-xl font-bold font-mono" id="tv-total">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Avg Value per Card</div>
            <div class="text-xl font-bold font-mono" id="tv-avg">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Grading Premium</div>
            <div class="text-xl font-bold font-mono" id="tv-premium">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Grading ROI</div>
            <div class="text-xl font-bold font-mono" id="tv-roi">--</div>
          </div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Value by Rarity</h3>
          <div class="text-xs font-mono space-y-1" id="tv-breakdown"></div>
        </div>
      </div>
      <ShareButton calculatorId="trading-card-value" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcTV() {
      const tiers = ['common', 'uncommon', 'rare', 'ultra', 'secret'];
      const tierNames = ['Common', 'Uncommon', 'Rare', 'Ultra Rare', 'Secret/Chase'];
      let totalValue = 0;
      let totalCards = 0;
      const tierValues: { name: string; count: number; value: number; total: number }[] = [];

      for (let i = 0; i < tiers.length; i++) {
        const count = parseInt((document.getElementById('tv-' + tiers[i] + '-ct') as HTMLInputElement).value) || 0;
        const val = parseFloat((document.getElementById('tv-' + tiers[i] + '-val') as HTMLInputElement).value) || 0;
        const tierTotal = count * val;
        totalValue += tierTotal;
        totalCards += count;
        tierValues.push({ name: tierNames[i], count, value: val, total: tierTotal });
      }

      const gradeMulti = parseFloat((document.getElementById('tv-grade') as HTMLSelectElement).value) || 1;
      const gradedCount = parseInt((document.getElementById('tv-graded') as HTMLInputElement).value) || 0;
      const gradeCost = parseFloat((document.getElementById('tv-gradecost') as HTMLInputElement).value) || 20;

      // Apply grading premium to graded cards (assume top-value cards get graded)
      // Sort tiers by value desc and apply grading to most valuable cards
      const sortedTiers = [...tierValues].sort((a, b) => b.value - a.value);
      let gradedRemaining = gradedCount;
      let gradingPremium = 0;
      let gradingCostTotal = gradedCount * gradeCost;

      for (const tier of sortedTiers) {
        if (gradedRemaining <= 0) break;
        const toGrade = Math.min(gradedRemaining, tier.count);
        const premiumPerCard = tier.value * (gradeMulti - 1);
        gradingPremium += toGrade * premiumPerCard;
        gradedRemaining -= toGrade;
      }

      const adjustedTotal = totalValue + gradingPremium;
      const avgPerCard = totalCards > 0 ? adjustedTotal / totalCards : 0;
      const roi = gradingCostTotal > 0 ? ((gradingPremium - gradingCostTotal) / gradingCostTotal * 100) : 0;

      document.getElementById('tv-result')!.textContent = '$' + adjustedTotal.toFixed(2);
      document.getElementById('tv-total')!.textContent = totalCards.toLocaleString();
      document.getElementById('tv-avg')!.textContent = '$' + avgPerCard.toFixed(2);
      document.getElementById('tv-premium')!.textContent = '+$' + gradingPremium.toFixed(2);
      document.getElementById('tv-roi')!.textContent = gradedCount > 0 ? roi.toFixed(0) + '%' : 'N/A';

      let html = '';
      for (const t of tierValues) {
        const pct = totalValue > 0 ? (t.total / totalValue * 100).toFixed(0) : '0';
        html += '<div class="flex justify-between py-0.5 border-b border-border"><span>' + t.name + ' (' + t.count + ' cards)</span><span>$' + t.total.toFixed(2) + ' (' + pct + '%)</span></div>';
      }
      html += '<div class="flex justify-between py-0.5 font-bold"><span>Raw Total</span><span>$' + totalValue.toFixed(2) + '</span></div>';
      if (gradingPremium > 0) {
        html += '<div class="flex justify-between py-0.5 font-bold text-green-600"><span>+ Grading Premium</span><span>$' + gradingPremium.toFixed(2) + '</span></div>';
      }
      document.getElementById('tv-breakdown')!.innerHTML = html;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.tv-in').forEach(el => { el.addEventListener('input', calcTV); el.addEventListener('change', calcTV); });
      calcTV();
    }, 50);
  </script>
</CalculatorLayout>
