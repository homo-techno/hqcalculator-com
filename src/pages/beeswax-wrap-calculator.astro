---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Beeswax Wrap Calculator - Wax, Resin & Fabric";
const description = "Calculate beeswax amount from fabric size, resin/oil ratio, number of wraps, and material cost for DIY beeswax food wraps.";
const relatedCalcs = [
  { name: "Fabric Calculator", url: "/fabric-calculator", description: "Fabric yardage." },
  { name: "Area Calculator", url: "/area-calculator", description: "Area calculations." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight conversion." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentages." },
  { name: "Unit Price", url: "/unit-price-calculator", description: "Unit pricing." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Beeswax Wrap Calculator" keywords="beeswax wrap calculator, beeswax food wrap, DIY wax wrap, pine resin, jojoba oil, eco wrap" breadcrumbs={[{ name: "Beeswax Wrap", url: "/beeswax-wrap-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Beeswax Wrap Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate beeswax, pine resin, and jojoba oil amounts for making DIY food wraps.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Wrap Size</label>
          <select id="bw-size" class="bw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="small" selected>Small (8x8 in)</option>
            <option value="medium">Medium (10x11 in)</option>
            <option value="large">Large (13x14 in)</option>
            <option value="xlarge">Extra Large (16x16 in)</option>
            <option value="custom">Custom Size</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Width (inches)</label><input type="number" id="bw-w" class="bw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="3" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Height (inches)</label><input type="number" id="bw-h" class="bw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="3" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Number of Wraps</label><input type="number" id="bw-qty" class="bw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="1" max="50" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Recipe Type</label>
            <select id="bw-recipe" class="bw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="standard" selected>Standard (Wax + Resin + Oil)</option>
              <option value="simple">Simple (Wax Only)</option>
              <option value="vegan">Vegan (Soy Wax + Resin)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Wax ($/oz)</label><input type="number" id="bw-wc" class="bw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1.5" min="0" step="0.25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Resin ($/oz)</label><input type="number" id="bw-rc" class="bw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" step="0.25"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Oil ($/oz)</label><input type="number" id="bw-oc" class="bw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="0" step="0.25"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Beeswax Needed</div>
          <div class="text-4xl font-extrabold font-mono" id="bw-result">0 oz</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Pine Resin</div><div class="text-xl font-bold font-mono" id="bw-resin">0 oz</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Jojoba Oil</div><div class="text-xl font-bold font-mono" id="bw-oil">0 oz</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Fabric Area</div><div class="text-xl font-bold font-mono" id="bw-area">0 sq in</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Wax Mix</div><div class="text-xl font-bold font-mono" id="bw-total">0 oz</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Material Cost</div><div class="text-xl font-bold font-mono" id="bw-cost">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="beeswax-wrap" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcBW() {
      const size = (document.getElementById('bw-size') as HTMLSelectElement).value;
      let w = parseFloat((document.getElementById('bw-w') as HTMLInputElement).value) || 8;
      let h = parseFloat((document.getElementById('bw-h') as HTMLInputElement).value) || 8;
      const qty = parseInt((document.getElementById('bw-qty') as HTMLInputElement).value) || 1;
      const recipe = (document.getElementById('bw-recipe') as HTMLSelectElement).value;
      const waxCost = parseFloat((document.getElementById('bw-wc') as HTMLInputElement).value) || 0;
      const resinCost = parseFloat((document.getElementById('bw-rc') as HTMLInputElement).value) || 0;
      const oilCost = parseFloat((document.getElementById('bw-oc') as HTMLInputElement).value) || 0;

      // Size presets
      const sizes: Record<string, [number, number]> = {
        small: [8, 8], medium: [10, 11], large: [13, 14], xlarge: [16, 16]
      };
      if (size !== 'custom' && sizes[size]) {
        w = sizes[size][0];
        h = sizes[size][1];
        (document.getElementById('bw-w') as HTMLInputElement).value = w.toString();
        (document.getElementById('bw-h') as HTMLInputElement).value = h.toString();
      }

      const areaSqIn = w * h;
      const totalAreaSqIn = areaSqIn * qty;

      // Wax needed: approximately 0.02 oz per square inch (1 oz covers ~50 sq in)
      const waxPerSqIn = 0.02;
      const totalWaxBase = totalAreaSqIn * waxPerSqIn;

      // Recipe ratios:
      // Standard: 5 parts wax, 1 part pine resin, 1 part jojoba oil (5:1:1)
      // Simple: 100% wax
      // Vegan: 5 parts soy wax, 2 parts pine resin (5:2)
      let waxOz = 0, resinOz = 0, oilOz = 0;
      if (recipe === 'standard') {
        const totalMix = totalWaxBase * (7 / 5); // scale up from wax portion
        waxOz = totalMix * (5 / 7);
        resinOz = totalMix * (1 / 7);
        oilOz = totalMix * (1 / 7);
      } else if (recipe === 'simple') {
        waxOz = totalWaxBase;
        resinOz = 0;
        oilOz = 0;
      } else { // vegan
        const totalMix = totalWaxBase * (7 / 5);
        waxOz = totalMix * (5 / 7);
        resinOz = totalMix * (2 / 7);
        oilOz = 0;
      }

      const totalMixOz = waxOz + resinOz + oilOz;
      const materialCost = waxOz * waxCost + resinOz * resinCost + oilOz * oilCost;

      document.getElementById('bw-result')!.textContent = waxOz.toFixed(2) + ' oz';
      document.getElementById('bw-resin')!.textContent = resinOz.toFixed(2) + ' oz';
      document.getElementById('bw-oil')!.textContent = oilOz.toFixed(2) + ' oz';
      document.getElementById('bw-area')!.textContent = totalAreaSqIn.toFixed(0) + ' sq in';
      document.getElementById('bw-total')!.textContent = totalMixOz.toFixed(2) + ' oz';
      document.getElementById('bw-cost')!.textContent = '$' + materialCost.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.bw-in').forEach(el => { el.addEventListener('input', calcBW); el.addEventListener('change', calcBW); });
      calcBW();
    }, 50);
  </script>
</CalculatorLayout>
