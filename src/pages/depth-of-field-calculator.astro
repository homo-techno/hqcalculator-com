---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Depth of Field Calculator - DoF, Hyperfocal Distance & Circle of Confusion";
const description = "Calculate depth of field from focal length, aperture, and subject distance. Find near/far limits, hyperfocal distance, and circle of confusion for any camera sensor.";
const relatedCalcs = [
  { name: "Focal Length", url: "/focal-length-calculator", description: "Equivalent focal lengths across sensors." },
  { name: "Exposure Calculator", url: "/exposure-calculator", description: "Exposure triangle calculations." },
  { name: "Camera Sensor", url: "/camera-sensor-calculator", description: "Sensor sizes and crop factors." },
  { name: "Print Size", url: "/print-size-calculator", description: "Print dimensions from megapixels." },
  { name: "Lens Equation", url: "/lens-equation-calculator", description: "Thin lens formula calculations." },
  { name: "Aspect Ratio", url: "/aspect-ratio-calculator", description: "Image aspect ratio calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Depth of Field Calculator" keywords="depth of field calculator, DoF, hyperfocal distance, circle of confusion, aperture, bokeh, shallow depth of field" breadcrumbs={[{ name: "Depth of Field", url: "/depth-of-field-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Depth of Field Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate depth of field, near/far focus limits, and hyperfocal distance from your camera settings.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-sm font-medium text-text mb-1">Sensor Format</label>
          <select id="dof-sensor" class="dof-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="0.029">Full Frame (35mm)</option>
            <option value="0.019">APS-C (Canon)</option>
            <option value="0.018">APS-C (Nikon/Sony)</option>
            <option value="0.015">Micro Four Thirds</option>
            <option value="0.011">1-inch Sensor</option>
            <option value="0.006">1/2.3-inch (Compact)</option>
          </select>
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">Focal Length (mm)</label>
          <input type="number" id="dof-focal" class="dof-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="50" min="1" max="2000" step="1">
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">Aperture (f/)</label>
          <input type="number" id="dof-aperture" class="dof-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="2.8" min="0.7" max="128" step="0.1">
        </div>
        <div>
          <label class="block text-sm font-medium text-text mb-1">Subject Distance</label>
          <div class="flex gap-2">
            <input type="number" id="dof-distance" class="dof-in w-full px-4 py-3 border border-border rounded-xl text-lg" value="3" min="0.01" step="0.1">
            <select id="dof-unit" class="dof-in px-4 py-3 border border-border rounded-xl text-lg">
              <option value="m">meters</option>
              <option value="ft">feet</option>
            </select>
          </div>
        </div>

        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Depth of Field</div>
          <div class="text-4xl font-extrabold" id="dof-total"></div>
        </div>

        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Near Limit</div>
            <div class="text-xl font-bold text-text" id="dof-near"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Far Limit</div>
            <div class="text-xl font-bold text-text" id="dof-far"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Hyperfocal Distance</div>
            <div class="text-xl font-bold text-text" id="dof-hyper"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">Circle of Confusion</div>
            <div class="text-xl font-bold text-text" id="dof-coc"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">DoF in Front</div>
            <div class="text-xl font-bold text-text" id="dof-front"></div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary uppercase tracking-wide">DoF Behind</div>
            <div class="text-xl font-bold text-text" id="dof-behind"></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="depth-of-field" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Understanding Depth of Field</h2>
      <p>Depth of field (DoF) is the distance range in which objects appear acceptably sharp. It depends on focal length, aperture, subject distance, and sensor size.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Key Concepts</h3>
      <p><strong>Hyperfocal Distance:</strong> The closest focus distance at which everything from half that distance to infinity is acceptably sharp.</p>
      <p><strong>Circle of Confusion (CoC):</strong> The largest blur circle that still appears as a point to the human eye, dependent on sensor size and viewing conditions.</p>
      <p><strong>How to get shallow DoF:</strong> Use a wider aperture (smaller f-number), longer focal length, or move closer to your subject.</p>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcDOF() {
      const cocMM = parseFloat((document.getElementById('dof-sensor') as HTMLSelectElement).value);
      const f = parseFloat((document.getElementById('dof-focal') as HTMLInputElement).value) || 50;
      const N = parseFloat((document.getElementById('dof-aperture') as HTMLInputElement).value) || 2.8;
      const unit = (document.getElementById('dof-unit') as HTMLSelectElement).value;
      let dist = parseFloat((document.getElementById('dof-distance') as HTMLInputElement).value) || 3;

      const distM = unit === 'ft' ? dist * 0.3048 : dist;
      const distMM = distM * 1000;
      const c = cocMM;

      const H = (f * f) / (N * c) + f;
      const nearMM = (distMM * (H - f)) / (H + distMM - 2 * f);
      const farMM = distMM >= H ? Infinity : (distMM * (H - f)) / (H - distMM);
      const dofMM = farMM === Infinity ? Infinity : farMM - nearMM;

      function formatDist(mm: number): string {
        if (!isFinite(mm)) return 'Infinity';
        if (unit === 'ft') {
          const ft = mm / 304.8;
          return ft >= 100 ? ft.toFixed(0) + ' ft' : ft.toFixed(2) + ' ft';
        }
        if (mm >= 1000) return (mm / 1000).toFixed(2) + ' m';
        return mm.toFixed(1) + ' mm';
      }

      document.getElementById('dof-total')!.textContent = formatDist(dofMM);
      document.getElementById('dof-near')!.textContent = formatDist(nearMM);
      document.getElementById('dof-far')!.textContent = formatDist(farMM);
      document.getElementById('dof-hyper')!.textContent = formatDist(H);
      document.getElementById('dof-coc')!.textContent = c.toFixed(3) + ' mm';

      const frontMM = distMM - nearMM;
      const behindMM = farMM === Infinity ? Infinity : farMM - distMM;
      document.getElementById('dof-front')!.textContent = formatDist(frontMM);
      document.getElementById('dof-behind')!.textContent = formatDist(behindMM);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('.dof-in').forEach(el => {
        el.addEventListener('input', calcDOF);
        el.addEventListener('change', calcDOF);
      });
      calcDOF();
    }, 50);
  </script>
</CalculatorLayout>
