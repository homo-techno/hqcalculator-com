---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Textile GSM Calculator - Fabric Weight Converter";
const description = "Calculate fabric GSM (grams per square meter), convert between oz/yd² and GSM, and relate fabric weight to thread count and quality.";
const relatedCalcs = [
  { name: "Fabric Calculator", url: "/fabric-calculator", description: "Fabric yardage needs." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight conversions." },
  { name: "Area Calculator", url: "/area-calculator", description: "Area calculations." },
  { name: "Unit Price Calculator", url: "/unit-price-calculator", description: "Unit price comparison." },
  { name: "Ratio Calculator", url: "/ratio-calculator", description: "Ratio calculations." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Textile GSM Calculator" keywords="textile GSM calculator, fabric weight, grams per square meter, oz per yard, thread count, fabric density" breadcrumbs={[{ name: "Textile GSM", url: "/textile-gsm-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Textile GSM Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate and convert fabric weight in GSM, oz/yd², and determine fabric classification.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Input Method</label>
          <select id="tg-method" class="tg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="gsm" selected>Enter GSM directly</option>
            <option value="ozyd">Enter oz/yd² (US)</option>
            <option value="swatch">Measure from swatch</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">GSM Value</label><input type="number" id="tg-gsm" class="tg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="150" min="10" max="1000" step="5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">oz/yd² Value</label><input type="number" id="tg-oz" class="tg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4.4" min="0.5" max="30" step="0.1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Swatch Weight (grams)</label><input type="number" id="tg-swg" class="tg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="15" min="0.1" step="0.1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Swatch Size (cm x cm)</label><input type="number" id="tg-swsize" class="tg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="1" max="100" step="1"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Fabric Area (sq yards, for total weight)</label><input type="number" id="tg-area" class="tg-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="0.1" step="0.25"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Fabric Weight (GSM)</div>
          <div class="text-4xl font-extrabold font-mono" id="tg-result">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">oz/yd²</div><div class="text-xl font-bold font-mono" id="tg-ozresult">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">g/m²</div><div class="text-xl font-bold font-mono" id="tg-gm2">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Classification</div><div class="text-xl font-bold font-mono" id="tg-class">--</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Weight</div><div class="text-xl font-bold font-mono" id="tg-total">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Typical Use</div><div class="text-xl font-bold font-mono" id="tg-use">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="textile-gsm" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcTG() {
      const method = (document.getElementById('tg-method') as HTMLSelectElement).value;
      let gsmVal = parseFloat((document.getElementById('tg-gsm') as HTMLInputElement).value) || 150;
      const ozVal = parseFloat((document.getElementById('tg-oz') as HTMLInputElement).value) || 4.4;
      const swg = parseFloat((document.getElementById('tg-swg') as HTMLInputElement).value) || 15;
      const swsize = parseFloat((document.getElementById('tg-swsize') as HTMLInputElement).value) || 10;
      const area = parseFloat((document.getElementById('tg-area') as HTMLInputElement).value) || 3;

      // Conversion: 1 oz/yd² = 33.906 GSM
      if (method === 'ozyd') {
        gsmVal = ozVal * 33.906;
        (document.getElementById('tg-gsm') as HTMLInputElement).value = Math.round(gsmVal).toString();
      } else if (method === 'swatch') {
        // GSM = (weight in g / area in cm²) * 10000
        const areaCm2 = swsize * swsize;
        gsmVal = (swg / areaCm2) * 10000;
        (document.getElementById('tg-gsm') as HTMLInputElement).value = Math.round(gsmVal).toString();
      }

      const ozResult = gsmVal / 33.906;
      (document.getElementById('tg-oz') as HTMLInputElement).value = ozResult.toFixed(1);

      // Classification
      let classification = '';
      let typicalUse = '';
      if (gsmVal < 100) { classification = 'Very Light'; typicalUse = 'Lingerie, Scarves'; }
      else if (gsmVal < 150) { classification = 'Lightweight'; typicalUse = 'Shirts, Blouses'; }
      else if (gsmVal < 200) { classification = 'Light-Medium'; typicalUse = 'Dress shirts, Linings'; }
      else if (gsmVal < 300) { classification = 'Medium'; typicalUse = 'Pants, Skirts, Dresses'; }
      else if (gsmVal < 400) { classification = 'Medium-Heavy'; typicalUse = 'Jackets, Suits'; }
      else if (gsmVal < 500) { classification = 'Heavy'; typicalUse = 'Coats, Upholstery'; }
      else { classification = 'Very Heavy'; typicalUse = 'Canvas, Denim, Outerwear'; }

      // Total weight for given area
      const areaSqM = area * 0.836127; // sq yards to sq meters
      const totalWeightG = gsmVal * areaSqM;
      const totalWeightOz = totalWeightG / 28.35;

      document.getElementById('tg-result')!.textContent = Math.round(gsmVal) + ' GSM';
      document.getElementById('tg-ozresult')!.textContent = ozResult.toFixed(2);
      document.getElementById('tg-gm2')!.textContent = Math.round(gsmVal).toString();
      document.getElementById('tg-class')!.textContent = classification;
      document.getElementById('tg-total')!.textContent = totalWeightG.toFixed(0) + 'g (' + totalWeightOz.toFixed(1) + ' oz)';
      document.getElementById('tg-use')!.textContent = typicalUse;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.tg-in').forEach(el => { el.addEventListener('input', calcTG); el.addEventListener('change', calcTG); });
      calcTG();
    }, 50);
  </script>
</CalculatorLayout>
