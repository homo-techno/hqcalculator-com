---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Financial Independence Calculator (FIRE) - When Can You Retire?";
const description = "Calculate your path to financial independence. Find your FIRE number, years to FI, and safe withdrawal amount.";

const relatedCalcs = [
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Retirement planning." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Investment returns." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
  { name: "Net Worth", url: "/net-worth-calculator", description: "Track net worth." },
  { name: "Side Hustle", url: "/side-hustle-calculator", description: "Side income." },
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Compound growth." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Financial Independence Calculator" keywords="FIRE calculator, financial independence, retire early, FI number, safe withdrawal rate, savings rate" breadcrumbs={[{ name: "Financial Independence", url: "/financial-independence-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Financial Independence (FIRE) Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Determine when you can achieve financial independence based on your savings rate and investments.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Annual Expenses</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="fi-expenses" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="50000" min="0" step="1000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Annual Income (after tax)</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="fi-income" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="80000" min="0" step="1000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Current Invested Savings</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="fi-savings" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="150000" min="0" step="5000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Expected Annual Return (%)</label>
            <div class="relative">
              <input type="number" id="fi-return" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="7" min="0" max="15" step="0.5">
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-text-muted">%</span>
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Safe Withdrawal Rate (%)</label>
            <div class="relative">
              <input type="number" id="fi-swr" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="4" min="1" max="6" step="0.25">
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-text-muted">%</span>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Years to Financial Independence</div>
            <div class="text-5xl font-extrabold font-mono" id="fi-years">0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">FI Number</div>
              <div class="text-xl font-bold text-secondary" id="fi-number">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Safe Withdrawal</div>
              <div class="text-xl font-bold" id="fi-withdrawal">$0/yr</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Savings Rate</div>
              <div class="text-xl font-bold text-green-600" id="fi-rate">0%</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Annual Savings</div>
              <div class="text-xl font-bold" id="fi-annual-save">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Progress to FI</div>
            <div class="w-full h-4 bg-gray-200 rounded-full overflow-hidden mt-2">
              <div class="h-full bg-green-500 rounded-full transition-all" id="fi-bar" style="width:0%"></div>
            </div>
            <div class="text-sm font-bold mt-1" id="fi-progress">0%</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="financial-independence" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">What Is FIRE?</h2>
      <p>FIRE stands for Financial Independence, Retire Early. Your FI number is typically 25x your annual expenses (based on a 4% safe withdrawal rate). Once your investments reach this amount, you can live off investment returns without working.</p>
      <h3 class="text-xl font-semibold text-text mt-8">The Power of Savings Rate</h3>
      <p>Your savings rate is the single most important factor in reaching FI. A 50% savings rate means reaching FI in roughly 17 years, while a 75% savings rate can get you there in under 7 years, assuming 7% real returns.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcFI() {
      const expenses = parseFloat((document.getElementById('fi-expenses') as HTMLInputElement).value) || 0;
      const income = parseFloat((document.getElementById('fi-income') as HTMLInputElement).value) || 0;
      const savings = parseFloat((document.getElementById('fi-savings') as HTMLInputElement).value) || 0;
      const annualReturn = (parseFloat((document.getElementById('fi-return') as HTMLInputElement).value) || 0) / 100;
      const swr = (parseFloat((document.getElementById('fi-swr') as HTMLInputElement).value) || 4) / 100;

      const fiNumber = expenses / swr;
      const annualSavings = Math.max(0, income - expenses);
      const savingsRate = income > 0 ? (annualSavings / income) * 100 : 0;
      const safeWithdrawal = fiNumber * swr;

      // Calculate years to FI
      let yearsToFI = 0;
      if (savings >= fiNumber) {
        yearsToFI = 0;
      } else if (annualSavings <= 0 && savings < fiNumber) {
        yearsToFI = 999; // effectively never
      } else {
        // FV = savings * (1+r)^n + annualSavings * ((1+r)^n - 1) / r = fiNumber
        // Solve iteratively
        let balance = savings;
        while (balance < fiNumber && yearsToFI < 100) {
          balance = balance * (1 + annualReturn) + annualSavings;
          yearsToFI++;
        }
        if (balance < fiNumber) yearsToFI = 999;
      }

      const progress = fiNumber > 0 ? Math.min(100, (savings / fiNumber) * 100) : 0;

      document.getElementById('fi-years')!.textContent = yearsToFI >= 999 ? 'N/A' : yearsToFI.toString();
      document.getElementById('fi-number')!.textContent = fmt(fiNumber);
      document.getElementById('fi-withdrawal')!.textContent = fmt(safeWithdrawal) + '/yr';
      document.getElementById('fi-rate')!.textContent = savingsRate.toFixed(1) + '%';
      document.getElementById('fi-annual-save')!.textContent = fmt(annualSavings);
      (document.getElementById('fi-bar') as HTMLElement).style.width = progress + '%';
      document.getElementById('fi-progress')!.textContent = progress.toFixed(1) + '% to FI';

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['fi-expenses', 'fi-income', 'fi-savings', 'fi-return', 'fi-swr'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcFI); el.addEventListener('change', calcFI); }
      });
      calcFI();
    }, 50);
  </script>
</CalculatorLayout>
