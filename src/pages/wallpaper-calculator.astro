---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Wallpaper Calculator - How Many Rolls Do You Need?";
const description = "Calculate how many rolls of wallpaper you need based on room dimensions and pattern repeat.";
const relatedCalcs = [
  { name: "Paint Calculator", url: "/paint-calculator", description: "Paint needed." },
  { name: "Tile Calculator", url: "/tile-calculator", description: "Tiles." },
  { name: "Flooring Calculator", url: "/flooring-calculator", description: "Flooring." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Area Calculator", url: "/area-calculator", description: "2D areas." },
  { name: "Fencing Calculator", url: "/fencing-calculator", description: "Fencing." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Wallpaper Calculator" keywords="wallpaper calculator, how many rolls, wallpaper estimator, wall coverage, pattern repeat" breadcrumbs={[{ name: "Wallpaper Calculator", url: "/wallpaper-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Wallpaper Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate the number of wallpaper rolls needed for your room.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Room Length (ft)</label><input type="number" id="wp-rl" class="wp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="15" min="1" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Room Width (ft)</label><input type="number" id="wp-rw" class="wp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="1" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Ceiling Height (ft)</label><input type="number" id="wp-ch" class="wp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="1" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Doors & Windows (sq ft to subtract)</label><input type="number" id="wp-sub" class="wp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="40" min="0" step="5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Roll Width (in)</label><input type="number" id="wp-rollw" class="wp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20.5" min="1" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Roll Length (ft)</label><input type="number" id="wp-rolll" class="wp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="33" min="1" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Pattern Repeat (in)</label><input type="number" id="wp-repeat" class="wp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Price per Roll ($)</label><input type="number" id="wp-price" class="wp-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="35" min="0" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Rolls Needed</div>
          <div class="text-5xl font-extrabold" id="wp-rolls">0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-5 bg-secondary rounded-2xl text-white text-center">
            <div class="text-xs uppercase tracking-wide mb-1 opacity-80">Estimated Cost</div>
            <div class="text-2xl font-extrabold" id="wp-cost">$0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Wall Area</div><div class="text-xl font-bold" id="wp-area">0 sq ft</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Coverage/Roll</div><div class="text-xl font-bold" id="wp-coverage">0 sq ft</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Perimeter</div><div class="text-xl font-bold" id="wp-perim">0 ft</div></div>
        </div>
      </div>
      <ShareButton calculatorId="wallpaper" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Wallpaper Tips</h2>
      <p>Standard US wallpaper rolls are 20.5" × 33'. European rolls are typically 21" × 33'. Always order an extra roll for pattern matching and future repairs.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcWP() {
      const rl = parseFloat((document.getElementById('wp-rl') as HTMLInputElement).value) || 0;
      const rw = parseFloat((document.getElementById('wp-rw') as HTMLInputElement).value) || 0;
      const ch = parseFloat((document.getElementById('wp-ch') as HTMLInputElement).value) || 0;
      const sub = parseFloat((document.getElementById('wp-sub') as HTMLInputElement).value) || 0;
      const rollW = parseFloat((document.getElementById('wp-rollw') as HTMLInputElement).value) || 1;
      const rollL = parseFloat((document.getElementById('wp-rolll') as HTMLInputElement).value) || 1;
      const repeat = parseFloat((document.getElementById('wp-repeat') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('wp-price') as HTMLInputElement).value) || 0;
      const perimeter = 2 * (rl + rw);
      const wallArea = perimeter * ch - sub;
      const rollWidthFt = rollW / 12;
      const usableLength = repeat > 0 ? rollL * (ch * 12) / (ch * 12 + repeat) : rollL;
      const coveragePerRoll = rollWidthFt * usableLength;
      const rolls = Math.ceil(wallArea / coveragePerRoll);
      document.getElementById('wp-rolls')!.textContent = String(rolls);
      document.getElementById('wp-cost')!.textContent = '$' + (rolls * price).toFixed(2);
      document.getElementById('wp-area')!.textContent = wallArea.toFixed(1) + ' sq ft';
      document.getElementById('wp-coverage')!.textContent = coveragePerRoll.toFixed(1) + ' sq ft';
      document.getElementById('wp-perim')!.textContent = perimeter.toFixed(1) + ' ft';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.wp-in').forEach(el => el.addEventListener('input', calcWP)); calcWP(); }, 50);
  </script>
</CalculatorLayout>
