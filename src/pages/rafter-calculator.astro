---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Rafter Calculator - Length, Birdsmouth Cut, HAP & Ridge Height";
const description = "Calculate rafter dimensions including length, birdsmouth cut, HAP (Height Above Plate), ridge height, and total rafters needed for your roof.";

const relatedCalcs = [
  { name: "Truss Calculator", url: "/truss-calculator", description: "Roof truss design." },
  { name: "Soffit Calculator", url: "/soffit-calculator", description: "Soffit and fascia." },
  { name: "Structural Load Calculator", url: "/structural-load-calculator", description: "Load analysis." },
  { name: "Floor Joist Calculator", url: "/floor-joist-calculator", description: "Joist sizing." },
  { name: "Siding Calculator", url: "/siding-calculator", description: "Siding material." },
  { name: "Pergola Calculator", url: "/pergola-calculator", description: "Pergola lumber." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Rafter Calculator"
  keywords="rafter calculator, rafter length, birdsmouth cut, HAP, ridge height, roof pitch, overhang, rafter tail"
  breadcrumbs={[{ name: "Rafter Calculator", url: "/rafter-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Rafter Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate rafter length, birdsmouth cut, ridge height, and total rafters needed.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Rafter Run (ft) - half the building width</label>
            <input type="number" id="ra-run" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="12" min="1" step="0.5">
          </div>

          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Roof Pitch (rise per 12" run)</label>
            <select id="ra-pitch" class="w-full px-3 py-3 border border-border rounded-xl text-lg">
              <option value="3">3/12</option>
              <option value="4">4/12</option>
              <option value="5" selected>5/12</option>
              <option value="6">6/12</option>
              <option value="7">7/12</option>
              <option value="8">8/12</option>
              <option value="9">9/12</option>
              <option value="10">10/12</option>
              <option value="12">12/12</option>
            </select>
          </div>

          <div class="grid grid-cols-2 gap-3 mb-5">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Overhang (inches)</label>
              <input type="number" id="ra-overhang" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="12" min="0" step="1">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Rafter Width (inches)</label>
              <input type="number" id="ra-width" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="5.5" min="3.5" step="0.25">
              <div class="text-xs text-text-muted mt-1">2x6=5.5, 2x8=7.25</div>
            </div>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl">
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label class="block text-xs font-medium text-text mb-1">Building Length (ft)</label>
                <input type="number" id="ra-bldglength" class="w-full px-3 py-2 border border-border rounded-lg" value="30" min="1" step="0.5">
              </div>
              <div>
                <label class="block text-xs font-medium text-text mb-1">Rafter Spacing (in OC)</label>
                <select id="ra-spacing" class="w-full px-3 py-2 border border-border rounded-lg">
                  <option value="12">12" OC</option>
                  <option value="16" selected>16" OC</option>
                  <option value="24">24" OC</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Rafter Length (total)</div>
            <div class="text-5xl font-extrabold font-mono" id="ra-length">0</div>
            <div class="text-sm text-blue-200 mt-1">feet (run + overhang)</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Rise (total)</div>
              <div class="text-xl font-bold" id="ra-rise">0 ft</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Ridge Height</div>
              <div class="text-xl font-bold" id="ra-ridge">0 ft</div>
              <div class="text-xs text-text-muted">above wall plate</div>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Birdsmouth Seat Cut</div>
              <div class="text-xl font-bold" id="ra-seat">0 in</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">HAP</div>
              <div class="text-xl font-bold" id="ra-hap">0 in</div>
              <div class="text-xs text-text-muted">height above plate</div>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Total Rafters</div>
              <div class="text-xl font-bold" id="ra-count">0</div>
              <div class="text-xs text-text-muted">both sides</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Angle</div>
              <div class="text-xl font-bold" id="ra-angle">0 deg</div>
            </div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="rafter" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How to Calculate Rafters</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>Rise:</strong> Run x Pitch / 12</p>
        <p><strong>Rafter length:</strong> sqrt(Run^2 + Rise^2)</p>
        <p><strong>Birdsmouth seat cut:</strong> Rafter width / (Pitch / 12) x cos(angle)</p>
        <p><strong>HAP:</strong> Rafter width - (Seat cut x sin(angle))</p>
      </div>

      <h3 class="text-xl font-semibold text-text mt-8">Key Terms</h3>
      <ul>
        <li><strong>Run:</strong> Horizontal distance from wall plate to ridge (half building width)</li>
        <li><strong>Rise:</strong> Vertical height from plate to ridge</li>
        <li><strong>HAP:</strong> Height Above Plate - the vertical dimension of rafter above the wall plate after the birdsmouth cut</li>
        <li><strong>Birdsmouth:</strong> The notch cut where the rafter meets the wall plate</li>
      </ul>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcRafter() {
      const run = parseFloat((document.getElementById('ra-run') as HTMLInputElement).value) || 0;
      const pitch = parseFloat((document.getElementById('ra-pitch') as HTMLSelectElement).value) || 5;
      const overhangIn = parseFloat((document.getElementById('ra-overhang') as HTMLInputElement).value) || 0;
      const rafterW = parseFloat((document.getElementById('ra-width') as HTMLInputElement).value) || 5.5;
      const bldgLength = parseFloat((document.getElementById('ra-bldglength') as HTMLInputElement).value) || 0;
      const spacing = parseFloat((document.getElementById('ra-spacing') as HTMLSelectElement).value) || 16;

      const rise = run * (pitch / 12);
      const lineLength = Math.sqrt(run * run + rise * rise);

      // Overhang adds rafter tail
      const overhangFt = overhangIn / 12;
      const tailRise = overhangFt * (pitch / 12);
      const tailLength = Math.sqrt(overhangFt * overhangFt + tailRise * tailRise);

      const totalLength = lineLength + tailLength;

      // Angle
      const angleRad = Math.atan(pitch / 12);
      const angleDeg = angleRad * (180 / Math.PI);

      // Birdsmouth: seat cut is horizontal cut at plate, typically = wall plate width (3.5")
      // but limited by rafter width. Seat cut = rafterW * cos(angle) plumb depth
      // Standard birdsmouth: seat cut = 3.5" (for 2x4 wall), HAP = rafter depth - seat depth
      const seatCut = 3.5; // standard for 2x4 wall plate
      const plumbCut = seatCut * Math.tan(angleRad);
      const hap = rafterW - plumbCut;

      // Ridge height = rise (above plate level)
      const ridgeHeight = rise;

      // Number of rafters (both sides)
      const raftersPerSide = Math.ceil((bldgLength * 12) / spacing) + 1;
      const totalRafters = raftersPerSide * 2;

      const fmtFtIn = (ft: number) => {
        const feet = Math.floor(ft);
        const inches = Math.round((ft - feet) * 12);
        return feet + "'" + ' ' + inches + '"';
      };

      document.getElementById('ra-length')!.textContent = fmtFtIn(totalLength);
      document.getElementById('ra-rise')!.textContent = rise.toFixed(1) + ' ft';
      document.getElementById('ra-ridge')!.textContent = rise.toFixed(1) + ' ft';
      document.getElementById('ra-seat')!.textContent = seatCut.toFixed(1) + ' in';
      document.getElementById('ra-hap')!.textContent = hap.toFixed(2) + ' in';
      document.getElementById('ra-count')!.textContent = String(totalRafters);
      document.getElementById('ra-angle')!.textContent = angleDeg.toFixed(1) + ' deg';

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('#ra-run, #ra-overhang, #ra-width, #ra-bldglength').forEach(el => {
        el.addEventListener('input', calcRafter);
        el.addEventListener('change', calcRafter);
      });
      document.querySelectorAll('#ra-pitch, #ra-spacing').forEach(el => {
        el.addEventListener('input', calcRafter);
        el.addEventListener('change', calcRafter);
      });
      calcRafter();
    }, 50);
  </script>
</CalculatorLayout>
