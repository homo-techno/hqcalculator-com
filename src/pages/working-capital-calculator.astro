---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Working Capital Calculator";
const description = "Calculate working capital, current ratio, and quick ratio to assess short-term financial health.";
const relatedCalcs = [
  { name: "Debt Service Coverage", url: "/debt-service-coverage-calculator", description: "DSCR ratio." },
  { name: "Burn Rate", url: "/burn-rate-calculator", description: "Startup burn rate." },
  { name: "Inventory Turnover", url: "/inventory-turnover-calculator", description: "Inventory efficiency." },
  { name: "Revenue Per Employee", url: "/revenue-per-employee-calculator", description: "Revenue metrics." },
  { name: "Cost Per Acquisition", url: "/cost-per-acquisition-calculator", description: "CPA calculations." },
  { name: "Cap Rate", url: "/cap-rate-calculator", description: "Capitalization rate." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Working Capital Calculator" keywords="working capital, current ratio, quick ratio, liquidity ratio, current assets, current liabilities" breadcrumbs={[{ name: "Working Capital", url: "/working-capital-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Working Capital Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Assess your company's short-term financial health with working capital and liquidity ratios.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <h3 class="font-semibold text-sm text-text">Current Assets</h3>
        <div><label class="block text-xs font-medium text-text mb-1">Cash & Equivalents ($)</label><input type="number" id="wc-cash" class="wc-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="150000" min="0" step="1000"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Accounts Receivable ($)</label><input type="number" id="wc-ar" class="wc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="80000" min="0" step="1000"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Inventory ($)</label><input type="number" id="wc-inventory" class="wc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="60000" min="0" step="1000"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Other Current Assets ($)</label><input type="number" id="wc-other" class="wc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10000" min="0" step="1000"></div>
        <h3 class="font-semibold text-sm text-text pt-2">Current Liabilities</h3>
        <div><label class="block text-xs font-medium text-text mb-1">Accounts Payable ($)</label><input type="number" id="wc-ap" class="wc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="70000" min="0" step="1000"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Short-Term Debt ($)</label><input type="number" id="wc-debt" class="wc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="30000" min="0" step="1000"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Other Current Liabilities ($)</label><input type="number" id="wc-otherliab" class="wc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20000" min="0" step="1000"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Working Capital</div>
          <div class="text-5xl font-extrabold font-mono" id="wc-result">$0</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Current Ratio</div><div class="text-xl font-bold font-mono" id="wc-current">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Quick Ratio</div><div class="text-xl font-bold font-mono" id="wc-quick">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Current Assets</div><div class="text-xl font-bold font-mono" id="wc-assets">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Current Liabilities</div><div class="text-xl font-bold font-mono" id="wc-liab">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Liquidity Status</div><div class="text-xl font-bold font-mono" id="wc-status">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cash Ratio</div><div class="text-xl font-bold font-mono" id="wc-cashratio">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="working-capital" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcWC() {
      const cash = parseFloat((document.getElementById('wc-cash') as HTMLInputElement).value) || 0;
      const ar = parseFloat((document.getElementById('wc-ar') as HTMLInputElement).value) || 0;
      const inventory = parseFloat((document.getElementById('wc-inventory') as HTMLInputElement).value) || 0;
      const other = parseFloat((document.getElementById('wc-other') as HTMLInputElement).value) || 0;
      const ap = parseFloat((document.getElementById('wc-ap') as HTMLInputElement).value) || 0;
      const debt = parseFloat((document.getElementById('wc-debt') as HTMLInputElement).value) || 0;
      const otherLiab = parseFloat((document.getElementById('wc-otherliab') as HTMLInputElement).value) || 0;

      const totalAssets = cash + ar + inventory + other;
      const totalLiabilities = ap + debt + otherLiab;
      const workingCapital = totalAssets - totalLiabilities;
      const currentRatio = totalLiabilities > 0 ? totalAssets / totalLiabilities : 0;
      const quickRatio = totalLiabilities > 0 ? (cash + ar) / totalLiabilities : 0;
      const cashRatio = totalLiabilities > 0 ? cash / totalLiabilities : 0;

      let status = 'Critical';
      if (currentRatio >= 2) status = 'Strong';
      else if (currentRatio >= 1.5) status = 'Healthy';
      else if (currentRatio >= 1) status = 'Adequate';
      else if (currentRatio >= 0.5) status = 'Weak';

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 0 });
      document.getElementById('wc-result')!.textContent = fmt(workingCapital);
      document.getElementById('wc-current')!.textContent = currentRatio.toFixed(2);
      document.getElementById('wc-quick')!.textContent = quickRatio.toFixed(2);
      document.getElementById('wc-assets')!.textContent = fmt(totalAssets);
      document.getElementById('wc-liab')!.textContent = fmt(totalLiabilities);
      document.getElementById('wc-status')!.textContent = status;
      document.getElementById('wc-cashratio')!.textContent = cashRatio.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.wc-in').forEach(el => { el.addEventListener('input', calcWC); el.addEventListener('change', calcWC); });
      calcWC();
    }, 50);
  </script>
</CalculatorLayout>
