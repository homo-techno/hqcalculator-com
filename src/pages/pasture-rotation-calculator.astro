---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Pasture Rotation Calculator - Paddock & Stocking Rate";
const description = "Calculate paddock count, grazing days per paddock, rest period, stocking rate, and forage availability for rotational grazing management.";
const relatedCalcs = [
  { name: "Livestock Water", url: "/livestock-water-calculator", description: "Daily water needs for livestock." },
  { name: "Cattle Weight", url: "/cattle-weight-calculator", description: "Estimate cattle weight." },
  { name: "Hay Calculator", url: "/hay-calculator", description: "Hay storage and feeding needs." },
  { name: "Fence Post Calculator", url: "/fence-post-calculator", description: "Post spacing and count." },
  { name: "Goat Feed", url: "/goat-feed-calculator", description: "Goat feeding requirements." },
  { name: "Horse Feed", url: "/horse-feed-calculator", description: "Horse feeding requirements." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Pasture Rotation Calculator" keywords="pasture rotation, rotational grazing, paddock calculator, stocking rate, forage availability, grazing management" breadcrumbs={[{ name: "Pasture Rotation", url: "/pasture-rotation-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Pasture Rotation Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Plan rotational grazing with paddock count, rest periods, and stocking rates.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Total Pasture (acres)</label>
            <input type="number" id="pr4-acres" class="pr4-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="40" min="1" max="10000" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Head</label>
            <input type="number" id="pr4-head" class="pr4-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="20" min="1" max="5000" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Animal Unit Weight (lbs)</label>
            <input type="number" id="pr4-auw" class="pr4-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1000" min="100" max="3000" step="50">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Desired Rest Period (days)</label>
            <input type="number" id="pr4-rest" class="pr4-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="30" min="14" max="90" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Graze Days Per Paddock</label>
            <input type="number" id="pr4-graze" class="pr4-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3" min="1" max="14" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Forage Growth (lbs/ac/day)</label>
            <input type="number" id="pr4-growth" class="pr4-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="30" min="5" max="100" step="5">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Paddocks Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="pr4-paddocks">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Acres/Paddock</div>
            <div class="text-xl font-bold font-mono" id="pr4-pacres">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Stocking Rate</div>
            <div class="text-xl font-bold font-mono" id="pr4-stock">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Full Rotation</div>
            <div class="text-xl font-bold font-mono" id="pr4-cycle">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Daily Forage Need (lbs)</div>
            <div class="text-xl font-bold font-mono" id="pr4-need">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Forage Available/Paddock</div>
            <div class="text-xl font-bold font-mono" id="pr4-avail">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="pasture-rotation" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPR4() {
      const acres = parseFloat((document.getElementById('pr4-acres') as HTMLInputElement).value) || 40;
      const head = parseFloat((document.getElementById('pr4-head') as HTMLInputElement).value) || 20;
      const auw = parseFloat((document.getElementById('pr4-auw') as HTMLInputElement).value) || 1000;
      const restDays = parseFloat((document.getElementById('pr4-rest') as HTMLInputElement).value) || 30;
      const grazeDays = parseFloat((document.getElementById('pr4-graze') as HTMLInputElement).value) || 3;
      const forageGrowth = parseFloat((document.getElementById('pr4-growth') as HTMLInputElement).value) || 30;
      const paddocks = Math.ceil(restDays / grazeDays) + 1;
      const acresPerPaddock = acres / paddocks;
      const auEquiv = (auw / 1000) * head;
      const stockingRate = acres / auEquiv;
      const fullCycleDays = paddocks * grazeDays;
      const dailyForageNeed = auEquiv * 26;
      const foragePerGraze = dailyForageNeed * grazeDays;
      const forageAvail = acresPerPaddock * forageGrowth * restDays * 0.5;
      document.getElementById('pr4-paddocks')!.textContent = paddocks.toString();
      document.getElementById('pr4-pacres')!.textContent = acresPerPaddock.toFixed(1);
      document.getElementById('pr4-stock')!.textContent = stockingRate.toFixed(1) + ' ac/AU';
      document.getElementById('pr4-cycle')!.textContent = fullCycleDays + ' days';
      document.getElementById('pr4-need')!.textContent = Math.round(dailyForageNeed).toLocaleString();
      document.getElementById('pr4-avail')!.textContent = Math.round(forageAvail).toLocaleString() + ' lbs';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.pr4-in').forEach(el => { el.addEventListener('input', calcPR4); el.addEventListener('change', calcPR4); });
      calcPR4();
    }, 50);
  </script>
</CalculatorLayout>
