---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Backsplash Calculator";
const description = "Calculate tiles, adhesive, and grout needed for your kitchen or bathroom backsplash.";
const relatedCalcs = [
  { name: "Tile Calculator", url: "/tile-calculator", description: "Tiles." },
  { name: "Countertop", url: "/countertop-calculator", description: "Countertop." },
  { name: "Cabinet", url: "/cabinet-calculator", description: "Cabinets." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Brick", url: "/brick-calculator", description: "Bricks." },
  { name: "Crown Molding", url: "/crown-molding-calculator", description: "Molding." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Backsplash Calculator" keywords="backsplash calculator, kitchen backsplash, tile backsplash, backsplash cost, subway tile" breadcrumbs={[{ name: "Backsplash", url: "/backsplash-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Backsplash Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate tiles and materials for your backsplash.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Wall Length (in)</label><input type="number" id="bs-len" class="bs-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="120" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Backsplash Height (in)</label><input type="number" id="bs-ht" class="bs-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="18" min="0" step="1"></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Tile Size</h3>
          <div class="flex gap-2">
            <button class="bs-sz flex-1 py-2 rounded-xl font-bold text-sm border-2 border-primary bg-blue-50 text-primary" data-w="3" data-h="6">3×6 Subway</button>
            <button class="bs-sz flex-1 py-2 rounded-xl font-bold text-sm border-2 border-border text-text-muted" data-w="4" data-h="4">4×4</button>
            <button class="bs-sz flex-1 py-2 rounded-xl font-bold text-sm border-2 border-border text-text-muted" data-w="4" data-h="12">4×12</button>
            <button class="bs-sz flex-1 py-2 rounded-xl font-bold text-sm border-2 border-border text-text-muted" data-w="6" data-h="6">6×6</button>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Waste (%)</label><input type="number" id="bs-waste" class="bs-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="10" min="0" max="25" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Tile Price ($/sf)</label><input type="number" id="bs-price" class="bs-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="0.5"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Tiles Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="bs-result">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Area</div><div class="text-lg font-bold font-mono" id="bs-area">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Tile Cost</div><div class="text-lg font-bold font-mono" id="bs-cost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Grout (lbs)</div><div class="text-lg font-bold font-mono" id="bs-grout">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Adhesive (bags)</div><div class="text-xl font-bold font-mono" id="bs-adhesive">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Est.</div><div class="text-xl font-bold font-mono" id="bs-total">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="backsplash" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    let bsTileW = 3, bsTileH = 6;
    function calcBS() {
      const len = parseFloat((document.getElementById('bs-len') as HTMLInputElement).value) || 0;
      const ht = parseFloat((document.getElementById('bs-ht') as HTMLInputElement).value) || 0;
      const waste = parseFloat((document.getElementById('bs-waste') as HTMLInputElement).value) || 0;
      const pricePerSF = parseFloat((document.getElementById('bs-price') as HTMLInputElement).value) || 0;
      const areaSqIn = len * ht;
      const areaSqFt = areaSqIn / 144;
      const tileSqIn = bsTileW * bsTileH;
      const baseTiles = tileSqIn > 0 ? Math.ceil(areaSqIn / tileSqIn) : 0;
      const totalTiles = Math.ceil(baseTiles * (1 + waste / 100));
      const tileCost = areaSqFt * pricePerSF * (1 + waste / 100);
      const groutLbs = areaSqFt * 0.5;
      const adhesiveBags = Math.ceil(areaSqFt / 50);
      const installCost = areaSqFt * 12;
      document.getElementById('bs-result')!.textContent = totalTiles.toLocaleString();
      document.getElementById('bs-area')!.textContent = areaSqFt.toFixed(1) + ' sf';
      document.getElementById('bs-cost')!.textContent = '$' + tileCost.toFixed(0);
      document.getElementById('bs-grout')!.textContent = groutLbs.toFixed(1);
      document.getElementById('bs-adhesive')!.textContent = adhesiveBags.toString();
      document.getElementById('bs-total')!.textContent = '$' + (tileCost + installCost + groutLbs * 1.5 + adhesiveBags * 15).toFixed(0);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.bs-sz').forEach(b => b.addEventListener('click', () => {
        bsTileW = parseInt((b as HTMLButtonElement).dataset.w!);
        bsTileH = parseInt((b as HTMLButtonElement).dataset.h!);
        document.querySelectorAll('.bs-sz').forEach(btn => {
          const active = parseInt((btn as HTMLButtonElement).dataset.w!) === bsTileW && parseInt((btn as HTMLButtonElement).dataset.h!) === bsTileH;
          (btn as HTMLButtonElement).className = `bs-sz flex-1 py-2 rounded-xl font-bold text-sm border-2 ${active ? 'border-primary bg-blue-50 text-primary' : 'border-border text-text-muted'}`;
        });
        calcBS();
      }));
      document.querySelectorAll('.bs-in').forEach(el => { el.addEventListener('input', calcBS); el.addEventListener('change', calcBS); });
      calcBS();
    }, 50);
  </script>
</CalculatorLayout>
