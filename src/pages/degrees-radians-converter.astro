---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Degrees to Radians Converter - Angle Conversion";
const description = "Convert between degrees, radians, and gradians. Includes trigonometric values for the angle.";
const relatedCalcs = [
  { name: "Triangle Calculator", url: "/triangle-calculator", description: "Triangles." },
  { name: "Circle Calculator", url: "/circle-calculator", description: "Circles." },
  { name: "Scientific Calculator", url: "/scientific-calculator", description: "Scientific." },
  { name: "Slope Calculator", url: "/slope-calculator", description: "Slope." },
  { name: "Arc Length", url: "/arc-length-calculator", description: "Arc length." },
  { name: "Area Calculator", url: "/area-calculator", description: "2D areas." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Degrees/Radians Converter" keywords="degrees to radians, radians to degrees, angle converter, gradian, trigonometry" breadcrumbs={[{ name: "Degrees/Radians", url: "/degrees-radians-converter" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Degrees ↔ Radians Converter</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Convert angles between degrees, radians, and gradians.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Value</label><input type="number" id="dr-val" class="w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="180" step="0.1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Unit</label><select id="dr-unit" class="w-full px-4 py-3 border border-border rounded-xl text-lg"><option value="deg" selected>Degrees (°)</option><option value="rad">Radians</option><option value="grad">Gradians</option><option value="turn">Turns</option></select></div>
        </div>
        <div class="flex gap-2 flex-wrap">
          <button class="dr-pre px-3 py-1 rounded-lg text-sm font-mono border border-border hover:bg-blue-50" data-val="30">30°</button>
          <button class="dr-pre px-3 py-1 rounded-lg text-sm font-mono border border-border hover:bg-blue-50" data-val="45">45°</button>
          <button class="dr-pre px-3 py-1 rounded-lg text-sm font-mono border border-border hover:bg-blue-50" data-val="60">60°</button>
          <button class="dr-pre px-3 py-1 rounded-lg text-sm font-mono border border-border hover:bg-blue-50" data-val="90">90°</button>
          <button class="dr-pre px-3 py-1 rounded-lg text-sm font-mono border border-border hover:bg-blue-50" data-val="180">180°</button>
          <button class="dr-pre px-3 py-1 rounded-lg text-sm font-mono border border-border hover:bg-blue-50" data-val="270">270°</button>
          <button class="dr-pre px-3 py-1 rounded-lg text-sm font-mono border border-border hover:bg-blue-50" data-val="360">360°</button>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-5 bg-primary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Degrees</div><div class="text-2xl font-extrabold font-mono" id="dr-deg">0°</div></div>
          <div class="p-5 bg-secondary rounded-2xl text-white text-center"><div class="text-xs uppercase tracking-wide mb-1 opacity-80">Radians</div><div class="text-2xl font-extrabold font-mono" id="dr-rad">0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Gradians</div><div class="text-xl font-bold font-mono" id="dr-grad">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Turns</div><div class="text-xl font-bold font-mono" id="dr-turn">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-3">Trigonometric Values</h3>
          <div class="grid grid-cols-3 gap-3 text-center">
            <div><div class="text-xs text-text-muted">sin</div><div class="font-bold font-mono" id="dr-sin">0</div></div>
            <div><div class="text-xs text-text-muted">cos</div><div class="font-bold font-mono" id="dr-cos">0</div></div>
            <div><div class="text-xs text-text-muted">tan</div><div class="font-bold font-mono" id="dr-tan">0</div></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="degrees-radians" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDR() {
      const val = parseFloat((document.getElementById('dr-val') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('dr-unit') as HTMLSelectElement).value;
      let deg: number;
      if (unit === 'deg') deg = val;
      else if (unit === 'rad') deg = val * 180 / Math.PI;
      else if (unit === 'grad') deg = val * 0.9;
      else deg = val * 360;
      const rad = deg * Math.PI / 180;
      document.getElementById('dr-deg')!.textContent = deg.toFixed(4) + '°';
      document.getElementById('dr-rad')!.textContent = rad.toFixed(6);
      document.getElementById('dr-grad')!.textContent = (deg / 0.9).toFixed(4);
      document.getElementById('dr-turn')!.textContent = (deg / 360).toFixed(6);
      document.getElementById('dr-sin')!.textContent = Math.sin(rad).toFixed(6);
      document.getElementById('dr-cos')!.textContent = Math.cos(rad).toFixed(6);
      const tanVal = Math.tan(rad);
      document.getElementById('dr-tan')!.textContent = Math.abs(tanVal) > 1e10 ? 'Undefined' : tanVal.toFixed(6);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.getElementById('dr-val')!.addEventListener('input', calcDR);
      document.getElementById('dr-unit')!.addEventListener('change', calcDR);
      document.querySelectorAll('.dr-pre').forEach(b => b.addEventListener('click', () => {
        (document.getElementById('dr-val') as HTMLInputElement).value = (b as HTMLElement).dataset.val!;
        (document.getElementById('dr-unit') as HTMLSelectElement).value = 'deg';
        calcDR();
      }));
      calcDR();
    }, 50);
  </script>
</CalculatorLayout>
