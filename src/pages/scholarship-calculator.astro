---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Scholarship Calculator - Total Value & Savings";
const description = "Calculate the total value of a scholarship, out-of-pocket costs, loan reduction, and return on investment.";
const relatedCalcs = [
  { name: "Student Loan", url: "/student-loan-calculator", description: "Loan payments." },
  { name: "Textbook Cost", url: "/textbook-cost-calculator", description: "Textbook savings." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Interest growth." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings goals." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budgeting." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Scholarship Calculator" keywords="scholarship calculator, scholarship value, college cost, tuition savings, financial aid" breadcrumbs={[{ name: "Scholarship", url: "/scholarship-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Scholarship Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Determine the true value of your scholarship and remaining costs.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Annual Tuition ($)</label><input type="number" id="sc3-tuition" class="sc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="35000" min="0" step="1000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Room &amp; Board ($/yr)</label><input type="number" id="sc3-room" class="sc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12000" min="0" step="500"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Scholarship Amount ($/yr)</label><input type="number" id="sc3-schol" class="sc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="15000" min="0" step="500"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Years of Study</label><input type="number" id="sc3-years" class="sc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="1" max="8" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Other Fees ($/yr)</label><input type="number" id="sc3-fees" class="sc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2000" min="0" step="100"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Loan Interest Rate (%)</label><input type="number" id="sc3-rate" class="sc3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5.5" min="0" max="15" step="0.1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Scholarship Value</div>
          <div class="text-5xl font-extrabold font-mono" id="sc3-total">$0</div>
          <div class="text-sm text-blue-200 mt-1">over entire program</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total College Cost</div><div class="text-xl font-bold" id="sc3-cost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Out-of-Pocket Cost</div><div class="text-xl font-bold" id="sc3-oop">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Loan Interest Saved</div><div class="text-xl font-bold" id="sc3-interest">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Coverage Percentage</div><div class="text-xl font-bold" id="sc3-pct">0%</div></div>
        </div>
      </div>
      <ShareButton calculatorId="scholarship" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Understanding Scholarship Value</h2>
      <p>Scholarships reduce not only your direct costs but also the interest you would pay on student loans. A $15,000/year scholarship over 4 years saves far more than $60,000 when you factor in avoided loan interest.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSchol() {
      const tuition = parseFloat((document.getElementById('sc3-tuition') as HTMLInputElement).value) || 0;
      const room = parseFloat((document.getElementById('sc3-room') as HTMLInputElement).value) || 0;
      const schol = parseFloat((document.getElementById('sc3-schol') as HTMLInputElement).value) || 0;
      const years = parseFloat((document.getElementById('sc3-years') as HTMLInputElement).value) || 4;
      const fees = parseFloat((document.getElementById('sc3-fees') as HTMLInputElement).value) || 0;
      const rate = parseFloat((document.getElementById('sc3-rate') as HTMLInputElement).value) / 100 || 0.055;
      const annualCost = tuition + room + fees;
      const totalCost = annualCost * years;
      const totalSchol = schol * years;
      const oop = Math.max(0, totalCost - totalSchol);
      // Interest saved: scholarship amount that would have been borrowed over 10yr repayment
      const monthlyRate = rate / 12;
      const loanTerm = 120; // 10 year repayment
      const interestSaved = totalSchol > 0 && monthlyRate > 0
        ? (totalSchol * monthlyRate * loanTerm / (1 - Math.pow(1 + monthlyRate, -loanTerm))) - totalSchol
        : 0;
      const pct = totalCost > 0 ? Math.round(totalSchol / totalCost * 100) : 0;
      document.getElementById('sc3-total')!.textContent = '$' + totalSchol.toLocaleString();
      document.getElementById('sc3-cost')!.textContent = '$' + totalCost.toLocaleString();
      document.getElementById('sc3-oop')!.textContent = '$' + oop.toLocaleString();
      document.getElementById('sc3-interest')!.textContent = '$' + Math.round(interestSaved).toLocaleString();
      document.getElementById('sc3-pct')!.textContent = pct + '%';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.sc3-in').forEach(el => { el.addEventListener('input', calcSchol); el.addEventListener('change', calcSchol); }); calcSchol(); }, 50);
  </script>
</CalculatorLayout>
