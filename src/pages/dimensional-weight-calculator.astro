---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Dimensional Weight Calculator";
const description = "Calculate dimensional (DIM) weight from package dimensions for UPS, FedEx, and USPS. Compare billable weight across carriers to find the best rate.";
const relatedCalcs = [
  { name: "Gas Cost", url: "/gas-cost-calculator", description: "Estimate fuel expenses." },
  { name: "Moving Cost", url: "/moving-cost-calculator", description: "Estimate moving expenses." },
  { name: "Profit Margin", url: "/profit-margin-calculator", description: "Calculate profit margins." },
  { name: "Break Even", url: "/break-even-calculator", description: "Find break-even point." },
  { name: "Commute Cost", url: "/commute-cost-calculator", description: "Daily commute expenses." },
  { name: "Inventory Turnover", url: "/inventory-turnover-calculator", description: "Inventory efficiency." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Dimensional Weight Calculator" keywords="dimensional weight, DIM weight, UPS, FedEx, USPS, billable weight, shipping weight" breadcrumbs={[{ name: "Dimensional Weight", url: "/dimensional-weight-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Dimensional Weight Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate DIM weight for UPS, FedEx, and USPS and compare billable weights across all carriers.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Actual Weight (lbs)</label><input type="number" id="dw-weight" class="dw-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" min="0.1" step="0.1"></div>
        <div class="grid grid-cols-3 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Length (in)</label><input type="number" id="dw-length" class="dw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Width (in)</label><input type="number" id="dw-width" class="dw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Height (in)</label><input type="number" id="dw-height" class="dw-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="0.5"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">UPS/FedEx DIM Weight</div>
          <div class="text-5xl font-extrabold font-mono" id="dw-result">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">UPS Billable</div><div class="text-xl font-bold font-mono" id="dw-ups">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">FedEx Billable</div><div class="text-xl font-bold font-mono" id="dw-fedex">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">USPS Billable</div><div class="text-xl font-bold font-mono" id="dw-usps">--</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cubic Inches</div><div class="text-xl font-bold font-mono" id="dw-cubic">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Best Carrier</div><div class="text-xl font-bold font-mono" id="dw-best">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="dimensional-weight" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcDW() {
      const weight = parseFloat((document.getElementById('dw-weight') as HTMLInputElement).value) || 0;
      const length = parseFloat((document.getElementById('dw-length') as HTMLInputElement).value) || 0;
      const width = parseFloat((document.getElementById('dw-width') as HTMLInputElement).value) || 0;
      const height = parseFloat((document.getElementById('dw-height') as HTMLInputElement).value) || 0;

      const cubicInches = length * width * height;
      const dimUPS = Math.ceil(cubicInches / 139);
      const dimFedEx = Math.ceil(cubicInches / 139);
      const dimUSPS = Math.ceil(cubicInches / 166);

      const billUPS = Math.max(weight, dimUPS);
      const billFedEx = Math.max(weight, dimFedEx);
      const billUSPS = Math.max(weight, dimUSPS);

      const minBillable = Math.min(billUPS, billFedEx, billUSPS);
      let bestCarrier = 'USPS';
      if (minBillable === billUPS) bestCarrier = 'UPS';
      else if (minBillable === billFedEx) bestCarrier = 'FedEx';

      document.getElementById('dw-result')!.textContent = dimUPS.toFixed(1) + ' lbs';
      document.getElementById('dw-ups')!.textContent = billUPS.toFixed(1) + ' lbs';
      document.getElementById('dw-fedex')!.textContent = billFedEx.toFixed(1) + ' lbs';
      document.getElementById('dw-usps')!.textContent = billUSPS.toFixed(1) + ' lbs';
      document.getElementById('dw-cubic')!.textContent = cubicInches.toLocaleString(undefined, {maximumFractionDigits: 0}) + ' in\u00B3';
      document.getElementById('dw-best')!.textContent = bestCarrier;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('dw-weight') as HTMLInputElement).value = '5';
      (document.getElementById('dw-length') as HTMLInputElement).value = '18';
      (document.getElementById('dw-width') as HTMLInputElement).value = '14';
      (document.getElementById('dw-height') as HTMLInputElement).value = '12';
      document.querySelectorAll('.dw-in').forEach(el => { el.addEventListener('input', calcDW); el.addEventListener('change', calcDW); });
      calcDW();
    }, 50);
  </script>
</CalculatorLayout>
