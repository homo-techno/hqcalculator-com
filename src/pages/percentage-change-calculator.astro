---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Percentage Change Calculator - % Increase & Decrease";
const description = "Calculate the percentage increase or decrease between two values. Shows absolute and relative change.";
const relatedCalcs = [
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentages." },
  { name: "Discount Calculator", url: "/discount-calculator", description: "Discounts." },
  { name: "Markup Calculator", url: "/markup-calculator", description: "Markup." },
  { name: "Inflation Calculator", url: "/inflation-calculator", description: "Inflation." },
  { name: "Profit Margin", url: "/profit-margin-calculator", description: "Margins." },
  { name: "ROI Calculator", url: "/roi-calculator", description: "ROI." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Percentage Change Calculator" keywords="percentage change, percent increase, percent decrease, percentage difference, rate of change" breadcrumbs={[{ name: "Percentage Change", url: "/percentage-change-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Percentage Change Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate the percentage change between two numbers.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Original Value</label><input type="number" id="pc-old" class="pc-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="200" step="0.01"></div>
          <div><label class="block text-xs font-medium text-text mb-1">New Value</label><input type="number" id="pc-new" class="pc-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="250" step="0.01"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Percentage Change</div>
          <div class="text-5xl font-extrabold" id="pcc-result">0%</div>
          <div class="text-sm text-blue-200 mt-1" id="pcc-dir">Increase</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Absolute Change</div><div class="text-xl font-bold" id="pcc-abs">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Multiplier</div><div class="text-xl font-bold font-mono" id="pcc-mul">1.00x</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formula</h3>
          <div class="font-mono text-sm" id="pcc-formula">-</div>
        </div>
      </div>
      <ShareButton calculatorId="percentage-change" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Percentage Change Formula</h2>
      <p>% Change = ((New − Old) / |Old|) × 100</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPCC() {
      const old = parseFloat((document.getElementById('pc-old') as HTMLInputElement).value) || 0;
      const nw = parseFloat((document.getElementById('pc-new') as HTMLInputElement).value) || 0;
      if (old === 0) { document.getElementById('pcc-result')!.textContent = 'N/A'; return; }
      const diff = nw - old;
      const pct = (diff / Math.abs(old)) * 100;
      const mul = nw / old;
      document.getElementById('pcc-result')!.textContent = (pct >= 0 ? '+' : '') + pct.toFixed(2) + '%';
      document.getElementById('pcc-dir')!.textContent = pct > 0 ? 'Increase' : pct < 0 ? 'Decrease' : 'No Change';
      document.getElementById('pcc-abs')!.textContent = (diff >= 0 ? '+' : '') + diff.toFixed(2);
      document.getElementById('pcc-mul')!.textContent = mul.toFixed(4) + 'x';
      document.getElementById('pcc-formula')!.textContent = `((${nw} − ${old}) / |${old}|) × 100 = ${pct.toFixed(2)}%`;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.querySelectorAll('.pc-in').forEach(el => el.addEventListener('input', calcPCC)); calcPCC(); }, 50);
  </script>
</CalculatorLayout>
