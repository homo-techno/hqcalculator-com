---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Rental ROI Calculator";
const description = "Calculate total rental property ROI including cash flow, appreciation, equity paydown, and tax benefits for a complete investment picture.";
const relatedCalcs = [
  { name: "ROI Calculator", url: "/roi-calculator", description: "Return on investment." },
  { name: "Rental Yield", url: "/rental-yield-calculator", description: "Rental yield analysis." },
  { name: "Cap Rate", url: "/cap-rate-calculator", description: "Capitalization rate." },
  { name: "Cash Flow", url: "/cash-flow-calculator", description: "Cash flow analysis." },
  { name: "Investment", url: "/investment-calculator", description: "Investment growth." },
  { name: "Rental Property", url: "/rental-property-calculator", description: "Rental property ROI." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Rental ROI Calculator" keywords="rental ROI, total return, cash flow, appreciation, equity paydown, tax benefits, rental property" breadcrumbs={[{ name: "Rental ROI", url: "/rental-roi-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Rental ROI Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">See total rental property ROI from all four wealth-building pillars: cash flow, appreciation, loan paydown, and tax savings.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Property Value ($)</label><input type="number" id="rr2-value" class="rr2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="300000" min="0" step="5000"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Total Cash Invested ($)</label><input type="number" id="rr2-cash" class="rr2-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="75000" min="0" step="1000"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Annual Net Cash Flow ($)</label><input type="number" id="rr2-cashflow" class="rr2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3600" min="-50000" step="100"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Annual Appreciation (%)</label><input type="number" id="rr2-appr" class="rr2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="3.5" min="-10" max="20" step="0.1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Annual Loan Paydown ($)</label><input type="number" id="rr2-paydown" class="rr2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5000" min="0" step="500"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Annual Tax Savings ($)</label><input type="number" id="rr2-tax" class="rr2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2400" min="0" step="100"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Holding Period (years)</label><input type="number" id="rr2-years" class="rr2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="1" max="30" step="1"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Annual ROI</div>
          <div class="text-5xl font-extrabold font-mono" id="rr2-roi">0%</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cash Flow ROI</div><div class="text-xl font-bold font-mono" id="rr2-cfroi">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Appreciation ROI</div><div class="text-xl font-bold font-mono" id="rr2-approi">0%</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Paydown ROI</div><div class="text-xl font-bold font-mono" id="rr2-pdroi">0%</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Tax Benefit ROI</div><div class="text-xl font-bold font-mono" id="rr2-taxroi">0%</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Gain (Period)</div><div class="text-xl font-bold font-mono" id="rr2-totalgain">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cumulative ROI</div><div class="text-xl font-bold font-mono" id="rr2-cumroi">0%</div></div>
        </div>
      </div>
      <ShareButton calculatorId="rental-roi" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRR2() {
      const value = parseFloat((document.getElementById('rr2-value') as HTMLInputElement).value) || 0;
      const cash = parseFloat((document.getElementById('rr2-cash') as HTMLInputElement).value) || 0;
      const cashflow = parseFloat((document.getElementById('rr2-cashflow') as HTMLInputElement).value) || 0;
      const appr = parseFloat((document.getElementById('rr2-appr') as HTMLInputElement).value) || 0;
      const paydown = parseFloat((document.getElementById('rr2-paydown') as HTMLInputElement).value) || 0;
      const tax = parseFloat((document.getElementById('rr2-tax') as HTMLInputElement).value) || 0;
      const years = parseFloat((document.getElementById('rr2-years') as HTMLInputElement).value) || 1;

      const annualAppreciation = value * (appr / 100);
      const annualTotal = cashflow + annualAppreciation + paydown + tax;
      const annualROI = cash > 0 ? (annualTotal / cash) * 100 : 0;
      const cfROI = cash > 0 ? (cashflow / cash) * 100 : 0;
      const appROI = cash > 0 ? (annualAppreciation / cash) * 100 : 0;
      const pdROI = cash > 0 ? (paydown / cash) * 100 : 0;
      const taxROI = cash > 0 ? (tax / cash) * 100 : 0;

      const totalCashflow = cashflow * years;
      const totalAppreciation = value * (Math.pow(1 + appr / 100, years) - 1);
      const totalPaydown = paydown * years;
      const totalTax = tax * years;
      const totalGain = totalCashflow + totalAppreciation + totalPaydown + totalTax;
      const cumROI = cash > 0 ? (totalGain / cash) * 100 : 0;

      const fmt = (v: number) => (v >= 0 ? '$' : '-$') + Math.abs(v).toLocaleString(undefined, { maximumFractionDigits: 0 });

      document.getElementById('rr2-roi')!.textContent = annualROI.toFixed(2) + '%';
      document.getElementById('rr2-cfroi')!.textContent = cfROI.toFixed(1) + '%';
      document.getElementById('rr2-approi')!.textContent = appROI.toFixed(1) + '%';
      document.getElementById('rr2-pdroi')!.textContent = pdROI.toFixed(1) + '%';
      document.getElementById('rr2-taxroi')!.textContent = taxROI.toFixed(1) + '%';
      document.getElementById('rr2-totalgain')!.textContent = fmt(totalGain);
      document.getElementById('rr2-cumroi')!.textContent = cumROI.toFixed(1) + '%';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.rr2-in').forEach(el => { el.addEventListener('input', calcRR2); el.addEventListener('change', calcRR2); });
      calcRR2();
    }, 50);
  </script>
</CalculatorLayout>
