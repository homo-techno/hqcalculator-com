---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Yeast Calculator - Convert Active Dry, Instant & Fresh Yeast";
const description = "Convert between active dry yeast, instant yeast, and fresh yeast amounts for baking recipes.";
const relatedCalcs = [
  { name: "Baking Conversion", url: "/baking-conversion-calculator", description: "Convert baking measurements." },
  { name: "Sourdough Calculator", url: "/sourdough-calculator", description: "Sourdough bread ratios." },
  { name: "Coffee Ratio Calculator", url: "/coffee-ratio-calculator", description: "Perfect coffee-to-water ratios." },
  { name: "Meal Prep Calculator", url: "/meal-prep-calculator", description: "Plan meal prep quantities." },
  { name: "Food Cost Calculator", url: "/food-cost-calculator", description: "Restaurant food cost analysis." },
  { name: "Canning Calculator", url: "/canning-calculator", description: "Canning jar needs." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Yeast Calculator" keywords="yeast conversion, active dry yeast, instant yeast, fresh yeast, yeast substitution, baking yeast" breadcrumbs={[{ name: "Yeast Calculator", url: "/yeast-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Yeast Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Convert between active dry yeast, instant yeast, and fresh yeast for any baking recipe.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Yeast Type You Have</label>
          <select id="ye-type" class="ye-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="active">Active Dry Yeast</option>
            <option value="instant">Instant Yeast</option>
            <option value="fresh">Fresh Yeast</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Amount</label>
            <input type="number" id="ye-amount" class="ye-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="7" min="0" step="0.1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Unit</label>
            <select id="ye-unit" class="ye-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="grams">Grams</option>
              <option value="tsp">Teaspoons</option>
              <option value="tbsp">Tablespoons</option>
              <option value="packets">Packets (7g)</option>
            </select>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Active Dry Yeast</div>
          <div class="text-5xl font-extrabold font-mono" id="ye-result">0 g</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Instant Yeast</div><div class="text-xl font-bold font-mono" id="ye-instant">0 g</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Fresh Yeast</div><div class="text-xl font-bold font-mono" id="ye-fresh">0 g</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Active Dry (tsp)</div><div class="text-xl font-bold font-mono" id="ye-active-tsp">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Instant (tsp)</div><div class="text-xl font-bold font-mono" id="ye-instant-tsp">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="yeast" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcYE() {
      const type = (document.getElementById('ye-type') as HTMLSelectElement).value;
      const amount = parseFloat((document.getElementById('ye-amount') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('ye-unit') as HTMLSelectElement).value;
      // Convert to grams first
      let grams = amount;
      if (unit === 'tsp') grams = amount * 3.1;
      else if (unit === 'tbsp') grams = amount * 9.3;
      else if (unit === 'packets') grams = amount * 7;
      // Convert to active dry yeast grams as base
      let activeDry = grams;
      if (type === 'instant') activeDry = grams / 0.75;
      else if (type === 'fresh') activeDry = grams / 3;
      // Calculate all types
      const instant = activeDry * 0.75;
      const fresh = activeDry * 3;
      // Teaspoons (1 tsp active dry = ~3.1g)
      const activeTsp = activeDry / 3.1;
      const instantTsp = instant / 3.1;
      document.getElementById('ye-result')!.textContent = activeDry.toFixed(1) + ' g';
      document.getElementById('ye-instant')!.textContent = instant.toFixed(1) + ' g';
      document.getElementById('ye-fresh')!.textContent = fresh.toFixed(1) + ' g';
      document.getElementById('ye-active-tsp')!.textContent = activeTsp.toFixed(1) + ' tsp';
      document.getElementById('ye-instant-tsp')!.textContent = instantTsp.toFixed(1) + ' tsp';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ye-in').forEach(el => { el.addEventListener('input', calcYE); el.addEventListener('change', calcYE); });
      calcYE();
    }, 50);
  </script>
</CalculatorLayout>
