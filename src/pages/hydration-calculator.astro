---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Hydration Calculator - Daily Water Intake Needs";
const description = "Calculate daily water needs based on weight, activity level, climate, and caffeine intake. Shows ounces, liters, and glasses.";
const relatedCalcs = [
  { name: "Body Water Calculator", url: "/body-water-calculator", description: "Total body water." },
  { name: "Calorie Calculator", url: "/calorie-calculator", description: "Daily calorie needs." },
  { name: "BMI Calculator", url: "/bmi-calculator", description: "Body mass index." },
  { name: "Sodium Intake Calculator", url: "/sodium-intake-calculator", description: "Daily sodium." },
  { name: "Workout Volume Calculator", url: "/workout-volume-calculator", description: "Training volume." },
  { name: "Fasting Calculator", url: "/fasting-calculator", description: "Intermittent fasting." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Hydration Calculator" keywords="hydration calculator, water intake, daily water, glasses of water, dehydration, fluid needs" breadcrumbs={[{ name: "Hydration", url: "/hydration-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Hydration Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate your personalized daily water intake needs.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Weight (kg)</label><input type="number" id="hy2-wt" class="hy2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="70" min="20" max="250" step="0.5"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Activity Level</label>
            <select id="hy2-act" class="hy2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="1.0">Sedentary (desk job)</option>
              <option value="1.2" selected>Lightly active</option>
              <option value="1.4">Moderately active</option>
              <option value="1.6">Very active</option>
              <option value="1.8">Athlete / heavy labor</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Climate</label>
            <select id="hy2-clim" class="hy2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="1.0" selected>Temperate</option>
              <option value="1.1">Warm</option>
              <option value="1.2">Hot / humid</option>
              <option value="1.15">Dry / arid</option>
              <option value="1.05">Cold</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Caffeine (cups/day)</label><input type="number" id="hy2-caf" class="hy2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0" max="20" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Daily Water Intake</div>
          <div class="text-5xl font-extrabold font-mono" id="hy2-liters">0</div>
          <div class="text-sm text-blue-200 mt-1">liters</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Ounces</div><div class="text-xl font-bold" id="hy2-oz">0 oz</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Glasses (8 oz)</div><div class="text-xl font-bold" id="hy2-glass">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bottles (500ml)</div><div class="text-xl font-bold" id="hy2-bottles">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-3">Adjustment Factors</h3>
          <div class="space-y-1 text-sm" id="hy2-factors"></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-3">Hydration Tips</h3>
          <div class="grid grid-cols-2 gap-2 text-sm">
            <div class="flex justify-between"><span>Morning</span><span class="font-bold">Drink 500ml on waking</span></div>
            <div class="flex justify-between"><span>Meals</span><span class="font-bold">250ml with each meal</span></div>
            <div class="flex justify-between"><span>Exercise</span><span class="font-bold">500ml per hour</span></div>
            <div class="flex justify-between"><span>Urine color</span><span class="font-bold">Pale yellow = hydrated</span></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="hydration" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Daily Water Needs</h2>
      <p>A general guideline is 35 mL of water per kg of body weight per day, adjusted for activity, climate, and caffeine consumption. Caffeine is a mild diuretic, so each cup of coffee/tea requires an extra 100-150 mL of water. Active individuals and those in hot climates need significantly more fluid to prevent dehydration.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcHydration() {
      const wt = parseFloat((document.getElementById('hy2-wt') as HTMLInputElement).value) || 70;
      const act = parseFloat((document.getElementById('hy2-act') as HTMLSelectElement).value) || 1.2;
      const clim = parseFloat((document.getElementById('hy2-clim') as HTMLSelectElement).value) || 1.0;
      const caf = parseInt((document.getElementById('hy2-caf') as HTMLInputElement).value) || 0;
      const baseML = wt * 35;
      const adjustedML = baseML * act * clim + caf * 120;
      const liters = adjustedML / 1000;
      const oz = liters * 33.814;
      const glasses = oz / 8;
      const bottles = liters / 0.5;
      document.getElementById('hy2-liters')!.textContent = liters.toFixed(1);
      document.getElementById('hy2-oz')!.textContent = Math.round(oz) + ' oz';
      document.getElementById('hy2-glass')!.textContent = Math.round(glasses).toString();
      document.getElementById('hy2-bottles')!.textContent = Math.round(bottles).toString();
      const factors: string[] = [];
      factors.push('<div class="flex justify-between"><span>Base (35 mL/kg)</span><span class="font-bold">' + (baseML / 1000).toFixed(1) + ' L</span></div>');
      if (act > 1.0) factors.push('<div class="flex justify-between"><span>Activity (+' + ((act - 1) * 100).toFixed(0) + '%)</span><span class="font-bold">+' + ((baseML * (act - 1)) / 1000).toFixed(1) + ' L</span></div>');
      if (clim > 1.0) factors.push('<div class="flex justify-between"><span>Climate (+' + ((clim - 1) * 100).toFixed(0) + '%)</span><span class="font-bold">+' + ((baseML * act * (clim - 1)) / 1000).toFixed(1) + ' L</span></div>');
      if (caf > 0) factors.push('<div class="flex justify-between"><span>Caffeine (' + caf + ' cups)</span><span class="font-bold">+' + ((caf * 120) / 1000).toFixed(1) + ' L</span></div>');
      document.getElementById('hy2-factors')!.innerHTML = factors.join('');
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.hy2-in').forEach(el => { el.addEventListener('input', calcHydration); el.addEventListener('change', calcHydration); });
      calcHydration();
    }, 50);
  </script>
</CalculatorLayout>
