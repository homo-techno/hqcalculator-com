---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "FIRE Calculator - Financial Independence Retire Early";
const description = "Calculate when you can reach financial independence and retire early. See your FIRE number, savings rate, and timeline.";

const relatedCalcs = [
  { name: "Retirement Calculator", url: "/retirement-calculator", description: "Retirement planning." },
  { name: "Investment Calculator", url: "/investment-calculator", description: "Investments." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
  { name: "401(k) Calculator", url: "/401k-calculator", description: "401k." },
  { name: "Compound Interest", url: "/compound-interest-calculator", description: "Compound interest." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="FIRE Calculator" keywords="FIRE calculator, financial independence, retire early, FIRE number, savings rate, early retirement" breadcrumbs={[{ name: "FIRE Calculator", url: "/fire-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">FIRE Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Find your FIRE number and how long until financial independence.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Annual After-Tax Income</label>
            <div class="relative"><span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="fi-income" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="80000" min="0" step="1000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Annual Expenses</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="fi-expenses" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="45000" min="0" step="1000">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Current Portfolio Value</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="fi-portfolio" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="150000" min="0" step="10000">
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div>
              <label class="block text-xs font-medium text-text mb-1">Expected Return (%/yr)</label>
              <input type="number" id="fi-return" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="7" min="0" max="15" step="0.5">
            </div>
            <div>
              <label class="block text-xs font-medium text-text mb-1">Withdrawal Rate (%)</label>
              <input type="number" id="fi-swr" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="4" min="2" max="6" step="0.5">
              <p class="text-xs text-text-muted mt-1">Standard: 4% (Trinity study)</p>
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Your Current Age</label>
            <input type="number" id="fi-age" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="30" min="18" max="70" step="1">
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">FIRE Number</div>
            <div class="text-4xl sm:text-5xl font-extrabold" id="fi-number">$0</div>
            <div class="text-sm text-blue-200 mt-1" id="fi-subtitle">Annual expenses รท withdrawal rate</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Years to FIRE</div>
              <div class="text-xl font-bold text-secondary" id="fi-years">0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">FIRE Age</div>
              <div class="text-xl font-bold" id="fi-fire-age">0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Savings Rate</div>
              <div class="text-xl font-bold" id="fi-savings-rate">0%</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Annual Savings</div>
              <div class="text-xl font-bold" id="fi-annual-save">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Progress</div>
              <div class="text-xl font-bold" id="fi-progress">0%</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Monthly Income at FIRE</div>
              <div class="text-xl font-bold" id="fi-monthly">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl">
            <h3 class="font-semibold text-sm text-text mb-3">Growth Projection</h3>
            <div class="space-y-1 text-sm" id="fi-table"></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="fire" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">What is FIRE?</h2>
      <p>FIRE (Financial Independence, Retire Early) means accumulating enough investments that passive income covers your living expenses. Your <strong>FIRE number</strong> = annual expenses รท safe withdrawal rate (typically 4%).</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcFIRE() {
      const income = parseFloat((document.getElementById('fi-income') as HTMLInputElement).value) || 0;
      const expenses = parseFloat((document.getElementById('fi-expenses') as HTMLInputElement).value) || 0;
      const portfolio = parseFloat((document.getElementById('fi-portfolio') as HTMLInputElement).value) || 0;
      const returnRate = (parseFloat((document.getElementById('fi-return') as HTMLInputElement).value) || 0) / 100;
      const swr = (parseFloat((document.getElementById('fi-swr') as HTMLInputElement).value) || 4) / 100;
      const age = parseInt((document.getElementById('fi-age') as HTMLInputElement).value) || 30;

      const fireNumber = expenses / swr;
      const annualSavings = income - expenses;
      const savingsRate = income > 0 ? (annualSavings / income) * 100 : 0;
      const progress = fireNumber > 0 ? (portfolio / fireNumber) * 100 : 0;

      // Calculate years to FIRE
      let bal = portfolio;
      let yearsToFire = 0;
      const rows: string[] = [];
      rows.push('<div class="grid grid-cols-3 gap-1 font-semibold text-xs text-text-muted mb-1"><span>Year</span><span>Age</span><span>Portfolio</span></div>');

      if (annualSavings > 0) {
        for (let y = 0; y <= 50; y++) {
          if (y <= 5 || y % 5 === 0 || bal >= fireNumber) {
            const isFire = bal >= fireNumber && (y === 0 || (bal - annualSavings) * (1 + returnRate) < fireNumber);
            rows.push(`<div class="grid grid-cols-3 gap-1 text-xs ${isFire ? 'font-bold text-primary bg-blue-50 rounded p-1' : ''}"><span>${y}</span><span>${age + y}</span><span>${fmt(bal)}</span></div>`);
          }
          if (bal >= fireNumber) { yearsToFire = y; break; }
          bal = (bal + annualSavings) * (1 + returnRate);
          yearsToFire = y + 1;
        }
      } else {
        yearsToFire = portfolio >= fireNumber ? 0 : -1;
      }

      document.getElementById('fi-number')!.textContent = fmt(fireNumber);
      document.getElementById('fi-years')!.textContent = yearsToFire < 0 ? 'N/A' : yearsToFire.toString();
      document.getElementById('fi-fire-age')!.textContent = yearsToFire < 0 ? 'N/A' : String(age + yearsToFire);
      document.getElementById('fi-savings-rate')!.textContent = savingsRate.toFixed(1) + '%';
      document.getElementById('fi-annual-save')!.textContent = fmt(annualSavings);
      document.getElementById('fi-progress')!.textContent = Math.min(100, progress).toFixed(1) + '%';
      document.getElementById('fi-monthly')!.textContent = fmt(expenses / 12);
      document.getElementById('fi-table')!.innerHTML = rows.join('');

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['fi-income', 'fi-expenses', 'fi-portfolio', 'fi-return', 'fi-swr', 'fi-age'].forEach(id =>
        document.getElementById(id)!.addEventListener('input', calcFIRE));
      calcFIRE();
    }, 50);
  </script>
</CalculatorLayout>
