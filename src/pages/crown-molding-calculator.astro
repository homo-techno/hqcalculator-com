---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Crown Molding Calculator";
const description = "Calculate crown molding length, pieces, corners, and cost for any room.";
const relatedCalcs = [
  { name: "Baseboard", url: "/baseboard-calculator", description: "Baseboard." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Countertop", url: "/countertop-calculator", description: "Countertop." },
  { name: "Cabinet", url: "/cabinet-calculator", description: "Cabinets." },
  { name: "Curtain", url: "/curtain-calculator", description: "Curtains." },
  { name: "Lighting", url: "/lighting-calculator", description: "Lighting." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Crown Molding Calculator" keywords="crown molding calculator, crown molding length, molding pieces, ceiling trim, room perimeter" breadcrumbs={[{ name: "Crown Molding", url: "/crown-molding-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Crown Molding Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate molding needed for your room.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Room Length (ft)</label><input type="number" id="cm-len" class="cm-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="14" min="0" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Room Width (ft)</label><input type="number" id="cm-wid" class="cm-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="12" min="0" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Piece Length (ft)</label>
            <select id="cm-piece" class="cm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="8">8 ft</option>
              <option value="10">10 ft</option>
              <option value="12" selected>12 ft</option>
              <option value="16">16 ft</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Price per Piece ($)</label><input type="number" id="cm-price" class="cm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="0" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Inside Corners</label><input type="number" id="cm-icorn" class="cm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Outside Corners</label><input type="number" id="cm-ocorn" class="cm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Perimeter</div>
          <div class="text-5xl font-extrabold font-mono" id="cm-result">0 ft</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Pieces</div><div class="text-xl font-bold font-mono" id="cm-pieces">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Waste</div><div class="text-xl font-bold font-mono" id="cm-waste">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost</div><div class="text-xl font-bold font-mono" id="cm-cost">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Corner Blocks</div><div class="text-xl font-bold font-mono" id="cm-blocks">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Nails (est.)</div><div class="text-xl font-bold font-mono" id="cm-nails">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="crown-molding" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCM() {
      const len = parseFloat((document.getElementById('cm-len') as HTMLInputElement).value) || 0;
      const wid = parseFloat((document.getElementById('cm-wid') as HTMLInputElement).value) || 0;
      const pieceLen = parseFloat((document.getElementById('cm-piece') as HTMLSelectElement).value);
      const price = parseFloat((document.getElementById('cm-price') as HTMLInputElement).value) || 0;
      const iCorn = parseInt((document.getElementById('cm-icorn') as HTMLInputElement).value) || 0;
      const oCorn = parseInt((document.getElementById('cm-ocorn') as HTMLInputElement).value) || 0;
      const perimeter = 2 * (len + wid);
      const perimeterWithWaste = perimeter * 1.1;
      const pieces = Math.ceil(perimeterWithWaste / pieceLen);
      const totalLength = pieces * pieceLen;
      const wasteFt = totalLength - perimeter;
      const nails = Math.ceil(perimeter * 2);
      document.getElementById('cm-result')!.textContent = perimeter.toFixed(1) + ' ft';
      document.getElementById('cm-pieces')!.textContent = pieces.toString();
      document.getElementById('cm-waste')!.textContent = wasteFt.toFixed(1) + ' ft';
      document.getElementById('cm-cost')!.textContent = '$' + (pieces * price).toFixed(0);
      document.getElementById('cm-blocks')!.textContent = (iCorn + oCorn).toString();
      document.getElementById('cm-nails')!.textContent = nails.toString();
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.cm-in').forEach(el => { el.addEventListener('input', calcCM); el.addEventListener('change', calcCM); });
      calcCM();
    }, 50);
  </script>
</CalculatorLayout>
