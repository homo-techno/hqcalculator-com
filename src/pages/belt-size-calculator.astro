---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Belt Size Calculator - Waist to Belt Size Conversion";
const description = "Calculate belt size from waist measurement with US, EU, and UK conversions. Find the right belt length for your waist size.";
const relatedCalcs = [
  { name: "BMI Calculator", url: "/bmi-calculator", description: "Body mass index." },
  { name: "Body Fat Calculator", url: "/body-fat-calculator", description: "Body fat percentage." },
  { name: "Length Converter", url: "/length-converter", description: "Length conversions." },
  { name: "Fabric Calculator", url: "/fabric-calculator", description: "Fabric yardage needs." },
  { name: "Ideal Weight Calculator", url: "/ideal-weight-calculator", description: "Ideal body weight." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Belt Size Calculator" keywords="belt size calculator, waist to belt size, belt length, US EU UK belt size, belt sizing chart" breadcrumbs={[{ name: "Belt Size", url: "/belt-size-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Belt Size Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Find your belt size from waist measurement with international size conversions.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Waist / Trouser Size</label><input type="number" id="bl-waist" class="bl-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="32" min="20" max="60" step="1"></div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Unit</label>
            <select id="bl-unit" class="bl-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="in" selected>Inches</option>
              <option value="cm">Centimeters</option>
            </select>
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Belt Style</label>
          <select id="bl-style" class="bl-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="dress" selected>Dress Belt (at waist)</option>
            <option value="casual">Casual Belt (at hips)</option>
            <option value="western">Western / Wide Belt</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Measurement Method</label>
          <select id="bl-method" class="bl-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="trouser" selected>Trouser / Pant Size</option>
            <option value="body">Body Measurement (around waist)</option>
          </select>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Recommended Belt Size (US)</div>
          <div class="text-4xl font-extrabold font-mono" id="bl-result">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">EU Size (cm)</div><div class="text-xl font-bold font-mono" id="bl-eu">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">UK Size</div><div class="text-xl font-bold font-mono" id="bl-uk">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Alpha</div><div class="text-xl font-bold font-mono" id="bl-alpha">--</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Belt Length</div><div class="text-xl font-bold font-mono" id="bl-total">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Middle Hole</div><div class="text-xl font-bold font-mono" id="bl-middle">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="belt-size" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcBL() {
      let waist = parseFloat((document.getElementById('bl-waist') as HTMLInputElement).value) || 32;
      const unit = (document.getElementById('bl-unit') as HTMLSelectElement).value;
      const style = (document.getElementById('bl-style') as HTMLSelectElement).value;
      const method = (document.getElementById('bl-method') as HTMLSelectElement).value;

      let waistIn = unit === 'cm' ? waist / 2.54 : waist;
      let waistCm = unit === 'cm' ? waist : waist * 2.54;

      // If trouser size, belt size = trouser size + 2 inches
      // If body measurement, belt = measurement + 2 inches
      let addInches = 2;
      if (method === 'trouser') addInches = 2;
      else addInches = 2;

      if (style === 'casual') addInches = 3;
      else if (style === 'western') addInches = 4;

      const beltSizeIn = Math.round((waistIn + addInches) / 2) * 2; // round to nearest even
      const beltSizeCm = Math.round(beltSizeIn * 2.54);

      // EU size = belt size in cm
      const euSize = beltSizeCm;
      // UK same as US for belts
      const ukSize = beltSizeIn;

      // Alpha sizing
      let alpha = '--';
      if (beltSizeIn <= 28) alpha = 'XS';
      else if (beltSizeIn <= 30) alpha = 'S';
      else if (beltSizeIn <= 34) alpha = 'M';
      else if (beltSizeIn <= 38) alpha = 'L';
      else if (beltSizeIn <= 42) alpha = 'XL';
      else if (beltSizeIn <= 46) alpha = 'XXL';
      else alpha = '3XL';

      // Total belt length (buckle end to tip): belt size + ~8-10 inches for tail
      const totalLength = beltSizeIn + 8;
      // Middle hole should match belt size
      const middleHole = beltSizeIn;

      document.getElementById('bl-result')!.textContent = beltSizeIn + '"';
      document.getElementById('bl-eu')!.textContent = euSize + ' cm';
      document.getElementById('bl-uk')!.textContent = ukSize + '"';
      document.getElementById('bl-alpha')!.textContent = alpha;
      document.getElementById('bl-total')!.textContent = totalLength + '"';
      document.getElementById('bl-middle')!.textContent = middleHole + '" from buckle';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.bl-in').forEach(el => { el.addEventListener('input', calcBL); el.addEventListener('change', calcBL); });
      calcBL();
    }, 50);
  </script>
</CalculatorLayout>
