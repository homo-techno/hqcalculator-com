---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Baking Conversion Calculator - Cups, Grams, mL & More";
const description = "Convert between cups, tablespoons, teaspoons, milliliters, and grams for common baking ingredients like flour, sugar, and butter.";
const relatedCalcs = [
  { name: "Sourdough Calculator", url: "/sourdough-calculator", description: "Calculate sourdough bread ingredient ratios." },
  { name: "Yeast Calculator", url: "/yeast-calculator", description: "Convert between yeast types." },
  { name: "Coffee Ratio Calculator", url: "/coffee-ratio-calculator", description: "Perfect coffee-to-water ratios." },
  { name: "Meal Prep Calculator", url: "/meal-prep-calculator", description: "Plan weekly meal prep quantities." },
  { name: "Food Cost Calculator", url: "/food-cost-calculator", description: "Calculate restaurant food costs." },
  { name: "Canning Calculator", url: "/canning-calculator", description: "Determine canning jar needs." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Baking Conversion Calculator" keywords="baking conversion, cups to grams, tablespoons to ml, baking measurement, flour grams, sugar conversion" breadcrumbs={[{ name: "Baking Conversion", url: "/baking-conversion-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Baking Conversion Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Convert between cups, tablespoons, teaspoons, milliliters, and grams for common baking ingredients.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Ingredient</label>
          <select id="bk2-ingredient" class="bk2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="allpurpose">All-Purpose Flour</option>
            <option value="bread">Bread Flour</option>
            <option value="cake">Cake Flour</option>
            <option value="sugar">Granulated Sugar</option>
            <option value="brown">Brown Sugar (packed)</option>
            <option value="powdered">Powdered Sugar</option>
            <option value="butter">Butter</option>
            <option value="milk">Milk</option>
            <option value="honey">Honey</option>
            <option value="cocoa">Cocoa Powder</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Amount</label>
            <input type="number" id="bk2-amount" class="bk2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="0" step="0.01">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Unit</label>
            <select id="bk2-unit" class="bk2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="cups">Cups</option>
              <option value="tbsp">Tablespoons</option>
              <option value="tsp">Teaspoons</option>
              <option value="ml">Milliliters</option>
              <option value="grams">Grams</option>
            </select>
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Grams</div>
          <div class="text-5xl font-extrabold font-mono" id="bk2-result">0 g</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cups</div><div class="text-xl font-bold font-mono" id="bk2-cups">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Tablespoons</div><div class="text-xl font-bold font-mono" id="bk2-tbsp">0</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Teaspoons</div><div class="text-xl font-bold font-mono" id="bk2-tsp">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Milliliters</div><div class="text-xl font-bold font-mono" id="bk2-ml">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Ounces</div><div class="text-xl font-bold font-mono" id="bk2-oz">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="baking-conversion" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcBK2() {
      // Grams per cup for each ingredient
      const gpCup: Record<string, number> = {
        allpurpose: 125, bread: 130, cake: 114, sugar: 200,
        brown: 220, powdered: 120, butter: 227, milk: 244,
        honey: 340, cocoa: 86
      };
      const ingredient = (document.getElementById('bk2-ingredient') as HTMLSelectElement).value;
      const amount = parseFloat((document.getElementById('bk2-amount') as HTMLInputElement).value) || 0;
      const unit = (document.getElementById('bk2-unit') as HTMLSelectElement).value;
      const gpc = gpCup[ingredient] || 125;
      // Convert input to grams first
      let grams = 0;
      if (unit === 'cups') grams = amount * gpc;
      else if (unit === 'tbsp') grams = amount * (gpc / 16);
      else if (unit === 'tsp') grams = amount * (gpc / 48);
      else if (unit === 'ml') grams = amount * (gpc / 236.588);
      else if (unit === 'grams') grams = amount;
      // Convert grams to all units
      const cups = grams / gpc;
      const tbsp = cups * 16;
      const tsp = cups * 48;
      const ml = cups * 236.588;
      const oz = grams / 28.3495;
      document.getElementById('bk2-result')!.textContent = grams.toFixed(1) + ' g';
      document.getElementById('bk2-cups')!.textContent = cups.toFixed(2);
      document.getElementById('bk2-tbsp')!.textContent = tbsp.toFixed(1);
      document.getElementById('bk2-tsp')!.textContent = tsp.toFixed(1);
      document.getElementById('bk2-ml')!.textContent = ml.toFixed(1);
      document.getElementById('bk2-oz')!.textContent = oz.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.bk2-in').forEach(el => { el.addEventListener('input', calcBK2); el.addEventListener('change', calcBK2); });
      calcBK2();
    }, 50);
  </script>
</CalculatorLayout>
