---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Salary Calculator - Hourly, Weekly, Monthly & Annual Pay 2026";
const description = "Convert between hourly, weekly, bi-weekly, semi-monthly, monthly, and annual salary. Factor in vacation, holidays, and work hours per week.";

const relatedCalcs = [
  { name: "Paycheck Calculator", url: "/paycheck-calculator", description: "Take-home pay estimator." },
  { name: "Hourly to Salary", url: "/hourly-to-salary-calculator", description: "Convert hourly to annual." },
  { name: "Income Tax Calculator", url: "/income-tax-calculator", description: "Federal & state taxes." },
  { name: "Tip Calculator", url: "/tip-calculator", description: "Restaurant tip calculator." },
  { name: "Loan Calculator", url: "/loan-calculator", description: "Loan payment calculator." },
  { name: "Compound Interest Calculator", url: "/compound-interest-calculator", description: "Savings growth." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Salary Calculator"
  keywords="salary calculator, hourly to salary, annual salary, weekly pay, biweekly pay, monthly salary, pay converter"
  breadcrumbs={[{ name: "Salary Calculator", url: "/salary-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Salary Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Convert your salary between hourly, weekly, bi-weekly, monthly, and annual pay periods.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <div class="mb-5">
            <label class="block text-sm font-medium text-text mb-1">Pay Amount</label>
            <div class="relative">
              <span class="absolute left-4 top-1/2 -translate-y-1/2 text-text-muted font-bold">$</span>
              <input type="number" id="sal-amount" class="w-full pl-8 pr-4 py-3 border border-border rounded-xl text-2xl font-bold" value="55000" min="0" step="100">
            </div>
          </div>

          <div class="mb-5">
            <label class="block text-sm font-medium text-text mb-2">Pay Period</label>
            <div class="grid grid-cols-2 sm:grid-cols-3 gap-2">
              <button class="sal-period-btn px-3 py-2 rounded-lg text-sm font-semibold bg-surface-alt text-text-secondary border border-border" data-period="hourly">Hourly</button>
              <button class="sal-period-btn px-3 py-2 rounded-lg text-sm font-semibold bg-surface-alt text-text-secondary border border-border" data-period="weekly">Weekly</button>
              <button class="sal-period-btn px-3 py-2 rounded-lg text-sm font-semibold bg-surface-alt text-text-secondary border border-border" data-period="biweekly">Bi-Weekly</button>
              <button class="sal-period-btn px-3 py-2 rounded-lg text-sm font-semibold bg-surface-alt text-text-secondary border border-border" data-period="semimonthly">Semi-Monthly</button>
              <button class="sal-period-btn px-3 py-2 rounded-lg text-sm font-semibold bg-surface-alt text-text-secondary border border-border" data-period="monthly">Monthly</button>
              <button class="sal-period-btn px-3 py-2 rounded-lg text-sm font-semibold bg-primary text-white border border-primary" data-period="annual">Annual</button>
            </div>
          </div>

          <div class="mb-5">
            <label class="block text-sm font-medium text-text mb-1">Hours per Week</label>
            <input type="number" id="sal-hours" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="40" min="1" max="168">
          </div>

          <div class="mb-5">
            <label class="block text-sm font-medium text-text mb-1">Vacation Days per Year</label>
            <input type="number" id="sal-vacation" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="10" min="0" max="365">
          </div>

          <div class="mb-5">
            <label class="block text-sm font-medium text-text mb-1">Holidays per Year</label>
            <input type="number" id="sal-holidays" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="10" min="0" max="30">
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-5 bg-primary rounded-2xl text-white">
            <div class="flex justify-between items-center">
              <div><div class="text-sm text-blue-200 uppercase">Annual Salary</div></div>
              <div class="text-3xl font-extrabold" id="sal-annual">$55,000</div>
            </div>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl flex justify-between items-center">
            <div><div class="font-semibold text-sm">Monthly</div><div class="text-xs text-text-muted">12 paychecks/year</div></div>
            <div class="text-xl font-bold" id="sal-monthly">$0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl flex justify-between items-center">
            <div><div class="font-semibold text-sm">Semi-Monthly</div><div class="text-xs text-text-muted">24 paychecks/year</div></div>
            <div class="text-xl font-bold" id="sal-semimonthly">$0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl flex justify-between items-center">
            <div><div class="font-semibold text-sm">Bi-Weekly</div><div class="text-xs text-text-muted">26 paychecks/year</div></div>
            <div class="text-xl font-bold" id="sal-biweekly">$0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl flex justify-between items-center">
            <div><div class="font-semibold text-sm">Weekly</div><div class="text-xs text-text-muted">52 paychecks/year</div></div>
            <div class="text-xl font-bold" id="sal-weekly">$0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl flex justify-between items-center">
            <div><div class="font-semibold text-sm">Daily</div><div class="text-xs text-text-muted">Based on work days</div></div>
            <div class="text-xl font-bold" id="sal-daily">$0</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl flex justify-between items-center">
            <div><div class="font-semibold text-sm">Hourly</div><div class="text-xs text-text-muted">Based on hours/week</div></div>
            <div class="text-xl font-bold text-primary" id="sal-hourly">$0</div>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl">
            <div class="flex justify-between text-sm">
              <span class="text-text-muted">Work days/year</span>
              <span class="font-semibold" id="sal-workdays">0</span>
            </div>
            <div class="flex justify-between text-sm mt-1">
              <span class="text-text-muted">Work hours/year</span>
              <span class="font-semibold" id="sal-workhours">0</span>
            </div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="salary" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How Salary Conversion Works</h2>
      <p>This calculator converts your pay between different time periods using standard assumptions. The annual salary is the base from which all other periods are derived.</p>

      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm">
        <p>Annual = Hourly × Hours/Week × 52</p>
        <p>Monthly = Annual / 12</p>
        <p>Bi-Weekly = Annual / 26</p>
        <p>Weekly = Annual / 52</p>
      </div>

      <h3 class="text-xl font-semibold text-text mt-8">Adjusted vs. Unadjusted</h3>
      <p>The calculator factors in vacation and holiday time. If you have paid time off, your <strong>effective hourly rate</strong> is higher than your base rate since you're being paid for days you don't work.</p>

      <h3 class="text-xl font-semibold text-text mt-8">Common Pay Periods</h3>
      <ul>
        <li><strong>Bi-weekly (26/year):</strong> Most common in the US. Paid every two weeks.</li>
        <li><strong>Semi-monthly (24/year):</strong> Paid on specific dates (1st and 15th). Common for salaried employees.</li>
        <li><strong>Monthly (12/year):</strong> Common in many countries and for executives.</li>
        <li><strong>Weekly (52/year):</strong> Common for hourly workers and contractors.</li>
      </ul>

      <h3 class="text-xl font-semibold text-text mt-8">Frequently Asked Questions</h3>
      <p><strong>Is $55,000 a good salary?</strong> The median US household income is about $75,000 (2024). Whether $55,000 is "good" depends on your location, cost of living, family size, and career stage.</p>
      <p><strong>How many work hours in a year?</strong> A standard full-time year is 2,080 hours (40 hours × 52 weeks). After subtracting vacation and holidays, the actual number is typically 1,920-2,000 hours.</p>
      <p><strong>What's the difference between bi-weekly and semi-monthly?</strong> Bi-weekly = every 2 weeks (26 paychecks). Semi-monthly = twice per month on set dates (24 paychecks). Bi-weekly gives 2 extra paychecks per year.</p>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    let salPeriod = 'annual';
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString('en-US');

    function calcSalary() {
      const amount = parseFloat((document.getElementById('sal-amount') as HTMLInputElement).value) || 0;
      const hoursPerWeek = parseFloat((document.getElementById('sal-hours') as HTMLInputElement).value) || 40;
      const vacationDays = parseFloat((document.getElementById('sal-vacation') as HTMLInputElement).value) || 0;
      const holidays = parseFloat((document.getElementById('sal-holidays') as HTMLInputElement).value) || 0;

      const totalWorkWeeks = 52;
      const offDays = vacationDays + holidays;
      const workDays = 260 - offDays; // 52 weeks × 5 days - off days
      const workHours = workDays * (hoursPerWeek / 5);

      // Convert to annual first
      let annual: number;
      switch (salPeriod) {
        case 'hourly': annual = amount * hoursPerWeek * totalWorkWeeks; break;
        case 'weekly': annual = amount * totalWorkWeeks; break;
        case 'biweekly': annual = amount * 26; break;
        case 'semimonthly': annual = amount * 24; break;
        case 'monthly': annual = amount * 12; break;
        case 'annual': default: annual = amount; break;
      }

      const hourly = workHours > 0 ? annual / workHours : 0;
      const daily = workDays > 0 ? annual / workDays : 0;

      document.getElementById('sal-annual')!.textContent = fmt(annual);
      document.getElementById('sal-monthly')!.textContent = fmt(annual / 12);
      document.getElementById('sal-semimonthly')!.textContent = fmt(annual / 24);
      document.getElementById('sal-biweekly')!.textContent = fmt(annual / 26);
      document.getElementById('sal-weekly')!.textContent = fmt(annual / 52);
      document.getElementById('sal-daily')!.textContent = fmt(daily);
      document.getElementById('sal-hourly')!.textContent = fmt(hourly);
      document.getElementById('sal-workdays')!.textContent = String(workDays);
      document.getElementById('sal-workhours')!.textContent = workHours.toLocaleString();

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('.sal-period-btn').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.sal-period-btn').forEach(b => {
            b.classList.remove('bg-primary', 'text-white', 'border-primary');
            b.classList.add('bg-surface-alt', 'text-text-secondary', 'border-border');
          });
          btn.classList.remove('bg-surface-alt', 'text-text-secondary', 'border-border');
          btn.classList.add('bg-primary', 'text-white', 'border-primary');
          salPeriod = (btn as HTMLElement).dataset.period || 'annual';
          calcSalary();
        });
      });

      ['sal-amount', 'sal-hours', 'sal-vacation', 'sal-holidays'].forEach(id => {
        document.getElementById(id)!.addEventListener('input', calcSalary);
      });

      calcSalary();
    }, 50);
  </script>
</CalculatorLayout>
