---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Sheep Shearing Calculator - Wool Yield, Schedule & Revenue";
const description = "Estimate wool yield per sheep, shearing schedule, fleece weight by breed, and potential revenue per head for your flock.";
const relatedCalcs = [
  { name: "Goat Feed Calculator", url: "/goat-feed-calculator", description: "Daily feed for goats." },
  { name: "Livestock Water Calculator", url: "/livestock-water-calculator", description: "Water needs for livestock." },
  { name: "Cattle Weight Calculator", url: "/cattle-weight-calculator", description: "Estimate cattle weight." },
  { name: "Hay Calculator", url: "/hay-calculator", description: "Calculate hay needs." },
  { name: "Chicken Feed Calculator", url: "/chicken-feed-calculator", description: "Feed needs for poultry." },
  { name: "Horse Feed Calculator", url: "/horse-feed-calculator", description: "Feed amounts for horses." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Sheep Shearing Calculator" keywords="sheep shearing calculator, wool yield, fleece weight, shearing schedule, wool revenue, sheep flock" breadcrumbs={[{ name: "Sheep Shearing", url: "/sheep-shearing-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Sheep Shearing Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate wool yield, plan shearing schedules, and calculate potential revenue from your flock.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Number of Sheep</label>
            <input type="number" id="ss2-count" class="ss2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="1" max="5000" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Breed</label>
            <select id="ss2-breed" class="ss2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="merino" selected>Merino (fine wool)</option>
              <option value="suffolk">Suffolk</option>
              <option value="dorset">Dorset</option>
              <option value="romney">Romney</option>
              <option value="corriedale">Corriedale</option>
              <option value="lincoln">Lincoln (heavy fleece)</option>
              <option value="hair">Hair Sheep (Katahdin)</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Shearing Frequency</label>
            <select id="ss2-freq" class="ss2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="1" selected>Once per year</option>
              <option value="2">Twice per year</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Wool Price ($/lb raw)</label>
            <input type="number" id="ss2-price" class="ss2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1.50" min="0" max="20" step="0.10">
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Shearing Cost ($/head)</label>
          <input type="number" id="ss2-cost" class="ss2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" max="50" step="0.5">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Wool Yield / Year</div>
          <div class="text-5xl font-extrabold font-mono" id="ss2-result">--</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Fleece / Head</div><div class="text-xl font-bold font-mono" id="ss2-fleece">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Clean Yield</div><div class="text-xl font-bold font-mono" id="ss2-clean">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Gross Revenue</div><div class="text-xl font-bold font-mono" id="ss2-revenue">--</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Shearing Cost</div><div class="text-xl font-bold font-mono" id="ss2-shearcost">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Net Revenue</div><div class="text-xl font-bold font-mono" id="ss2-net">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Revenue / Head</div><div class="text-xl font-bold font-mono" id="ss2-perhead">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="sheep-shearing" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSS2() {
      const count = parseInt((document.getElementById('ss2-count') as HTMLInputElement).value) || 1;
      const breed = (document.getElementById('ss2-breed') as HTMLSelectElement).value;
      const freq = parseInt((document.getElementById('ss2-freq') as HTMLSelectElement).value) || 1;
      const price = parseFloat((document.getElementById('ss2-price') as HTMLInputElement).value) || 0;
      const shearCost = parseFloat((document.getElementById('ss2-cost') as HTMLInputElement).value) || 0;

      // Average raw fleece weight (lbs) by breed per shearing
      const fleeceWeights: Record<string, number> = {
        merino: 10, suffolk: 6, dorset: 7, romney: 10,
        corriedale: 12, lincoln: 14, hair: 0
      };

      // Clean yield percentage (after scouring)
      const cleanPct: Record<string, number> = {
        merino: 0.50, suffolk: 0.55, dorset: 0.55, romney: 0.60,
        corriedale: 0.55, lincoln: 0.60, hair: 0
      };

      const fleecePerHead = fleeceWeights[breed] || 8;
      const totalRawWool = fleecePerHead * count * freq;
      const cleanYieldPct = cleanPct[breed] || 0.55;
      const cleanWool = totalRawWool * cleanYieldPct;

      const grossRevenue = totalRawWool * price;
      const totalShearCost = count * shearCost * freq;
      const netRevenue = grossRevenue - totalShearCost;
      const revenuePerHead = count > 0 ? netRevenue / count : 0;

      document.getElementById('ss2-result')!.textContent = Math.round(totalRawWool) + ' lbs';
      document.getElementById('ss2-fleece')!.textContent = fleecePerHead.toFixed(1) + ' lbs';
      document.getElementById('ss2-clean')!.textContent = Math.round(cleanWool) + ' lbs (' + Math.round(cleanYieldPct * 100) + '%)';
      document.getElementById('ss2-revenue')!.textContent = '$' + grossRevenue.toFixed(0);
      document.getElementById('ss2-shearcost')!.textContent = '$' + totalShearCost.toFixed(0);
      document.getElementById('ss2-net')!.textContent = '$' + netRevenue.toFixed(0);
      document.getElementById('ss2-perhead')!.textContent = '$' + revenuePerHead.toFixed(2);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ss2-in').forEach(el => { el.addEventListener('input', calcSS2); el.addEventListener('change', calcSS2); });
      calcSS2();
    }, 50);
  </script>
</CalculatorLayout>
