---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Fermentation Temperature Calculator - Desired Dough Temperature (DDT)";
const description = "Calculate the desired dough temperature using ingredient temperatures and friction factor. Find the ideal water temperature for your bread dough.";
const relatedCalcs = [
  { name: "Bread Proofing Calculator", url: "/bread-scoring-calculator", description: "Estimate proofing times." },
  { name: "Baker's Percentage Calculator", url: "/baker-percentage-calculator", description: "Calculate baker's percentages." },
  { name: "Dough Hydration Calculator", url: "/dough-hydration-calculator", description: "Calculate dough hydration." },
  { name: "Yeast Conversion Calculator", url: "/yeast-conversion-calculator", description: "Convert between yeast types." },
  { name: "Sourdough Calculator", url: "/sourdough-calculator", description: "Calculate sourdough ratios." },
  { name: "Bread Hydration Visual Calculator", url: "/bread-hydration-visual-calculator", description: "Visualize dough at different hydrations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Fermentation Temperature Calculator" keywords="desired dough temperature, DDT, friction factor, water temperature, bread dough temperature, fermentation control" breadcrumbs={[{ name: "Fermentation Temperature", url: "/fermentation-temperature-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Fermentation Temperature Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate the water temperature needed to achieve your desired dough temperature (DDT), accounting for flour temp, room temp, and mixer friction.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Desired Dough Temperature (&deg;F)</label>
          <input type="number" id="ft2-ddt" class="ft2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="76" min="50" max="100" step="1">
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Room Temperature (&deg;F)</label>
            <input type="number" id="ft2-room" class="ft2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="72" min="40" max="110" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Flour Temperature (&deg;F)</label>
            <input type="number" id="ft2-flour" class="ft2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="70" min="40" max="110" step="1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Preferment/Starter Temp (&deg;F)</label>
            <input type="number" id="ft2-pre" class="ft2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="70" min="40" max="110" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Using Preferment?</label>
            <select id="ft2-usepre" class="ft2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="no">No (straight dough)</option>
              <option value="yes">Yes (with preferment)</option>
            </select>
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Friction Factor (&deg;F)</label>
          <input type="number" id="ft2-friction" class="ft2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="24" min="0" max="60" step="1">
          <p class="text-xs text-text-muted mt-1">Typical: Hand mix 0-6, Stand mixer 20-30, Spiral mixer 25-35</p>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Required Water Temperature</div>
          <div class="text-5xl font-extrabold font-mono" id="ft2-result">--</div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Water Temp (&deg;C)</div>
            <div class="text-xl font-bold font-mono" id="ft2-celsius">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">DDT (&deg;C)</div>
            <div class="text-xl font-bold font-mono" id="ft2-ddt-c">--</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Multiplication Factor</div>
            <div class="text-xl font-bold font-mono" id="ft2-factor">--</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Water Advisory</div>
            <div class="text-sm font-bold" id="ft2-advisory">--</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="fermentation-temperature" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcFT2() {
      const ddt = parseFloat((document.getElementById('ft2-ddt') as HTMLInputElement).value) || 76;
      const room = parseFloat((document.getElementById('ft2-room') as HTMLInputElement).value) || 72;
      const flour = parseFloat((document.getElementById('ft2-flour') as HTMLInputElement).value) || 70;
      const pre = parseFloat((document.getElementById('ft2-pre') as HTMLInputElement).value) || 70;
      const usePre = (document.getElementById('ft2-usepre') as HTMLSelectElement).value;
      const friction = parseFloat((document.getElementById('ft2-friction') as HTMLInputElement).value) || 24;

      // DDT formula:
      // For straight dough (3 factors): Water = (DDT x 3) - Room - Flour - Friction
      // With preferment (4 factors): Water = (DDT x 4) - Room - Flour - Preferment - Friction
      let factor = 3;
      let waterTemp = 0;

      if (usePre === 'yes') {
        factor = 4;
        waterTemp = (ddt * factor) - room - flour - pre - friction;
      } else {
        waterTemp = (ddt * factor) - room - flour - friction;
      }

      const waterC = (waterTemp - 32) * 5 / 9;
      const ddtC = (ddt - 32) * 5 / 9;

      let advisory = '';
      if (waterTemp < 35) advisory = 'Very cold! Use ice water.';
      else if (waterTemp < 50) advisory = 'Cold water. Refrigerate first.';
      else if (waterTemp < 75) advisory = 'Cool to lukewarm. Good range.';
      else if (waterTemp < 90) advisory = 'Warm water. Standard range.';
      else if (waterTemp < 110) advisory = 'Hot. Be careful not to kill yeast above 120\u00B0F.';
      else advisory = 'Too hot! Will damage yeast. Reduce friction or cool environment.';

      document.getElementById('ft2-result')!.textContent = waterTemp.toFixed(0) + '\u00B0F';
      document.getElementById('ft2-celsius')!.textContent = waterC.toFixed(1) + '\u00B0C';
      document.getElementById('ft2-ddt-c')!.textContent = ddtC.toFixed(1) + '\u00B0C';
      document.getElementById('ft2-factor')!.textContent = factor + 'x (DDT \u00D7 ' + factor + ' = ' + (ddt * factor) + ')';
      document.getElementById('ft2-advisory')!.textContent = advisory;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.ft2-in').forEach(el => { el.addEventListener('input', calcFT2); el.addEventListener('change', calcFT2); });
      calcFT2();
    }, 50);
  </script>
</CalculatorLayout>
