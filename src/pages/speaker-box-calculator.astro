---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Speaker Box Calculator - Sealed & Ported Enclosure Design";
const description = "Calculate sealed and ported speaker enclosure volume from Thiele-Small parameters, port length, and diameter for optimal bass response.";
const relatedCalcs = [
  { name: "Resonance Calculator", url: "/resonance-calculator", description: "Resonant frequency." },
  { name: "Frequency Calculator", url: "/frequency-calculator", description: "Convert frequency units." },
  { name: "Sound Speed Calculator", url: "/sound-speed-calculator", description: "Speed of sound." },
  { name: "Capacitor Calculator", url: "/capacitor-calculator", description: "Capacitor values." },
  { name: "Inductor Calculator", url: "/inductor-calculator", description: "Inductor values." },
  { name: "Power Calculator", url: "/power-calculator", description: "Power math." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Speaker Box Calculator" keywords="speaker box, enclosure, sealed, ported, Thiele-Small, port length, bass reflex, subwoofer box" breadcrumbs={[{ name: "Speaker Box", url: "/speaker-box-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Speaker Box Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Design sealed and ported speaker enclosures using Thiele-Small parameters.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Enclosure Type</label>
          <select id="sb2-type" class="sb2-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="sealed">Sealed (Acoustic Suspension)</option>
            <option value="ported">Ported (Bass Reflex)</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Fs - Resonant Freq (Hz)</label>
            <input type="number" id="sb2-fs" class="sb2-in w-full px-4 py-3 border border-border rounded-xl text-lg" min="10" max="200" step="0.1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Qts - Total Q Factor</label>
            <input type="number" id="sb2-qts" class="sb2-in w-full px-4 py-3 border border-border rounded-xl text-lg" min="0.1" max="2" step="0.01">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Vas - Compliance Volume (L)</label>
            <input type="number" id="sb2-vas" class="sb2-in w-full px-4 py-3 border border-border rounded-xl text-lg" min="1" max="500" step="0.1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Driver Diameter (inches)</label>
            <input type="number" id="sb2-dia" class="sb2-in w-full px-4 py-3 border border-border rounded-xl text-lg" min="3" max="18" step="0.5">
          </div>
        </div>
        <div id="sb2-port-inputs" class="hidden">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Port Diameter (inches)</label>
            <input type="number" id="sb2-pd" class="sb2-in w-full px-4 py-3 border border-border rounded-xl text-lg" min="1" max="8" step="0.25">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Recommended Box Volume</div>
          <div class="text-4xl font-extrabold font-mono" id="sb2-vol">0 L</div>
          <div class="text-sm text-blue-200 mt-1" id="sb2-volcf">0 ft3</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">System F3 (-3dB)</div><div class="text-xl font-bold font-mono" id="sb2-f3">0 Hz</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">System Qtc</div><div class="text-xl font-bold font-mono" id="sb2-qtc">0</div></div>
        </div>
        <div id="sb2-port-results" class="hidden grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Port Length</div><div class="text-xl font-bold font-mono" id="sb2-pl">0 in</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Port Tuning Freq</div><div class="text-xl font-bold font-mono" id="sb2-fb">0 Hz</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Box Dimensions (cube)</div><div class="text-xl font-bold font-mono" id="sb2-dim">0 x 0 x 0 in</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">EBP (Efficiency Bandwidth)</div><div class="text-xl font-bold font-mono" id="sb2-ebp">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="speaker-box" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSB2() {
      const type = (document.getElementById('sb2-type') as HTMLSelectElement).value;
      const fs = parseFloat((document.getElementById('sb2-fs') as HTMLInputElement).value) || 0;
      const qts = parseFloat((document.getElementById('sb2-qts') as HTMLInputElement).value) || 0;
      const vas = parseFloat((document.getElementById('sb2-vas') as HTMLInputElement).value) || 0;
      const dia = parseFloat((document.getElementById('sb2-dia') as HTMLInputElement).value) || 8;
      const pd = parseFloat((document.getElementById('sb2-pd') as HTMLInputElement).value) || 3;

      const portInputs = document.getElementById('sb2-port-inputs')!;
      const portResults = document.getElementById('sb2-port-results')!;

      if (type === 'ported') {
        portInputs.classList.remove('hidden');
        portResults.classList.remove('hidden');
      } else {
        portInputs.classList.add('hidden');
        portResults.classList.add('hidden');
      }

      if (fs <= 0 || qts <= 0 || vas <= 0) return;

      const ebp = fs / qts;
      document.getElementById('sb2-ebp')!.textContent = ebp.toFixed(1);

      if (type === 'sealed') {
        const qtcTarget = 0.707;
        const ratio = Math.pow(qtcTarget / qts, 2) - 1;
        const vb = ratio > 0 ? vas / ratio : vas;
        const qtc = qts * Math.sqrt(vas / vb + 1);
        const f3 = fs * Math.sqrt(vas / vb + 1) * Math.sqrt(1 / (2 * qtc * qtc) + Math.sqrt(Math.pow(1 / (2 * qtc * qtc), 2) + 1) - 1 > 0 ? Math.sqrt(1 / (2 * qtc * qtc) + Math.sqrt(Math.pow(1 / (2 * qtc * qtc), 2) + 1) - 1) : 1);
        const fc = fs * Math.sqrt(vas / vb + 1);
        const f3calc = fc / qtc * Math.sqrt((1 - 2 * qtc * qtc + Math.sqrt((2 * qtc * qtc - 1) * (2 * qtc * qtc - 1) + 1)) / 2);

        document.getElementById('sb2-vol')!.textContent = vb.toFixed(1) + ' L';
        document.getElementById('sb2-volcf')!.textContent = (vb / 28.3168).toFixed(2) + ' ft\u00B3';
        document.getElementById('sb2-qtc')!.textContent = qtc.toFixed(3);
        document.getElementById('sb2-f3')!.textContent = (f3calc > 0 ? f3calc : fc).toFixed(1) + ' Hz';

        const sideIn = Math.pow(vb / 28.3168 * 1728, 1/3);
        document.getElementById('sb2-dim')!.textContent = sideIn.toFixed(1) + ' x ' + sideIn.toFixed(1) + ' x ' + sideIn.toFixed(1) + ' in';
      } else {
        const vb = 15 * vas * Math.pow(qts, 3.3);
        const fb = 0.42 * fs * Math.pow(qts, -0.9);
        const portArea = Math.PI * Math.pow(pd * 0.0254 / 2, 2);
        const portLen = (23562.5 * portArea / (vb / 1000 * fb * fb)) - 0.825 * Math.sqrt(portArea);
        const portLenIn = portLen / 0.0254;
        const f3 = 0.28 * fs * Math.pow(qts, -1.4);

        document.getElementById('sb2-vol')!.textContent = vb.toFixed(1) + ' L';
        document.getElementById('sb2-volcf')!.textContent = (vb / 28.3168).toFixed(2) + ' ft\u00B3';
        document.getElementById('sb2-qtc')!.textContent = '--';
        document.getElementById('sb2-f3')!.textContent = f3.toFixed(1) + ' Hz';
        document.getElementById('sb2-pl')!.textContent = (portLenIn > 0 ? portLenIn.toFixed(1) : '0') + ' in';
        document.getElementById('sb2-fb')!.textContent = fb.toFixed(1) + ' Hz';

        const sideIn = Math.pow(vb / 28.3168 * 1728, 1/3);
        document.getElementById('sb2-dim')!.textContent = sideIn.toFixed(1) + ' x ' + sideIn.toFixed(1) + ' x ' + sideIn.toFixed(1) + ' in';
      }

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      (document.getElementById('sb2-fs') as HTMLInputElement).value = '35';
      (document.getElementById('sb2-qts') as HTMLInputElement).value = '0.38';
      (document.getElementById('sb2-vas') as HTMLInputElement).value = '84';
      (document.getElementById('sb2-dia') as HTMLInputElement).value = '10';
      (document.getElementById('sb2-pd') as HTMLInputElement).value = '3';
      document.querySelectorAll('.sb2-in').forEach(el => { el.addEventListener('input', calcSB2); el.addEventListener('change', calcSB2); });
      calcSB2();
    }, 50);
  </script>
</CalculatorLayout>
