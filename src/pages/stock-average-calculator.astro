---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Stock Average Calculator";
const description = "Calculate your weighted average cost basis across multiple stock purchase lots.";
const relatedCalcs = [
  { name: "Options Profit", url: "/options-profit-calculator", description: "Options P&L." },
  { name: "Asset Allocation", url: "/asset-allocation-calculator", description: "Portfolio allocation." },
  { name: "Tax-Equivalent Yield", url: "/tax-equivalent-yield-calculator", description: "Tax-free yields." },
  { name: "Customer Lifetime Value", url: "/customer-lifetime-value-calculator", description: "CLV analysis." },
  { name: "Price Elasticity", url: "/price-elasticity-calculator", description: "Price elasticity." },
  { name: "401k", url: "/401k-calculator", description: "Retirement savings." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Stock Average Calculator" keywords="stock average calculator, cost basis, average share price, dollar cost averaging, weighted average" breadcrumbs={[{ name: "Stock Average", url: "/stock-average-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Stock Average Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate weighted average cost basis for multiple buy lots.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div id="sa-lots">
          <div class="grid grid-cols-2 gap-2 mb-2">
            <div><label class="block text-xs font-medium text-text mb-1">Shares (Lot 1)</label><input type="number" class="sa-in sa-shares w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="100" min="0" step="1"></div>
            <div><label class="block text-xs font-medium text-text mb-1">Price (Lot 1)</label><input type="number" class="sa-in sa-price w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" step="0.01"></div>
          </div>
          <div class="grid grid-cols-2 gap-2 mb-2">
            <div><label class="block text-xs font-medium text-text mb-1">Shares (Lot 2)</label><input type="number" class="sa-in sa-shares w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="50" min="0" step="1"></div>
            <div><label class="block text-xs font-medium text-text mb-1">Price (Lot 2)</label><input type="number" class="sa-in sa-price w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="45" min="0" step="0.01"></div>
          </div>
          <div class="grid grid-cols-2 gap-2 mb-2">
            <div><label class="block text-xs font-medium text-text mb-1">Shares (Lot 3)</label><input type="number" class="sa-in sa-shares w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="75" min="0" step="1"></div>
            <div><label class="block text-xs font-medium text-text mb-1">Price (Lot 3)</label><input type="number" class="sa-in sa-price w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="55" min="0" step="0.01"></div>
          </div>
          <div class="grid grid-cols-2 gap-2 mb-2">
            <div><label class="block text-xs font-medium text-text mb-1">Shares (Lot 4)</label><input type="number" class="sa-in sa-shares w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="1"></div>
            <div><label class="block text-xs font-medium text-text mb-1">Price (Lot 4)</label><input type="number" class="sa-in sa-price w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="0.01"></div>
          </div>
          <div class="grid grid-cols-2 gap-2 mb-2">
            <div><label class="block text-xs font-medium text-text mb-1">Shares (Lot 5)</label><input type="number" class="sa-in sa-shares w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="1"></div>
            <div><label class="block text-xs font-medium text-text mb-1">Price (Lot 5)</label><input type="number" class="sa-in sa-price w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="0.01"></div>
          </div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Current Market Price ($)</label><input type="number" id="sa-market" class="sa-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="52" min="0" step="0.01"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Average Cost Per Share</div>
          <div class="text-5xl font-extrabold font-mono" id="sa-result">$0.00</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Shares</div><div class="text-xl font-bold font-mono" id="sa-total-shares">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Invested</div><div class="text-xl font-bold font-mono" id="sa-total-cost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Current Value</div><div class="text-xl font-bold font-mono" id="sa-current">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Gain / Loss</div><div class="text-xl font-bold font-mono" id="sa-gain">$0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="stock-average" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcSA() {
      const sharesEls = document.querySelectorAll('.sa-shares') as NodeListOf<HTMLInputElement>;
      const priceEls = document.querySelectorAll('.sa-price') as NodeListOf<HTMLInputElement>;
      const marketPrice = parseFloat((document.getElementById('sa-market') as HTMLInputElement).value) || 0;

      let totalShares = 0;
      let totalCost = 0;
      for (let i = 0; i < sharesEls.length; i++) {
        const s = parseFloat(sharesEls[i].value) || 0;
        const p = parseFloat(priceEls[i].value) || 0;
        totalShares += s;
        totalCost += s * p;
      }

      const avgCost = totalShares > 0 ? totalCost / totalShares : 0;
      const currentValue = totalShares * marketPrice;
      const gainLoss = currentValue - totalCost;

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { maximumFractionDigits: 2 });
      document.getElementById('sa-result')!.textContent = '$' + avgCost.toFixed(2);
      document.getElementById('sa-total-shares')!.textContent = totalShares.toLocaleString();
      document.getElementById('sa-total-cost')!.textContent = fmt(totalCost);
      document.getElementById('sa-current')!.textContent = fmt(currentValue);
      document.getElementById('sa-gain')!.textContent = (gainLoss >= 0 ? '+' : '') + fmt(gainLoss);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.sa-in').forEach(el => { el.addEventListener('input', calcSA); el.addEventListener('change', calcSA); });
      calcSA();
    }, 50);
  </script>
</CalculatorLayout>
