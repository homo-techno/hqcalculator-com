---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Fabric Calculator - Yardage & Cost";
const description = "Calculate fabric yardage needed for sewing projects based on project type, dimensions, and fabric width.";
const relatedCalcs = [
  { name: "Square Footage", url: "/square-footage-calculator", description: "Sq ft." },
  { name: "Area Calculator", url: "/area-calculator", description: "Area." },
  { name: "Length Converter", url: "/length-converter", description: "Length." },
  { name: "Wallpaper Calculator", url: "/wallpaper-calculator", description: "Wallpaper." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentage." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Fabric Calculator" keywords="fabric calculator, yardage calculator, sewing calculator, fabric needed, fabric cost" breadcrumbs={[{ name: "Fabric Calculator", url: "/fabric-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Fabric Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate fabric yardage and cost for your projects.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Project Length (inches)</label><input type="number" id="fb-len" class="fb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="72" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Project Width (inches)</label><input type="number" id="fb-wid" class="fb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="45" min="0" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Fabric Width</label>
            <select id="fb-fw" class="fb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="36">36 inches</option>
              <option value="44" selected>44/45 inches</option>
              <option value="54">54 inches</option>
              <option value="60">60 inches</option>
              <option value="72">72 inches</option>
              <option value="108">108 inches</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Price per Yard ($)</label><input type="number" id="fb-price" class="fb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="0" step="0.5"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Quantity</label><input type="number" id="fb-qty" class="fb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Seam Allowance (inches)</label><input type="number" id="fb-seam" class="fb-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.5" min="0" max="2" step="0.25"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Fabric Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="fb-result">0 yards</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Cost</div><div class="text-xl font-bold font-mono" id="fb-cost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Meters</div><div class="text-xl font-bold font-mono" id="fb-m">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Sq Feet</div><div class="text-xl font-bold font-mono" id="fb-sqft">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="fabric" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcFB() {
      const len = parseFloat((document.getElementById('fb-len') as HTMLInputElement).value) || 0;
      const wid = parseFloat((document.getElementById('fb-wid') as HTMLInputElement).value) || 0;
      const fw = parseFloat((document.getElementById('fb-fw') as HTMLSelectElement).value) || 45;
      const price = parseFloat((document.getElementById('fb-price') as HTMLInputElement).value) || 0;
      const qty = parseInt((document.getElementById('fb-qty') as HTMLInputElement).value) || 1;
      const seam = parseFloat((document.getElementById('fb-seam') as HTMLInputElement).value) || 0;
      const adjLen = len + seam * 2;
      const adjWid = wid + seam * 2;
      const panels = Math.ceil(adjWid / fw);
      const totalInches = adjLen * panels * qty;
      const yards = totalInches / 36;
      const ceilYards = Math.ceil(yards * 4) / 4;
      const cost = ceilYards * price;
      const meters = ceilYards * 0.9144;
      const sqft = (ceilYards * 36 * fw) / 144;
      document.getElementById('fb-result')!.textContent = ceilYards.toFixed(2) + ' yards';
      document.getElementById('fb-cost')!.textContent = '$' + cost.toFixed(2);
      document.getElementById('fb-m')!.textContent = meters.toFixed(2);
      document.getElementById('fb-sqft')!.textContent = sqft.toFixed(1);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.fb-in').forEach(el => { el.addEventListener('input', calcFB); el.addEventListener('change', calcFB); });
      calcFB();
    }, 50);
  </script>
</CalculatorLayout>
