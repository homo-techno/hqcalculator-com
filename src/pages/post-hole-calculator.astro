---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Post Hole Calculator - Concrete Bags, Cubic Feet & Gravel Base";
const description = "Calculate concrete needed for post holes. Enter diameter, depth, and number of posts to get bags per hole, total bags, cubic feet, and gravel base amounts.";

const relatedCalcs = [
  { name: "Concrete Calculator", url: "/concrete-calculator", description: "Concrete volume." },
  { name: "Pergola Calculator", url: "/pergola-calculator", description: "Pergola lumber." },
  { name: "Fence Calculator", url: "/fence-calculator", description: "Fence material." },
  { name: "Foundation Calculator", url: "/foundation-calculator", description: "Foundation concrete." },
  { name: "Patio Calculator", url: "/patio-calculator", description: "Patio material." },
  { name: "Fire Pit Calculator", url: "/fire-pit-calculator", description: "Fire pit materials." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Post Hole Calculator"
  keywords="post hole calculator, concrete for fence posts, post hole concrete, bags per post, post hole depth, gravel base"
  breadcrumbs={[{ name: "Post Hole Calculator", url: "/post-hole-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Post Hole Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Determine how much concrete you need for fence, deck, and structural post holes.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Hole Diameter (inches)</label>
            <select id="ph2-diameter" class="w-full px-3 py-3 border border-border rounded-xl text-lg">
              <option value="8">8 inches</option>
              <option value="10" selected>10 inches</option>
              <option value="12">12 inches</option>
              <option value="14">14 inches</option>
              <option value="16">16 inches</option>
              <option value="18">18 inches</option>
              <option value="24">24 inches</option>
            </select>
          </div>

          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Hole Depth (inches)</label>
            <input type="number" id="ph2-depth" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="36" min="12" step="1">
            <div class="text-xs text-text-muted mt-1">Typical: 1/3 of total post length or below frost line</div>
          </div>

          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Number of Posts</label>
            <input type="number" id="ph2-posts" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="10" min="1" step="1">
          </div>

          <div class="p-4 bg-surface-alt rounded-xl">
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label class="block text-xs font-medium text-text mb-1">Post Size (inches)</label>
                <select id="ph2-postsize" class="w-full px-3 py-2 border border-border rounded-lg">
                  <option value="3.5">4x4 (3.5" actual)</option>
                  <option value="5.5" selected>6x6 (5.5" actual)</option>
                  <option value="7.25">8x8 (7.25" actual)</option>
                </select>
              </div>
              <div>
                <label class="block text-xs font-medium text-text mb-1">Gravel Base (inches)</label>
                <input type="number" id="ph2-gravel" class="w-full px-3 py-2 border border-border rounded-lg" value="4" min="0" max="12" step="1">
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Concrete Bags (50 lb)</div>
            <div class="text-5xl font-extrabold font-mono" id="ph2-totalbags">0</div>
            <div class="text-sm text-blue-200 mt-1">fast-setting concrete mix</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Bags Per Hole</div>
              <div class="text-xl font-bold" id="ph2-perbag">0</div>
              <div class="text-xs text-text-muted">50 lb bags</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Total Cubic Feet</div>
              <div class="text-xl font-bold" id="ph2-cuft">0</div>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Concrete Per Hole</div>
              <div class="text-xl font-bold" id="ph2-perhole">0 cu ft</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Gravel Needed</div>
              <div class="text-xl font-bold" id="ph2-gravelamt">0 cu ft</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">80 lb Bags Alternative</div>
            <div class="text-xl font-bold" id="ph2-bags80">0 bags</div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="post-hole" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How to Calculate Post Hole Concrete</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>Hole volume:</strong> Pi x (Hole radius)^2 x Concrete depth</p>
        <p><strong>Post displacement:</strong> Post width^2 x Concrete depth (square post)</p>
        <p><strong>Concrete needed:</strong> Hole volume - Post displacement</p>
      </div>

      <h3 class="text-xl font-semibold text-text mt-8">Post Hole Guidelines</h3>
      <ul>
        <li><strong>Depth:</strong> 1/3 of total post length or below frost line (deeper wins)</li>
        <li><strong>Diameter:</strong> 3x the post width (e.g., 12" hole for 4x4 post)</li>
        <li><strong>Gravel:</strong> 4-6" of gravel at bottom for drainage</li>
        <li><strong>Crown concrete:</strong> Slope top of concrete away from post for water runoff</li>
      </ul>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcPostHole() {
      const diameterIn = parseFloat((document.getElementById('ph2-diameter') as HTMLSelectElement).value) || 10;
      const depthIn = parseFloat((document.getElementById('ph2-depth') as HTMLInputElement).value) || 36;
      const posts = parseInt((document.getElementById('ph2-posts') as HTMLInputElement).value) || 1;
      const postSizeIn = parseFloat((document.getElementById('ph2-postsize') as HTMLSelectElement).value) || 5.5;
      const gravelIn = parseFloat((document.getElementById('ph2-gravel') as HTMLInputElement).value) || 4;

      const radiusIn = diameterIn / 2;
      const concreteDepthIn = depthIn - gravelIn;

      // Volume of hole (cylinder) minus post (square)
      const holeVolIn3 = Math.PI * radiusIn * radiusIn * concreteDepthIn;
      const postVolIn3 = postSizeIn * postSizeIn * concreteDepthIn;
      const concretePerHoleIn3 = Math.max(0, holeVolIn3 - postVolIn3);
      const concretePerHoleCuFt = concretePerHoleIn3 / 1728;

      const totalCuFt = concretePerHoleCuFt * posts;

      // 50 lb bag yields ~0.375 cu ft, 80 lb bag yields ~0.6 cu ft
      const bagsPerHole50 = Math.ceil(concretePerHoleCuFt / 0.375);
      const totalBags50 = bagsPerHole50 * posts;
      const totalBags80 = Math.ceil(totalCuFt / 0.6);

      // Gravel volume
      const gravelVolPerHole = Math.PI * radiusIn * radiusIn * gravelIn / 1728;
      const totalGravelCuFt = gravelVolPerHole * posts;

      document.getElementById('ph2-totalbags')!.textContent = String(totalBags50);
      document.getElementById('ph2-perbag')!.textContent = String(bagsPerHole50);
      document.getElementById('ph2-cuft')!.textContent = totalCuFt.toFixed(1);
      document.getElementById('ph2-perhole')!.textContent = concretePerHoleCuFt.toFixed(2) + ' cu ft';
      document.getElementById('ph2-gravelamt')!.textContent = totalGravelCuFt.toFixed(1) + ' cu ft';
      document.getElementById('ph2-bags80')!.textContent = totalBags80 + ' bags';

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('#ph2-depth, #ph2-posts, #ph2-gravel').forEach(el => {
        el.addEventListener('input', calcPostHole);
        el.addEventListener('change', calcPostHole);
      });
      document.querySelectorAll('#ph2-diameter, #ph2-postsize').forEach(el => {
        el.addEventListener('input', calcPostHole);
        el.addEventListener('change', calcPostHole);
      });
      calcPostHole();
    }, 50);
  </script>
</CalculatorLayout>
