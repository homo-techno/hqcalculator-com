---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Random Name Generator - Baby Names & Character Names";
const description = "Generate random names for characters, babies, or creative projects. Filter by gender and origin.";
const relatedCalcs = [
  { name: "Random Number", url: "/random-number-generator", description: "Random numbers." },
  { name: "Password Generator", url: "/password-generator", description: "Passwords." },
  { name: "Love Calculator", url: "/love-calculator", description: "Love." },
  { name: "Due Date", url: "/due-date-calculator", description: "Due date." },
  { name: "Age Calculator", url: "/age-calculator", description: "Age." },
  { name: "Dog Age", url: "/dog-age-calculator", description: "Dog age." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Name Generator" keywords="name generator, random name, baby name generator, character name, first name generator, last name generator" breadcrumbs={[{ name: "Name Generator", url: "/name-generator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Random Name Generator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Generate random first and last names for any purpose.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Gender</label><select id="ng-gen" class="w-full px-4 py-3 border border-border rounded-xl text-lg"><option value="any">Any</option><option value="male">Male</option><option value="female">Female</option></select></div>
          <div><label class="block text-xs font-medium text-text mb-1">Count</label><input type="number" id="ng-count" class="w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="5" min="1" max="20" step="1"></div>
        </div>
        <button id="ng-btn" class="w-full py-4 bg-primary text-white rounded-xl font-bold text-lg hover:bg-primary/90 transition">Generate Names</button>
        <div class="p-6 bg-surface-alt rounded-2xl" id="ng-results">
          <div class="text-center text-text-muted">Click Generate to create names</div>
        </div>
      </div>
      <ShareButton calculatorId="name-generator" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    const maleFirst = ['James','John','Robert','Michael','David','William','Richard','Joseph','Thomas','Christopher','Daniel','Matthew','Anthony','Mark','Steven','Andrew','Joshua','Kenneth','Kevin','Brian','George','Edward','Ronald','Timothy','Jason','Jeffrey','Ryan','Jacob','Nicholas','Eric','Benjamin','Samuel','Nathan','Alexander','Patrick','Henry','Ethan','Oliver','Lucas','Mason','Logan','Liam','Noah','Owen','Leo'];
    const femaleFirst = ['Mary','Patricia','Jennifer','Linda','Barbara','Elizabeth','Susan','Jessica','Sarah','Karen','Lisa','Nancy','Betty','Margaret','Sandra','Ashley','Dorothy','Kimberly','Emily','Donna','Michelle','Carol','Amanda','Melissa','Deborah','Stephanie','Rebecca','Sharon','Laura','Cynthia','Emma','Olivia','Ava','Isabella','Sophia','Mia','Charlotte','Amelia','Harper','Evelyn','Luna','Ella','Aria','Scarlett','Grace'];
    const lastNames = ['Smith','Johnson','Williams','Brown','Jones','Garcia','Miller','Davis','Rodriguez','Martinez','Hernandez','Lopez','Gonzalez','Wilson','Anderson','Thomas','Taylor','Moore','Jackson','Martin','Lee','Perez','Thompson','White','Harris','Sanchez','Clark','Ramirez','Lewis','Robinson','Walker','Young','Allen','King','Wright','Scott','Torres','Nguyen','Hill','Flores','Green','Adams','Nelson','Baker','Hall','Rivera','Campbell','Mitchell','Carter'];
    function pick(arr: string[]): string { return arr[Math.floor(Math.random() * arr.length)]; }
    function genNames() {
      const gen = (document.getElementById('ng-gen') as HTMLSelectElement).value;
      const count = parseInt((document.getElementById('ng-count') as HTMLInputElement).value) || 5;
      const names: string[] = [];
      for (let i = 0; i < count; i++) {
        let first: string;
        if (gen === 'male') first = pick(maleFirst);
        else if (gen === 'female') first = pick(femaleFirst);
        else first = Math.random() > 0.5 ? pick(maleFirst) : pick(femaleFirst);
        names.push(`${first} ${pick(lastNames)}`);
      }
      document.getElementById('ng-results')!.innerHTML = names.map((n, i) =>
        `<div class="flex items-center gap-3 py-2 ${i > 0 ? 'border-t border-border/30' : ''}"><span class="text-text-muted text-sm w-6">${i + 1}.</span><span class="text-lg font-bold">${n}</span></div>`
      ).join('');
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.getElementById('ng-btn')!.addEventListener('click', genNames); genNames(); }, 50);
  </script>
</CalculatorLayout>
