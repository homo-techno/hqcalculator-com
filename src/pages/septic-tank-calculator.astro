---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Septic Tank Calculator - Size, Drain Field & Pump Frequency";
const description = "Calculate septic tank size based on bedrooms and water usage. Get minimum tank gallons, drain field area, and recommended pump-out frequency.";

const relatedCalcs = [
  { name: "Drainage Calculator", url: "/drainage-calculator", description: "Drainage pipe sizing." },
  { name: "Excavation Calculator", url: "/excavation-calculator", description: "Dig volume." },
  { name: "Concrete Calculator", url: "/concrete-calculator", description: "Concrete volume." },
  { name: "Foundation Calculator", url: "/foundation-calculator", description: "Foundation concrete." },
  { name: "Pool Cost Calculator", url: "/pool-cost-calculator", description: "Pool sizing." },
  { name: "Patio Calculator", url: "/patio-calculator", description: "Patio material." },
];
---

<CalculatorLayout
  title={title}
  description={description}
  calculatorName="Septic Tank Calculator"
  keywords="septic tank calculator, septic tank size, drain field, leach field, septic pump, septic system, perc test"
  breadcrumbs={[{ name: "Septic Tank Calculator", url: "/septic-tank-calculator" }]}
>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Septic Tank Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Determine septic tank size, drain field requirements, and pump-out schedule.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div>
          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Number of Bedrooms</label>
            <select id="sp-bedrooms" class="w-full px-3 py-3 border border-border rounded-xl text-lg">
              <option value="1">1 Bedroom</option>
              <option value="2">2 Bedrooms</option>
              <option value="3" selected>3 Bedrooms</option>
              <option value="4">4 Bedrooms</option>
              <option value="5">5 Bedrooms</option>
              <option value="6">6 Bedrooms</option>
            </select>
          </div>

          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Daily Water Usage (gallons/person)</label>
            <input type="number" id="sp-usage" class="w-full px-3 py-3 border border-border rounded-xl text-lg" value="75" min="30" max="150" step="5">
            <div class="text-xs text-text-muted mt-1">Average: 60-75 gal/person/day</div>
          </div>

          <div class="mb-5">
            <label class="block text-xs font-medium text-text mb-1">Soil Type (Perc Rate)</label>
            <select id="sp-soil" class="w-full px-3 py-3 border border-border rounded-xl text-lg">
              <option value="fast">Sand / Gravel (fast perc, 1-5 min/in)</option>
              <option value="medium" selected>Loam / Sandy Loam (medium, 6-30 min/in)</option>
              <option value="slow">Clay / Silt (slow perc, 31-60 min/in)</option>
            </select>
          </div>

          <div class="p-4 bg-surface-alt rounded-xl">
            <div class="grid grid-cols-2 gap-3">
              <div>
                <label class="block text-xs font-medium text-text mb-1">Occupants</label>
                <input type="number" id="sp-people" class="w-full px-3 py-2 border border-border rounded-lg" value="4" min="1" max="20" step="1">
              </div>
              <div>
                <label class="block text-xs font-medium text-text mb-1">Garbage Disposal?</label>
                <select id="sp-disposal" class="w-full px-3 py-2 border border-border rounded-lg">
                  <option value="no" selected>No</option>
                  <option value="yes">Yes (adds 50%)</option>
                </select>
              </div>
            </div>
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Minimum Tank Size</div>
            <div class="text-5xl font-extrabold font-mono" id="sp-tanksize">0</div>
            <div class="text-sm text-blue-200 mt-1">gallons</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Daily Flow</div>
              <div class="text-xl font-bold" id="sp-dailyflow">0 gal</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Drain Field Area</div>
              <div class="text-xl font-bold" id="sp-drainfield">0 sq ft</div>
            </div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Pump-Out Frequency</div>
              <div class="text-xl font-bold" id="sp-pumpfreq">0 years</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Trench Length</div>
              <div class="text-xl font-bold" id="sp-trenchlength">0 ft</div>
              <div class="text-xs text-text-muted">3 ft wide trenches</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Recommended Tank</div>
            <div class="text-xl font-bold" id="sp-recommend">--</div>
          </div>
        </div>
      </div>

      <ShareButton calculatorId="septic-tank" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">How to Size a Septic Tank</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p><strong>Min tank size:</strong> Based on bedrooms per local code (usually 1000 gal for 3 BR)</p>
        <p><strong>Daily flow:</strong> Occupants x Gallons per person per day</p>
        <p><strong>Drain field:</strong> Daily flow / Soil application rate (gal/sq ft/day)</p>
      </div>

      <h3 class="text-xl font-semibold text-text mt-8">Standard Tank Sizes by Bedroom</h3>
      <ul>
        <li><strong>1-2 bedrooms:</strong> 750-1,000 gallon tank</li>
        <li><strong>3 bedrooms:</strong> 1,000 gallon tank (most common)</li>
        <li><strong>4 bedrooms:</strong> 1,250 gallon tank</li>
        <li><strong>5-6 bedrooms:</strong> 1,500+ gallon tank</li>
      </ul>

      <h3 class="text-xl font-semibold text-text mt-8">Maintenance Tips</h3>
      <ul>
        <li>Pump tank every 3-5 years for a family of 4</li>
        <li>Do not drive or park over the drain field</li>
        <li>Avoid flushing non-biodegradable items</li>
        <li>Spread laundry loads throughout the week</li>
      </ul>
    </article>

    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    // Min tank size by bedrooms (gallons) per typical code
    const spTankSizes: Record<string, number> = {
      '1': 750, '2': 750, '3': 1000, '4': 1250, '5': 1500, '6': 1750,
    };

    // Soil application rate (gal/sq ft/day)
    const spSoilRate: Record<string, number> = {
      fast: 1.2,
      medium: 0.5,
      slow: 0.2,
    };

    function calcSeptic() {
      const bedrooms = (document.getElementById('sp-bedrooms') as HTMLSelectElement).value;
      const usage = parseFloat((document.getElementById('sp-usage') as HTMLInputElement).value) || 75;
      const soil = (document.getElementById('sp-soil') as HTMLSelectElement).value;
      const people = parseInt((document.getElementById('sp-people') as HTMLInputElement).value) || 4;
      const hasDisposal = (document.getElementById('sp-disposal') as HTMLSelectElement).value === 'yes';

      // Daily flow
      let dailyFlow = people * usage;
      if (hasDisposal) dailyFlow *= 1.5;

      // Min tank size from code
      const codeTankSize = spTankSizes[bedrooms] || 1000;

      // Tank should hold at least 2 days of flow or code minimum
      const flowBasedSize = dailyFlow * 2;
      const minTankSize = Math.max(codeTankSize, flowBasedSize);

      // Round up to standard sizes
      let tankSize = 750;
      if (minTankSize > 750) tankSize = 1000;
      if (minTankSize > 1000) tankSize = 1250;
      if (minTankSize > 1250) tankSize = 1500;
      if (minTankSize > 1500) tankSize = 2000;
      if (minTankSize > 2000) tankSize = 2500;

      // Drain field area
      const soilRate = spSoilRate[soil] || 0.5;
      const drainFieldArea = Math.ceil(dailyFlow / soilRate);

      // Trench length (3 ft wide trenches)
      const trenchLength = Math.ceil(drainFieldArea / 3);

      // Pump frequency (years) - based on tank size and occupants
      // Rule of thumb: 1000 gal tank, 4 people = pump every 2.6 years
      // Sludge accumulation ~60 gal/person/year
      const sludgePerYear = people * 60 * (hasDisposal ? 1.5 : 1);
      const pumpCapacity = tankSize * 0.33; // pump when 1/3 full of sludge
      const pumpYears = pumpCapacity / sludgePerYear;

      // Recommend
      let recommend = tankSize + ' gallon concrete tank';
      if (tankSize >= 1500) recommend = tankSize + ' gallon (2-compartment)';

      document.getElementById('sp-tanksize')!.textContent = tankSize.toLocaleString();
      document.getElementById('sp-dailyflow')!.textContent = Math.round(dailyFlow) + ' gal';
      document.getElementById('sp-drainfield')!.textContent = drainFieldArea.toLocaleString() + ' sq ft';
      document.getElementById('sp-pumpfreq')!.textContent = 'Every ' + pumpYears.toFixed(1) + ' yr';
      document.getElementById('sp-trenchlength')!.textContent = trenchLength + ' ft';
      document.getElementById('sp-recommend')!.textContent = recommend;

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      document.querySelectorAll('#sp-usage, #sp-people').forEach(el => {
        el.addEventListener('input', calcSeptic);
        el.addEventListener('change', calcSeptic);
      });
      document.querySelectorAll('#sp-bedrooms, #sp-soil, #sp-disposal').forEach(el => {
        el.addEventListener('input', calcSeptic);
        el.addEventListener('change', calcSeptic);
      });
      calcSeptic();
    }, 50);
  </script>
</CalculatorLayout>
