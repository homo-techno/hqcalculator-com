---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Yarn Calculator - Yardage & Weight";
const description = "Calculate yarn yardage needed for knitting or crochet projects, convert between yarn weights, and get needle size recommendations.";
const relatedCalcs = [
  { name: "Fabric Calculator", url: "/fabric-calculator", description: "Fabric yardage." },
  { name: "Length Converter", url: "/length-converter", description: "Length conversion." },
  { name: "Weight Converter", url: "/weight-converter", description: "Weight conversion." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Area Calculator", url: "/area-calculator", description: "Area calculations." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentages." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Yarn Calculator" keywords="yarn calculator, yardage calculator, knitting, crochet, yarn weight, needle size, skeins needed" breadcrumbs={[{ name: "Yarn Calculator", url: "/yarn-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Yarn Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate yarn yardage, skeins needed, and get needle size recommendations for your project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Project Type</label>
          <select id="yn-proj" class="yn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="scarf" selected>Scarf</option>
            <option value="hat">Hat</option>
            <option value="sweater">Sweater (Adult)</option>
            <option value="blanket">Blanket (Throw)</option>
            <option value="socks">Socks (Pair)</option>
            <option value="shawl">Shawl</option>
            <option value="custom">Custom Dimensions</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Width (inches)</label><input type="number" id="yn-w" class="yn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Length (inches)</label><input type="number" id="yn-l" class="yn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="60" min="1" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Yarn Weight</label>
            <select id="yn-wt" class="yn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="0">Lace (#0)</option>
              <option value="1">Fingering (#1)</option>
              <option value="2">Sport (#2)</option>
              <option value="3">DK (#3)</option>
              <option value="4" selected>Worsted (#4)</option>
              <option value="5">Bulky (#5)</option>
              <option value="6">Super Bulky (#6)</option>
            </select>
          </div>
          <div><label class="block text-xs font-medium text-text mb-1">Yards per Skein</label><input type="number" id="yn-yps" class="yn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="220" min="10" step="10"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Price per Skein ($)</label><input type="number" id="yn-price" class="yn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="0.5"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Gauge (sts per 4 in)</label><input type="number" id="yn-gauge" class="yn-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="18" min="4" max="40" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Yardage Needed</div>
          <div class="text-4xl font-extrabold font-mono" id="yn-result">0 yards</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Skeins</div><div class="text-xl font-bold font-mono" id="yn-skeins">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Needle Size</div><div class="text-xl font-bold font-mono" id="yn-needle">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Cost</div><div class="text-xl font-bold font-mono" id="yn-cost">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Meters</div><div class="text-xl font-bold font-mono" id="yn-meters">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weight (oz)</div><div class="text-xl font-bold font-mono" id="yn-weight">0</div></div>
        </div>
      </div>
      <ShareButton calculatorId="yarn" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcYN() {
      const proj = (document.getElementById('yn-proj') as HTMLSelectElement).value;
      const w = parseFloat((document.getElementById('yn-w') as HTMLInputElement).value) || 8;
      const l = parseFloat((document.getElementById('yn-l') as HTMLInputElement).value) || 60;
      const wt = parseInt((document.getElementById('yn-wt') as HTMLSelectElement).value);
      const yps = parseFloat((document.getElementById('yn-yps') as HTMLInputElement).value) || 220;
      const price = parseFloat((document.getElementById('yn-price') as HTMLInputElement).value) || 0;
      const gauge = parseFloat((document.getElementById('yn-gauge') as HTMLInputElement).value) || 18;

      // Yards per sq inch based on yarn weight (approximate)
      const yardPerSqIn: Record<number, number> = { 0: 4.5, 1: 3.5, 2: 2.8, 3: 2.3, 4: 1.8, 5: 1.2, 6: 0.8 };
      const needleSizes: Record<number, string> = { 0: 'US 0-1 (2mm)', 1: 'US 1-3 (2.25-3.25mm)', 2: 'US 3-5 (3.25-3.75mm)', 3: 'US 5-7 (3.75-4.5mm)', 4: 'US 7-9 (4.5-5.5mm)', 5: 'US 9-11 (5.5-8mm)', 6: 'US 11-17 (8-12mm)' };

      // Project presets (width x length in inches) or use custom
      let pw = w, pl = l;
      if (proj === 'scarf') { pw = 8; pl = 60; }
      else if (proj === 'hat') { pw = 22; pl = 10; }
      else if (proj === 'sweater') { pw = 40; pl = 54; }
      else if (proj === 'blanket') { pw = 50; pl = 60; }
      else if (proj === 'socks') { pw = 8; pl = 20; }
      else if (proj === 'shawl') { pw = 60; pl = 30; }

      if (proj !== 'custom') {
        (document.getElementById('yn-w') as HTMLInputElement).value = pw.toString();
        (document.getElementById('yn-l') as HTMLInputElement).value = pl.toString();
      } else {
        pw = w;
        pl = l;
      }

      const sqInches = pw * pl;
      const factor = yardPerSqIn[wt] || 1.8;
      const totalYards = sqInches * factor * 1.1; // 10% buffer
      const skeins = Math.ceil(totalYards / yps);
      const cost = skeins * price;
      const meters = totalYards * 0.9144;

      // Approximate weight: worsted ~1750 yds/lb, scale by weight
      const ydsPerLb: Record<number, number> = { 0: 3500, 1: 2800, 2: 2200, 3: 1800, 4: 1200, 5: 700, 6: 400 };
      const weightOz = (totalYards / (ydsPerLb[wt] || 1200)) * 16;

      document.getElementById('yn-result')!.textContent = Math.round(totalYards) + ' yards';
      document.getElementById('yn-skeins')!.textContent = skeins.toString();
      document.getElementById('yn-needle')!.textContent = needleSizes[wt] || '--';
      document.getElementById('yn-cost')!.textContent = '$' + cost.toFixed(2);
      document.getElementById('yn-meters')!.textContent = Math.round(meters).toString();
      document.getElementById('yn-weight')!.textContent = weightOz.toFixed(1);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.yn-in').forEach(el => { el.addEventListener('input', calcYN); el.addEventListener('change', calcYN); });
      calcYN();
    }, 50);
  </script>
</CalculatorLayout>
