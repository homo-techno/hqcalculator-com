---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Return Rate Calculator";
const description = "Calculate product return rate percentage, cost per return, reverse logistics expense, and net revenue impact for e-commerce and retail operations.";
const relatedCalcs = [
  { name: "Profit Margin", url: "/profit-margin-calculator", description: "Calculate profit margins." },
  { name: "Break Even", url: "/break-even-calculator", description: "Find break-even point." },
  { name: "ROI", url: "/roi-calculator", description: "Return on investment." },
  { name: "Inventory Turnover", url: "/inventory-turnover-calculator", description: "Inventory efficiency." },
  { name: "Cost Per Acquisition", url: "/cost-per-acquisition-calculator", description: "CPA calculations." },
  { name: "Food Cost", url: "/food-cost-calculator", description: "Food cost analysis." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Return Rate Calculator" keywords="return rate, cost per return, reverse logistics, product returns, refund rate, net revenue" breadcrumbs={[{ name: "Return Rate", url: "/return-rate-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Return Rate Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Analyze return rates, cost per return, reverse logistics expenses, and net revenue impact.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div><label class="block text-xs font-medium text-text mb-1">Total Orders</label><input type="number" id="rr-orders" class="rr-in w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" min="1" step="1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Returned Orders</label><input type="number" id="rr-returns" class="rr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0" step="1"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Average Order Value ($)</label><input type="number" id="rr-aov" class="rr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0" step="0.01"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Return Shipping Cost per Item ($)</label><input type="number" id="rr-shipcost" class="rr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0" step="0.5"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Processing Cost per Return ($)</label><input type="number" id="rr-proccost" class="rr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0" step="0.5"></div>
        <div><label class="block text-xs font-medium text-text mb-1">Restocking Rate (%)</label><input type="number" id="rr-restock" class="rr-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0" max="100" step="1"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Return Rate</div>
          <div class="text-5xl font-extrabold font-mono" id="rr-result">--</div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost per Return</div><div class="text-xl font-bold font-mono" id="rr-costper">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Return Cost</div><div class="text-xl font-bold font-mono" id="rr-totalcost">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Revenue Lost</div><div class="text-xl font-bold font-mono" id="rr-revlost">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Net Revenue Impact</div><div class="text-xl font-bold font-mono" id="rr-netimpact">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="return-rate" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcRR() {
      const orders = parseFloat((document.getElementById('rr-orders') as HTMLInputElement).value) || 0;
      const returns = parseFloat((document.getElementById('rr-returns') as HTMLInputElement).value) || 0;
      const aov = parseFloat((document.getElementById('rr-aov') as HTMLInputElement).value) || 0;
      const shipCost = parseFloat((document.getElementById('rr-shipcost') as HTMLInputElement).value) || 0;
      const procCost = parseFloat((document.getElementById('rr-proccost') as HTMLInputElement).value) || 0;
      const restockRate = parseFloat((document.getElementById('rr-restock') as HTMLInputElement).value) || 0;

      const returnRate = orders > 0 ? (returns / orders) * 100 : 0;
      const costPerReturn = shipCost + procCost;
      const totalReturnCost = returns * costPerReturn;

      const unrestockable = returns * (1 - restockRate / 100);
      const revenueLost = unrestockable * aov;
      const grossRevenue = orders * aov;
      const netImpact = totalReturnCost + revenueLost;
      const netImpactPct = grossRevenue > 0 ? (netImpact / grossRevenue) * 100 : 0;

      const fmt = (v: number) => '$' + v.toLocaleString(undefined, { minimumFractionDigits: 2, maximumFractionDigits: 2 });

      document.getElementById('rr-result')!.textContent = returnRate.toFixed(1) + '%';
      document.getElementById('rr-costper')!.textContent = fmt(costPerReturn);
      document.getElementById('rr-totalcost')!.textContent = fmt(totalReturnCost);
      document.getElementById('rr-revlost')!.textContent = fmt(revenueLost);
      document.getElementById('rr-netimpact')!.textContent = '-' + netImpactPct.toFixed(1) + '% rev';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('rr-orders') as HTMLInputElement).value = '5000';
      (document.getElementById('rr-returns') as HTMLInputElement).value = '400';
      (document.getElementById('rr-aov') as HTMLInputElement).value = '65';
      (document.getElementById('rr-shipcost') as HTMLInputElement).value = '8.50';
      (document.getElementById('rr-proccost') as HTMLInputElement).value = '5';
      (document.getElementById('rr-restock') as HTMLInputElement).value = '70';
      document.querySelectorAll('.rr-in').forEach(el => { el.addEventListener('input', calcRR); el.addEventListener('change', calcRR); });
      calcRR();
    }, 50);
  </script>
</CalculatorLayout>
