---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Macrame Calculator - Cord Length & Materials";
const description = "Calculate cord length from finished project length and pattern type, number of cords, and total material needed for macrame projects.";
const relatedCalcs = [
  { name: "Fabric Calculator", url: "/fabric-calculator", description: "Fabric yardage." },
  { name: "Length Converter", url: "/length-converter", description: "Length conversion." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Unit Price", url: "/unit-price-calculator", description: "Unit pricing." },
  { name: "Percentage Calculator", url: "/percentage-calculator", description: "Percentages." },
  { name: "Area Calculator", url: "/area-calculator", description: "Area calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Macrame Calculator" keywords="macrame calculator, cord length, macrame pattern, macrame cord, knot calculator, macrame materials" breadcrumbs={[{ name: "Macrame", url: "/macrame-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Macrame Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate cord lengths, number of cords, and total material for your macrame project.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Project Type</label>
          <select id="mc-proj" class="mc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
            <option value="wallhang" selected>Wall Hanging</option>
            <option value="planthang">Plant Hanger</option>
            <option value="curtain">Curtain</option>
            <option value="bag">Bag / Purse</option>
            <option value="keychain">Keychain</option>
            <option value="bracelet">Bracelet</option>
          </select>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Finished Length (inches)</label><input type="number" id="mc-len" class="mc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="36" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Finished Width (inches)</label><input type="number" id="mc-wid" class="mc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="1" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Knot Density</label>
            <select id="mc-dens" class="mc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="light">Light (Simple Knots)</option>
              <option value="medium" selected>Medium (Square Knots)</option>
              <option value="dense">Dense (Complex Pattern)</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Cord Thickness (mm)</label>
            <select id="mc-thk" class="mc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold">
              <option value="2">2mm</option>
              <option value="3" selected>3mm</option>
              <option value="4">4mm</option>
              <option value="5">5mm</option>
              <option value="6">6mm</option>
            </select>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Cord Price ($/yard)</label><input type="number" id="mc-price" class="mc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.15" min="0" step="0.01"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Fringe Length (inches)</label><input type="number" id="mc-fringe" class="mc-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6" min="0" step="1"></div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Cord Needed</div>
          <div class="text-4xl font-extrabold font-mono" id="mc-result">0 yards</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Number of Cords</div><div class="text-xl font-bold font-mono" id="mc-count">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Each Cord Length</div><div class="text-xl font-bold font-mono" id="mc-each">0 ft</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Cost</div><div class="text-xl font-bold font-mono" id="mc-cost">$0</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Total Feet</div><div class="text-xl font-bold font-mono" id="mc-feet">0 ft</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Weight (approx)</div><div class="text-xl font-bold font-mono" id="mc-weight">0 oz</div></div>
        </div>
      </div>
      <ShareButton calculatorId="macrame" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcMC() {
      const proj = (document.getElementById('mc-proj') as HTMLSelectElement).value;
      const len = parseFloat((document.getElementById('mc-len') as HTMLInputElement).value) || 36;
      const wid = parseFloat((document.getElementById('mc-wid') as HTMLInputElement).value) || 12;
      const dens = (document.getElementById('mc-dens') as HTMLSelectElement).value;
      const thk = parseFloat((document.getElementById('mc-thk') as HTMLSelectElement).value) || 3;
      const price = parseFloat((document.getElementById('mc-price') as HTMLInputElement).value) || 0;
      const fringe = parseFloat((document.getElementById('mc-fringe') as HTMLInputElement).value) || 0;

      // Cord multiplier: how many times the finished length each cord needs to be
      const densMultiplier: Record<string, number> = { light: 3.5, medium: 5, dense: 7 };
      const multiplier = densMultiplier[dens] || 5;

      // Number of cords: based on width and cord thickness
      // Cords are typically paired, so we need pairs across the width
      const cordSpacing = thk * 2; // mm spacing between cord pairs
      const widthMm = wid * 25.4;
      const cordPairs = Math.max(2, Math.ceil(widthMm / (cordSpacing * 2)));
      const numCords = cordPairs * 2; // each pair = 2 cords

      // Each cord length = finished length * multiplier + fringe
      const eachCordIn = len * multiplier + fringe;
      const eachCordFt = eachCordIn / 12;

      // Total cord
      const totalFt = eachCordFt * numCords;
      const totalYd = totalFt / 3;
      const totalCost = totalYd * price;

      // Weight estimate: 3mm cotton cord ~0.5 oz per yard
      const ozPerYard = (thk / 3) * 0.5;
      const totalOz = totalYd * ozPerYard;

      document.getElementById('mc-result')!.textContent = totalYd.toFixed(0) + ' yards';
      document.getElementById('mc-count')!.textContent = numCords.toString();
      document.getElementById('mc-each')!.textContent = eachCordFt.toFixed(1) + ' ft';
      document.getElementById('mc-cost')!.textContent = '$' + totalCost.toFixed(2);
      document.getElementById('mc-feet')!.textContent = totalFt.toFixed(0) + ' ft';
      document.getElementById('mc-weight')!.textContent = totalOz.toFixed(1) + ' oz';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.mc-in').forEach(el => { el.addEventListener('input', calcMC); el.addEventListener('change', calcMC); });
      calcMC();
    }, 50);
  </script>
</CalculatorLayout>
