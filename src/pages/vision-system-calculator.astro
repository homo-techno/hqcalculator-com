---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Vision System Calculator - FOV, Resolution & Pixel Density";
const description = "Calculate machine vision field of view, pixel resolution, and pixel density for inspection applications. Size cameras and lenses for your vision system.";
const relatedCalcs = [
  { name: "Sensor Range Calculator", url: "/sensor-range-calculator", description: "Calculate proximity sensor detection range." },
  { name: "Robot Speed Calculator", url: "/robot-speed-calculator", description: "Optimize robot cycle time with vision processing." },
  { name: "Conveyor Speed Calculator", url: "/conveyor-speed-calculator", description: "Match conveyor speed to vision inspection rate." },
  { name: "Safety Distance Calculator", url: "/safety-distance-calculator", description: "Calculate safety distances for machine guarding." },
  { name: "Encoder Resolution Calculator", url: "/encoder-resolution-calculator", description: "Calculate encoder resolution for positioning." },
  { name: "Screen Size Calculator", url: "/screen-size-calculator", description: "Calculate screen dimensions and resolution." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Vision System Calculator" keywords="machine vision calculator, FOV calculator, pixel resolution, vision inspection, camera selection, lens calculator, pixel density" breadcrumbs={[{ name: "Vision System Calculator", url: "/vision-system-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Vision System Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate machine vision field of view, pixel resolution, working distance, and required focal length for industrial inspection systems.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-6">
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Sensor Resolution (H pixels)</label>
          <input type="number" id="vs2-h-pixels" class="vs2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2048" min="320" step="1">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Sensor Resolution (V pixels)</label>
          <input type="number" id="vs2-v-pixels" class="vs2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="1536" min="240" step="1">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Sensor Width (mm)</label>
          <input type="number" id="vs2-sensor-w" class="vs2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8.8" min="1" step="0.1">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Sensor Height (mm)</label>
          <input type="number" id="vs2-sensor-h" class="vs2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="6.6" min="1" step="0.1">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Required FOV Width (mm)</label>
          <input type="number" id="vs2-fov-w" class="vs2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="200" min="1" step="1">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Working Distance (mm)</label>
          <input type="number" id="vs2-wd" class="vs2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="300" min="10" step="10">
        </div>
        <div>
          <label class="block text-sm font-semibold text-text mb-2">Smallest Feature to Detect (mm)</label>
          <input type="number" id="vs2-feature" class="vs2-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0.5" min="0.01" step="0.01">
        </div>

        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm font-medium opacity-80 mb-1">Required Focal Length</div>
          <div id="vs2-result-focal" class="text-3xl sm:text-4xl font-extrabold">--</div>
          <div class="text-sm opacity-80 mt-1">mm</div>
        </div>

        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Pixel Size (on object)</div>
            <div id="vs2-pixel-size" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">mm/pixel</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">FOV Height</div>
            <div id="vs2-fov-h" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">mm</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Pixels on Feature</div>
            <div id="vs2-pix-feature" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">pixels</div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-secondary mb-1">Magnification</div>
            <div id="vs2-mag" class="text-lg font-bold text-text">--</div>
            <div class="text-xs text-text-secondary">x</div>
          </div>
        </div>

        <ShareButton />
        <FeedbackWidget />
      </div>
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    function calcVS2() {
      const hPixels = parseFloat((document.getElementById('vs2-h-pixels') as HTMLInputElement).value) || 2048;
      const vPixels = parseFloat((document.getElementById('vs2-v-pixels') as HTMLInputElement).value) || 1536;
      const sensorW = parseFloat((document.getElementById('vs2-sensor-w') as HTMLInputElement).value) || 8.8;
      const sensorH = parseFloat((document.getElementById('vs2-sensor-h') as HTMLInputElement).value) || 6.6;
      const fovW = parseFloat((document.getElementById('vs2-fov-w') as HTMLInputElement).value) || 200;
      const wd = parseFloat((document.getElementById('vs2-wd') as HTMLInputElement).value) || 300;
      const feature = parseFloat((document.getElementById('vs2-feature') as HTMLInputElement).value) || 0.5;

      const magnification = sensorW / fovW;
      const focalLength = (wd * magnification) / (1 + magnification);
      const pixelSizeObj = fovW / hPixels;
      const fovH = (fovW * vPixels) / hPixels;
      const pixOnFeature = feature / pixelSizeObj;

      document.getElementById('vs2-result-focal')!.textContent = focalLength.toFixed(1);
      document.getElementById('vs2-pixel-size')!.textContent = pixelSizeObj.toFixed(4);
      document.getElementById('vs2-fov-h')!.textContent = fovH.toFixed(1);
      document.getElementById('vs2-pix-feature')!.textContent = pixOnFeature.toFixed(1);
      document.getElementById('vs2-mag')!.textContent = magnification.toFixed(4);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.vs2-in').forEach(el => { el.addEventListener('input', calcVS2); el.addEventListener('change', calcVS2); });
      calcVS2();
    }, 50);
  </script>
</CalculatorLayout>
