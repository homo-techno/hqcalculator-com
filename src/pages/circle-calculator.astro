---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Circle Calculator - Radius, Diameter, Area, Circumference";
const description = "Calculate circle properties from any known value: radius, diameter, circumference, or area.";
const relatedCalcs = [
  { name: "Area Calculator", url: "/area-calculator", description: "2D areas." },
  { name: "Volume Calculator", url: "/volume-calculator", description: "3D volumes." },
  { name: "Triangle Calculator", url: "/triangle-calculator", description: "Triangles." },
  { name: "Square Footage", url: "/square-footage-calculator", description: "Square footage." },
  { name: "Pythagorean Theorem", url: "/pythagorean-theorem-calculator", description: "Pythagorean." },
  { name: "Length Converter", url: "/length-converter", description: "Length units." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Circle Calculator" keywords="circle calculator, circle area, circumference, radius, diameter, pi" breadcrumbs={[{ name: "Circle Calculator", url: "/circle-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Circle Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Enter any one value to calculate all circle properties.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Known Value</label>
            <select id="ci-mode" class="w-full px-4 py-3 border border-border rounded-xl text-lg">
              <option value="radius" selected>Radius</option>
              <option value="diameter">Diameter</option>
              <option value="area">Area</option>
              <option value="circumference">Circumference</option>
            </select>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Value</label>
            <input type="number" id="ci-val" class="w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="5" min="0" step="0.1">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-5 bg-primary rounded-2xl text-white text-center">
            <div class="text-xs uppercase tracking-wide mb-1 opacity-80">Area</div>
            <div class="text-2xl font-extrabold" id="ci-area">0</div>
          </div>
          <div class="p-5 bg-secondary rounded-2xl text-white text-center">
            <div class="text-xs uppercase tracking-wide mb-1 opacity-80">Circumference</div>
            <div class="text-2xl font-extrabold" id="ci-circ">0</div>
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Radius</div><div class="text-xl font-bold" id="ci-radius">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Diameter</div><div class="text-xl font-bold" id="ci-diameter">0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-2">Formulas</h3>
          <div class="font-mono text-sm space-y-1">
            <div>A = πr² = π × <span id="ci-r-val">0</span>² = <span id="ci-a-val">0</span></div>
            <div>C = 2πr = 2π × <span id="ci-r-val2">0</span> = <span id="ci-c-val">0</span></div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="circle" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Circle Formulas</h2>
      <div class="bg-surface-alt rounded-xl p-4 my-4 font-mono text-sm space-y-1">
        <p>Area = πr²</p><p>Circumference = 2πr = πd</p><p>r = d/2 = C/(2π) = √(A/π)</p>
      </div>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcCircle() {
      const mode = (document.getElementById('ci-mode') as HTMLSelectElement).value;
      const val = parseFloat((document.getElementById('ci-val') as HTMLInputElement).value) || 0;
      let r: number;
      if (mode === 'radius') r = val;
      else if (mode === 'diameter') r = val / 2;
      else if (mode === 'area') r = Math.sqrt(val / Math.PI);
      else r = val / (2 * Math.PI);
      const area = Math.PI * r * r;
      const circ = 2 * Math.PI * r;
      document.getElementById('ci-area')!.textContent = area.toFixed(4);
      document.getElementById('ci-circ')!.textContent = circ.toFixed(4);
      document.getElementById('ci-radius')!.textContent = r.toFixed(4);
      document.getElementById('ci-diameter')!.textContent = (r * 2).toFixed(4);
      document.getElementById('ci-r-val')!.textContent = r.toFixed(2);
      document.getElementById('ci-r-val2')!.textContent = r.toFixed(2);
      document.getElementById('ci-a-val')!.textContent = area.toFixed(4);
      document.getElementById('ci-c-val')!.textContent = circ.toFixed(4);
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => { document.getElementById('ci-val')!.addEventListener('input', calcCircle); document.getElementById('ci-mode')!.addEventListener('change', calcCircle); calcCircle(); }, 50);
  </script>
</CalculatorLayout>
