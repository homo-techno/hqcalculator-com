---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Garden Spacing Calculator - Plant Layout & Count";
const description = "Calculate how many plants fit in your garden bed based on dimensions, plant spacing, and row spacing.";
const relatedCalcs = [
  { name: "Seed Calculator", url: "/seed-calculator", description: "Calculate seeds needed for planting." },
  { name: "Compost Calculator", url: "/compost-calculator", description: "Get the right compost ratio." },
  { name: "Fertilizer Calculator", url: "/fertilizer-calculator", description: "Calculate fertilizer needs." },
  { name: "Harvest Date Calculator", url: "/harvest-date-calculator", description: "Predict harvest dates." },
  { name: "Irrigation Calculator", url: "/irrigation-calculator", description: "Plan irrigation schedules." },
  { name: "Greenhouse Calculator", url: "/greenhouse-calculator", description: "Greenhouse heating needs." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Garden Spacing Calculator" keywords="garden spacing, plant spacing calculator, garden layout, plants per bed, row spacing, garden planner" breadcrumbs={[{ name: "Garden Spacing", url: "/garden-spacing-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Garden Spacing Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate how many plants fit in your garden bed with optimal spacing.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Bed Length (ft)</label>
            <input type="number" id="gs-length" class="gs-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="8" min="0" step="0.5">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Bed Width (ft)</label>
            <input type="number" id="gs-width" class="gs-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="4" min="0" step="0.5">
          </div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div>
            <label class="block text-xs font-medium text-text mb-1">Plant Spacing (inches)</label>
            <input type="number" id="gs-plant" class="gs-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="12" min="1" step="1">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Row Spacing (inches)</label>
            <input type="number" id="gs-row" class="gs-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="18" min="1" step="1">
          </div>
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Plants</div>
          <div class="text-5xl font-extrabold font-mono" id="gs-result">0</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Rows</div><div class="text-xl font-bold font-mono" id="gs-rows">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Plants / Row</div><div class="text-xl font-bold font-mono" id="gs-perrow">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Bed Area</div><div class="text-xl font-bold font-mono" id="gs-area">0 ft&sup2;</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Area / Plant</div><div class="text-xl font-bold font-mono" id="gs-perplant">0 in&sup2;</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Layout</div><div class="text-xl font-bold font-mono" id="gs-layout">-</div></div>
        </div>
      </div>
      <ShareButton calculatorId="garden-spacing" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcGS() {
      const length = parseFloat((document.getElementById('gs-length') as HTMLInputElement).value) || 0;
      const width = parseFloat((document.getElementById('gs-width') as HTMLInputElement).value) || 0;
      const plantSpacing = parseFloat((document.getElementById('gs-plant') as HTMLInputElement).value) || 1;
      const rowSpacing = parseFloat((document.getElementById('gs-row') as HTMLInputElement).value) || 1;
      const lengthIn = length * 12;
      const widthIn = width * 12;
      const rows = Math.floor(widthIn / rowSpacing) + 1;
      const plantsPerRow = Math.floor(lengthIn / plantSpacing) + 1;
      const totalPlants = rows * plantsPerRow;
      const bedArea = length * width;
      const areaPerPlant = totalPlants > 0 ? (bedArea * 144) / totalPlants : 0;
      let layout = 'Grid';
      if (plantSpacing === rowSpacing) layout = 'Square Grid';
      else if (rowSpacing > plantSpacing) layout = 'Row Grid';
      else layout = 'Dense Grid';
      document.getElementById('gs-result')!.textContent = totalPlants.toString();
      document.getElementById('gs-rows')!.textContent = rows.toString();
      document.getElementById('gs-perrow')!.textContent = plantsPerRow.toString();
      document.getElementById('gs-area')!.textContent = bedArea.toFixed(1) + ' ft\u00B2';
      document.getElementById('gs-perplant')!.textContent = areaPerPlant.toFixed(0) + ' in\u00B2';
      document.getElementById('gs-layout')!.textContent = layout;
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.gs-in').forEach(el => { el.addEventListener('input', calcGS); el.addEventListener('change', calcGS); });
      calcGS();
    }, 50);
  </script>
</CalculatorLayout>
