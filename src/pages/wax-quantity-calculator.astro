---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Wax Quantity Calculator - Amount Needed by Body Area";
const description = "Calculate the amount of wax needed for different body areas including legs, arms, bikini, face, and underarms with cost estimation.";
const relatedCalcs = [
  { name: "Salon Revenue Calculator", url: "/salon-revenue-calculator", description: "Salon revenue projection." },
  { name: "Nail Salon Pricing Calculator", url: "/nail-salon-pricing-calculator", description: "Nail service pricing." },
  { name: "Beauty Budget Calculator", url: "/beauty-budget-calculator", description: "Beauty spending breakdown." },
  { name: "Eyelash Extension Calculator", url: "/eyelash-extension-calculator", description: "Lash extension selection." },
  { name: "Skin Type Calculator", url: "/skin-type-calculator", description: "Determine your skin type." },
  { name: "Tanning Time Calculator", url: "/tanning-time-calculator", description: "Safe tanning time." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Wax Quantity Calculator" keywords="wax quantity, waxing, body waxing, hard wax, soft wax, bikini wax, leg wax, wax amount" breadcrumbs={[{ name: "Wax Quantity", url: "/wax-quantity-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Wax Quantity Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate how much wax you need for each body area and estimate costs.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div>
          <label class="block text-xs font-medium text-text mb-1">Wax Type</label>
          <select id="wqt-type" class="wqt-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="hard" selected>Hard Wax (stripless)</option>
            <option value="soft">Soft Wax (with strips)</option>
            <option value="sugar">Sugar Wax</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Hair Density</label>
          <select id="wqt-density" class="wqt-in w-full px-4 py-3 border border-border rounded-xl text-lg">
            <option value="0.8">Light / Fine</option>
            <option value="1.0" selected>Medium / Average</option>
            <option value="1.3">Thick / Coarse</option>
          </select>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-2">Select Body Areas</label>
          <div class="space-y-2">
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-fullleg" class="wqt-in" checked><span class="text-sm">Full Legs</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-halfleg" class="wqt-in"><span class="text-sm">Half Legs (lower)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-arms" class="wqt-in"><span class="text-sm">Full Arms</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-underarm" class="wqt-in" checked><span class="text-sm">Underarms</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-bikini" class="wqt-in"><span class="text-sm">Bikini Line</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-brazilian" class="wqt-in"><span class="text-sm">Brazilian</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-face" class="wqt-in"><span class="text-sm">Face (upper lip + chin)</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-brow" class="wqt-in"><span class="text-sm">Eyebrow Shaping</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-back" class="wqt-in"><span class="text-sm">Full Back</span></label>
            <label class="flex items-center gap-2"><input type="checkbox" id="wqt-chest" class="wqt-in"><span class="text-sm">Chest</span></label>
          </div>
        </div>
        <div>
          <label class="block text-xs font-medium text-text mb-1">Wax Cost (per oz / $)</label>
          <input type="number" id="wqt-cost" class="wqt-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="2" min="0.5" max="10" step="0.25">
        </div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Total Wax Needed</div>
          <div class="text-5xl font-extrabold font-mono" id="wqt-total">0 oz</div>
          <div class="text-sm text-blue-200 mt-1">for all selected areas</div>
        </div>
        <div class="grid grid-cols-2 gap-4">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Wax Cost</div><div class="text-xl font-bold" id="wqt-totalcost">$0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Areas Selected</div><div class="text-xl font-bold" id="wqt-areas">0</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Est. Service Time</div><div class="text-xl font-bold" id="wqt-time">0 min</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Monthly (every 4 wk)</div><div class="text-xl font-bold" id="wqt-monthly">$0</div></div>
        </div>
        <div class="p-4 bg-surface-alt rounded-xl">
          <h3 class="font-semibold text-sm text-text mb-3">Area Breakdown</h3>
          <div class="text-sm space-y-1" id="wqt-breakdown"></div>
        </div>
      </div>
      <ShareButton calculatorId="wax-quantity" />
      <FeedbackWidget />
    </div>
    <article class="mt-12 max-w-4xl prose prose-slate mx-auto">
      <h2 class="text-2xl font-bold text-text">Waxing Quantity Guide</h2>
      <p>The amount of wax needed varies by body area, hair density, and wax type. Hard wax is applied thicker and used without strips, requiring more product but being gentler on sensitive areas. Soft wax is spread thinner with strips and covers larger areas efficiently. For best results, hair should be 1/4 to 1/2 inch long. Wax every 4-6 weeks for optimal results. Exfoliate 24-48 hours before waxing to prevent ingrown hairs.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcWQT() {
      const waxType = (document.getElementById('wqt-type') as HTMLSelectElement).value;
      const density = parseFloat((document.getElementById('wqt-density') as HTMLSelectElement).value);
      const costPerOz = parseFloat((document.getElementById('wqt-cost') as HTMLInputElement).value) || 2;

      let typeMultiplier = 1.0;
      if (waxType === 'hard') typeMultiplier = 1.2;
      else if (waxType === 'soft') typeMultiplier = 0.9;
      else typeMultiplier = 1.0;

      const areas: {id:string, name:string, oz:number, minutes:number}[] = [
        {id:'wqt-fullleg', name:'Full Legs', oz:8, minutes:45},
        {id:'wqt-halfleg', name:'Half Legs', oz:4, minutes:25},
        {id:'wqt-arms', name:'Full Arms', oz:4, minutes:25},
        {id:'wqt-underarm', name:'Underarms', oz:1.5, minutes:10},
        {id:'wqt-bikini', name:'Bikini Line', oz:2, minutes:15},
        {id:'wqt-brazilian', name:'Brazilian', oz:4, minutes:30},
        {id:'wqt-face', name:'Face', oz:1, minutes:10},
        {id:'wqt-brow', name:'Eyebrow Shaping', oz:0.5, minutes:10},
        {id:'wqt-back', name:'Full Back', oz:8, minutes:40},
        {id:'wqt-chest', name:'Chest', oz:6, minutes:30},
      ];

      let totalOz = 0;
      let totalTime = 0;
      let areaCount = 0;
      const breakdown: string[] = [];

      areas.forEach(a => {
        if ((document.getElementById(a.id) as HTMLInputElement).checked) {
          const needed = a.oz * typeMultiplier * density;
          totalOz += needed;
          totalTime += a.minutes;
          areaCount++;
          breakdown.push('<div class="flex justify-between"><span>' + a.name + '</span><span class="font-bold">' + needed.toFixed(1) + ' oz (~' + a.minutes + ' min)</span></div>');
        }
      });

      const totalCost = totalOz * costPerOz;
      const monthlyCost = totalCost;

      document.getElementById('wqt-total')!.textContent = totalOz.toFixed(1) + ' oz';
      document.getElementById('wqt-totalcost')!.textContent = '$' + totalCost.toFixed(2);
      document.getElementById('wqt-areas')!.textContent = areaCount.toString();
      document.getElementById('wqt-time')!.textContent = totalTime + ' min';
      document.getElementById('wqt-monthly')!.textContent = '$' + monthlyCost.toFixed(2);
      document.getElementById('wqt-breakdown')!.innerHTML = breakdown.length > 0 ? breakdown.join('') : '<p class="text-text-muted">Select body areas above.</p>';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.wqt-in').forEach(el => { el.addEventListener('input', calcWQT); el.addEventListener('change', calcWQT); });
      calcWQT();
    }, 50);
  </script>
</CalculatorLayout>
