---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Projectile Motion Calculator";
const description = "Calculate range, max height, flight time, and trajectory for projectile motion with launch angle and velocity.";
const relatedCalcs = [
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed." },
  { name: "Acceleration", url: "/acceleration-calculator", description: "Acceleration." },
  { name: "Force Calculator", url: "/force-calculator", description: "Force." },
  { name: "Momentum", url: "/momentum-calculator", description: "Momentum." },
  { name: "Degrees/Radians", url: "/degrees-radians-converter", description: "Degrees." },
  { name: "Unit Circle", url: "/unit-circle-calculator", description: "Unit circle." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Projectile Motion Calculator" keywords="projectile motion calculator, range, max height, flight time, launch angle, trajectory" breadcrumbs={[{ name: "Projectile Motion", url: "/projectile-motion-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Projectile Motion Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Calculate trajectory, range, and max height for projectile motion.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-3 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Initial Velocity (m/s)</label><input type="number" id="pm-v" class="pm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="20" min="0" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Launch Angle (°)</label><input type="number" id="pm-a" class="pm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="45" min="0" max="90" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Initial Height (m)</label><input type="number" id="pm-h" class="pm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="0" min="0" step="0.1"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Gravity (m/s²)</label><input type="number" id="pm-g" class="pm-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" value="9.81" min="0" step="0.01"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Range</div>
          <div class="text-5xl font-extrabold font-mono" id="pm-result">0 m</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Max Height</div><div class="text-xl font-bold font-mono" id="pm-maxh">0 m</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Flight Time</div><div class="text-xl font-bold font-mono" id="pm-time">0 s</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Impact Velocity</div><div class="text-xl font-bold font-mono" id="pm-vi">0 m/s</div></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Vx (horizontal)</div><div class="text-xl font-bold font-mono" id="pm-vx">0 m/s</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Vy (initial vertical)</div><div class="text-xl font-bold font-mono" id="pm-vy">0 m/s</div></div>
        </div>
        <div class="flex flex-wrap gap-2">
          <button class="pm-preset px-3 py-1 rounded-lg bg-surface-alt text-xs font-bold" data-v="10" data-a="30">10m/s 30°</button>
          <button class="pm-preset px-3 py-1 rounded-lg bg-surface-alt text-xs font-bold" data-v="20" data-a="45">20m/s 45°</button>
          <button class="pm-preset px-3 py-1 rounded-lg bg-surface-alt text-xs font-bold" data-v="50" data-a="60">50m/s 60°</button>
          <button class="pm-preset px-3 py-1 rounded-lg bg-surface-alt text-xs font-bold" data-v="100" data-a="45">100m/s 45°</button>
          <button class="pm-preset px-3 py-1 rounded-lg bg-surface-alt text-xs font-bold" data-v="330" data-a="45">Mach 1 45°</button>
        </div>
      </div>
      <ShareButton calculatorId="projectile-motion" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcPM() {
      const v0 = parseFloat((document.getElementById('pm-v') as HTMLInputElement).value) || 0;
      const aDeg = parseFloat((document.getElementById('pm-a') as HTMLInputElement).value) || 45;
      const h0 = parseFloat((document.getElementById('pm-h') as HTMLInputElement).value) || 0;
      const g = parseFloat((document.getElementById('pm-g') as HTMLInputElement).value) || 9.81;
      const aRad = aDeg * Math.PI / 180;
      const vx = v0 * Math.cos(aRad);
      const vy = v0 * Math.sin(aRad);
      const tUp = vy / g;
      const maxH = h0 + (vy * vy) / (2 * g);
      const tTotal = (vy + Math.sqrt(vy * vy + 2 * g * h0)) / g;
      const range = vx * tTotal;
      const vyImpact = vy - g * tTotal;
      const vImpact = Math.sqrt(vx * vx + vyImpact * vyImpact);
      document.getElementById('pm-result')!.textContent = range.toFixed(2) + ' m';
      document.getElementById('pm-maxh')!.textContent = maxH.toFixed(2) + ' m';
      document.getElementById('pm-time')!.textContent = tTotal.toFixed(3) + ' s';
      document.getElementById('pm-vi')!.textContent = vImpact.toFixed(2) + ' m/s';
      document.getElementById('pm-vx')!.textContent = vx.toFixed(2) + ' m/s';
      document.getElementById('pm-vy')!.textContent = vy.toFixed(2) + ' m/s';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      document.querySelectorAll('.pm-in').forEach(el => { el.addEventListener('input', calcPM); el.addEventListener('change', calcPM); });
      document.querySelectorAll('.pm-preset').forEach(b => b.addEventListener('click', () => {
        const btn = b as HTMLButtonElement;
        (document.getElementById('pm-v') as HTMLInputElement).value = btn.dataset.v!;
        (document.getElementById('pm-a') as HTMLInputElement).value = btn.dataset.a!;
        calcPM();
      }));
      calcPM();
    }, 50);
  </script>
</CalculatorLayout>
