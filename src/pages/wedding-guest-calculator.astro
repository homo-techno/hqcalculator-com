---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';

const title = "Wedding Guest Calculator - Attendance & Cost Estimator";
const description = "Estimate wedding attendance based on invite count and RSVP rate. Calculate food, bar costs, and seating tables needed.";

const relatedCalcs = [
  { name: "Wedding Budget", url: "/wedding-budget-calculator", description: "Wedding budget." },
  { name: "Budget Calculator", url: "/budget-calculator", description: "Budget planning." },
  { name: "Tip Calculator", url: "/tip-calculator", description: "Gratuity calc." },
  { name: "Savings Calculator", url: "/savings-calculator", description: "Savings growth." },
  { name: "Loan Calculator", url: "/loan-calculator", description: "Loan payments." },
  { name: "Emergency Fund", url: "/emergency-fund-calculator", description: "Emergency savings." },
];
---

<CalculatorLayout title={title} description={description} calculatorName="Wedding Guest Calculator" keywords="wedding guest calculator, RSVP rate, wedding attendance, meal cost per head, wedding seating, reception cost" breadcrumbs={[{ name: "Wedding Guest", url: "/wedding-guest-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Wedding Guest Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate attendance, catering costs, and seating needs for your wedding reception.</p>

    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        <div class="space-y-4">
          <div>
            <label class="block text-sm font-medium text-text mb-1">Total Guests Invited</label>
            <input type="number" id="wg-invited" class="w-full px-4 py-3 border border-border rounded-xl text-2xl font-bold" value="150" min="0" step="5">
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Expected RSVP Yes Rate (%)</label>
            <div class="relative">
              <input type="number" id="wg-rsvp" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="80" min="0" max="100" step="5">
              <span class="absolute right-4 top-1/2 -translate-y-1/2 text-text-muted">%</span>
            </div>
            <p class="text-xs text-text-muted mt-1">Local weddings: 80-85%, destination: 50-70%</p>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Meal Cost per Person</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="wg-meal" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="85" min="0" step="5">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Bar Cost per Person</label>
            <div class="relative"><span class="absolute left-3 top-1/2 -translate-y-1/2 text-text-muted">$</span>
              <input type="number" id="wg-bar" class="w-full pl-7 pr-3 py-3 border border-border rounded-xl text-lg" value="45" min="0" step="5">
            </div>
          </div>
          <div>
            <label class="block text-xs font-medium text-text mb-1">Guests per Table</label>
            <input type="number" id="wg-per-table" class="w-full px-4 py-3 border border-border rounded-xl text-lg" value="8" min="4" max="12" step="1">
          </div>
        </div>

        <div class="space-y-3">
          <div class="p-6 bg-primary rounded-2xl text-white text-center">
            <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Expected Attendance</div>
            <div class="text-5xl font-extrabold font-mono" id="wg-attendance">0</div>
          </div>
          <div class="grid grid-cols-2 gap-3">
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Total Food Cost</div>
              <div class="text-xl font-bold text-secondary" id="wg-food-total">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Total Bar Cost</div>
              <div class="text-xl font-bold" id="wg-bar-total">$0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Tables Needed</div>
              <div class="text-xl font-bold" id="wg-tables">0</div>
            </div>
            <div class="p-4 bg-surface-alt rounded-xl text-center">
              <div class="text-xs text-text-muted uppercase">Cost per Guest</div>
              <div class="text-xl font-bold" id="wg-per-guest">$0</div>
            </div>
          </div>
          <div class="p-4 bg-surface-alt rounded-xl text-center">
            <div class="text-xs text-text-muted uppercase">Total Catering Budget</div>
            <div class="text-2xl font-bold text-green-600" id="wg-catering-total">$0</div>
          </div>
        </div>
      </div>
      <ShareButton calculatorId="wedding-guest" />
      <FeedbackWidget />
    </div>

    <article class="mt-12 max-w-4xl prose prose-slate">
      <h2 class="text-2xl font-bold text-text">Planning Your Wedding Guest List</h2>
      <p>Typically 15-20% of invited guests will decline. For destination weddings, expect 30-50% declines. Always confirm final headcount with your caterer 1-2 weeks before the event and add a 5% buffer for last-minute changes.</p>
      <h3 class="text-xl font-semibold text-text mt-8">Catering Tips</h3>
      <p>The per-person cost for food and beverages is the largest variable expense. An open bar typically costs $35-$75 per person, while a plated dinner ranges from $60-$150+. Buffets can save 10-20% over plated service.</p>
    </article>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>

  <script>
    const fmt = (n: number) => '$' + Math.round(n).toLocaleString();

    function calcWG() {
      const invited = parseInt((document.getElementById('wg-invited') as HTMLInputElement).value) || 0;
      const rsvpRate = (parseFloat((document.getElementById('wg-rsvp') as HTMLInputElement).value) || 0) / 100;
      const mealCost = parseFloat((document.getElementById('wg-meal') as HTMLInputElement).value) || 0;
      const barCost = parseFloat((document.getElementById('wg-bar') as HTMLInputElement).value) || 0;
      const perTable = parseInt((document.getElementById('wg-per-table') as HTMLInputElement).value) || 8;

      const expectedAttendance = Math.round(invited * rsvpRate);
      const foodTotal = expectedAttendance * mealCost;
      const barTotal = expectedAttendance * barCost;
      const cateringTotal = foodTotal + barTotal;
      const tables = Math.ceil(expectedAttendance / perTable);
      const costPerGuest = mealCost + barCost;

      document.getElementById('wg-attendance')!.textContent = expectedAttendance.toString();
      document.getElementById('wg-food-total')!.textContent = fmt(foodTotal);
      document.getElementById('wg-bar-total')!.textContent = fmt(barTotal);
      document.getElementById('wg-tables')!.textContent = tables.toString();
      document.getElementById('wg-per-guest')!.textContent = fmt(costPerGuest);
      document.getElementById('wg-catering-total')!.textContent = fmt(cateringTotal);

      document.dispatchEvent(new CustomEvent('calc-update'));
    }

    setTimeout(() => {
      ['wg-invited', 'wg-rsvp', 'wg-meal', 'wg-bar', 'wg-per-table'].forEach(id => {
        const el = document.getElementById(id);
        if (el) { el.addEventListener('input', calcWG); el.addEventListener('change', calcWG); }
      });
      calcWG();
    }, 50);
  </script>
</CalculatorLayout>
