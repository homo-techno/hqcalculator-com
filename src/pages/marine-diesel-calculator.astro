---
import CalculatorLayout from '../layouts/CalculatorLayout.astro';
import ShareButton from '../components/ShareButton.astro';
import FeedbackWidget from '../components/FeedbackWidget.astro';
import RelatedCalculators from '../components/RelatedCalculators.astro';
const title = "Marine Diesel Calculator - Fuel Burn Rate & Range";
const description = "Calculate marine diesel fuel burn rate, range at cruise and economy speeds, tank duration, and fuel cost comparison for diesel-powered boats.";
const relatedCalcs = [
  { name: "Fuel Efficiency", url: "/fuel-efficiency-converter", description: "Fuel efficiency units." },
  { name: "Fuel Surcharge", url: "/fuel-surcharge-calculator", description: "Fuel surcharge rates." },
  { name: "Boat Loan", url: "/boat-loan-calculator", description: "Marine financing costs." },
  { name: "Nautical Mile", url: "/nautical-mile-calculator", description: "Nautical distance conversion." },
  { name: "Speed Calculator", url: "/speed-calculator", description: "Speed and distance." },
  { name: "Buoyancy", url: "/buoyancy-calculator", description: "Buoyancy force calculations." },
];
---
<CalculatorLayout title={title} description={description} calculatorName="Marine Diesel Calculator" keywords="marine diesel calculator, diesel fuel burn, boat range, diesel consumption, cruise speed range, economy speed, marine fuel cost" breadcrumbs={[{ name: "Marine Diesel", url: "/marine-diesel-calculator" }]}>
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
    <h1 class="text-3xl sm:text-4xl font-extrabold text-text mb-2">Marine Diesel Calculator</h1>
    <p class="text-text-secondary mb-8 max-w-2xl">Estimate diesel fuel burn rate, range at different speeds, tank duration, and trip fuel costs for marine engines.</p>
    <div class="bg-white border border-border rounded-2xl shadow-sm p-6 sm:p-8 max-w-2xl mx-auto">
      <div class="space-y-4">
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Engine HP (each)</label><input type="number" id="md3-hp" class="md3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="10"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Number of Engines</label><input type="number" id="md3-eng" class="md3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" max="4" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Cruise Speed (knots)</label><input type="number" id="md3-cruise" class="md3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="1"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Economy Speed (knots)</label><input type="number" id="md3-econ" class="md3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="1"></div>
        </div>
        <div class="grid grid-cols-2 gap-3">
          <div><label class="block text-xs font-medium text-text mb-1">Fuel Tank (gallons)</label><input type="number" id="md3-tank" class="md3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="1" step="50"></div>
          <div><label class="block text-xs font-medium text-text mb-1">Diesel Price ($/gal)</label><input type="number" id="md3-price" class="md3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="0.01" step="0.10"></div>
        </div>
        <div><label class="block text-xs font-medium text-text mb-1">Cruise Throttle (%)</label><input type="number" id="md3-throttle" class="md3-in w-full px-4 py-3 border border-border rounded-xl text-lg font-bold" min="10" max="100" step="5"></div>
        <div class="p-6 bg-primary rounded-2xl text-white text-center">
          <div class="text-sm text-blue-200 uppercase tracking-wide mb-1">Cruise Burn Rate</div>
          <div class="text-5xl font-extrabold font-mono" id="md3-gph">--</div>
          <div class="text-sm text-blue-200 mt-1">gallons/hour</div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cruise Range</div><div class="text-xl font-bold" id="md3-crange">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Economy Range</div><div class="text-xl font-bold" id="md3-erange">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Tank Duration</div><div class="text-xl font-bold" id="md3-dur">--</div></div>
        </div>
        <div class="grid grid-cols-3 gap-3">
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Econ GPH</div><div class="text-xl font-bold" id="md3-egph">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost/hr (Cruise)</div><div class="text-xl font-bold" id="md3-cphr">--</div></div>
          <div class="p-4 bg-surface-alt rounded-xl text-center"><div class="text-xs text-text-muted uppercase">Cost/nm (Cruise)</div><div class="text-xl font-bold" id="md3-cpnm">--</div></div>
        </div>
      </div>
      <ShareButton calculatorId="marine-diesel" />
      <FeedbackWidget />
    </div>
    <RelatedCalculators calculators={relatedCalcs} />
  </div>
  <script>
    function calcMD3() {
      const hp = parseFloat((document.getElementById('md3-hp') as HTMLInputElement).value) || 0;
      const engines = parseInt((document.getElementById('md3-eng') as HTMLInputElement).value) || 1;
      const cruiseSpeed = parseFloat((document.getElementById('md3-cruise') as HTMLInputElement).value) || 0;
      const econSpeed = parseFloat((document.getElementById('md3-econ') as HTMLInputElement).value) || 0;
      const tank = parseFloat((document.getElementById('md3-tank') as HTMLInputElement).value) || 0;
      const price = parseFloat((document.getElementById('md3-price') as HTMLInputElement).value) || 0;
      const throttle = (parseFloat((document.getElementById('md3-throttle') as HTMLInputElement).value) || 75) / 100;

      // Diesel: ~0.055 gal/hp/hr at full load (SFOC ~0.38 lb/hp/hr, diesel 7.1 lb/gal)
      const sfoc = 0.055; // gal per HP per hour
      const cruiseGPH = hp * engines * sfoc * Math.pow(throttle, 2.5); // cube law approximation
      // Economy speed: assume 50% throttle
      const econThrottle = econSpeed > 0 && cruiseSpeed > 0 ? (econSpeed / cruiseSpeed) * throttle : throttle * 0.5;
      const econGPH = hp * engines * sfoc * Math.pow(econThrottle, 2.5);

      const usableFuel = tank * 0.9; // 10% reserve
      const cruiseRange = cruiseGPH > 0 ? (usableFuel / cruiseGPH) * cruiseSpeed : 0;
      const econRange = econGPH > 0 ? (usableFuel / econGPH) * econSpeed : 0;
      const tankDur = cruiseGPH > 0 ? usableFuel / cruiseGPH : 0;
      const costPerHr = cruiseGPH * price;
      const costPerNM = cruiseSpeed > 0 ? costPerHr / cruiseSpeed : 0;

      document.getElementById('md3-gph')!.textContent = cruiseGPH > 0 ? cruiseGPH.toFixed(1) : '--';
      document.getElementById('md3-crange')!.textContent = cruiseRange > 0 ? Math.round(cruiseRange) + ' nm' : '--';
      document.getElementById('md3-erange')!.textContent = econRange > 0 ? Math.round(econRange) + ' nm' : '--';
      document.getElementById('md3-dur')!.textContent = tankDur > 0 ? tankDur.toFixed(1) + ' hrs' : '--';
      document.getElementById('md3-egph')!.textContent = econGPH > 0 ? econGPH.toFixed(1) : '--';
      document.getElementById('md3-cphr')!.textContent = costPerHr > 0 ? '$' + costPerHr.toFixed(2) : '--';
      document.getElementById('md3-cpnm')!.textContent = costPerNM > 0 ? '$' + costPerNM.toFixed(2) : '--';
      document.dispatchEvent(new CustomEvent('calc-update'));
    }
    setTimeout(() => {
      (document.getElementById('md3-hp') as HTMLInputElement).value = '300';
      (document.getElementById('md3-eng') as HTMLInputElement).value = '2';
      (document.getElementById('md3-cruise') as HTMLInputElement).value = '22';
      (document.getElementById('md3-econ') as HTMLInputElement).value = '12';
      (document.getElementById('md3-tank') as HTMLInputElement).value = '500';
      (document.getElementById('md3-price') as HTMLInputElement).value = '6.00';
      (document.getElementById('md3-throttle') as HTMLInputElement).value = '75';
      document.querySelectorAll('.md3-in').forEach(el => { el.addEventListener('input', calcMD3); el.addEventListener('change', calcMD3); });
      calcMD3();
    }, 50);
  </script>
</CalculatorLayout>
